#set($curr_url = $!{context_path} + "/cbe/excep/excepAction/excepActionList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/cbe/excep/excepAction/excepActionList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가차수 코드', '평가조직ID', 'EVAL_METHOD_ID', '평가자', '평가대상조직', '평가자 사번', '평가상태', '평가상태'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:150   ,align:'center' }, 
                            {name:'SC_DEPT_ID'           ,index:'SC_DEPT_ID'           ,width:150   ,align:'center' }, 
							{name:'EVAL_METHOD_ID'       ,index:'EVAL_METHOD_ID'       ,width:150   ,align:'center' }, 
                            {name:'EVAL_USER_NM'         ,index:'EVAL_USER_NM'         ,width:100   ,align:'center' }, 
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:150   ,align:'left'   ,formatter:linkUpdate}, 
                            {name:'EVAL_USER_ID'         ,index:'EVAL_USER_ID'         ,width:150   ,align:'center' }, 
                            {name:'EVAL_SUBMIT_YN'       ,index:'EVAL_SUBMIT_YN'       ,width:150   ,align:'center' },
							{name:'EVAL_SUBMIT_NM'       ,index:'EVAL_SUBMIT_NM'       ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"평가실시"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_METHOD_ID").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"SC_DEPT_ID").jqGrid('hideCol',"EVAL_USER_ID").jqGrid('hideCol',"EVAL_SUBMIT_YN").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/cbe/excep/excepAction/excepActionModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
		});
	});
	
	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		
		J.ajax({
        	url      : "$!{context_path}/cbe/excep/excepDept/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
		chgEvalUser();
	}
	
	/******************************************
	 * 년도별 평가근거담당자
	 ******************************************/
	function chgEvalUser(){
		setTimeout(function(){
    		J.ajax({
            	url      : "$!{context_path}/cbe/excep/excepAction/getUserList_ajax.vw",﻿
            	cache    : false,
            	type     : "POST",
    			data     : J("#formFind").serialize(),
            	dataType : "html",
            	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            	success  : function (data) {
    				var xmlDoc = J.parseXML(data);
            		J("#findEvalUserId").empty();
    				J('<option/>').attr('value','').text("전체").appendTo('#findEvalUserId');
    				J(xmlDoc).find("data").each(function() {
    					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserId');
    				})
    			}
        	});
		},500);	
	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#evalMethodId").val(ret.EVAL_METHOD_ID);
		J("#scDeptId").val(ret.SC_DEPT_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepAction/excepActionModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var scDeptIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';scDeptIds += rowdata.SC_DEPT_ID + '|';
				}
			});
		}
        
		J("#evalDegreeIds").val(evalDegreeIds);J("#scDeptIds").val(scDeptIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepAction/excepActionProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepAction/excepActionListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

