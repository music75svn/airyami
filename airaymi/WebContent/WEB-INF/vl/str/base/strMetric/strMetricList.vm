							})
					   }
		});
	
	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#csfId").val(ret.CSF_ID);
		J("#subjectMetricId").val(ret.SUBJECT_METRIC_ID);
		J("#managementId").val(ret.MANAGEMENT_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/str/base/strMetric/strMetricModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
	
		if(J("#findUseYn").val() == 'N'){
			J.showMsgBox("이미 삭제된  이행성과지표 입니다.", null, null);
			return;
		}
	
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var subjectMetricIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					subjectMetricIds += rowdata.SUBJECT_METRIC_ID + '|';
				}
			});
		}
        
		J("#subjectMetricIds").val(subjectMetricIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/str/base/strMetric/strMetricProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#findStratSubjectNm").val(J("#findStratSubjectId :selected").text());
		J("#findSubjectNm").val(J("#findSubjectId :selected").text());
		J("#findUseYnNm").val(J("#findUseYn :selected").text());
		J("#formFind").attr("action", "$!{context_path}/str/base/strMetric/strMetricListExcel.vw?type=excel").submit();
		J("#formFind").attr("action", "$!{context_path}/str/base/strMetric/strMetricList.vw?type=template");
		return false;
	}

