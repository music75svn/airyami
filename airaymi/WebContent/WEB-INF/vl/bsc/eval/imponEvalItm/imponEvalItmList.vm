    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '기준월', '지표그룹ID', '항목코드', '평가항목'
								#foreach($list in $itmList)
									, '$!{CS_HTML.txt2html($list.CODE_ID)}'
								#end
