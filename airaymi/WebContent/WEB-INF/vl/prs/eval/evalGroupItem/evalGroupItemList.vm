#set($curr_url = $!{context_path} + "/prs/eval/evalGroupItem/evalGroupItemList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/eval/evalGroupItem/evalGroupItemList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['연도', '평가항목코드', '평가항목', '배점', '설명'],
			colModel     :[
							{name:'YEAR'			,index:'YEAR'			,width:100   ,align:'center' },
							{name:'EVAL_ITEM_ID'	,index:'EVAL_ITEM_ID'	,width:100   ,align:'center' },
							{name:'EVAL_ITEM_NM'	,index:'EVAL_ITEM_NM'	,width:250   ,align:'left'    , formatter:linkUpdate},
							{name:'SCORE'			,index:'SCORE'			,width:80    ,align:'center' },
							{name:'CONTENT'			,index:'CONTENT'		,width:300   ,align:'left'   }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			loadComplete : function() {
								var ids = J("#list").jqGrid('getDataIDs');
	    							J("#list input:checkbox").each(function(index) {
	    								var rowdata = J("#list").getRowData(ids[index]);
										
									});
    							
                           },
			caption:"평가군_형가항목"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_ITEM_ID").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {	
			J("#findEvalItem").val("");
			J("#formFind").attr("action", "$!{context_path}/prs/eval/evalGroup/evalGroupList.vw?type=template").submit();
		});
        
		/******************************************
		 * 입력 버튼 클릭 이벤트
		 ******************************************/
		J("#btnInsert").click(function() {
			insertDo();
			return false;
		});
		
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
	});
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalItemId").val(ret.EVAL_ITEM_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalGroupItem/evalGroupItemModify.vw?type=template").submit();
	}
    
    /******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalItemIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalItemIds += rowdata.EVAL_ITEM_ID + '|';
				}
			});
		}
        
		J("#evalItemIds").val(evalItemIds);
		J("#mode").val("DEL");
		J("#year").val($!{searchMap.txt2html("findYear")});
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalGroupItem/evalGroupItemProcess.vw?type=template").submit();
		return false;
	}
    
	/******************************************
	 * 입력처리
	 ******************************************/
	function insertDo() {
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalGroupItem/evalGroupItemModify.vw?type=template").submit();
	}
	
//]]>
</script>

