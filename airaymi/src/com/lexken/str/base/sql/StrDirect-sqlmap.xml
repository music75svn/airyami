<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="str.base.strDirect">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: STR_STRAT_DIRECT
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 전략방향 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: STR_STRAT_DIRECT
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR,
               A.STRAT_DIRECT_ID,
               A.STRAT_DIRECT_NM,
               A.CONTENT,
               A.SORT_ORDER,
              (SELECT COUNT(1)
                 FROM  STR_SUBJECT B
                WHERE A.YEAR=B.YEAR
                  AND A.STRAT_DIRECT_ID=B.STRAT_DIRECT_ID) DIRECT_CNT
         FROM STR_STRAT_DIRECT A
        WHERE A.YEAR=#findYear#
        ORDER BY A.SORT_ORDER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 전략방향 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: STR_STRAT_DIRECT
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , STRAT_DIRECT_ID       
			 , STRAT_DIRECT_NM       
			 , CONTENT               
			 , SORT_ORDER            
		  FROM STR_STRAT_DIRECT 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND STRAT_DIRECT_ID = #stratDirectId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 전략방향 등록
	  #	기능	: INSERT
	  #	TABLE	: STR_STRAT_DIRECT
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			<!-- SELECT F_PGM_SERI('STR_STRAT_DIRECT','','','','','') SEQ FROM DUAL -->
			SELECT 'SSD'||LPAD(NVL(MAX(SUBSTR(STRAT_DIRECT_ID,4,6)),0)+1,4,'0') SEQ FROM STR_STRAT_DIRECT
		</selectKey>
		INSERT INTO STR_STRAT_DIRECT ( 
			   YEAR
			 , STRAT_DIRECT_ID
			 , STRAT_DIRECT_NM
			 , CONTENT
			 , SORT_ORDER
			 , CREATE_DT
			 ) VALUES ( 
			   #year#
			 , #SEQ#
			 , #stratDirectNm#
			 , #content#
			 , #sortOrder#
			 , SYSDATE
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 전략방향 수정
	  #	기능	: UPDATE
	  #	TABLE	: STR_STRAT_DIRECT
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE STR_STRAT_DIRECT 
		   SET STRAT_DIRECT_NM        = #stratDirectNm# 
			 , CONTENT                = #content# 
			 , SORT_ORDER             = #sortOrder# 
			 , MODIFY_DT              = SYSDATE 
		 WHERE YEAR = #year#
		   AND STRAT_DIRECT_ID = #stratDirectId#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 전략방향 삭제
	  #	기능	: UPDATE
	  #	TABLE	: STR_STRAT_DIRECT
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM STR_STRAT_DIRECT 
		 WHERE YEAR = #year#
		   AND STRAT_DIRECT_ID = #stratDirectId#
	</update>
	
	
</sqlMap>


