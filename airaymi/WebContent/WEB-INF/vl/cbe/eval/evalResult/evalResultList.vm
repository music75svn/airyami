	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		
		J.ajax({
        	url      : "$!{context_path}/cbe/eval/evalExceDept/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}
	
	function nullName(cellvalue, options, rowObject) { 
		var retVal = cellvalue;
		var evalMethodGbn = rowObject.EVAL_METHOD_GBN;
		if( evalMethodGbn != '10' ){
			retVal = rowObject.EVAL_METHOD_GBN_NM;
		}
		return retVal;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goResult(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 상세  팝업
	 ******************************************/
	function goResult(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear 			= J("#findYear").val();
		var findEvalDegreeId 	= ret.EVAL_DEGREE_ID;
		var findEvalMembUserId 	= ret.EVAL_MEMB_USER_ID;
		
		var param = "&amp;year=" + findYear + "&amp;evalDegreeId=" + findEvalDegreeId  + "&amp;evalMembUserId=" + findEvalMembUserId;
		
		var url = "$!{context_path}/cbe/eval/evalResult/popResultDetail.vw?type=popup" + param;
		openWinByName(url,'popFeedDefine','860','400','yes');
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#evalMembUserId").val(ret.EVAL_MEMB_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalResult/evalResultModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var evalMembUserIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';evalMembUserIds += rowdata.EVAL_MEMB_USER_ID + '|';
				}
			});
		}
        
		J("#evalDegreeIds").val(evalDegreeIds);J("#evalMembUserIds").val(evalMembUserIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalResult/evalResultProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#evalDegreeNm").val(J("#findEvalDegreeId > option:selected").text());
		J("#evalDegreeId").val(J("#findEvalDegreeId > option:selected").val());
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalResult/evalResultListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

