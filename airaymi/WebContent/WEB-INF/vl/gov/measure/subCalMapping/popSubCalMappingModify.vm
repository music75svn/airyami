<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    	
		/******************************************
		 * 입력완료 버튼 이벤트
		 ******************************************/
		J("#btnCalInsert").click(function(e) {
			setCalInfo();
		});
		
		try {
			$("input", ".blockButton" ).button(); //버튼 ui 적용
		} catch(err) { }
	});
	
	/******************************************
	 * 연계지표매핑
	 ******************************************/
	function setCalInfo() {
		var subCalIds = "";
		var govMetricId = "";
		var actCalTypeColId = "";
		
		govMetricId = "$!{searchMap.txt2html("govMetricId")}";
		actCalTypeColId = "$!{searchMap.txt2html("actCalTypeColId")}";
		
		J("input:checked").each(function() {  
                	
			subCalIds += J(this).val() + '|'; 
                	
        });
		
		setCalMapping(govMetricId,actCalTypeColId,subCalIds);
		
		J.fancybox.close();
	}
	
//]]>
</script>
 
