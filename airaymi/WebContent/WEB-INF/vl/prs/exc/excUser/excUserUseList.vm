#set($curr_url = $!{context_path} + "/prs/exc/excUser/excUserUseList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/exc/excUser/excUserUseList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '별도평가군 코드', '대상자 코드', '사번', '이름', '직급', '직위', '부서', '현부서', '근무기간'],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'               ,width:150   ,align:'center' }, 
                            {name:'EXC_GRP_ID'          ,index:'EXC_GRP_ID'         ,width:150   ,align:'center' }, 
                            {name:'POS_TC'        		,index:'POS_TC'        		,width:200   ,align:'center' },
                            {name:'EMPN'          		,index:'EMPN'          		,width:100   ,align:'center' }, 
							{name:'KOR_NM'           	,index:'KOR_NM'          	,width:100   ,align:'center' },
							{name:'CAST_TC_NM'          ,index:'CAST_TC_NM'         ,width:100   ,align:'center' }, 
							{name:'POS_TC_NM'          	,index:'POS_TC_NM'          ,width:120   ,align:'center' }, 
                            {name:'DEPT_KOR_NM'         ,index:'DEPT_KOR_NM'        ,width:120   ,align:'center' }, 
                            {name:'REAR_DEPT_KOR_NM'    ,index:'REAR_DEPT_KOR_NM'   ,width:120   ,align:'center' },							
                            {name:'MON'           		,index:'MON'           		,width:120   ,align:'center' }							
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가군"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EXC_GRP_ID").jqGrid('hideCol',"POS_TC").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});
        
		
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#formList").attr("action", "$!{context_path}/prs/exc/excUser/excUserList.vw?type=template").submit();
		});
		
	});
	
	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(){
	
		J("#year").val(J("#findYear").val());
		J("#excGrpId").val(J("#excGrpId").val());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/prs/exc/excUser/excUserUseModify.vw?type=template").submit();	
	}
    	

//]]>
</script>

