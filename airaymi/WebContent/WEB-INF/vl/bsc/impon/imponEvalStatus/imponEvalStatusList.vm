	function linkUpdate(cellvalue, options, rowObject) {
        return '<input type="checkbox" name="checkMail" value="'+ rowObject.USER_NM +'|'+rowObject.EMAIL +'"/>'
	}

	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attrEUGSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.UG_ROW_IDX;
		var rowSpan = rowObject.UG_ROW_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		return result;
	}


	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attrEUSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.EU_ROW_IDX;
		var rowSpan = rowObject.EU_ROW_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		return result;
	}


