<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/gov/bos/bosActionPlan/bosActionPlanList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});
		
		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 기관장평가지표 change 이벤트
		 ******************************************/
		$('#bossMetricId').change(function(){
			chgMet();
		});
		
		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");
		
		/******************************************
		 * 실행계획 byte 체크
		 ******************************************/
		J("#planNm").checkbyte({
			indicator:J("#planNmIndicator"),
			limit:2000
		});
		J("#planNm").trigger("keyup");		
		
		/******************************************
		 * 화면 초기셋팅
		 ******************************************/
		init();
	});
	
	/*****************************************************
	 * 화면초기셋팅
	 *****************************************************/ 
	function init() {
		chgMet(); 		//기관장평가지표
		chgDetail(); 	//세부항목
		
		if("MOD" == J("#mode").val()) {
    		//J("#form1 input").attr("disabled",false);
    		//J("#form1 textarea").attr("disabled",true);
    		J("#form1 select").attr("disabled",true);
			
    		//select box
    		J("select", "#form1").each(function(index, item) {
    			J(this).after(J("> option:selected", this).text());
    			J(this).remove();
    		});
		}		
		
	}

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		
		if(J("#bossMetricId").val() == "") {
			J.showMsgBox("기관장평가지표를 선택해 주십시요", null, "bossMetricId");
			return;
		}
		
		if(J("#detailEvalId").val() == "") {
			J.showMsgBox("세부항목을 선택해 주십시요", null, "detailEvalId");
			return;
		}
		
		if(J("#conceptId").val() == "") {
			J.showMsgBox("착안사항을 선택해 주십시요", null, "conceptId");
			return;
		}
		
		if(J("planNm").val() == "") {
			J.showMsgBox("실행계획을 입력해 주십시요", null, "planNm");
			return;
		}
		if(!J.checkLength("planNm", "실행계획", 1, 2000)) {
			return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1 input").attr("disabled",false);
		J("#form1 select").attr("disabled",false);
		J("#form1 textarea").attr("disabled",false);
		J("#form1").attr("action", "$!{context_path}/gov/bos/bosActionPlan/bosActionPlanProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 기관장평가지표 선택시 세부항목 조회
	 ******************************************/
	function chgMet(){
		
		J.ajax({
        	url      : "$!{context_path}/gov/bos/bosActionPlan/getDetailList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#form1").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#detailEvalId").empty();
				J('<option/>').attr('value', '').text('==선택==').appendTo('#detailEvalId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#detailEvalId');
				})
				
				J("#detailEvalId").val('$!{CS_HTML.txt2html($detail.DETAIL_EVAL_ID)}');
        	}
    	});
	}
	
	/******************************************
	 * 세부항목 선택시 착안사항 조회
	 ******************************************/
	function chgDetail(){
		
		J.ajax({
        	url      : "$!{context_path}/gov/bos/bosActionPlan/getConceptList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#form1").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#conceptId").empty();
				J('<option/>').attr('value', '').text('==선택==').appendTo('#conceptId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#conceptId');
				})
				
				J("#conceptId").val('$!{CS_HTML.txt2html($detail.CONCEPT_ID)}');
        	}
    	});
	}	
	
	
//]]>
</script>    
 
