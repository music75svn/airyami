		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponEvalStatus/imponEvalStatusListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 평가년도 변경 시 평가구분, 평가단 변경 (AJAX)
	 ******************************************/
	function chgEvalYear(){

		// 평가구분
		J.ajax({
        	url      : "$!{context_path}/bsc/impon/evalUserGrpMappingEvalItem/evalDegreeList_ajax.vw",
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
				J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
        	}
    	});

		//평가단
		J.ajax({
        	url      : "$!{context_path}/bsc/impon/evalUserGrpMappingEvalItem/evalUserGrpList_ajax.vw",
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
				J("#findEvalUserGrpId").empty();

				J('<option/>').attr('value', "").text("전체").appendTo('#findEvalUserGrpId');

				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserGrpId');
				})
        	}
    	});
	}


	function sendMail(){
		var mailTarget = "";
		var idx = 0;
		var cnt = 0;
		var toMail = "";
		var toName = "";
		var toNameList = "";

		J("input[name='checkMail']:checked").each(function(index, value){
			var result = J(this).val().split("|");

			if(result[1].indexOf("@")!=-1){
    			toMail += result[1] + "|";

    			toName += result[0] + "|";
    			toNameList += result[0] + "<" + result[1] + ">;";
    			idx++;
			}else{
				toMail += result[1] + "$!{EMAIL}|";

    			toName += result[0] + "|";
    			toNameList += result[0] + "<" + result[1] + '$!{EMAIL}' + ">;";
    			idx++;
			}
		});

		if( 0 < idx ){
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
		}else {
			J.showMsgBox("메일발송 할 평가자를 선택하여 주십시오.", null, null);
			return;
		}
	}

	function goEvalClose(){
		J("#mode").val("EVALCLOSE");
		J("#year").val( J("#findYear :selected").val() );
		J("#evalDegreeId").val( J("#findEvalDegreeId :selected").val() );
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponEvalStatus/imponEvalStatusProcess.vw?type=template").submit();
	}

	function goEvalCancel(){
		J("#mode").val("EVALCANCEL");
		J("#year").val( J("#findYear :selected").val() );
		J("#evalDegreeId").val( J("#findEvalDegreeId :selected").val() );
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponEvalStatus/imponEvalStatusProcess.vw?type=template").submit();
	}

