#set($curr_url = $!{context_path} + "/mem/eval/memMeet/memMeetList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/eval/memMeet/memMeetSearchList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '사원번호', '이름', '이름', '부서명', '직급', '직위', '지표확인상태', '면담요청수/면담총수', '1차평가자명'],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'                  ,width:0     ,align:'center' },
                            {name:'EMP_NO'              ,index:'EMP_NO'                ,width:150   ,align:'center' },
                            {name:'EMP_NM'              ,index:'EMP_NM'                ,width:150   ,align:'center' ,formatter:linkUpdate},
                            {name:'EMP_NM_TMP'          ,index:'EMP_NM_TMP'            ,width:0     ,align:'center' },
                            {name:'DEPT_NM'             ,index:'DEPT_NM'               ,width:150   ,align:'left' },
                            {name:'CAST_NM'             ,index:'CAST_NM'               ,width:150   ,align:'center' },
                            {name:'POS_NM'              ,index:'POS_NM'                ,width:150   ,align:'center' },
                            {name:'METRIC_STATUS_NM'    ,index:'METRIC_STATUS_NM'      ,width:150   ,align:'center' },
                            {name:'MEET_COUNT'    		,index:'MEET_COUNT'            ,width:150   ,align:'center' },
                            {name:'EVAL_1_EMP_NM'       ,index:'EVAL_1_EMP_NM'         ,width:0     ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
					J("select[name=findCastTc] option:eq(1)").remove();
					J("select[name=findPosTc] option:eq(1)").remove();
				  },
			caption:"중간면담"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EMP_NM_TMP").jqGrid('hideCol',"EVAL_1_EMP_NM").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
    	/******************************************
    	 * 부서선택 팝업호출
    	 ******************************************/
    	J("#icSearch").fancybox();
    	
		/******************************************
         * 평가대상자관리 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            ExcelDownload();
            return false;
        });
	});

	/******************************************
     * 평가대상자관리 엑셀다운로드
     ******************************************/
    function ExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#castTcNm").val(J("#findCastTc > option:selected").text());
        J("#posTcNm").val(J("#findPosTc > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetExcel.vw?type=excel").submit();
        return false;
    }

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#empNo").val(ret.EMP_NO);
		J("#seq").val(ret.SEQ);
		J("#empNm").val(ret.EMP_NM_TMP);
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetDetailList.vw?type=template").submit();
	}
	
	/******************************************
	 * 부서검색
	 ******************************************/
	function setDeptInfoPop(deptId, deptNm) {
		J("#findDeptCd").val(deptId);
		J("#findDeptNm").val(deptNm);
		J.fancybox.close();
	}

//]]>
</script>

