	/*****************************************
	 * 전략과제 Rowspan 설정
	 ******************************************/
	function attrSettingStrategy(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.STRAT_SUBJECT_INDEX;
		var rowSpan = rowObject.STRAT_SUBJECT_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		return result;     
	}
	
