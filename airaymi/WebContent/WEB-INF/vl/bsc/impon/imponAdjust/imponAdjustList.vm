	/******************************************
	 * jqGrid 가감점
	 ******************************************/
	function linkScore(cellvalue, options, rowObject) {
		if(options.rowId==""){
			return cellvalue;
		}else{
			var str = '';
			str += '<input type="hidden" name="evalMetricScores" value="' + rowObject.EVAL_METRIC_SCORE + '" class="inputbox wp70"/>';
			str += '<input type="text" id="scores" name="scores" value="' + cellvalue + '" class="inputbox wp70" maxlength="5"  onBlur="checkScore('+options.rowId+');"/>';

			return str;
		}
	}


	/******************************************
	 * 계산실행
	 ******************************************/
	function checkScore(rowID) {
		var evalMetricScore = J("#formList input[name=evalMetricScores]").eq(rowID-1).val();
		var score 			= J("#formList input[name=scores]").eq(rowID-1).val()==""?0:J("#formList input[name=scores]").eq(rowID-1).val();
		var totalScore      = parseFloat(evalMetricScore)+parseFloat(score);
		var rowdata         = "";

		if(evalMetricScore==""){
			J.showMsgBox("평가지표점수가 없습니다. <br>가감점을 등록할 수 없습니다.", null, null);
			J("#formList input[name=scores]").eq(rowID-1).val("");
			return false;
		}else if(totalScore>100 || totalScore<0){
			J.showMsgBox("가감점을 다시등록해 주세요.", null, null);
			J("#formList input[name=scores]").eq(rowID-1).val("");
			return false;
		}else{
			rowdata = J("#list").getRowData(rowID);
			J("#list").setCell(rowID, 'FINAL_METRIC_SCORE', totalScore, '')
		}
	}

	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponItem/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}

	/******************************************
	 * 년도별 비계량지표 조회
	 ******************************************/
	function chgEvalPool(){

		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponItem/getPoolList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findMetricGrpId").empty();
				J('<option/>').attr('value','').text("전체").appendTo('#findMetricGrpId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findMetricGrpId');
				})
			}
    	});

	}

	/******************************************
	 * 가감점 저장
	 ******************************************/
	function goInsert() {
		var ids = J("#list").jqGrid('getDataIDs');
		if(ids.length > 0){
			J.showConfirmBox("가감점을 저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 가감점 저장처리
	 ******************************************/
	function saveDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds 	= "";
		var metricGrpIds 	= "";
		var metricIds 		= "";
		var adjustScores 	= "";

		for (var i = 0; i < ids.length; i++) {
			var tmp = J("#formList input[name=scores]").eq(i).val();
			if( 0 < tmp.length ) {
    			rowdata = J("#list").getRowData(ids[i]);
    			evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';
    			metricGrpIds += rowdata.METRIC_GRP_ID + '|';
    			metricIds += rowdata.METRIC_ID + '|';
    			adjustScores += J("#formList input[name=scores]").eq(i).val() + '|';
			}
		}

		J("#evalDegreeIds").val(evalDegreeIds);
		J("#metricGrpIds").val(metricGrpIds);
		J("#metricIds").val(metricIds);
		J("#adjustScores").val(adjustScores);
		J("#mode").val("ADD");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponAdjust/imponAdjustProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 최종지표점수 반영
	 ******************************************/
	function goEvalResultRefl() {

		//평가지표점수 유무검사
		var ids = J("#list").jqGrid('getDataIDs');

		for (var i = 0; i < ids.length; i++) {
			var rowdata = J("#list").getRowData(ids[i]);
			var evalMetricScore=  rowdata.EVAL_METRIC_SCORE;

			if("" ==evalMetricScore){
				J.showMsgBox("평가지표점수가 없습니다. <br>지표점수적용을 할 수 없습니다.", null, null);
		         return false;
			}//if

	    }//for


		if( "N" == "$!{isEvalCloseYn}"  ){
			J.showMsgBox("최종지표점수를 반영하기 위해서는 평가마감을 하셔야합니다.", null, null);
			return false;
		} else {
			if( "N" == "$!{isEvalConfirmYn}"  ){
				J.showConfirmBox("최종지표점수를 반영 하시겠습니까?", "evalResultReflectDo"); //evalResultReflectDo() 콜백함수 호출
			}else{
				J.showMsgBox("최종지표점수가 반영 완료되었습니다.", null, null);
				return false;
			}
		}
	}

	/******************************************
	 *  최종지표점수 반영
	 ******************************************/
	function evalResultReflectDo() {

		J("#mode").val("EVALREFL");
		J("#year").val( J("#findYear :selected").val() );
		J("#evalDegreeId").val( J("#findEvalDegreeId :selected").val() );
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponAdjust/imponAdjustProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponAdjust/imponAdjustListExcel.vw?type=excel").submit();
		return false;
	}

	function goEvalCancel(){
		J("#mode").val("EVALCANCEL");
		J("#year").val( J("#findYear :selected").val() );
		J("#evalDegreeId").val( J("#findEvalDegreeId :selected").val() );
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponAdjust/imponAdjustProcess.vw?type=template").submit();
	}

//]]>
</script>

