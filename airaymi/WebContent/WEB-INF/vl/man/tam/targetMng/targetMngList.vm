		}else if(targetStatusId=="06"){
			J.showConfirmBox("확인요청하시겠습니까?", "statusDo"); //statusDo() 콜백함수 호출
		}else{
			J.showConfirmBox("확인 및 승인요청하시겠습니까?", "statusDo"); //statusDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 승인 및 반려 상태 저장
