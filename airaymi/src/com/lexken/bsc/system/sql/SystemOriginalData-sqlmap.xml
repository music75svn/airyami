<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.system.systemOriginalData">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: 
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 시스템연계 데이터 조회 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: 
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR
             , A.MON
             , A.ITEM_CD
             , B.ITEM_NM
             , A.DEPT_ID
             , CASE WHEN D.DEPT_NM IS NULL THEN C.DEPT_NM
                    ELSE  TRIM(D.DEPT_NM)|| '>'||TRIM(C.DEPT_NM) 
                    END AS DEPT_NM
             , A.ACTUAL
             , TO_CHAR(A.CREATE_DT,'YYYY.MM.DD HH24:MI:SS') AS CREATE_DT
          FROM BSC_INTERFACE_ORIGINAL_DATA A  
               INNER JOIN BSC_SYSTEM_ITEM B ON A.YEAR = B.YEAR AND A.ITEM_CD = B.ITEM_CD AND B.DELETE_DT IS NULL
               LEFT OUTER JOIN V_DEPTINFO C ON A.DEPT_ID = C.DEPT_ID 
               LEFT OUTER JOIN V_DEPTINFO D ON C.UP_DEPT_ID = D.DEPT_ID
         WHERE A.YEAR = #findYear#   
           AND A.MON = #findMon#
         
         <isNotEmpty prepend="AND" property="findItemNm">
         	UPPER(B.ITEM_CD||B.ITEM_NM) LIKE  '%' || TRIM(UPPER(#findItemNm#)) ||'%'
         </isNotEmpty>
         
         <isNotEmpty prepend="AND" property="findDeptNm">
         	UPPER(C.DEPT_NM) LIKE '%' || TRIM(UPPER(#findDeptNm#)) ||'%'
         </isNotEmpty>
         
         <isNotEmpty prepend="AND" property="findSystemGbn" >
		  	B.SYSTEM_GBN = #findSystemGbn#
		 </isNotEmpty>
			 
       ORDER BY A.YEAR, A.MON, A.CREATE_DT, A.ITEM_CD, B.ITEM_NM, C.OUORDER
	</select>
	
