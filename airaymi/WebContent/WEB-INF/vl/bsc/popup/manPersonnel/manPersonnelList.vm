<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">

#set($main_url = $!{searchMap.txt2html("mainUrl")})
#set($curr_url = $!{context_path} + "/bsc/popup/manPersonnel/manPersonnelList.vw")

<head>
	#parse("/WEB-INF/vl/common/template/head.vm")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
		#if ($!{CS_HTML.txt2html($searchMap.get("findItemCd"))} == "S040D001")
			url          :"$!{context_path}/bsc/popup/manPersonnel/manPersonnelList_xml.vw" + "?" + str,
		#else			
			url          :"$!{context_path}/bsc/popup/manPersonnel/manPersonnelList1_xml.vw" + "?" + str,
		#end			
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			#if ($!{CS_HTML.txt2html($searchMap.get("findItemCd"))} == "S040D001")
			colNames     :['년도', '사번', '성명', '부서명', '분야' ],
			colModel     :[
                            {name:'YEAR' 			,index:'YEAR' 			,width:60   ,align:'center' },
                            {name:'EMPN' 			,index:'EMPN' 			,width:60   ,align:'center' },
                            {name:'USER_NM' 		,index:'USER_NM' 		,width:60   ,align:'center' },
                            {name:'DEPT_NM'       	,index:'DEPT_NM'     	,width:60   ,align:'center' },
							{name:'DIV'		        ,index:'DIV'			,width:80	,align:'center'	}
			#else
			colNames     :['년도', '접수일자', '구분', '가스법 구분', '시설명','공장 주소','부서명' ,'최종승인자사번', '승인자성명','최종승인날자', '인원'],
			colModel     :[
                            {name:'YEAR' 				,index:'YEAR' 				,width:60   ,align:'center' },
                            {name:'RCPT_DATE' 			,index:'RCPT_DATE' 			,width:60   ,align:'center' },
                            {name:'INSP_KIND_TC_NM' 	,index:'INSP_KIND_TC_NM'    ,width:60   ,align:'center' },
                            {name:'LAW_TC_NM'       	,index:'LAW_TC_NM'     		,width:60   ,align:'center' },
                            {name:'EQUI_NM'       		,index:'EQUI_NM'     		,width:80   ,align:'center' },
                            {name:'LOCT_ADDR'       	,index:'LOCT_ADDR'     		,width:100  ,align:'center' },
                            {name:'DEPT_NM'  			,index:'DEPT_NM'  			,width:60   ,align:'center' },
                            {name:'LAST_INSP_EMPN'      ,index:'LAST_INSP_EMPN'     ,width:60   ,align:'center' },
                            {name:'LAST_NM'      		,index:'LAST_NM'     		,width:60   ,align:'center' },
                            {name:'LAST_INSP_DATE'      ,index:'LAST_INSP_DATE'     ,width:60   ,align:'center' },
							{name:'COUNT'		        ,index:'COUNT'				,width:80	,align:'center'	}
			#end							
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate   : {sortable:false},
			caption		 :"공장 등록 심사 노력 실적"
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcel").click(function() {
			J("#yearNm").val(J("#findYear > option:selected").text());
			J("#monNm").val(J("#findMon > option:selected").text());
			J("#deptNm").val(J("#findDeptId > option:selected").text());
			J("#itemNm").val(J("#findItemCd > option:selected").text());
			J("#formList").attr("action", "$!{context_path}/bsc/popup/manPersonnel/excel.vw?type=excel").submit();
			return false;
		});

		/******************************************
		 * 항목명 포커스
		 ******************************************/
		J("#findItemNm").select();

		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});

	});

	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/bsc/popup/manPersonnel/manPersonnelList.vw?type=template").submit();
	}
	
//]]>
</script>
</head>
<body>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">공장 등록 심사 노력 실적</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/popup/manPersonnel/manPersonnelList.vw?type=popup">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				<input type="hidden"    id="findMetricId"	name="findMetricId"		value="$!{searchMap.txt2html("findMetricId")}"/>
				<div class="clear h20"></div>
				<div class="searchBox">
    				<div><div><div>
    				<table summary="공장 등록 심사 노력 실적 검색 조건">
						<caption class="none">공장 등록 심사 노력 실적 검색 조건</caption>
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span><label for="findYear">$!{YEARMON}</label></span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
										<select id="findMon" name="findMon" class="select w80">
            								$!CS_CODE.getCodeOption("024", $!{searchMap.txt2html("findMon")})
            							</select>
            						</span>
            					</td>
            					<td class="searchBox_tit w270">
                					<span><label for="findDeptId">부서</label></span>
									<span class="searchBar">
										<select id="findDeptId" name="findDeptId" class="select w200">
											#foreach($list in $deptInfo)
												<option value="$!{CS_HTML.txt2html($list.DEPT_ID)}" $searchMap.getSelected("findDeptId", "$!{CS_HTML.txt2html($list.DEPT_ID)}")>$!{CS_HTML.txt2html($list.DEPT_NM)}</option>
											#end
            							</select>
									</span>
                                </td>
            					<td class="searchBox_tit w270">
                					<span><label for="findItemCd">항목</label></span>
									<span class="searchBar">
										<select id="findItemCd" name="findItemCd" class="select w200">
											#foreach($item in $itemInfo)
												<option value="$!{CS_HTML.txt2html($item.ITEM_CD)}" $searchMap.getSelected("findItemCd", "$!{CS_HTML.txt2html($item.ITEM_CD)}")>$!{CS_HTML.txt2html($item.CAL_TYPE_COL_NM)}</option>
											#end
            							</select>
									</span>
                                </td>
            				</tr>
        				</tbody>
        				<div class="blockButton " style="position:absolute;right:10px; width:150px;float:right; align:middle;padding: 0 10px 0 0;" >
                    		<input id="btnExcel" type="button" align="middle" value="엑셀다운로드", alt="엑셀다운로드" />
                    	</div>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" alt="검색" style="position:absolute;right:120px;"/>
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>

		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/popup/manPersonnel/manPersonnelProcess.vw?type=template">
			<input type="hidden" id="mode"       name="mode" />
			<input type="hidden" id="yearNm"	name="yearNm" />
			<input type="hidden" id="monNm"		name="monNm" />
			<input type="hidden" id="deptNm"	name="deptNm" />
			<input type="hidden" id="itemNm"	name="itemNm" />
			$!{searchMap.makeHiddenFind()}

			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="공장 등록 심사 노력 실적 조회결과">
							<caption class="none">공장 등록 심사 노력 실적 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all">
						<div class="blockButton " style="float:right; text-align:left; width:500px; padding:5px 0 0 0;">
    						<div class="blockButton">
    							<input id="btnExcel" type="button" align="middle" value="엑셀다운로드", alt="엑셀다운로드" />
    						</div>
    					</div>
					</div>
				</div>
			</div>
		</form>

	</div>
	<a id="anchor"></a>
	<div class="clear"></div>
</div>
</body>
</html>