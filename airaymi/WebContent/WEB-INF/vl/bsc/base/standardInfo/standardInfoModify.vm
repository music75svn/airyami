<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/base/standardInfo/standardInfoList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#commMetricAdjustPer").numeric();
		J("#commMetricAdjustPer").css("ime-mode", "disabled");
		J("#uniqMetricAdjustPer").numeric();
		J("#uniqMetricAdjustPer").css("ime-mode", "disabled");

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("commMetricAdjustPer", "공통지표 조정변별력 적용비율", 1, 5)) {
			return;
		}
		
		if(!isNumber(J("#commMetricAdjustPer").val())){
			J.showMsgBox("공통지표 조정변별력은 숫자만 입력가능합니다", null, "commMetricAdjustPer");
			return;
		}
		
		if(!J.checkLength("uniqMetricAdjustPer", "고유지표 조정변별력 적용비율", 1, 5)) {
			return;
		}
		
		if(!isNumber(J("#uniqMetricAdjustPer").val())){
			J.showMsgBox("고유지표 조정변별력은 숫자만 입력가능합니다", null, "uniqMetricAdjustPer");
			return;
		}
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/base/standardInfo/standardInfoProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
