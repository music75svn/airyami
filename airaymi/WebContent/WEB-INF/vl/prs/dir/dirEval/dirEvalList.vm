	/******************************************
     * 평점
     *****************************************
    function fncScore(cellvalue, options, rowObject) {
    	var reStr = '<input type="hidden" name="empn" value="' + rowObject.EMPN + '" />';
    	reStr += '<input type="hidden" name="leadershipScore" value="' + cellvalue + '" class="wp50" readonly="readonly" />';
    	return reStr;
    }*/
    
    /******************************************
	 * 계산실행
	 ******************************************/
	function scoreAvg(cellvalue, options, rowObject) {
		var avg_score = 0;
		var temp_score = 0;
		var MAX_SCORE = 100;
		var score1st = "";
		var score2nd = "";
		
		var ids = J("#list").jqGrid('getDataIDs');
		
		for (var i = 0; i < ids.length; i++) {
			var cnt = 0;

			if (J("input[name='leadershipScore1st']").eq(i).val() != "") {
				score1st = J("input[name='leadershipScore1st']").eq(i).val();
				cnt++;
			} else {
				score1st = 0;
			}
			
			if (J("input[name='leadershipScore2nd']").eq(i).val() != "") {
				score2nd = J("input[name='leadershipScore2nd']").eq(i).val();
				cnt++;
			} else {
				score2nd = 0;
			}
			
			if (score1st == 0 && score2nd == 0 ) {
				J("#list").jqGrid('setCell', ids[i], "LEADERSHIP_SCORE", null);
			} else if(score1st == "" && score2nd == "") {
				J("#list").jqGrid('setCell', ids[i], "LEADERSHIP_SCORE", null);
			} else {
##				avg_score = Math.round((parseFloat(score1st) + parseFloat(score2nd)) / cnt, 1);
				avg_score = (parseFloat(score1st) + parseFloat(score2nd)) / cnt;
				J("#list").jqGrid('setCell', ids[i], "LEADERSHIP_SCORE", avg_score.toFixed(3));
			}
		}
	}
	
	/******************************************
     * 필수입력 체크
     ******************************************/
    function saveChk() {
		var ids	= J("#list").jqGrid('getDataIDs');
		
		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			var val = rowdata.LEADERSHIP_SCORE;
			var score1 = J("input[name='leadershipScore1st']").eq(i).val();
			var score2 = J("input[name='leadershipScore2nd']").eq(i).val();
			
			/*
			if (val == "") {
				alert("평가점수 확인 하십시요.");
				J("input[name='leadershipScore']").eq(i).focus();
				return false;
			}
			*/
			
			if(isNaN(val) == true) {
				alert("점수확인 하십시요.");
				J("input[name='leadershipScore']").eq(i).focus();
				return false;
			}
			
			if(score1 > 100 || 0 > score1) {
				alert("평가점수(상반기)는 100 초과, 0 미만 점수는 줄 수 없습니다.");
				J("input[name='leadershipScore1st']").eq(i).focus();
				return false;
			}

			if(score2 > 100 || 0 > score2) {
				alert("평가점수(하반기)는 100 초과, 0 미만 점수는 줄 수 없습니다.");
				J("input[name='leadershipScore2nd']").eq(i).focus();
				return false;
			}
			
			if(val > 100 || 0 > val) {
				alert("평가점수는 100 초과, 0 미만 점수는 줄 수 없습니다.");
				J("input[name='leadershipScore']").eq(i).focus();
				return false;
			}
		}
		
		if(J("#mode").val() == "MOD") {
			J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
		}else if( J("#mode").val() == "CON") {
			if( J("#leadershipYn").val() == "Y" ) {
				J.showConfirmBox("저장 및 확정 하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
			}else {
				J.showConfirmBox("확정취소 하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
			}
		}
		
    }

    /******************************************
     * 저장
     ******************************************/
    function saveDo() {
    	var ids	= J("#list").jqGrid('getDataIDs');
    	var leadershipScore = "";
    	
    	for (var i = 0; i < ids.length; i++) {
			J("input[name='leadershipScore1st']").eq(i).attr('disabled', false);
			J("input[name='leadershipScore2nd']").eq(i).attr('disabled', false);
			
			rowdata = J("#list").getRowData(ids[i]);
			leadershipScore += rowdata.LEADERSHIP_SCORE + '|';
		}
		//alert(leadershipScore);
        J("#leadershipScores").val(leadershipScore);
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/dir/dirEval/dirEvalProcess.vw?type=template").submit();

        return false;

    }
