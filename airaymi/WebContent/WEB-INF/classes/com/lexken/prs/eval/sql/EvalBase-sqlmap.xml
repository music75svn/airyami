<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="prs.eval.evalBase">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: PRS_EVAL_BASE
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 평가요소 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: PRS_EVAL_BASE
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR,
               EVAL_DEGREE_ID,
               CONTENT
          FROM PRS_EVAL_BASE
         WHERE YEAR=#findYear#
           AND EVAL_DEGREE_ID=#findEvalDegreeId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가요소 등록
	  #	기능	: INSERT
	  #	TABLE	: PRS_EVAL_BASE
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		INSERT INTO PRS_EVAL_BASE ( 
			   YEAR
			 , EVAL_DEGREE_ID
			 , CONTENT
			 , CREATE_DT
			 ) VALUES ( 
			   #year#
			 , #evalDegreeId#
			 , #content#
			 , SYSDATE
			 )
	</insert>	

	<!--
	==================================================================   
	  # 설명	: 평가요소 삭제
	  #	기능	: UPDATE
	  #	TABLE	: PRS_EVAL_BASE
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM PRS_EVAL_BASE 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND EVAL_DEGREE_ID = #evalDegreeId#
	</update>
	
	<!--
	==================================================================   
	  # 설명	: 목표 첨부파일 등록
	  #	기능	: INSERT
	  #	TABLE	: PRS_EVAL_BASE
	==================================================================
	-->	
	<insert id="insertFileInfo" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT F_PGM_SERI('PRS_EVAL_BASE_ATTACH', #year#, #evalDegreeId#,'','','') SEQ FROM DUAL
		</selectKey> 
		INSERT INTO PRS_EVAL_BASE_ATTACH (
               YEAR
             , EVAL_DEGREE_ID
             , SEQ
             , ATTACH_FILE_NM
             , ATTACH_FILE_FNM
             , ATTACH_FILE_SUFFIX
             , ATTACH_FILE_PATH
             , CREATE_DT
           ) VALUES (
               #year#
             , #evalDegreeId#
             , #SEQ#
             , #attachFileNm#
             , #attachFileFnm#
             , #attachFileSuffix#
             , #attachFilePath#
             , SYSDATE
    	   )       
	</insert>
	
	<!--
	==================================================================   
	  # 설명	: 목표 첨부파일 삭제
	  #	기능	: INSERT
	  #	TABLE	: PRS_EVAL_BASE
	==================================================================
	-->	
	<delete id="deleteFileInfo" parameterClass="hashMap">
		DELETE FROM PRS_EVAL_BASE_ATTACH
		 WHERE YEAR = #year#
		   AND EVAL_DEGREE_ID = #evalDegreeId#
	</delete>
	
	<!--
	==================================================================   
	  # 설명	: 목표 파일 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: PRS_EVAL_BASE
	==================================================================
	-->
	<select id="getFileList" parameterClass="hashMap" resultClass="hashMap">
 		SELECT A.YEAR
	         , A.EVAL_DEGREE_ID
	         , A.SEQ
	         , A.ATTACH_FILE_NM
	         , A.ATTACH_FILE_FNM
	         , A.ATTACH_FILE_SUFFIX
	         , F_ENCRYPT(A.ATTACH_FILE_PATH, #encryptionCode#) ATTACH_FILE_PATH
         FROM PRS_EVAL_BASE_ATTACH A
        WHERE A.YEAR = #findYear#
          AND A.EVAL_DEGREE_ID = #findEvalDegreeId#
  	</select>
  
    <!--
	==================================================================   
	  # 설명	: 목표 파일 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: PRS_EVAL_BASE
	==================================================================
	-->
	<select id="getEvalDegreeNm" parameterClass="hashMap" resultClass="java.lang.String">
 		SELECT EVAL_DEGREE_NM
         FROM BSC_ECM_EVAL_DEGREE
        WHERE YEAR = #findYear#
          AND EVAL_DEGREE_ID = #findEvalDegreeId#
  </select>	
	
</sqlMap>


