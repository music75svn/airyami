		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#bbsSeq").val("");
			J("#formList").attr("action", "$!{context_path}/bsc/board/board/boardModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 부진부서 KPI이동
		 ******************************************/
		J("#btnKpi").click(function() {
			goPopUp();
		});
	});	

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		var str = '<a href=javascript:goView(' + options.rowId + ')>' + cellvalue + '<//a>';


		var is_new = rowObject.IS_NEW;

		if( is_new == 'Y' ){
			str = str + '<img src="$img_path/common/icon/main_ic_new.gif" />';
		}

		var bbs_dept = rowObject.BBS_DEPT;
		if (bbs_dept > 0) {
			str = '<img src="$img_path/list_arrow.gif" />' + str;
			for(var i = 0; i < bbs_dept; i++) {
				str = '&nbsp;&nbsp;&nbsp;' + str;
			}
		}

		return str;
	}

	/******************************************
	 * 상세화면
	 ******************************************/
	function goView(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#bbsSeq").val(ret.BBS_SEQ);
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/board/board/boardView.vw?type=template").submit();
	}

	/*****************************************************
	 * 부진부서코칭 화면이동
	 *****************************************************/ 
    function goPopUp(){		
		
		J("#year").val(J("#findYear").val());
		J("#mon").val(J("#findMon").val());
		J("#scDeptId").val(J("#findBbsId").val());			
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/board/board/stagnationDeptMetricList.vw?type=template").submit();
    }  

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

