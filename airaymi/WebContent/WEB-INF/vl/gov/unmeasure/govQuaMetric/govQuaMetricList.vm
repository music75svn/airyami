<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/unmeasure/govQuaMetric/govQuaMetricList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '지표ID', '지표명', '순번', '구분ID', '구분명칭', '제목', '첨부파일', '첨부파일 저장명', '첨부파일 확장자', '입력자사번', '입력자명','작성일'],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'               	,width:50    ,align:'center' }, 
                            {name:'GOV_METRIC_ID'       ,index:'GOV_METRIC_ID'      	,width:50    ,align:'center' }, 
                            {name:'GOV_METRIC_NM'       ,index:'GOV_METRIC_NM'      	,width:200   ,align:'left' },
                            {name:'SEQ'            		,index:'SEQ'            		,width:50    ,align:'center' },
                            {name:'GBN_ID'            	,index:'GBN_ID'            		,width:50    ,align:'center' },
                            {name:'GBN_NM'            	,index:'GBN_NM'            		,width:100   ,align:'center'   },
                            {name:'QUA_METRIC_NM'       ,index:'QUA_METRIC_NM'      	,width:200   ,align:'left'   , formatter:linkUpdate},
                            {name:'ATTACH_FILE_NM'       ,index:'ATTACH_FILE_NM'       	,width:100   ,align:'center' },
                            {name:'ATTACH_FILE_FNM'      ,index:'ATTACH_FILE_FNM'      	,width:50    ,align:'center' },
                            {name:'ATTACH_FILE_SUFFIX'   ,index:'ATTACH_FILE_SUFFIX'   	,width:50    ,align:'center' },
                            {name:'INSERT_USER_ID'      ,index:'INSERT_USER_ID'     	,width:50    ,align:'center' },
                            {name:'INSERT_USER_NM'      ,index:'INSERT_USER_NM'     	,width:100   ,align:'center' },
                            {name:'CREATE_DT'      		,index:'CREATE_DT'     			,width:100   ,align:'center' }
							],
			rowNum       : 15, 
			autowidth    : false, 
			pager		 : jQuery('#pager'),
			viewrecords  : true,
			loadonce     : true,
			cmTemplate	 : {sortable:true},
			multiselect  : false,
			cellEdit     : true,
			caption:"공지사항관리"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"GOV_METRIC_ID").jqGrid('hideCol',"SEQ").jqGrid('hideCol',"GBN_ID").jqGrid('hideCol',"INSERT_USER_ID").jqGrid('hideCol',"ATTACH_FILE_FNM").jqGrid('hideCol',"ATTACH_FILE_SUFFIX").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#year").val(J("#findYear").val());
			J("#govGubun").val(J("#findGovGubun").val());
			J("#formList").attr("action", "$!{context_path}/gov/unmeasure/govQuaMetric/govQuaMetricModify.vw?type=template").submit();
		});
        
	});


	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')> ' + cellvalue + '<//a>';
	}

	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#mode").val("MOD");
		J("#year").val(ret.YEAR);
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#seq").val(ret.SEQ);
		J("#govGubun").val(J("#findGovGubun").val());
		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/govQuaMetric/govQuaMetricModify.vw?type=template").submit();
	}	
	
	/******************************************
	 * 평가년도 선택시 검색
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/gov/unmeasure/govQuaMetric/govQuaMetricList.vw?type=template").submit();

	}	
	
//]]>
	
</script>

