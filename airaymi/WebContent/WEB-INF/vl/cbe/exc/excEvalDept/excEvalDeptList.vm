<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/cbe/exc/excEvalDept/excEvalDeptList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가차수 코드', '평가조직 코드', '별도평가대상부서', '평가방법', '사업추진담당자ID','사업추진보고서담당자', '제출여부', '사업추진보고서<br>대상여부','개수'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'					,width:150   ,align:'center' }, 
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'		,width:150   ,align:'center' }, 
                            {name:'SC_DEPT_ID'           ,index:'SC_DEPT_ID'			,width:150   ,align:'center' }, 
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'			,width:200   ,align:'left'   ,formatter:linkUpdate}, 
                            {name:'EVAL_METHOD_NM'       ,index:'EVAL_METHOD_NM'		,width:200   ,align:'center' }, 
                            {name:'RPT_EMPN'			 ,index:'RPT_EMPN' 				,width:100   ,align:'center' }, 
                            {name:'RPT_EMPN_NM'			 ,index:'RPT_EMPN_NM' 			,width:100   ,align:'center' }, 
							{name:'EVAL_SUBMIT_YN'       ,index:'EVAL_SUBMIT_YN'		,width:100   ,align:'center' },
							{name:'RPT_YN'       		 ,index:'RPT_YN'				,width:50    ,align:'center' },
							{name:'BASE_CNT'             ,index:'BASE_CNT'				,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.EVAL_SUBMIT_YN == 'Y' ) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"별도평가부서"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"EVAL_METHOD_NM").jqGrid('hideCol',"SC_DEPT_ID").jqGrid('hideCol',"RPT_EMPN").jqGrid('hideCol',"EVAL_SUBMIT_YN").jqGrid('hideCol',"BASE_CNT").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
        /******************************************
		 * 별도평가부서가져오기 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcDetp").click(function() {
			if('$!{CS_HTML.txt2html($confirmYn.DEPT_YN)}' == 'Y'){
		
    			J.showMsgBox("확정되어 별도평가부서를 가져올수 없습니다..", null, null);
    			return;
    		
    		} else {
				getExcDept();
				return false;
			}
		});
		
		/******************************************
		 * 확정버튼 이벤트
		 ******************************************/
		J("#btnConfirm").click(function(e) {
			e.preventDefault();
			getConfirm();
		});
		
		/******************************************
		 * 확정취소버튼 이벤트
		 ******************************************/
		J("#btnCancle").click(function(e) {
			e.preventDefault();
			btnCancle();
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#evalDegreeId").val(J("#findEvalDegreeId").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalDept/excEvalDeptModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
		});
	});
	
	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		
		J.ajax({
        	url      : "$!{context_path}/cbe/exc/excEvalDept/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function getConfirm() {
		
		J.showConfirmBox("확정하시겠습니까?", "Confirm"); //Confirm() 콜백함수 호출
	}
    
	/******************************************
	 * 확정
	 ******************************************/
	function Confirm() {
		
		J("#mode").val("CONF");
		J("#year").val(J("#findYear").val());
		J("#deptYn").val('Y');
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalDept/excEvalDeptProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 확정취소처리
	 ******************************************/
	function btnCancle(){
		
		J.showConfirmBox("확정을 취소 하시겠습니까?", "CancelDo"); //CancelDo() 콜백함수 호출
		
	}
	
	/******************************************
	 * 확정취소처리
	 ******************************************/
	function CancelDo() {
		J("#mode").val("CONF");
		J("#year").val(J("#findYear").val());
		J("#deptYn").val('N');
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalDept/excEvalDeptProcess.vw?type=template").submit();
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		if('$!{CS_HTML.txt2html($closeYn)}' == 'Y'){
		
			J.showMsgBox("평가가 마감되어 수정할수 없습니다.", null, null);
			return;
		
		}
		
		if(ret.EVAL_SUBMIT_YN == 'Y'){
		
			J.showMsgBox(J(ret.SC_DEPT_NM).text()+"부서의 평가가 제출되어 수정할수 없습니다.", null, null);
			return;
		
		}
		
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#scDeptId").val(ret.SC_DEPT_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalDept/excEvalDeptModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
	
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var scDeptIds = "";
		var rptEmpns = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';
					scDeptIds += rowdata.SC_DEPT_ID + '|';
					if("" == rowdata.RPT_EMPN) {
					 	rptEmpns += "null" + '|';
					} else {
						rptEmpns += rowdata.RPT_EMPN + '|';
					}
				}
			});
		}
        
		J("#evalDegreeIds").val(evalDegreeIds);
		J("#scDeptIds").val(scDeptIds);
		J("#rptEmpns").val(rptEmpns);
		
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalDept/excEvalDeptProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 별도평가부서 불러오기
	 ******************************************/
	function getExcDept() {
		J.showConfirmBox("별도평가부서 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "getExcDeptInfo"); //getExcDeptInfo() 콜백함수 호출
	}
	
	function getExcDeptInfo() {
		J("#mode").val("GET");
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalDept/excEvalDeptProcess.vw?type=template").submit();
	}
	
//]]>
</script>

