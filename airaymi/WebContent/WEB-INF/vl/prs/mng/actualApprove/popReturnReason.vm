<script type="text/javascript" language="javascript" >
//<![CDATA[

    var J = jQuery;
    
    J(document).ready(function(){
        #if($!{CS_HTML.txt2html($return.ACT_STATUS_ID)} !='05')
        /******************************************
         * 입력완료 버튼 이벤트
         ******************************************/
        J("#btnCompleate").click(function(e) {
            e.preventDefault();
            J("#returnReason").val(J("#returnCausePop").val());
            J.fancybox.close();
            //J.showConfirmBox("반려 하시겠습니까?", "returnDo"); //deleteDo() 콜백함수 호출
            if(confirm("반려하시겠습니까?")) {
                returnDo();
            }
        });
        
        /******************************************
         * 비고 byte 체크
         ******************************************/
        J("#returnCausePop").checkbyte({
            indicator:J("#returnIndicator"),
            limit:1500
        });
        J("#returnCausePop").trigger("keyup");
    
        try {
            $("input", ".blockButton" ).button(); //버튼 ui 적용
        } catch(err) { }
        
        #else
            J("#returnCausePop").attr("readonly",true);
            J("#btnCompleate").attr("style","display:none;");
        #end
        
    });
    

//]]>
</script>

<form id="formFindPop" name="formFindPop" method="post" action="">
