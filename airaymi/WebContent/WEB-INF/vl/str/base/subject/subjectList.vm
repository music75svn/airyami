#set($curr_url = $!{context_path} + "/str/base/subject/subjectList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/str/base/subject/subjectList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '전략과제', '전략방향', '세부과제 코드', '세부과제', '세부과제 목표', '담당부서', '담당자', '이행성과지표수'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'STRAT_SUBJECT_NM'     ,index:'STRAT_SUBJECT_NM'     ,width:200   ,align:'left'   }, 
                            {name:'STRAT_DIRECT_NM'      ,index:'STRAT_DIRECT_NM'      ,width:100   ,align:'center' }, 
                            {name:'SUBJECT_ID'           ,index:'SUBJECT_ID'           ,width:150   ,align:'center' }, 
                            {name:'SUBJECT_NM'           ,index:'SUBJECT_NM'           ,width:250   ,align:'left' ,formatter:linkUpdate}, 
                            {name:'SUBJECT_TARGET'       ,index:'SUBJECT_TARGET'       ,width:450   ,align:'left'   }, 
                            {name:'CHARGE_DEPT_NM'       ,index:'CHARGE_DEPT_NM'       ,width:100   ,align:'center' }, 
                            {name:'CHARGE_USER_NM'       ,index:'CHARGE_USER_NM'       ,width:100   ,align:'center' },
							{name:'SUBJECT_METRIC_CNT'   ,index:'SUBJECT_METRIC_CNT'   ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.SUBJECT_METRIC_CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"세부과제"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"SUBJECT_ID").jqGrid('hideCol',"SUBJECT_METRIC_CNT").setGridWidth($!{jqGrid_width});
        //}).jqGrid('hideCol',"YEAR").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/str/base/subject/subjectModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
		 * 년도별 전략과제 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgSubject();
		});
	});
	
	/******************************************
	 * 년도별 전략과제 조회
	 ******************************************/
	function chgSubject(){
		
		J.ajax({
        	url      : "$!{context_path}/str/mon/strMetricDetail/getSubjectList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findStratSubjectId").empty();
				J('<option/>').attr('value','').text("전체").appendTo('#findStratSubjectId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findStratSubjectId');
				})
			}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * jqGrid 전략과제 줄바꿈
	 ******************************************/
	function setNewline(cellvalue) { 
		return "<div class='normal'>" + cellvalue + "</div>";
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#year").val(J("#findYear").val());
		J("#subjectId").val( ret.SUBJECT_ID );
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/str/base/subject/subjectModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var subjectIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					subjectIds += rowdata.SUBJECT_ID + '|';
				}
			});
		}
        
		J("#subjectIds").val(subjectIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/str/base/subject/subjectProcess.vw?type=template").submit();
		return false;
		
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
	
		J("#yearNm").val(J("#findYear :selected").text());
		J("#stratSubjectNm").val(J("#findStratSubjectId :selected").text());
		J("#formList").attr("action", "$!{context_path}/str/base/subject/subjectListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

