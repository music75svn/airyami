		if( "" != rowObject.EVAL_CAT_ID ){
			retVal = "<img name=\'sig\'  src=\'$!{img_path}/common/ball/ball_" + rowObject.EC_STATUS_ID + ".gif\' > " + cellvalue;
		}else {
			retVal = cellvalue;
		}
		return  retVal;
	}

	/******************************************
	 * 경영평가지표 신호등 링크
	 ******************************************/
	function linkSignalGovMetric(cellvalue, options, rowObject) {
		var retVal = "";
		
		if(cellvalue == "소계" || cellvalue == "총계") {
			return cellvalue;
		} else {
			if( "" != rowObject.GOV_METRIC_ID ){
				retVal = "<img name=\'sig\'  src=\'$!{img_path}/common/ball/ball_" + rowObject.GM_STATUS_ID + ".gif\' > " + cellvalue;
			}else {
				retVal = cellvalue;
			}
			return  '<a href=javascript:goGovMetricPop(' + options.rowId + ')>' + retVal + '<//a>';
		}
	}

