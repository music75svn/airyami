<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/level/item/itemList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#content").checkbyte({
			indicator:J("#contentIndicator"),
			limit:2000
		});
		J("#content").trigger("keyup");
		J("#gradeBasis").checkbyte({
			indicator:J("#gradeBasisIndicator"),
			limit:2000
		});
		J("#gradeBasis").trigger("keyup");

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#weight").numeric();
		J("#weight").css("ime-mode", "disabled");
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		
		if(J("#itemGrpId").val() == "") {
			J.showMsgBox("평가항목그룹을 선택해 주십시요", null, "itemGrpId");
			return;
		}
		
		if(!J.checkLength("itemNm", "평가항목명", 1, 150)) {
			return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/level/item/itemProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
<form id="form1" name="form1" method="post" action="$!{context_path}/bsc/level/item/itemProcess.vw?type=template">
    <input type="hidden" 	id="mode"		    name="mode"		      value="$!{searchMap.txt2html("mode")}" />
	<input type="hidden"	id="year"           name="year"           value="$!{searchMap.txt2html("year")}" />
	<input type="hidden"	id="itemGrpId"		name="itemGrpId"      value="$!{CS_HTML.txt2html($itemGrpDetail.ITEM_GRP_ID)}" />
    $!{searchMap.makeHiddenFind()}
	
    <div id="Table">
    	<div id="Table_blockContainer">
    		<div class="tableTop">
    			#parse("/WEB-INF/vl/common/template/tabs.vm")
    			<div class="clear"></div>
    		</div>
			<div class="tableTop">
                <!-- 검색 테이블 Start -->
                <div class="searchBox">
                <div><div><div>   
                    <table summary="검색조건">        
                        <caption class="none">검색조건</caption>
                        <thead><tr><th></th><th></th></tr></thead>
                        <tbody>
                            <tr>
								<td class="searchBox_tit w250">$!{YEAR} <span class="searchBar">$!{searchMap.txt2html("findYear")}년</span></td>
								<td class="searchBox_tit w200">평가항목그룹 : <span class="searchBar">$!{CS_HTML.txt2html($itemGrpDetail.ITEM_GRP_NM)}</span></td>
							</tr>
                        </tbody>
                    </table>
                </div></div></div>
                </div>
                <!--// 검색 테이블 End -->
                <div class="clear"></div>
            </div>
    		<div class="blockDetail">
    			<table summary="평가항목 관리 등록">
					<caption class="none">평가항목 관리 등록</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
    						<tr>
        						<th scope="row"><label for="itemId">평가항목 ID</label></th>
        						<td>
    								#if($!{searchMap.txt2html("mode")} == "MOD")
    									$!{CS_HTML.txt2html($detail.ITEM_ID)}
    									<input type="hidden" id="itemId" name="itemId" class="inputbox w100" value="$!{CS_HTML.txt2html($detail.ITEM_ID)}" maxlength="7" readonly="readonly" />
    								#else
    									<input type="hidden" id="itemId" name="itemId" class="inputbox w100" maxlength="7" />
                                        ※ 저장시 자동으로 부여됩니다.
    								#end
    							</td>
        					</tr>
							<tr>
								<th scope="row"><span class="txt_red">(*)</span> <label for="itemNm">평가항목</label></th>
								<td><input type="text" id="itemNm" name="itemNm" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.ITEM_NM)}' maxlength="50"/></td>
							</tr>
							<tr>
								<th scope="row"><label for="content">방안</label></th>
								<td>
									<textarea id="content" name="content" class="tabletext" title="방안" cols="" rows="5">$!{CS_HTML.txt2html($detail.CONTENT)}</textarea>
									<span id="contentIndicator">0</span>/2000byte
								</td>
							</tr>
							<tr>
								<th scope="row"><label for="gradeBasis">등급기준</label></th>
								<td>
									<textarea id="gradeBasis" name="gradeBasis" class="tabletext" title="등급기준" cols="" rows="5">$!{CS_HTML.txt2html($detail.GRADE_BASIS)}</textarea>
									<span id="gradeBasisIndicator">0</span>/2000byte
								</td>
							</tr>
							<tr>
								<th scope="row"><label for="sortOrder">정렬순서</label></th>
								<td><input type="text" id="sortOrder" name="sortOrder" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.SORT_ORDER)}' maxlength="10"/></td>
							</tr>
    				</tbody>
    			</table>
    		</div>
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnBack"   value="돌아가기" /></li>
    				<li><input type="submit" id="btnInsert" value="저장" /></li>
    			</ul>
    		</div>	
    	</div>
    	<div class="clear"></div>
    </div>
</form>
