#set($curr_url = $!{context_path} + "/prs/insa/dept/deptList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/insa/dept/deptList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colNames     :['인사조직코드', '인사조직', '조직레벨', '부서장코드', '사용여부', '하위조직개수', '정렬순서'],
			colModel     :[
							{name:'DEPT_CD'					,index:'DEPT_CD'           	,width:120	,align:'center' }, 
                            {name:'DEPT_KOR_NM'			,index:'DEPT_KOR_NM'		,width:250	,align:'left'		,formatter:linkUpdate}, 
                            {name:'DEPT_LEVL'				,index:'DEPT_LEVL'			,width:80    ,align:'center' }, 
                            {name:'UP_USER_ID'       		,index:'UP_USER_ID'			,width:150   ,align:'center' }, 
                            {name:'USE_YN'      			,index:'USE_YN'				,width:120   ,align:'center' },
							{name:'CNT'       				,index:'CNT'					,width:150   ,align:'center' },
                            {name:'DISP_ORDER'           ,index:'DISP_ORDER'       	,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : false,
			multiselect  : true,
			gridview     : true,
			cellEdit     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
									var rowdata = J("#list").getRowData(ids[index]);
    								if(rowdata.CNT != 0) { //비교조건 대상 컬럼
										J(":checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"인사조직관리"
		}).jqGrid('hideCol', "CNT").setGridWidth($!{jqGrid_r_width});
    
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
 		
		/******************************************
		* 신규 등록
		******************************************/
		J("#btnInsert").click(function() {
			// 신규 등록 시 현재 조직트리에서 선택된 상위조직 정보를 설정.
			J("#upDeptCd").val(J("#findDeptCd").val());
			J("#upDeptName").val(J("#findUpDeptName").val());
			
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/prs/insa/dept/deptModify.vw?type=template").submit();
		});
 		
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			deleteChk();
			return false;
		});
		
		J("#btnInsaInfo").click(function() {
			getInsaInfo();
			return false;
		});
		
	});
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 조직선택 클릭이벤트
	 ******************************************/
	function goAction(deptCd, deptNm) {
		setDeptInfo(deptCd, deptNm);
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#deptCd").val(ret.DEPT_CD);	// List에서 선택한 조직을 설정.
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/insa/dept/deptModify.vw?type=template").submit();
	}
	
	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/insa/dept/deptList_xml.vw?"+J("#formFind").serialize()}); 
		J("#list").trigger("reloadGrid");
	}
	
	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/ 
	function setDeptInfo(deptCd, deptNm) {
		
		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findDeptCd]").val(deptCd);
		J("#formList input[name=findUpDeptName]").val(J(deptNm).text());
	
		J("#findDeptCd").val(deptCd);						// 조직Tree에서 선택한 조직코드를 설정.
		J("#findUpDeptName").val(J(deptNm).text());	    // 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
		goGridSearch();
	}
	
	/******************************************
	 * 인사정보 불러오기
	 ******************************************/
	function getInsaInfo() {
		J.showConfirmBox("인사정보 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "getInsaInfoDo"); //getInsaInfoDo() 콜백함수 호출
	}
	
	function getInsaInfoDo() {
		J("#mode").val("GET");
		J("#formList").attr("action", "$!{context_path}/prs/insa/dept/deptProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#formDept").attr("action", "$!{context_path}/prs/insa/dept/deptProcess.vw?type=template").submit(); 
	}
	
	function updateDo() {
		J("#formMod").attr("action", "$!{context_path}/prs/insa/dept/deptProcess.vw?type=template").submit(); 
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function deleteChk() {
	
		if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
        } else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var deptCds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					deptCds += rowdata.DEPT_CD + '|';
				}
			});
		}
		
		J("#deptCds").val(deptCds);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/prs/insa/dept/deptProcess.vw?type=template").submit();
		return false;
	}
	
//]]>
</script>
 
