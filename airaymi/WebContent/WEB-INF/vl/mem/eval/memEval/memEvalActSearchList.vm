	/*****************************************
	 * 전략과제 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.CAL_NUM;
		var rowSpan = rowObject.CAL_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}
	
	/******************************************
	 * jqGrid 산식항목 목록조회 링크
	 ******************************************/
	function linkCalItem(cellvalue, options, rowObject) {
		return '<a href=javascript:fnCalItem(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 산식항목 조회 AJAX
	 ******************************************/
	function fnCalItem(rowId) {
		var ret = J("#evalItemlist").jqGrid('getRowData',rowId);
	
		if(ret.TYPE_ID == "01"){
			// 계량유형일 경우 실적 입력가능
			if("$!{searchMap.txt2html("mode")}" != "SEARCH"){
				J("#btnInsert").show();
			}
			goActualMngAction(ret.METRIC_ID, ret.METRIC_NM_TMP, ret.EVAL_CYCLE_ID);
		}else{
			// 비계량유형일 경우 실적 안보여줌
			if("$!{searchMap.txt2html("mode")}" != "SEARCH"){
				J("#btnInsert").hide();
			}
			J("#detailActualMngData").empty();
		}
		goActionPlanAction(ret.METRIC_ID, ret.METRIC_NM_TMP, "$!{CS_HTML.txt2html($periodInfo.ACT_IN_TERM)}");
	}
	
	/******************************************
	 * 조회
	 ******************************************/
    function goActualMngAction(metricId, metricNm, evalCycleId) {
		var mode = "$!{searchMap.txt2html("mode")}";
		var year = J("#year").val();
		var findActualType = "$!{searchMap.txt2html("findActualType")}";
		
		J("#metricId").val(metricId);
		J("#metricNm").val(metricNm);
		J("#evalCycleId").val(evalCycleId);

		J.ajax({
        	url      : "$!{context_path}/mem/eval/memActIn/memActualMngDetailList.vw",
        	cache    : false,
        	type     : "POST",
			data     : "mode=" + mode + "&year=" + year + "&amp;evalCycleId=" + evalCycleId + "&amp;findYear=" + year + "&amp;findEvalCycleId=" + evalCycleId + "&amp;metricNm=" + metricNm + "&amp;metricId=" + metricId + "&amp;findActualType=" + findActualType,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
        		J("#detailActualMngData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#detailActualMngData").append(data);
        	}
    	});
	}
	
	/******************************************
	 * 조회
	 ******************************************/
    function goActionPlanAction(metricId, metricNm, actInTerm) {
    	var mode = "$!{searchMap.txt2html("mode")}";
		var year = J("#year").val();
		var findActualType = "$!{searchMap.txt2html("findActualType")}";

		J.ajax({
        	url      : "$!{context_path}/mem/eval/memActIn/memActionPlanList.vw",
        	cache    : false,
        	type     : "POST",
			data     : "mode=" + mode + "&year=" + year + "&amp;actInTerm=" + actInTerm + "&amp;findYear=" + year + "&amp;findActInTerm=" + actInTerm + "&amp;metricNm=" + metricNm + "&amp;metricId=" + metricId + "&amp;findActualType=" + findActualType,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
        		J("#detailActionPlanData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#detailActionPlanData").append(data);
        	}
    	});
	}
//]]>
</script>    
 
