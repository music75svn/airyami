			<input type="hidden" id="empn"    		  name="empn" />
			<input type="hidden" id="korNm"    	      name="korNm" />
			<input type="hidden" id="deptNm"    	  name="deptNm" />
			<input type="hidden" id="deptDetailNm"    name="deptDetailNm" />
