			chgEvalGrp();
		});
	});

	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponItem/getDegreeList_ajax.vw",
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
		<!--실적담당자 초기화-->
		chgEvalUser();
	}

	/******************************************
	 * 년도별 비계량지표 실적담당자
	 ******************************************/
	function chgEvalUser(){
		setTimeout(function(){
    		J.ajax({
            	url      : "$!{context_path}/bsc/impon/imponReport/getUserList_ajax.vw",
            	cache    : false,
            	type     : "POST",
    			data     : J("#formFind").serialize(),
            	dataType : "html",
            	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            	success  : function (data) {
    				var xmlDoc = J.parseXML(data);
            		J("#findInsertUserId").empty();
    				J('<option/>').attr('value','').text("전체").appendTo('#findInsertUserId');
    				J(xmlDoc).find("data").each(function() {
    					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findInsertUserId');
    				})
    			}
        	});
		},500);
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#itemId").val(ret.ITEM_ID);
		J("#insertUserId").val(ret.INSERT_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponReport/imponReportModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var metricGrpIds = "";
		var itemIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';
					metricGrpIds += rowdata.METRIC_GRP_ID + '|';
					itemIds += rowdata.ITEM_ID + '|';
				}
			});
		}

		J("#evalDegreeIds").val(evalDegreeIds);J("#metricGrpIds").val(metricGrpIds);J("#itemIds").val(itemIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponReport/imponReportProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponReport/imponReportListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 메일발송 팝업
	 ******************************************/
	function mailWrite(){
		var list = "";
		var id = "";
		var ids = "";
		var rowdata = "";
		var toMail = "";
		var toName = "";
		var toNameList = "";

		list = "list";
		id = J("#list").getGridParam('selarrrow');
		ids = J("#list").jqGrid('getDataIDs');

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#"+ list).getRowData(ids[i]);
					if(rowdata.EMAIL != '' && rowdata.EMAIL != null) {
    					toMail += rowdata.EMAIL + "|";

						toName += rowdata.USER_NM + "|";
						toNameList += rowdata.USER_NM + "<" + rowdata.EMAIL + ">;";
    				}
				}
			});
		}

		if(!J.gridSelectChk(list)){
			J.showMsgBox("메일을 전송할 대상자를 선택하십시요", null, null);
		} else {
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
    	}
	}

//]]>
</script>

