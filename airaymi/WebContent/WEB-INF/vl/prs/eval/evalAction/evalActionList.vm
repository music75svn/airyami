#set($curr_url = $!{context_path} + "/prs/eval/evalAction/evalActionList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/eval/evalAction/evalActionList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['YEAR', 'EVAL_GRP_ID', '평가군', '평가대상인원', 'EVAL_SEQ', 'EVAL_METHOD_ID', '설명', 'EVAL_SUBMIT_YN', '평가상태'],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'               ,width:150   ,align:'center' }, 
                            {name:'EVAL_GRP_ID'       	,index:'EVAL_GRP_ID'       	,width:150   ,align:'center' }, 
                            {name:'EVAL_GRP_NM'         ,index:'EVAL_GRP_NM'        ,width:200   ,align:'center' ,formatter:linkUpdate},
							{name:'MEMB_CNT'       		,index:'MEMB_CNT'       	,width:100   ,align:'center' },
                            {name:'EVAL_SEQ'         	,index:'EVAL_SEQ'         	,width:150   ,align:'center' }, 
                            {name:'EVAL_METHOD_ID'      ,index:'EVAL_METHOD_ID'     ,width:150   ,align:'center' }, 
                            {name:'CONTENT'             ,index:'CONTENT'            ,width:300   ,align:'center' }, 
                            {name:'EVAL_SUBMIT_YN'      ,index:'EVAL_SUBMIT_YN'     ,width:150   ,align:'center' },
							{name:'EVAL_SUBMIT_NM'      ,index:'EVAL_SUBMIT_NM'     ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
			
								if('$!{CS_HTML.txt2html($getEvalPeriodYn)}' == 'N'){					
									J("#periodTerm").append("<font color=\'red\'>*현재 평가기간이 아닙니다.</font>");
								}
								
                           },
			caption:"개인평가 평가실시 (현황)"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_GRP_ID").jqGrid('hideCol',"EVAL_SEQ").jqGrid('hideCol',"EVAL_METHOD_ID").jqGrid('hideCol',"EVAL_SUBMIT_YN").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
		});
		
		J('#findYear').bind('change',function(){
			chgYear();
		});
		
		J('#findEvalDegreeId').bind('change',function(){
		    if($!{CS_LOGIN.chkAuthGrp("01")} || $!{CS_LOGIN.chkAuthGrp("60")}){
				chgDegree();
			}
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 년도 변경시 평가구분 변경
	 ******************************************/
	function chgYear(){
		J.ajax({
        	url      : "$!{context_path}/prs/eval/evalAction/evalDegree_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
        	}
    	});
		if($!{CS_LOGIN.chkAuthGrp("01")} || $!{CS_LOGIN.chkAuthGrp("60")}){
			chgDegree();
		}
	}
	
	/******************************************
	 * 평가구분변경시 평가자 변경
	 ******************************************/
	function chgDegree(){
		setTimeout(function(){
		J.ajax({
        	url      : "$!{context_path}/prs/eval/evalAction/evalUser_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalUserId").empty();
				
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserId');
				})
        	}
    	});
		},500);
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
	
		if('$!{CS_HTML.txt2html($getEvalPeriodYn)}' == 'N'){					
			J.showMsgBox("현재 평가기간이 아닙니다.", null, null);
			return;
		}
	
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
		J("#evalUserId").val(J("#findEvalUserId").val());
		J("#evalMethodId").val(ret.EVAL_METHOD_ID);
		J("#evalSubmitYn").val(ret.EVAL_SUBMIT_YN);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalAction/evalActionModify.vw?type=template").submit();
	}
    
    
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#findEvalDegreeNm").val(J("#findEvalDegreeId > option:selected").text());
		if($!{CS_LOGIN.chkAuthGrp("01")} || $!{CS_LOGIN.chkAuthGrp("60")}){
			J("#findEvalUserNm").val(J("#findEvalUserId > option:selected").text());
		}else{
			J("#findEvalUserNm").val('$!{CS_LOGIN.getUser_nm()}');
		}
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalAction/evalActionListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

