#set($curr_url = $!{context_path} + "/prs/org/orgDeptEvalItem/orgDeptEvalItemList.vw")
<script type="text/javascript" language="javascript">
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
	 	var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/org/orgDeptEvalItem/orgDeptEvalItemList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colNames     :[ '$!{ORG_EVAL_ITEM_NM}코드', '평가분야', '$!{ORG_EVAL_ITEM_NM}명', '배점', '설명', '평가년도', '부서코드'],
			colModel     :[
							{name:'ORG_EVAL_ITEM_ID'     ,index:'ORG_EVAL_ITEM_ID'     ,width:100   ,align:'center'   ,sortable:true},
                            {name:'EVAL_TYPE_NM'         ,index:'EVAL_TYPE_NM'         ,width:100   ,align:'center'   ,sortable:true},
							{name:'ORG_EVAL_ITEM_NM'     ,index:'ORG_EVAL_ITEM_NM'     ,width:150   ,align:'left'     ,sortable:true ,formatter:linkUpdate },
							{name:'ALLOC_SCORE'     	 ,index:'ALLOC_SCORE'     	   ,width:50    ,align:'center'   ,sortable:true},
							{name:'CONTENT'         	 ,index:'CONTENT'      		   ,width:200   ,align:'left'     ,sortable:true},
							{name:'YEAR'      			 ,index:'YEAR'     		 	   ,width:10    ,align:'center'	  ,sortable:true},
							{name:'DEPT_CD'      		 ,index:'DEPT_CD'     		   ,width:10    ,align:'center'	  ,sortable:true}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			gridview     : true,
			multiselect  : true,
			cellEdit     : true,
			loadComplete : function() {
                           },
			caption:"조직별$!{ORG_EVAL_ITEM_NM}관리"
		}).jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"YEAR").setGridWidth($!{jqGrid_r_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			var findYear = J("#findYear").val();
			var oldYear = J("#oldYear").val();

			if(findYear == oldYear) {
    			goGridSearch();
    			return false;
			}
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#orgEvalItemId").val("");
			J("#mode").val("ADD");
			J("#year").val(J("#findYear").val());
			J("#deptCd").val(J("#findDeptCd").val());
			J("#deptNm").val(J("#findDeptNm").val());
			J("#formList").attr("action", "$!{context_path}/prs/org/orgDeptEvalItem/orgDeptEvalItemModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/org/orgDeptEvalItem/orgDeptEvalItemList_xml.vw?"+J("#formFind").serialize(), datatype:"json"});
		J("#list").trigger("reloadGrid");
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#orgEvalItemId").val(ret.ORG_EVAL_ITEM_ID);
		J("#year").val(J("#findYear").val());
		J("#deptCd").val(J("#findDeptCd").val());
		J("#deptNm").val(J("#findDeptNm").val());
		//J("#findSearchCodeId").val(J("#findDeptCd").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgDeptEvalItem/orgDeptEvalItemModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var orgEvalItemIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					orgEvalItemIds += rowdata.ORG_EVAL_ITEM_ID + '|';
				}
			});
		}

		J("#year").val(J("#findYear").val());
		J("#deptCd").val(J("#findDeptCd").val());
		J("#deptNm").val(J("#findDeptNm").val());
		J("#orgEvalItemIds").val(orgEvalItemIds);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgDeptEvalItem/orgDeptEvalItemProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 조직트리 선택
	 ******************************************/
	function goAction(code, name) {
		var deptNm = J(name).text();
		J("#findDeptCd").val(code);
		J("#findDeptNm").val(deptNm);
		goGridSearch();
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#year").val(J("#findYear").val());
		J("#deptCd").val(J("#findDeptCd").val());
		J("#deptNm").val(J("#findDeptNm").val());
		J("#useYn").val(J("#findUseYn").val());
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#useYnNm").val(J("#findUseYn > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/prs/org/orgDeptEvalItem/orgDeptEvalItemListExcel.vw?type=excel").submit();
		return false;
	}
//]]>
</script>

