#set($curr_url = $!{context_path} + "/prs/mng/evalGrpMapping/evalGrpMappingList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/mng/evalGrpMapping/evalGrpMappingList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가군ID','평가군','평가구분', '평가대상인원수','설명', ' 정렬순서'],
			colModel     :[
							{name:'YEAR'			,index:'YEAR'				,width:150   ,align:'center' }, 
                            {name:'EVAL_GRP_ID'		,index:'EVAL_GRP_ID'		,width:150   ,align:'center' }, 
                            {name:'EVAL_GRP_NM'		,index:'EVAL_GRP_NM'		,width:200   ,align:'left'   }, 
                            {name:'EVAL_TYPE'		,index:'EVAL_TYPE'			,width:200   ,align:'center'   }, 
							{name:'CNT'				,index:'CNT'				,width:150   ,align:'center' ,formatter:linkUpdate},
                            {name:'CONTENT'			,index:'CONTENT'			,width:250   ,align:'center' }, 
                            {name:'SORT_ORDER'		,index:'SORT_ORDER'			,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가군 매핑"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_TYPE").jqGrid('hideCol',"EVAL_GRP_ID").jqGrid('hideCol',"SORT_ORDER").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
		J("#evalGrpNm").val(ret.EVAL_GRP_NM);
		J("#evalType").val(ret.EVAL_TYPE);
		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/prs/mng/evalGrpMapping/evalGrpMappingModify.vw?type=template").submit();
	}
    
//]]>
</script>

