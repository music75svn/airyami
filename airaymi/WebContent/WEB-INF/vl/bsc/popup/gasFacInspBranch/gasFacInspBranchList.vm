#set($curr_url = $!{context_path} + "/bsc/popup/gasFacInspBranch/gasFacInspBranchList.vw")
<head>
	#parse("/WEB-INF/vl/common/template/head.vm")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/popup/gasFacInspBranch/gasFacInspBranchList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['년도', '월', '부서코드', '부서명', '검사구분', '가스법 구분', '대분류', '중분류', '소분류', '신규 검사', '재검사', '배관검사', '적용건수', '상대값', '상대값의합'],
			colModel     :[
							{name:'YEAR'  		 		,index:'YEAR'  				,width:30   ,align:'center' },
                            {name:'MON'      			,index:'MON'      			,width:60   ,align:'center' },
                            {name:'DEPT_CD' 			,index:'DEPT_CD'			,width:60   ,align:'center' },
                            {name:'DEPT_NM' 			,index:'DEPT_NM'			,width:60   ,align:'center' },
                            {name:'INSP_KIND_TC_NM'  	,index:'INSP_KIND_TC_NM'  	,width:60   ,align:'center' },
                            {name:'LAW_TC_NM'  			,index:'LAW_TC_NM'  		,width:60   ,align:'center' },
                            {name:'STIC_LAG_TC_NM'  	,index:'STIC_LAG_TC_NM'  	,width:60   ,align:'center' },
                            {name:'STIC_MID_TC_NM'  	,index:'STIC_MID_TC_NM'  	,width:60   ,align:'center' },
                            {name:'STIC_SML_TC_NM'  	,index:'STIC_SML_TC_NM'  	,width:60   ,align:'center' },
                            {name:'INSP_QTY'  			,index:'INSP_QTY'  			,width:60   ,align:'center' },
                            {name:'RE_INSP_QTY'  		,index:'RE_INSP_QTY'  		,width:60   ,align:'center' },
							{name:'LENG'  				,index:'LENG'  				,width:60   ,align:'center' },
                            {name:'TOTAL'  				,index:'TOTAL'  			,width:60   ,align:'center' },
                            {name:'RLTV_VAL'  			,index:'RLTV_VAL'  			,width:60   ,align:'center' },
                            {name:'TOTAL_RLTV_VAL'  	,index:'TOTAL_RLTV_VAL'  	,width:60   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate   : {sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
    								if(J(rowdata.ITEM_CNT).text() != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"시스템항목관리"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"MON").jqGrid('hideCol',"DEPT_CD").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 항목명 포커스
		 ******************************************/
		J("#findItemNm").select();

		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();            //연계 항목 팝업
		
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcel").click(function() {
			J("#yearNm").val(J("#findYear > option:selected").text());
			J("#monNm").val(J("#findMon > option:selected").text());
			J("#deptNm").val(J("#findDeptId > option:selected").text());
			J("#itemNm").val(J("#findItemCd > option:selected").text());
			J("#deptId").val( J("#findDeptId").val() );
			J("#formList").attr("action", "$!{context_path}/bsc/popup/gasFacInspBranch/excel.vw?type=excel").submit();
			return false;
		});
	});

	
	
	/******************************************
	 * 년,월 변경시 전략과제 변경
	 * 이 부분은 필요가 있으면 findYear와 findMon에 onchange를 걸어 사용합니다. 예- onchange="chgDept()" 
	 ******************************************/
    	
	function chgDept(){
		J.ajax({
    		
    			url      : "$!{context_path}/bsc/popup/gasFacInspBranch/deptList_ajax.vw",
    			cache    : false,
    			type     : "POST",
    			data	 : J("#formFind").serialize(),
    			dataType : "html",
    			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
    			success  : function(data){
    							var xmlDoc = J.parseXML(data);
    							J("#findDeptId").empty();
    							J('<option/>').attr('value','').text("선택").appendTo('#findDeptId');
    							J(xmlDoc).find("data").each(function() {
    								J('<option/>').attr('value',J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findDeptId');
    							})
				}
		});
	
	}
	
	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/bsc/popup/gasFacInspBranch/gasFacInspBranchList.vw?type=popup").submit();
	}

	
//]]>
</script>
</head>
<body>
<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">가스시설검사 상세화면</h1>
		<div class="tableTop">
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/popup/gasFacInspBranch/gasFacInspBranchList.vw?type=popup">
				<input type="hidden"    id="findMetricId"	name="findMetricId"		value="$!{searchMap.txt2html("findMetricId")}" />
				<div class="clear h20"></div>
				<div class="searchBox">
    				<div><div><div>
    				<table summary="시스템항목관리검색 조건">
						<caption class="none">시스템항목관리 검색 조건</caption>
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span><label for="findYear">$!{YEARMON}</label></span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
										<select id="findMon" name="findMon" class="select w80">
            								$!CS_CODE.getCodeOption("024", $!{searchMap.txt2html("findMon")})
            							</select>
            						</span>
            					</td>
								<td class="searchBox_tit w300">
                					<span><label for="findDeptId">부서</label></span>
            						<span class="searchBar">
										<select id="findDeptId" name="findDeptId" class="select w250">
											#foreach($list in $deptList)
                                            	<option value="$!{CS_HTML.txt2html($list.DEPT_ID)}" $searchMap.getSelected("findDeptId", "$!{CS_HTML.txt2html($list.DEPT_ID)}")>$!{CS_HTML.txt2html($list.DEPT_NM)}</option>
                                            #end
										</select>
            						</span>
                                </td>
								<td class="searchBox_tit w270">
                					<span><label for="findItemCd">항목</label></span>
									<span class="searchBar">
										<select id="findItemCd" name="findItemCd" class="select w200">
											#foreach($item in $itemInfo)
												<option value="$!{CS_HTML.txt2html($item.ITEM_CD)}" $searchMap.getSelected("findItemCd", "$!{CS_HTML.txt2html($item.ITEM_CD)}")>$!{CS_HTML.txt2html($item.CAL_TYPE_COL_NM)}</option>
											#end
            							</select>
									</span>
                                </td>
            				</tr>
        				</tbody>
        				<div class="blockButton " style="position:absolute;right:10px; width:150px;float:right; align:middle;padding: 0 10px 0 0;" >
                    		<input id="btnExcel" type="button" align="middle" value="엑셀다운로드", alt="엑셀다운로드" />
                    	</div>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" alt="검색" style="position:absolute;right:120px;"/>
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>

		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/popup/gasFacInspBranch/gasFacInspBranchProcess.vw?type=popup">
			<input type="hidden" id="mode"       name="mode" />
			<input type="hidden" id="year"       name="year" />
			<input type="hidden" id="itemCds"    name="itemCds" />
			<input type="hidden" id="itemCd"     name="itemCd"  />
			<input type="hidden" id="itemCnt"    name="itemCnt" />
			<input type="hidden" id="yearNm"	name="yearNm" />
			<input type="hidden" id="monNm"		name="monNm" />
			<input type="hidden" id="deptNm"	name="deptNm" />
			<input type="hidden" id="itemNm"	name="itemNm" />
			<input type="hidden" id="deptId"	name="deptId" />
			
			$!{searchMap.makeHiddenFind()}

			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="시스템항목관리 조회결과">
							<caption class="none">시스템항목관리 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
				</div>
			</div>
		</form>

	</div>
	<a id="anchor"></a>
	<div class="clear"></div>
</div>
</body>
