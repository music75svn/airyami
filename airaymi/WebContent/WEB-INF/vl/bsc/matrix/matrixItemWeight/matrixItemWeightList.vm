#set($curr_url = $!{context_path} + "/bsc/matrix/matrixItemWeight/matrixItemWeightList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/matrix/matrixItemWeight/matrixItemWeightList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가대상 그룹 코드', '평가항목 그룹', '평가대상 코드', '평가항목', '가중치', '평가대상 수'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'ITEM_GRP_ID'          ,index:'ITEM_GRP_ID'          ,width:150   ,align:'center' },
                            {name:'ITEM_GRP_NM'          ,index:'ITEM_GRP_NM'          ,width:150   ,align:'center' },
                            {name:'ITEM_ID'              ,index:'ITEM_ID'              ,width:150   ,align:'center' },
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:150   ,align:'center' },
                            {name:'WEIGHT'               ,index:'WEIGHT'               ,width:150   ,align:'center' ,formatter:linkWeight},
                            {name:'ITEM_CNT'             ,index:'ITEM_CNT'             ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			footerrow	 : true,
			userDataOnFooter : true,
			loadComplete : function() {
					J("input[name=weights]").numeric({allow:"."});        //특정문자 허용(.)
					J("input[name=weights]").css("ime-mode", "disabled"); //한글사용 비활성화
					var grid = J("#list");

        			grid.jqGrid('footerData', 'set', {ITEM_NM:"합계"});
					grid.jqGrid('footerData', 'set', showTotWeight());
				  },
			caption:"평가항목가중치"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"ITEM_ID").jqGrid('hideCol',"ITEM_CNT").jqGrid('hideCol',"ITEM_GRP_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 가중치초기화 버튼 클릭 이벤트
		 ******************************************/
		J("#btnInit").click(function() {
			goInit();
			return false;
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * 가중치 초기화
	 ******************************************/
	function goInit() {
		J.showConfirmBox("가중치를 초기화 하시겠습니까?", "initDo"); //deleteDo() 콜백함수 호출

	}

	/******************************************
	 * 가중치 초기화 실행
	 ******************************************/
	function initDo() {
		J("#formList input[name=weights]").each(function(){
  			$(this).val("0");
		});
		J("#list").jqGrid('footerData', 'set', {WEIGHT:"0"});
	}

	/******************************************
	 * jqGrid 가중치
	 ******************************************/
	function linkWeight(cellvalue, options, rowObject) {
		if(options.rowId==""){
			return cellvalue;
		}else{
			var str = '';
			str += '<input type="text" id="weights" name="weights" value="' + cellvalue + '" class="inputbox wp50" maxlength="5"  onBlur="showTotWeight();"/>';

			return str;
		}
	}

	/******************************************
	 * 계산실행
	 ******************************************/
	function showTotWeight() {
		var total_weight	=0;
		var temp_weight		=0;
		var MAX_SCORE 		=100;

		J("#formList input[name=weights]").each(function(index, item){
			if( MAX_SCORE < $(this).val()){
				$(this).val("");
				$(this).focus();
				J.showMsgBox("가중치가 100을 넘을 수 없습니다.", "showTotWeight", null);
			}


			temp_weight += parseFloat($(this).val()==""?0:$(this).val());
			if( MAX_SCORE < temp_weight){
				$(this).val("");
				$(this).focus();
				showTotWeight();
				J.showMsgBox("가중치합이 100을 넘을 수 없습니다.", "showTotWeight", null);
			}else{
				total_weight = Math.round(temp_weight*100)/100;
			}
		});
		J("#totWeight").val(total_weight);
		J("#list").jqGrid('footerData', 'set', {WEIGHT:total_weight});
	}

	/******************************************
	 * 저장
	 ******************************************/
	function goInsert() {
		if( "$!{yearClosingYn}" == "Y" ){
			J.showMsgBox($!{searchMap.txt2html("findYear")} + " 년은 마감되었습니다.", null, null);
			return ;
		}
		if(J("#totWeight").val()!="100"){
			J.showMsgBox("가중치합이 100으로 맞추어서 <br>저장하시기 바랍니다.", null, null);
			return;
		}
		J.showConfirmBox("저장하시겠습니까?", "insertDo"); //insertDo() 콜백함수 호출
	}

	/******************************************
	 * 저장처리
	 ******************************************/
	function insertDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemIds = "";
		var weights = "";
		var weight  = "";

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			itemIds += rowdata.ITEM_ID + '|';
		}

		J("#formList input[name=weights]").each(function(){
			weight = $(this).val()==""?0:$(this).val();
			weights += weight + '|';
		});

		J("#itemIds").val(itemIds);
		J("#itemWeights").val(weights);
		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");

		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixItemWeight/matrixItemWeightProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#itemId").val(ret.ITEM_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixItemWeight/matrixItemWeightModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					itemIds += rowdata.ITEM_ID + '|';
				}
			});
		}

		J("#itemIds").val(itemIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixItemWeight/matrixItemWeightProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixItemWeight/matrixItemWeightListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

