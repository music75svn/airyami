#set($curr_url = $!{context_path} + "/bsc/impon/imponResult/imponResultList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/impon/imponResult/imponResultList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가차수 코드', 'KPI POOL I', 'KPI ID', '평가조직', '평가대상지표', '최종지표점수', '평가의견', '평가구분'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:150   ,align:'center' },
                            {name:'METRIC_GRP_ID'        ,index:'METRIC_GRP_ID'        ,width:150   ,align:'center' },
                            {name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:150   ,align:'center' },
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:150   ,align:'center' },
                            {name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:150   ,align:'center' },
                            {name:'FINAL_METRIC_SCORE'   ,index:'FINAL_METRIC_SCORE'   ,width:100   ,align:'center' },
							{name:'FINAL_COMMENT'        ,index:'FINAL_COMMENT'        ,width:50    ,align:'center' ,formatter:linkFeedBack},
							{name:'ITEM_GBN_ID'          ,index:'ITEM_GBN_ID'          ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate	 : {sortable:false},
			caption:"평가결과"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"METRIC_GRP_ID").jqGrid('hideCol',"METRIC_ID").jqGrid('hideCol',"ITEM_GBN_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/impon/imponResult/imponResultModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
			chgEvalCode();
		});
	});

	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){

		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponItem/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}

	/******************************************
	 * 년도별 평가군 조회
	 ******************************************/
	function chgEvalCode(){

		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponResult/getCodeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findScDeptGrpId").empty();
				J('<option/>').attr('value','').text("전체").appendTo('#findScDeptGrpId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findScDeptGrpId');
				})
			}
    	});
	}

	function linkFeedBack(cellvalue, options, rowObject) {
		var ret_val = "";

		ret_val = "</a></span>" + "<a href=javascript:goFeedBack(" + options.rowId + ")>" + "<img name=\'opi\'  src=\'$!{img_path}/common/board/ic_search.gif\' >" + "</a>";

		return ret_val;
	}

	/******************************************
	 * 피드백  팝업
	 ******************************************/
	function goFeedBack(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear 			= J("#findYear").val();
		var findEvalDegreeId 	= ret.EVAL_DEGREE_ID;
		var findMetricGrpId 	= ret.METRIC_GRP_ID;
		var findMetricId 		= ret.METRIC_ID;
		var findItemGbnId 		= ret.ITEM_GBN_ID;

		var param = "&amp;year=" + findYear + "&amp;evalDegreeId=" + findEvalDegreeId  + "&amp;metricGrpId=" + findMetricGrpId + "&amp;metricId=" + findMetricId+ "&amp;itemGbnId=" + findItemGbnId;

		var url = "$!{context_path}/bsc/impon/imponResult/popFeedDetail.vw?type=popup" + param;
		openWinByName(url,'popFeedDefine','650','250','yes');
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#metricId").val(ret.METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponResult/imponResultModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var metricGrpIds = "";
		var metricIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';metricGrpIds += rowdata.METRIC_GRP_ID + '|';metricIds += rowdata.METRIC_ID + '|';
				}
			});
		}

		J("#evalDegreeIds").val(evalDegreeIds);J("#metricGrpIds").val(metricGrpIds);J("#metricIds").val(metricIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponResult/imponResultProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponResult/imponResultListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

