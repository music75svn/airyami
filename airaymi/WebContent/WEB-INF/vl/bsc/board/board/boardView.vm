<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/board/board/boardList.vw?type=template").submit();
		});
    
		/******************************************
		 * 답변버튼
		 ******************************************/
		J("#btnReply").click(function() {
			J("#mode").val("REP");
			J("#form1").attr("action", "$!{context_path}/bsc/board/board/boardModify.vw?type=template").submit();
		});
    
		/******************************************
		 * 수정버튼
		 ******************************************/
		J("#btnModify").click(function() {
			J("#mode").val("MOD");
			J("#form1").attr("action", "$!{context_path}/bsc/board/board/boardModify.vw?type=template").submit();
		});
    
		/******************************************
		 * 삭제버튼
		 ******************************************/
		J("#btnDelete").click(function() {
			J("#mode").val("DEL");
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		});
		
	});
    
	/******************************************
	 * 삭제
	 ******************************************/
	function deleteDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/board/board/boardProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
<form id="form1" name="form1" method="post" action="$!{context_path}/bsc/board/board/boardProcess.vw?type=template">
    <input type="hidden" id="mode"		name="mode"		value="$!{searchMap.txt2html("mode")}" />
    <input type="hidden" id="bbsSeq"	name="bbsSeq"	value="$!{searchMap.txt2html("bbsSeq")}" />
    $!{searchMap.makeHiddenFind()}
	
    <div id="Table">
    	<div id="Table_blockContainer">
    		<div class="tableTop">
    			#parse("/WEB-INF/vl/common/template/tabs.vm")
    			<div class="clear"></div>
    		</div>
    		<div class="blockDetail">
    			<table summary="게시물 상세정보">
					<caption class="none">게시물 상세정보</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
    					<tr>
    						<th scope="row"><label>제목</label></th>
    						<td>$!{CS_HTML.txt2html($detail.BBS_TITLE)}</td>
    					</tr>
    					<tr>
    						<th scope="row"><label>등록일자</label></th>
    						<td>$!{CS_HTML.txt2html($detail.CREATE_DT)}</td>
    					</tr>
    					<tr>
    						<th scope="row"><label>소속부서</label></th>
    						<td>$!{CS_HTML.txt2html($detail.DEPT_NM)}</td>
    					</tr>
    					<tr>
    						<th scope="row"><label>작성자</label></th>
    						<td>$!{CS_HTML.txt2html($detail.BBS_REGISTER_NAME)}</td>
    					</tr>
    					<tr>
    						<th scope="row"><label>내용 </label></th>
    						<td>$!{CS_HTML.txt2htmlbr2($detail.BBS_CONTENTS)}</td>
    					</tr>
    					<tr>
    						<th scope="row"><label for="bbs_file">첨부파일</label></th>
    						<td>
								#foreach($fileList in $fileList)
									$!{CS_HTML.makeFileIconFileName($fileList.get("ATTACH_FILE_SUFFIX"), $fileList.get("ATTACH_FILE_NM"), $fileList.get("ATTACH_FILE_PATH"))} 
								#end
							</td>
    					</tr> 
    				</tbody>
    			</table>
    		</div>
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnReply"  value="답변" /></li>
					
					#if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60") || ($!{CS_LOGIN.getUser_id()} == $!{CS_HTML.txt2html($detail.BBS_REGISTER)}))
        				<li><input type="button" id="btnModify" value="수정" /></li>
        				<li><input type="button" id="btnDelete" value="삭제" /></li>
					#end
    				
					<li><input type="button" id="btnBack"   value="목록으로" /></li>
    			</ul>
    		</div>	
    	</div>
    	<div class="clear"></div>
    </div>
</form>
