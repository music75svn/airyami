<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.base.metricInputTerm">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_METRIC_IN_TERM
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: KPI입력일정관리 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: 
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR, 
			   START_DT, 
			   END_DT
		FROM BSC_METRIC_IN_TERM	
		WHERE GUBUN = '01'				
		ORDER BY YEAR        		
	</select>
	
	<!--
	==================================================================   
	  # 설명	: KPI입력일정관리 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_METRIC_IN_TERM
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR
			 , START_DT
			 , END_DT
			 , GUBUN			 
		  FROM BSC_METRIC_IN_TERM
		 WHERE YEAR = #findYear#
		 AND GUBUN = '01'                      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: KPI입력일정관리 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_METRIC_IN_TERM
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		INSERT INTO BSC_METRIC_IN_TERM(
               YEAR
             , START_DT
             , END_DT
             , GUBUN
             ) VALUES (
               #year#
             , #startDt#
             , #endDt#
             , '01'
             )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: KPI입력일정관리 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_METRIC_IN_TERM
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_METRIC_IN_TERM
		   SET START_DT = #startDt#
		     , END_DT   = #endDt#
		 WHERE YEAR     = #year#
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: KPI입력일정관리 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_METRIC_IN_TERM
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BSC_METRIC_IN_TERM
		WHERE YEAR = #year# 
	</update>
	
	<!--
	==================================================================   
	  # 설명	: 해당년 등록 여부 확인
	  #	기능	: SELECT
	  #	TABLE	: BSC_METRIC_IN_TERM
	==================================================================
	-->	
	<select id="getCount" parameterClass="hashMap" resultClass="java.lang.Integer">
		SELECT COUNT(*) CNT 
		  FROM BSC_METRIC_IN_TERM
		 WHERE YEAR = #year#
	</select>
	
</sqlMap>


