#set($curr_url = $!{context_path} + "/prs/dir/dirEvalMember/dirEvalMemberList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[
	
	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/dir/dirEvalMember/dirEvalMemberList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['사번','사원번호', '이름', '부서코드','부서명', '직위코드', '직위', '근무개월수', '직무시작일', '직무종료일', '임원평가대상여부'],
			colModel     :[
							{name:'EMPNS'   			,index:'EMPNS'				,width:70		,align:'center' , formatter:linkEmpn},
							{name:'EMPN'   				,index:'EMPN'				,width:70		,align:'center' },
							{name:'KOR_NM'   			,index:'KOR_NM'				,width:70   	,align:'center' },
							{name:'DEPT_CD'				,index:'DEPT_CD'			,width:150		,align:'center' },
							{name:'DEPT_FULL_NM'		,index:'DEPT_FULL_NM'		,width:100		,align:'center' },
							{name:'POS_TC'				,index:'POS_TC'				,width:80		,align:'center' },
							{name:'POS_TC_NM'			,index:'POS_TC_NM'			,width:80		,align:'center' },
							{name:'MON'					,index:'MON'				,width:80		,align:'center' },
							{name:'DUTY_START_DT'		,index:'DUTY_START_DT'		,width:80		,align:'center' },
							{name:'DUTY_END_DT'			,index:'DUTY_END_DT'		,width:80		,align:'center' },
							{name:'EVAL_YN'				,index:'EVAL_YN'			,width:80		,align:'center' , formatter:goEval}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : false,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate: {sortable:false},
			loadComplete : function() {

                var id         = J("#list").getGridParam('selarrrow');
                var ids        = J("#list").jqGrid('getDataIDs');
                
			},
			caption:"임원평가"
		}).jqGrid('hideCol', "DEPT_CD").jqGrid('hideCol', "EMPNS").jqGrid('hideCol', "POS_TC").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 임원평가가져오기 버튼 클릭 이벤트
		 ******************************************/
		J("#btnInsaInfo").click(function() {
			getInsaInfo();
			return false;
		});
		
		/******************************************
         * 저장
         ******************************************/
        J("#btnInsert").click(function(e) {
            e.preventDefault();

            saveChk();
        });
	
	});
	
	/******************************************
     * jqGrid 사원번호
     ******************************************/
    function linkEmpn(cellvalue, options, rowObject) {
    	return '<input type="text" name="empns" value="' + cellvalue + '" class="wp50" readonly="readonly"/>';
    }
    
	/******************************************
     * jqGrid 개인업적평가여부
     ******************************************/
    function goEval(cellvalue, options, rowObject) {
    	
    	var str = "";
    	var ids = "evalYn" + options.rowId;
    	
    	if (cellvalue == "Y") {
	    	str += '<input type="radio" id="' + ids + '" name="' + ids + '" value="Y" checked="checked"  /> 평가 &nbsp;';
	    	str += '<input type="radio" id="' + ids + '" name="' + ids + '" value="N"  /> 미평가 &nbsp;';
    	} else {
    		str += '<input type="radio" id="' + ids + '" name="' + ids + '" value="Y"  /> 평가 &nbsp;';
	    	str += '<input type="radio" id="' + ids + '" name="' + ids + '" value="N" checked="checked" /> 미평가 &nbsp;';
    	}
    	
    	return str;
    	
    }
    
	/******************************************
	 * 임원평가 대상자 불러오기
	 ******************************************/
	function getInsaInfo() {
		if("Y" != "$!{evalYn.DIR_FINAL_YN}") {
			J.showConfirmBox("임원평가 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "getInsaInfoDo"); //getInsaInfoDo() 콜백함수 호출
		}else {
			alert("평가가 확정되어 대상자를 불러올수 없습니다.");
			return false; 
		}
	}
	
	function getInsaInfoDo() {
		J("#mode").val("GET");
		J("#formList").attr("action", "$!{context_path}/prs/dir/dirEvalMember/dirEvalMemberProcess.vw?type=template").submit();
	}
	
	/******************************************
     * 필수입력 체크
     ******************************************/
    function saveChk() {
		var ids	= J("#list").jqGrid('getDataIDs');
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
		
    }

    /******************************************
     * 저장
     ******************************************/
    function saveDo() {	
		
        J("#mode").val("MOD");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/dir/dirEvalMember/dirEvalMemberProcess.vw?type=template").submit();
                
        return false;

    }
    
    /******************************************
     * 라디오버튼 변경시
     ******************************************/
    function reNew() {
    	
    	var findCastTc1 = J("input:radio[name=findCastTc]:checked").val();
		J('input:radio[name=findCastTc]:input[value=findCastTc1]').attr("checked", true);
    		
		J("#formFind input[name=findDeptCd]").val("0000");
		
        J("#formFind").attr("action", "$!{context_path}/prs/dir/dirEvalMember/dirEvalMemberList.vw?type=template").submit();
                
        return false;

    }
	
//]]>
</script>

<div id="Table">
