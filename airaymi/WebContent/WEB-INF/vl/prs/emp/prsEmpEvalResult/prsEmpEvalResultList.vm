<script type="text/javascript" language="javascript" >
//<![CDATA[

    var J = jQuery;

    J(document).ready(function(){

        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();

        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/emp/prsEmpEvalResult/prsEmpEvalResultList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {
                            page   : "page",
                            total  : "total",
                            root   : "rows",
                            records: function(obj){return obj.length;},
                            repeatitems: false,
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['평가군 ID', '평가군', '사번', '이름', '상위부서코드', '처실', '조직코드', '부서', '직급코드', '직급', '직위코드', '직위', '환산점수', '순위', '최종등급', '1차평가여부', '2차평가여부'],
            colModel     :[
                            {name:'EVAL_GRP_ID'          ,index:'EVAL_GRP_ID'          ,width:10   ,align:'center' },
							{name:'EVAL_GRP_NM'          ,index:'EVAL_GRP_NM'          ,width:150   ,align:'center' },
                            {name:'EMPN'                 ,index:'EMPN'                 ,width:150   ,align:'center' },
                            {name:'KOR_NM'               ,index:'KOR_NM'               ,width:150   ,align:'center' },
							{name:'UP_DEPT_CD'           ,index:'UP_DEPT_CD'           ,width:10   ,align:'center' },
                            {name:'UP_DEPT_KOR_NM'       ,index:'UP_DEPT_KOR_NM'       ,width:100   ,align:'center' },
                            {name:'DEPT_CD'              ,index:'DEPT_CD'              ,width:10   ,align:'center' },
                            {name:'DEPT_KOR_NM'          ,index:'DEPT_KOR_NM'          ,width:150   ,align:'center' },
                            {name:'CAST_TC'              ,index:'CAST_TC'              ,width:10   ,align:'center' },
                            {name:'CAST_TC_NM'           ,index:'CAST_TC_NM'           ,width:150   ,align:'center' },
                            {name:'POS_TC'               ,index:'POS_TC'               ,width:10   ,align:'center' },
                            {name:'POS_TC_NM'            ,index:'POS_TC_NM'            ,width:150   ,align:'center' },
                            {name:'SCORE'                ,index:'SCORE'                ,width:150   ,align:'center' },
                            {name:'RANKING'              ,index:'RANKING'              ,width:150   ,align:'center' },
                            {name:'GRADE'                ,index:'GRADE'                ,width:150  ,align:'center' },
                            {name:'EVAL_SUBMIT_YN'       ,index:'EVAL_SUBMIT_YN'       ,width:10   ,align:'center' },
                            {name:'EVAL_SUBMIT_2ND_YN'   ,index:'EVAL_SUBMIT_2ND_YN'   ,width:10   ,align:'center' }
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false,
            viewrecords  : true,
            loadonce     : true,
            multiselect  : false,
            cellEdit     : true,
            gridview     : true,
            cmTemplate   : {sortable:false},
            caption:"평가결과"
        }).jqGrid('hideCol',"EVAL_GRP_ID").jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"UP_DEPT_CD").jqGrid('hideCol',"CAST_TC")
		  .jqGrid('hideCol',"POS_TC").jqGrid('hideCol',"EVAL_SUBMIT_YN").jqGrid('hideCol',"EVAL_SUBMIT_2ND_YN").setGridWidth($!{jqGrid_width});

        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });

        /******************************************
         * 신규 등록
         ******************************************/
        J("#btnInsert").click(function() {
            J("#year").val(J("#findYear").val());
            J("#mode").val("ADD");
            J("#formList").attr("action", "$!{context_path}/prs/emp/prsEmpEvalResult/prsEmpEvalResultModify.vw?type=template").submit();
        });

        /******************************************
         * 삭제 버튼 클릭 이벤트
         ******************************************/
        J("#btnDelete").click(function() {
            goDelete();
            return false;
        });

        /******************************************
         * 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            excelDownload();
            return false;
        });

		/******************************************
		 * 검색조건 텍스트 설정
		 ******************************************/
		J("#findEmpnNameText").css("ime-mode", "active");

		/******************************************
		 * 평가마감
		 ******************************************/
		J("#btnClose").click(function() {
			chkSubmitAll();
			return false;
		});
		
		/******************************************
		 * 평가결과가져오기
		 ******************************************/
		J("#btnGetData").click(function() {
		
		var ids = J("#list").jqGrid('getDataIDs');
		
		var rowdata = "";
		var submitChk = true;
		
		if("${evalSubmitYnCount}" != "${evalSubmitYnCounts}") {
		
			submitChk = false;
			
		} else {
			for (var i = 1; i <= ids.length; i++) {
				rowdata = J("#list").getRowData(i);
				if(rowdata.EVAL_SUBMIT_YN != 'Y' || rowdata.EVAL_SUBMIT_2ND_YN != 'Y'){
					submitChk = false;
				}
	
			}
		}
			
		if(!submitChk){

			J.showMsgBox("모든 평가자가 제출완료 해야 평가결과를 가져올수 있습니다..", null, null);
			return false;
		}
			
		#if("N" == "${evalSubmitYn}")			
			getEvalResult();
		#else
			alert("확정후에는 평가결과가져오기 진행 할 수 없습니다.");
		#end
			return false;
		});
		
		/******************************************
		 * 평가확정취소
		 ******************************************/
		J("#btnCloseCancel").click(function() {
			chkSubmitCancelAll();
			return false;
		});
    });

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) {
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }

    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);

        J("#year").val(J("#findYear").val());
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/emp/prsEmpEvalResult/prsEmpEvalResultModify.vw?type=template").submit();
    }

    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }

    /******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";


        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);

                }
            });
        }


        J("#mode").val("DEL");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/emp/prsEmpEvalResult/prsEmpEvalResultProcess.vw?type=template").submit();
        return false;
    }

    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#evalGrpNm").val(J("#findEvalGrpId > option:selected").text());
        J("#deptNm").val(J("#findDeptId > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/emp/prsEmpEvalResult/prsEmpEvalResultListExcel.vw?type=excel").submit();
        return false;
    }
	
	/******************************************
     * 평가확정클릭 이벤트
     ******************************************/
	function chkSubmitAll(){

		var ids = J("#list").jqGrid('getDataIDs');
		
		var rowdata = "";
		var submitChk = true;
		
		if(ids.length == 0) {
		
			J.showMsgBox("데이터가 있는 평가군을 선택해주십시요.", null, "findEvalGrpId");
			return false;
			
		} else if("${evalSubmitYnCount}" != "${evalSubmitYnCounts}") {
		
			submitChk = false;
			
		} else {
			for (var i = 1; i <= ids.length; i++) {
				rowdata = J("#list").getRowData(i);
				if(rowdata.EVAL_SUBMIT_YN != 'Y' || rowdata.EVAL_SUBMIT_2ND_YN != 'Y'){
					submitChk = false;
				}
	
			}
		}
			
		if(!submitChk){

			J.showMsgBox("모든 평가자가 제출완료 해야 평가마감이 가능합니다.", null, null);
			return false;
		}

		J.showConfirmBox("평가를 확정 하시겠습니까?", "closeDo"); //closeDo() 콜백함수 호출

	}

	function chkSubmitCancelAll(){

		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var submitChk = true;

		J.showConfirmBox("평가를 취소 하시겠습니까?", "closeCancelDo"); //closeCancelDo() 콜백함수 호출

	}

	/******************************************
	 * 평가확정
	 ******************************************/
	function closeDo() {

		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#evalCloseYn").val("Y");
		J("#formList").attr("action", "$!{context_path}/prs/emp/prsEmpEvalResult/prsEmpEvalResultProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 평가결과 불러오기
	 ******************************************/
	function getEvalResult() {
		J.showConfirmBox("평가결과 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "getData"); //getData() 콜백함수 호출
	}
	
	/******************************************
	 * 평가결과 가져오기 이벤트
	 ******************************************/
	function getData() {

		J("#mode").val("GET");
		J("#year").val(J("#findYear").val());
		J("#evalCloseYn").val("Y");
		J("#formList").attr("action", "$!{context_path}/prs/emp/prsEmpEvalResult/prsEmpEvalResultProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 평가확정취소
	 ******************************************/
	function closeCancelDo() {

		J("#mode").val("CANCEL");
		J("#year").val(J("#findYear").val());
		J("#evalCloseYn").val("N");
		J("#formList").attr("action", "$!{context_path}/prs/emp/prsEmpEvalResult/prsEmpEvalResultProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 평가년도 변경시 평가자 다시 가져오기
	 ******************************************/
	function chgYear(){
	
		J.ajax({
        	url      : "$!{context_path}/prs/emp/prsEmpEvalResult/evalGrpList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalGrpId").empty();

				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalGrpId');
				})
				chgEvalGrp();
        	}
    	});
	}
	
	/******************************************
	 * 평가년도 변경시 평가자 다시 가져오기
	 ******************************************/
	function chgEvalGrp(){
	
		J.ajax({
        	url      : "$!{context_path}/prs/emp/prsEmpEvalResult/deptList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findDeptId").empty();

				J('<option/>').attr('value','').text("전체").appendTo('#findDeptId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findDeptId');
				})
        	}
    	});
	}

//]]>
</script>

