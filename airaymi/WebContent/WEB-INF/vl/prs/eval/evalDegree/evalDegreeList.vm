    /******************************************
	 * jqGrid 가중치
	 ******************************************/
	function linkWeight(cellvalue, options, rowObject) {
		if(options.rowId==""){
			return cellvalue;
		}else{
			var str = '';			
			str += '<input type="text" id="weights" name="weights" value="' + cellvalue + '" class="inputbox wp70" maxlength="2"  onBlur="showTotWeight();"/>';

			return str;
		}
	}
	
	/******************************************
	 * 계산실행
	 ******************************************/
	function showTotWeight() {
		var total_weight=0;
		var temp_weight=0;
		var MAX_SCORE = 100;
		

		J("#formList input[name=weights]").each(function(index, item){
			if( MAX_SCORE < $(this).val()){
				$(this).val("");
				$(this).focus();
				J.showMsgBox("가중치가 100을 넘을 수 없습니다.", null, null);
			}


			temp_weight += parseFloat($(this).val());
			if( MAX_SCORE < temp_weight){
				$(this).val("");
				$(this).focus();
				J.showMsgBox("가중치합이 100을 넘을 수 없습니다.", null, null);
			}else{
				total_weight = Math.round(temp_weight*100)/100;

			}
		});
		
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function goInsert() {	
	
		var total_weight=0;
		var temp_weight=0;
		var MAX_SCORE = 100;
		

		J("#formList input[name=weights]").each(function(index, item){
			temp_weight += parseFloat($(this).val());			
			});
			
		if( temp_weight < MAX_SCORE){				
			J.showMsgBox("가중치합이 100이 되어야 합니다.", null, null);			    
		    return false;
		}
			
	/*		*/
		J.showConfirmBox("저장하시겠습니까?", "insertDo"); //insertDo() 콜백함수 호출
	}
	
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
        J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
        J("#year").val(J("#findYear").val());
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/eval/evalDegree/evalDegreeModify.vw?type=template").submit();
    }
    
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }
    
    
    
    /******************************************
	 * 저장처리
	 ******************************************/
	function insertDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var weights = "";
		var weight  = "";
		var jobTypes = "";

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';
			jobTypes += rowdata.JOB_TYPE + '|';
		}

		J("#formList input[name=weights]").each(function(){
			weight = $(this).val()==""?0:$(this).val();
			weights += weight + '|';
		});

		J("#evalDegreeIds").val(evalDegreeIds);
		J("#jobTypes").val(jobTypes);
		J("#Weights").val(weights);
		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");

		J("#formList").attr("action", "$!{context_path}/prs/eval/evalDegree/evalDegreeProcess.vw?type=template").submit();
		return false;
	}
	
    
    /******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
        var evalDegreeIds = "";
        
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);
                    evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';
                }
            });
        }
        
        J("#evalDegreeIds").val(evalDegreeIds);
        J("#mode").val("DEL");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/eval/evalDegree/evalDegreeProcess.vw?type=template").submit();
        return false;
    }
    
    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/eval/evalDegree/evalDegreeListExcel.vw?type=excel").submit();
        return false;
    }

//]]>
</script>

