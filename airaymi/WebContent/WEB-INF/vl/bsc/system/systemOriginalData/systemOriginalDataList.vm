#set($curr_url = $!{context_path} + "/bsc/system/systemOriginalData/systemOriginalDataList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/systemOriginalData/systemOriginalDataList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '기준월', '항목코드', '항목', '실부서코드', '실부서', '연계실적', '실행일'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:50    ,align:'center' },
                            {name:'MON'                  ,index:'MON'                  ,width:50    ,align:'center' },
                            {name:'ITEM_CD'              ,index:'ITEM_CD'              ,width:60    ,align:'center' },
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:170   ,align:'left'   },
                            {name:'DEPT_ID'              ,index:'DEPT_ID'              ,width:50    ,align:'center' },
                            {name:'DEPT_NM'              ,index:'DEPT_NM'              ,width:120   ,align:'left'   },
                            {name:'ACTUAL'               ,index:'ACTUAL'               ,width:150   ,align:'right'  },
							{name:'CREATE_DT'            ,index:'CREATE_DT'            ,width:90    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			cmTemplate   : {sortable:true},
			caption:"시스템연계 데이터 조회"
		});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#monNm").val(J("#findMon > option:selected").text());

		J("#formList").attr("action", "$!{context_path}/bsc/system/systemOriginalData/systemOriginalDataListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

