    		</div>
			<div class="tableTop">
                <!-- 검색 테이블 Start -->
                <div class="searchBox">
                <div><div><div>   
                    <table summary="검색조건">        
                        <caption class="none">검색조건</caption>
                        <thead><tr><th></th><th></th></tr></thead>
                        <tbody>
                            <tr>
								<td class="searchBox_tit w250">$!{YEAR} <span class="searchBar">$!{searchMap.txt2html("findYear")}년</span></td>
							</tr>
                        </tbody>
                    </table>
                </div></div></div>
                </div>
                <!--// 검색 테이블 End -->
                <div class="clear"></div>
            </div>
    		<div class="blockDetail">
    			<table summary="전략과제 등록">
					<caption class="none">전략과제 등록</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
    					<tr>
    						<th scope="row"><span class="txt_red">(*)</span><label for="managementId">경영목표</label></th>
    						<td>
    						<select name="managementId" id="managementId" title="경영목표">
								#if($!{searchMap.txt2html("mode")} == "ADD")
								<option value="">선택</option>
								#end 
									#foreach($managementList in $managementList)
									<option value="$!{CS_HTML.txt2html($managementList.MANAGEMENT_ID)}" $searchMap.getSelected("managementId", "$!{CS_HTML.txt2html($managementList.MANAGEMENT_ID)}")>$!{CS_HTML.txt2html($managementList.MANAGEMENT_NM)}</option>
									#end
							</select>
    						</td>
					    </tr>
						<tr>
    						<th scope="row"><label for="stratSubjectId">전략과제코드</label></th>
    						<td>
								#if($!{searchMap.txt2html("mode")} == "MOD")
									$!{CS_HTML.txt2html($detail.STRAT_SUBJECT_ID)}
									<input type="hidden" id="stratSubjectId" name="stratSubjectId" class="inputbox w100" value="$!{CS_HTML.txt2html($detail.STRAT_SUBJECT_ID)}" maxlength="7" readonly="readonly"/>
								#else
									<input type="hidden" id="stratSubjectId" name="stratSubjectId" class="inputbox w100" maxlength="7" />
                                    ※ 저장시 자동으로 부여됩니다.
								#end
							</td>
    					</tr>
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="stratSubjectNm">전략과제</label></th>
							<td><input type="text" id="stratSubjectNm" name="stratSubjectNm" class="inputbox w300" value='$!{CS_HTML.txt2html($detail.STRAT_SUBJECT_NM)}' maxlength="50"/></td>
						</tr>
						<tr>
							<th scope="row"><label for="sortOrder">정렬순서</label></th>
							<td><input type="text" id="sortOrder" name="sortOrder" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.SORT_ORDER)}' maxlength="5"/></td>
						</tr>
						<tr>
							<th scope="row"><label for="content">설명</label></th>
							<td>
								<textarea id="content" name="content" class="tabletext" title="설명" cols="" rows="10">$!{CS_HTML.txt2html($detail.CONTENT)}</textarea>
								<span id="contentIndicator">0</span>/1000byte
							</td>
						</tr>
						<tr>
							<th scope="row"><label for="useYn">사용여부</label></th>
