<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFindPop').serialize();

		jQuery("#kpiPoolList").jqGrid({
			url          :"$!{searchMap.txt2html("context")}/bsc/module/commModule/kpiGrpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : 320,
			colNames     :['$!{searchMap.txt2html("METRIC_GRP_NM")} 코드', '$!{searchMap.txt2html("METRIC_GRP_NM")} 명'],
			colModel     :[
							{name:'METRIC_GRP_ID'  	,index:'METRIC_GRP_ID' 	,width:100   ,align:'center' },
							{name:'METRIC_GRP_NM'   ,index:'METRIC_GRP_NM'  ,width:500   ,align:'left'   }
							],
			rowNum       : 100000,
			autowidth    : false,
			viewrecords  : true,
			loadonce     : false,
			multiselect  : true,
			cellEdit     : true,
			loadComplete : function() {
    							J("#findMetricGrpNm").select();
                           },
			caption:"$!{searchMap.txt2html("METRIC_GRP_NM")} 조회"
		}).jqGrid('hideCol',"METRIC_GRP_ID");

    	/******************************************
    	 * 검색 엔터키 이벤트
    	 ******************************************/
		J("#findMetricGrpNm").keyup(function(e)  {
        	if(e.keyCode == 13) {
        		$("#formFindPop").submit();
        	}
        });

		/******************************************
    	 * 입력완료 이벤트
    	 ******************************************/
    	J("#btnMetricInsert").click(function(e) {
    		var metricGrpId = J("#metricGrpId").val();
    		e.preventDefault();
    		setMetricGrpSet(metricGrpId);
    	});

		try {
			$("input", ".blockButton" ).button(); //버튼 ui 적용
		} catch(err) { }
	});

	/******************************************
	 * setting
	 ******************************************/
	function setMetricGrpSet() {
		var id = J("#kpiPoolList").getGridParam('selarrrow');
		var ids = J("#kpiPoolList").jqGrid('getDataIDs');
		var rowdata = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#kpiPoolList").getRowData(ids[i]);
					popRowAdd(rowdata.METRIC_GRP_ID, rowdata.METRIC_GRP_NM);
				}
			});
		}

		J.fancybox.close();
	}

	/******************************************
	 * submit
	 ******************************************/
	$("#formFindPop").submit(function() {
		J("#kpiPoolList").setGridParam({url:"$!{searchMap.txt2html("context")}/bsc/module/commModule/kpiGrpList_xml.vw?"+J("#formFindPop").serialize()});
		J("#kpiPoolList").trigger("reloadGrid");
		return false;
	});

//]]>
</script>

<form id="formFindPop" name="formFindPop" method="post" action="$!{searchMap.txt2html("context")}/bsc/module/commModule/popKpiGrpMultiSearch.vw">
	<input type="hidden" id="findYear"		name="findYear" 	value="$!{searchMap.txt2html("findYear")}" />
	<input type="hidden" id="metricGrpId"	name="metricGrpId"	value="" />

    <div style="width:540px;height:430px;">
    	<div id="popMetricGrpArea">
    		<h1 class="none">$!{searchMap.txt2html("METRIC_GRP_NM")} 조회</h1>
    		<div style="margin-left:30px;margin-bottom:10px;"><span class="strong">$!{searchMap.txt2html("METRIC_GRP_NM")}</span> : <input type="text" id="findMetricGrpNm" name="findMetricGrpNm" value="$!{searchMap.txt2html("findMetricGrpNm")}" /></div>
    		<div id="userData" style="margin-left:15px;height:340px;width:450px;">
    			<!-- 데이터그리드 Start -->
    			<div class="blockGridListTable">
    				<table id="kpiPoolList" summary="$!{searchMap.txt2html("METRIC_GRP_NM")} 조회">
    					<caption class="none">$!{searchMap.txt2html("METRIC_GRP_NM")} 조회</caption>
    					<thead><tr><th></th></tr></thead>
    					<tbody><tr><td></td></tr></tbody>
    				</table>
    				<div id="pagerPop"></div>
    			</div>
    			<!--// 데이터그리드 End -->
    		</div>
    	</div>

		<div class="blockButton_all" style="padding-top:15px;">
        	<div class="blockButton_l"></div>
        	<div class="blockButton">
        		<ul>
        			<li><input type="button" id="btnMetricInsert" value="입력완료" /></li>
        		</ul>
        	</div>
        </div>

    </div>
</form>

