#set($curr_url = $!{context_path} + "/mem/eval/memMetricAct/memMetricActList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/eval/memMetricAct/memMetricActList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '지표코드', '지표명', '사번', '평가대상자', '목표', '실적', '점수', '등급', '환산점수'],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'              ,width:0     ,align:'center' },
                            {name:'METRIC_ID'           ,index:'METRIC_ID'         ,width:0     ,align:'center' },
                            {name:'METRIC_NM'           ,index:'METRIC_NM'         ,width:250   ,align:'left' },
                            {name:'EMP_NO'              ,index:'EMP_NO'            ,width:0     ,align:'center' },
                            {name:'EMP_NM'              ,index:'EMP_NM'            ,width:100   ,align:'center' },
                            {name:'TGT_VALUE'           ,index:'TGT_VALUE'         ,width:100   ,align:'center' },
                            {name:'VALUE'               ,index:'VALUE'             ,width:100   ,align:'center' },
                            {name:'SCORE'               ,index:'SCORE'             ,width:100   ,align:'center' },
                            {name:'FINAL_GRADE'         ,index:'FINAL_GRADE'       ,width:100   ,align:'center' },
                            {name:'FINAL_SCORE'    		,index:'FINAL_SCORE'       ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
				  },
			caption:"공통지표실적"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"METRIC_ID").jqGrid('hideCol',"EMP_NO").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		/******************************************
         * 공통지표실적 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            ExcelDownload();
            return false;
        });
        
		/******************************************
         * 공통지표실적 엑셀업로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelUp").click(function() {
            ExcelUpload();
            return false;
        });
        
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();            //엑셀업로드 팝업
	});

	/******************************************
     * 공통지표실적 엑셀다운로드
     ******************************************/
    function ExcelDownload(){
        J("#formFind").attr("action", "$!{context_path}/mem/eval/memMetricAct/excelTemplateDown.vw?type=excel").submit();
        return false;
    }


	/******************************************
     * 공통지표실적 엑셀업로드
     ******************************************/
    function ExcelUpload(){
		var year = J("#findYear").val();
		var mon = J("#findMon").val();
		var findHighPgmId = J("#findHighPgmId").val();
		var findSubPgmId = J("#findSubPgmId").val();
		var findPgmId = J("#findPgmId").val();
		var findMetricGrpId = J("#findMetricGrpId").val();

		J("#anchor").attr("href","$!{context_path}/mem/eval/memMetricAct/popExcelUpload.vw?findMetricGrpId=" + findMetricGrpId + "&findYear=" + year + "&findMon=" + mon + "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
		J("#anchor").click();
    }
//]]>
</script>

