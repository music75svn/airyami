#set($curr_url = $!{context_path} + "/bsc/ahp/ahpGrp/ahpGrpList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/ahp/ahpGrp/ahpGrpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '평가단 코드', '평가단', '평가자수', '평가대상그룹수', '설명', '정렬순서'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'EVAL_USER_GRP_ID'     ,index:'EVAL_USER_GRP_ID'     ,width:150   ,align:'center' },
                            {name:'EVAL_USER_GRP_NM'     ,index:'EVAL_USER_GRP_NM'     ,width:160   ,align:'left'   ,formatter:linkUpdate},
                            {name:'USER_CNT'             ,index:'USER_CNT'             ,width:90    ,align:'center' ,formatter:linkUserUpdate},
							{name:'MEM_CNT'              ,index:'MEM_CNT'              ,width:90    ,align:'center' ,formatter:linkMemUpdate},
							{name:'CONTENT'              ,index:'CONTENT'              ,width:210   ,align:'left'   },
							{name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:70    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate: {sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);

									if(J(rowdata.USER_CNT).text() != '0') { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
									if(J(rowdata.MEM_CNT).text() != '0') { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"AHP 평가단"
        }).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_USER_GRP_ID").jqGrid('hideCol',"MEM_CNT").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpGrp/ahpGrpModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	function linkUserUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goUserModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	function linkMemUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goMemModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalUserGrpId").val(ret.EVAL_USER_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpGrp/ahpGrpModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalUserGrpIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';
				}
			});
		}

		J("#evalUserGrpIds").val(evalUserGrpIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpGrp/ahpGrpProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpGrp/ahpGrpListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 평가대상자 수정
	 ******************************************/
	function goUserModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		if(ret.EVAL_SUBMIT_YN == 'Y'){
			J.showMsgBox("평가제출을 모두 취소 후 등록할수 있습니다.", null, null);
			return;
		}

		J("#evalUserGrpId").val(ret.EVAL_USER_GRP_ID);
		J("#evalUserGrpNm").val(ret.EVAL_USER_GRP_NM_TEMP);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpGrpMapping/ahpGrpMappingModify.vw?type=template").submit();
	}

	/******************************************
	 * 평가대상그룹 수정
	 ******************************************/
	function goMemModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#evalUserGrpId").val(ret.EVAL_USER_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpItemMapping/ahpItemMappingList.vw?type=template").submit();
	}

//]]>
</script>

