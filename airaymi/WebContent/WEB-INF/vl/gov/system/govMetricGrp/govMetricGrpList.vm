#set($curr_url = $!{context_path} + "/gov/system/govMetricGrp/govMetricGrpList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/system/govMetricGrp/govMetricGrpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가범주','평가부문','정평지표POOL코드', '정평지표POOL명', '정렬순서', 'CNT'],
			colModel     :[
							{name:'YEAR'				,index:'YEAR'				,width:150   ,align:'center', sortable:true },
                            {name:'EVAL_CAT_GRP_NM'		,index:'EVAL_CAT_GRP_NM'    ,width:150   ,align:'center', sortable:true },
                            {name:'EVAL_CAT_NM'      	,index:'EVAL_CAT_NM'		,width:150   ,align:'center', sortable:true },
                            {name:'GOV_METRIC_GRP_ID'	,index:'GOV_METRIC_GRP_ID'	,width:150   ,align:'center', sortable:true },
                            {name:'GOV_METRIC_GRP_NM'   ,index:'GOV_METRIC_GRP_NM'  ,width:200   ,align:'center', sortable:true ,formatter:linkUpdate},
                            {name:'SORT_ORDER'			,index:'SORT_ORDER'         ,width:100   ,align:'center', sortable:true },
                            {name:'CNT'					,index:'CNT'         		,width:100   ,align:'center', sortable:true }
            				],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate: {sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.CNT != '0') { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"정평지표POOL"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"CNT").jqGrid('hideCol',"EVAL_CAT_CNT_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/system/govMetricGrp/govMetricGrpModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#govMetricGrpId").val(ret.GOV_METRIC_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/system/govMetricGrp/govMetricGrpModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(J("#findUseYn").val() == 'N'){
			J.showMsgBox("이미 삭제된  경영평가지표 입니다.", null, null);
			return;
		}

		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var govMetricGrpIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					govMetricGrpIds += rowdata.GOV_METRIC_GRP_ID + '|';
				}
			});
		}

		J("#govMetricGrpIds").val(govMetricGrpIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/system/govMetricGrp/govMetricGrpProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formFind").attr("action", "$!{context_path}/gov/system/govMetricGrp/govMetricGrpListExcel.vw?type=excel").submit();
		J("#formFind").attr("action", "$!{context_path}/gov/system/govMetricGrp/govMetricGrpList.vw?type=template");
		return false;
	}

//]]>
</script>

