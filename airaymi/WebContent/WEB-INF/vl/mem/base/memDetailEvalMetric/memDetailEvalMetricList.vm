<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/base/memDetailEvalMetric/memDetailEvalMetricList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '평가항목 코드', '평가항목명', '평가항목 코드', '세부평가지표', '1차평가자', '2차평가자', '동료평가', '정렬순서'],
			colModel     :[
							{name:'YEAR'                     ,index:'YEAR'                     ,width:150   ,align:'center' },
                            {name:'JOB_EVAL_ITEM_ID'         ,index:'JOB_EVAL_ITEM_ID'         ,width:150   ,align:'center' },
                            {name:'JOB_EVAL_ITEM_NM'         ,index:'JOB_EVAL_ITEM_NM'         ,width:150   ,align:'center' },
                            {name:'DETAIL_EVAL_METRIC_ID'    ,index:'DETAIL_EVAL_METRIC_ID'    ,width:150   ,align:'center' },
                            {name:'DETAIL_EVAL_METRIC_NM'    ,index:'DETAIL_EVAL_METRIC_NM'    ,width:350   ,align:'left' 	,formatter:linkUpdate},
							{name:'EVAL_1_RATE'              ,index:'EVAL_1_RATE'              ,width:100   ,align:'center'},
							{name:'EVAL_2_RATE'              ,index:'EVAL_2_RATE'              ,width:100   ,align:'center'},
							{name:'EVAL_PEER_RATE'           ,index:'EVAL_PEER_RATE'           ,width:100   ,align:'center'},
                            {name:'SORT_ORDER'               ,index:'SORT_ORDER'               ,width:100   ,align:'center' ,formatter:sortOrder}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
					J("input[name=orders]").numeric({allow:""});        	//특정문자 허용(.)
					J("input[name=orders]").css("ime-mode", "disabled"); 	//한글사용 비활성화
				  },
			caption:"업무수행평가항목"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"JOB_EVAL_ITEM_ID").jqGrid('hideCol',"JOB_EVAL_ITEM_NM").jqGrid('hideCol',"DETAIL_EVAL_METRIC_ID").setGridWidth($!{jqGrid_width});

		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true, 
          groupHeaders:[
		    {startColumnName: 'EVAL_1_RATE', numberOfColumns: 3, titleText: '<em>비율(%)</em>'}
		  ]	
        });
        
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#formFind").attr("action", "$!{context_path}/mem/base/memJobEval/memJobEvalList.vw?type=template").submit();
		});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});
		
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnAllSave").click(function() {
			goAllSave();
			return false;
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

	});
	
	/******************************************
	 * jqGrid 정렬순서
	 ******************************************/
	function sortOrder(cellvalue, options, rowObject) {
		if(options.rowId==""){
			return cellvalue;
		}else{
			var str = '';
			str += '<input type="text" id="orders" name="orders" value="' + cellvalue + '" class="inputbox wp70" maxlength="5"/>';

			return str;
		}
	}

	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(){
		J("#formList input[name=findYear]").val(J("#findYear").val());
		J("#formList input[name=findJobEvalItemId]").val(J("#formFind select[name=findJobEvalItemId]").val());
		J("#formList input[name=jobEvalItemNm]").val(J("#findJobEvalItemId > option:selected").text());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/mem/base/memDetailEvalMetric/memDetailEvalMetricModify.vw?type=template").submit();
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#formList input[name=detailEvalMetricId]").val(ret.DETAIL_EVAL_METRIC_ID);
		J("#formList input[name=findJobEvalItemId]").val(ret.JOB_EVAL_ITEM_ID);
		J("#formList input[name=jobEvalItemNm]").val(ret.JOB_EVAL_ITEM_NM);
		J("#formList input[name=findYear]").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/mem/base/memDetailEvalMetric/memDetailEvalMetricModify.vw?type=template").submit();
	}

	/******************************************
	 * 일괄저장
	 ******************************************/
	function goAllSave() {
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";

		if(ids.length == 0){
			alert("저장할 항목이 없습니다.");
			return false;
		}

		J.showConfirmBox("일괄저장하시겠습니까?", "allSaveDo"); //allSaveDo() 콜백함수 호출
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
    		J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 일괄저장 처리
	 ******************************************/
	function allSaveDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var sortOrders = "";
		var detailEvalMetricIds = "";

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			sortOrders += J("#formList input[name=orders]").eq(i).val() + '|';
			detailEvalMetricIds += rowdata.DETAIL_EVAL_METRIC_ID + '|';
		}

		J("#detailEvalMetricIds").val(detailEvalMetricIds);
		J("#sortOrders").val(sortOrders);
		J("#mode").val("SAVE");
		J("#formList").attr("action", "$!{context_path}/mem/base/memDetailEvalMetric/memDetailEvalMetricProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var detailEvalMetricIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					detailEvalMetricIds += rowdata.DETAIL_EVAL_METRIC_ID + '|';
				}
			});
		}

		J("#detailEvalMetricIds").val(detailEvalMetricIds);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/mem/base/memDetailEvalMetric/memDetailEvalMetricProcess.vw?type=template").submit();
		return false;
	}

//]]>
</script>

