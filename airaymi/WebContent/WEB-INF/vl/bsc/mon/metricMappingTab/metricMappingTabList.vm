	function goSubjectPop(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear = J("#findYear").val();
		var findMon = J("#findMon").val();
		var findSubjectId = ret.SUBJECT_ID;
		var param = "&amp;findYear=" + findYear + "&amp;findMon=" + findMon + "&amp;findSubjectId=" + findSubjectId;
		
		var url = "$!{context_path}/str/mon/subjectDetail/popSubjectDetailList.vw?type=popup" + param;
		openWinByName(url,'popSubjectMapping','900','500','yes');
	}
	
	
