#set($curr_url = $!{context_path} + "/bsc/system/closingYear/closingYearList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/str/system/closingYear/closingYearList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '년마감', '마감', '마감여부'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
							{name:'CLOSING_YN_NM'        ,index:'CLOSING_YN_NM'        ,width:150   ,align:'center' ,formatter:closingYnGubunNm},
							{name:'CLOSING_YN'           ,index:'CLOSING_YN'           ,width:150   ,align:'center' ,formatter:linkUpdate },
							{name:'CLOSING_VAL'          ,index:'CLOSING_VAL'          ,width:150   ,align:'center' ,formatter:linkUpdateVal }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			caption:"년마감관리"
		}).jqGrid('hideCol',"CLOSING_VAL").setGridWidth( $!{jqGrid_width} );
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
      
	});
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		var displayLabel = '';
		if( cellvalue == 'Y' ){
			displayLabel = '마감취소';
		}else {
			displayLabel = '마감';
		}
		var ret = '<a href=javascript:goModify(' + options.rowId + ')> ' + displayLabel + '<//a>';
		return ret;
	}
	
	function linkUpdateVal(cellvalue, options, rowObject) { 
		var displayLabel = '';
		if( cellvalue == 'Y' ){
			displayLabel = 'N';
		}else {
			displayLabel = 'Y';
		}
		return displayLabel;
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		var ret = J("#list").jqGrid('getRowData',J("#tmpRowId").val());
		J("#mode").val("MOD");
		J("#year").val( ret.YEAR );
		J("#closingYn").val( ret.CLOSING_VAL );
		J("#formList").attr("action", "$!{context_path}/str/system/closingYear/closingYearProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 마감/마감취소 실행
	 ******************************************/
	function goModify( rowId ) {
		J("#tmpRowId").val(rowId);
		J.showConfirmBox("반영하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
	
	function closingYnGubunNm(cellvalue, options, rowObject){
		var displayLabel = '';
		if( cellvalue == 'Y' ){
			displayLabel = '마감';
		}else {
			displayLabel = '미마감';
		}
		var ret = displayLabel;
		return ret;
	}
    
//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">년마감관리</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")
			
			<div class="clear"></div>
		</div>
		
		<form id="formList" name="formList" method="post" action="$!{context_path}/str/system/closingYear/closingYearProcess.vw?type=template">
			<input type="hidden"	id="mode"       	name="mode" />
			<input type="hidden"	id="year" 		 	name="year" />
			<input type="hidden"	id="closingYn"  	name="closingYn" />
			<input type="hidden"	id="tmpRowId"  		name="tmpRowId" />
			$!{searchMap.makeHiddenFind()}
			
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="년마감관리 조회결과">
							<caption class="none">년마감관리 조회결과</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>                    
					</div>
					<!--// 데이터그리드 End -->
				</div>
			</div>
		</form>
		
	</div>
	<div class="clear"></div>
</div>
