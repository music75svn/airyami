	function linkSignalEvalCatGrp(cellvalue, options, rowObject) {
		var retVal = "";
		if( "" != rowObject.EVAL_CAT_GRP_ID ){
			retVal = "<img name=\'sig\'  src=\'$!{img_path}/common/ball/ball_" + rowObject.ECG_STATUS_ID + ".gif\' > " + cellvalue;
		}else {
			retVal = cellvalue;
		}
		return  retVal;
	}

	/******************************************
	 * 평가부문 신호등 링크
