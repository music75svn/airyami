#set($curr_url = $!{context_path} + "/bsc/system/systemData/systemDataList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/systemData/systemDataList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{SC_DEPT_NM}', '$!{METRIC_NM}', '항목', '입력구분', '합산방법', '연계실적', '성과관리적용실적'],
			colModel     :[
							{name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:250   ,align:'center' }, 
                            {name:'METRIC_NM_CAL'        ,index:'METRIC_NM_CAL'        ,width:200   ,align:'center' }, 
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:150   ,align:'center' }, 
                            {name:'ITEM_DIVI_NM'         ,index:'ITEM_DIVI_NM'         ,width:80   ,align:'center' }, 
                            {name:'TIME_ROLLUP_NM'       ,index:'TIME_ROLLUP_NM'       ,width:150   ,align:'center' }, 
                            {name:'SYSTEM_ACTUAL'        ,index:'SYSTEM_ACTUAL'        ,width:150   ,align:'center' },
                            {name:'ACTUAL'               ,index:'ACTUAL'               ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			caption:"시스템 연계데이터 조회"
		});
        
		/******************************************
		 * fancybox 설정
		 ******************************************/
		J("#anchor").fancybox();    //조직선택 팝업
	});
	
	/*****************************************************
	 * 관리조직선택 팝업
	 *****************************************************/ 
	function popFindScDept() {
		var searchCodeId = J("#chargeScDeptId").val();
		J("#anchor").attr("href","$!{context_path}/bsc/module/commModule/popScDeptTree.vw?findYear=$!{searchMap.txt2html("findYear")}&amp;searchCodeId=" + searchCodeId);
		J("#anchor").click();
	}
	
	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/ 
	function setDeptInfoPop(scDeptId, scDeptNm) {
		scDeptNm = J(scDeptNm).text();
		J("#findScDeptId").val(scDeptId);
		J("#findScDeptNm").val(scDeptNm);
		J.fancybox.close();
	}
	 

//]]>
</script>

