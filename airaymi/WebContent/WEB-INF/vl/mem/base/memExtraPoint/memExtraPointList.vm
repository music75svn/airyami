#set($curr_url = $!{context_path} + "/mem/base/memExtraPoint/exraPointList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/base/memExtraPoint/memExtraPointList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['소속', '사원번호', '성명'],
			colModel     :[
							{name:'DEPT_NM'            ,index:'DEPT_NM'             ,width:250   ,align:'left' },
                            {name:'EMP_NO'             ,index:'EMP_NO'              ,width:150   ,align:'center' },
                            {name:'EMP_NM'             ,index:'EMP_NM'              ,width:150   ,align:'center' ,formatter:linkUpdate}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			cmTemplate   : {sortable:false},
			loadComplete : function() {

							},
			caption:"공모직대상자"
		}).setGridWidth( $!{jqGrid_r3_width} );

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#empNo").val("");
			J("#empNm").val("");
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnUpdate").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		* 공모직 대상자 가져오기
		******************************************/
        J("#btnExtraInsert").click(function(e) {
            e.preventDefault();

            confirmChk();
        });

		/******************************************
         * fancy Box 팝업호출
         ******************************************/
        //J("#anchor").fancybox();

		/******************************************
		 * 디폴트 조회
		 ******************************************/
		goSelectAction();
		J("#mode").val("MOD");

});


	/******************************************
	 * 상세 조회
	 ******************************************/
    function goSelectAction(rowId) {
    	var ret = J("#list").jqGrid('getRowData',rowId);
		var stMode = J("#stMode").val();
		var empNo = ret.EMP_NO;
		var empNoOld = ret.EMP_NO;
		var year = J("#year").val();
		J("#empNo").val(empNo);
		J("#year").val(year);
		J("#empNoOld").val(empNoOld);

		J.ajax({
        	url      : "$!{context_path}/mem/base/memExtraPoint/memExtraPointModify.vw",
        	cache    : false,
        	type     : "POST",
			data     : "stMode=" + stMode +"&amp;empNo=" + empNo + "&amp;findYear=" + year,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				J("#memExtraPointData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#memExtraPointData").append(data);
        	}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {

		return '<a href=javascript:goSelectAction(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var deptCds = "";
		var empNos = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					empNos += rowdata.EMP_NO + '|';
				}
			});
		}

		J("#mode").val("DEL");
		J("#empNos").val(empNos);
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/base/memExtraPoint/memExtraPointProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
     * 공모직 대상자 체크
     ******************************************/
    function confirmChk() {

		J.showConfirmBox("기존 공모직대상자가 삭제됩니다. 진행하시겠습니까?", "goDo");

    }

    /******************************************
     * 공모진 대상자 가져오기
     ******************************************/
    function goDo() {

		J("#mode").val("GET");
		J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/mem/base/memExtraPoint/memExtraPointProcess.vw?type=template").submit();

        return false;

    }

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {

		if(!SelEmptyCheck( J("#empNo").val(), "대상자" ) ) {
            J("#empNo").focus();
            return;
        }

		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#deptCd").val(J("#deptCd").val());
		J("#empNo").val(J("#empNo").val());
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/mem/base/memExtraPoint/memExtraPointProcess.vw?type=template").submit();
	}


//]]>
</script>

