	/******************************************
	 * 조회
	 ******************************************/
    function goAction(id, nm) {
		var type				= "";
		var year				= J("#findYear").val();
		var findUserId			= J("#findUserId").val();
		var findTargetStatusId	= J("#findTargetStatusId").val();
		var findActualType		= "$!{searchMap.txt2html("findActualType")}";
		var urlVal				= "";

		if(nm != "direct") {
			type = J(nm).attr("dpetClass").split("^")[0]; // 1:경영목표, 2:전략과제, 3:CSF, 4:KPI
		} else {
			type = "3";
		}

		if(type == '1' || type == '2') { //경영목표, 전략과제 선택시
			return;
		} else if(type == '3') {
			urlVal = "year=" + year + "&amp;findYear=" + year + "&amp;csfId=" + id + "&amp;findUserId=" + findUserId + "&amp;findActualType=" + findActualType + "&amp;findTargetStatusId=" + findTargetStatusId
		} else if(type == '4') {
			urlVal = "year=" + year + "&amp;findYear=" + year + "&amp;kpiId=" + id + "&amp;findUserId=" + findUserId + "&amp;findActualType=" + findActualType + "&amp;findTargetStatusId=" + findTargetStatusId
		}

		J.ajax({
        	url      : "$!{context_path}/man/tam/targetMng/targetMngDetailList.vw",
        	cache    : false,
        	type     : "POST",
			data     : urlVal,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
        		J("#detailData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#detailData").append(data);
        	}
    	});
	}

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {

		#if( "$!{yearClosingYn}" == "Y")
			J.showMsgBox($!{searchMap.txt2html("findYear")} + " 년은 마감되었습니다.", null, null);
			return false;
		#end

		#if($!{targetInputTermYn} == 'N')
