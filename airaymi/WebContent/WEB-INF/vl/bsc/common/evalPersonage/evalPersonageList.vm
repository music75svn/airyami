//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/common/evalPersonage/evalPersonageList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['사외인사 ID'
						 , '성명', '소속', '직위'
						 , '휴대폰 연락처', 'E-MAIL', '비고'
						  ],
			colModel     :[
                            {name:'PERSONAGE_ID'         ,index:'PERSONAGE_ID'         ,width:150   ,align:'center' },
                            {name:'NAME'                 ,index:'NAME'                 ,width:80   ,align:'center'  ,formatter:linkUpdate},
                            {name:'ORGAN'                ,index:'ORGAN'                ,width:150   ,align:'center' },
                            {name:'POS'                  ,index:'POS'                  ,width:100   ,align:'center' },
                            {name:'MOBILE_NO'            ,index:'MOBILE_NO'            ,width:100   ,align:'center' },
                            {name:'E_MAIL'               ,index:'E_MAIL'               ,width:200   ,align:'left' },
                            {name:'CONTENT'              ,index:'CONTENT'              ,width:430   ,align:'left' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"사외인사"
		}).jqGrid('hideCol',"PERSONAGE_ID")
		.setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/common/evalPersonage/evalPersonageModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#personageId").val(ret.PERSONAGE_ID);
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/common/evalPersonage/evalPersonageModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var personageIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					personageIds += rowdata.PERSONAGE_ID + '|';
				}
			});
		}

		J("#personageIds").val(personageIds);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/bsc/common/evalPersonage/evalPersonageProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formList").attr("action", "$!{context_path}/bsc/common/evalPersonage/evalPersonageListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

