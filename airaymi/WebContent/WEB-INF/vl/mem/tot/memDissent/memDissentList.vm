#set($curr_url = $!{context_path} + "/mem/tot/memDissent/memDissentList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/tot/memDissent/memDissentList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '이의신청시컨스', '이의제목', '성과조직', '이의신청자', '신청일', '처리상태', '처리완료일'],
			colModel     :[
							{name:'YEAR'                     ,index:'YEAR'                     ,width:0     ,align:'center' },
							{name:'DISSENT_SEQ'              ,index:'DISSENT_SEQ'              ,width:0     ,align:'center' },
                            {name:'DISSENT_TITLE'            ,index:'DISSENT_TITLE'            ,width:300   ,align:'left' ,formatter:linkUpdate},
                            {name:'DEPT_NM'                  ,index:'DEPT_NM'                  ,width:200   ,align:'left' },
                            {name:'EMP_NM'                   ,index:'EMP_NM'                   ,width:100   ,align:'center' },
                            {name:'CREATE_DT'                ,index:'CREATE_DT'                ,width:100   ,align:'center' },
                            {name:'PROC_STATUS_NM'           ,index:'PROC_STATUS_NM'           ,width:100   ,align:'center' },
                            {name:'PROC_DT'                  ,index:'PROC_DT'                  ,width:100   ,align:'center' },
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
				  },
			caption:"이의신청"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"DISSENT_SEQ").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 이의신청 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});

		/******************************************
		 * 이의신청취소 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
         * 이의신청 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            ExcelDownload();
            return false;
        });

	});

	/******************************************
     * 이의신청 엑셀다운로드
     ******************************************/
    function ExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#findProcStatusNm").val(J("#findProcStatusId > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/mem/tot/memDissent/memDissentExcel.vw?type=excel").submit();
        return false;
    }
    
	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(){
		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/mem/tot/memDissent/memDissentModify.vw?type=template").submit();
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#dissentSeq").val(ret.DISSENT_SEQ);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/mem/tot/memDissent/memDissentModify.vw?type=template").submit();
	}

	/******************************************
	 * 이의신청취소
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
    		J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 이의신청취소처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var dissentSeqs = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					dissentSeqs += rowdata.DISSENT_SEQ + '|';
				}
			});
		}

		J("#dissentSeqs").val(dissentSeqs);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/tot/memDissent/memDissentProcess.vw?type=template").submit();
		return false;
	}

//]]>
</script>

