	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/bscDataInterface/bscDataInterfaceList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['선택', '선택1','업무구분', '항목','항목1', '전년도데이터건수', '현재데이터건수', 'TABLE_NM', 'STRAT_INDEX', 'STRAT_CNT'],
			colModel     :[
							{name:'CHK'		             ,index:'CHK'  			       ,width:30    ,align:'center',formatter:linkCheck, cellattr: attrSetting},
							{name:'CHK1'		         ,index:'CHK1'  			   ,width:30    ,align:'center'},
							{name:'UBMU_GUBUN'           ,index:'UBMU_GUBUN'           ,width:100   ,align:'center', formatter:linkCodeList, cellattr: attrSetting},
							{name:'TABLE_NM'             ,index:'TABLE_NM'             ,width:150   ,align:'center', formatter:linkCodeList},
							{name:'TABLE_NM1'            ,index:'TABLE_NM1'            ,width:150   ,align:'center'},
							{name:'PAST_CNT'             ,index:'PAST_CNT'             ,width:150   ,align:'center', sorttype : 'int' },
							{name:'NEW_CNT'              ,index:'NEW_CNT'              ,width:150   ,align:'center', sorttype : 'int' },
                            {name:'TABLE_ID'             ,index:'TABLE_ID'             ,width:150   ,align:'center' },
                            {name:'STRAT_INDEX'          ,index:'STRAT_INDEX'          ,width:150   ,align:'center' },
                            {name:'STRAT_CNT'            ,index:'STRAT_CNT'            ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate: {sortable:false},
			caption:"전년데이터 일괄적용"
		}).jqGrid('hideCol',"STRAT_INDEX").jqGrid('hideCol',"STRAT_CNT").jqGrid('hideCol',"TABLE_ID").jqGrid('hideCol',"CHK1").jqGrid('hideCol',"TABLE_NM1").setGridWidth( $!{jqGrid_width} );

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 일괄적용 버튼 클릭 이벤트
		 ******************************************/
		J("#btnInsert").click(function() {
			goExec();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')> ' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		//J("#codeGrpId").val(ret.CODE_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/system/bscDataInterface/bscDataInterfaceModify.vw?type=template").submit();
	}

	/******************************************
	 * 일괄적용
	 ******************************************/
	function goExec() {
        if(!deletable("chk",true)){
        	J.showMsgBox("일괄적용 항목을 선택하십시요", null, null); 
        } else {
			J.showConfirmBox("적용하시겠습니까?", "execDo"); //execDo() 콜백함수 호출
        }
	}


	/******************************************
	 * 일괄적용 체크
	 ******************************************/
	function deletable(name, type) {
		var ret;
		var codeIds="";
		var tempNum=0;
		var map = J("input[name="+name+"]");
		for(var i=0; i<map.length; i++){
			if(map[i].checked){
				codeIds += map[i].value + '|';
				tempNum++;
			}
		}
		
		if(type){
			ret=tempNum==0?false:true; 
		}else{
			ret=codeIds; 
		}
		return ret;
	}
	
	/******************************************
	 * 일괄적용처리
	 ******************************************/
	function execDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var tableIds = "";
		var ubmu_gubuns = "";
		
		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			tableIds += rowdata.TABLE_NM1 + '|';
			ubmu_gubuns += rowdata.CHK1 + '|';
		}

		J("#tableIds").val(tableIds); //테이블명
		J("#ubmu_gubuns").val(ubmu_gubuns); //업무구분코드
		J("#chks").val(deletable("chk",false)); //체크박스코드
		
		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/system/bscDataInterface/bscDataInterfaceProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 항목명 삽입
	 ******************************************/
	function linkCodeList(cellvalue, options, rowObject) {

    	var displayLabel = '';
		if( cellvalue == 'BSC_SC_DEPT' ){
			displayLabel = '평가조직';
		}else if(cellvalue == 'BSC_SC_DEPT_MAPPING'){
			displayLabel = '평가조직매핑';
		}else if(cellvalue == 'BSC_STRATEGY'){
			displayLabel = '전략과제';
		}else if(cellvalue == 'BSC_DEPT_STRATEGY'){
			displayLabel = '부서별전략과제';
		}else if(cellvalue == 'BSC_CSF'){
			displayLabel = 'CSF';
		}else if(cellvalue == 'BSC_DEPT_CSF'){
			displayLabel = '부서별CSF';
		}else if(cellvalue == 'BSC_METRIC_GRP'){
			displayLabel = '조직별 지표';
		}else if(cellvalue == 'BSC_METRIC'){
			displayLabel = '지표POOL';
		}else if(cellvalue == 'GOV_EVAL_CAT_GRP'){
			displayLabel = '평가범주';
		}else if(cellvalue == 'GOV_EVAL_CAT'){
			displayLabel = '평가부분';
		}else if(cellvalue == 'GOV_METRIC_GRP'){
			displayLabel = '정평지표POOL';
		}else if(cellvalue == 'GOV_METRIC'){
			displayLabel = '정평지표';
		}else if(cellvalue == 'GOV_OFFICE_GRP'){
			displayLabel = '공공기관평가군';
		}else if(cellvalue == 'GOV_OFFICE'){
			displayLabel = '공공기관';
		}else if(cellvalue == 'MAN_TARGET'){
			displayLabel = '경영목표관리';
		}else if(cellvalue == 'MAN_STRATEGY'){
			displayLabel = '전략과제';
		}else if(cellvalue == 'MAN_CSF'){
			displayLabel = '경영목표CSF';
		}else if(cellvalue == 'MAN_METRIC'){
			displayLabel = 'KGS2020KPI';
		}else if(cellvalue == 'A'){
			displayLabel = '내부평가';
		}else if(cellvalue == 'B'){
			displayLabel = '정부경영평가';
		}else if(cellvalue == 'C'){
			displayLabel = '경영목표';
		}else if(cellvalue == 'D'){
			displayLabel = '공통코드';
		}else if(cellvalue == 'E'){
			displayLabel = '마일리지평가';
		}else if(cellvalue == 'CON_EVAL_ITEM'){
			displayLabel = '마일리지평가 항목';
		}

		return displayLabel;

		//return '<a href=javascript:goCodeList(' + options.rowId + ')> ' + cellvalue + '<//a>';
	}

	/******************************************
     * jqGrid Check 박스
     ******************************************/
    function linkCheck(cellvalue, options, rowObject) {
    	return '<input type="checkbox" name="chk" value="' + cellvalue + '" class="wp50"/>';
    }

	/*****************************************
	 * 업무구분 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.STRAT_INDEX;
		var rowSpan = rowObject.STRAT_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

//]]>
</script>

