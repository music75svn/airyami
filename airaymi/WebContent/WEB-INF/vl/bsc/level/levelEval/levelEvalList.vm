	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
	
		return '<a href=javascript:goAction(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 상세 조회
	 ******************************************/
    function goAction(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		var year = J("#findYear").val();
		var evalUserGrpId = ret.EVAL_USER_GRP_ID;
		var evalUserId = ret.EVAL_USER_ID;
		var metricId = ret.METRIC_ID;
		var metricNm = J(ret.METRIC_NM).text();
		var evalSubmitYn = "$evalSubmitYn";
		
		
		J("#findMetricId").val(ret.METRIC_ID);
		var stMode = J("#mode").val("MOD");
		
		
		J.ajax({
        	url      : "$!{context_path}/bsc/level/levelEval/levelEvalModify.vw",
        	cache    : false,
        	type     : "POST",
			data     : "findYear=" + year + "&amp;mode=" + stMode + "&amp;evalUserGrpId=" + evalUserGrpId + "&amp;evalUserId=" + evalUserId + "&amp;metricId=" + metricId+ "&amp;metricNm=" + metricNm+ "&amp;evalSubmitYn=" + evalSubmitYn,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
			
        		J("#levelEvalItemData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)   
        		J("#levelEvalItemData").append(data);
        	}
    	});
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	
	function saveChk(){
		//평가대상 존재여부
		if(0 == J("#list").jqGrid('getDataIDs').length){
			J.showMsgBox("평가 대상이 존재하지 않습니다. 관리자에게 문의 하십시요.", null, null);
			return false;
		}
		
		if( "$evalCloseYn" == "Y" ){
			J.showMsgBox("본 평가는 이미 평가마감되었습니다.", null, null);
			return false;
		}
	
		//평가자의 평가제출 여부
		if( "$evalSubmitYn" == "Y"){
			J.showMsgBox("본 평가는 평가제출되었습니다. 변경하시려면 관리자에게 문의해주십시오.", null, null);
			return false;
		}
		
		//평가기간 여부
		if( "$EVAL_TERM_YN" != "Y"){
			J.showMsgBox("평가기간이 아닙니다.", null, null);
			return false;
		}
	
		//평가항목 중 하나라도 비어있는 평가항목이 있을 때 저장 못하기 위한 변수
		var isContinue = true; 
		
		var itemScore = J("select[name=itemIds]");
		
		if(J("select[name=itemIds]") == null){
			J.showMsgBox("저장될 평가항목이 없습니다.", null, null);
			return false;
		}else {

			var modItemIds = "";
		
			//점수체크
    		J("select[name=itemIds]").each(function(index, item) {
			
				modItemIds += J(item).attr("id")+"|";
				
    			if(J(item).val() == "") {
    				J.showMsgBox("점수를 선택해 주십시요", null, J('select[name=itemIds]').eq(index));
    				isContinue = false;
    				return false;
    			}
    		});
		}
		
		J("#year").val(J("#findYear").val());
		J("#modItemIds").val(modItemIds);
		J("#metricId").val(J("#findMetricId").val());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#evalUserId").val(J("#findEvalUserId").val());
		
		if( !isContinue ){
			return false;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
	
	/******************************************
	 * 제출 저장
	 ******************************************/
	
	function goSubmit(){
	
		//평가기간 여부
		if( "$EVAL_TERM_YN" != "Y"){
			J.showMsgBox("평가기간이 아닙니다.", null, null);
			return false;
		}
		
		if( "$evalCloseYn" == "Y" ){
			J.showMsgBox("본 평가는 이미 평가마감되었습니다.", null, null);
			return false;
		}
	
		//평가자의 평가제출 여부
		if( "$evalSubmitYn" == "Y"){
			J.showMsgBox("본 평가는 이미 평가제출되었습니다.", null, null);
			return false;
		}
		
		var ids = J("#list").jqGrid('getDataIDs');
								
		var cnt = 0;
		
		if( ids.length > 0 ){
			for( var i = 1 ; i <= ids.length ; i++ ){
				var rowDatas = J("#list").getRowData(i);
				
				if(rowDatas.EVAL_YN_TEMP == 'Y'){
					cnt++;
				}
			}
		}
		
		if((ids.length != cnt) || ids.length == 0){
			J.showMsgBox("평가완료되지않은 지표가 있습니다. 모든지표 완료 후 평가제출이 가능합니다.", null, null);
			return false;		
		}
	
		J("#mode").val("SUB");
		J("#year").val(J("#findYear").val());
		J("#metricId").val(J("#findMetricId").val());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#evalUserId").val(J("#findEvalUserId").val());
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/bsc/level/LevelEval/levelEvalProcess.vw?type=template").submit();
		
	}
	
	/******************************************
	 * 제출취소 저장
	 ******************************************/
	
	function goSubmitReject(){
	
		if( "$evalCloseYn" == "Y" ){
			J.showMsgBox("본 평가는 이미 평가마감되었습니다.", null, null);
			return false;
		}
	
		//평가자의 평가제출 여부
		if( "$evalSubmitYn" != "Y"){
			J.showMsgBox("본 평가는 아직 제출되지 않았습니다.", null, null);
			return false;
		}
	
		J("#mode").val("RESUB");
		J("#year").val(J("#findYear").val());
		J("#metricId").val(J("#findMetricId").val());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#evalUserId").val(J("#findEvalUserId").val());
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/bsc/level/LevelEval/levelEvalProcess.vw?type=template").submit();
		
	}
	
	/******************************************
	 * 년도 변경시 평가단 변경
	 ******************************************/
	function chgYear(){
		J.ajax({
        	url      : "$!{context_path}/bsc/level/levelMapping/levelEvalUser_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalUserId").empty();
				
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserId');
				})
        	}
    	});
		
		chgEvalUser();
	}
	
	/******************************************
	 * 평가자 변경 시 평가단 변경 
	 ******************************************/
	function chgEvalUser(){
		J.ajax({
        	url      : "$!{context_path}/bsc/level/levelEval/evalUserGrp_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalUserGrpId").empty();
				
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserGrpId');
				})
        	}
    	});
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formFind").attr("action", "$!{context_path}/bsc/level/levelEval/levelEvalListExcel.vw?type=excel").submit();
		return false;
	}
	
	/******************************************
	 * 평가 저장
	 ******************************************/
	function saveDo() {
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/bsc/level/LevelEval/levelEvalProcess.vw?type=template").submit();
	}

