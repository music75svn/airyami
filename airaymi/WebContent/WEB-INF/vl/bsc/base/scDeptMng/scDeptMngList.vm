                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>

		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/base/scDeptMng/scDeptMngProcess.vw?type=template">
			<input type="hidden" id="mode"       	name="mode" />
			<input type="hidden" id="scDeptId" 		name="scDeptId" />
			<input type="hidden" id="scDeptIds"  	name="scDeptIds" />
			<input type="hidden" id="upScDeptId"  	name="upScDeptId" />
			<input type="hidden" id="upScDeptNm"  	name="upScDeptNm" />
