#set($curr_url = $!{context_path} + "/mem/base/memApartEvalGun/memApartEvalGunList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/base/memApartEvalGun/memApartEvalGunList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '별도평가군코드', '별도평가군', '별도평가군', '대상인원', '등급'],
			colModel     :[
							{name:'YEAR'                     ,index:'YEAR'                     ,width:150   ,align:'center' },
                            {name:'EVAL_EXP_RS_ID'           ,index:'EVAL_EXP_RS_ID'           ,width:0     ,align:'center' },
                            {name:'EVAL_EXP_RS_NM'           ,index:'EVAL_EXP_RS_NM'           ,width:250   ,align:'left'   },
                            {name:'EVAL_EXP_RS_NM_TMP'       ,index:'EVAL_EXP_RS_NM_TMP'       ,width:0     ,align:'center' },
                            {name:'TARGET_COUNT'             ,index:'TARGET_COUNT'             ,width:150   ,align:'center' ,formatter:linkUserList},
                            {name:'GRADE_ID'                 ,index:'GRADE_ID'                 ,width:200   ,align:'center' ,formatter:linkGrade}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
				  },
			caption:"별도평가군관리"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_EXP_RS_ID").jqGrid('hideCol',"EVAL_EXP_RS_NM_TMP").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		/******************************************
		 * 등급저장
		 ******************************************/
		J("#btnAllSave").click(function() {
			goAllSave();
			return false;
		});
		
		/******************************************
         * 별도평가군 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            ExcelDownload();
            return false;
        });
	});
	
	/******************************************
	 * jqGrid 피평가자관리 페이지 링크
	 ******************************************/
	function linkUserList(cellvalue, options, rowObject) {
		return '<a href=javascript:goUserList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 피평가자 관리화면 이동
	 ******************************************/
	function goUserList(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#userFormList input[name=findYear]").val(J("#findYear").val());
		J("#userFormList input[name=findEvalExpRsId]").val(ret.EVAL_EXP_RS_ID);
		J("#userFormList input[name=findEvalExpRsNm]").val(ret.EVAL_EXP_RS_NM_TMP);
		J("#userFormList input[name=mode]").val("MODUSER");
		J("#userFormList").attr("action", "$!{context_path}/mem/base/memApartEvalGun/memApartEvalGunUserModify.vw?type=template").submit();
	}
	
	/******************************************
     * 평가대상자관리 엑셀다운로드
     ******************************************/
    function ExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/mem/base/memApartEvalGun/memApartEvalGunExcel.vw?type=excel").submit();
        return false;
    }
	
	/******************************************
	 * jqGrid 등급세팅
	 ******************************************/
	function linkGrade(cellvalue, options, rowObject) {
		// cellvalue는 등급코드,평가항목ID
		// ex) G000010

		var str = "";
		var ids = "gGrades";
    	
    	str += '<select id="' + ids + '" name="' + ids + '" class="select w100">';
    	str += '	<option value="">선택</option>';
    #foreach($evalGrade in $evalGrade)
    	if (cellvalue == "$!{CS_HTML.txt2html($evalGrade.GRADE_ITEM_ID)}") {
    		str += '	<option value="$!{CS_HTML.txt2html($evalGrade.GRADE_ITEM_ID)}" selected>$!{CS_HTML.txt2html($evalGrade.GRADE_ITEM_NM)}</option>';
    	}else{
    		str += '	<option value="$!{CS_HTML.txt2html($evalGrade.GRADE_ITEM_ID)}">$!{CS_HTML.txt2html($evalGrade.GRADE_ITEM_NM)}</option>';
    	}
    #end
        str += '</select>';

		return str;
	}
	
	/******************************************
	 * 피평가자 관리화면 이동
	 ******************************************/
	function goUserList(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#userFormList input[name=findYear]").val(J("#findYear").val());
		J("#userFormList input[name=findEvalExpRsId]").val(ret.EVAL_EXP_RS_ID);
		J("#userFormList input[name=findEvalExpRsNm]").val(ret.EVAL_EXP_RS_NM_TMP);
		J("#userFormList input[name=mode]").val("MODUSER");
		J("#userFormList").attr("action", "$!{context_path}/mem/base/memApartEvalGun/memApartEvalGunUserModify.vw?type=template").submit();
	}

	/******************************************
	 * 등급저장
	 ******************************************/
	function goAllSave() {
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";

		if(ids.length == 0){
			alert("저장할 항목이 없습니다.");
			return false;
		}

		J.showConfirmBox("등급저장하시겠습니까?", "allSaveDo"); //allSaveDo() 콜백함수 호출
	}

	/******************************************
	 * 등급저장 처리
	 ******************************************/
	function allSaveDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalExpRsIds = "";
		var grades = "";

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			evalExpRsIds += rowdata.EVAL_EXP_RS_ID + '|';
			grades += J("#formList select[name=gGrades]").eq(i).val() + '|';
		}

		J("#evalExpRsIds").val(evalExpRsIds);
		J("#grades").val(grades);
		J("#mode").val("SAVE");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/base/memApartEvalGun/memApartEvalGunProcess.vw?type=template").submit();
		return false;
	}
//]]>
</script>

