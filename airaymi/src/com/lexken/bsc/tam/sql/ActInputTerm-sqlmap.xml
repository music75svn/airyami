<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.tam.actInputTerm">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_ACT_IN_TERM
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 실적일정관리 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_ACT_IN_TERM
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR
		     , MON
		     , START_DT
		     , END_DT
		     , GUBUN
		FROM BSC_ACT_IN_TERM
		WHERE YEAR = #findYear#
		ORDER BY MON
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 실적일정관리 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_ACT_IN_TERM
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR
			 , MON
			 , START_DT
			 , END_DT
		  FROM BSC_ACT_IN_TERM
		 WHERE YEAR = #findYear#
		   AND MON = #mon#           
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 실적일정관리 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_ACT_IN_TERM
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		INSERT INTO BSC_ACT_IN_TERM(
               YEAR
             , MON
             , START_DT
             , END_DT
             , GUBUN
             ) VALUES (
               #year#
             , #mon#
             , #startDt#
             , #endDt#
             , '01'
             )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 실적일정관리 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_ACT_IN_TERM
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_ACT_IN_TERM
		   SET START_DT = #startDt#
		     , END_DT   = #endDt#
		 WHERE YEAR     = #year#
		   AND MON      = #mon#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 실적일정관리 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_ACT_IN_TERM
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BSC_ACT_IN_TERM
		WHERE YEAR = #year#
		  AND MON = #mon#    
	</update>
	
	<!--
	==================================================================   
	  # 설명	: 해당월 등록 여부 확인
	  #	기능	: SELECT
	  #	TABLE	: BSC_ACT_IN_TERM
	==================================================================
	-->	
	<select id="getCount" parameterClass="hashMap" resultClass="java.lang.Integer">
		SELECT COUNT(*) CNT 
		  FROM BSC_ACT_IN_TERM
		 WHERE YEAR = #year#
		   AND MON = #mon#    
	</select>
	
	
</sqlMap>


