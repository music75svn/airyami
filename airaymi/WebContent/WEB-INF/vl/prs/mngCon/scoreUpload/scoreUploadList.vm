#set($curr_url = $!{context_path} + "/prs/mngCon/scoreUpload/scoreUploadList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/mngCon/scoreUpload/scoreUploadList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['평가년도', '부서코드', '부서명', '사원번호', '이름', '직급', '직위', '평가군 ID', '평가항목코드', '평가항목명', '점수'],
            colModel     :[
                            {name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'DEPT_CD'              ,index:'DEPT_CD'              ,width:150   ,align:'center' }, 
                            {name:'DEPT_FULL_NM'         ,index:'DEPT_FULL_NM'         ,width:300   ,align:'left'   }, 
                            {name:'EVAL_MEMB_EMPN'       ,index:'EVAL_MEMB_EMPN'       ,width:150   ,align:'center' }, 
                            {name:'KOR_NM'               ,index:'KOR_NM'               ,width:150   ,align:'center' }, 
                            {name:'CAST_TC_NM'           ,index:'CAST_TC_NM'           ,width:100   ,align:'center' }, 
                            {name:'POS_TC_NM'            ,index:'POS_TC_NM'            ,width:100   ,align:'center' }, 
                            {name:'EVAL_GRP_ID'          ,index:'EVAL_GRP_ID'          ,width:150   ,align:'center' }, 
                            {name:'EVAL_ITEM_ID'         ,index:'EVAL_ITEM_ID'         ,width:150   ,align:'center' }, 
                            {name:'EVAL_ITEM_NM'         ,index:'EVAL_ITEM_NM'         ,width:150   ,align:'center' }, 
                            {name:'SCORE'                ,index:'SCORE'                ,width:100   ,align:'center' }, 
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : false,
            cellEdit     : true,
            gridview     : true,
            caption:"업무성과점수 업로드"
        }).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"EVAL_GRP_ID").setGridWidth($!{jqGrid_width});
        
        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });
        
        
        /******************************************
         * 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            excelDownload();
            return false;
        });
		
		/******************************************
		 * 검색조건 변경 이벤트
		 ******************************************/
		J('#findYear').bind('change',function(){//년도를 선택하면 평가군 변경
		  chaEvalItem(J("#findYear").val());
		  chaEvalGrp(J("#findYear").val());
	    });
	    
	    
		/******************************************
		 * 엑셀업로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnUpload").click(function() {
    		goExcelUp();
		});
		
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();            //엑셀업로드 팝업
		
		
    });
	
	/******************************************
	  * 년을 선택시 평가군조회 
	 ******************************************/
	function chaEvalGrp(year){
    	J.ajax({
    		url        : "$!{context_path}/prs/mngCon/scoreUpload/scoreUploadEvalGrp_ajax.vw",
    		type       : "POST",
    		data       : "findYear=" + year,
        	dataType   : "xml",
    		contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success    : function (xml) {
				J("#findEvalGrpId").empty();
    			if(J(xml).find("items").find("item").length > 0) {
    				J(xml).find("items").find("item").each(function() {  
                    	var evalGrpId   = J(this).find("evalGrpId").text();
                    	var evalGrpNm   = J(this).find("evalGrpNm").text();
					J("#findEvalGrpId").append("<option value='" + evalGrpId +"' title='" + evalGrpNm + "'>" + evalGrpNm  + "</option>");	
				});
    		  }
        	},  
			error : function(xhr, status, error) {
				alert(error);
			}
          });

    	}


	/******************************************
	  * 년을 선택시 평가항목조회 
	 ******************************************/
	function chaEvalItem(year){
          /*평가항목 가져올 부분 작업*/
          J.ajax({
    		url        : "$!{context_path}/prs/mngCon/scoreUpload/scoreUploadEvalItem_ajax.vw",
    		type       : "POST",
    		data       : "findYear=" + year,
        	dataType   : "xml",
    		contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success    : function (xml) {
				J("#findEvalItemId").empty();
    			if(J(xml).find("items").find("item").length > 0) {
    				J(xml).find("items").find("item").each(function() {  
                    	var evalItemId   = J(this).find("evalItemId").text();
                    	var evalItemNm   = J(this).find("evalItemNm").text();
					J("#findEvalItemId").append("<option value='" + evalItemId +"' title='" + evalItemNm + "'>" + evalItemNm  + "</option>");	
				});
    		  }
        	},  
			error : function(xhr, status, error) {
				alert(error);
			}
          });	
		}
	
    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#evalGrpNm").val(J("#findEvalGrpId > option:selected").text());
        J("#evalItemNm").val(J("#findEvalItemId > option:selected").text());
        J("#year").val(J("#findYear").val());
        J("#evalGrpId").val(J("#findEvalGrpId").val());
        J("#evalItemId").val(J("#findEvalItemId").val());
        J("#formList").attr("action", "$!{context_path}/prs/mngCon/scoreUpload/scoreUploadListExcel.vw?type=excel").submit();
        return false;
    }
	
	/******************************************
	 * 엑셀업로드
	 ******************************************/
	function goExcelUp(){
		var year = J("#findYear").val();
		var findEvalGrpId = J("#findEvalGrpId").val();
		var findEvalItemId = J("#findEvalItemId").val();
		var findHighPgmId = J("#findHighPgmId").val();
		var findSubPgmId = J("#findSubPgmId").val();
		var findPgmId = J("#findPgmId").val();
		J("#anchor").attr("href","$!{context_path}/prs/mngCon/scoreUpload/popExcelUpload.vw?findYear=" + year +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId+ "&amp;findEvalGrpId=" + findEvalGrpId);
		J("#anchor").click();
	}

//]]>
</script>

