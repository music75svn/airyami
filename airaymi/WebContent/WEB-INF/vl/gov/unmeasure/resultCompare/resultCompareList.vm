#set($curr_url = $!{context_path} + "/gov/unmeasure/resultCompare/resultCompareList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/unmeasure/resultCompare/resultCompareList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '정평지표코드', '실적비교 코드', '세부평가', '전년도까지의 주요실적', '현재년도 주요실적', '개선효과',  '담당자 사번', '담당자', '정렬순서'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'GOV_METRIC_ID'        ,index:'GOV_METRIC_ID'        ,width:150   ,align:'center' },
                            {name:'COMPARE_ID'           ,index:'COMPARE_ID'           ,width:150   ,align:'center' },
                            {name:'FIELD'                ,index:'FIELD'                ,width:120   ,align:'left'   ,formatter:linkUpdate},
                            {name:'RES_OF_1_BEF_DESC'    ,index:'RES_OF_1_BEF_DESC'    ,width:150   ,align:'left'   },
                            {name:'RES_OF_PROPER_DESC'   ,index:'RES_OF_PROPER_DESC'   ,width:150   ,align:'left'   },
                            {name:'IMPROVEMENT'          ,index:'IMPROVEMENT'          ,width:150   ,align:'left'   },
                            {name:'INSERT_USER_ID'       ,index:'INSERT_USER_ID'       ,width:150   ,align:'center' },
                            {name:'INSERT_USER_NM'       ,index:'INSERT_USER_NM'       ,width:40    ,align:'center' },
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:35    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"전년도실적비교"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"GOV_METRIC_ID").jqGrid('hideCol',"COMPARE_ID").jqGrid('hideCol',"INSERT_USER_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			if(J("#findGovMetric").val()=="" || J("#findGovMetric").val()==null){
    			J.showMsgBox("정평지표를 선택하십시요", null, null);
    			return;
    		}

			if(J("#findInsertUser").val()==""){
    			J.showMsgBox("담당자를 선택하십시요", null, null);
    			return;
    		}
			J("#year").val(J("#findYear").val());
			J("#govMetricId").val(J("#findGovMetric").val());
			J("#insertUserId").val(J("#findInsertUser").val());
			J("#insertUserNm").val(J("#findInsertUser option:selected").text());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultCompare/resultCompareModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 년도별 정평지표 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgGovMetric();
		});

		/******************************************
		 * 지표별 담당자 change 이벤트
		 ******************************************/
		$('#findGovMetric').change(function(){
			chgUser();
		});
	});

	/******************************************
	 * 년도별 정평지표 조회
	 ******************************************/
	function chgGovMetric(){

		J.ajax({
        	url      : "$!{context_path}/gov/unmeasure/resultCompare/getGovMetricList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findGovMetric").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findGovMetric');
				})
				chgUser();
			}
    	});
	}

	/******************************************
	 * 정평지표별 담당자 조회
	 ******************************************/
	function chgUser(){

		J.ajax({
        	url      : "$!{context_path}/gov/unmeasure/resultCompare/getUserList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findInsertUser").empty();
				J('<option/>').attr('value', '').text('전체').appendTo('#findInsertUser');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findInsertUser');
				})
			}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#compareId").val(ret.COMPARE_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultCompare/resultCompareModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var govMetricIds = "";
		var compareIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					govMetricIds += rowdata.GOV_METRIC_ID + '|';
					compareIds += rowdata.COMPARE_ID + '|';
				}
			});
		}

		J("#govMetricIds").val(govMetricIds);J("#compareIds").val(compareIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultCompare/resultCompareProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear option:selected").text());
		J("#govMetricNm").val(J("#findGovMetric option:selected").text());
		J("#govMetricNm").val(J("#findGovMetric option:selected").text());

		if('$CS_LOGIN.chkAuthGrp("01")'=='true'){
			J("#insertUserNm").val(J("#findInsertUser option:selected").text());
		}else{
			J("#insertUserNm").val('$!{CS_LOGIN.getUser_nm()}');
		}

		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultCompare/resultCompareListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

