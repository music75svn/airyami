<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">

#set($curr_url = $!{context_path} + "/bsc/popup/salesAchievementRate/salesAchievementRateList.vw")

<head>
	#parse("/WEB-INF/vl/common/template/head.vm")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/popup/salesAchievementRate/salesAchievementRateList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['년도', '월', '부서명', '사업분류', '업무구분', '검사종류', '법구분', '대분류', '중분류', '소분류', '신청수량<br>(누계신규)', '신청금액<br>(누계신규)', '신청수량<br>(누계재검)', '신청금액<br>(누계재검)'],
			colModel     :[
							{name:'YEAR'			,index:'YEAR'				,width:40   	,align:'center' }, 
                            {name:'MON'       		,index:'MON'				,width:40   	,align:'center' },
							{name:'DEPT_NM'       	,index:'DEPT_NM'			,width:40   	,align:'center' }, 
                            {name:'RPT_TC_NM'       ,index:'RPT_TC_NM'			,width:70   	,align:'center' },
							{name:'ROLE_TC_NM'      ,index:'ROLE_TC_NM'			,width:70    	,align:'center' },
                            {name:'INSP_KIND_TC_NM' ,index:'INSP_KIND_TC_NM'	,width:70    	,align:'center' }, 
                            {name:'LAW_TC_NM'       ,index:'LAW_TC_NM'		 	,width:40    	,align:'center' 	}, 
                            {name:'STIC_LAG_TC_NM'  ,index:'STIC_LAG_TC_NM'		,width:80   	,align:'center' }, 
                            {name:'STIC_MID_TC_NM'  ,index:'STIC_MID_TC_NM'		,width:80   	,align:'center' },
                            {name:'STIC_SML_TC_NM'  ,index:'STIC_SML_TC_NM'		,width:80   	,align:'center' },
							{name:'CUM_REQ_QTY'     ,index:'CUM_REQ_QTY'	 	,width:70    	,align:'center' 	}, 
                            {name:'CUM_REQ_AMT'     ,index:'CUM_REQ_AMT'		,width:70   	,align:'right' }, 
                            {name:'CUM_RE_REQ_QTY'  ,index:'CUM_RE_REQ_QTY'     ,width:70   	,align:'center' },
                            {name:'CUM_RE_REQ_AMT'  ,index:'CUM_RE_REQ_AMT'     ,width:70   	,align:'right' }	
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cmTemplate	 : {sortable:false},
			cellEdit     : true,
			caption:"시스템 연계데이터 조회"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"MON").jqGrid('hideCol',"DEPT_CD").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcel").click(function() {
			J("#yearNm").val(J("#findYear > option:selected").text());
			J("#monNm").val(J("#findMon > option:selected").text());
			J("#deptNm").val(J("#findDeptId > option:selected").text());
			J("#itemNm").val(J("#findItemCd > option:selected").text());
			J("#deptId").val(J("#findDeptId").val());
			J("#formList").attr("action", "$!{context_path}/bsc/popup/salesAchievementRate/excel.vw?type=excel").submit();
			return false;
		});
	});
	

//]]>
</script>
</head>
<body>
<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">시스템 연계데이터 조회</h1>
		<div class="tableTop">
			
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/popup/salesAchievementRate/salesAchievementRateList.vw?type=popup">
				<input type="hidden"    id="findMetricId"	name="findMetricId"		value="$!{searchMap.txt2html("findMetricId")}" />
				<div class="clear h20"></div>
				<div class="searchBox">
    				<div><div><div>
    				<table summary="시스템 연계데이터 조회검색 조건">
						<caption class="none">시스템 연계데이터 조회 검색 조건</caption> 
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w280">
            						<span><label for="findYear">평가년월</label></span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
            							<select id="findMon" name="findMon" class="select w70">
            								##<option value="">전체</option>
            								$!CS_CODE.getCodeOption("024", $!{searchMap.txt2html("findMon")})
            							</select>
            						</span>
            					</td>
            					<td class="searchBox_tit w270">
                					<span><label for="findDeptId">부서</label></span>
									<span class="searchBar">
										<select id="findDeptId" name="findDeptId" class="select w200">
											#foreach($list in $deptList)
												<option value="$!{CS_HTML.txt2html($list.DEPT_ID)}" $searchMap.getSelected("findDeptId", "$!{CS_HTML.txt2html($list.DEPT_ID)}")>
													$!{CS_HTML.txt2html($list.DEPT_NM)}
												</option>
												
											#end
            							</select>
									</span>
                                </td>
								<td class="searchBox_tit w270">
                					<span><label for="findItem">항목</label></span>
									<span class="searchBar">
										<select id="findItemCd" name="findItemCd" class="select w200">
											#foreach($item in $itemInfo)
												<option value="$!{CS_HTML.txt2html($item.ITEM_CD)}" $searchMap.getSelected("findItemCd", "$!{CS_HTML.txt2html($item.ITEM_CD)}")>$!{CS_HTML.txt2html($item.CAL_TYPE_COL_NM)}</option>
											#end
            							</select>
									</span>
                                </td>
            				</tr>
        				</tbody>
        				<div class="blockButton " style="position:absolute;right:10px; width:150px;float:right; align:middle;padding: 0 10px 0 0;" >
                    		<input id="btnExcel" type="button" align="middle" value="엑셀다운로드", alt="엑셀다운로드" />
                    	</div>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" alt="검색" style="position:absolute;right:120px;"/>
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>
		
		<form id="formList" name="formList" method="post" action="">
			<input type="hidden" id="mode"       name="mode" />
			<input type="hidden" id="yearNm"	name="yearNm" />
			<input type="hidden" id="monNm"		name="monNm" />
			<input type="hidden" id="deptNm"	name="deptNm" />
			<input type="hidden" id="itemNm"	name="itemNm" />
			<input type="hidden" id="deptId"	name="deptId" />
			
			$!{searchMap.makeHiddenFind()}
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="시스템 연계데이터 조회 조회결과">
							<caption class="none">시스템 연계데이터 조회 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
				</div>
			</div>
		</form>
		
	</div>
	
	<div class="clear"></div>
</div>
</body>
</html>