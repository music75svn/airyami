#set($curr_url = $!{context_path} + "/str/tam/targetInputTerm/targetInputTermList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/str/tam/targetInputTerm/targetInputTermList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '시작일자', '종료일자', 'YEAR_ID'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' ,formatter:linkUpdate}, 
                            {name:'START_DT'             ,index:'START_DT'             ,width:150   ,align:'center' }, 
                            {name:'END_DT'               ,index:'END_DT'               ,width:150   ,align:'center' },
							{name:'YEAR_ID'              ,index:'YEAR_ID'              ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"목표입력기간"
		}).jqGrid('hideCol',"YEAR_ID").setGridWidth( $!{jqGrid_r3_width} );
       
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#year").attr("disabled", false);
			J("#startDt").val("");
			J("#endDt").val("");
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnUpdate").click(function(e) {
			e.preventDefault();
			saveChk();
		});
		
		/******************************************
		 * 디폴트 조회
		 ******************************************/
		goAction('$!{CS_STATIC.getYear()}');
		J("#mode").val("MOD");
	});
	
	/******************************************
	 * 상세 조회
	 ******************************************/
    function goAction(year) {
		var stMode = J("#stMode").val();
		
		J.ajax({
        	url      : "$!{context_path}/str/tam/targetInputTerm/targetInputTermModify.vw",
        	cache    : false,
        	type     : "POST",
			data     : "findYear=" + year + "&amp;stMode=" + stMode,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				J("#targetInputTermData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)   
        		J("#targetInputTermData").append(data);
        	}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goAction("' + cellvalue + '")>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/str/tam/targetInputTerm/targetInputTermModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var years = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					years += rowdata.YEAR_ID + '|';
				}
			});
		}
         
		J("#years").val(years);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/str/tam/targetInputTerm/targetInputTermProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
    	if(!J.checkLength("startDt", "평가시작일",1, 10)) {
    		return;
		}
		
		if(!J.checkLength("endDt", "평가종료일",1, 10)) {
    		return;
		}	
		
		if(J("#startDt").val() > J("#endDt").val()) {
			J.showMsgBox("평가 종료일이 시작일보다 빠를수 없습니다.", null, null); 
    		return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#startDt").val((J("#startDt").val().replace(/[.]/g, "")));
		J("#endDt").val((J("#endDt").val().replace(/[.]/g, "")));
		J("#year").attr("disabled", false);
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/str/tam/targetInputTerm/targetInputTermProcess.vw?type=template").submit();
	}	
	

//]]>
</script>

