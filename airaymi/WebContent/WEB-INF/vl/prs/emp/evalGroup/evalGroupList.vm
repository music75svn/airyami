    /******************************************
     * 조직선택 클릭이벤트
     ******************************************/
    function goAction(deptCd, deptNm) {
        setDeptInfo(deptCd, deptNm);
    }

    /*****************************************************
     * 조직선택 설정
     *****************************************************/
    function setDeptInfo(deptCd, deptNm) {

        J("#findDeptCd").val(deptCd);
        J("#findDeptNm").val(J(deptNm).text());

        J("#formFind").attr("action", "$!{context_path}/prs/emp/evalGroup/evalGroupList.vw?type=template").submit();

    }

      /*****************************************************
     * 부서명선택 설정
     *****************************************************/
    function setDeptInfoPop(deptCd, deptNm) {

        var index = J("#index").val();
        J("input[name=deptCds]").eq(index-1).val(deptCd);
        J("input[name=deptNms]").eq(index-1).val(J(deptNm).text());
        J.fancybox.close();
    }
	
	/******************************************
	 * jqGrid 평가군 자동입력
	 ******************************************/
	function goAuto() {
		J.showConfirmBox("평가조직별 평가군이 초기화 됩니다. 실행하시겠습니까?", "autoDo"); //autoDo() 콜백함수 호출
	}
	
	/******************************************
	 * 평가군  자동입력
	 ******************************************/
	function autoDo(){
	
		J("#year").val(J("#findYear").val());
		J("#mode").val("AUTO");
		J("#formList").attr("action", "$!{context_path}/prs/emp/evalGroup/evalGroupProcess.vw?type=template").submit();
		return false;	
	}

//]]>
</script>

