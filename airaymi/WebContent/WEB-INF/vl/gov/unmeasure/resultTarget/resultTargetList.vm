	/******************************************
	 * 년도별 정평지표 조회
	 ******************************************/
	function chgGovMetric(){

		J.ajax({
        	url      : "$!{context_path}/gov/unmeasure/resultTarget/getGovMetricList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findGovMetricId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findGovMetricId');
				})
				chgUser();
			}
    	});
	}

	/******************************************
	 * 정평지표별 담당자 조회
	 ******************************************/
	function chgUser(){

		J.ajax({
        	url      : "$!{context_path}/gov/unmeasure/resultTarget/getUserList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findInsertUserId").empty();
				J('<option/>').attr('value', '').text('전체').appendTo('#findInsertUserId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findInsertUserId');
				})
			}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
