#set($curr_url = $!{context_path} + "/bsc/base/scDeptMng/scDeptMngList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/base/scDeptMng/scDeptMngList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colNames     :['$!{SC_DEPT_NM}코드', '$!{SC_DEPT_NM}', '조직레벨', '조직평가그룹', '$!{METRIC_NM}담당자', '부서장', '정평점수반영여부','하위조직개수', '정렬순서'],
			colModel     :[
							{name:'SC_DEPT_ID'           ,index:'SC_DEPT_ID'           ,width:120   ,align:'center' },
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:250   ,align:'left'	,formatter:linkUpdate},
                            {name:'LEVEL_ID'             ,index:'LEVEL_ID'             ,width:80    ,align:'center' },
                            {name:'SC_DEPT_GRP_NM'       ,index:'SC_DEPT_GRP_NM'       ,width:150   ,align:'left'   },
                            {name:'BSC_USER_NM'          ,index:'BSC_USER_NM'          ,width:120   ,align:'center' },
							{name:'MANAGER_USER_NM'      ,index:'MANAGER_USER_NM'      ,width:120   ,align:'center' },
							{name:'GOV_REF_YN'       	 ,index:'GOV_REF_YN'       	   ,width:150   ,align:'center' },
							{name:'CHILD_DEPT_CNT'       ,index:'CHILD_DEPT_CNT'       ,width:150   ,align:'center' },
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
									var rowdata = J("#list").getRowData(ids[index]);
    								if(rowdata.CHILD_DEPT_CNT != 0) { //비교조건 대상 컬럼
										J(":checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"성과조직관리"
		}).jqGrid('hideCol', "CHILD_DEPT_CNT").setGridWidth($!{jqGrid_r_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			var findYear = J("#findYear").val();
			var oldYear = J("#oldYear").val();

			// 연도가 변경되지 않는 경우 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
			// formList가 submit되는 경우(신규, 수정, 삭제) 검색조건의 사용여부를  유지시켜주기 위해 설정.
			J("#formList input[name=findUseYn]").val(J("#findUseYn").val());

			if(findYear == oldYear) {
    			goGridSearch();
    			return false;
			}

			J("#findScDeptId").val("");
			J("#findLevelId").val("");
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			// 신규 등록 시 현재 조직트리에서 선택된 상위조직 정보를 설정.
			J("#upScDeptId").val(J("#findScDeptId").val());
			J("#upScDeptNm").val(J("#findScDeptNm").val());

			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/base/scDeptMng/scDeptMngModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 정평점수반영조직가져오기 버튼 클릭 이벤트
		 ******************************************/
		J("#btnGet").click(function() {

			J.showConfirmBox("본사 및 부설기관은 점수반영하시겠습니까?", "getGovRef"); //getGovRef() 콜백함수 호출

			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/bsc/base/scDeptMng/scDeptMngList_xml.vw?"+J("#formFind").serialize(), datatype:"json"});
		J("#list").trigger("reloadGrid");
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		// 미사용조직을 수정할때는 현재 조직트리에서 선택된 상위조직 정보를 설정.
		if(J("#findUseYn").val() == 'N') {
			J("#upScDeptId").val(J("#findScDeptId").val());
			J("#upScDeptNm").val(J("#findScDeptNm").val());
		}

		J("#scDeptId").val(ret.SC_DEPT_ID);	// List에서 선택한 조직을 설정.
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/base/scDeptMng/scDeptMngModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("$!{SC_DEPT_NM}매핑정보도 함께 삭제됩니다. <br>삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var scDeptIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					scDeptIds += rowdata.SC_DEPT_ID + '|';
				}
			});
		}

		J("#scDeptIds").val(scDeptIds);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/bsc/base/scDeptMng/scDeptMngProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 조직선택 클릭이벤트
	 ******************************************/
	function goAction(deptId, deptNm) {
		setDeptInfo(deptId, deptNm);
	}

	/******************************************
	 * 정평점수반영조직가져오기 클릭이벤트
	 ******************************************/
	function getGovRef() {

		J("#mode").val("GET");
		J("#formList").attr("action", "$!{context_path}/bsc/base/scDeptMng/scDeptMngProcess.vw?type=template").submit();
		return false;
	}

	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/
	function setDeptInfo(scDeptId, scDeptNm) {
		var childDeptCnt = "";

		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findScDeptId]").val(scDeptId);
		J("#formList input[name=findScDeptNm]").val(J(scDeptNm).text());
		J("#formList input[name=findLevelId]").val(J(scDeptNm).attr("class").split("^")[0]);

		childDeptCnt = J(scDeptNm).attr("class").split("^")[4];	// 선택한 조직의 하위 조직 개수
		if(childDeptCnt > 0) {
			// 하위조직이 있으면 하위조직 list를 조회함.(그리드만 다시 조회)
			// formFind의 변수들 설정.
			J("#findScDeptId").val(scDeptId);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findScDeptNm").val(J(scDeptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			J("#findLevelId").val(J(scDeptNm).attr("class").split("^")[0]);	// 조직Tree에서 선택한 조직 levelId를 설정.(0레벨일경우 리스트 조회 시 선택조직도 리스트에 포함시키기 위함)

			goGridSearch();
		} else {
			// 하위조직이 없으면 수정페이지로 이동함.
			J("#scDeptId").val(scDeptId);				// 조직Tree에서 선택한 조직코드를 설정.
			J("#mode").val("MOD");

			J("#formList").attr("action", "$!{context_path}/bsc/base/scDeptMng/scDeptMngModify.vw?type=template").submit();
		}
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#upScDeptNm").val(J("#findScDeptNm").val());
		J("#useYnNm").val(J("#findUseYn > option:selected").text());
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/base/scDeptMng/scDeptMngExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

