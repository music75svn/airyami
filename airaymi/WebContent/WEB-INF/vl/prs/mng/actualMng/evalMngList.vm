#set($curr_url = $!{context_path} + "/prs/mng/actualMng/evalMngList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/mng/actualMng/evalMngList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['평가년도','월', '사원번호', '평가대상자 순번', '이름', '부서코드', '부서 명', '직급코드','직급', '직위코드', '직위' ,'개인업적 평가 여부', '평가군 ID', '직무수행기간','계획서상태', '계획서상태','실적상태', '실적상태'],
            colModel     :[
                            {name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'MON'                  ,index:'MON'                  ,width:100   ,align:'center' },
                            {name:'EVAL_MEMB_EMPN'       ,index:'EVAL_MEMB_EMPN'       ,width:100   ,align:'center' }, 
                            {name:'EVAL_MEMB_EMPN_SEQ'   ,index:'EVAL_MEMB_EMPN_SEQ'   ,width:150   ,align:'center' }, 
                            {name:'KOR_NM'               ,index:'KOR_NM'               ,width:100   ,align:'center'  ,formatter:linkUpdate}, 
                            {name:'DEPT_CD'              ,index:'DEPT_CD'              ,width:150   ,align:'center' }, 
                            {name:'DEPT_FULL_NM'         ,index:'DEPT_FULL_NM'         ,width:200   ,align:'left'   }, 
                            {name:'CAST_TC'              ,index:'CAST_TC'              ,width:150   ,align:'center' }, 
                            {name:'CAST_TC_NM'           ,index:'CAST_TC_NM'           ,width:150   ,align:'center' }, 
                            {name:'POS_TC'               ,index:'POS_TC'               ,width:150   ,align:'center' }, 
                            {name:'POS_TC_NM'            ,index:'POS_TC_NM'            ,width:200   ,align:'left'   }, 
                            {name:'PRS_YN'               ,index:'PRS_YN'               ,width:150   ,align:'center' }, 
                            {name:'EVAL_GRP_ID'          ,index:'EVAL_GRP_ID'          ,width:150   ,align:'center' }, 
                            {name:'WORKDATE'             ,index:'WORKDATE'             ,width:250   ,align:'center' }, 
                            {name:'PLAN_STATUS_ID'       ,index:'PLAN_STATUS_ID'       ,width:150   ,align:'center' }, 
                            {name:'PLAN_STATUS_NM'       ,index:'PLAN_STATUS_NM'       ,width:150   ,align:'center' },
                            {name:'ACT_STATUS_ID'        ,index:'ACT_STATUS_ID'        ,width:150   ,align:'center' }, 
                            {name:'ACT_STATUS_NM'        ,index:'ACT_STATUS_NM'        ,width:150   ,align:'center' , formatter:linkReturnReason}
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : false,
            cellEdit     : true,
            gridview     : true,
            caption:"성과계획서 대상자"
        }).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_MEMB_EMPN_SEQ").jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"CAST_TC").jqGrid('hideCol',"POS_TC").jqGrid('hideCol',"PRS_YN").jqGrid('hideCol',"EVAL_GRP_ID").jqGrid('hideCol',"PLAN_STATUS_ID");
        jQuery("#list").jqGrid('hideCol',"ACT_STATUS_ID").jqGrid('hideCol',"MON");
        jQuery("#list").setGridWidth($!{jqGrid_width});
        
        
        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });
        
        
		/******************************************
	     * 엑셀다운로드 버튼 클릭 이벤트
	     ******************************************/
	    J("#btnExcel").click(function() {
	        excelDownload();
	        return false;
	    });
        
        /******************************************
         * FANCYBOX
         ******************************************/
        J("#anchor").fancybox();      //상세팝업

    });

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * jqGrid 반려사유 링크
     ******************************************/
    function linkReturnReason(cellvalue, options, rowObject) {
        var returnValue = cellvalue;
        if(rowObject.ACT_STATUS_ID == "05")
            returnValue += '<img src="$!{img_path}/common/board/ic_search.gif" class="valign_middle" alt="반려사유선택" onClick="goReturnReason(\''+rowObject.YEAR+'\',\''+rowObject.MON+'\',\''+rowObject.EVAL_MEMB_EMPN+'\', \''+rowObject.EVAL_MEMB_EMPN_SEQ+'\')" />'
            
        return returnValue;
    }
    
    /******************************************
     * 반려사유 조회
     ******************************************/
    function goReturnReason(year, mon, evalMembEmpn, evalMembEmpnSeq){
        J("#anchor").attr("href","$!{context_path}/prs/mng/actualApprove/popReturnReason.vw?findYear="+year+"&amp;findMon="+mon+"&amp;evalMembEmpn="+evalMembEmpn+"&amp;evalMembEmpnSeq="+evalMembEmpnSeq);
        J("#anchor").click();
        return false;
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
        J("#evalMembEmpnSeq").val(ret.EVAL_MEMB_EMPN_SEQ);
        J("#evalMembEmpn").val(ret.EVAL_MEMB_EMPN);
        J("#year").val(ret.YEAR);
        J("#formList input[name*='findYear']").val(ret.YEAR);
        J("#formList input[name*='findMon']").val(ret.MON);
        J("#mode").val("LIST");
        J("#formList").attr("action", "$!{context_path}/prs/mng/actualMng/actualMngList.vw?type=template").submit();
    }

    
    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#castTcNm").val(J(":input:radio[name=findCastTc]:checked").attr("alt"));
        J("#findMonNm").val(J("#findMon > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/mng/actualMng/evalMngListExcel.vw?type=excel").submit();
        return false;
    }
    
//]]>
</script>

