#set($curr_url = $!{context_path} + "/prs/exc/excGroup/excGroupList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/exc/excGroup/excGroupList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '별도평가군 코드', '별도평가군', '대상인원', '평가방법', '등급'],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'               ,width:150   ,align:'center' }, 
                            {name:'EXC_GRP_ID'          ,index:'EXC_GRP_ID'         ,width:150   ,align:'center' }, 
                            {name:'EXC_GRP_NM'        	,index:'EXC_GRP_NM'        	,width:200   ,align:'center' ,formatter:linkUpdate},
                            {name:'EXC_COUNT'          	,index:'EXC_COUNT'          ,width:100   ,align:'center' ,formatter:linkUseList }, 
							{name:'EVAL_TYPE'           ,index:'EVAL_TYPE'          ,width:100   ,align:'center' },
							{name:'EVAL_GRADE'          ,index:'EVAL_GRADE'         ,width:100   ,align:'center' } 
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			##cmTemplate	 : {sortable:false},
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
    								if(J(rowdata.EXC_COUNT).text() != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    								if(rowdata.EXC_GRP_ID == 'EX99999' || rowdata.EXC_GRP_ID == 'EX99998') { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"평가군"
		}).jqGrid('hideCol',"YEAR").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		/******************************************
		 * 대상자 가져오기
		 ******************************************/
		J("#btnAuto").click(function() {
			goAuto();
			return false;
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
	});
	
	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(){
	
		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/prs/exc/excGroup/excGroupModify.vw?type=template").submit();	
	}

	/******************************************
	 * jqGrid 대상자 자동입력
	 ******************************************/
	function goAuto() {
		
		J.showConfirmBox("별도평가군 대상자가 초기화 되어 가져오게 됩니다. 실행하시겠습니까?", "autoDo"); //autoDo() 콜백함수 호출
		
	}
	
	/******************************************
	 * 대상자 자동입력
	 ******************************************/
	function autoDo(){
	
		J("#year").val(J("#findYear").val());
		J("#mode").val("AUTO");
		J("#formList").attr("action", "$!{context_path}/prs/exc/excGroup/excGroupProcess.vw?type=template").submit();
		return false;	
	}	

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * jqGrid 대상자관리 리스트
	 ******************************************/
	function linkUseList(cellvalue, options, rowObject) { 
		return '<a href=javascript:goUseList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
	
		var ret = J("#list").jqGrid('getRowData',rowId);
	
		if('EX99999' != ret.EXC_GRP_ID && 'EX99998' != ret.EXC_GRP_ID){
			J("#excGrpId").val(ret.EXC_GRP_ID);
			J("#year").val(J("#findYear").val());
			J("#mode").val("MOD");
			J("#formList").attr("action", "$!{context_path}/prs/exc/excGroup/excGroupModify.vw?type=template").submit();
		}else {
			J.showMsgBox("대외파견직 평가군과 근무기간2개월미달 평가군은 수정 할 수 없습니다.", null, null); 
		}
	}
	
	/******************************************
	 * 대상자관리 이동
	 ******************************************/
	function goUseList(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#excGrpId").val(ret.EXC_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/exc/excGroup/excGroupUseList.vw?type=template").submit();
	}	
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {		
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var excGrpIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					excGrpIds += rowdata.EXC_GRP_ID + '|';
				}
			});
		}
        
		J("#excGrpIds").val(excGrpIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/exc/excGroup/excGroupProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/prs/exc/excGroup/excGroupListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

