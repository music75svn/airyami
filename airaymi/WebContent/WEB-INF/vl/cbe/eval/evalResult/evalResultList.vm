                            {name:'NAME'                 ,index:'NAME'                 ,width:150   ,align:'center' ,sortable:false ,formatter:linkUpdate}, 
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:150   ,align:'center' ,sortable:false}, 
                            {name:'JIKGUB_NM'            ,index:'JIKGUB_NM'            ,width:150   ,align:'center' ,sortable:false}, 
                            {name:'FRS_DEPT_CONVERT_SCORE' ,index:'FRS_DEPT_CONVERT_SCORE' ,width:150   ,align:'center' ,sortable:false}, 
                            {name:'SEC_DEPT_CONVERT_SCORE' ,index:'SEC_DEPT_CONVERT_SCORE' ,width:150   ,align:'center' ,sortable:false}, 
                            {name:'TEAM_CONVERT_SCORE'   ,index:'TEAM_CONVERT_SCORE'   ,width:150   ,align:'center' ,sortable:false}, 
