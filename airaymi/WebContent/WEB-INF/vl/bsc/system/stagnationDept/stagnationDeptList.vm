#set($curr_url = $!{context_path} + "/stagnationDept/stagnationDeptList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/stagnationDept/stagnationDeptList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['부서코드', '부서명'],
			colModel     :[
							{name:'SC_DEPT_ID'     ,index:'SC_DEPT_ID'    ,width:300    ,align:'center' },
							{name:'SC_DEPT_NM'     ,index:'SC_DEPT_NM'    ,width:300    ,align:'left'   ,formatter:linkUpdate },
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : true,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			caption:"부진부서"
		}).jqGrid('hideCol',"METRIC_ID").jqGrid('hideCol',"SC_DEPT_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#year").val(J("#findYear").val());
			J("#useYn").val(J("#findUseYn").val());
			J("#formList").attr("action", "$!{context_path}/bsc/system/stagnationDept/stagnationDeptModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#scDeptId").val(ret.SC_DEPT_ID);
		J("#metricId").val(ret.METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#useYn").val(J("#findUseYn").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/system/stagnationDept/stagnationDeptModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
        if(!J.gridSelectChk("list")){
        	J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
        } else {
        	J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
        var scDeptIds = "";
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                	rowdata = J("#list").getRowData(ids[i]);
                	scDeptIds += rowdata.SC_DEPT_ID + '|';
                }
            });
        }

		J("#scDeptIds").val(scDeptIds);
		J("#year").val(J("#findYear").val());
        J("#mode").val("DEL");
        J("#formList").attr("action", "$!{context_path}/bsc/system/stagnationDept/stagnationDeptProcess.vw?type=template").submit();
	}

//]]>
</script>

