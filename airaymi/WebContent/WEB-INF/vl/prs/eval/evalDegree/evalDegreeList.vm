    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/eval/evalDegree/evalDegreeList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['기준년도', '평가차수 코드', '평가차수', '가중치(%)', '지표정의', 'JOB_TYPE'],
            colModel     :[
                            {name:'YEAR'                 ,index:'YEAR'                 ,hidden:true      ,width:150   ,align:'center' }, 
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,hidden:true	     ,width:150   ,align:'center' }, 
                            {name:'CODE_NM'              ,index:'CODE_NM'              ,hidden:false	 ,width:150   ,align:'center'}, 
                            {name:'WEIGHT'               ,index:'WEIGHT'               ,hidden:false	 ,width:150   ,align:'center' ,formatter:linkWeight}, 
                            {name:'CONTENT'              ,index:'CONTENT'              ,hidden:false     ,width:150   ,align:'center' },
                            {name:'JOB_TYPE'             ,index:'JOB_TYPE'             ,hidden:true     ,width:150   ,align:'center' }
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : false,
            cellEdit     : true,
            gridview     : true,
            loadComplete : function() {
					J("input[name=weights]").numeric({allow:"."});        //특정문자 허용(.)
					J("input[name=weights]").css("ime-mode", "disabled"); //한글사용 비활성화
					var grid = J("#list");
				  },
            caption:"간부개인업적평가 평가가중치"
        });
        //}).jqGrid('hideCol',"YEAR").setGridWidth($!{jqGrid_width});
        
        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });
        
        /******************************************
         * 신규 등록
         ******************************************/
        J("#btnInsert").click(function() {
            goInsert();
		    return false;
        });
        
        /******************************************
         * 삭제 버튼 클릭 이벤트
         ******************************************/
        J("#btnDelete").click(function() {
            goDelete();
            return false;
        });
        
        /******************************************
         * 엑셀다운로드 버튼 클릭 이벤트
