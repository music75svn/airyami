#set($curr_url = $!{context_path} + "/bsc/dept/deptGovWeight/deptGovWeightList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		#set ($measFirst = "")
		#set ($unMeasFirst = "")
		#set ($measCnt = 0)
		#set ($unMeasCnt = 0)
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/dept/deptGovWeight/deptGovWeightList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :[	'부서명',
							
					#foreach($govMetric in $govMetricList)
							'$!{CS_HTML.txt2html($govMetric.GOV_METRIC_NM)}',
						#if ($govMetric.GBN_ID == "01")
							#if ($measFirst == "")
								#set ($measFirst = $govMetric.GOV_METRIC_ID) 
							#end
							#set ($measCnt = $measCnt + 1)
						#else
							#if ($unMeasFirst == "")
								#set ($unMeasFirst = $govMetric.GOV_METRIC_ID) 
							#end
							#set ($unMeasCnt = $unMeasCnt + 1)
						#end
					#end
							
							'계(책임가중치 합)',
							'반영비율'],
			colModel     :[
                            {name:'SC_DEPT_NM'				,index:'SC_DEPT_NM'					,width:80     ,align:'left' 	},
					#foreach($govMetric in $govMetricList)
							{name:'$!{CS_HTML.txt2html($govMetric.GOV_METRIC_ID)}'					,index:'$!{CS_HTML.txt2html($govMetric.GOV_METRIC_ID)}'					,width:40     ,align:'center' 	},
					#end                             
                            {name:'TOTAL_WEIGHT'			,index:'TOTAL_WEIGHT'				,width:50     ,align:'center'	},
                            {name:'RATE'					,index:'RATE'						,width:40     ,align:'center'	}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			loadonce     : false,
			multiselect  : false,
			cellEdit     : false,
			shrinkToFit  : false,
			cmTemplate: {sortable:false},
			caption:"부서별 정평지표 점수반영"
        }).setGridWidth($!{jqGrid_width});
        
        J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true, 
          groupHeaders:[
		    {startColumnName: '$measFirst', numberOfColumns:'$measCnt', titleText: '<em>계량지표</em>'},
		    {startColumnName: '$unMeasFirst', numberOfColumns:'$unMeasCnt', titleText: '<em>비계량지표</em>'}
		  ]	
        });
        
        J("#list").jqGrid('setFrozenColumns');
        J("#list").trigger('reloadGrid');
        		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();            //엑셀업로드 팝업
		
		/******************************************
		 * 엑셀업로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnUpload").click(function() {
    		goExcelUp();
		});
		
		/******************************************
		 * 화면 초기셋팅
		 ******************************************/
		init();
		
	});
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/dept/deptGovWeight/deptGovWeigthListExcel.vw?type=excel").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀업로드
	 ******************************************/
	function goExcelUp(){
        var year = J("#findYear").val();
        var findHighPgmId = J("#findHighPgmId").val();
        var findSubPgmId = J("#findSubPgmId").val();
        var findPgmId = J("#findPgmId").val();
        J("#anchor").attr("href","$!{context_path}/bsc/dept/deptGovWeight/popExcelUpload.vw?findYear=" + year  +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
        J("#anchor").click();		
		
	}
	
	/*****************************************************
	 * 화면초기셋팅
	 *****************************************************/ 
	function init() {
		if(J("#cnt").val() =="0"){
			J.showMsgBox("검색 평가년도의 정평지표가 없습니다."); 	
		}
	}

	
//]]>
</script>

