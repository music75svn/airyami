#set($curr_url = $!{context_path} + "/prs/bonus/bonDisSet/bonDisSetList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/bonus/bonDisSet/bonDisSetList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '사번', '이름', '부서명', '부(팀)명', '직급', '직위', '입사일', '근무개월(월)', '격려금 지급액(원)'],
			colModel     :[
							{name:'YEAR'				,index:'YEAR'				,width:80   ,align:'center'  },
                            {name:'EMPN'				,index:'EMPN'				,width:80   ,align:'center'  },
                            {name:'KOR_NM'				,index:'KOR_NM'				,width:80   ,align:'center'  },
							{name:'DEPT_NM'				,index:'DEPT_NM'			,width:80   ,align:'center'  },
							{name:'DEPT_DETAIL_NM'		,index:'DEPT_DETAIL_NM'		,width:80   ,align:'center'  },
							{name:'CAST_TC_NM'			,index:'CAST_TC_NM'			,width:80   ,align:'center'  },
							{name:'POS_TC_NM'			,index:'POS_TC_NM'			,width:110  ,align:'center'  },
                            {name:'START_PCMT_DATE'		,index:'START_PCMT_DATE'	,width:110  ,align:'center'  },
                            {name:'WORK_MON'			,index:'WORK_MON'			,width:80   ,align:'center'  },
                            {name:'SEP_PAY'				,index:'SEP_PAY'			,width:80   ,align:'right'   }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate: {sortable:false},
			caption:"파견직"
		}).jqGrid('hideCol',"YEAR").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 엑셀업로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnBonDisSetUpload").click(function() {
    		J.showConfirmBox("엑셀업로드를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "excelUpload");
    		return false;
		});


		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();            //엑셀업로드 팝업
	});


	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/prs/bonus/bonDisSet/bonDisSetListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
     * 파견직설정 엑셀업로드
     ******************************************/
    function excelUpload(){

        var year = J("#findYear").val();
        var findHighPgmId = J("#findHighPgmId").val();
        var findSubPgmId = J("#findSubPgmId").val();
        var findPgmId = J("#findPgmId").val();
        J("#anchor").attr("href","$!{context_path}/prs/bonus/bonDisSet/popBonDisSetExcelUpload.vw?findYear=" + year  +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
        J("#anchor").click();
    }


//]]>
</script>

