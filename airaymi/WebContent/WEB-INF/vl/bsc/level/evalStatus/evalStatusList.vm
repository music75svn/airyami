#set($curr_url = $!{context_path} + "/bsc/level/evalStatus/evalStatusList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/level/evalStatus/evalStatusList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '평가단 ID', '사번', '평가자', '평가조직', '직급' ,'평가단' ,'평가상태', 'EMAIL'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'EVAL_USER_GRP_ID'     ,index:'EVAL_USER_GRP_ID'     ,width:150   ,align:'center' },
                            {name:'EVAL_USER_ID'         ,index:'EVAL_USER_ID'         ,width:150   ,align:'center' },
							{name:'USER_NM'              ,index:'USER_NM'              ,width:120   ,align:'center' },
                            {name:'DEPT_NM'              ,index:'DEPT_NM'              ,width:200   ,align:'center' },
                            {name:'POS_NM'               ,index:'POS_NM'               ,width:80    ,align:'center' },
							{name:'EVAL_USER_GRP_NM'     ,index:'EVAL_USER_GRP_NM'     ,width:150   ,align:'center' },
                            {name:'EVAL_SUBMIT_YN_NM'    ,index:'EVAL_SUBMIT_YN_NM'    ,width:80    ,align:'center' },
							{name:'EMAIL'                ,index:'EMAIL'                ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
								getEvalStatusInfo(); //평가군 마감정보 가져오기
								 },
			caption:"평가현황"
        }).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_USER_GRP_ID").jqGrid('hideCol',"EVAL_USER_ID").jqGrid('hideCol',"EMAIL").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//J("#formFind").attr("action", "$!{context_path}/bsc/level/evalStatus/evalStatusList.vw?type=template").submit();
		});

		/******************************************
		 * 평가마감 버튼 클릭 이벤트
		 ******************************************/
		J("#bClosingY").click(function() {
			goClose();
			return false;
		});

		/******************************************
		 * 평가마감취소 버튼 클릭 이벤트
		 ******************************************/
		J("#bClosingN").click(function() {
			goCancle();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 메일 버튼 클릭 이벤트
		 ******************************************/
		J("#btnMail").click(function() {
			mailWrite();
			return false;
		});

		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
