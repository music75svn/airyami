				})
				chgEvalGrp();
        	}
    	});
	}

	/******************************************
	 * 평가단 변경 시 전략과제 변경 (AJAX)
	 ******************************************/
	function chgEvalGrp(){
		J.ajax({
        	url      : "$!{context_path}/bsc/matrix/matrixEval/strategyList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findStrategyId").empty();

				J('<option/>').attr('value', "").text("전체").appendTo('#findStrategyId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findStrategyId');
				})
        	}
    	});
	}

	function saveChk(){
		//평가자의 평가제출 여부
		if( "$EVAL_SUBMIT_YN" == "Y"){
			J.showMsgBox("본 평가는 평가제출되었습니다. 변경하시려면 관리자에게 문의해주십시오.", null, null);
			return;
		}

		//평가기간 여부
		if( "$EVAL_TERM_YN" != "Y"){
			J.showMsgBox("평가기간이 아닙니다.", null, null);
			return;
		}

		var evalItemList = J(":input[name=evalItemScores]");

		//평가항목 중 하나라도 비어있는 평가항목이 있을 때 저장 못하기 위한 변수
		var isContinue = true;

		if( 0 >= evalItemList.length ){
			J.showMsgBox("저장될 평가항목이 없습니다.", null, null);
			return false;
		}else {

    		J.each(evalItemList,function(){
    			var grp_id = J(this).attr("id");
    			var str = J(this).text();
    			var val = J(this).val();
				var id = grp_id.substring(8);

				J('#modItemIds').val( J('#modItemIds').val() + id + "|" );
				J('#modItemScores').val( J('#modItemScores').val() + val + "|" );

				if( char_trim(val).length <= 0 ){

					isContinue = false;
					J('#modItemIds').val('');
					J('#modItemScores').val('');
					J(this).focus();

					J.showMsgBox("평가항목 점수를 입력해야합니다.", null, null);
					return false;	// each 함수 out
				}
    		});
		}

		if( !isContinue ){
			return false;
		}
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}


	/******************************************
	 * 평가내역조회 팝업
