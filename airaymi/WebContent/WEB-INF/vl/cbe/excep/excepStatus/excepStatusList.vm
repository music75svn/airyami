#set($curr_url = $!{context_path} + "/cbe/excep/excepStatus/excepStatusList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/cbe/excep/excepStatus/excepStatusList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가차수 코드', '평가조직ID', '평가자 사번', '평가자', '평가대상조직', '평가제출 여부', '평가상태', 'EMAIL'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:150   ,align:'center' },
                            {name:'SC_DEPT_ID'           ,index:'SC_DEPT_ID'           ,width:150   ,align:'center' },
                            {name:'EVAL_USER_ID'         ,index:'EVAL_USER_ID'         ,width:150   ,align:'center' },
                            {name:'EVAL_USER_NM'         ,index:'EVAL_USER_NM'         ,width:100   ,align:'center' },
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:200   ,align:'left'   },
                            {name:'EVAL_SUBMIT_YN'       ,index:'EVAL_SUBMIT_YN'       ,width:150   ,align:'center' },
							{name:'EVAL_SUBMIT_NM'       ,index:'EVAL_SUBMIT_NM'       ,width:150   ,align:'center' },
							{name:'EMAIL'       		 ,index:'EMAIL'       		   ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"평가진행현황"
	    }).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"SC_DEPT_ID").jqGrid('hideCol',"EVAL_USER_ID").jqGrid('hideCol',"EVAL_SUBMIT_YN").jqGrid('hideCol',"EMAIL").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/cbe/excep/excepStatus/excepStatusModify.vw?type=template").submit();
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnClose").click(function() {
			chkSubmitAll();
			return false;
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnCloseCancel").click(function() {
			chkConfirmYn();
			return false;
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
		});

		/******************************************
		 * 메일 버튼 클릭 이벤트
		 ******************************************/
		J("#btnMail").click(function() {
			mailWrite();
			return false;
		});
	});

	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){

		J.ajax({
        	url      : "$!{context_path}/cbe/excep/excepDept/getDegreeList_ajax.vw",
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#scDeptId").val(ret.SC_DEPT_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepStatus/excepStatusModify.vw?type=template").submit();
	}

	function chkSubmitAll(){

		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var submitChk = true;

		for (var i = 1; i <= ids.length; i++) {
			rowdata = J("#list").getRowData(i);

			if(rowdata.EVAL_SUBMIT_YN != 'Y'){
				submitChk = false;
			}

		}

		if(!submitChk){
			J.showMsgBox("모든 평가자가 제출완료 해야 평가마감이 <br>가능합니다.", null, null);
			return false;
		}

		J.showConfirmBox("평가를 마감 하시겠습니까?", "closeDo"); //closeDo() 콜백함수 호출

	}

	/******************************************
	 * 마감처리
	 ******************************************/
	function closeDo() {

		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#evalCloseYn").val('Y');
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepStatus/excepStatusProcess.vw?type=template").submit();
		return false;
	}

	function chkConfirmYn(){

		J.showConfirmBox("평가마감을 취소 하시겠습니까?", "closeCancelDo"); //closeCancelDo() 콜백함수 호출

	}

	/******************************************
	 * 마감취소처리
	 ******************************************/
	function closeCancelDo() {

		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#evalCloseYn").val('N');
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepStatus/excepStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var scDeptIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';scDeptIds += rowdata.SC_DEPT_ID + '|';
				}
			});
		}

		J("#evalDegreeIds").val(evalDegreeIds);J("#scDeptIds").val(scDeptIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepStatus/excepStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#evalDegreeNm").val(J("#findEvalDegreeId > option:selected").text());
		J("#evalDegreeId").val(J("#findEvalDegreeId > option:selected").val());
		J("#evalSubmitNm").val(J("#findEvalSubmitYn > option:selected").text());
		J("#evalSubmitYn").val(J("#findEvalSubmitYn > option:selected").val());
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepStatus/excepStatusListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 메일발송 팝업
	 ******************************************/
	function mailWrite(){
		var list = "";
		var id = "";
		var ids = "";
		var rowdata = "";
		var toMail = "";
		var toName = "";
		var toNameList = "";

		list = "list";
		id = J("#list").getGridParam('selarrrow');
		ids = J("#list").jqGrid('getDataIDs');

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#"+ list).getRowData(ids[i]);
					if(rowdata.EMAIL != '' && rowdata.EMAIL != null) {
    					toMail += rowdata.EMAIL + "|";

						toName += rowdata.EVAL_USER_NM + "|";
						toNameList += rowdata.EVAL_USER_NM + "<" + rowdata.EMAIL + ">;";
    				}
				}
			});
		}

		if(!J.gridSelectChk(list)){
			J.showMsgBox("메일을 전송할 대상자를 선택하십시요", null, null);
		} else {
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
    	}
	}

//]]>
</script>

