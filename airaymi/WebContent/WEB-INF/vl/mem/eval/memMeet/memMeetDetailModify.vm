                            {name:'METRIC_ID'           ,index:'METRIC_ID'             ,width:0     ,align:'center' },
							{name:'EVAL_GBN_NM'         ,index:'EVAL_GBN_NM'           ,width:120   ,align:'center' },
                            {name:'METRIC_NM'           ,index:'METRIC_NM'             ,width:200   ,align:'left' ,formatter:linkCalItem },
                            {name:'METRIC_NM_TMP'       ,index:'METRIC_NM_TMP'         ,width:0     ,align:'left'},
                            {name:'TYPE_ID'             ,index:'TYPE_ID'               ,width:0     ,align:'center' },
                            {name:'TYPE_NM'             ,index:'TYPE_NM'               ,width:80    ,align:'center' },
                            {name:'WEIGHT'              ,index:'WEIGHT'                ,width:80    ,align:'center' },
                            {name:'UNIT_NM'             ,index:'UNIT_NM'               ,width:60    ,align:'center' },
                            {name:'MON_GOAL'            ,index:'MON_GOAL'              ,width:60    ,align:'center' },
                            {name:'EVAL_CYCLE_ID'       ,index:'EVAL_CYCLE_ID'         ,width:0     ,align:'center' },
                            {name:'EVAL_CYCLE_NM'       ,index:'EVAL_CYCLE_NM'         ,width:0     ,align:'center' },
                            {name:'VALUE'               ,index:'VALUE'                 ,width:80    ,align:'center' },
                            {name:'FINAL_SCORE'         ,index:'FINAL_SCORE'           ,width:80    ,align:'center' },
                            {name:'FINAL_GRADE'         ,index:'FINAL_GRADE'           ,width:80    ,align:'center' },
