	/******************************************
	 * 년도별 평가단 조회
	 ******************************************/
	function chgEvalGrp(){

		J.ajax({
        	url      : "$!{context_path}/bsc/matrix/matrixKpi/getUserGroupList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalUserGrpId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserGrpId');
				})
			}
    	});
	}

	/******************************************
	 * 지표선정
	 ******************************************/
	function goChoice() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("선정할 지표를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("선택한 지표를 선정하시겠습니까?", "choiceDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 지표선정처리
	 ******************************************/
	function choiceDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var metricGrpIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					metricGrpIds += rowdata.METRIC_GRP_ID + '|';
				}
			});
		}

		J("#metricGrpIds").val(metricGrpIds);
		J("#mode").val("CHOICE");
		J("#year").val(J("#findYear").val());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#choiceYn").val("Y");
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixResult/matrixResultProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 지표선정 취소
	 ******************************************/
	function goChoiceCancel() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("선정취소할 지표를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("선택한 지표를 선정 취소하시겠습니까?", "choiceCancelDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 지표선정 취소
	 ******************************************/
	function choiceCancelDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var metricGrpIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					metricGrpIds += rowdata.METRIC_GRP_ID + '|';
				}
			});
		}

		J("#metricGrpIds").val(metricGrpIds);
		J("#mode").val("CHOICE");
		J("#year").val(J("#findYear").val());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#choiceYn").val("N");
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixResult/matrixResultProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalUserGrpIds = "";
		var metricGrpIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';metricGrpIds += rowdata.METRIC_GRP_ID + '|';
				}
			});
		}

		J("#evalUserGrpIds").val(evalUserGrpIds);J("#metricGrpIds").val(metricGrpIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixResult/matrixResultProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());
		J("#evalUserGrpNm").val(J("#findEvalUserGrpId :selected").text());
		J("#poolGubunNm").val(J("#findPoolGubun :selected").text());
		J("#choiceNm").val(J("#findChoiceYn :selected").text());
		J("#scoreNm").val(J("#findMetricGrpScore").val()+" 이상");

		J("#formFind").attr("action", "$!{context_path}/bsc/matrix/matrixResult/matrixResultListExcel.vw?type=excel").submit();
		J("#formFind").attr("action", "$!{context_path}/bsc/matrix/matrixResult/matrixResultList.vw?type=template");
		return false;
	}

