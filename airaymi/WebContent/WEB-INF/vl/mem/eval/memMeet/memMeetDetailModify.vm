		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetDetailList.vw?type=template").submit();
		});
        
