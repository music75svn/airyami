<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/cbe/eval/evalExceUser/evalExceUserList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#workTerm").numeric();
		J("#workTerm").css("ime-mode", "disabled");
		
		J("#insertChargeUserSearch").fancybox();    		//담당자 조회

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("evalMembUserNm", "성명", 1, 50)) {
			return;
		}
		
		if(!J.checkLength("exceEvalReason", "예외평가 사유", 1, 250)) {
			return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/cbe/eval/evalExceUser/evalExceUserProcess.vw?type=template").submit();
	}
	
	/*****************************************************
	 * 설정
	 *****************************************************/ 
	function setChargeUserInfo(arguments) {
		J("#evalMembUserId").val(arguments[0]);
		J("#evalMembUserNm").val(arguments[1]);
		J("#scDeptNm").html(arguments[3]);
		J.fancybox.close();
	}
	
	/*****************************************************
	 * 설정
	 *****************************************************/ 
	function setChargeInit(arguments) {
		J.setInit('evalMembUserId','evalMembUserNm');
		J("#scDeptNm").html("");
	}
//]]>
</script>    
 
