//<![CDATA[

    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/evalCon/empEvalConReport/empEvalConReportList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_r_width},
            colNames     :['기준년도', '사번', '성명', '조직코드', 'DEPT_NM', '소속부서', '직급코드', '직급명', '직위코드', '직위명', '별도평가<br/>확정여부', '근무<br/>시작일', '근무<br/>종료일', '부서장', '평가자명', '평가자<br/>직위',''],
            colModel     :[
                            {name:'YEAR'                 ,index:'YEAR'                 ,width:40   ,align:'center' }, 
                            {name:'EMPN'                 ,index:'EMPN'                 ,width:40   ,align:'center' }, 
                            {name:'KOR_NM'               ,index:'KOR_NM'               ,width:40   ,align:'center' ,formatter:linkUpdate}, 
                            {name:'DEPT_CD'              ,index:'DEPT_CD'              ,width:40   ,align:'center' }, 
                            {name:'DEPT_KOR_NM'          ,index:'DEPT_KOR_NM'          ,width:40   ,align:'center' }, 
                            {name:'DEPT_FULL_NM'         ,index:'DEPT_FULL_NM'         ,width:150   ,align:'center' }, 
                            {name:'CAST_TC'              ,index:'CAST_TC'              ,width:40   ,align:'center' }, 
                            {name:'CAST_TC_NM'           ,index:'CAST_TC_NM'           ,width:40   ,align:'center' }, 
                            {name:'POS_TC'               ,index:'POS_TC'               ,width:40   ,align:'center' }, 
                            {name:'POS_TC_NM'            ,index:'POS_TC_NM'            ,width:40   ,align:'center' }, 
                            {name:'EVAL_YN'              ,index:'EVAL_YN'              ,width:40   ,align:'center' }, 
                            {name:'START_PCMT_DATE'      ,index:'START_PCMT_DATE'      ,width:40   ,align:'center' }, 
                            {name:'END_PCMT_DATE'        ,index:'END_PCMT_DATE'        ,width:40   ,align:'center' }, 
                            {name:'MANAGER_USER_ID'      ,index:'MANAGER_USER_ID'      ,width:40   ,align:'center' }, 
                            {name:'MANAGER_USER_NM'      ,index:'MANAGER_USER_NM'      ,width:40   ,align:'center' },
                            {name:'MANAGER_POS_TC_NM'    ,index:'MANAGER_POS_TC_NM'    ,width:40   ,align:'center' },
                            {name:'INPUT_CNT'    		 ,index:'INPUT_CNT'   		   ,width:10    ,align:'center' }
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : true,
            cellEdit     : true,
            gridview     : true,
            caption:"업무성과기술서"
        //})
        }).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"DEPT_KOR_NM").jqGrid('hideCol',"CAST_TC").jqGrid('hideCol',"POS_TC").jqGrid('hideCol',"MANAGER_USER_ID").setGridWidth($!{jqGrid_r_width});
        
        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });
        
        /******************************************
         * 신규 등록
         ******************************************/
        J("#btnInsert").click(function() {
            J("#year").val(J("#findYear").val());
            J("#mode").val("ADD");
            J("#formList").attr("action", "$!{context_path}/prs/evalCon/empEvalConReport/empEvalConReportModify.vw?type=template").submit();
        });
        
        /******************************************
         * 삭제 버튼 클릭 이벤트
         ******************************************/
        J("#btnDelete").click(function() {
            goDelete();
            return false;
        });
        
        /******************************************
         * 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            excelDownload();
            return false;
        });
        
        /******************************************
         * 엑셀다운로드 버튼 클릭 이벤트btnExcelListDown
         ******************************************/
        J("#btnExcelListDown").click(function() {
            excelDownload();
            return false;
        });
        
        /******************************************
         * 엑셀업로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelUp").click(function() {
            goExcelUp();
            return false;
        });
        
        /******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();            //엑셀업로드 팝업
        
    });

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
        
        J("#year").val(J("#findYear").val());
        J("#deptCd").val(ret.DEPT_CD);
        J("#evalMembEmpn").val(ret.EMPN);
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/empEvalConReport/empEvalConReportModify.vw?type=template").submit();
    }
    
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }
    
    /******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
        
        
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);
                    
                }
            });
        }
        
        
        J("#mode").val("DEL");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/empEvalConReport/empEvalConReportProcess.vw?type=template").submit();
        return false;
    }
    
    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/empEvalConReport/empEvalConReportExampleListExcel.vw?type=excel").submit();
        return false;
    }
    
	/******************************************
	 * 엑셀업로드
	 ******************************************/
	function goExcelUp(){
		var year = J("#findYear").val();
		var findHighPgmId = J("#findHighPgmId").val();
		var findSubPgmId = J("#findSubPgmId").val();
		var findPgmId = J("#findPgmId").val();
		J("#anchor").attr("href","$!{context_path}/prs/evalCon/empEvalConReport/popExcelUpload.vw?findYear=" + year +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
		J("#anchor").click();
	}
	
	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/evalCon/empEvalConReport/empEvalConReportList_xml.vw?"+J("#formFind").serialize(), datatype:"json"}); 
		J("#list").trigger("reloadGrid");
	}
	
	/******************************************
	 * 조직선택 클릭이벤트
	 ******************************************/
	function goAction(deptCd, deptNm) {
		setDeptInfo(deptCd, deptNm);
	}
	
	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/ 
	function setDeptInfo(deptCd, deptNm) {
		
		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(추가, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findDeptCd]").val(deptCd);
		J("#formList input[name=findDeptNm]").val(J(deptNm).text());
		
		//var findCastTc = J("input:radio[name=findCastTc]:checked").val();
		J('input:radio[name=findCastTc]:input[value=""]').attr("checked", true);
		
	
			// formFind의 변수들 설정.
			J("#findDeptCd").val(deptCd);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findDeptNm").val(J(deptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(추가 등록시 사용함.)
			
			goGridSearch();
			
	}
    

//]]>
</script>

