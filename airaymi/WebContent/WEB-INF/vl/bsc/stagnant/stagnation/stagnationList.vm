#set($curr_url = $!{context_path} + "/stagnation/stagnationList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/stagnant/stagnation/stagnationList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['년도', '부서코드', '부서명', '성과코칭'],
			colModel     :[
							{name:'YEAR'           ,index:'SC_DEPT_ID'    ,width:300    ,align:'center' },
							{name:'SC_DEPT_ID'     ,index:'SC_DEPT_ID'    ,width:300    ,align:'center' },
							{name:'SC_DEPT_NM'     ,index:'SC_DEPT_NM'    ,width:300    ,align:'left' },
							{name:'YEARSCDEPTID'   ,index:'YEARSCDEPTID'  ,width:300    ,align:'center'   ,formatter:linkUpdate },
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : true,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			caption:"부진부서"
		}).jqGrid('hideCol',"METRIC_ID").jqGrid('hideCol',"SC_DEPT_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>'+rowObject.SC_DEPT_NM+' 성과코칭</a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#findBbsIds").val(ret.YEAR+ret.SC_DEPT_ID);
		J("#findBbsNms").val(ret.SC_DEPT_NM);
		J("#formList").attr("action", "$!{context_path}/bsc/board/board/boardList.vw?type=template").submit();
	}


//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">부진부서대상</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")

    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/stagnant/stagnation/stagnationList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				<input type="hidden"    id="findUseYnNm"	name="findUseYnNm" />
				
				<div class="searchBox">
    				<div><div><div>
