<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">
<head >
	#parse("/WEB-INF/vl/common/template/head.vm")

#set($curr_url = $!{context_path} + "/bsc/level/levelEval/popLevelItemDetail.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/level/levelEval/popLevelItemDetail_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : "500",
			width        : "800",
			colNames     :['평가항목그룹', '평가항목', '방안', '등급기준',  'ROW_CNT', 'ROW_INDEX', 'ITEM_GRP_ID', 'ITEM_ID'],
			colModel     :[
							{name:'ITEM_GRP_NM'             ,index:'ITEM_GRP_NM'        ,width:80   ,align:'left' ,sortable:false ,cellattr: attrSetting}, 
                            {name:'ITEM_NM'     			,index:'ITEM_NM'     		,width:120   ,align:'left' ,sortable:false, formatter:setNormalFont}, 
                            {name:'CONTENT'         		,index:'CONTENT'         	,width:180   ,align:'left' ,sortable:false, formatter:setNormalFont}, 
                            {name:'GRADE_BASIS'            	,index:'GRADE_BASIS'        ,width:180   ,align:'left' ,sortable:false, formatter:setNormalFont}, 
                            {name:'ROW_CNT'                	,index:'ROW_CNT'            ,width:100   ,align:'center' ,sortable:false},
							{name:'ROW_INDEX'                ,index:'ROW_INDEX'      	,width:100   ,align:'center' ,sortable:false},
							{name:'ITEM_GRP_ID'             ,index:'ITEM_GRP_ID'        ,width:100   ,align:'center' ,sortable:false},
							{name:'ITEM_ID'                 ,index:'ITEM_ID'            ,width:100   ,align:'center' ,sortable:false}
							],
							
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가실시"
		}).jqGrid('hideCol',"ITEM_GRP_ID").jqGrid('hideCol',"ITEM_ID").jqGrid('hideCol',"ROW_CNT").jqGrid('hideCol',"ROW_INDEX").setGridWidth(800);
		
		/******************************************
		 * 임시저장 버튼 클릭 이벤트
		 ******************************************/
		J("#btnClose").click(function() {
			self.close();
			return false;
		});
		
	});
	
	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.ROW_INDEX;
		var rowSpan = rowObject.ROW_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		
		return result;     
	} 
	
	function setNormalFont(cellvalue) { 
		return "<div class='normal'>" + cellvalue + "</div>";
	}
	
//]]>
</script>
</head>
<body>
<div style="height:10px;">
	&nbsp;
</div>
<div id="Table">
	<div id="Table_blockContainer_w800">
		<h1 class="none">평가실시 평가항목상세조회관리</h1>
		<div class="tableTop">
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/level/levelGrade/levelGradeList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				<input type="hidden"    id="findYear"		name="findYear"			value="$!{searchMap.txt2html("findYear")}" />
				
				<div class="searchBox">
    				<div><div><div>
    				<table summary="평가실시 평가항목상세조회 검색 조건">
						<caption class="none">평가실시 평가항목상세조회 검색 조건</caption> 
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span><label for="findYear">평가년도</label></span>
            						<span class="searchBar" class="select w80">
            							$!CS_CODE.getCodeName("017", $!{searchMap.txt2html("findYear")})
            						</span>
            					</td>
            				</tr>
        				</tbody>
    				</table>
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>
		
		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/level/levelGrade/levelGradeProcess.vw?type=template">
			<input type="hidden" id="mode"       name="mode" />
			<input type="hidden" id="year"		 name="year" />
			$!{searchMap.makeHiddenFind()}
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="평가실시 평가항목상세조회">
							<caption class="none">평가실시 평가항목상세조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all">
						<div class="blockButton">
							<ul>
								<li><input type="button" id="btnClose" value="닫기" /></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</form>
		
	</div>
	<div class="clear"></div>
</div>
</body>
</html>
