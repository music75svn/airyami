			//submit 하기전 작업추가
		});

		/******************************************
		 * 평가마감
		 ******************************************/
		J("#btnInsert").click(function() {
			goExec();
			return false;
		});

		/******************************************
		 * 마감취소
		 ******************************************/
		J("#btnReturn").click(function() {
			goExecCancel();
			return false;
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 메일 버튼 클릭 이벤트
		 ******************************************/
		J("#btnMail").click(function() {
			mailWrite();
			return false;
		});

		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
		});
	});

	/******************************************
	 * 년도별 평가단 조회
	 ******************************************/
	function chgEvalGrp(){

		J.ajax({
        	url      : "$!{context_path}/bsc/matrix/matrixKpi/getUserGroupList_ajax.vw",
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalUserGrpId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserGrpId');
				})
			}
    	});
	}

	/******************************************
	 * 평가군 마감정보 가져오기
	 ******************************************/
	function getEvalUserInfo() {
		var findYear 			= J("#findYear").val();
		var findEvalUserGrpId 	= J("#findEvalUserGrpId").val();

		J.ajax({
			url        : "$!{context_path}/bsc/matrix/matrixStatus/evalUserInfo_ajax.vw",
        	type       : "POST",
			data       : "findYear=" + findYear + "&amp;findEvalUserGrpId=" + findEvalUserGrpId,
        	dataType   : "xml",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success    : function (xml) {
				var evalUserGrpId = "";
				var evalUserGrpNm = "";
				var evalClosingYn = "";
				var userCnt 	  = "";
				var submitCnt	  = "";

				if(J(xml).find("items").find("item").length > 0) {
					J(xml).find("items").find("item").each(function() {
						evalUserGrpId = J(this).find("evalUserGrpId").text();
						evalUserGrpNm = J(this).find("evalUserGrpNm").text();
						evalClosingYn = J(this).find("evalClosingYn").text();
						userCnt 	  = J(this).find("userCnt").text();
						submitCnt 	  = J(this).find("submitCnt").text();

						J("#evalClosingYn").val(evalClosingYn);
						J("#userCnt").val(userCnt);
						J("#submitCnt").val(submitCnt);
                    });
				}
				//버튼설정
				buttonEnableSet(evalClosingYn);
        	},
			error : function(xhr, status, error) {
				alert(error);
			}
    	});
	}
	/******************************************
	 * 버튼 설정
	 ******************************************/
	function buttonEnableSet(evalClosingYn) {
		if(evalClosingYn=='Y'){
			J("#bClosingY").hide(); //평가마감
			J("#bClosingN").show(); //마감취소
		}else if(evalClosingYn=='N'){
		    J("#bClosingY").show(); //평가마감
			J("#bClosingN").hide(); //마감취소
		}
	}

	/******************************************
	 * 평가마감
	 ******************************************/
	function goExec() {
	    if(J("#findEvalUserGrpId").val() == null || J("#findEvalUserGrpId").val() == ""){
			J.showMsgBox("평가마감할 평가단을 선택하십시요", null, null);
		} else {
			var magamChk 	= true;


			if(parseInt(J("#userCnt").val())>0){
				if(J("#userCnt").val() != J("#submitCnt").val()){
					J.showMsgBox("평가군에 평가자가 모두 제출되어야 <br>마감할 수 있습니다.", null, null);
					magamChk 	= false;
					return false;
				}
			}else{
				J.showMsgBox("평가군에 등록된 평가자가 없어 <br>마감할 수 없습니다.", null, null);
				magamChk 	= false;
				return false;
			}

			if(magamChk){
				J.showConfirmBox("선택한 평가군을 마감하시겠습니까?", "execDo"); //execDo() 콜백함수 호출
			}
		}
	}

	/******************************************
	 * 일괄적용처리
	 ******************************************/
	function execDo() {
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixStatus/matrixStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalUserGrpId").val(ret.EVAL_USER_GRP_ID);
		J("#evalUserId").val(ret.EVAL_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixStatus/matrixStatusModify.vw?type=template").submit();
	}

	/******************************************
	 * 마감취소
	 ******************************************/
	function goExecCancel() {
		J.showConfirmBox("마감을 취소하시겠습니까?", "cancelDo"); //deleteDo() 콜백함수 호출
	}

	/******************************************
	 * 마감취소
	 ******************************************/
	function cancelDo() {
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#year").val(J("#findYear").val());
		J("#mode").val("CANCEL");
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixStatus/matrixStatusProcess.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalUserGrpIds = "";
		var evalUserIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';evalUserIds += rowdata.EVAL_USER_ID + '|';
				}
			});
		}

		J("#evalUserGrpIds").val(evalUserGrpIds);J("#evalUserIds").val(evalUserIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixStatus/matrixStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());
		J("#evalUserGrpNm").val(J("#findEvalUserGrpId :selected").text());
		J("#evalSubmitNm").val(J("#findEvalSubmitYn :selected").text());

		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#evalSubmitYn").val(J("#findEvalSubmitYn").val());

		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixStatus/matrixStatusListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 메일발송 팝업
	 ******************************************/
	function mailWrite(){
		var list = "";
		var id = "";
		var ids = "";
		var rowdata = "";
		var toMail = "";
		var toName = "";
		var toNameList = "";

		list = "list";
		id = J("#list").getGridParam('selarrrow');
		ids = J("#list").jqGrid('getDataIDs');

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#"+ list).getRowData(ids[i]);
					if(rowdata.EMAIL != '' && rowdata.EMAIL != null) {
    					toMail += rowdata.EMAIL + "|";

						toName += rowdata.USER_NM + "|";
						toNameList += rowdata.USER_NM + "<" + rowdata.EMAIL + ">;";
    				}
				}
			});
		}

		if(!J.gridSelectChk(list)){
			J.showMsgBox("메일을 전송할 대상자를 선택하십시요", null, null);
		} else {
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
    	}
	}

//]]>
</script>

