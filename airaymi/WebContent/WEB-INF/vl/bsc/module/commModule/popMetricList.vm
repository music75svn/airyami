<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFindPop').serialize();
		
		jQuery("#popList").jqGrid({
			url          :"$!{searchMap.txt2html("context")}/bsc/module/commModule/popMetricList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : 320,
			colNames     :['$!{searchMap.txt2html("SC_DEPT_NM")}코드','$!{searchMap.txt2html("SC_DEPT_NM")}','$!{searchMap.txt2html("STRATEGY_NM")}코드','$!{searchMap.txt2html("STRATEGY_NM")}','$!{searchMap.txt2html("METRIC_NM")}코드','$!{searchMap.txt2html("METRIC_NM")}명'],
			colModel     :[
							{name:'SC_DEPT_ID'  	,index:'SC_DEPT_ID'     ,width:100   ,align:'center' },
							{name:'SC_DEPT_NM'  	,index:'SC_DEPT_NM'     ,width:250   ,align:'justify' },
							{name:'STRATEGY_ID'  	,index:'STRATEGY_ID'     ,width:100   ,align:'center' },
							{name:'STRATEGY_NM'  	,index:'STRATEGY_NM'     ,width:200   ,align:'justify' },
							{name:'METRIC_ID'  	,index:'METRIC_ID'     ,width:100   ,align:'center' },
							{name:'METRIC_NM'  	,index:'METRIC_NM'     ,width:260   ,align:'justify'   ,formatter:linkUpdate }
							],
			rowNum       : 100000,
			autowidth    : false,
			viewrecords  : true,
			loadonce     : false,
			multiselect  : false,
			cellEdit     : false,
			loadComplete : function() {
    							J("#findPopMetricNm").select();
                           },
			caption:"$!{METRIC_NM}조회"
		}).jqGrid('hideCol',"SC_DEPT_ID").jqGrid('hideCol',"STRATEGY_ID").jqGrid('hideCol',"METRIC_ID");
		
		/******************************************
    	 * 검색 항목 선택 이벤트
    	 ******************************************/
		J("#findPopScDeptNm").focus(function(e) {
			this.select();
		});
		
		/******************************************
    	 * 검색 항목 선택 이벤트
    	 ******************************************/
		J("#findPopMetricNm").focus(function(e) {
			this.select();
		});

		/******************************************
    	 * 검색 엔터키 이벤트
    	 ******************************************/
		J("#findPopScDeptNm").keyup(function(e)  {
        	if(e.keyCode == 13) {
				if(J("#findPopScDeptNm").val()=="" && J("#findPopMetricNm").val()==""){
					alert("성과조직명이나 KPI명을을 입력 하십시오");
					J("#findPopScDeptNm").focus();
					return;
				}
        		$("#formFindPop").submit();
        	}
        });
        
    	/******************************************
    	 * 검색 엔터키 이벤트
    	 ******************************************/
		J("#findPopMetricNm").keyup(function(e)  {
        	if(e.keyCode == 13) {
        		$("#formFindPop").submit();
        	}
        });
		
	});
	
	/******************************************
	 * jqGrid 페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:selGridData(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 이동
	 ******************************************/
	function selGridData(rowId) {
		var ret = J("#popList").jqGrid('getRowData',rowId);
		setMetricId(ret);
		J.fancybox.close();
	}
	
	/******************************************
	 * 검색시
	 ******************************************/
	$("#formFindPop").submit(function() { 
		J("#popList").setGridParam({url:"$!{searchMap.txt2html("context")}/bsc/module/commModule/popMetricList_xml.vw?"+J("#formFindPop").serialize()}); 
		J("#popList").trigger("reloadGrid");
		return false;
	});

//]]>
</script>

<form id="formFindPop" name="formFindPop" method="post" action="$!{searchMap.txt2html("context")}/bsc/module/commModule/popMetricList.vw">
	<input type="hidden" id="findYear" name="findYear" value="$!{searchMap.txt2html("findYear")}" />
	<input type="hidden" id="findType" name="findType" vlaue="SELECT" />

    <div style="width:690px;height:430px;">
    	<div id="popMetricGrpArea" style="margin-left:15px;">
    		<h1 class="none">$!{searchMap.txt2html("METRIC_NM")}리스트</h1>
    		<div>
				<span>$!{searchMap.txt2html("SC_DEPT_NM")}/$!{searchMap.txt2html("METRIC_NM")}명 :</span> 
				<span>
					<input type="text" id="findPopScDeptNm" name="findPopScDeptNm" class="text w110" value="$!{searchMap.txt2html("findPopScDeptNm")}" />
					<input type="text" id="findPopMetricNm" name="findPopMetricNm" class="text w150" value="$!{searchMap.txt2html("findPopMetricNm")}" />
					<div class="h10"></div>
				</span>
			</div>

			<div id="userData">
    			<!-- 데이터그리드 Start -->
    			<div class="blockGridListTable">
    				<table id="popList" summary="$!{searchMap.txt2html("METRIC_NM")}조회">
    					<caption class="none">$!{searchMap.txt2html("METRIC_NM")}조회</caption>
    					<thead><tr><th></th></tr></thead>
    					<tbody><tr><td></td></tr></tbody>
    				</table>
    				<div id="pager"></div>                    
    			</div>
    			<!--// 데이터그리드 End -->	
			</div>
    	</div>
    </div>
</form>
