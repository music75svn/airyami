#set($curr_url = $!{context_path} + "/bsc/matrix/matrixItemScore/matrixItemScoreList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/matrix/matrixItemScore/matrixItemScoreList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '최고점수', '최저점수', 'YEAR_ID'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' ,formatter:linkUpdate},
                            {name:'MAX_SCORE'            ,index:'MAX_SCORE'            ,width:150   ,align:'center' },
                            {name:'MIN_SCORE'            ,index:'MIN_SCORE'            ,width:150   ,align:'center' },
							{name:'YEAR_ID'              ,index:'YEAR_ID'              ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			caption:"평가항목점수"
		}).jqGrid('hideCol',"YEAR_ID").setGridWidth( $!{jqGrid_r3_width} );

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#year").attr("disabled", false);
			J("#maxScore").val("");
			J("#minScore").val("");
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnUpdate").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 디폴트 조회
		 ******************************************/
		goAction('$!{CS_STATIC.getYear()}');
		J("#mode").val("");
	});

	/******************************************
	 * 상세 조회
	 ******************************************/
    function goAction(year) {
		var stMode = J("#stMode").val();
		J("#mode").val(stMode);
		J.ajax({
        	url      : "$!{context_path}/bsc/matrix/matrixItemScore/matrixItemScoreModify.vw",
        	cache    : false,
        	type     : "POST",
			data     : "findYear=" + year + "&amp;stMode=" + stMode,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				J("#matrixItemScoreData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#matrixItemScoreData").append(data);
        	}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goAction("' + cellvalue + '")>' + cellvalue + '<//a>';
	}


	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {

	   if(J("#mode").val() =='' ){
			J.showMsgBox("저장할 수 없습니다.", null, null);
		    return;
		}

    	if(!J.checkLength("maxScore", "최고점수",1, 5)) {
    		return;
		}

		if(!J.checkLength("minScore", "최저점수",1, 5)) {
    		return;
		}

		if(Number(J("#minScore").val()) > Number(J("#maxScore").val())) {
			J.showMsgBox("최저점수가 최고점수보다 클수는 없습니다.", null, null);
    		return;
		}

		var msg = "저장하시겠습니까?";

		if(J("#evalCnt").val()>0){
			msg ="평가한 내역이 있습니다. <br>저장하시면 결과에 영향이 있을 수 있습니다. <br>저장하시겠습니까?"
		}

		J.showConfirmBox(msg, "saveDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#year").attr("disabled", false);
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/bsc/matrix/matrixItemScore/matrixItemScoreProcess.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			var msg = "삭제하시겠습니까?";

    		if(J("#evalCnt").val()>0){
    			msg ="평가한 내역이 있습니다. <br>저장하시면 결과에 영향이 있을 수 있습니다. <br>삭제하시겠습니까?"
    		}
			J.showConfirmBox(msg, "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {

		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var years = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					years += rowdata.YEAR_ID + '|';

				}
			});
		}

		J("#years").val(years);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixItemScore/matrixItemScoreProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formFind").attr("action", "$!{context_path}/bsc/matrix/matrixItemScore/matrixItemScoreListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

