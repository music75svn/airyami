#set($curr_url = $!{context_path} + "/memDeptScore/memDeptScoreList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[
	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/eval/memDeptScore/memDeptScoreList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colModel     :[
                            {name:'YEAR'       	 	,index:'YEAR'        	,width:60   ,align:'center' ,hidden:true  ,label:'년도'},
                            {name:'DEPT_CD'      	,index:'DEPT_CD'        ,width:60   ,align:'center' ,hidden:true  ,label:'실조직코드'},                            
                            {name:'DEPT_KOR_NM'  	,index:'DEPT_KOR_NM'    ,width:200   ,align:'left'   ,hidden:false  ,label:'실조직'},
							{name:'SC_DEPT_ID'   	,index:'SC_DEPT_ID'     ,width:60  ,align:'left'   ,hidden:true  ,label:'성과부서코드'},
							{name:'SC_DEPT_S_NM'   	,index:'SC_DEPT_S_NM'   ,width:200   ,align:'left' ,hidden:false  ,label:'성과조직'},
                            {name:'DEPT_GRADE'      ,index:'DEPT_GRADE'     ,width:60  ,align:'center' 	,hidden:false  ,label:'등급' ,formatter:linkDeptGrade},
							{name:'DEPT_SCORE'      ,index:'DEPT_SCORE'     ,width:60   ,align:'center' ,hidden:false  ,label:'점수' ,formatter:linkDeptScore}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate: {sortable:false},
			caption:"조직업적평가"
		});

		/******************************************
         * 조직업적평가결과 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            memDeptScoreExcelDownload();
            return false;
        });

        /******************************************
         * 조직업적평가결과 엑셀업로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelUp").click(function() {
            memDeptScoreExcelUp();
            return false;
        });
		
		/******************************************
         * 조직업적평가점수 불러오기
         ******************************************/
        J("#btnBscScore").click(function() {
            getBscScore();
            return false;
        });
        
		/******************************************
         * 조직업적평가점수 월할 반영
         ******************************************/
        J("#btnExec").click(function() {
            getBscMonScore();
            return false;
        });
        
		/******************************************
         * 조직업적평가점수 월할 반영
         ******************************************/
        J("#btnGradeDistri").click(function() {
            getGradeDistri();
            return false;
        });
        
        /******************************************
         * 조직업적평가점수 월할 반영
         ******************************************/
        J("#btnAllSave").click(function() {
            saveAllChk();
            return false;
        });
        
        /******************************************
         * fancy Box 팝업호출
         ******************************************/
        J("#anchor").fancybox();            //엑셀업로드 팝업
   	});
   	
   	function saveAllChk(){
   		J.showConfirmBox("일괄저장 하시겠습니까?", "saveAll"); //getBscScoreDo() 콜백함수 호출
   	}
   	
   	function saveAll() {
		J("#year").val(J("#findYear").val());
		J("#mode").val("SAVEALL");
        J("#formList").attr("action", "$!{context_path}/mem/eval/memDeptScore/memDeptScoreProcess.vw?type=template").submit();
        return false;
	}
   	
   	/******************************************
	 * jqGrid 가중치
	 ******************************************/
	function linkDeptScore(cellvalue, options, rowObject) {
		return '<input type="text" name="deptScoreArray" value="' + cellvalue + '" class="wp70" maxlength="6" />'+
		       '<input type="hidden" name="deptCdArray" value="' + rowObject.DEPT_CD + '" />';
	}
	
	/******************************************
	 * jqGrid 가중치
	 ******************************************/
	function linkDeptGrade(cellvalue, options, rowObject) {
		return '<input type="text" name="deptGradeArray" value="' + cellvalue + '" class="wp70" maxlength="6" />';
	}
   	
   	function saveGradeScore(scores, grades){
   		J("#scores").val(scores);
		J("#grades").val(grades);
   		J("#year").val(J("#findYear > option:selected").val());
   		J("#mode").val("GRADEDISTRI");
        J("#formList").attr("action", "$!{context_path}/mem/eval/memDeptScore/memDeptScoreProcess.vw?type=template").submit();
        return false;
   	
   	}
   	
   	function getGradeDistri(){

		var param = "&amp;year=$!{searchMap.txt2html("findYear")}";

		var url = "$!{context_path}/mem/eval/memDeptScore/popGradeDistri.vw?type=popup" + param;
		openWinByName(url,'popTransHis','600','300','yes');
   	
   	}

	/******************************************
	 * 조직선택 클릭이벤트
	 ******************************************/
	function goAction(deptCd, deptNm) {
		setDeptInfo(deptCd, deptNm);
	}

	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/
	function setDeptInfo(deptCd, deptNm) {
		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findDeptCd]").val(deptCd);
		J("#formList input[name=findDeptNm]").val(J(deptNm).text());

			// formFind의 변수들 설정.
			J("#findDeptCd").val(deptCd);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findDeptNm").val(J(deptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)

			goGridSearch();
	}

	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/mem/eval/memDeptScore/memDeptScoreList_xml.vw?" + J("#formFind").serialize(), datatype:"json"});
		J("#list").trigger("reloadGrid");
	}

	/******************************************
     * 조직업적평가점수  엑셀다운로드
     ******************************************/
    function memDeptScoreExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/mem/eval/memDeptScore/memDeptScoreListExcel.vw?type=excel").submit();
        return false;
    }

    /******************************************
     * 조직업적평가점수  엑셀업로드
     ******************************************/
    function memDeptScoreExcelUp(){
        var year = J("#findYear").val();
        var findHighPgmId = J("#findHighPgmId").val();
        var findSubPgmId = J("#findSubPgmId").val();
        var findPgmId = J("#findPgmId").val();
        var findDeptCd = J("#findDeptCd").val();
        var findDeptNm = J("#findDeptNm").val();
        J("#anchor").attr("href","$!{context_path}/mem/eval/memDeptScore/popMemDeptScoreExcelUpload.vw?findYear=" + year + "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId + "&amp;findDeptCd=" + findDeptCd);
        J("#anchor").click();
    }

	/******************************************
     * 조직업적평가점수 불러오기
     ******************************************/
	function getBscScore() {
		J.showConfirmBox("조직업적평가점수 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "getBscScoreDo"); //getBscScoreDo() 콜백함수 호출
	}
	
	function getBscScoreDo() {
		J("#year").val(J("#findYear").val());
		J("#mode").val("GET");
        J("#formList").attr("action", "$!{context_path}/mem/eval/memDeptScore/memDeptScoreProcess.vw?type=template").submit();
        return false;
	}
	
    /******************************************
	 * 집계
	 ******************************************/
	function goExecute() {
		J("#mode").val("CALL");
		J.showMsgBox("집계를 실행합니다.<br/> 완료될 때까지 잠시만 기다려 주십시요.", null, null);
        //J("#anchor").attr("href","$!{context_path}/mem/eval/memDeptScore/memDeptScoreProcess.vw?type=template").submit();

	}
	
	/******************************************
     * 조직업적평가점수 월할계산
     ******************************************/
	function getBscMonScore() {
		J.showConfirmBox("조직업적평가점수 월할반영을 하시면 기존에 적용한 데이터가 삭제됩니다. 진행하시겠습니까?", "getgetBscMonScoreDo"); //getgetBscMonScoreDo() 콜백함수 호출
	}
	
	function getgetBscMonScoreDo() {
		J("#year").val(J("#findYear").val());
		J("#mode").val("MONCAL");
        J("#formList").attr("action", "$!{context_path}/mem/eval/memDeptScore/memDeptScoreProcess.vw?type=template").submit();
        return false;
	}
//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">조직업적평가 결과</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")

    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/mem/eval/memDeptScore/memDeptScoreList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"	id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				<input type="hidden" 	id="findDeptCd"		name="findDeptCd"		value="$!{searchMap.txt2html("findDeptCd")}" />
				<input type="hidden" 	id="findDeptNm"		name="findDeptNm"		value="$!{searchMap.txt2html("findDeptNm")}" />

				<div class="searchBox">
    				<div><div><div>
    				<table summary="조직업적평가결과 검색 조건">
						<caption class="none">조직업적평가결과 검색 조건</caption>
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span>$!{YEAR}</span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
            						</span>
            					</td>
            				</tr>
        				</tbody>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" align="middle" alt="검색" />
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->

			<div class="clear"></div>
			<a id="anchor"></a>
		</div>

		<form id="formList" name="formList" method="post" action="$!{context_path}/mem/eval/memDeptScore/memDeptScoreProcess.vw?type=template">
			<input type="hidden" id="mode"			name="mode" />
			<input type="hidden" id="year"			name="year" />
			<input type="hidden" id="grades"		name="grades" />
			<input type="hidden" id="scores"		name="scores" />
			
			$!{searchMap.makeHiddenFind()}

			<div id="splitterBox">
				<div>
					<!-- 조직트리 Start -->
					<div class="blockGridTreeTable">
						#parse("/WEB-INF/vl/mem/eval/memDeptScore/deptTree.vm")
					</div>

					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable floatRight">
						<table id="list" summary="연계항목 조회">
							<caption class="none">연계항목 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					
					<!--// 데이터그리드 End -->
					<div class="blockButton_all floatLeft">
						<div class="blockButton" style="float:left; text-align:left; width:350px;">
							
						</div>
						<div id="blockButton" class="blockButton">
							<ul>
								<li id="bGradeDistri"><input type="button" id="btnGradeDistri"  value="배분표등록" /></li>
								<li id="bBscScore"><input type="button" id="btnBscScore"  value="조직업적평가점수 가져오기" /></li>
								<li id="bExcelDown"><input type="button" id="btnExcelDown"  value="엑셀다운로드" /></li>
								<li id="bExcelUp"><input type="button" id="btnExcelUp" value="엑셀업로드" /></li>
								<li id="bAllSave"><input type="button" id="btnAllSave"  value="일괄저장" /></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</form>

	</div>
	<div class="clear"></div>
</div>

