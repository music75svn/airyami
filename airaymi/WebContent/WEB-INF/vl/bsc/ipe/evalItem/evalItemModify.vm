<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/ipe/evalItem/evalItemList.vw?type=template").submit();
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});


		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");

		J("input[name=weights]").numeric({allow:"."});
		J("input[name=weights]").css("ime-mode", "disabled");

		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#insertUserSearch").fancybox();

	});

	/*****************************************************
	 * 담당자 설정
	 *****************************************************/
	function setInsertUserInfo(arguments) {
		J("#actRptInsertUserId").val(arguments[0]);
		J("#actRptInsertUserNm").val(arguments[1]);
		J.fancybox.close();
	}

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("itemNm", "평가항목", 1, 400)) {
			return;
		}
		var weightSum = J("#weightSum").val();
		var weights = J("#weights").val();
		var selWeight = J("#selWeight").val();
		var weight = (parseInt(weightSum)-parseInt(selWeight)) + parseInt(weights);

		if(weight > 100) {
		    J.showMsgBox("가중치의 총합이 100을 초과 할 수 없습니다.", null, "weights");
			return;
		}

		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/ipe/evalItem/evalItemProcess.vw?type=template").submit();
	}

//]]>
</script>

