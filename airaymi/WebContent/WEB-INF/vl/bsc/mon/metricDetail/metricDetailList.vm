		var findMon = J("#findMon").val();
		var findSubjectMetricId = ret.MAN_KPI_ID;
		var param = "&amp;findYear=" + findYear + "&amp;findMon=" + findMon + "&amp;findSubjectMetricId=" + findSubjectMetricId;
		
		var url = "$!{context_path}/man/mon/metric/popMetricList.vw?type=popup" + param;
