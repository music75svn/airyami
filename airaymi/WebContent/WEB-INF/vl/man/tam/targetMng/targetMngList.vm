		}

		if(!saveStatusChk()) return;
		J("#targetStatusId").val(targetStatusId);

		if(targetStatusId=="04"){
			J.showConfirmBox("승인하시겠습니까?", "statusDo"); //statusDo() 콜백함수 호출
		}else if(targetStatusId=="05"){
