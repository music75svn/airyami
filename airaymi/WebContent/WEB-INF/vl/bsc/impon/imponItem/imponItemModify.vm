								<a href="javascript:J.setInit('actRptInsertUserId','actRptInsertUserNm');"><img src="$!{img_path}/common/board/ic_cancel.gif" class="valign_middle" alt="담당자선택 취소" /></a>
							</td>
						</tr>
						#foreach($list in $itemList)
						<tr>
							<th scope="row"><label for="metricIds">가중치 배분 - $!{CS_HTML.txt2html($list.SC_DEPT_NM)}</label></th>
							<td>
								<input type="hidden" id="metricIds" name="metricIds" value="$!{CS_HTML.txt2html($list.METRIC_ID)}" />
								<input type="text" id="weights" name="weights" class="inputbox w200" value='$!{CS_HTML.txt2html($list.WEIGHT)}' maxlength="5"/>
							</td>
						</tr>
						#end
						<tr>
							<th scope="row"><label for="sortOrder">정렬순서</label></th>
							<td><input type="text" id="sortOrder" name="sortOrder" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.SORT_ORDER)}' maxlength="5"/></td>
						</tr>
    				</tbody>
    			</table>
    		</div>
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnBack"   value="돌아가기" /></li>
    				<li><input type="submit" id="btnInsert" value="저장" /></li>
    			</ul>
    		</div>	
    	</div>
		<a id="anchor"></a>
    	<div class="clear"></div>
    </div>
</form>
