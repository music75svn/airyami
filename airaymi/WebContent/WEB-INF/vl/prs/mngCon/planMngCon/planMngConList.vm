	/******************************************
	 * jqGrid 가중치
	 ******************************************/
	function linkWeight(cellvalue, options, rowObject) { 
		var str = '';
		str += '<input type="text" name="weights"  value="' + cellvalue + '" class="inputboxNum w50" maxlength="3" />';
		return str;
	}

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
		var savCk = true; //validation Chk
    	#if("$closingPlan.MNG_PLAN_YN" == 'N')
        		J.showMsgBox("성과계획 제출 일정이 마감되었습니다.", null, null); 
				savCk = false;
		#else
			/*
    		if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='04'){
    		  J.showMsgBox("최종승인 되었습니다.", null, null); 
			    savCk = false;
    		}else if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='02'){
                J.showMsgBox("이미 확인요청되었습니다.", null, null); 
				savCk = false;
    		}else if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='03'){
                J.showMsgBox("이미 부서장 확인 되었습니다.", null, null); 
				savCk = false;
    		}
    		*/
			if(savCk){
			goToModify(rowId);
			}else{ return;}
		#end
    }
	
	 /******************************************
     * 수정
     ******************************************/
    function goToModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#targetId").val(ret.TARGET_ID);
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
		J("#evalMembEmpn").val(J("#findEmpn").val());
        J("#year").val(J("#findYear").val());
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/mngCon/planMngCon/planMngConModify.vw?type=template").submit();
	}
    
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }
    
    /******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
        var targets = "";
        
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);
                    targets += rowdata.TARGET_ID + '|';
                }
            });
        }
        
        J("#targets").val(targets);
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
		J("#evalMembEmpn").val(J("#findEmpn").val());
        J("#mode").val("DEL");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/mngCon/planMngCon/planMngConProcess.vw?type=template").submit();
        return false;
    }
	
	/******************************************
     * 계획서 상태 validation
     ******************************************/
	function validationChk(gubun){
		var savCk = true; //validation Chk
    	#if("$closingPlan.MNG_PLAN_YN" == 'N')
        		J.showMsgBox("성과계획 제출 일정이 마감되었습니다.", null, null); 
				savCk = false;
        		return false;
		#else
    		if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='04'){
    		  J.showMsgBox("최종승인 되었습니다.", null, null); 
			    savCk = false;
    			return false;
    		}else if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='02'){
                J.showMsgBox("이미 확인요청되었습니다.", null, null); 
				savCk = false;
    			return false;
    		}else if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='03'){
                J.showMsgBox("이미 부서장 확인 되었습니다.", null, null); 
				savCk = false;
    			return false;
    		}
			if(savCk){
				if(gubun == "approve"){goAprove();
				}else if(gubun == "delete"){goDelete();
				}else if(gubun == "new"){ goNew();
				}else if(gubun == "modify"){ goToModify();
				}
    		}
    	#end
	}
	
	/******************************************
     * 신규
     ******************************************/
    function goNew() {
		J("#year").val(J("#findYear").val());
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
	    J("#evalMembEmpn").val(J("#findEmpn").val());
        J("#mode").val("ADD");
        J("#formList").attr("action", "$!{context_path}/prs/mngCon/planMngCon/planMngConModify.vw?type=template").submit();
	}
	
	/******************************************
     * 확인요청
     ******************************************/
    function goAprove() {
		if(J("#list").jqGrid('getDataIDs') == ""){
            J.showMsgBox("성과목표를 입력하셔야 합니다.", null, null); 
        } else {
			weightText();
		}
	}
	
	/******************************************
	 * 확인요청
	 ******************************************/
	function weightText(){ //가중치 합 유효성검사
		var count = J("#list").jqGrid('getGridParam', 'records');
		var saveChk = true;
		var weightSum = 0;
		
		//정렬기준 null체크 중복체크
    	if(count >0){
			
    		 J(":input[name=weights]").each(function(index, item) {
        			if(J(item).val() != "" && J(item).val() != "0") {
        				weightSum  = parseFloat(weightSum) + parseFloat(J(item).val());
        			}
    		 });
    
    	 	weightSum = Math.round(weightSum*100)/100;	

    	   if(weightSum != "100"){
				J.showMsgBox("가중치 합계가 100이 되어야합니다.<br/>재조정해주세요." , null);
    			saveChk = false;
    		    return false;
		   }
			
		   if(saveChk){
		   J.showConfirmBox("확인요청 하시겠습니까?", "aproveDo"); //deleteDo() 콜백함수 호출
           }
		   
       }
    }
	
    /******************************************
     * 확인요청
     ******************************************/
    function aproveDo() {
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
		J("#evalMembEmpn").val(J("#findEmpn").val());
        J("#year").val(J("#findYear").val());
        J("#mode").val("APC");
        J("#formList").attr("action", "$!{context_path}/prs/mngCon/planMngCon/planMngConProcess.vw?type=template").submit();
    }
    
    
    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
      J("#yearNm").val("$!{CS_HTML.txt2html($membersTable.YEAR)}년");
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
		J("#evalMembEmpn").val(J("#findEmpn").val());
		J("#korNm").val("$!{CS_HTML.txt2html($membersTable.KOR_NM)}");
		J("#deptKorNm").val("$!{CS_HTML.txt2html($membersTable.DEPT_KOR_NM)}");
		J("#posTcNm").val("$!{CS_HTML.txt2html($membersTable.POS_TC_NM)}");
		J("#castTcNm").val("$!{CS_HTML.txt2html($membersTable.CAST_TC_NM)}");
		J("#workDate").val("$!{CS_HTML.txt2html($membersTable.FROM_DT,100)} ~ $!{CS_HTML.txt2html($membersTable.TO_DT,100)}");
		J("#approveUserNm").val("$!{CS_HTML.txt2html($membersTable.APPROVE_USER_NM)}");
		J("#planStatusNm").val("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_NM)}");
		J("#finalApproveDt").val("$!{CS_HTML.txt2html($membersTable.FINAL_APPROVE_DT)}");
        J("#formList").attr("action", "$!{context_path}/prs/mngCon/planMngCon/planMngConListExcel.vw?type=excel").submit();
        return false;
    }

//]]>
</script>

