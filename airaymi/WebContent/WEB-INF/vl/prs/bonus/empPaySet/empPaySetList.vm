#set($curr_url = $!{context_path} + "/prs/bonus/empPaySet/empPaySetList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/bonus/empPaySet/empPaySetList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colNames     :['사번', '이름', '소속부서', '부서코드', '직급코드', '직급','직위코드', '직위','근무월수(월)', '기본급(원)'],
			colModel     :[
							{name:'EMPN'   			,index:'EMPN'				,width:70		,align:'center' },
							{name:'KOR_NM'   		,index:'KOR_NM'				,width:80   	,align:'center' , formatter:linkUpdate},
							{name:'DEPT_FULL_NM'	,index:'DEPT_FULL_NM'		,width:100		,align:'left' },
							{name:'DEPT_CD'			,index:'DEPT_CD'			,width:150		,align:'center' },
							{name:'CAST_TC'			,index:'CAST_TC'			,width:10		,align:'center' },
							{name:'CAST_TC_NM'		,index:'CAST_TC_NM'			,width:60		,align:'center' },
							{name:'POS_TC'			,index:'POS_TC'				,width:10		,align:'center' },
							{name:'POS_TC_NM'		,index:'POS_TC_NM'			,width:60		,align:'center' },
							{name:'TOT_MON'			,index:'TOT_MON'			,width:60		,align:'center' },
							{name:'PAY'				,index:'PAY'				,width:100		,align:'right' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			##cmTemplate: {sortable:false},
			caption:"개인급여설정"
		}).jqGrid('hideCol', "DEPT_CD").jqGrid('hideCol', "CAST_TC").jqGrid('hideCol', "POS_TC").setGridWidth($!{jqGrid_r_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			var findYear = J("#findYear").val();
			
			// 연도가 변경되지 않는 경우 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
			// formList가 submit되는 경우(신규, 수정, 삭제) 검색조건의 사용여부를  유지시켜주기 위해 설정.
			J("#formList input[name=findUseYn]").val(J("#findUseYn").val());
			
			J("#findScDeptId").val("");
			J("#findLevelId").val("");
		});
		
		/******************************************
         * 개인급여 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnPayDown").click(function() {
            payExcelDownload();
            return false;
        });
        
        /******************************************
         * 개인급여 엑셀업로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnPayUpload").click(function() {
    
			J.showConfirmBox("엑셀업로드를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "PayExcelUp"); 
            
            return false;
        });
        
        /******************************************
         * fancy Box 팝업호출
         ******************************************/
        J("#anchor").fancybox();            
        
    });
    
    /******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#empn").val(ret.EMPN);		 // List에서 선택한 사원을 설정.
		J("#mode").val("ADD");
		
		J("#formList").attr("action", "$!{context_path}/prs/bonus/empPaySet/empPaySetModify.vw?type=template").submit();
	}
    
    /******************************************
    * 개인급여 엑셀다운로드
    ******************************************/
    function payExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/bonus/empPaySet/empPayExcel.vw?type=excel").submit();
        return false;
    }
    
    /******************************************
     * 개인급여 엑셀업로드
     ******************************************/
    function PayExcelUp(){
        var year = J("#findYear").val();
        var findHighPgmId = J("#findHighPgmId").val();
        var findSubPgmId = J("#findSubPgmId").val();
        var findPgmId = J("#findPgmId").val();
        J("#mode").val("ADDEXCEL");
        J("#anchor").attr("href","$!{context_path}/prs/bonus/empPaySet/popExcelUpload.vw?findYear=" + year  +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
        J("#anchor").click();
    }
    
	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/bonus/empPaySet/empPaySetList_xml.vw?" + J("#formFind").serialize(), datatype:"json"}); 
		J("#list").trigger("reloadGrid");
	}
	
	/******************************************
	 * 조직선택 클릭이벤트
	 ******************************************/
	function goAction(deptCd, deptNm) {
		setDeptInfo(deptCd, deptNm);
	}
	
	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/ 
	function setDeptInfo(deptCd, deptNm) {
		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findDeptCd]").val(deptCd);
		J("#formList input[name=findDeptNm]").val(J(deptNm).text());
	
			// formFind의 변수들 설정.
			J("#findDeptCd").val(deptCd);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findDeptNm").val(J(deptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			
			goGridSearch();
			
	}
	
//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">성과조직관리</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")
			
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/prs/bonus/empPaySet/empPaySetList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"	id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				<input type="hidden" 	id="findDeptCd"		name="findDeptCd"		value="$!{searchMap.txt2html("findDeptCd")}" />
				<input type="hidden" 	id="findDeptNm"		name="findDeptNm"		value="$!{searchMap.txt2html("findDeptNm")}" />
				
				<div class="searchBox">
    				<div><div><div>
    				<table summary="인사정보 검색 조건">
						<caption class="none">인사정보 검색 조건</caption> 
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span>$!{YEAR}</span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
            						</span>
            					</td>
            				</tr>
        				</tbody>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" align="middle" alt="검색" /> 
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
			<a id="anchor"></a>
		</div>
		
		<form id="formList" name="formList" method="post" action="$!{context_path}/prs/bonus/empPaySet/empPaySetProcess.vw?type=template">
			<input type="hidden" id="mode"       	name="mode" />
			<input type="hidden" id="year"       	name="year" />
			<input type="hidden" id="yearNm"       	name="yearNm" />
			<input type="hidden" id="korNm"       	name="korNm" />
			
			<input type="hidden" id="years"       	name="year" />
			<input type="hidden" id="seq"       	name="seq" />
			<input type="hidden" id="empn"      name="empn" />
			<input type="hidden" id="deptCd"    name="deptCd" />
			<input type="hidden" id="castTc"    name="castTc" />
			<input type="hidden" id="posTc"     name="posTc" />
			<input type="hidden" id="pcmtTc"    name="pcmtTc" />
			<input type="hidden" id="workMon"   name="workMon" />
			<input type="hidden" id="pay"    	name="pay" />
			<input type="hidden" id="content"   name="content" />
			
			$!{searchMap.makeHiddenFind()}
			
			<div id="splitterBox">
				<div>
					<!-- 조직트리 Start -->
					<div class="blockGridTreeTable">
						#parse("/WEB-INF/vl/prs/insa/dept/deptTree.vm")
					</div>
						
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable floatRight">
						<table id="list" summary="인사정보 조회결과" padding-left:"5px">
							<caption class="none">인사정보 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
				</div>
			</div>
			<div class="blockButton_all floatLeft">
				<div class="blockButton" style="float:left; text-align:left; width:155px;">
					<input id="btnPayDown" type="button" align="middle" value="직원급여 엑셀다운로드", alt="직원급여 다운로드" />
				</div>
				#if($!{CS_HTML.txt2html($detail.CONFIRM_DT)} == "")
				<div class="blockButton" style="float:left; text-align:left; width:145px;">
					<input id="btnPayUpload" type="button" align="middle" value="직원급여 엑셀업로드" alt="직원급여 업로드" />
				</div>
				#else
				<ul>
	    			<li style="float:right;"><span id="closeAlert" class="txt_red2">$!{searchMap.txt2html("findYear")}년도 성과급 확정을 $!{CS_HTML.txt2html($detail.CONFIRM_DT)}에 진행하셨습니다.</span></li>	    				
	    		</ul>
				#end
			</div>
		</form>
		
	</div>
	<div class="clear"></div>
</div>
