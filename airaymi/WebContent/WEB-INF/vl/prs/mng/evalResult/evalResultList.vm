        J("#evalGrpNm").val(J("#findEvalGrpId > option:selected").text());
        J("#userNm").val(J("#findKorNm").val());
		J("#formList").attr("action", "$!{context_path}/prs/mng/evalResult/evalResultListExcel.vw?type=excel").submit();
		return false;
	}
    
    
	/******************************************
	 * 엑셀다운로드
