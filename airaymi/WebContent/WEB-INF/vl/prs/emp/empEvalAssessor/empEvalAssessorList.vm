				J("input[name='firstKornms']").eq(i).focus();
				return false;
				}
			}
			
		}	
		*/
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
		
    }

    /******************************************
     * 저장
     ******************************************/
    function saveDo() {	
		
        J("#mode").val("ADD");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/emp/empEvalAssessor/empEvalAssessorProcess.vw?type=template").submit();
                
        return false;
    }
    
//]]>
</script>

