    function saveChk() {
		var ids	= J("#list").jqGrid('getDataIDs');
		
		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			var val = rowdata.LEADERSHIP_SCORE;
			var score1 = J("input[name='score1']").eq(i).val();
			var score2 = J("input[name='score2']").eq(i).val();
