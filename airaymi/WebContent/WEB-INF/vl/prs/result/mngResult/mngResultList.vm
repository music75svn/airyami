	function getEvalResult() {
		J.showConfirmBox("평가결과 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "evalResultDo"); //evalResultDo() 콜백함수 호출
	}
	
	function evalResultDo() {
		J("#mode").val("GET");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/result/mngResult/mngResultProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * jqGrid 평가결과 상세 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:modify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 평가결과 상세 링크
	 ******************************************/
	function modify(rowId) {
	
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#mode").val("MOD");
		J("#year").val(ret.YEAR);
		J("#empn").val(ret.EMPN);
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
        J("#castTc").val(ret.CAST_TC);
		
		J("#formList").attr("action", "$!{context_path}/prs/result/mngResult/mngResultModify.vw?type=template").submit();
	}
	
