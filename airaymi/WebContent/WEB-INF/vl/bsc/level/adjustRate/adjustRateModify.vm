<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#form1').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/level/adjustRate/adjustRateList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '평가항목그룹 ID', '평가항목그룹', '평가등급', 'CNT', 'INDEX'
                			#foreach($list in $gradeList)
								, '$!{CS_HTML.txt2html($list.GRADE)}'
							#end
                			
						  ],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' ,sortable:false ,cellattr: attrSetting }, 
                            {name:'ITEM_GRP_ID'          ,index:'ITEM_GRP_ID'          ,width:150   ,align:'center' ,sortable:false ,cellattr: attrSetting }, 
                            {name:'ITEM_GRP_NM'          ,index:'ITEM_GRP_NM'          ,width:120   ,align:'center' ,sortable:false ,cellattr: attrSetting }, 
                            {name:'GRADE'                ,index:'GRADE'                ,width:100   ,align:'center' ,sortable:false },
							{name:'GROUP_CNT'            ,index:'GROUP_CNT'            ,width:80    ,align:'center' ,sortable:false },
							{name:'GROUP_INDEX'          ,index:'GROUP_INDEX'          ,width:80    ,align:'center' ,sortable:false }
							
							#foreach($list in $gradeList)
								, {name:'$!{CS_HTML.txt2html($list.GRADE)}'   ,index:'$!{CS_HTML.txt2html($list.GRADE)}' ,width:100 ,align:'center' ,sortable:false ,formatter:linkRate}
							#end
                            
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
    							J("input[name=adjustRates]").numeric({allow:"."});
    							J("input[name=adjustRates]").css("ime-mode", "disabled"); //한글사용 비활성화
                           },
			caption:"난이도 조정계수"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"ITEM_GRP_ID").jqGrid('hideCol',"GROUP_CNT").jqGrid('hideCol',"GROUP_INDEX").setGridWidth($!{jqGrid_width});
        
		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true, 
          groupHeaders:[
        	{startColumnName: 'S', numberOfColumns: 10, titleText: '<em>$!{secondGradeNm}</em>'}
          ]	
        });
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/level/adjustRate/adjustRateList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
	});
	
	/******************************************
	 * jqGrid 계수
	 ******************************************/
	function linkRate(cellvalue, options, rowObject) {
		return '<input type="text" name="adjustRates" value="' + cellvalue + '" class="inputbox textRight w70"/>';
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		/*
		if(!J.checkLength("codeGrpNm", "코드그룹명", 1, 75)) {
			return;
		}
        
		if (J("input[name='yearYn']:checked").val() == undefined) {
			J.showMsgBox("연도별 관리여부를 선택해 주십시요", null, "yearYn1");
			return;
		}
         
		if((J("#mode").val() == "MOD" ) && (J("#oldYearYn").val() == "N") && (J("input[name='yearYn']:checked").val() == "Y")) {
			J.showMsgBox("연도별 관리시 각 연도별로 코드가 자동생성됩니다", null, null);
			J("#mode").val("MOD2");
		}
 		*/
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/level/adjustRate/adjustRateProcess.vw?type=template").submit();
	}
	
	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.GROUP_INDEX;
		var rowSpan = rowObject.GROUP_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		return result;
	} 

//]]>
</script>    
 
