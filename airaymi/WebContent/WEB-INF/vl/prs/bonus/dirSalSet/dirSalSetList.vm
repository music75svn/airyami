			<input type="hidden" id="rate"      name="rate" />
			<input type="hidden" id="salary"    name="salary" />
			<input type="hidden" id="content"   name="content" />
			$!{searchMap.makeHiddenFind()}
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="임원연봉 조회결과">
							<caption class="none">임원연봉 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all floatLeft">
						<div class="blockButton" style="float:left; text-align:left; width:155px;">
							<input id="btnExcelDown" type="button" align="middle" value="임원연봉 엑셀다운로드", alt="임원연봉 다운로드" />
						</div>
						#if($!{CS_HTML.txt2html($detail.CONFIRM_DT)} == "")
						<div class="blockButton" style="float:left; text-align:left; width:145px;">
							<input id="btnDirSalUpload" type="button" align="middle" value="임원연봉 엑셀업로드" alt="임원연봉 업로드" />
						</div>
						#end
						<div class="blockButton">
						#if($!{CS_HTML.txt2html($detail.CONFIRM_DT)} == "")	
							<ul>
								<li><input type="button" id="btnInsert" value="일괄수정" /></li>
							</ul>
						</div>
						#else
						<ul>
			    			<li><span id="closeAlert" class="txt_red2">$!{searchMap.txt2html("findYear")}년도 성과급 확정을 $!{CS_HTML.txt2html($detail.CONFIRM_DT)}에 진행하셨습니다.</span></li>	    				
			    		</ul>
						#end
					</div>
				</div>
			</div>
		</form>

	</div>
	<div class="clear"></div>
</div>
