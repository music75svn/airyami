#set($curr_url = $!{context_path} + "/bsc/base/metric/metricList.vw")
<script type="text/javascript" language="javascript">
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
	 	var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/base/metric/metricList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colNames     :[ '$!{PERSPECTIVE_NM}', '$!{STRATEGY_NM}', '$!{METRIC_NM} ID', '$!{METRIC_NM}', '실적입력자', '실적확인자', '실적입력자', '실적확인자', '가중치', '상위지표ID'],
			colModel     :[
							{name:'PERSPECTIVE_NM'       ,index:'PERSPECTIVE_NM'       ,width:100   ,align:'left'   },
                            {name:'STRATEGY_NM'          ,index:'STRATEGY_NM'          ,width:100   ,align:'left'   },
                            {name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:100   ,align:'left'   ,formatter:linkMetricId},
							{name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:130   ,align:'left'   ,formatter:linkUpdate},
							{name:'INSERT_USER_ID'       ,index:'INSERT_USER_ID'       ,width:100   ,align:'center' ,formatter:linkInsertUserId},
							{name:'APPROVE_USER_ID'      ,index:'APPROVE_USER_ID'      ,width:100   ,align:'center' ,formatter:linkApproveUserId},
							{name:'INSERT_USER_NM'       ,index:'INSERT_USER_NM'       ,width:100   ,align:'center' ,formatter:linkInsertUserNm},
							{name:'APPROVE_USER_NM'      ,index:'APPROVE_USER_NM'      ,width:100   ,align:'center' ,formatter:linkApproveUserNm},
							{name:'WEIGHT'               ,index:'WEIGHT'               ,width:80    ,align:'center' ,formatter:linkWeight},
							{name:'UP_METRIC_ID'         ,index:'UP_METRIC_ID'         ,width:60    ,align:'center' ,sortable:false}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : false,
			gridview     : true,
			multiselect  : false,
			cmTemplate	 : {sortable:false},
			cellEdit     : true,
			loadComplete : function() {
								J("input[name=sortOrders]").numeric();
								J("input[name=sortOrders]").css("ime-mode", "disabled"); //한글사용 비활성화
								J("input[name=weights]").numeric({allow:"."});        //특정문자 허용(.)
								J("input[name=weights]").css("ime-mode", "disabled"); //한글사용 비활성화
								
								getWeightSum();    //가중치 합계가져오기
								getScDeptInfo();   //조직별 담당자 및 KPI 승인상태 가져오기
                           },
			caption:"조직별KPI관리"
		}).jqGrid('hideCol','METRIC_ID').jqGrid('hideCol','UP_METRIC_ID').jqGrid('hideCol','INSERT_USER_ID').jqGrid('hideCol','APPROVE_USER_ID').setGridWidth($!{jqGrid_r_width});
		
		J("#list").jqGrid('sortableRows');
		
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox(); 
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			var findYear = J("#findYear").val();
			var oldYear = J("#oldYear").val();
			
			if(findYear == oldYear) { 
    			goGridSearch();
    			return false;
			}
		});
		
		/******************************************
		 * 저장버튼 클릭 이벤트
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});
		
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#scDeptId").val(J("#findScDeptId").val());
			J("#scDeptNm").val(J("#findScDeptNm").val());
			J("#formList").attr("action", "$!{context_path}/bsc/base/metric/metricList.vw?type=template").submit();
		});
		
		/******************************************
		 * 가중치 입력시 이벤트
		 ******************************************/
		J(":input[name=weights]").live("keyup", function(){
			compute();
		});
        
	});
	
	/******************************************
	 * 지표가중치 합계 가져오기
	 ******************************************/
	function getWeightSum() { 
		var findYear = J("#findYear").val();
		var findScDeptId = J("#findScDeptId").val();
		var findBscMetricGbn = J("#findBscMetricGbn").val();
		var findUseYn = J("#findUseYn").val();
		
		J.ajax({
			url        : "$!{context_path}/bsc/base/metric/metricWeightSum_ajax.vw",
        	type       : "POST",
			data       : "findYear=" + findYear + "&amp;findScDeptId=" + findScDeptId + "&amp;findBscMetricGbn=" + findBscMetricGbn + "&amp;findUseYn=" + findUseYn,
        	dataType   : "xml",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success    : function (xml) {
				if(J(xml).find("items").find("item").length > 0) {
					J(xml).find("items").find("item").each(function() {
                        var weightSum = J(this).find("weightSum").text();
						J("#weightSum").text(weightSum);
						
						if(weightSum != "100") {
							J("#weightAlert").show();
						} else {
							J("#weightAlert").hide();
						}
                    });
				}
        	},  
			error : function(xhr, status, error) {
				alert(error);
			}
    	});
	}
	
	/******************************************
	 * 조직별 담당자 및 KPI 승인상태 가져오기
	 ******************************************/
	function getScDeptInfo() { 
		var findYear = J("#findYear").val();
		var findScDeptId = J("#findScDeptId").val();
		
		J.ajax({
			url        : "$!{context_path}/bsc/base/metric/scDeptInfo_ajax.vw",
        	type       : "POST",
			data       : "findYear=" + findYear + "&amp;findScDeptId=" + findScDeptId,
        	dataType   : "xml",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success    : function (xml) {
				if(J(xml).find("items").find("item").length > 0) {
					J(xml).find("items").find("item").each(function() {
                        var approveStatusId = J(this).find("approveStatusId").text();
						var approveStatusNm = J(this).find("approveStatusNm").text();
						var bscUserId = J(this).find("bscUserId").text();
						var managerUserId = J(this).find("managerUserId").text();
						
						J("#approveStatus").text(approveStatusNm);
						J("#bscUserId").val(bscUserId);
						J("#managerUserId").val(managerUserId);
                    });
				}
        	},  
			error : function(xhr, status, error) {
				alert(error);
			}
    	});
	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		var str = cellvalue;
		
		if(rowObject.UP_METRIC_ID != "") {
			str = "<img src=\'$!{img_path}/tree.gif\' align='absmiddle'>" + str
		}
		
		return str;
	}
	
	/******************************************
	 * jqGrid 지표코드
	 ******************************************/
	function linkMetricId(cellvalue, options, rowObject) {
		return '<input type="text" name="metricIds" value="' + cellvalue + '" class="wp50"/>';
	}

	/******************************************
	 * jqGrid KPI담당자ID
	 ******************************************/
	function linkInsertUserId(cellvalue, options, rowObject) {
		return '<input type="text" name="insertUserIds" value="' + cellvalue + '" class="wp50"/>';
	}
	
	/******************************************
	 * jqGrid 실적승인자ID
	 ******************************************/
	function linkApproveUserId(cellvalue, options, rowObject) { 
		return '<input type="text" name="approveUserIds" value="' + cellvalue + '" class="wp50"/>';
	}
	
	/******************************************
	 * jqGrid KPI담당자명
	 ******************************************/
	function linkInsertUserNm(cellvalue, options, rowObject) {
		var str = '';
		str += '<input type="text" name="insertUserNms" value="' + cellvalue + '" class="inputbox w40"/>&nbsp;';
		str += '<input type="image" onclick="javascript:popInsertUser(' + options.rowId + ');return false;" class="valign_middle" src="$!{img_path}/common/board/ic_search.gif" alt="승인자선택"/>&nbsp;';
		str += '<input type="image" onclick="javascript:setInsertInit(' + options.rowId + ');return false;" class="valign_middle" readonly="readonly" src="$!{img_path}/common/board/ic_cancel.gif" alt="승인자취소"/>&nbsp;';
		return str;
	}
	
	/******************************************
	 * jqGrid 실적승인자명
	 ******************************************/
	function linkApproveUserNm(cellvalue, options, rowObject) { 
		var str = '';
		str += '<input type="text" name="approveUserNms" value="' + cellvalue + '" class="inputbox w40"/>&nbsp;';
		str += '<input type="image" onclick="javascript:popApproveUser(' + options.rowId + ');return false;" class="valign_middle" src="$!{img_path}/common/board/ic_search.gif" alt="승인자선택"/>&nbsp;';
		str += '<input type="image" onclick="javascript:setApproveInit(' + options.rowId + ');return false;" class="valign_middle" readonly="readonly" src="$!{img_path}/common/board/ic_cancel.gif" alt="승인자취소"/>&nbsp;';
		return str;
	}
	
	/******************************************
	 * jqGrid 정렬순서
	 ******************************************/
	function linkSortOrder(cellvalue, options, rowObject) { 
		return '<input type="text" name="sortOrders" value="' + cellvalue + '" class="inputbox wp70" maxlength="5" />';
	}
	
	/******************************************
	 * jqGrid 가중치
	 ******************************************/
	function linkWeight(cellvalue, options, rowObject) { 
		var str = '';
		str += '<input type="hidden" name="weightsChk" value="' + rowObject.UP_METRIC_ID + '" class="inputbox wp70"/>';
		str += '<input type="text" name="weights" value="' + cellvalue + '" class="inputbox wp70" maxlength="6" />';
		return str;
	}
	
	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/bsc/base/metric/metricList_xml.vw?"+J("#formFind").serialize()}); 
		J("#list").trigger("reloadGrid");
	}

	/******************************************
	 * 조직트리 선택
	 ******************************************/
	function goAction(code, name) {
		var scDeptNm = J(name).text();
		J("#findScDeptId").val(code);
		J("#findScDeptNm").val(scDeptNm);
		goGridSearch();
	}

	/******************************************
	 * KPI 승인자 선택 팝업
	 ******************************************/
	function popApproveUser(index) {
		J("#index").val(index);
		J("#anchor").attr("href","$!{context_path}/bsc/module/commModule/popSearchUser.vw?findYear=$!{searchMap.txt2html("year")}&amp;callBack=setApproveUserInfo");
		J("#anchor").click();
	}
	
	/*****************************************************
	 * KPI 승인자 설정
	 *****************************************************/ 
	function setApproveUserInfo(arguments) {
		var index = J("#index").val();
		J("input[name=approveUserIds]").eq(index-1).val(arguments[0]);
		J("input[name=approveUserNms]").eq(index-1).val(arguments[1]);
		J.fancybox.close();
	}
	
	/******************************************
	 * KPI 승인자 선택 취소
	 ******************************************/
	function setApproveInit(index) {
		J("input[name=approveUserIds]").eq(index-1).val("");
		J("input[name=approveUserNms]").eq(index-1).val("");
	}

	/******************************************
	 * KPI 담당자 선택 팝업
	 ******************************************/
	function popInsertUser(index) {
		J("#index").val(index);
		J("#anchor").attr("href","$!{context_path}/bsc/module/commModule/popSearchUser.vw?findYear=$!{searchMap.txt2html("year")}&amp;callBack=setInsertUserInfo");
		J("#anchor").click();
	}
	
	/*****************************************************
	 * KPI 담당자 설정
	 *****************************************************/ 
	function setInsertUserInfo(arguments) {
		var index = J("#index").val();
		J("input[name=insertUserIds]").eq(index-1).val(arguments[0]);
		J("input[name=insertUserNms]").eq(index-1).val(arguments[1]);
		J.fancybox.close();
	}
	
	/******************************************
	 * KPI 담당자 선택 취소
	 ******************************************/
	function setInsertInit(index) {
		J("input[name=insertUserIds]").eq(index-1).val("");
		J("input[name=insertUserNms]").eq(index-1).val("");
	}
	
	/******************************************
	 * 일괄등록
	 ******************************************/
	function goInsert() {
        var weightSum = 0;
        var saveChk   = true;
        J("input[name=weights]", "#formList").each(function(index, item) {
            if( isNaN(J(item).val())) {
                J.showMsgBox("가중치는 숫자만 입력 가능합니다.", null, J('input[name=weights]').eq(index));
                saveChk = false;
                return false;
            }
            weightSum += Number(J(item).val());
        });
        
        if( !saveChk ) {
            return;
        }
        
        if( weightSum != 100  ) {
            alert("가중치의 합은 100이여야 합니다.");
            return;
        }
    
		J.showConfirmBox("일괄등록 하시겠습니까?", "insertDo"); //insertDo() 콜백함수 호출
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function insertDo() {
		J("#year").val(J("#findYear").val());
		J("#scDeptId").val(J("#findScDeptId").val());
		J("#scDeptNm").val(J("#findScDeptNm").val());
		J("#mode").val("BATCH");
		J("#formList").attr("action", "$!{context_path}/bsc/base/metric/metricProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 가중치 합계 계산
	 ******************************************/
	function compute() {
		var weightSum = 0;
		
		J(":input[name=weights]").each(function(index, item) {
			if(J(":input[name=weightsChk]").eq(index).val()==""){
    			if(J(item).val() != "" && J(item).val() != "0") {
    				weightSum  = parseFloat(weightSum) + parseFloat(J(item).val());
    			}
			}
		});
		
		weightSum = Math.round(weightSum*100)/100;
		
		J("#weightSum").text(weightSum);
						
		if(weightSum != "100") {
			J("#weightAlert").show();
		} else {
			J("#weightAlert").hide();
		}
	}
	
	
//]]>
</script>

