<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/base/code/codeList.vw?type=template").submit();
		});
		
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});
		
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#content").checkbyte({
			indicator:J("#indicator"),
			limit:1000
		});
		J("#content").trigger("keyup");
		
		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 코드ID 영문자, 숫자만 입력받기
		 ******************************************/
		J("#codeId").alphanumeric();
		J("#codeId").css("ime-mode", "disabled"); //한글사용 비활성화
		
		/******************************************
		 * 정렬순서 숫자만 입력받기
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled"); //한글사용 비활성화
	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		#if($!{CS_HTML.txt2html($codeGrpDatail.CODE_DEF_ID)} == '02')
			if(!J.checkLength("codeId", "코드ID", 1, 7)) {
				return;
			}
		#end
		
		if(!J.checkLength("codeNm", "코드", 1, 75)) {
			return;
		}
                
        if( !onlyNumber( J("#sortOrder").val(), "정렬순서" ) ) {
            J("#sortOrder").focus();
            return; 
        }
        
        if( !LengthCheck( J("#etc1").val(), "ETC1", 0, 75 ) ) {
            J("#etc1").focus();
            return; 
        }
        
        if( !LengthCheck( J("#etc2").val(), "ETC2", 0, 75 ) ) {
            J("#etc2").focus();
            return; 
        }
        
        if( !LengthCheck( J("#content").val(), "비고", 0, 1000 ) ) {
            J("#content").focus();
            return; 
        }
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/base/code/codeProcess.vw?type=template").submit(); 
	}

//]]>
</script>    
 
<form id="form1" name="form1" method="post" action="$!{context_path}/bsc/base/code/codeProcess.vw?type=template">
    <input type="hidden"	id="mode"		name="mode"			value="$!{searchMap.txt2html("mode")}" />
