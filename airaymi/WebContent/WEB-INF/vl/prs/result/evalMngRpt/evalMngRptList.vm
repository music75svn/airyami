    function changeEvalGrpIdAction(findYear) {

        J.ajax({
            url        : "$!{context_path}/bsc/module/commModule/evalGrpList_ajax.vw",
            type       : "POST",
            data       : "findYear="+findYear+"&amp;findEvalGrpType=" + "02",
            dataType   : "xml",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            success    : function (xml) {
                J("#findEvalGrpId").empty();
                
                if(J(xml).find("items").find("item").length > 0) {
                    $(xml).find("items").find("item").each(function() {  
                        var evalGrpId   = $(this).find("evalGrpId").text();
                        var evalGrpNm   = $(this).find("evalGrpNm").text();
                        
                        J("#findEvalGrpId").append("<option value='" + evalGrpId +"'>"+evalGrpNm+"</option>");
                        
                    });
                }
            },  
            error : function(xhr, status, error) {
                alert(error);
            }
        });
    }
	
