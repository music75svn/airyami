<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">

#set($main_url = $!{searchMap.txt2html("mainUrl")})
#set($curr_url = $!{context_path} + "/str/mon/metricMapping/popMetricMappingList.vw")

<head>
	#parse("/WEB-INF/vl/common/template/head.vm")
    <script type="text/javascript" language="javascript" >
	
	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/str/mon/metricMapping/popMetricMappingList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_pop_width},
			colNames     :[ '$!{METRIC_NM} ID', '$!{METRIC_NM}', '$!{SC_DEPT_NM}', '담당자', '$!{METRIC_NM}구분', '$!{METRIC_NM}속성', '목표', '실적', '평가점수', '평가상태'],
			colModel     :[
                            {name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:150  ,align:'center' }, 
                            {name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:250  ,align:'left'    ,formatter:linkMetricDetail}, 
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:70   ,align:'left'   }, 
                            {name:'USER_NM'              ,index:'USER_NM'              ,width:60   ,align:'center' }, 
                            {name:'METRIC_PROPERTY_NM'   ,index:'METRIC_PROPERTY_NM'   ,width:60   ,align:'center' }, 
                            {name:'TYPE_NM'              ,index:'TYPE_NM'              ,width:60   ,align:'center' }, 
                            {name:'TARGET'               ,index:'TARGET'               ,width:60   ,align:'center' }, 
                            {name:'ACTUAL'               ,index:'ACTUAL'               ,width:60   ,align:'center' }, 
                            {name:'SCORE'                ,index:'SCORE'                ,width:60   ,align:'center' }, 
                            {name:'STATUS'               ,index:'STATUS'               ,width:60   ,align:'center'  ,formatter:linkSignal}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"내평지표 연계 팝업"
        }).jqGrid('hideCol',"METRIC_ID").setGridWidth($!{jqGrid_pop_width});
		 
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		/******************************************
    	 * jqGrid 수정페이지 링크
    	 ******************************************/
    	function linkMetricDetail(cellvalue, options, rowObject) { 
    		return '<a href=javascript:goMetricPop(' + options.rowId + ')>' + cellvalue + '<//a>';
    	}
	
		/******************************************
		 * 닫기버튼 (창닫기)
		 ******************************************/
		J("#btnClose").click(function() {
			self.close();
		});
		 
	});
	
	/******************************************
	 * jqGrid 신호등
	 ******************************************/
	function linkSignal(cellvalue, options, rowObject) { 
		return "<img name=\'sig\'  src=\'$!{img_path}/common/ball/ball_" + cellvalue + ".gif\' >";
	}
	
	
	/******************************************
	 * 내부평가지표 팝업
	 ******************************************/
	function goMetricPop(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear = J("#findYear").val();
		var findMon = J("#findMon").val();
		var findMetricId = ret.METRIC_ID;
		
		var param = "&amp;year=" + findYear + "&amp;findMon=" + findMon + "&amp;metricId=" + findMetricId + "&amp;analCycle=Y";
		
		var url = "$!{context_path}/bsc/mon/metricActualDetail/popMetricActualDetailList.vw?type=popup" + param;
		openWinByName(url,'popMetricMapping','1250','640','yes');
	}
	
    </script>
</head>
<body>
	
<div>
	<div class="pop_blockContainer">
		<!-- search S -->
		<form id="formFind" name="formFind" method="post" action="$!{context_path}/str/mon/metricMapping/popMetricMappingList.vw?type=pop">
			<input type="hidden"	id="findHighPgmId"			name="findHighPgmId"		value="$!{searchMap.txt2html("findHighPgmId")}" />
			<input type="hidden" 	id="findSubPgmId"			name="findSubPgmId"			value="$!{searchMap.txt2html("findSubPgmId")}" />
			<input type="hidden"    id="findPgmId"				name="findPgmId"			value="$!{searchMap.txt2html("findPgmId")}" />
			<input type="hidden"    id="findSubjectMetricId"	name="findSubjectMetricId"	value="$!{searchMap.txt2html("findSubjectMetricId")}" />
			
			<div class="searchBox">
				<div><div><div>
				<table summary="내평지표 연계 팝업검색 조건">
					<caption class="none">내평지표 연계 팝업 검색 조건</caption> 
					<thead><tr><th></th></tr></thead>
    				<tbody>
        				<tr>
							<td class="searchBox_tit w250">
        						<span><label for="findYear">$!{YEAR}</label></span>
        						<span class="searchBar">
        							<select id="findYear" name="findYear" class="select w80">
        								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
        							</select>
									<select id="findMon" name="findMon" class="select w70">
        								$!CS_CODE.getCodeOption("024", $!{searchMap.txt2html("findMon")})
        							</select>
        						</span>
        					</td>
							<td class="searchBox_tit w240">
								<span>이행성과$!{METRIC_NM}</span>
        						<span class="searchBar">$!{subjectMetricNm}</span>
        					</td>
        				</tr>
    				</tbody>
				</table>
                <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" align="middle" alt="검색" /> 
                </div></div></div>
	        </div>
		</form>
		<!-- search E -->
		<div class="clear"></div>
		
		<div id="splitterBox">
			<!-- 데이터그리드 Start -->
			<div class="blockGridListTable">
				<table id="list" summary="내평$!{METRIC_NM} 연계 팝업 조회결과">
					<caption class="none">내평$!{METRIC_NM} 연계 팝업 조회</caption>
					<thead><tr><th></th></tr></thead>
					<tbody><tr><td></td></tr></tbody>
				</table>
				<div id="pager"></div>
			</div>
			<!--// 데이터그리드 End -->
		</div>
		
		<div class="blockButton"> 
			<ul>
				<li><input type="button" id="btnClose" value="닫기"/></li>
			</ul>
		</div>
	</div>
	<div class="clear"></div>
</div>

<div id="dialog" title="확인"></div>    <!-- 다이어로그 -->

</body>
</html>
