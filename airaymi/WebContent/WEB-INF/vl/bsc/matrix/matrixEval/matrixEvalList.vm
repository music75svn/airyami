	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goAction(' + options.rowId + ')>' + cellvalue + '<//a>';
	}


	/******************************************
	 * 우측 변경화면 평가항목 입력화면
	 ******************************************/
    function goAction(rowId) {

		var ret = J("#list").jqGrid('getRowData',rowId);

		var year = J("#findYear").val();
		var evalUserGrpId = J("#findEvalUserGrpId").val();
		var evalUserId = J("#findEvalUserId").val();
		var metricGrpId = ret.METRIC_GRP_ID;
		var stMode = J("#stMode").val();
		var isEvalSubmit = "$!{CS_HTML.txt2html($EVAL_SUBMIT_YN)}";
		J("#mode").val("MOD");

		J.ajax({
        	url      : "$!{context_path}/bsc/matrix/matrixEval/matrixEvalModify.vw",
        	cache    : false,
        	type     : "POST",
			data     : "findYear=" + year + "&amp;findEvalUserGrpId=" + evalUserGrpId + "&amp;findEvalUserId=" + evalUserId + "&amp;findMetricGrpId=" + metricGrpId + "&amp;stMode=" + stMode + "&amp;isEvalSubmit=" + isEvalSubmit,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				J("#matrixEvalData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#matrixEvalData").append(data);
        	}
    	});
	}


	/******************************************
	 * 평가년도 변경 시 평가자 변경 (AJAX)
	 ******************************************/
	function chgEvalYear(){
		J.ajax({
        	url      : "$!{context_path}/bsc/matrix/matrixEval/evalUserList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		#if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60"))
				J("#findEvalUserId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserId');
				})
				#end
				chgEvalUser();
        	}
    	});

	}

	/******************************************
	 * 평가자 변경 시 평가단 변경 (AJAX)
	 ******************************************/
	function chgEvalUser(){
		J.ajax({
        	url      : "$!{context_path}/bsc/matrix/matrixEval/evalUserGrp_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
