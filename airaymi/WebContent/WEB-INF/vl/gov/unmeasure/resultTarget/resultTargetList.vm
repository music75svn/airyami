	}

	/******************************************
	 * 수정
	 ******************************************/
	function goMeasModify(rowId) {

		var ret = J("#measlist").jqGrid('getRowData',rowId);
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#measId").val(ret.MEAS_ID);
		J("#insertUserId").val(ret.INSERT_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MMOD");
		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultTarget/resultMeasTargetModify.vw?type=template").submit();
}

	/******************************************
	 * 수정
	 ******************************************/
	function goNonMeasModify(rowId) {

		var ret = J("#nonMeaslist").jqGrid('getRowData',rowId);
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#nonMeasId").val(ret.NON_MEAS_ID);
		J("#insertUserId").val(ret.INSERT_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("NMMOD");
		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultTarget/resultNonMeasTargetModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goMeasDelete() {
		if(!J.gridSelectChk("measlist")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("선택된 계량부문 데이터를 삭제하시겠습니까?", "measDeleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goNonMeasDelete() {
		if(!J.gridSelectChk("nonMeaslist")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("선택된 비계량부문 데이터를 삭제하시겠습니까?", "nonMeasDeleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function measDeleteDo() {
		var id = J("#measlist").getGridParam('selarrrow');
		var ids = J("#measlist").jqGrid('getDataIDs');
		var rowdata = "";
		var govMetricIds = "";
		var measIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#measlist").getRowData(ids[i]);
					govMetricIds += rowdata.GOV_METRIC_ID + '|';
					measIds += rowdata.MEAS_ID + '|';
				}
			});
		}

		J("#govMetricIds").val(govMetricIds);J("#measIds").val(measIds);
		J("#mode").val("MDEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultTarget/resultTargetProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function nonMeasDeleteDo() {
		var id = J("#nonMeaslist").getGridParam('selarrrow');
