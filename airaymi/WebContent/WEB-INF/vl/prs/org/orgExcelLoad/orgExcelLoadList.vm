#set($curr_url = $!{context_path} + "/prs/org/orgExcelLoad/orgExcelLoadList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/org/orgExcelLoad/orgExcelLoadList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['세부항목코드', '세부항목코드', '세부항목명', '연계구분', '연계구분', '최종연계일시', '성공여부', '양식다운로드', '엑셀업로드'],
			colModel     :[
                            {name:'ORG_CONN_ITEM_ID'     ,index:'ORG_CONN_ITEM_ID'     ,width:10    ,align:'center' },
                            {name:'ORG_CONN_ITEM_IDS'    ,index:'ORG_CONN_ITEM_IDS'    ,width:10    ,align:'center' , formatter:linkItemCd},
                            {name:'ORG_CONN_ITEM_NM'     ,index:'ORG_CONN_ITEM_NM'     ,width:200   ,align:'left'   },
                            {name:'TYPE'        		 ,index:'TYPE'  	   		   ,width:70    ,align:'center' },
                            {name:'TYPE_NM'        		 ,index:'TYPE_NM'  	   		   ,width:70    ,align:'center' },
                            {name:'INTERFACE_DT'         ,index:'INTERFACE_DT'     	   ,width:100   ,align:'center' },
                            {name:'RESULT_YN'            ,index:'RESULT_YN'            ,width:70    ,align:'center' },							
                            {name:'EXCEL_DOWNLOAD'       ,index:'EXCEL_DOWNLOAD'       ,width:100   ,align:'center', formatter:linkUpdate1 },
                            {name:'EXCEL_UPLOAD'         ,index:'EXCEL_UPLOAD'         ,width:100   ,align:'center', formatter:linkUpdate2 }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
    								if(rowdata.TYPE != '01') { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"데이터리스트"
		}).jqGrid('hideCol',"ORG_CONN_ITEM_ID").jqGrid('hideCol',"ORG_CONN_ITEM_IDS").jqGrid('hideCol',"TYPE").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 세부항목명 포커스
		 ******************************************/
		J("#findOrgConnItemNm").select();

		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});

		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();            //엑셀업로드 팝업

		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchorTgt").fancybox();         //엑셀업로드 팝업
        
		/******************************************
		 * 연계실행 버튼 클릭 이벤트
		 ******************************************/
		J("#btnConnProcess").click(function() {
			goExec();
			return false;
		});        

	});	

	/******************************************
     * jqGrid 항목번호
     ******************************************/
    function linkItemCd(cellvalue, options, rowObject) {
    	return '<input type="text" name="orgConnItemIds" value="' + cellvalue + '" class="wp50" readonly="readonly"/>';
    }     

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate1(cellvalue, options, rowObject) {

		if(rowObject.TYPE == '01'){
			return "";
		}else{
			return "<img name=\'execlDown\' src=\'$!{img_path}/btn_excel.gif\' onclick=\"goExcelDown("+options.rowId+")\")\" style=\"cursor:hand\" >";
		}

	}

	function linkUpdate2(cellvalue, options, rowObject) {

		if(rowObject.TYPE == '01'){
			return "";
		}else{
			return "<img name=\'execlUp\'  src=\'$!{img_path}/btn_excel_upload.gif\' onclick=\"goExcelUp("+options.rowId+")\")\" style=\"cursor:hand\" >";
		}

	}

	/******************************************
	 * 엑셀 양식다운로드
	 ******************************************/
	function goExcelDown(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#year").val(J("#findYear").val());
		J("#itemCd").val(ret.ORG_CONN_ITEM_ID);
		J("#itemNm").val(ret.ORG_CONN_ITEM_NM);

		J("#formList").attr("action", "$!{context_path}/prs/org/orgExcelLoad/excelTemplateDown.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 엑셀 업로드
	 ******************************************/
	function goExcelUp(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		var year = J("#findYear").val();
		var findHighPgmId = J("#findHighPgmId").val();
		var findSubPgmId = J("#findSubPgmId").val();
		var findPgmId = J("#findPgmId").val();
		var itemCd = ret.ORG_CONN_ITEM_ID;
		var itemNm = ret.ORG_CONN_ITEM_NM;

		J("#anchor").attr("href","$!{context_path}/prs/org/orgExcelLoad/popExcelUpload.vw?findYear=" + year + "&amp;itemCd=" + itemCd + "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
		J("#anchor").click();
	}

	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/prs/org/orgExcelLoad/orgExcelLoadList.vw?type=template").submit();
	}
    
    /******************************************
	 * 연계실행
	 ******************************************/
	function goExec() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("실행할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("실행하시겠습니까?", "execDo"); //execDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 연계실행 처리
	 ******************************************/
	function execDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var orgConnItemIdExec = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					orgConnItemIdExec += rowdata.ORG_CONN_ITEM_ID + '|';
				}
			});
		}
		
		J("#orgConnItemIdExec").val(orgConnItemIdExec);
		J("#mode").val("ADD");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/org/orgExcelLoad/orgExcelLoadProcess.vw?type=template").submit();
		return false;
	}	


//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">엑셀로딩관리</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")

    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/prs/org/orgExcelLoad/orgExcelLoadList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />

				<div class="searchBox">
    				<div><div><div>
    				<table summary="엑셀로딩관리검색 조건">
						<caption class="none">엑셀로딩관리 검색 조건</caption>
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w180">
                                    <span><label for="findYear">$!{YEAR}</label></span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
            						</span>
            					</td>
								<td class="searchBox_tit w350">
                					<span><label for="findOrgConnItemNm">항목명</label></span>
									<span class="searchBar"><input type="text" id="findOrgConnItemNm" name="findOrgConnItemNm" class="text w250" value="$!{searchMap.txt2html("findOrgConnItemNm")}"  maxlength="20" title="항목명 "/> </span>
                                </td>
								<td class="searchBox_tit w200">
                                    <span><label for="findUseYn">사용여부</label></span>
            						<span class="searchBar">
            							<select id="findUseYn" name="findUseYn" class="select w70">
            								$!CS_CODE.getCodeOption("011", $!{searchMap.txt2html("findUseYn")})
            							</select>
            						</span>
            					</td>
            				</tr>
        				</tbody>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" align="middle" alt="검색" />
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<a id="anchor"></a>
			<a id="anchorTgt"></a>
			<div class="clear"></div>
		</div>

		<form id="formList" name="formList" method="post" action="$!{context_path}/prs/org/orgExcelLoad/orgExcelLoadProcess.vw?type=template">
			<input type="hidden" id="mode"			 	name="mode" />
			<input type="hidden" id="year"			 	name="year" />
			<input type="hidden" id="itemCds" 		 	name="itemCds" />
			<input type="hidden" id="itemCd"     	 	name="itemCd" />
			<input type="hidden" id="itemNm"    	 	name="itemNm" />
			<input type="hidden" id="useYn"          	name="useYn" />
			<input type="hidden" id="useYnNm"        	name="useYnNm" />
			<input type="hidden" id="yearNm"         	name="yearNm" />
			<input type="hidden" id="orgConnItemIdExec" name="orgConnItemIdExec" />
			$!{searchMap.makeHiddenFind()}

			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="엑셀로딩관리 조회결과">
							<caption class="none">엑셀로딩관리 조회결과</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all">
						<div class="blockButton">
							<ul>
								<li><input type="button" id="btnConnProcess" value="연계실행" /></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</form>

	</div>
	<div class="clear"></div>
</div>

