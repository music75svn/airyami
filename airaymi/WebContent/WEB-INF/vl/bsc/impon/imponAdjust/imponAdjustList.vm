                            {name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:200   ,align:'left'   ,sortable:true},
                            {name:'SC_DEPT_ID'           ,index:'SC_DEPT_ID'           ,width:150   ,align:'center' ,sortable:true},
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:120   ,align:'left'   ,sortable:true},
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:150   ,align:'center' ,sortable:true},
