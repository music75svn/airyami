	}


	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId, gbnId) {

		var ret = "";

		if(gbnId == '01'){

    		ret = J("#actlist").jqGrid('getRowData',rowId);

		}else if(gbnId == '02'){

			ret = J("#govlist").jqGrid('getRowData',rowId);

		}else if(gbnId == '03'){

			ret = J("#maslist").jqGrid('getRowData',rowId);

		}

		J("#pointOutGbnId").val(gbnId);
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#pointOutId").val(ret.POINT_OUT_ID);
		J("#insertUserId").val(ret.INSERT_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultActual/resultActualModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {

		if(J("#pointOutGbnId").val() == '01'){

    		if(!J.gridSelectChk("actlist")){
    			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
    		} else {
    			J.showConfirmBox("선택된 경영실적평가 지적사항을 삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
    		}

		}else if(J("#pointOutGbnId").val() == '02'){

			if(!J.gridSelectChk("govlist")){
    			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
    		} else {
    			J.showConfirmBox("선택된 국회및 감사원 지적사항을 삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
    		}

		}else if(J("#pointOutGbnId").val() == '03'){

			if(!J.gridSelectChk("maslist")){
    			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
    		} else {
    			J.showConfirmBox("선택된 언론 지적사항을 삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
    		}

		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {

		var id;
		var ids;
		var rowdata = "";
		var govMetricIds = "";
		var pointOutIds = "";

		if(J("#pointOutGbnId").val() == '01'){

    		id = J("#actlist").getGridParam('selarrrow');
    		ids = J("#actlist").jqGrid('getDataIDs');

    		for (var i = 0; i < ids.length; i++) {
    			J.each(id, function (index, value) {
    				if (value == ids[i]) {
    					rowdata = J("#actlist").getRowData(ids[i]);
    					govMetricIds += rowdata.GOV_METRIC_ID + '|';
    					pointOutIds += rowdata.POINT_OUT_ID + '|';
    				}
    			});
    		}

		}else if(J("#pointOutGbnId").val() == '02'){

			id = J("#govlist").getGridParam('selarrrow');
