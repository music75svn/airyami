#set($curr_url = $!{context_path} + "/bsc/system/closingMon/closingMonList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/closingMon/closingMonList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준월', '월마감상태', '마감실행', '마감여부'],
			colModel     :[
							{name:'MON'                  ,index:'MON'                  ,width:150   ,align:'center' },
                            {name:'CLOSING_YN_NM'        ,index:'CLOSING_YN_NM'        ,width:150   ,align:'center' ,formatter:closingYnGubunNm},
							{name:'CLOSING_YN'           ,index:'CLOSING_YN'           ,width:150   ,align:'center' ,formatter:linkUpdate },
							{name:'CLOSING_VAL'          ,index:'CLOSING_VAL'          ,width:150   ,align:'center' ,formatter:linkUpdateVal }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			cmTemplate   : {sortable:true},
			caption:"월마감 관리"
        }).jqGrid('hideCol',"CLOSING_VAL").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		var displayLabel = '';
		if( cellvalue == 'Y' ){
			displayLabel = '마감취소';
		}else {
			displayLabel = '마감';
		}
		var ret = '<a href=javascript:goModify(' + options.rowId + ')>' + displayLabel + '<//a>';
		return ret;
	}

	function linkUpdateVal(cellvalue, options, rowObject) {
		var displayLabel = '';
		if( cellvalue == 'Y' ){
			displayLabel = 'N';
		}else {
			displayLabel = 'Y';
		}
		return displayLabel;
	}

	function closingYnGubunNm(cellvalue, options, rowObject){
		var displayLabel = '';
		if( cellvalue == 'Y' ){
			displayLabel = '마감';
		}else {
			displayLabel = '미마감';
		}
		var ret = displayLabel;
		return ret;
	}

	/******************************************
	 * 마감/마감취소 실행
	 ******************************************/
	function goModify(rowId) {
		J("#tmpRowId").val(rowId);
		J.showConfirmBox("반영하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		var ret = J("#list").jqGrid('getRowData',J("#tmpRowId").val());
		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#mon").val(ret.MON);
		J("#closingYn").val(ret.CLOSING_VAL);
		J("#formList").attr("action", "$!{context_path}/bsc/system/closingMon/closingMonProcess.vw?type=template").submit();
	}

//]]>
</script>

