	/******************************************
	 * 그리드 ajax 조회 (주관부서 확인)
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/mng/evalAssessor/evalAssessorList_xml.vw?"+J("#formFind").serialize(), datatype:"json"}); 
		J("#list").trigger("reloadGrid");
	}
	
	/******************************************
	 * 조직선택 클릭이벤트 (주관부서 확인)
	 ******************************************/
	function goAction(deptCd, deptNm) {
		setDeptInfo(deptCd, deptNm);
	}
	
	/*****************************************************
	 * 조직선택 설정 (주관부서 확인)
	 *****************************************************/ 
	function setDeptInfo(deptCd, deptNm) {
		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findDeptCd]").val(deptCd);
		J("#formList input[name=findDeptNm]").val(J(deptNm).text());
		//var findCastTc = J("input:radio[name=findCastTc]:checked").val();
		J('input:radio[name=findCastTc]:input[value=""]').attr("checked", true);
			// formFind의 변수들 설정.
			J("#findDeptCd").val(deptCd);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findDeptNm").val(J(deptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			goGridSearch();
	}
	
   /******************************************
     * 직급 라디오버튼 변경시
     ******************************************/
    function reNew() {
    	var findCastTc1 = J("input:radio[name=findCastTc]:checked").val();
		J('input:radio[name=findCastTc]:input[value=findCastTc1]').attr("checked", true);
		J("#formFind input[name=findDeptCd]").val(J("#findDeptCd").val());
        J("#formFind").attr("action", "$!{context_path}/prs/mng/evalAssessor/evalAssessorList.vw?type=template").submit();
        return false;
    }

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
		if('$!{CS_HTML.txt2html($mngClosing.MNG_YN)}' == 'N'){
			J.showMsgBox("평가일정이  마감되었습니다.", null, null);
			return;
		}
        J("#evalMembEmpnSeq").val(ret.EVAL_MEMB_EMPN_SEQ);
        J("#evalMembEmpn").val(ret.EVAL_MEMB_EMPN);
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/mng/evalAssessor/evalAssessorModify.vw?type=template").submit();
    }

	
	/******************************************
	 * 개인별 1차평가자 불러오기
	 ******************************************/
	function getEmpnFisrstInfo() {
		J.showConfirmBox(J("#btnEmpnFisrstInfo").val()+"시 <br/><font color='red' style='font-weight:bold;'>기존평가 결과 및 평가자 정보</font>가 삭제됩니다.<br/>"+ J("#btnEmpnFisrstInfo").val()+"하시겠습니까?", "getEmpnFisrstInfoDo"); //getInsaInfoDo() 콜백함수 호출
	}
	
	/******************************************
	 * 개인별 1차평가자 불러오기 처리
	 ******************************************/
	function getEmpnFisrstInfoDo() {
