#set($curr_url = $!{context_path} + "/bsc/level/levelMapping/levelMappingList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
		
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/level/levelMapping/levelMappingList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가단', '$!{SC_DEPT_NM}', '$!{METRIC_NM}', 'EVAL_USER_GRP_ID', 'METRIC_ID', 'EVAL_SUBMIT_YN', 'EVAL_CLOSING_YN'],
			colModel     :[
							{name:'EVAL_USER_GRP_NM'     ,index:'EVAL_USER_GRP_NM'     ,width:150   ,align:'center' },
							{name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:150   ,align:'center' }, 
                            {name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:300   ,align:'left' },
							{name:'EVAL_USER_GRP_ID'     ,index:'EVAL_USER_GRP_ID'     ,width:300   ,align:'center' },
							{name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:300   ,align:'center' },
							{name:'EVAL_SUBMIT_YN'       ,index:'EVAL_SUBMIT_YN'       ,width:300   ,align:'center' },
							{name:'EVAL_CLOSING_YN'      ,index:'EVAL_CLOSING_YN'      ,width:300   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"난이도평가 평가단/지표 매핑관리"
		}).jqGrid('hideCol',"EVAL_USER_GRP_ID").jqGrid('hideCol',"METRIC_ID").jqGrid('hideCol',"EVAL_SUBMIT_YN").jqGrid('hideCol',"EVAL_CLOSING_YN").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			
		if(J("#findUserGrpId").val()==""){
			J.showMsgBox("평가단을 선택하십시요", null, null); 
			return;
		}
		
			/*
    		if('$!{evalCloseYn}' == 'Y'){
    			J.showMsgBox("평가마감 취소 평가제출 모두 취소 후 등록할수 있습니다.", null, null); 
    			return;
    		}
    		*/
			
    		if('$!{evalSubmitYn}' == 'Y'){
    			J.showMsgBox("평가제출을 모두 취소 후 등록할수 있습니다.", null, null); 
    			return;
    		}
		
			J("#year").val(J("#findYear").val());
			J("#linked").val(J("#findLinked").val());
			J("#evalUserGrpId").val(J("#findUserGrpId").val());
			J("#evalUserGrpNm").val(J("#findUserGrpId option:selected").text());
			J("#formList").attr("action", "$!{context_path}/bsc/level/levelMapping/levelMappingModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 돌아가기
		 ******************************************/
		J("#btnBack").click(function() {
			J("#formList").attr("action", "$!{context_path}/bsc/level/levelGrp/levelGrpList.vw?type=template").submit();
		});
		
		if(J("#findLinked").val() == 'Y'){ 
			J("#btnBack").show();
		}else{
			J("#btnBack").hide();
		};

		J("#findYear").change(function() {
			chgLevelGrp();
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
	});
	
	/******************************************
	 * 년도 변경시 평가단 변경
	 ******************************************/
	function chgLevelGrp(){
		J.ajax({
        	url      : "$!{context_path}/bsc/level/levelMapping/levelMapping_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findUserGrpId").empty();
				
				J('<option/>').attr('value', '').text('전체').appendTo('#findUserGrpId');
				
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findUserGrpId');
				})
        	}
    	});
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
	
		/*
		if('$!{evalCloseYn}' == 'Y'){
			J.showMsgBox("평가마감 취소 평가제출 모두 취소 후 등록할수 있습니다.", null, null); 
			return;
		}
		*/
		
		if('$!{evalSubmitYn}' == 'Y'){
			J.showMsgBox("평가제출을 모두 취소 후 삭제할수 있습니다.", null, null); 
			return;
		}
	
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalUserGrpIds = "";
		var metricIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';metricIds += rowdata.METRIC_ID + '|';
				}
			});
		}
        
		J("#evalUserGrpIds").val(evalUserGrpIds);
		J("#metricIds").val(metricIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/level/levelMapping/levelMappingProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());
		J("#userGrpNm").val(J('#findUserGrpId :selected').text());
		
		J("#formList").attr("action", "$!{context_path}/bsc/level/levelMapping/levelMappingListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

