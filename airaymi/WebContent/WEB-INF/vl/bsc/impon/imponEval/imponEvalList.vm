	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#evalDegreeId").val(J('#findEvalDegreeId').val());
		J("#evalUserGrpId").val(ret.EVAL_USER_GRP_ID);
		J("#evalUserId").val(ret.EVAL_USER_ID);
		J("#evalMethodId").val(ret.EVAL_METHOD_ID);
		J("#evalMethodGbnId").val(ret.EVAL_METHOD_GBN_ID);
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#evalSubmitYn").val(ret.EVAL_SUBMIT_YN);
		J("#itemGbn").val(ret.ITEM_GBN);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponEval/imponEvalModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var evalUserGrpIds = "";
		var evalUserIds = "";
		var metricGrpIds = "";
		var seqs = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';evalUserIds += rowdata.EVAL_USER_ID + '|';metricGrpIds += rowdata.METRIC_GRP_ID + '|';seqs += rowdata.SEQ + '|';
				}
			});
		}
        
		J("#evalDegreeIds").val(evalDegreeIds);J("#evalUserGrpIds").val(evalUserGrpIds);J("#evalUserIds").val(evalUserIds);J("#metricGrpIds").val(metricGrpIds);J("#seqs").val(seqs);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponEval/imponEvalProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponEval/imponEvalListExcel.vw?type=excel").submit();
		return false;
	}
	
	/******************************************
	 * 파일추가
	 ******************************************/
	var fileIndex = 0;
	
	function fileAttachAdd() {
		if(fileIndex > 0){
			return;
		} else{
			J("#fileAttach").append("<li id=\"fileRow" + fileIndex + "\"><input type=\"file\" name=\"file" + fileIndex + "\" class=\"input\" size=\"70\" /> <input type=\"button\" value=\"삭제\" onclick=\"deleteRow(" + fileIndex + ")\" class=\"input\" size=\"70\"></li>");
			fileIndex++;
		}
	}
	
	function deleteRow(fileIndex2)	{
    	J("#fileRow" + fileIndex2).remove();
    	fileIndex = 0;
    }
    
    /******************************************
	 * 저장버튼 이벤트
	 ******************************************/
	J("#btnFileInsert").click(function(e) {
		e.preventDefault();
		saveChk();
	});
	
