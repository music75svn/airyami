	/******************************************
	 * 평가 진행상태 체크
	 ******************************************/
	function evalable(){
		var status = true;
		var term = true;
		var able = true;
		
		if(J("#findStatus").val() != "01") status = false;
		if(J("#findInTerm").val() != "Y") term = false;
		
		
		if((!term && !status) || !term){
    		J.showMsgBox("평가 기간이 아니므로 <br /> 수정 할 수 없습니다.", null, null);
			
		}else if(!status){
    		J.showMsgBox("평가가 실시되었으므로 <br /> 수정 할 수 없습니다.", null, null);
			
		}
		
		if(!status || !term){
			able=false;
		}
		
		return able;
	}

	/******************************************
	 * 가중치 소수점 이상 1000미만 입력 체크
	 ******************************************/
	function validate(th){
		if(th.value>=1000){
			J.showMsgBox("1000미만으로 입력해주십시오.", null, null); 
			J(th).val('');
			J(th).focus();
		}
	}
	
	/******************************************
	 * 가중치 합계 가져오기
	 ******************************************/
	function computeSum() {
		var sum = 0;
		var map = J("input[name=weights]");
        J.each(map, function(key, value) { 	
		  if(J(value).val()!=""){
		  	sum = eval(sum) + eval(J(value).val());
		  }
        });
		
		sum = Math.round(sum * 1000)/1000;
		var count = J("#list").jqGrid('getGridParam', 'records');
		J("#weightSum").text(sum);
		if(sum != "100" && count > 0) {
			J("#weightAlert").show();
		} else {
			J("#weightAlert").hide();
		}
		
	}

	
	/******************************************
