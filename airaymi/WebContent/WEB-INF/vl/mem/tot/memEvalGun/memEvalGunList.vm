<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/tot/memEvalGun/memEvalGunList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '평가군코드', '평가군명', '평가군명', '배분표코드', '배분표', '피평가자수', '조직평가', '개인평가', '정렬순서'],
			colModel     :[
							{name:'YEAR'                     ,index:'YEAR'                     ,width:150   ,align:'center' },
                            {name:'EVAL_GUN_ID'              ,index:'EVAL_GUN_ID'              ,width:150   ,align:'center' },
                            {name:'EVAL_GUN_NM'              ,index:'EVAL_GUN_NM'              ,width:250   ,align:'left' 	,formatter:linkUpdate},
                            {name:'EVAL_GUN_NM_TMP'          ,index:'EVAL_GUN_NM_TMP'          ,width:150   ,align:'center' },
                            {name:'EVAL_GIVE_METHOD_ID'      ,index:'EVAL_GIVE_METHOD_ID'      ,width:150   ,align:'center' },
                            {name:'EVAL_GIVE_METHOD_NM'      ,index:'EVAL_GIVE_METHOD_NM'      ,width:200   ,align:'left' },
							{name:'EVAL_GUN_USER_COUNT'      ,index:'EVAL_GUN_USER_COUNT'      ,width:100   ,align:'center' ,formatter:linkUserList},
                            {name:'ORG_EVAL_RATE'            ,index:'ORG_EVAL_RATE'            ,width:100   ,align:'center' },
                            {name:'IND_EVAL_RATE'            ,index:'IND_EVAL_RATE'            ,width:100   ,align:'center' },
                            {name:'SORT_ORDER'               ,index:'SORT_ORDER'               ,width:100   ,align:'center' ,formatter:sortOrder}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
					J("input[name=orders]").numeric({allow:""});        	//특정문자 허용(.)
					J("input[name=orders]").css("ime-mode", "disabled"); 	//한글사용 비활성화
				  },
			caption:"평가군관리"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_GUN_ID").jqGrid('hideCol',"EVAL_GIVE_METHOD_ID").jqGrid('hideCol',"EVAL_GUN_NM_TMP").setGridWidth($!{jqGrid_width});

		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true,
          groupHeaders:[
			 {startColumnName: 'ORG_EAVL_RATE',		numberOfColumns: 2, titleText: '<em>평가종합 적용 비율</em>'}
		  ]
        });
        
		/******************************************
		 * 평가대상자가져오기 버튼 클릭 이벤트
		 ******************************************/
		J("#btnGetTargetUser").click(function() {
			getTargetUser();
			return false;
		});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});
		
		/******************************************
		 * 일괄저장
		 ******************************************/
		J("#btnAllSave").click(function() {
			goAllSave();
			return false;
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

	});
	
	/******************************************
	 * 평가자관리 평가자 가져오기
	 ******************************************/
	function getTargetUser() {
		J.showConfirmBox("평가대상자 가져오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "doTargetUserInfo"); //doTargetUserInfo() 콜백함수 호출
	}
	
	function doTargetUserInfo() {
		J("#mode").val("GET");
		J("#formList").attr("action", "$!{context_path}/mem/tot/memEvalGun/memEvalGunProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * jqGrid 정렬순서
	 ******************************************/
	function sortOrder(cellvalue, options, rowObject) {
		if(options.rowId==""){
			return cellvalue;
		}else{
			var str = '';
			str += '<input type="text" id="orders" name="orders" value="' + cellvalue + '" class="inputbox wp70" maxlength="5"/>';

			return str;
		}
	}

	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(){
		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/mem/tot/memEvalGun/memEvalGunModify.vw?type=template").submit();
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * jqGrid 피평가자관리 페이지 링크
	 ******************************************/
	function linkUserList(cellvalue, options, rowObject) {
		return '<a href=javascript:goUserList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#evalGunId").val(ret.EVAL_GUN_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/mem/tot/memEvalGun/memEvalGunModify.vw?type=template").submit();
	}
	
	/******************************************
	 * 피평가자 관리화면 이동
	 ******************************************/
	function goUserList(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#userFormList input[name=findYear]").val(J("#findYear").val());
		J("#userFormList input[name=findEvalGunId]").val(ret.EVAL_GUN_ID);
		J("#userFormList input[name=findEvalGunNm]").val(ret.EVAL_GUN_NM_TMP);
		J("#userFormList input[name=mode]").val("MODUSER");
		J("#userFormList").attr("action", "$!{context_path}/mem/tot/memEvalGun/memEvalGunUserModify.vw?type=template").submit();
	}

	/******************************************
	 * 일괄저장
	 ******************************************/
	function goAllSave() {
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";

		if(ids.length == 0){
			alert("저장할 항목이 없습니다.");
			return false;
		}

		J.showConfirmBox("일괄저장하시겠습니까?", "allSaveDo"); //allSaveDo() 콜백함수 호출
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
    		J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 일괄저장 처리
	 ******************************************/
	function allSaveDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var sortOrders = "";
		var evalGunIds = "";

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			sortOrders += J("#formList input[name=orders]").eq(i).val() + '|';
			evalGunIds += rowdata.EVAL_GUN_ID + '|';
		}

		J("#evalGunIds").val(evalGunIds);
		J("#sortOrders").val(sortOrders);
		J("#mode").val("SAVE");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/tot/memEvalGun/memEvalGunProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalGunIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalGunIds += rowdata.EVAL_GUN_ID + '|';
				}
			});
		}

		J("#evalGunIds").val(evalGunIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/tot/memEvalGun/memEvalGunProcess.vw?type=template").submit();
		return false;
	}

//]]>
</script>

