<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.matrix.matrixItemScore">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_MAT_ITEM_SCORE
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 평가항목점수 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_MAT_ITEM_SCORE
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR,
               MAX_SCORE,
               MIN_SCORE
          FROM BSC_MAT_ITEM_SCORE
         ORDER BY YEAR 
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가항목점수 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_MAT_ITEM_SCORE
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR                  
			 , A.MAX_SCORE             
			 , A.MIN_SCORE
			 , (SELECT COUNT(*)
			      FROM BSC_MAT_EVAL B
			     WHERE A.YEAR=B.YEAR) EVAL_CNT              
		  FROM BSC_MAT_ITEM_SCORE A 
		 WHERE A.YEAR = #findYear#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가항목점수 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_MAT_ITEM_SCORE
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		INSERT INTO BSC_MAT_ITEM_SCORE ( 
			   YEAR
			 , MAX_SCORE
			 , MIN_SCORE
			 , CREATE_DT
			 ) VALUES ( 
			   #year#
			 , #maxScore#
			 , #minScore#
			 , SYSDATE
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 평가항목점수 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_MAT_ITEM_SCORE
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_MAT_ITEM_SCORE 
		   SET MAX_SCORE              = #maxScore# 
			 , MIN_SCORE              = #minScore# 
			 , MODIFY_DT              = SYSDATE 
		 WHERE YEAR = #year#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 평가항목점수 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_MAT_ITEM_SCORE
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BSC_MAT_ITEM_SCORE 
		 WHERE YEAR = #year#
	</update>
	
	<!--
	==================================================================   
	  # 설명	: 해당년 등록 여부 확인
	  #	기능	: SELECT
	  #	TABLE	: BSC_MAT_ITEM_SCORE
	==================================================================
	-->	
	<select id="getCount" parameterClass="hashMap" resultClass="java.lang.Integer">
		SELECT COUNT(*) CNT 
		  FROM BSC_MAT_ITEM_SCORE
		 WHERE YEAR = #year#
	</select>
	
	
</sqlMap>


