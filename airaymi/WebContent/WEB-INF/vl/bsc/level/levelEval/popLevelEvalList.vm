<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">
<head >
	#parse("/WEB-INF/vl/common/template/head.vm")

#set($curr_url = $!{context_path} + "/bsc/level/levelEval/popLevelEvalList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/level/levelEval/popLevelEvalList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{METRIC_NM}', '담당자명', '$!{WEIGHT}', 
							#foreach($list in $itemList)
								'$!{CS_HTML.txt2html($list.ITEM_NM)}',
							#end							
							'METRIC_ID','EVAL_USER_NM','EVAL_USER_GRP_NM'],
			colModel     :[
							{name:'METRIC_NM'               ,index:'METRIC_NM'          ,width:220    ,align:'left'  }, 
                            {name:'INSERT_USER_NM'     		,index:'INSERT_USER_NM'     ,width:60   ,align:'center' }, 
                            {name:'WEIGHT'         			,index:'CONTENT'         	,width:40   ,align:'center' }, 
							#foreach($list in $itemList)
								{name:'$!{CS_HTML.txt2html($list.ITEM_ID)}'      ,index:'$!{CS_HTML.txt2html($list.ITEM_ID)}'   ,width:100   ,align:'center' },
							#end
							{name:'METRIC_ID'         		,index:'METRIC_ID'         	,width:180   ,align:'left' },
							{name:'EVAL_USER_NM'         		,index:'EVAL_USER_NM'         	,width:180   ,align:'left' },
							{name:'EVAL_USER_GRP_NM'         		,index:'EVAL_USER_GRP_NM'         	,width:180   ,align:'left' }
							],
							
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
								
								var rowdata = J("#list").getRowData(1);
								
								J("#evalUserNm").html(rowdata.EVAL_USER_NM);
								J("#evalUserGrpNm").html(rowdata.EVAL_USER_GRP_NM);
								
                           },
			caption:"평가실시"
		}).jqGrid('hideCol',"METRIC_ID").jqGrid('hideCol',"EVAL_USER_NM").jqGrid('hideCol',"EVAL_USER_GRP_NM").setGridWidth($!{jqGrid_width});
		
		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true, 
          groupHeaders:[
		  	// jqGrid 의 해더 합병
		  	#foreach($list in $itemList)
				#if( $list.GRP_ROW_INDEX == "1" && $list.ROW_INDEX == "1" )
					{startColumnName: '$list.ITEM_ID', numberOfColumns: '$list.ROW_CNT', titleText: '<em>$list.ITEM_GRP_NM</em>'}
				#end

				#if( $list.GRP_ROW_INDEX != "1" && $list.ROW_INDEX == "1" )
					,{startColumnName: '$list.ITEM_ID', numberOfColumns: '$list.ROW_CNT', titleText: '<em>$list.ITEM_GRP_NM</em>'}
				#end
			#end
        	
          ]			
		});
		
		/******************************************
		 * 임시저장 버튼 클릭 이벤트
		 ******************************************/
		J("#btnClose").click(function() {
			self.close();
			return false;
		});
		
	});
	
	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.ROW_INDEX;
		var rowSpan = rowObject.ROW_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		
		return result;     
	} 
	
	function setNormalFont(cellvalue) { 
		return "<div class='normal'>" + cellvalue + "</div>";
	}
	
//]]>
</script>
</head>
<body>
<div style="height:10px;">
	&nbsp;
</div>
<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">평가실시 평가항목상세조회관리</h1>
		<div class="tableTop">
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/level/levelGrade/levelGradeList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				$!{searchMap.makeHiddenFind()}
				<div class="searchBox">
    				<div><div><div>
    				<table summary="평가실시 평가항목상세조회 검색 조건">
						<caption class="none">평가실시 평가항목상세조회 검색 조건</caption> 
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span><label for="findYear">평가년도</label></span>
            						<span class="searchBar" class="select w80">
            							$!CS_CODE.getCodeName("017", $!{searchMap.txt2html("findYear")})
            						</span>
            					</td>
								<td class="searchBox_tit w250">
            						<span><label for="finsEvalUserNm">평가자</label></span>
            						<span id="evalUserNm" class="searchBar" class="select w80">
            						</span>
            					</td>
								<td class="searchBox_tit w250">
            						<span><label for="finsEvalUserGrpNm">평가단</label></span>
            						<span id="evalUserGrpNm" class="searchBar" class="select w80">
            						</span>
            					</td>
            				</tr>
        				</tbody>
    				</table>
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>
		
		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/level/levelGrade/levelGradeProcess.vw?type=template">
			<input type="hidden" id="mode"       name="mode" />
			<input type="hidden" id="year"		 name="year" />
			$!{searchMap.makeHiddenFind()}
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="평가실시 평가항목상세조회">
							<caption class="none">평가실시 평가항목상세조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all">
						<div class="blockButton">
							<ul>
								<li><input type="button" id="btnClose" value="닫기" /></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</form>
		
	</div>
	<div class="clear"></div>
</div>
</body>
</html>
