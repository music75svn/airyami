<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/eval/imponEvalTerm/imponEvalTermList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r3_width},
			colNames     :['평가구분', '입력시작일', '입력종료일', '평가진행상태', '진행상태변경', 'MON'],
			colModel     :[
                            {name:'MON_NM'               ,index:'MON_NM'               ,width:150   ,align:'center'  ,formatter:linkUpdate }, 
                            {name:'START_DT'             ,index:'START_DT'             ,width:150   ,align:'center' }, 
                            {name:'END_DT'               ,index:'END_DT'               ,width:150   ,align:'center' },
							{name:'STATUS_NM'            ,index:'STATUS_NM'            ,width:150   ,align:'center' },
							{name:'STATUS_CTL'           ,index:'STATUS_CTL'           ,width:150   ,align:'center' ,formatter:linkUpdate2 },
							{name:'MON'	            	 ,index:'MON'	               ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			caption:"비계량평가일정관리"
		}).jqGrid('hideCol',"MON").setGridWidth( $!{jqGrid_r3_width} );
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#statusBar").text("");
			J("#mode").val("ADD");
			J("#cycle").attr("disabled", false);
			J("#startDt").val("");
			J("#endDt").val("");
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnUpdate").click(function(e) {
			e.preventDefault();
			var ids = J("#list").jqGrid('getDataIDs');
			if(ids.length>0 || !J("#cycle").attr("disabled")){
    			saveChk();
			}
		});
		
		
		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 디폴트 조회
		 ******************************************/
		goAction('06');
		J("#mode").val("MOD");
		
	});
	
	/******************************************
	 * 상세 조회
	 ******************************************/
    function goAction(cycle) {
		var stMode = J("#stMode").val();
		var findYear = J("#findYear").val();

		if(cycle.length == "1"){
			cycle = "0" + cycle;
		}
		
		J.ajax({
        	url      : "$!{context_path}/bsc/eval/imponEvalTerm/imponEvalTermModify.vw",
        	cache    : false,
        	type     : "POST",
			data     : "year=" + findYear + "&amp;cycle=" + cycle + "&amp;stMode=" + stMode,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
        		J("#imponTermData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)   
        		J("#imponTermData").append(data);
        	}
    	});
	}
	

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goAction("' + rowObject.MON + '")>' + cellvalue + '<//a>';
		
	}
	
	/******************************************
	 * 비계량평가진행상태변경 이벤트
	 ******************************************/
	function linkUpdate2(cellvalue, options, rowObject) {
		if(rowObject.STATUS=='01'){
			return '<a href=javascript:changeStatus("'+ rowObject.MON +'","02")>평가진행</a>';
		}else if(rowObject.STATUS=='02'){
			return '<a href=javascript:changeStatus("'+ rowObject.MON +'","01")>평가취소</a>  <a href=javascript:changeStatus("'+ rowObject.MON +'","03")>평가마감</a>';
		}else if(rowObject.STATUS=='03'){
			return '<a href=javascript:changeStatus("'+ rowObject.MON +'","02")>마감취소</a>';
		}
		

		
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/eval/imponEvalTerm/imponEvalTermModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var cycles = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					cycles += rowdata.MON+ '|';
				}
			});
		}
         
		J("#cycles").val(cycles);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/eval/imponEvalTerm/imponEvalTermProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
    	if(!J.checkLength("startDt", "입력시작일",1, 10)) {
    		return;
		}
		
		if(!J.checkLength("endDt", "입력종료일",1, 10)) {
    		return;
		}	
		
		if(J("#startDt").val() > J("#endDt").val()) {
			J.showMsgBox("입력 종료일이 시작일보다 빠를수 없습니다.", null, null); 
    		return;
		}

		if(J("#status").val()=="00"){
    		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
		}else{
			saveDo();
		}
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#startDt").val((J("#startDt").val().replace(/[.]/g, "")));
		J("#endDt").val((J("#endDt").val().replace(/[.]/g, "")));
		J("#year").val(J("#findYear").val());
		J("#cycle").attr("disabled", false);
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/bsc/eval/imponEvalTerm/imponEvalTermProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 평가상태변경
	 ******************************************/
	function changeStatus(cycle, status) {
		J("#statusCycle").val(cycle);
		J("#status").val(status);
		if(status=="01"){
			J.showConfirmBox("평가취소를 하면 평가데이터가 삭제 됩니다", "saveChk"); //saveChk() 콜백함수 호출
		}else{
			saveChk();
		}
	}
//]]>
</script>

