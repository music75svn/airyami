<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/base/csf/csfList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");
		
		/******************************************
		 * 사용중이면서 하위코드 존재시 삭제못함
		 ******************************************/
		#if( $!{CS_HTML.txt2html($detail.USE_YN)} == "Y" && $!{CS_HTML.txt2html($detail.CNT)} != "0")
			J(":input:radio[name=useYn]").attr("disabled", true);
        #end
		
	});
	
	/******************************************
	 * 경영목표 변경시 전략과제 변경
	 ******************************************/
	
	function chgSubject(){
	
		J.ajax({
		
			url      : "$!{context_path}/bsc/base/csf/strStratSubjectList_ajax.vw",
			cache    : false,
			type     : "POST",
			data	 : J("#form1").serialize(),
			dataType : "html",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
			success  : function(data){
							var xmlDoc = J.parseXML(data);
							J("#strStratSubjectId").empty();
							
							J('<option/>').attr('value','').text("선택").appendTo('#strStratSubjectId');
							
							J(xmlDoc).find("data").each(function() {
								J('<option/>').attr('value',J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#strStratSubjectId');
							})
					   }
		});
	
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("csfNm", "CSF", 1, 150)) {
			return;
		}
		
		if(!isNumber(J("#sortOrder").val())){
			J.showMsgBox("정렬순서는 숫자만 입력가능합니다", null, "sortOrder");
			return;
		}

		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/base/csf/csfProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
