	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {


		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#empn").val(ret.EMPN);		 // List에서 선택한 사원을 설정.
		//J("#castTc").val(ret.CAST_TC);		 // List에서 선택한 사원의 직급을 설정.charset="
        J("#evalGrpId").val(ret.EVAL_GRP_ID);       // List에서 선택한 사원의 평가군을 설정.
		J("#deptCd").val(ret.DEPT_CD);		 // List에서 선택한 사원의 부서을 설정.
		J("#mode").val("MOD");

		if('$!{searchMap.txt2html("confYn")}' != 'Y') {
		 alert("집계, 확정을 해야 확인하실수 있습니다.");
		} else {

			J("#formList").attr("action", "$!{context_path}/prs/annSal/annSal/annSalModify.vw?type=template").submit();
		}
	}

	/******************************************
	 * jqGrid 일괄수정 링크
	 ******************************************/
	function goAllModify(){

		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");
