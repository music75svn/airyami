#set($curr_url = $!{context_path} + "/mem/eval/memMeet/memMeetDetailList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/eval/memMeet/memMeetDetailList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '순번', '요청일자', '면담일자', '면담자사번', '면담자', '면담상태코드', '면담상태', '종합의견'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:0     ,align:'center' },
                            {name:'SEQ'                  ,index:'SEQ'                  ,width:30    ,align:'center' },
                            {name:'REQ_DT'               ,index:'REQ_DT'               ,width:60    ,align:'center' ,formatter:linkUpdate},
							{name:'MEET_DT'              ,index:'MEET_DT'              ,width:60    ,align:'center' },
                            {name:'EMP_NO'               ,index:'EMP_NO'               ,width:0     ,align:'center' },
							{name:'EVAL_1_EMP_NM'        ,index:'EVAL_1_EMP_NM'        ,width:60    ,align:'center' },
							{name:'MEET_STATE'           ,index:'MEET_STATE'           ,width:0     ,align:'center' },
							{name:'MEET_STATE_NM'        ,index:'MEET_STATE_NM'        ,width:60    ,align:'center' },
                            {name:'TOT_OPINION'          ,index:'TOT_OPINION'          ,width:400   ,align:'left'   }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
                           },
			caption:"중간면담상세"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"SEQ").jqGrid('hideCol',"EMP_NO").jqGrid('hideCol',"MEET_STATE").jqGrid('hideCol',"CAL_CNT").jqGrid('hideCol',"CAL_NUM").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
		#if($!{searchMap.txt2html("mode")} == "SEARCH")
			J("#formList").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetSearchList.vw?type=template").submit();
		#else
			J("#formList").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetList.vw?type=template").submit();
		#end
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#seq").val(ret.SEQ);
		J("#viewMeetDt").val(ret.MEET_DT);
		J("#meetStateNm").val(ret.MEET_STATE_NM);
		J("#formList").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetDetailModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
    		if(J("#findUseYn").val() == 'N'){
    			J.showMsgBox("이미 삭제된  중간면담입니다.", null, null);
    			return;
    		}else{
				J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
			}
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var seqs = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					seqs += rowdata.SEQ_TMP + '|';
				}
			});
		}

		J("#seqs").val(seqs);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetDetailProcess.vw?type=template").submit();
		return false;
	}

//]]>
</script>

