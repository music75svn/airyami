#set($curr_url = $!{context_path} + "/bsc/base/metricGrp/metricGrpList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/base/metricGrp/metricGrpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{METRIC_GRP_NM}코드', '$!{METRIC_GRP_NM}', '설명', '평가유형', '단위', '주기', '사용개수', '사용개수'],
			colModel     :[
                            {name:'METRIC_GRP_ID'        ,index:'METRIC_GRP_ID'        ,width:80    ,align:'center' },
                            {name:'METRIC_GRP_NM'        ,index:'METRIC_GRP_NM'        ,width:200   ,align:'left'   ,formatter:linkUpdate },
							{name:'DESCRIPTION'          ,index:'DESCRIPTION'          ,width:200   ,align:'left'   },
							{name:'TYPE_NM'              ,index:'TYPE_NM'              ,width:60    ,align:'center' },
                            {name:'UNIT_NM'              ,index:'UNIT_NM'              ,width:70    ,align:'center' },
                            {name:'EVAL_CYCLE_NM'        ,index:'EVAL_CYCLE_NM'        ,width:60    ,align:'center' },
                            {name:'COUNT'                ,index:'COUNT'                ,width:70    ,align:'center' ,formatter:linkUseList },
							{name:'COUNT_ID'             ,index:'COUNT_ID'             ,width:70    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			cmTemplate	 : {sortable:true},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
									var rowdata = J("#list").getRowData(ids[index]);
    								if(rowdata.COUNT_ID != 0) { //비교조건 대상 컬럼
										J(":checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"데이터리스트"
		}).jqGrid('hideCol',"COUNT_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 지표Pool명 포커스
		 ******************************************/
		J("#findMetricGrpNm").select();

		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#year").val(J("#findYear").val());
			J("#metricGrpId").val("");
			J("#formList").attr("action", "$!{context_path}/bsc/base/metricGrp/metricGrpModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * jqGrid 지표pool 사용중인 지표리스트
	 ******************************************/
	function linkUseList(cellvalue, options, rowObject) {
		return '<a href=javascript:goUseList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/bsc/base/metricGrp/metricGrpList.vw?type=template").submit();
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/base/metricGrp/metricGrpModify.vw?type=template").submit();
	}

	/******************************************
	 * 사용중인 지표리스트 이동
	 ******************************************/
	function goUseList(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/base/metricGrp/metricGrpUseList.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			if(J("#findUseYn").val() == 'N'){
				J.showMsgBox("이미 삭제된  지표 입니다.", null, null);
				return;
			}
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var metricGrpId = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					metricGrpId += rowdata.METRIC_GRP_ID + '|';
				}
			});
		}

		J("#metricGrpIds").val(metricGrpId);
		J("#year").val(J("#findYear").val());
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/bsc/base/metricGrp/metricGrpProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#metricGrpNm").val(J("#findMetricGrpNm").val());
		J("#useYn").val(J("#findUseYn").val());
		J("#useYnNm").val(J("#findUseYn > option:selected").text());
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/base/metricGrp/metricGrpListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

