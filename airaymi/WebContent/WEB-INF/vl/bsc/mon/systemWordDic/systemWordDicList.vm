<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">
<head >
	#parse("/WEB-INF/vl/common/template/head.vm")
#set ($popGridWidth              = 780)	
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/mon/systemWordDic/systemWordDicList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $popGridWidth,
			colNames     :['입력차수', '용어', '용어설명', '정렬순서'],
			colModel     :[
							{name:'SEQ'                  ,index:'SEQ'                  ,width:0     ,align:'center' }, 
							#if($CS_LOGIN.chkAuthGrp("01")|| $CS_LOGIN.chkAuthGrp("60"))
                            {name:'WORD'                 ,index:'WORD'                 ,width:150   ,align:'left' 	,formatter:linkUpdate},
							#else
							{name:'WORD'                 ,index:'WORD'                 ,width:150   ,align:'left' 	,formatter:setBiggerFont},
							#end
                            {name:'EXPLAIN'              ,index:'EXPLAIN'              ,width:750   ,align:'left' 	,formatter:setBiggerFont},
							{name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:70    ,align:'left'   ,formatter:setBiggerFont}	
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : false,
			gridview     : true,
			caption:"용어사전"
		}).jqGrid('hideCol',"SEQ").setGridWidth($popGridWidth);
		
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/mon/systemWordDic/systemWordDicModify.vw?").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		//return "<div class='bigger'><a href=javascript:goModify(" + options.rowId + ")>" + cellvalue + "</a></div>";
		return setBiggerFont( "<a href=javascript:goModify(" + options.rowId + ")>" + cellvalue + "</a>" );
	}
	
	function setBiggerFont(cellvalue) { 
		return "<div class='bigger'>" + cellvalue + "</div>";
	}
	
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#seq").val(ret.SEQ);
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/mon/systemWordDic/systemWordDicModify.vw?").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var seqList = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					seqList += rowdata.SEQ + '|';
				}
			});
		}
        
		J("#seqList").val(seqList);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/bsc/mon/systemWordDic/systemWordDicProcess.vw?").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		//J("#schWord").val(J("#findSchWord").val());
		J("#formList").attr("action", "$!{context_path}/bsc/mon/systemWordDic/systemWordDicListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>
</head>
<body>
<div style="width:800px;">
	<div style="padding:10px 10px">
		<h1 class="none">용어사전</h1>
		<div>
			#parse("/WEB-INF/vl/common/template/tabs.vm")
			
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/mon/systemWordDic/systemWordDicList.vw">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				
				<div class="searchBox">
    				<div><div><div>
    				<table summary="용어사전검색 조건">
						<caption class="none">용어사전 검색 조건</caption> 
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
            					<td class="searchBox_tit w250">
                					<span><label for="findSchWord">검색어</label></span>
									<span class="searchBar"><input type="text" id="findSchWord" name="findSchWord" class="text" value="$!{searchMap.txt2html("findSchWord")}"  maxlength="10" title="검색어 "/> </span>
                                </td>
            				</tr>
        				</tbody>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" align="middle" alt="검색" /> 
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>
		
		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/mon/systemWordDic/systemWordDicProcess.vw?">
			<input type="hidden" id="mode"       name="mode" />
			<input type="hidden" id="year"		 name="year" />
			<input type="hidden" id="seq"		 name="seq" />
			<input type="hidden" id="seqList"    name="seqList" />
			$!{searchMap.makeHiddenFind()}
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="용어사전 조회결과">
							<caption class="none">용어사전 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all">
						<div class="blockButton_l"><input id="btnExcelDown" type="image" src="$!{img_path}/btn_excel.gif" align="middle" alt="엑셀다운로드" /></div>
						#if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60"))
						<div class="blockButton">
							<ul>
								<li><input type="button" id="btnInsert" value="신규" /></li>
								<li><input type="submit" id="btnDelete" value="삭제" /></li>
							</ul>
						</div>
						#end
					</div>
				</div>
			</div>
		</form>
		
	</div>
	<div class="clear"></div>
</div>
<div id="dialog" title="확인"><p>&nbsp;</p></div>    <!-- 다이어로그 -->
</body>
</html>
