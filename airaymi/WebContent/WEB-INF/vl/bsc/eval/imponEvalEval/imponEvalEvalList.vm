	/******************************************
	 * 평가완료 여부 체크
	 ******************************************/
	function isSubmitted(){
		var submitted = true;
		
		if(J("#findIsSubmitted").val() == "Y"){ 
    		J.showMsgBox("평가가 이미 완료되었습니다.", null, null);
			submitted = false;
		}
		
		return submitted;
	}
	
	
	/******************************************
	 * 모든 지표 평가완료 여부 체크
	 ******************************************/
	function isAlllEvaled(){
		var allEvaled = true;
		
		if(J("#findAllEvaled").val() != "Y"){ 
    		J.showMsgBox("평가를 하지 않은 <br/> 비계량 지표가 있습니다.", null, null);
			allEvaled = false;
		}
		
		return allEvaled;
	}
	
	/******************************************
	 * 평가 진행상태 체크
	 ******************************************/
	function evalable(){
		var status = true;
		var term = true;
		var able = true;
		
		if(J("#findStatus").val() != "02") status = false;
		if(J("#findInTerm").val() != "Y") term = false;
		
		
		if((!term && !status) || !term){
    		J.showMsgBox("평가 기간이 아닙니다.", null, null);
			
		}else if(!status){
    		J.showMsgBox("평가가 시작되지 않았습니다.", null, null);
			
		}
		
		if(!status || !term){
			able=false;
		}
		
		return able;
	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#mode").val("MOD");
		J("#status").val(J("#findStatus").val());
		J("#inTerm").val(J("#findInTerm").val());
		J("#year").val(J("#findYear").val());
		J("#cycle").val(J("#findCycle").val());
		J("#yearNm").val(J("#findYear :selected").text());
		J("#cycleNm").val(J("#findCycle :selected").text());
		J("#evalEmpId").val(J("#findEvalEmpId").val());
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#metricGrpNm").val(ret.METRIC_GRP_NM2);
		J("#metricId").val(ret.METRIC_ID);
		J("#evalEmpNm").val(J("#findEvalEmpId :selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/eval/imponEvalEval/imponEvalEvalModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
