	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/impon/imponReport/imponReportList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '입력자 사번', '실적담당자', 'EMAIL', 'KPI POOL I', '지표POOL명', '평가대상 코드', '평가조직', '비고', '첨부파일', '첨부파일 저장명', '첨부파일 확장자'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'INSERT_USER_ID'       ,index:'INSERT_USER_ID'       ,width:150   ,align:'center' },
                            {name:'USER_NM'              ,index:'USER_NM'              ,width:100   ,align:'center' },
							{name:'EMAIL'                ,index:'EMAIL'                ,width:100   ,align:'center' },
                            {name:'METRIC_GRP_ID'        ,index:'METRIC_GRP_ID'        ,width:150   ,align:'center' },
                            {name:'METRIC_GRP_NM'        ,index:'METRIC_GRP_NM'        ,width:200   ,align:'left'   },
                            {name:'ITEM_ID'              ,index:'ITEM_ID'              ,width:150   ,align:'center' },
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:100   ,align:'center' ,formatter:linkUpdate},
                            {name:'ACTUAL_BASE'          ,index:'ACTUAL_BASE'          ,width:200   ,align:'left'   },
                            {name:'ATTACH_FILE_NM'       ,index:'ATTACH_FILE_NM'       ,width:150   ,align:'left'   },
                            {name:'ATTACH_FILE_FNM'      ,index:'ATTACH_FILE_FNM'      ,width:150   ,align:'center' },
                            {name:'ATTACH_FILE_SUFFIX'   ,index:'ATTACH_FILE_SUFFIX'   ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate	 : {sortable:false},
			caption:"실적보고서"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"INSERT_USER_ID").jqGrid('hideCol',"EMAIL").jqGrid('hideCol',"METRIC_GRP_ID").jqGrid('hideCol',"ITEM_ID").jqGrid('hideCol',"ATTACH_FILE_FNM").jqGrid('hideCol',"ATTACH_FILE_SUFFIX").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
