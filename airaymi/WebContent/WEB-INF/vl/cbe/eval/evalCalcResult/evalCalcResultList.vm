		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalCalcResult/evalCalcUploadFormExcel.vw?type=excel").submit();
		return false;
	}
	
	function goExcelUp(){
		var year = J("#findYear").val();
		var findHighPgmId = J("#findHighPgmId").val();
		var findSubPgmId = J("#findSubPgmId").val();
		var findPgmId = J("#findPgmId").val();
		J("#anchor").attr("href","$!{context_path}/cbe/eval/evalCalcResult/popExcelUpload.vw?findYear=" + year +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
		J("#anchor").click();
	}
	
	/******************************************
	 * 종합평가 집계
	 ******************************************/
	function goExecute() {
		if( "SP_CBE_CONBI_SCORE" == J("#procId").val() ){
			J.showConfirmBox("종합평가점수 집계를 하시면  <br>기존 확정환산조직점수는 덮어쓰게 됩니다.<br>종합평가점수 집계를 실행하시겠습니까?  ", "goCalcCBEScore"); //goCalcCBEScore() 콜백함수 호출
		}else if( "SP_CBE_CONBI_GRADE" == J("#procId").val() ){
			J.showConfirmBox("종합평가등급 집계를 하시면  <br>기존 확정종합평가등급은 덮어쓰게 됩니다.<br>종합평가등급 집계를 실행하시겠습니까?  ", "goCalcCBEGrade"); //goCalcCBEGrade() 콜백함수 호출
		}
		
	}
	
	/******************************************
	 * 종합평가점수 집계
