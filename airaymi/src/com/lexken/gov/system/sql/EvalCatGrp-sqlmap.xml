<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="gov.system.evalCatGrp">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: GOV_EVAL_CAT_GRP
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 평가범주관리 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: GOV_EVAL_CAT_GRP
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR,
               A.EVAL_CAT_GRP_ID,
               A.EVAL_CAT_GRP_NM,
               A.SORT_ORDER,
              (SELECT COUNT(1)
                 FROM GOV_EVAL_CAT B
                WHERE A.YEAR=B.YEAR
                  AND A.EVAL_CAT_GRP_ID=B.EVAL_CAT_GRP_ID
                  AND B.DELETE_DT IS NULL) EVAL_CAT_CNT
          FROM GOV_EVAL_CAT_GRP A
         WHERE A.YEAR=#findYear#
         <isEqual prepend="AND" property="findUseYn" compareValue="Y">
               A.DELETE_DT IS NULL
         </isEqual>
         <isNotEqual prepend="AND" property="findUseYn" compareValue="Y">
               A.DELETE_DT IS NOT NULL
         </isNotEqual>
         ORDER BY A.SORT_ORDER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가범주관리 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: GOV_EVAL_CAT_GRP
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , EVAL_CAT_GRP_ID       
			 , EVAL_CAT_GRP_NM       
			 , SORT_ORDER
			 , CASE WHEN DELETE_DT IS NULL THEN 'Y' ELSE 'N' END AS USER_YN
		  FROM GOV_EVAL_CAT_GRP 
		 WHERE YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가범주관리 등록
	  #	기능	: INSERT
	  #	TABLE	: GOV_EVAL_CAT_GRP
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT 'GCR'||LPAD(NVL(MAX(SUBSTR(EVAL_CAT_GRP_ID,4,6)),0)+1,4,'0') SEQ FROM GOV_EVAL_CAT_GRP
		</selectKey>
		INSERT INTO GOV_EVAL_CAT_GRP ( 
			   YEAR
			 , EVAL_CAT_GRP_ID
			 , EVAL_CAT_GRP_NM
			 , SORT_ORDER
			 , CREATE_DT
			 , DELETE_DT
			 ) VALUES ( 
			   #year#
			 , #SEQ#
			 , #evalCatGrpNm#
			 , #sortOrder#
			 , SYSDATE
			 ,
			 <isEqual property="useYn" compareValue="Y">
		     NULL
		     </isEqual>
		     <isNotEqual property="useYn" compareValue="Y">
		     SYSDATE
		     </isNotEqual>
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 평가범주관리 수정
	  #	기능	: UPDATE
	  #	TABLE	: GOV_EVAL_CAT_GRP
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE GOV_EVAL_CAT_GRP 
		   SET EVAL_CAT_GRP_NM        = #evalCatGrpNm# 
			 , SORT_ORDER             = #sortOrder#
			 ,
			 <isEqual property="useYn" compareValue="Y">
	         DELETE_DT = NULL
	         </isEqual>
	         <isNotEqual property="useYn" compareValue="Y">
	         DELETE_DT = SYSDATE
	         </isNotEqual>
		 WHERE YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 평가범주관리 삭제
	  #	기능	: UPDATE
	  #	TABLE	: GOV_EVAL_CAT_GRP
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		UPDATE GOV_EVAL_CAT_GRP 
		   SET DELETE_DT = SYSDATE
		 WHERE YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#
	</update>
	
	
	<!--
	==================================================================   
	  # 설명	: 평가범주관리 목록 보기(평가부분 사용)
	  #	기능	: SELECT
	  #	TABLE	: GOV_EVAL_CAT_GRP
	==================================================================
	-->
	<select id="getevalCatModify" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR,
               A.EVAL_CAT_GRP_ID,
               A.EVAL_CAT_GRP_NM,
               A.SORT_ORDER
          FROM GOV_EVAL_CAT_GRP A
         WHERE A.YEAR=#findYear#
           AND A.DELETE_DT IS NULL
         ORDER BY A.SORT_ORDER
	</select>
	
	
</sqlMap>


