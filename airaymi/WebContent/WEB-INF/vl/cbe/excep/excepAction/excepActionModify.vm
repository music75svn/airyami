<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/cbe/excep/excepAction/excepActionList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnSubmit").click(function(e) {
			e.preventDefault();
			saveSubmitChk();
		});
		
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnSubmitCancel").click(function(e) {
			e.preventDefault();
			saveSubmitCancelChk();
		});
		
		if('$!{CS_HTML.txt2html($detail.EVAL_SUBMIT_YN)}' == 'Y'){
			J(":radio[name=evalGrade]").attr('disabled','disabled');
		}
		
		if('$!{CS_HTML.txt2html($getEvalPeriodYn)}' == 'N'){
			J(":radio[name=evalGrade]").attr('disabled','disabled');
		}

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
	
		if('$!{CS_HTML.txt2html($closeYn)}' == 'Y'){
			J.showMsgBox("평가가 마감었습니다.", null, null);
			return;
		}
		
		if('$!{CS_HTML.txt2html($detail.EVAL_SUBMIT_YN)}' == 'Y'){
			J.showMsgBox("평가제출이 완료된 상태 입니다.", null, null);
			return;
		}
		
		if('$!{CS_HTML.txt2html($getEvalPeriodYn)}' == 'N'){
			J.showMsgBox("평가기간이 아닙니다.", null, null);
			return;
		}
	
		if(J(":radio[name=evalGrade]:checked").val() == undefined){
			J.showMsgBox("등급을 선택해 주십시요.", null, null);
			return;
		}else{
			J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveSubmitChk() {
	
		if('$!{CS_HTML.txt2html($getEvalPeriodYn)}' == 'N'){
			J.showMsgBox("평가기간이 아닙니다.", null, null);
			return;
		}
	
		if('$!{CS_HTML.txt2html($detail.GRADE_ITEM_ID)}' == ''){
			J.showMsgBox("먼저 평가를 저장해 주십시요.", null, null);
			return;
		}else{
			J.showConfirmBox("제출하시겠습니까?", "saveSubmit"); //saveDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveSubmitCancelChk() {
	
		if('$!{CS_HTML.txt2html($getEvalPeriodYn)}' == 'N'){
			J.showMsgBox("평가기간이 아닙니다.", null, null);
			return;
		}
	
		if('$!{CS_HTML.txt2html($closeYn)}' == 'Y'){
		
			J.showMsgBox("평가가 마감되어 제출을 취소할수 없습니다.", null, null);
			return;
		
		}
	
		J.showConfirmBox("제출취소 하시겠습니까?", "saveSubmitCancel"); //saveDo() 콜백함수 호출
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function saveSubmit() {
		J("#evalSubmitYn").val("Y");
		J("#mode").val("SUB");
		J("#form1").attr("action", "$!{context_path}/cbe/excep/excepAction/excepActionProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function saveSubmitCancel() {
		J("#evalSubmitYn").val("N");
		J("#mode").val("SUB");
		J("#form1").attr("action", "$!{context_path}/cbe/excep/excepAction/excepActionProcess.vw?type=template").submit();
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#gradeItemId").val(J(":radio[name=evalGrade]:checked").val());
		J("#mode").val("MOD");
		J("#form1").attr("action", "$!{context_path}/cbe/excep/excepAction/excepActionProcess.vw?type=template").submit();
	}
	
//]]>
</script>    
 
<form id="form1" name="form1" method="post" action="$!{context_path}/cbe/excep/excepAction/excepActionProcess.vw?type=template">
    <input type="hidden" 	id="mode"		    name="mode"		      value="$!{searchMap.txt2html("mode")}" />
	<input type="hidden"	id="year"           name="year"           value="$!{searchMap.txt2html("year")}" />
	<input type="hidden"	id="evalDegreeId"   name="evalDegreeId"   value="$!{searchMap.txt2html("evalDegreeId")}" />
	<input type="hidden"	id="scDeptId"       name="scDeptId"       value="$!{searchMap.txt2html("scDeptId")}" />
	<input type="hidden"	id="evalMethodId"   name="evalMethodId"   value="$!{searchMap.txt2html("evalMethodId")}" />
	<input type="hidden"	id="gradeItemId"    name="gradeItemId"      />
	<input type="hidden"	id="evalSubmitYn"   name="evalSubmitYn"     />

    $!{searchMap.makeHiddenFind()}
	
    <div id="Table">
    	<div id="Table_blockContainer">
    		<div class="tableTop">
    			#parse("/WEB-INF/vl/common/template/tabs.vm")
    			<div class="clear"></div>
    		</div>
			<div class="tableTop">
                <!-- 검색 테이블 Start -->
                <div class="searchBox">
                <div><div><div>   
                    <table summary="검색조건">        
                        <caption class="none">검색조건</caption>
                        <thead><tr><th></th><th></th></tr></thead>
                        <tbody>
                            <tr>
								<td class="searchBox_tit w250">$!{YEAR} <span class="searchBar">$!{searchMap.txt2html("findYear")}년</span></td>
								<td class="searchBox_tit w250">평가구분 <span class="searchBar">$!{CS_HTML.txt2html($detail.EVAL_DEGREE_NM)}</span></td>
								<td class="searchBox_tit w250">평가대상부서 <span class="searchBar">$!{CS_HTML.txt2html($detail.SC_DEPT_NM)}</span></td>
							</tr>
                        </tbody>
                    </table>
                </div></div></div>
                </div>
                <!--// 검색 테이블 End -->
                <div class="clear"></div>
            </div>
    		<div class="blockDetail">
    			<table summary="평가실시 등록">
					<caption class="none">평가실시 등록</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
						<tr>
							<th scope="row"><label for="evalBase">평가근거</label></th>
							<td>
								<textarea id="evalBase" name="evalBase" class="tabletext" title="평가근거" cols="" rows="5" readonly>$!{CS_HTML.txt2html($detail.EVAL_BASE)}</textarea>
							</td>
						</tr>	
						<tr>
							<th scope="row"><label for="attachFileNm">첨부파일</label></th>
							<td>
								#foreach($fileList in $fileList)
            						$!{CS_HTML.makeFileIconFileName($fileList.get("ATTACH_FILE_SUFFIX"), $fileList.get("ATTACH_FILE_NM"), $fileList.get("ATTACH_FILE_PATH"))} 
            						&nbsp;&nbsp;
									<br/>
								#end
								<div>
            						<ul id="fileAttach">
            						</ul>
            					</div>
							</td>
						</tr>
    				</tbody>
    			</table>
    		</div>
			<div class="blockDetail">
    			<table summary="평가실시 등록">
					<caption class="none">평가실시 등록</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
						<tr>
							<th scope="row" align="center"><label for="evalMethodNm" align="center">평가등급 </br>($!{CS_HTML.txt2html($detail.EVAL_METHOD_NM)})</label></th>
							<td align="center">
								#foreach($gradeList in $gradeList)
									#if($!{CS_HTML.txt2html($gradeList.GRADE_ITEM_ID)} == $!{CS_HTML.txt2html($detail.GRADE_ITEM_ID)})
										$!{CS_HTML.txt2html($gradeList.GRADE_ITEM_NM)}&nbsp;&nbsp;<input type="radio" id="evalGrade" name="evalGrade" value="$!{CS_HTML.txt2html($gradeList.GRADE_ITEM_ID)}" checked>&nbsp;&nbsp;&nbsp;
									#else
										$!{CS_HTML.txt2html($gradeList.GRADE_ITEM_NM)}&nbsp;&nbsp;<input type="radio" id="evalGrade" name="evalGrade" value="$!{CS_HTML.txt2html($gradeList.GRADE_ITEM_ID)}">&nbsp;&nbsp;&nbsp;
									#end
								#end
							</td>
						</tr>	
    				</tbody>
    			</table>
    		</div>
			<div class="blockButton_all">
    			<div class="blockButton_l">
    				<div class="txt_red">
    					#if( $!{CS_HTML.txt2html($getEvalPeriodYn)} == 'N')
    					※ 평가기간이 아닙니다.
    					#end
    				</div>
    			</div>
        		<div class="blockButton"> 
        			<ul>
        				<li><input type="button" id="btnBack"   value="돌아가기" /></li>
        				<li><input type="submit" id="btnInsert" value="저장" /></li>
    					#if($!{CS_HTML.txt2html($detail.EVAL_SUBMIT_YN)} != 'Y')
    						<li><input type="submit" id="btnSubmit" value="평가제출" /></li>
    					#else
    					<li><input type="submit" id="btnSubmitCancel" value="제출취소" /></li>
    					#end
        			</ul>
        		</div>
			</div>
    	</div>
    	<div class="clear"></div>
    </div>
</form>
