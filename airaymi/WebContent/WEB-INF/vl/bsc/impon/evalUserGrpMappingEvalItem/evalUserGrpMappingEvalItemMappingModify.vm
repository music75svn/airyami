    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :[
						   '' ,'평가년도', '평가차수 코드', '평가단 코드'
						 , 'KPI POOL', '평가대상지표POOL'
						 , '평가구분', '평가항목 ID', '평가조직'
						 , 'ROW_CNT', 'ROW_IDX', 'SEQ'
						  ],
			colModel     :[
							{name:'IS_EVAL_YN'  	    ,index:'IS_EVAL_YN'  	    ,width:25  	 ,align:'center' , formatter:linkCheckboxUpdate},
							{name:'YEAR'       			,index:'YEAR'           	,width:999   ,align:'center' }, 
                            {name:'EVAL_DEGREE_ID'      ,index:'EVAL_DEGREE_ID'     ,width:999   ,align:'left'   }, 
                            {name:'EVAL_USER_GRP_ID'    ,index:'EVAL_USER_GRP_ID'   ,width:999   ,align:'center' }, 
                            {name:'METRIC_GRP_ID'       ,index:'METRIC_GRP_ID'      ,width:999   ,align:'center' }, 
                            {name:'METRIC_GRP_NM'       ,index:'METRIC_GRP_NM'      ,width:400   ,align:'center' ,cellattr: attrMGSetting}, 
                            {name:'EVAL_GBN'         	,index:'EVAL_GBN'         	,width:999   ,align:'center' }, 
                            {name:'ITEM_ID'       		,index:'ITEM_ID'       		,width:999   ,align:'center' }, 
                            {name:'ITEM_NM'       		,index:'ITEM_NM'       		,width:500   ,align:'left' }, 
                            {name:'ROW_CNT'   			,index:'ROW_CNT'   			,width:999   ,align:'center' }, 
                            {name:'ROW_IDX'   			,index:'ROW_IDX'   			,width:999   ,align:'center' }, 
                            {name:'SEQ'          		,index:'SEQ'          		,width:999   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가단별 지표/항목 매핑"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"EVAL_USER_GRP_ID")
		.jqGrid('hideCol',"METRIC_GRP_ID").jqGrid('hideCol',"EVAL_GBN").jqGrid('hideCol',"ITEM_ID")
		.jqGrid('hideCol',"ROW_CNT").jqGrid('hideCol',"ROW_IDX").jqGrid('hideCol',"SEQ")
		.setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#form1").submit(function(event) {
			
			//submit 하기전 작업추가
		});
		
		
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnSearch").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/impon/evalUserGrpMappingEvalItem/evalUserGrpMappingEvalItemMappingModify.vw?type=template").submit();
		});
		
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/impon/evalUserGrpMappingEvalItem/evalUserGrpMappingEvalItemList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		
		if( "$!{existDifferentMappingYn}" == "Y" ){
			var selVal = $!{searchMap.txt2html("evalTarget")};
			var msgVal = "";
			if( selVal == "01" ){
				msgVal = "평가항목에서 매핑되어, 평가조직으로 매핑 할 수 없습니다.";
			}else {
				msgVal = "평가조직에서 매핑되어, 평가항목으로  매핑 할 수 없습니다.";
			}
			J("#alertDis").html("※  " + msgVal );
    	}
	});
	
	
	/******************************************
	 * jqGrid CHECKBOX
	 ******************************************/
	function linkCheckboxUpdate(cellvalue, options, rowObject) {

		var checked="";
		if(cellvalue=="Y"){
			checked="checked";	
		}
        return '<input type="checkbox" name="check" '+ checked +'/>'
	}
	
	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attrMGSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.ROW_IDX;
		var rowSpan = rowObject.ROW_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		return result;     
	} 
	

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if( "Y" == "$!{existDifferentMappingYn}" ){
			var selVal = $!{searchMap.txt2html("evalTarget")};
			var msgVal = "";
			if( selVal == "01" ){
				msgVal = "평가항목에서 매핑되어, 평가조직으로 매핑 할 수 없습니다.";
			}else {
				msgVal = "평가조직에서 매핑되어, 평가항목으로  매핑 할 수 없습니다.";
			}
			J.showMsgBox( msgVal, null, null);
			return;
		}
		
		
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemCnt = 0;
		var checkCnt = 0;
		
		var items = "";
		var itemGbns = "";
		var nullItems = "";
		var evalTarget = "";
		
		var checkes = J(":input[name=check]");
		
		J.each(checkes, function (index, value) {
			if(J(value).attr("checked")=="checked"){
        		rowdata = J("#list").getRowData(ids[index]);
        		items += rowdata.ITEM_ID + '|';
				itemGbns += rowdata.EVAL_GBN + '|';
				nullItems += ' |';
				evalTarget = rowdata.EVAL_GBN;
				itemCnt++;
				checkCnt++;
			}else {
				itemCnt++;
			}
		});
		if( 0 < itemCnt ){
			if( 0 < checkCnt ){
        		if( "01" == evalTarget ){
        			J("#metricIds").val(items);
        			J("#itemIds").val(nullItems);
        			J("#itemGbns").val(itemGbns);
        		} else if( "02" == evalTarget ){
        			J("#metricIds").val(nullItems);
        			J("#itemIds").val(items);
        			J("#itemGbns").val(itemGbns);
        		}
			}
		}else {
			J.showMsgBox("매핑 할 수 있는  평가대상이 없습니다.", null, null);
			return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		
		J("#form1").attr("action", "$!{context_path}/bsc/impon/evalUserGrpMappingEvalItem/evalUserGrpMappingEvalItemProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
