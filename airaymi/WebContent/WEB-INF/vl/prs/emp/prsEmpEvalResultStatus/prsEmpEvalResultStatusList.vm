#set($curr_url = $!{context_path} + "/prs/emp/prsEmpEvalResultStatus/prsEmpEvalResultStatusList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

    var J = jQuery;

    J(document).ready(function(){

        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();

        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/emp/prsEmpEvalResultStatus/prsEmpEvalResultStatusList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {
                            page   : "page",
                            total  : "total",
                            root   : "rows",
                            records: function(obj){return obj.length;},
                            repeatitems: false,
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['평가년도', '평가군', '부서번호', '부서', '1차평가자사번', '1차평가자', '1차평가여부', '2차평가자사번', '2차평가자', '2차평가여부'],
            colModel     :[
                            {name:'YEAR'          	       		,index:'YEAR'          	          ,width:10    	,align:'center' },
							{name:'EVAL_GRP_NM'              	,index:'EVAL_GRP_NM'              ,width:100   	,align:'left' },
                            {name:'DEPT_CD'                  	,index:'DEPT_CD'                  ,width:30   	,align:'center' },
                            {name:'DEPT_KOR_NM'              	,index:'DEPT_KOR_NM'              ,width:120   	,align:'left' },
							{name:'ASSESSOR_1ST_EMPN'       	,index:'ASSESSOR_1ST_EMPN'        ,width:80    	,align:'center' },
                            {name:'KOR_NM_1ST'     	       		,index:'KOR_NM_1ST'     	      ,width:80   	,align:'center' },
                            {name:'EVAL_SUBMIT_YN'           	,index:'EVAL_SUBMIT_YN'           ,width:50    	,align:'center' },
                            {name:'ASSESSOR_2ND_EMPN'        	,index:'ASSESSOR_2ND_EMPN'        ,width:80   	,align:'center' },
                            {name:'KOR_NM_2ND'     	       		,index:'KOR_NM_2ND'     	      ,width:80    	,align:'center' },
                            {name:'EVAL_SUBMIT_YN_2ND'       	,index:'EVAL_SUBMIT_YN_2ND'       ,width:50   	,align:'center' }
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false,
            viewrecords  : true,
            loadonce     : true,
            multiselect  : false,
            cellEdit     : true,
            gridview     : true,
            cmTemplate   : {sortable:false},
            caption:"평가현황"
        }).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"DEPT_CD").setGridWidth($!{jqGrid_width});

        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });


        /******************************************
         * 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            excelDownload();
            return false;
        });

		/******************************************
		 * 검색조건 텍스트 설정
		 ******************************************/
		J("#findEmpnNameText").css("ime-mode", "active");

    });

    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#evalGrpNm").val(J("#findEvalGrpId > option:selected").text());
        J("#evalSubmit").val(J("#findEvalSubmitYn > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/emp/prsEmpEvalResultStatus/prsEmpEvalResultStatusListExcel.vw?type=excel").submit();
        return false;
    }
			
//]]>
</script>

