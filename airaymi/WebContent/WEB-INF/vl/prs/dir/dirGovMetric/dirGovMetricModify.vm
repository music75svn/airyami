#set($curr_url = $!{context_path} + "/prs/dir/dirGovMetric/dirGovMetricList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/dir/dirGovMetric/dirGovMetricModify_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['선택', '평가년도', '평가범주', '평가부문', '정부경영평가 지표번호','정부경영평가 지표','지표유형', '등록여부'],
			colModel     :[
							{name:'CHK'					,index:'CHK'					,width:30	 ,align:'center',formatter:linkCheck},
                            {name:'YEAR'       			,index:'YEAR'       			,width:150   ,align:'center' },
                            {name:'EVAL_CAT_GRP_NM'     ,index:'EVAL_CAT_GRP_NM'       	,width:150   ,align:'left' },
                            {name:'EVAL_CAT_NM'       	,index:'EVAL_CAT_NM'       		,width:150   ,align:'left' },
                            {name:'GOV_METRIC_ID'       ,index:'GOV_METRIC_ID'			,width:150   ,align:'center' },
                            {name:'GOV_METRIC_NM'       ,index:'GOV_METRIC_NM'       	,width:150   ,align:'left' },
                            {name:'GBN_NM'       		,index:'GBN_NM'       			,width:150   ,align:'left' },
                            {name:'SELECTED'       		,index:'SELECTED'       		,width:150   ,align:'left' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			cmTemplate	 : {sortable:false},
			loadComplete : function() {
								var id         = J("#list").getGridParam('selarrrow');
                				var ids        = J("#list").jqGrid('getDataIDs');

    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.SELECTED != 'N') { //비교조건 대상 컬럼
										J("input[name='chk'][value=" + rowdata.GOV_METRIC_ID + "]").attr("checked", "checked");
    								}
								});

                           },
			caption:"정평지표관리"
		}).jqGrid('hideCol', "YEAR").jqGrid('hideCol', "GOV_METRIC_ID").jqGrid('hideCol', "SELECTED").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가

		});

		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#formList").attr("action", "$!{context_path}/prs/dir/dirGovMetric/dirGovMetricList.vw?type=template").submit();
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			goInsert();
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcel").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
     * jqGrid Check 박스
     ******************************************/
    function linkCheck(cellvalue, options, rowObject) {
    	return '<input type="checkbox" name="chk" value="' + cellvalue + '" class="wp50"/>';
    }

	/******************************************
	 * 저장
	 ******************************************/
	function goInsert() {
		J.showConfirmBox("저장하시겠습니까?", "insertDo"); //insertDo() 콜백함수 호출
	}

	/******************************************
	 * 저장처리
	 ******************************************/
	function insertDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');

		J("#year").val(J("#findYear").val());
		J("#empn").val(J("#findEmpn").val());
		J("#govMetricId").val(J("#findGovMetric").val());
		J("#mode").val("ADD");

		J("#formList").attr("action", "$!{context_path}/prs/dir/dirGovMetric/dirGovMetricProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formList").attr("action", "$!{context_path}/prs/dir/dirGovMetric/dirGovMetricListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

