#set($curr_url = $!{context_path} + "/bsc/matrix/matrixItemPart/matrixItemPartList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/matrix/matrixItemPart/matrixItemPartList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가항목 그룹 코드', '평가항목 코드', '평가항목', '설명', '가중치', '정렬순서','평가제출자수'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'ITEM_GRP_ID'          ,index:'ITEM_GRP_ID'          ,width:150   ,align:'center' }, 
                            {name:'ITEM_ID'              ,index:'ITEM_ID'              ,width:150   ,align:'center' }, 
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:100   ,align:'center' ,formatter:linkUpdate}, 
                            {name:'CONTENT'              ,index:'CONTENT'              ,width:250   ,align:'left'   }, 
							{name:'WEIGHT'               ,index:'WEIGHT'               ,width:100   ,align:'center' },
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:100   ,align:'center' },
							{name:'SUBMIT_CNT'           ,index:'SUBMIT_CNT'           ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.SUBMIT_CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"평가세부항목"
		}).jqGrid('hideCol',"SUBMIT_CNT").jqGrid('hideCol',"YEAR").jqGrid('hideCol',"ITEM_GRP_ID").jqGrid('hideCol',"ITEM_ID").jqGrid('hideCol',"WEIGHT").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#findItemGrpId").val("");
			J("#formFind").attr("action", "$!{context_path}/bsc/matrix/matrixItem/matrixItemList.vw?type=template").submit();
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			var id 	= J("#list").getGridParam('selarrrow');
    		var ids = J("#list").jqGrid('getDataIDs');
    		var rowdata 	= "";
			var insertChk 	= true;
			
    		for (var i = 0; i < ids.length; i++) {
				rowdata = J("#list").getRowData(ids[i]);
				
				if(rowdata.SUBMIT_CNT > 0){
					J.showMsgBox("평가제출을 모두 취소 후 등록할 수 있습니다.", null, null); 
					insertChk  = false;
					return false;
				}
			}
			
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixItemPart/matrixItemPartModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#itemId").val(ret.ITEM_ID);
		J("#itemGrpId").val(ret.ITEM_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixItemPart/matrixItemPartModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			var id 	= J("#list").getGridParam('selarrrow');
    		var ids = J("#list").jqGrid('getDataIDs');
    		var rowdata 	= "";
			var deleteChk 	= true;
    		
    		for (var i = 0; i < ids.length; i++) {
    			J.each(id, function (index, value) {
    				if (value == ids[i]) {
    					rowdata = J("#list").getRowData(ids[i]);
    					if(rowdata.SUBMIT_CNT > 0){
    						J.showMsgBox("평가제출을 모두 취소 후 삭제할 수 있습니다.", null, null); 
    						deleteChk  = false;
							return false;
						}
					}
    			});
    		}
			if(deleteChk){
				J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
			}
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					itemIds += rowdata.ITEM_ID + '|';
				}
			});
		}
        
		J("#itemIds").val(itemIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixItemPart/matrixItemPartProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formFind").attr("action", "$!{context_path}/bsc/matrix/matrixItemPart/matrixItemPartListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

