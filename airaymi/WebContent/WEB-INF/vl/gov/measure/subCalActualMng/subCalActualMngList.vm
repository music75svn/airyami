#set($curr_url = $!{context_path} + "/gov/measure/subCalActualMng/subCalActualMngList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/measure/subCalActualMng/subCalActualMngList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['세부요소코드', '세부요소', '단위', '사번', '1월', '2월', '3월', '4월', '5월', '6월', '7월', '8월', '9월', '10월', '11월', '12월', '담당자'],
			colModel     :[
                            {name:'SUB_CAL_ID'           ,index:'SUB_CAL_ID'           ,width:150   ,align:'center' }, 
                            {name:'SUB_CAL_NM'           ,index:'SUB_CAL_NM'           ,width:230   ,align:'left'   ,formatter:linkSubCalId}, 
                            {name:'UNIT_NM'              ,index:'UNIT_NM'              ,width:110   ,align:'center' }, 
                            {name:'INSERT_USER_ID'       ,index:'INSERT_USER_ID'       ,width:150   ,align:'center' }, 
                            {name:'ACTUAL_01'            ,index:'ACTUAL_01'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_02'            ,index:'ACTUAL_02'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_03'            ,index:'ACTUAL_03'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_04'            ,index:'ACTUAL_04'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_05'            ,index:'ACTUAL_05'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_06'            ,index:'ACTUAL_06'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_07'            ,index:'ACTUAL_07'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_08'            ,index:'ACTUAL_08'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_09'            ,index:'ACTUAL_09'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_10'            ,index:'ACTUAL_10'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_11'            ,index:'ACTUAL_11'            ,width:150   ,align:'center' ,formatter:setScoreInput}, 
                            {name:'ACTUAL_12'            ,index:'ACTUAL_12'            ,width:150   ,align:'center' ,formatter:setScoreInput},
							{name:'USER_NM'              ,index:'USER_NM'              ,width:110   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			cmTemplate	 : {sortable:false},
			caption      :"세부요소입력",
			loadComplete : function() {
								/******************************************
                            	 * 점수에 숫자(정수)만 입력받기
                            	 ******************************************/
                        		J("#formList input[name=actuals]").numeric({allow:".-"}).css("ime-mode", "disabled"); //숫자만 입력받기
                            }
        }).jqGrid('hideCol',"SUB_CAL_ID").jqGrid('hideCol',"INSERT_USER_ID").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 저장 버튼 클릭 이벤트
		 ******************************************/
		J("#btnSave").click(function() {
			goSave();
			return false;
		});
	});

	/******************************************
	 * jqGrid 지표코드
	 ******************************************/
	function linkSubCalId(cellvalue, options, rowObject) {
		return '<input type="hidden" name="mainSubCalIds" value="' + rowObject.SUB_CAL_ID + '" class="input wp50"/>' + cellvalue;
	}
	
	/******************************************
	 * jqGrid 실적입력
	 ******************************************/
	function setScoreInput(cellvalue, options, rowObject) { 
		var tmpMonth = options.colModel.name.substring(7, 9);
		return '<input type="hidden" name="subCalIds" value="' + rowObject.SUB_CAL_ID + '" class="inputbox wp50"/><input type="hidden" name="mons" value="' + tmpMonth + '" class="inputbox wp50"/><input type="text" name="actuals" value="' + cellvalue + '" class="inputbox textRight wp80"/>';
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function goSave() {
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장처리
	 ******************************************/
	function saveDo() {
		J("#mode").val("ADD");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/measure/subCalActualMng/subCalActualMngProcess.vw?type=template").submit();
		return false;
	}
	
//]]>
</script>

