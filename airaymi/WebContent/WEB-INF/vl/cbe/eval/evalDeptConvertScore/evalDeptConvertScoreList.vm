	function setScoreInput(cellvalue, options, rowObject){
		var retVal = cellvalue;
		var sc_dept_id = rowObject.SC_DEPT_ID;
		if( null != sc_dept_id  ){
			retVal = "<input type='text' id='cbeFixConvertScore_" + sc_dept_id + "' name='cbeFixConvertScores' class='inputbox w100' value='" + cellvalue + "' maxlength='10'/>";
		}
		return retVal;
	}
	
	
	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		
		J.ajax({
        	url      : "$!{context_path}/cbe/eval/evalExceDept/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}

	

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
