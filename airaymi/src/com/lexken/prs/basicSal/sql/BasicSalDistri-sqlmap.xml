<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="prs.basicSal.basicSalDistri">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: 
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 등급배분표 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_CODE
	==================================================================
	-->
	<select id="getGradeList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.CODE_ID AS GRADE
		  FROM BSC_CODE A
		 WHERE A.CODE_GRP_ID = '188'
		   AND A.YEAR = #findYear# 
		   AND A.DELETE_DT IS NULL
		 ORDER BY SORT_ORDER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 등급배분표 현황조회 
	  #	기능	: SELECT
	  #	TABLE	: BASIC_SAL_GRADE_DISTRI_TAB
	==================================================================
	-->
	<select id="basicSalDistriTabList" parameterClass="hashMap" resultClass="hashMap" remapResults="true">
		SELECT ITEM_CNT ,
			<iterate property="gradeArray" conjunction=",">
		       $gradeArray[]$
		    </iterate>
		    ,
		    CASE WHEN ITEM_CNT = ( 0 +
								    <iterate property="gradeArray" conjunction="+">
								       NVL( $gradeArray[]$ , 0 ) 
								    </iterate>
								 )
				 THEN 'Y' ELSE 'N' 
		    END AS VALIDATE_SUM_YN
		  FROM 
			(SELECT ITEM_CNT,
			    <iterate property="gradeArray" conjunction=",">
			       MAX( CASE WHEN GRADE = '$gradeArray[]$' THEN ITEM_DISTRI_CNT ELSE NULL END ) AS $gradeArray[]$
			    </iterate>
			  FROM BASIC_SAL_GRADE_DISTRI_TAB
			 WHERE 1=1
			   AND YEAR = #findYear#
			 GROUP BY ITEM_CNT
			) 
		 ORDER BY ITEM_CNT
	</select>
	
	
	<!--
	==================================================================   
	  # 설명	: 등급배분표 등록
	  #	기능	: INSERT
	  #	TABLE	: BASIC_SAL_GRADE_DISTRI_TAB
	==================================================================
	-->	
	<insert id="insertTabData" parameterClass="hashMap">
		INSERT INTO BASIC_SAL_GRADE_DISTRI_TAB ( 
			   YEAR
			 , GRADE
			 , ITEM_CNT
			 , ITEM_DISTRI_CNT
			 , CREATE_DT
			 ) VALUES ( 
			   #year#
			 , #grade#
			 , #itemCnt#
			 , #itemDistriCnt#
			 , SYSDATE
			 )
	</insert>	
	
	
	<!--
	==================================================================   
	  # 설명	: 등급배분표 상세  삭제
	  #	기능	: DELETE
	  #	TABLE	: BASIC_SAL_GRADE_DISTRI_TAB
	==================================================================
	-->	
	<delete id="deleteTabData" parameterClass="hashMap">
		DELETE FROM BASIC_SAL_GRADE_DISTRI_TAB 
		 WHERE YEAR = #year#
	</delete>
	
	
</sqlMap>


