#set($curr_url = $!{context_path} + "/prs/evalCon/evalConMileage/evalConMileageList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/evalCon/evalConMileage/evalConMileageList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['평가년도','부서',  '사번', '이름', '이름','당해년도<br/>평가등급','당해년도<br/>마일리지', '전년도<br/>마일리지', '총마일리지','시용마일리지', '잔여마일리지','전년도+당해년도<br/>마일리지'],
            colModel     :[
                            {name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'DEPT_KOR_NM'          ,index:'DEPT_KOR_NM'          ,width:300   ,align:'left' }, 
                            {name:'EMPN'                 ,index:'EMPN'                 ,width:150   ,align:'center' }, 
                            {name:'KOR_NM'               ,index:'KOR_NM'               ,width:130   ,align:'center' ,formatter:linkUpdate}, 
                            {name:'KOR_NAME'             ,index:'KOR_NAME'             ,width:150   ,align:'center' },
                            {name:'GRADE'                ,index:'GRADE'                ,width:120   ,align:'center' }, 
                            {name:'MILEAGE'              ,index:'MILEAGE'              ,width:130   ,align:'center' }, 
                            {name:'MILEAGE2'             ,index:'MILEAGE2'             ,width:130   ,align:'center' }, 
                            {name:'TOTAL_MILEAGE'        ,index:'TOTAL_MILEAGE'        ,width:120   ,align:'center' }, 
                            {name:'USE_MILEAGE'          ,index:'USE_MILEAGE'          ,width:120   ,align:'center' }, 
                            {name:'FINAL_MILEAGE'        ,index:'FINAL_MILEAGE'        ,width:120   ,align:'center' },
                            {name:'SUM_MILEAGE'          ,index:'SUM_MILEAGE'          ,width:130   ,align:'center' }
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : false,
            cellEdit     : true,
            gridview     : true,
            caption:"직원개인기여도평가 마일리지관리"
        }).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"KOR_NAME").jqGrid('hideCol',"TOTAL_MILEAGE").jqGrid('hideCol',"USE_MILEAGE").jqGrid('hideCol',"FINAL_MILEAGE").setGridWidth($!{jqGrid_r_width});
        
        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });
        
        /******************************************
         * 마일리지부여 등록
         ******************************************/
        J("#btnInsert").click(function() {
			goInsert();
            return false;
        });
        
        /******************************************
         * 마일리지부여 등록
         ******************************************/
        J("#btnBatch").click(function() {
			goBatch();
            return false;
        });
        
        /******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
        
    });

	 /******************************************
	 * 조직선택 클릭이벤트
	 ******************************************/
	function goAction(deptCd, deptNm) {
		setDeptInfo(deptCd, deptNm);
	}
	
	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/ 
	function setDeptInfo(deptCd, deptNm) {
		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findDeptCd]").val(deptCd);
		J("#formList input[name=findDeptNm]").val(J(deptNm).text());
		J("#formList input[name=findSearchCodeId]").val(J(deptCd));
	
			// formFind의 변수들 설정.
			J("#findDeptCd").val(deptCd);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findDeptNm").val(J(deptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			J("#findSearchCodeId").val(deptCd);	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			
			goGridSearch();
	}
   
	
	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/evalCon/evalConMileage/evalConMileageList_xml.vw?"+J("#formFind").serialize(), datatype:"json"}); 
		J("#list").trigger("reloadGrid");
	}
	
    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
        J("#empn").val(ret.EMPN);
        J("#korNm").val(ret.KOR_NAME);
        J("#deptKorNm").val(ret.DEPT_KOR_NM);
        J("#year").val(J("#findYear").val());
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageDetailList.vw?type=template").submit();
    }
    
    /******************************************
     * 일괄 마일리지 부여
     ******************************************/
    function goBatch() {
        J("#year").val(J("#findYear").val());
        J("#mode").val("MOD1");
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageBatchDetail.vw?type=template").submit();
    }
    
    
    /******************************************
     * 당해년도 마일리지 부여
     ******************************************/
    function goInsert() {
        J.showConfirmBox("당해년도 마일리지를 부여하시겠습니까?<br>당해년도 개인기여도평가 마일리지 적립이 삭제됩니다.", "insertDo"); //deleteDo() 콜백함수 호출
    }
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }
    
    /******************************************
     * 마일리지 부여처리
     ******************************************/
    function insertDo() {
	  	J("#year").val(J("#findYear").val());
        J("#mode").val("GET");
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageProcess.vw?type=template").submit();
	   return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear").val() + "년");
		J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageListExcel.vw?type=excel").submit();
		return false;
	}
	
//]]>
</script>

