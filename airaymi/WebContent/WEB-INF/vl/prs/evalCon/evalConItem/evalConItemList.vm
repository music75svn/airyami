	/******************************************
	 * jqGrid 정렬 링크
	 ******************************************/
	function linkSortId(cellvalue, options, rowObject) { 
		var str = '';
		str += '<input type="text"  name="evalItemOrderIds" value="' + cellvalue + '" class="inputbox w60" maxlength="6" />';
		return str;
	}
	
	/******************************************
	 * jqGrid 구분 
	 ******************************************/
	function linkEvalGbn(cellvalue, options, rowObject) { 
		var str = '';
		str += '<input type="text"  name="evalEvalGbn" value="' + cellvalue + '" class="inputbox w60" maxlength="6" />';
		return str;
	}
	
	/******************************************
	 * jqGrid 정렬 링크
	 ******************************************/
	function linkSort(cellvalue, options, rowObject) { 
		var str = '';
		str += '<input type="text"  name="sortOrders" value="' + cellvalue + '" class="inputboxNum w60" maxlength="6" />';
		return str;
	}
	/******************************************
	 * jqGrid 가중치
	 ******************************************/
	function linkWeight(cellvalue, options, rowObject) { 
		var str = '';
		str += '<input type="text" name="weights"  value="' + cellvalue + '" class="inputboxNum w50" maxlength="3" />' +'%';
		return str;
	}

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
		var weightSum = '$!{weightSum}';
		J("#sumAdd").val(weightSum);
        J("#evalItemId").val(ret.EVAL_ITEM_ID);
        J("#year").val(J("#findYear").val());
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConItem/evalConItemModify.vw?type=template").submit();
    }
    
	/******************************************
	 * 정렬저장(유효성)
	 ******************************************/
	function orderCk() {
		var count = J("#list").jqGrid('getGridParam', 'records');
		var saveChk = true;
		
		if(J("#list").getGridParam("records") == 0){
			J.showMsgBox("저장 할 평가항목이 없습니다.");
			return false;
		}
		
		//정렬기준 null체크 중복체크
		if(count >0){
		J("input[name=sortOrders]").each(function(a, value) {
    		if(J("input[name=sortOrders]").eq(a).val()=="") {
    			J.showMsgBox("정렬순서를 입력하세요", null, J("input[name=sortOrders]").eq(a));
    			saveChk = false;
    			return false;
    		}
	
		});
		 
		J("input[name=sortOrders]").each(function(b, value) {
    		if(!isNumber(J("input[name=sortOrders]").eq(b).val())) {
    			J.showMsgBox("정렬순서는 숫자만 입력가능합니다", null, J("input[name=sortOrders]").eq(b));
				saveChk = false;
    			return false;
    		}
		});
			
	
		J("input[name=sortOrders]").each(function(i, value) {
			J("input[name=sortOrders]").each(function(j, value) {
			if(i!=j && J("input[name=sortOrders]").eq(i).val() == J("input[name=sortOrders]").eq(j).val()) {
				J.showMsgBox("정렬순서는 동일한 정렬로 입력하실 수 없습니다", null, J("input[name=sortOrders]").eq(i));
				saveChk = false;
				return false;
			}
			});
		});
		
		}else{
			J.showMsgBox("변경할 내용이 없습니다.");
			return false;
	    }
			
		if(saveChk){	
		 weightOrder();
		}
		 
	}
    	
	/******************************************
	 * 정렬저장(유효성_가중치)
	 ******************************************/
	function weightOrder(){ //가중치 합 유효성검사
		var count = J("#list").jqGrid('getGridParam', 'records');
		var saveChk = true;
		var weightSum = 0;
		
		//정렬기준 null체크 중복체크
    	if(count >0){
		
			 J("input[name=weights]").each(function(a, value) {
        		if(!isNumber(J("input[name=weights]").eq(a).val())) {
        			J.showMsgBox("가중치는 숫자만 입력가능합니다", null, J("input[name=weights]").eq(a));
					saveChk = false;
        			return false;
        		}
			});
			
    		 J(":input[name=weights]").each(function(index, item) {
        			if(J(item).val() != "" && J(item).val() != "0") {
        				weightSum  = parseFloat(weightSum) + parseFloat(J(item).val());
        			}
    		 });
    
    	 	weightSum = Math.round(weightSum*100)/100;
    	 	
    	   if(weightSum != "100"){
    	   		alert("가중치 합계가 100이 되어야합니다.\n재조정해주세요.");
				//J.showMsgBox("가중치 합계가 100이 되어야합니다.<br/>재조정해주세요." , null);
    			//saveChk = false;
    		    //return false;
		   }
			
		   if(saveChk){
		   var gbn = '$!{gbnCount}';
		   	if(gbn == '0'){
			  J.showConfirmBox("평가구분 중 업무성과 항목이 없습니다.<br/>그래도 저장하시겠습니까?", "orderDo");
			}else{
        	  J.showConfirmBox("저장 하시겠습니까?", "orderDo"); //insertDo() 콜백함수 호출
			}
           }
		   
       }else{
			J.showMsgBox("변경할 내용이 없습니다.");
			return false;
	   }//end
    }
    	
    	
    /******************************************
     * 정렬저장
     ******************************************/
	function orderDo(){
		J("#year").val(J("#findYear").val());
		J("#mode").val("ORDER");
		J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConItem/evalConItemProcess.vw?type=template").submit();
		return false;
	}
	
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }
    
    /******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
        var evalItemIds = "";
        
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);
                    evalItemIds += rowdata.EVAL_ITEM_ID + '|';
                }
            });
        }
        
        J("#evalItemIds").val(evalItemIds);
        J("#mode").val("DEL");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConItem/evalConItemProcess.vw?type=template").submit();
        return false;
    }
    
    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConItem/evalConItemListExcel.vw?type=excel").submit();
        return false;
    }

