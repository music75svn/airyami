	function excelDownload(){

    	J("#yearNm").val(J("#findYear > option:selected").text());
    	J("#insertUserNm").val(J("#findInsertUserId > option:selected").text());
    	J("#evalCatGrpNm").val(J("#findEvalCatGrp > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/gov/measure/govActualMng/govActualMngListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 년도 변경시 담당자 변경
	 ******************************************/
	function chgInsertUser(){
		J.ajax({
			url      : "$!{context_path}/gov/measure/govActualMng/insertUserList_ajax.vw",
			cache    : false,
			type     : "POST",
			data	 : J("#formFind").serialize(),
			dataType : "html",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
			success  : function(data){
							var xmlDoc = J.parseXML(data);
							J("#findInsertUserId").empty();

							J('<option/>').attr('value','').text("전체").appendTo('#findInsertUserId');
							J(xmlDoc).find("data").each(function() {
								J('<option/>').attr('value',J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findInsertUserId');
							})
					   }
		});

		J.ajax({
			url      : "$!{context_path}/gov/measure/govActualMng/evalCatGrpList_ajax.vw",
			cache    : false,
			type     : "POST",
			data	 : J("#formFind").serialize(),
			dataType : "html",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
			success  : function(data){
							var xmlDoc = J.parseXML(data);
							J("#findEvalCatGrp").empty();

							J('<option/>').attr('value','').text("전체").appendTo('#findEvalCatGrp');
							J(xmlDoc).find("data").each(function() {
								J('<option/>').attr('value',J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalCatGrp');
							})
					   }
		});
	}


	/******************************************
	 * 경영평가 지표정의서  팝업
