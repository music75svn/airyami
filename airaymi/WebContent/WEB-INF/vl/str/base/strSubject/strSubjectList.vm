#set($curr_url = $!{context_path} + "/str/base/strSubject/strSubjectList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/str/base/strSubject/strSubjectList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '경영목표코드', '경영목표', '전략과제 코드', '전략과제', '설명', '정렬순서', '개수'],
			colModel     :[
							{name:'YEAR'						,index:'YEAR'						,width:150   ,align:'center' }, 
                            {name:'MANAGEMENT_ID'		,index:'MANAGEMENT_ID'		,width:150   ,align:'center' }, 
                            {name:'MANAGEMENT_NM'	,index:'MANAGEMENT_NM'	,width:150   ,align:'left' }, 
                            {name:'STRAT_SUBJECT_ID'	,index:'STRAT_SUBJECT_ID'		,width:150   ,align:'center' }, 
                            {name:'STRAT_SUBJECT_NM'	,index:'STRAT_SUBJECT_NM'	,width:150   ,align:'left'   ,formatter:linkUpdate}, 
                            {name:'CONTENT'				,index:'CONTENT'				,width:250   ,align:'left'   }, 
                            {name:'SORT_ORDER'			,index:'SORT_ORDER'			,width:150   ,align:'center' }, 
                            {name:'CNT'						,index:'CNT'			,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"전략과제"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"SUBJECT_CNT").jqGrid('hideCol',"MANAGEMENT_ID").jqGrid('hideCol',"CONTENT").jqGrid('hideCol',"CNT").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/str/base/strSubject/strSubjectModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});
	
	/******************************************
	 * 년도변경시 경영목표 변경
	 ******************************************/
	
	function chgStratSubject(){
	
		J.ajax({
        	url      : "$!{context_path}/bsc/base/csf/csfList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findManagementId").empty();
				
				J('<option/>').attr('value','').text("전체").appendTo('#findManagementId');
				
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findManagementId');
				})
        	}
    	});
		
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#managementId").val(ret.MANAGEMENT_ID);
		J("#stratSubjectId").val(ret.STRAT_SUBJECT_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/str/base/strSubject/strSubjectModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var stratSubjectIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					stratSubjectIds += rowdata.STRAT_SUBJECT_ID + '|';
				}
			});
		}
        
		J("#stratSubjectIds").val(stratSubjectIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/str/base/strSubject/strSubjectProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());
		
		J("#formList").attr("action", "$!{context_path}/str/base/strSubject/strSubjectListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

