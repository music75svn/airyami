			rowNum       : 15,
			autowidth    : false,
			pager		 : jQuery('#pager'),
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			sortable     : false,
			cmTemplate   :{sortable:true},
			caption:"게시판관리"
		}).jqGrid('hideCol',"BBS_ID").jqGrid('hideCol',"BBS_SEQ").jqGrid('hideCol',"BBS_DEPT").jqGrid('hideCol',"IS_NEW")
