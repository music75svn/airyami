#set($curr_url = $!{context_path} + "/cbe/exc/excEvalUser/excEvalUserList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/cbe/exc/excEvalUser/excEvalUserList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가차수 코드', '별도평가부서코드', '사번', '별도평가부서', '성명', '사업추진보고서<br>대상여부','직급', '직위', '현부서'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                  ,width:50   ,align:'center' },
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'        ,width:50   ,align:'center' },
                            {name:'SC_DEPT_ID'       	 ,index:'SC_DEPT_ID'        	,width:80   ,align:'center' },
                            {name:'EMPN'           		 ,index:'EMPN'           		,width:100   ,align:'center'},
                            {name:'SC_DEPT_NM'       	 ,index:'SC_DEPT_NM'        	,width:150   ,align:'left' },
							{name:'KOR_NM'       		 ,index:'KOR_NM'       			,width:100   ,align:'center' , formatter:linkUpdate},
							{name:'RPT_YN'       		 ,index:'RPT_YN'				,width:100    ,align:'center' },
                            {name:'CAST_TC_NM'           ,index:'CAST_TC_NM'         	,width:100   ,align:'center' },
                            {name:'POS_TC_NM'            ,index:'POS_TC_NM'         	,width:100   ,align:'center' },
                            {name:'DEPT_KOR_NM'          ,index:'DEPT_KOR_NM'         	,width:100   ,align:'left' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			caption:"평가실시"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"SC_DEPT_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			if (J("#findEvalDegreeId").length == 0) {
				alert("평가구분이 없습니다. 평가구분을 입력해 주십시요.");
				return;
			}

			J("#year").val(J("#findYear").val());
			J("#evalDegreeId").val(J("#findEvalDegreeId").val());
			J("#evalDegreeNm").val(J("#findEvalDegreeId option:selected").text());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalUser/excEvalUserModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 확정버튼 이벤트
		 ******************************************/
		J("#btnConfirm").click(function(e) {
			e.preventDefault();
			getConfirm();
		});

		/******************************************
		 * 확정취소버튼 이벤트
		 ******************************************/
		J("#btnCancle").click(function(e) {
			e.preventDefault();
			btnCancle();
		});

		/******************************************
		 * 별도평가대상자가져오기 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcUser").click(function() {
			if('$!{CS_HTML.txt2html($confirmYn.DEPT_YN)}' == 'Y'){

    			J.showMsgBox("확정되어 별도평가대상자를 가져올수 없습니다..", null, null);
    			return;

    		} else {
				getExcUser();
				return false;
			}
		});
	});

	/******************************************
	 * 별도평가대상자 불러오기
	 ******************************************/
	function getExcUser() {
		J.showConfirmBox("별도평가대상자 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "getExcUserInfo"); //getExcUserInfo() 콜백함수 호출
	}

	function getExcUserInfo() {
		J("#mode").val("GET");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalUser/excEvalUserProcess.vw?type=template").submit();
	}

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function getConfirm() {

		J.showConfirmBox("확정하시겠습니까?", "Confirm"); //Confirm() 콜백함수 호출
	}

	/******************************************
	 * 확정
	 ******************************************/
	function Confirm() {

		J("#mode").val("CONF");
		J("#year").val(J("#findYear").val());
		J("#userYn").val('Y');
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalUser/excEvalUserProcess.vw?type=template").submit();
	}

	/******************************************
	 * 확정취소처리
	 ******************************************/
	function btnCancle(){

		J.showConfirmBox("별도평가대상자의 확정이 취소됩니다. 확정을 취소 하시겠습니까?", "CancelDo"); //CancelDo() 콜백함수 호출

	}

	/******************************************
	 * 확정취소처리
	 ******************************************/
	function CancelDo() {
		J("#mode").val("CONF");
		J("#year").val(J("#findYear").val());
		J("#userYn").val('N');
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalUser/excEvalUserProcess.vw?type=template").submit();
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#empn").val(ret.EMPN);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#scDeptId").val(ret.SC_DEPT_ID);
		J("#year").val(J("#findYear").val());
		J("#evalDegreeNm").val(J("#findEvalDegreeId option:selected").text());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalUser/excEvalUserModify.vw?type=template").submit();

	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var empnIds = "";
		var evalDegreeIds = "";
		var scDeptIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					empnIds += rowdata.EMPN + '|';evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';
				}
			});
		}

		J("#evalDegreeIds").val(evalDegreeIds);J("#empnIds").val(empnIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excEvalUser/excEvalUserProcess.vw?type=template").submit();
		return false;
	}

//]]>
</script>

