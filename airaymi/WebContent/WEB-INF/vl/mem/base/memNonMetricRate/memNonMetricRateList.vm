<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/base/memNonMetricRate/memNonMetricRateList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '평가자구분코드', '평가자구분', '평가비율'],
			colModel     :[
							{name:'YEAR'                     ,index:'YEAR'                       ,width:100   ,align:'center' },
                            {name:'EVAL_USER_GUBUN_ID'       ,index:'EVAL_USER_GUBUN_ID'         ,width:100   ,align:'center' },
                            {name:'EVAL_USER_GUBUN_NM'       ,index:'EVAL_USER_GUBUN_NM'         ,width:100   ,align:'center' },
							{name:'EVAL_RATE'                ,index:'EVAL_RATE'                  ,width:100   ,align:'center' ,formatter:goEvalRate}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
					J("input[name=gEvalRates]").numeric({allow:"."});        	//특정문자 허용(.)
					J("input[name=gEvalRates]").css("ime-mode", "disabled"); 	//한글사용 비활성화
				  },
			caption:"비계량지표평가자비율설정"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_USER_GUBUN_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 저장
		 ******************************************/
		J("#btnAllSave").click(function() {
			goAllSave();
			return false;
		});

	});
	
	/******************************************
	 * jqGrid 평가비율
	 ******************************************/
	function goEvalRate(cellvalue, options, rowObject) {
		if(options.rowId==""){
			return cellvalue;
		}else{
			var str = '';
			str += '<input type="text" id="gEvalRates" name="gEvalRates" value="' + cellvalue + '" class="inputbox wp70" maxlength="5"/> %';

			return str;
		}
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function goAllSave() {
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";

		if(ids.length == 0){
			alert("저장할 항목이 없습니다.");
			return false;
		}

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			/*
			if(J("#formList input[name=gEvalRates]").eq(i).val() == ""){
				alert("평가비울을 입력하세요.");
				J("#formList input[name=gEvalRates]").eq(i).focus();
				return false;
			}
			*/
		}
		J.showConfirmBox("저장하시겠습니까?", "allSaveDo"); //allSaveDo() 콜백함수 호출
	}

	/******************************************
	 * 일괄저장 처리
	 ******************************************/
	function allSaveDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalUserGubunIds = "";
		var evalRates = "";

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			evalUserGubunIds += rowdata.EVAL_USER_GUBUN_ID + '|';
			evalRates += J("#formList input[name=gEvalRates]").eq(i).val() + '|';
		}

		J("#evalUserGubunIds").val(evalUserGubunIds);
		J("#evalRates").val(evalRates);
		J("#mode").val("SAVE");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/base/memNonMetricRate/memNonMetricRateProcess.vw?type=template").submit();
		return false;
	}

//]]>
</script>

