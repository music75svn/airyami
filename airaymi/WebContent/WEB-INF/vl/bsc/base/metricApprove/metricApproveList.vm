#set($curr_url = $!{context_path} + "/bsc/base/metricApprove/metricApproveList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/base/metricApprove/metricApproveList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :[ '조직코드', '$!{SC_DEPT_NM}', '$!{METRIC_NM} 수',  '$!{METRIC_NM}담당자', '부서장', '부서장EMAIL', '진행구분코드', '진행구분'],
			colModel     :[
                            {name:'SC_DEPT_ID'           ,index:'SC_DEPT_ID'           ,width:150   ,align:'center' },
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:200   ,align:'left' },
                            {name:'KPI_CNT'              ,index:'KPI_CNT'              ,width:70    ,align:'center' },
                            {name:'BSC_USER_NM'          ,index:'BSC_USER_NM'          ,width:130   ,align:'center' },
                            {name:'MANAGER_USER_NM'      ,index:'MANAGER_USER_NM'      ,width:130   ,align:'center' },
							{name:'EMAIL'      			 ,index:'EMAIL'  		       ,width:130   ,align:'center' },
                            {name:'APPROVE_STATUS_ID'    ,index:'APPROVE_STATUS_ID'    ,width:130   ,align:'center' },
							{name:'APPROVE_STATUS_NM'    ,index:'APPROVE_STATUS_NM'    ,width:130   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.EMAIL == "") { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"$!{METRIC_NM}승인 진행관리"
		}).jqGrid('hideCol',"SC_DEPT_ID").jqGrid('hideCol',"EMAIL").jqGrid('hideCol',"APPROVE_STATUS_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 마감버튼 클릭
		 ******************************************/
		J("#btnClose").click(function() {
			J("#kpiCloseYn").val("Y");
			goClose();
			return false;
		});

		/******************************************
		 * 마감취소 버튼 클릭
		 ******************************************/
		J("#btnCancle").click(function() {
			J("#kpiCloseYn").val("N");
			goClose();
			return false;
		});

		/******************************************
		 * 메일 버튼 클릭 이벤트
		 ******************************************/
		J("#btnMail").click(function() {
			mailWrite();
			return false;
		});
	});

	/******************************************
	 * 마감/마감취소
	 ******************************************/
	function goClose() {
		var kpiCloseYn = J("#kpiCloseYn").val();

		if(kpiCloseYn == 'Y') {
			J.showConfirmBox("마감하시겠습니까?", "goCloseDo"); //goCloseDo() 콜백함수 호출
		} else {
			J.showConfirmBox("마감취소 하시겠습니까?", "goCloseDo"); //goCloseDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 마감/마감취소 실행
	 ******************************************/
	function goCloseDo() {
		J("#year").val(J("#findYear").val());
		J("#mode").val("CLOSE");
		J("#formList").attr("action", "$!{context_path}/bsc/base/metricApprove/metricApproveProcess.vw?type=template").submit();
	}

	/******************************************
	 * 메일발송 팝업
	 ******************************************/
	function mailWrite(){
		var list = "";
		var id = "";
		var ids = "";
		var rowdata = "";
		var toMail = "";
		var toName = "";
		var toNameList = "";

		list = "list";
		id = J("#list").getGridParam('selarrrow');
		ids = J("#list").jqGrid('getDataIDs');

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#"+ list).getRowData(ids[i]);
					if(rowdata.EMAIL != '' && rowdata.EMAIL != null) {
    					toMail += rowdata.EMAIL + "|";

						toName += rowdata.MANAGER_USER_NM + "|";
						toNameList += rowdata.MANAGER_USER_NM + "<" + rowdata.EMAIL + ">;";
    				}
				}
			});
		}

		if(!J.gridSelectChk(list)){
			J.showMsgBox("메일을 전송할 대상자를 선택하십시요", null, null);
		} else {
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
    	}
	}

//]]>
</script>

