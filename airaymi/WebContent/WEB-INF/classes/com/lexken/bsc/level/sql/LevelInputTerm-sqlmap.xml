<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.level.levelInputTerm">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 난이도평가일정 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT END_DT, START_DT, 
               GRADE_LIMIT_RATE_UP || '/' || GRADE_LIMIT_RATE_DOWN AS GRADE_LIMIT_RATE,
               A.YEAR,
               CASE WHEN NVL(B.CNT,0) = 0 THEN 'N' ELSE 'Y' END EVAL_CLOSING_YN,
               CASE WHEN NVL(C.CNT,0) = 0 THEN 'N' ELSE 'Y' END EVAL_SUBMIT_YN
          FROM BSC_LEVEL_IN_TERM A 
                   LEFT OUTER JOIN  ( SELECT YEAR, COUNT(1) CNT 
                                        FROM BSC_LEVEL_EVAL_USER_GRP
                                      WHERE EVAL_CLOSING_YN = 'Y'
                                      GROUP BY YEAR
                                     ) B
                   ON A.YEAR = B.YEAR   
                   LEFT OUTER JOIN  ( SELECT YEAR, COUNT(1) CNT 
                                        FROM BSC_LEVEL_EVAL_USER
                                      WHERE EVAL_SUBMIT_YN = 'Y'
                                      GROUP BY YEAR
                                     ) C
                   ON A.YEAR = C.YEAR   
         ORDER BY A.YEAR    		
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 난이도평가 일정 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT CREATE_DT, END_DT, GRADE_LIMIT_RATE_DOWN, 
			   GRADE_LIMIT_RATE_UP, MODIFY_DT, START_DT, 
			   YEAR		 
		  FROM BSC_LEVEL_IN_TERM
		 WHERE YEAR = #findYear#                    
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 난이도평가일정 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		INSERT INTO BSC_LEVEL_IN_TERM(
               YEAR
             , START_DT
             , END_DT
             , GRADE_LIMIT_RATE_UP
             , GRADE_LIMIT_RATE_DOWN
             , CREATE_DT
             ) VALUES (
               #year#
             , #startDt#
             , #endDt#
             , #gradeLimitRateUp#
             , #gradeLimitRateDown#
             , SYSDATE
             )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 난이도평가일정 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_LEVEL_IN_TERM
		   SET START_DT = #startDt#
		     , END_DT   = #endDt#
		     , GRADE_LIMIT_RATE_UP   = #gradeLimitRateUp#
		     , GRADE_LIMIT_RATE_DOWN   = #gradeLimitRateDown#
		     , MODIFY_DT = SYSDATE
		 WHERE YEAR     = #year#
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 난이도평가일정 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BSC_LEVEL_IN_TERM
		WHERE YEAR = #year# 
	</update>
	
	<!--
	==================================================================   
	  # 설명	: 해당년 등록 여부 확인
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->	
	<select id="getCount" parameterClass="hashMap" resultClass="java.lang.Integer">
		SELECT COUNT(*) CNT 
		  FROM BSC_LEVEL_IN_TERM
		 WHERE YEAR = #year#
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가마감확인
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->	
	<select id="getEvalCloseYn" parameterClass="hashMap" resultClass="java.lang.String">
		SELECT CASE WHEN CNT=0 THEN 'N'
               ELSE 'Y' END EVAL_CLOSING_YN
          FROM (SELECT NVL((SELECT COUNT(1)
                              FROM BSC_LEVEL_EVAL_USER_GRP
                             WHERE YEAR = #findYear#
                               AND EVAL_CLOSING_YN = 'Y'
                               <isNotEmpty prepend="AND" property="evalUserGrpId">
							   EVAL_USER_GRP_ID = #evalUserGrpId#
							   </isNotEmpty>
                           ),0) CNT
                  FROM DUAL
                )         
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가마감확인
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_IN_TERM
	==================================================================
	-->	
	<select id="getEvalSubmitYn" parameterClass="hashMap" resultClass="java.lang.String">
		SELECT CASE WHEN CNT=0 THEN 'N'
               ELSE 'Y' END EVAL_SUBMIT_YN
          FROM (SELECT NVL((SELECT COUNT(1)
                              FROM BSC_LEVEL_EVAL_USER
                             WHERE YEAR = #findYear#
                               AND EVAL_SUBMIT_YN = 'Y'
                               <isNotEmpty prepend="AND" property="evalUserGrpId">
							   EVAL_USER_GRP_ID = #evalUserGrpId#
							   </isNotEmpty>
                           ),0) CNT
                  FROM DUAL
                ) 
	</select>
	
</sqlMap>


