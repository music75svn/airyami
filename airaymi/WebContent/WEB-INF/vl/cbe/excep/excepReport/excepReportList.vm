	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr1Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.SEQ;
		var rowSpan = rowObject.FCOUNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){

		J.ajax({
        	url      : "$!{context_path}/cbe/excep/excepDept/getDegreeList_ajax.vw",
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
		chgEvalUser();
	}

	/******************************************
	 * 년도별 평가근거담당자
	 ******************************************/
	function chgEvalUser(){
		setTimeout(function(){
    		J.ajax({
            	url      : "$!{context_path}/cbe/excep/excepReport/getUserList_ajax.vw",
            	cache    : false,
            	type     : "POST",
    			data     : J("#formFind").serialize(),
            	dataType : "html",
            	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            	success  : function (data) {
    				var xmlDoc = J.parseXML(data);
            		J("#findEvalBaseChargeId").empty();
    				J('<option/>').attr('value','').text("전체").appendTo('#findEvalBaseChargeId');
    				J(xmlDoc).find("data").each(function() {
    					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalBaseChargeId');
    				})
    			}
        	});
		},500);
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		if('$!{CS_HTML.txt2html($closeYn)}' == 'Y'){

			J.showMsgBox("평가가 마감었습니다.", null, null);
			return;

		}

		if(ret.EVAL_SUBMIT_YN == 'Y'){
			J.showMsgBox("평가제출이 완료된 상태 입니다.", null, null);
			return;
		}

		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#scDeptId").val(ret.SC_DEPT_ID);
		J("#insertUserId").val(ret.EVAL_BASE_CHARGE_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepReport/excepReportModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var scDeptIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';scDeptIds += rowdata.SC_DEPT_ID + '|';
				}
			});
		}

		J("#evalDegreeIds").val(evalDegreeIds);J("#scDeptIds").val(scDeptIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepReport/excepReportProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/cbe/excep/excepReport/excepReportListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 메일발송 팝업
	 ******************************************/
	function mailWrite(){
		var list = "";
		var id = "";
		var ids = "";
		var rowdata = "";
		var toMail = "";
		var toName = "";
		var toNameList = "";

		list = "list";
		id = J("#list").getGridParam('selarrrow');
		ids = J("#list").jqGrid('getDataIDs');

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#"+ list).getRowData(ids[i]);
					if(rowdata.EMAIL != '' && rowdata.EMAIL != null) {
    					toMail += rowdata.EMAIL + "|";

						toName += rowdata.EVAL_BASE_CHARGE_USER_NM + "|";
						toNameList += rowdata.EVAL_BASE_CHARGE_USER_NM + "<" + rowdata.EMAIL + ">;";
    				}
				}
			});
		}

		if(!J.gridSelectChk(list)){
			J.showMsgBox("메일을 전송할 대상자를 선택하십시요", null, null);
		} else {
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
    	}
	}

//]]>
</script>

