		return false;
	}
	
	
	/******************************************
	 * 저장
	 ******************************************/
	function goInsert() {
		var workTerm = J("#workTerm").val();
		if( 0 > workTerm || 365 < workTerm ){
			J.showMsgBox("근무기간을 확인하여 주십시오.", null, null);
			J("#workTerm").focus();
			return;
		}
		
		var isCont = true;
		J("#formList input[name=cbeFixConvertScores]").each(function(){
			var score  = 0; 
			score = $(this).val()==""?0: parseFloat( $(this).val() );
			if( score < 0 || score > 100 ){
				
				$(this).focus();
				isCont = false;
			}
		});
		
		if( !isCont ){
			J.showMsgBox("확정환산 조직점수를 확인하여 주십시오.", null, null);
			return;
		}
		J.showConfirmBox("저장하시겠습니까?", "insertDo"); //insertDo() 콜백함수 호출
	}
	
	/******************************************
	 * 저장처리
	 ******************************************/
	function insertDo() {
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var scores = "";
		var scDeptIds = "";
		var score  = ""; 
		
		J("#formList input[name=cbeFixConvertScores]").each(function(){
			var tmpId = $(this).attr("id");
			var sc_dept_id = tmpId.replace("cbeFixConvertScore_", "");
			scDeptIds += sc_dept_id + '|' ;
			score = $(this).val()==""?"none":$(this).val();
			scores += score + '|';
		});
		
		J("#scDeptIds").val(scDeptIds);
		J("#cbeFixScores").val(scores);
		
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#mode").val("ADD");
		
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalDeptConvertScore/evalDeptConvertScoreProcess.vw?type=template").submit();
		return false;
	}
	
	
	/******************************************
	 * 조직 환산점수 집계
	 ******************************************/
	function goExecute() {
		J.showConfirmBox("조직 환산점수 집계를 하시면  <br>기존 확정환산조직점수는 덮어쓰게 됩니다.<br>조직 환산점수 집계를 실행하시겠습니까?  ", "excuteDo"); //excuteDo() 콜백함수 호출
	}
	
	
	
	/******************************************
	 * 인사정보 초기화
	 ******************************************/
	function goExec() {
	    if(J("#findEvalDegreeId").val() == null || J("#findEvalDegreeId").val() == ""){
			J.showMsgBox("평가구분을 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("인사정보를 초기화 하시면 <br>기존에 등록한 정보도 모두 초기화 됩니다. <br>인사정보를 초기화 하시겠습니까?", "execDo"); //execDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 일괄적용처리
	 ******************************************/
	function execDo() {
		J("#mode").val("INIT");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalDeptConvertScore/evalDeptConvertScoreProcess.vw?type=template").submit();
		return false;
	}
	
	
	/******************************************
	 * 조직 환산점수 집계
	 ******************************************/
	function excuteDo() {
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#procId").val("SP_CBE_SET_CONVERT_TAB");
