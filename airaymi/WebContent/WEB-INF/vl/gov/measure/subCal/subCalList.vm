#set($curr_url = $!{context_path} + "/gov/measure/subCal/subCalList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/measure/subCal/subCalList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['세부요소', '담당자', '주관부서', '단위', '정렬순서', 'SUB_CAL_ID', 'CAL_CNT'],
			colModel     :[
							{name:'SUB_CAL_NM'               ,index:'SUB_CAL_NM'            ,width:300   ,align:'center', sortable:true ,formatter:linkUpdate},
                            {name:'INSERT_USER_NM'           ,index:'INSERT_USER_NM'        ,width:150   ,align:'center', sortable:true },
                            {name:'INSERT_DEPT_NM'           ,index:'INSERT_DEPT_NM'        ,width:150   ,align:'center', sortable:true },
                            {name:'UNIT_NM'       			 ,index:'UNIT_NM'       		,width:100   ,align:'center', sortable:true },
                            {name:'SORT_ORDER'               ,index:'SORT_ORDER'            ,width:100   ,align:'center', sortable:true },
                            {name:'SUB_CAL_ID'           	 ,index:'SUB_CAL_ID'           	,width:150   ,align:'center', sortable:true },
							{name:'CAL_CNT'           	 	 ,index:'CAL_CNT'           	,width:150   ,align:'center', sortable:true }
						  ],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   :{sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.CAL_CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"정평계량 세부요소관리"
		}).jqGrid('hideCol',"SUB_CAL_ID").jqGrid('hideCol',"CAL_CNT").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/measure/subCal/subCalModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#subCalId").val(ret.SUB_CAL_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/measure/subCal/subCalModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var subCalIds = "";

		var valCheck = true;

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);

					if(rowdata.CAL_CNT != '0'){
						valCheck = false;
					}

					subCalIds += rowdata.SUB_CAL_ID + '|';
				}
			});
		}

		if(!valCheck){
			J.showMsgBox("매핑된 세부요소는 삭제할수 없습니다.", null, null);
			return false;
		}

		J("#subCalIds").val(subCalIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/measure/subCal/subCalProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){

		J("#yearNm").val(J("#findYear :selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/measure/subCal/subCalListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

