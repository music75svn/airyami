});


    /******************************************
     * 필수입력 체크
     ******************************************/
    function saveChk() {

    	var ids	= J("#list").jqGrid('getDataIDs');
/*
		for (var i = 0; i < ids.length; i++) {
			if (J("select[name='evalGrpIds']").eq(i).val() == "-1") {
