    function calcScore() {
   	/*
        var leadershipRate= $!CS_CODE.getCodeEtc1('193', '01',$!{searchMap.txt2html('findYear')});
        var effRate= $!CS_CODE.getCodeEtc1('193', '02',$!{searchMap.txt2html('findYear')});
        var bscRate= $!CS_CODE.getCodeEtc1('193', '03',$!{searchMap.txt2html('findYear')});
        var govRate= $!CS_CODE.getCodeEtc1('193', '04',$!{searchMap.txt2html('findYear')});
  	*/
        var leadershipRate = 0;
        var effRate = 0;
        var bscRate = 0;
        var govRate = 0;
        var rate = 0;

        if ( J("input[name='leadershipRate']").val()!="") {
        	 leadershipRate=parseInt(J("input[name='leadershipRate']").val());
        }

        if ( J("input[name='effRate']").val()!="") {
        	 effRate=parseInt(J("input[name='effRate']").val());
        }

        if ( J("input[name='bscRate']").val()!="") {
        	 bscRate=parseInt(J("input[name='bscRate']").val());
        }

        if ( J("input[name='govRate']").val()!="") {
        	 govRate=parseInt(J("input[name='govRate']").val());
        }


  	   var ids = J("#list").jqGrid('getDataIDs');

	   for (var i = 0; i < ids.length; i++) {
			var row = J("#list").getRowData(ids[i]);

			 bscScore = 0;
	         govScore = 0;
	         leadershipScore = 0;
	         effScore = 0;
	         score = 0;

			if (row.RETIRE_YN == "Y") { //퇴임이사유무
				rate = effRate + bscRate + govRate;
			} else {
				rate = effRate + bscRate + govRate + leadershipRate;
			}//if

			if (row.BSC_SCORE != "") {
		    	##bscScore = parseFloat(row.BSC_SCORE) * bscRate / 100;
				bscScore = parseFloat(row.BSC_SCORE);
		    }

		    if (row.GOV_SCORE != "") {
		    	##govScore = parseFloat(row.GOV_SCORE) * govRate / 100;
				govScore = parseFloat(row.GOV_SCORE);
		    }

		    if (row.RETIRE_YN != "Y" && row.LEADERSHIP_SCORE != "") {
		 	   ##leadershipScore = parseFloat(row.LEADERSHIP_SCORE) * leadershipRate / 100;
			   leadershipScore = parseFloat(row.LEADERSHIP_SCORE);
		 	}

		 	if (J("input[name='effScore']").eq(i).val() != "") {
		 	  ##effScore = parseFloat(J("input[name='effScore']").eq(i).val()) * effRate / 100;
			  effScore = parseFloat(J("input[name='effScore']").eq(i).val());
		 	}

		    score = bscScore + govScore + leadershipScore + effScore;
		    score = score / rate * 100
		    score = score.toFixed(3);

		    leadershipScore = leadershipScore.toFixed(3);

		   	J("#list").jqGrid('setCell', ids[i], "FINAL_SCORE", score);
			row["FINAL_SCORE"] = score;

			if(row.RETIRE_YN == "N"){
		   		J("#list").jqGrid('setCell', ids[i], "LEADERSHIP_SCORE", leadershipScore);
				row["LEADERSHIP_SCORE"] = leadershipScore;
		   	}


	    }//for

	 }


     /******************************************
	 * 순위 계산
	 ******************************************/
	function rank() {
		var ids = J("#list").jqGrid('getDataIDs');
		var scores = new Array(ids.length);
		var ranks = new Array(ids.length);
		var grades = new Array(ids.length);

		for (var i = 0; i < ids.length; i++) {
			var row = J("#list").getRowData(ids[i]);
			var score = 0;

			if (row.FINAL_SCORE != "") {
				score = parseFloat(row.FINAL_SCORE);
			}	else{
				score = 0;
			}


			//score = score.toFixed(2);
			scores[i] = score;
		}//for

	  // 순위를 계산
		for (var i = 0; i < scores.length; i++) {
			var ranking = 0;

		//	if (scores[i] != "" && scores[i] != "0") {
    			for (var j = 0; j < scores.length; j++) {
    				if (i != j) {
    					if (scores[j] == "") {
							if (ranking == 0)
						 		ranking = 1;
						} else {
							if (parseFloat(scores[i]) < parseFloat(scores[j])) {
								if (ranking == 0)
									ranking = 2;
								else
									ranking++;
							} else if (parseFloat(scores[i]) > parseFloat(scores[j])) {
								if (ranking == 0)
									ranking = 1;
							} else {
								if (ranking == 0)
									ranking = 1;
							}//if
						}//if
    				}//for

    		//	}//if
			}//for

			ranks[i] = ranking;
		}

		for (var i = 0; i < ids.length; i++) {
			var row = J("#list").getRowData(ids[i]);
			var ranking = " ";

			if (ranks[i] >= 0){
				ranking = ranks[i];
			}//if

			J("#list").jqGrid('setCell', ids[i], "FINAL_RANKING", ranking);
			row.FINAL_RANKING = ranking;


		}//for
	}


	  /******************************************
	 * 등급설정
	 ******************************************/
    function gradeSet() {

        var grade="";
        var aCnt= parseInt($!{CS_HTML.txt2html($gradeCntlist.A_CNT)});
        var bCnt= parseInt($!{CS_HTML.txt2html($gradeCntlist.B_CNT)});
        var cCnt= parseInt($!{CS_HTML.txt2html($gradeCntlist.C_CNT)});

  	    var ids = J("#list").jqGrid('getDataIDs');

	   for (var i = 0; i < ids.length; i++) {
			var row = J("#list").getRowData(ids[i]);

			var ranking = parseInt( row.FINAL_RANKING);
			grade = "";
			if (ranking <= aCnt) {
				grade = 'A'
			} else if (ranking<=(aCnt+bCnt)) {
			   	grade = 'B'
			} else if (ranking<=(aCnt+bCnt+cCnt)) {
			   	grade = 'C'
			}

		   J("#list").jqGrid('setCell', ids[i], "FINAL_GRADE", grade);
			row.FINAL_GRADE = grade;
	    }//for
	}


