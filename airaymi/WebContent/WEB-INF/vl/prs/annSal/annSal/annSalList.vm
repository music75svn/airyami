	 		return false;
	 	}else {
			J.showConfirmBox("확정하시겠습니까?", "Confirm"); //Confirm() 콜백함수 호출
	 	}

	}

	/******************************************
	 * 확정
	 ******************************************/
	function Confirm() {

		J("#mode").val("CONF");
		J("#year").val(J("#findYear").val());
		J("#confYn").val('Y');
		J("#formList").attr("action", "$!{context_path}/prs/annSal/annSal/annSalProcess.vw?type=template").submit();
	}

	/******************************************
	 * 확정취소처리
	 ******************************************/
	function btnCancle(){

		J.showConfirmBox("확정을 취소하면 기존 데이터가 사라집니다. 취소 하시겠습니까?", "CancelDo"); //CancelDo() 콜백함수 호출

	}

	/******************************************
	 * 확정취소처리
	 ******************************************/
	function CancelDo() {
		J("#mode").val("CONF");
		J("#year").val(J("#findYear").val());
		J("#confYn").val('N');
		J("#formList").attr("action", "$!{context_path}/prs/annSal/annSal/annSalProcess.vw?type=template").submit();
	}

    /*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr1Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.EMPN_INDEX;
		var rowSpan = rowObject.EMPN_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr2Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.DEPTCD_INDEX;
		var rowSpan = rowObject.DEPTCD_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr3Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.CAST_INDEX;
		var rowSpan = rowObject.CAST_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

    /******************************************
	 * jqGrid 수정페이지 링크
