#set($curr_url = $!{context_path} + "/bsc/matrix/matrixKpi/matrixKpiList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/matrix/matrixKpi/matrixKpiList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가단 코드', '평가단', 'POOL구분', '평가대상지표 POOL', '지표 POOL ID','선정여부','평가제출자수'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'EVAL_USER_GRP_ID'     ,index:'EVAL_USER_GRP_ID'     ,width:150   ,align:'center' },
                            {name:'EVAL_USER_GRP_NM'     ,index:'EVAL_USER_GRP_NM'     ,width:100   ,align:'center' },
                            {name:'POOL_GUBUN_NM'        ,index:'POOL_GUBUN_NM'        ,width:100   ,align:'center' },
                            {name:'METRIC_GRP_NM'        ,index:'METRIC_GRP_NM'        ,width:250   ,align:'left'   },
							{name:'METRIC_GRP_ID'        ,index:'METRIC_GRP_ID'        ,width:100   ,align:'left'   },
							{name:'CHOICE_YN'            ,index:'CHOICE_YN'            ,width:100   ,align:'left'   },
							{name:'SUBMIT_CNT'           ,index:'SUBMIT_CNT'           ,width:100   ,align:'left'   }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.SUBMIT_CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
									if(rowdata.CHOICE_YN == 'Y') { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}

    							});
                           },
			caption:"평가단별지표"
		}).jqGrid('hideCol',"SUBMIT_CNT").jqGrid('hideCol',"CHOICE_YN").jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_USER_GRP_ID").jqGrid('hideCol',"METRIC_GRP_ID").jqGrid('hideCol',"POOL_GUBUN_NM").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
		});
	});

	/******************************************
	 * 년도별 평가단 조회
	 ******************************************/
	function chgEvalGrp(){

		J.ajax({
        	url      : "$!{context_path}/bsc/matrix/matrixKpi/getUserGroupList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalUserGrpId").empty();
				J('<option/>').attr('value','').text("전체").appendTo('#findEvalUserGrpId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserGrpId');
				})
			}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(){
		if(J("#findEvalUserGrpId").val()==""){
			J.showMsgBox("평가단을 선택하십시요", null, null);
			return;
		}

		var id 	= J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata 	= "";
		var insertChk 	= true;

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);

			if(rowdata.SUBMIT_CNT > 0){
				J.showMsgBox("평가제출을 모두 취소 후 등록할 수 있습니다.", null, null);
				insertChk  = false;
				return false;
			}
		}

		if(insertChk){
			J("#year").val(J("#findYear").val());
			J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
			J("#poolGubun").val(J("#findPoolGubun").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixKpi/matrixKpiModify.vw?type=template").submit();
		}
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalUserGrpId").val(ret.EVAL_USER_GRP_ID);
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixKpi/matrixKpiModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			var id 	= J("#list").getGridParam('selarrrow');
    		var ids = J("#list").jqGrid('getDataIDs');
    		var rowdata 	= "";
			var deleteChk 	= true;

    		for (var i = 0; i < ids.length; i++) {
    			J.each(id, function (index, value) {
    				if (value == ids[i]) {
    					rowdata = J("#list").getRowData(ids[i]);
    					if(rowdata.CHOICE_YN == "Y"){
    						J.showMsgBox("선정된지표는 삭제할 수 없습니다.", null, null);
    						deleteChk  = false;
							return false;
						}

						if(rowdata.SUBMIT_CNT > 0){
    						J.showMsgBox("평가제출을 모두 취소 후 삭제할 수 있습니다.", null, null);
    						deleteChk  = false;
							return false;
						}
					}
    			});
    		}
			if(deleteChk){
				J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
			}
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalUserGrpIds = "";
		var metricGrpIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';
					metricGrpIds += rowdata.METRIC_GRP_ID + '|';
				}
			});
		}
		J("#evalUserGrpIds").val(evalUserGrpIds);
		J("#metricGrpIds").val(metricGrpIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixKpi/matrixKpiProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());
		J("#evalUserGrpNm").val(J("#findEvalUserGrpId :selected").text());
		J("#poolGubunNm").val(J("#findPoolGubun :selected").text());

		J("#formList").attr("action", "$!{context_path}/bsc/matrix/matrixKpi/matrixKpiListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

