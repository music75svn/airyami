<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">
<head >
	#parse("/WEB-INF/vl/common/template/head.vm")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#explain").checkbyte({
			indicator:J("#indicator"),
			limit:2000
		});
		J("#explain").trigger("keyup");
	
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/mon/systemWordDic/systemWordDicList.vw").submit();
		});
        
				
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 정렬순서 숫자만 입력받기
		 ******************************************/
		J("#sort_order").numeric();
		J("#sort_order").css("ime-mode", "disabled"); //한글사용 비활성화
	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		
		if(!J.checkLength("word", "용어", 1, 100)) {
			return;
		}
        
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/mon/systemWordDic/systemWordDicProcess.vw").submit();
	}

//]]>
</script>    
</head>
<body>
<form id="form1" name="form1" method="post" action="$!{context_path}/bsc/mon/systemWordDic/systemWordDicProcess.vw">
    <input type="hidden" id="mode"		name="mode"		value="$!{searchMap.txt2html("mode")}" />
    $!{searchMap.makeHiddenFind()}
	
    <div style="width:800px;">
    	<div style="padding:10px 10px">
    		<div class="tableTop">
    			#parse("/WEB-INF/vl/common/template/tabs.vm")
    			<div class="clear"></div>
    		</div>
    		<div class="blockDetail">
    			<table summary="용어사전 등록">
					<caption class="none">용어사전 등록</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
						#if($!{searchMap.txt2html("mode")} == "MOD")
							<input type="hidden" id="seq" name="seq" class="inputbox w100" value="$!{CS_HTML.txt2html($detail.SEQ)}" maxlength="7" readonly="readonly" />
						#else
							<input type="hidden" id="seq" name="seq" class="inputbox w100" maxlength="7" />
						#end
    					<tr>
    						<th scope="row"><label for="word">용어</label></th>
    						<td>
    							#if($!{searchMap.txt2html("mode")} == "MOD")
									<input type="text" id="word" name="word" class="inputbox w500" value="$!{CS_HTML.txt2html($detail.WORD)}" maxlength="100" />
								#else
									<input type="text" id="word" name="word" class="inputbox w500" maxlength="100" />
								#end
    						</td>
    					</tr>
    					<tr>
    						<th scope="row"><label for="explain">용어설명</label></th>
    						<td>
    							<textarea id="explain" name="explain" class="tabletext" title="용어설명" cols="" rows="10">$!{CS_HTML.txt2html($detail.EXPLAIN)}</textarea>
								<span id="indicator">0</span>/2000byte
    						</td>
    					</tr>
						<tr>
    						<th scope="row"><label for="sort_order">정렬순서</label></th>
    						<td>
    							<input type="text" id="sort_order" name="sort_order" class="inputbox w100" maxlength="20" value="$!{CS_HTML.txt2html($detail.SORT_ORDER)}"/>
    						</td>
    					</tr>
    				</tbody>
    			</table>
    		</div>
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnBack"   value="돌아가기" /></li>
					#if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60"))
    				<li><input type="submit" id="btnInsert" value="저장"    /></li>
					#end
    			</ul>
    		</div>	
    	</div>
    	<div class="clear"></div>
    </div>
	<div id="dialog" title="확인"><p>&nbsp;</p></div>    <!-- 다이어로그 -->
</form>
</body>
</html>