    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * jqGrid 가중치
     ******************************************/
    function linkWeightUpdate(cellvalue, options, rowObject) { 
    
    	var sumWeight = 0;
        
        sumWeight += Number(cellvalue); 
        
		if( sumWeight != 100 ){
			J("#alertDis").html("※  가중치 합계가 100이 아닙니다. 가중치를재조정 해주세요.").attr("class","txt_red");
    	}else{
    		J("#alertDis").html("");
    	}
        
        return sumWeight;
    }
   
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
		var savCk = true; //validation Chk
