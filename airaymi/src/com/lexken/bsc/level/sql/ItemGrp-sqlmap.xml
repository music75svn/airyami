<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.level.itemGrp">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_LEVEL_ITEM_GRP
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 평가항목 그룹 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_ITEM_GRP
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR
		     , ITEM_GRP_ID
		     , ITEM_GRP_NM
		     , SORT_ORDER
		     , (SELECT COUNT(1) FROM BSC_LEVEL_ITEM WHERE A.YEAR = YEAR AND A.ITEM_GRP_ID = ITEM_GRP_ID) CNT
		  FROM BSC_LEVEL_ITEM_GRP A
         WHERE YEAR = #findYear#
           AND DELETE_DT IS NULL
         ORDER BY SORT_ORDER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가항목 그룹 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_ITEM_GRP
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , ITEM_GRP_ID           
			 , ITEM_GRP_NM           
			 , SORT_ORDER            
		  FROM BSC_LEVEL_ITEM_GRP 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND ITEM_GRP_ID = #itemGrpId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가항목 그룹 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_LEVEL_ITEM_GRP
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT F_PGM_SERI('BSC_LEVEL_ITEM_GRP',#year#,'','','','') SEQ FROM DUAL
		</selectKey>
		INSERT INTO BSC_LEVEL_ITEM_GRP ( 
			   YEAR
			 , ITEM_GRP_ID
			 , ITEM_GRP_NM
			 , SORT_ORDER
			 , CREATE_DT
			 ) VALUES ( 
			   #year#
			 , #SEQ#
			 , #itemGrpNm#
			 , #sortOrder#
			 , SYSDATE
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 평가항목 그룹 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_LEVEL_ITEM_GRP
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_LEVEL_ITEM_GRP 
		   SET ITEM_GRP_NM            = #itemGrpNm# 
			 , SORT_ORDER             = #sortOrder# 
			 , MODIFY_DT              = SYSDATE 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND ITEM_GRP_ID = #itemGrpId#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 평가항목 그룹 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_LEVEL_ITEM_GRP
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		UPDATE BSC_LEVEL_ITEM_GRP 
		   SET DELETE_DT       = SYSDATE 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND ITEM_GRP_ID = #itemGrpId#
	</update>
	
	
</sqlMap>


