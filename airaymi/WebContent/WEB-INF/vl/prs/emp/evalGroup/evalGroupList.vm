*/
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출

    }

    /******************************************
	 * 일괄 수정
	 ******************************************/
	function saveDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var deptCds = "";

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			deptCds += rowdata.DEPT_CD + '|';
		}

		J("#deptCds").val(deptCds);
		J("#mode").val("ADD");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/emp/evalGroup/evalGroupProcess.vw?type=template").submit();
	}

     /******************************************
     * jqGrid 평가군
     ******************************************/
    function goEvalGrpId(cellvalue, options, rowObject) {
		var str = J("#jqGridTemplate").clone();
		var retStr = "";

		// IE 8버전에서는 html()을 하면 value=""에 따옴표가 없이 넘어옴. 그래서 따옴표 없이 selected가 붙도록 replace함.
		retStr = str.html().replace(cellvalue, cellvalue + ' selected');
		// IE 9버전과 다른 브라우저에서는 html()을 하면 value=""에 따옴표가 그래도 넘어옴. 그래서 앞에서 replace하면 value="OO selected"가 되므로 value="OO" selected가 되도록 replace함.
		retStr = retStr.replace('\"' + cellvalue + ' selected\"', '\"' + cellvalue + '\" selected');

		return retStr;
	}

    /******************************************
     * 부서명 선택 취소
     ******************************************/
    function cancleDeptNm(index) {
        J("input[name=deptCds]").eq(index-1).val("");
        J("input[name=deptNms]").eq(index-1).val("");
    }

    /******************************************
     * 부서명 선택 팝업
     ******************************************/
    function popDeptNm(index) {
        J("#index").val(index);
        var dept = J("input[name=deptCds]").eq(index-1).val();
        J("#anchor").attr("href","$!{context_path}/bsc/module/commModule/popScDeptTree1.vw?findYear=$!{searchMap.txt2html("findYear")}&amp;findSearchCodeId=" + dept);
