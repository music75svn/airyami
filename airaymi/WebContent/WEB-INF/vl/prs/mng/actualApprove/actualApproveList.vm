    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/mng/actualApprove/actualApproveList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['평가년도', '설정방향', '설정방향', '성과목표', '성과목표', '성과지표', '연간목표', '단위', '가중치', '난이도', '분기목표($!CS_CODE.getCodeName("221", $!{searchMap.txt2html("findMon")}, $!{searchMap.txt2html("findYear")}))','실적(누계)', '달성도(%)', '평가등급' ,'상태', '환산<br/>점수'],
            colModel     :[
                            {name:'YEAR'                ,index:'YEAR'               ,width:150   ,align:'center' }, 
                            {name:'DIRECTION_CD'        ,index:'DIRECTION_CD'       ,width:100   ,align:'left'   }, 
                            {name:'DIRECTION_NM'        ,index:'DIRECTION_NM'       ,width:120   ,align:'left'   }, 
                            {name:'TARGET_ID'           ,index:'TARGET_ID'          ,width:150   ,align:'center' }, 
                            {name:'TARGET_NM'           ,index:'TARGET_NM'          ,width:250   ,align:'left'   }, 
                            {name:'METRIC_NM'           ,index:'METRIC_NM'          ,width:150   ,align:'left'   }, 
                            {name:'TARGET_VALUE'        ,index:'TARGET_VALUE'       ,width:60    ,align:'center' }, 
                            {name:'UNIT_NM'             ,index:'UNIT_NM'            ,width:50    ,align:'center' },
                            {name:'WEIGHT'              ,index:'WEIGHT'             ,width:50    ,align:'center' },
                            {name:'DFFLY_NM'            ,index:'DFFLY_NM'           ,width:50    ,align:'center' },
                            {name:'Q_TARGET_VALUE'      ,index:'Q_TARGET_VALUE'     ,width:120   ,align:'center' }, 
                            {name:'VALUE'               ,index:'VALUE'              ,width:90    ,align:'right'  }, 
                            {name:'SCORE'               ,index:'SCORE'              ,width:90    ,align:'right'  }, 
                            {name:'EVAL_GRADE'          ,index:'EVAL_GRADE'         ,width:70    ,align:'center' }, 
                            {name:'ACT_STATUS_ID'       ,index:'ACT_STATUS_ID'      ,width:50    ,align:'center' },
                            {name:'EVAL_SCORE'          ,index:'EVAL_SCORE'         ,width:50    ,align:'center' }
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : false,
            cellEdit     : true,
            gridview     : true,
            footerrow	 : true,
            userDataOnFooter : true,
            loadComplete : function() {

                var grid = J("#list");
				grid.jqGrid('footerData', 'set', {TARGET_VALUE:"총계"});
				calculateSumGridColumn(grid,"WEIGHT");
				calculateSumGridColumn(grid,"EVAL_SCORE");
            },
            caption:"성과계획서 관리"
        });
        jQuery("#list").jqGrid('hideCol',"YEAR").jqGrid('hideCol',"DIRECTION_CD").jqGrid('hideCol',"TARGET_ID").jqGrid('hideCol',"ACT_STATUS_ID");
        jQuery("#list").setGridWidth($!{jqGrid_width});
		
		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true,
          groupHeaders:[
        	{startColumnName: 'Q_TARGET_VALUE', numberOfColumns: 5, titleText: '<em>추진실적</em>'}
          ]
        });
        
        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });
        
        /******************************************
         * FANCYBOX
         ******************************************/
        J("#anchor").fancybox();      //상세팝업
                
        /******************************************
         * 취소버튼 (돌아가기)
         ******************************************/
        J("#btnBack").click(function() {
            J("#formFind").attr("action", "$!{context_path}/prs/mng/actualApprove/evalMngList.vw?type=template").submit();
        });
		
        /******************************************
         * 이중 클릭 방지
         ******************************************/
        J("form").submit(function(){
            J("#btnBack").unbind();
        });
                        
        /******************************************
         * 반려 클릭 이벤트
         ******************************************/
        J("#btnReturn").click(function() {
            
            popReturnReason();
            return false;
        });
        
        /******************************************
         * 확인
         ******************************************/
        J("#btnApprove").click(function(e) {
            e.preventDefault();
            goApprove("03");
        });
        
        /******************************************
         * 최종확인
         ******************************************/
        J("#btnFinalApprove").click(function(e) {
            e.preventDefault();
            goApprove("04");
        });
        
		 /******************************************
         * 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            excelDownload();
            return false;
        });
		
    });
    

    /******************************************
     * 상태 및 기간 확인
     ******************************************/
    function isSubmit() {
        var isSubmit = true;

        #if("$actInTerm.ACTUAL_YN" == "Y")
            if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" != "04"){
                J.showMsgBox("[" + $!{CS_HTML.txt2html($membersTable.KOR_NM)} + "] 성과계획서가 최종확인 되지 않았습니다.<br/>최종확인 후 진행하여 주시기 바랍니다.", null, null);
                isSubmit = false;
            }
        #end
            
        return isSubmit;
    }
    
    /******************************************
     * 반려사유 선택
     ******************************************/
    function popReturnReason(){
        var actStatusId = "$!{CS_HTML.txt2html($membersTable.ACT_STATUS_ID)}";
       
		if(!isSubmit()) return false;
                                
        if("$!{findGubun}" == "01"){
            if(actStatusId != "02"){
                J.showMsgBox("[$!{CS_HTML.txt2html($membersTable.KOR_NM)}] 확인요청 상태가 아닙니다.<br/> 반려 할 수 없습니다.", null, null);
                return false;
            }
        } else if("$!{findGubun}" == "02"){
            if(actStatusId != "03" && actStatusId != "04"){
                J.showMsgBox("[$!{CS_HTML.txt2html($membersTable.KOR_NM)}] 주관부서 확인요청 상태가 아닙니다.<br/> 반려 할 수 없습니다.", null, null);
                return false;
            }
        }
        J("#evalMembEmpns").val(J("#evalMembEmpn").val());
        J("#evalMembEmpnSeqs").val(J("#evalMembEmpnSeq").val());
        J("#anchor").attr("href","$!{context_path}/prs/mng/actualApprove/popReturnReason.vw?findYear=$!{searchMap.txt2html("findYear")}&amp;evalMembEmpn="+J("#evalMembEmpn").val()+"&amp;evalMembEmpnSeq="+J("#evalMembEmpnSeq").val());
        J("#anchor").click();
        return false;
    }
    
    /******************************************
     * 반려사유 처리
     ******************************************/
    function returnDo(){
         J("#mode").val("RETURN");
         J("#formList").attr("action", "$!{searchMap.txt2html("context")}/prs/mng/actualApprove/actualApproveProcess.vw?type=template").submit();
         return false;
    }
     
    /******************************************
     * 확인요청 
     ******************************************/
    function goApprove(goActStatusId) {
        
        if(!isSubmit()) return false;
        
        var actStatusId = "$!{CS_HTML.txt2html($membersTable.ACT_STATUS_ID)}";
                                
        if(goActStatusId == "03"){
            if(actStatusId != "02"){
                J.showMsgBox("[$!{CS_HTML.txt2html($membersTable.KOR_NM)}] 확인요청 상태가 아닙니다.<br/> 확인 할 수 없습니다.", null, null);
                return false;
            }
        } else if(goActStatusId == "04"){
            if(actStatusId != "03"){
                J.showMsgBox("[$!{CS_HTML.txt2html($membersTable.KOR_NM)}] 주관부서 확인요청 상태가 아닙니다.<br/> 확인 할 수 없습니다.", null, null);
                return false;
            }
        }
        
        J("#evalMembEmpns").val(J("#evalMembEmpn").val());
        J("#evalMembEmpnSeqs").val(J("#evalMembEmpnSeq").val());
        J("#actStatusId").val(goActStatusId);
        J.showConfirmBox("확인 하시겠습니까?", "approveDo"); //deleteDo() 콜백함수 호출
    
        return false;
    }
    
    /******************************************
     * 확인요청
     ******************************************/
    function approveDo() {
        J("#mode").val("APC");
        J("#formList").attr("action", "$!{context_path}/prs/mng/actualApprove/actualApproveProcess.vw?type=template").submit();
        
        return false;
    }
	
	 /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
		J("#yearNm").val("$!{CS_HTML.txt2html($membersTable.YEAR)}년");
		J("#evalMembEmpnExcel").val(J("#evalMembEmpn").val());
		J("#evalMembEmpnSeqExcel").val(J("#evalMembEmpnSeq").val());
		J("#korNm").val("$!{CS_HTML.txt2html($membersTable.KOR_NM)}");
		J("#deptKorNm").val("$!{CS_HTML.txt2html($membersTable.DEPT_KOR_NM)}");
		J("#posTcNm").val("$!{CS_HTML.txt2html($membersTable.POS_TC_NM)}");
		J("#castTcNm").val("$!{CS_HTML.txt2html($membersTable.CAST_TC_NM)}");
		J("#workDate").val("$!{CS_HTML.txt2html($membersTable.FROM_DT,100)} ~ $!{CS_HTML.txt2html($membersTable.TO_DT,100)}");
		J("#approveUserNm").val("$!{CS_HTML.txt2html($membersTable.APPROVE_USER_NM)}");
		J("#planStatusNm").val("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_NM)}");
		J("#finalApproveDt").val("$!{CS_HTML.txt2html($membersTable.FINAL_APPROVE_DT)}");
		J("#actualStatusNmExcel").val(J("#actualStatusNm").text());
        J("#formList").attr("action", "$!{context_path}/prs/mng/actualApprove/actualApproveListExcel.vw?type=excel").submit();
        return false;
    }
    

//]]>
</script>

