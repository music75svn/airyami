#set($curr_url = $!{context_path} + "/bsc/level/itemGrp/itemGrpList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/level/itemGrp/itemGrpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '평가항목그룹 ID', '평가항목그룹', '평가항목수', '정렬순서'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'ITEM_GRP_ID'          ,index:'ITEM_GRP_ID'          ,width:80    ,align:'center' }, 
                            {name:'ITEM_GRP_NM'          ,index:'ITEM_GRP_NM'          ,width:200   ,align:'center' ,formatter:linkUpdate}, 
							{name:'CNT'                  ,index:'CNT'                  ,width:120   ,align:'center' ,formatter:linkCodeList},
							{name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:120   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
    								if(J(rowdata.CNT).text() != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"평가항목 그룹"
		}).jqGrid('hideCol',"YEAR").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
    		if('$!{evalCloseYn}' == 'Y'){
    			J.showMsgBox("평가마감 취소 평가제출 모두 취소 후 등록할 수 있습니다.", null, null); 
    			return;
    		}
    		
    		if('$!{evalSubmitYn}' == 'Y'){
    			J.showMsgBox("평가제출을 모두 취소 후 수정할 수 있습니다.", null, null); 
    			return;
    		}
		
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/level/itemGrp/itemGrpModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 평가항목 리스트 링크
	 ******************************************/
	function linkCodeList(cellvalue, options, rowObject) { 
		return '<a href=javascript:goCodeList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 평가항목 리스트 조회
	 ******************************************/
	function goCodeList(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#year").val(J("#findYear").val());
		J("#itemGrpId").val(ret.ITEM_GRP_ID);
		J("#formList").attr("action", "$!{context_path}/bsc/level/item/itemList.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		if('$!{evalCloseYn}' == 'Y'){
			J.showMsgBox("평가마감 취소 평가제출 모두 취소 후 수정할 수 있습니다.", null, null); 
			return;
		}
		
		if('$!{evalSubmitYn}' == 'Y'){
			J.showMsgBox("평가제출을 모두 취소 후 수정할 수 있습니다.", null, null); 
			return;
		}
		
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#itemGrpId").val(ret.ITEM_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/level/itemGrp/itemGrpModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if('$!{evalCloseYn}' == 'Y'){
			J.showMsgBox("평가마감 취소 평가제출 모두 취소 후 삭제할 수 있습니다.", null, null); 
			return;
		}
		
		if('$!{evalSubmitYn}' == 'Y'){
			J.showMsgBox("평가제출을 모두 취소 후 삭제할 수 있습니다.", null, null); 
			return;
		}
			
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemGrpIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					itemGrpIds += rowdata.ITEM_GRP_ID + '|';
				}
			});
		}
        
		J("#itemGrpIds").val(itemGrpIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/level/itemGrp/itemGrpProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
	
		J("#yearNm").val(J("#findYear :selected").text());
	
		J("#formList").attr("action", "$!{context_path}/bsc/level/itemGrp/itemGrpListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

