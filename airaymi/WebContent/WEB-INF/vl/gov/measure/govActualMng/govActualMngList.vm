	function saveChk() {

		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {

		var month = "";
		var months = "";
		var govMetricId = "";
		var govMetricIds = "";
		var govMetricCalTypeColId = "";
		var govMetricCalTypeColIds = "";
		var govMetricCalTypeColActual = "";
		var govMetricCalTypeColActuals = "";

		J("#formList input[name=calTypeColActuals]").each(function(){

		 	 var tmpInputId = $(this).attr("id");
			 month = tmpInputId.substring(1,3);
			 months += month + '|';
			 govMetricId = tmpInputId.substring(4,11);
			 govMetricIds += govMetricId + '|';
			 govMetricCalTypeColId = tmpInputId.substring(12,14);
			 govMetricCalTypeColIds += govMetricCalTypeColId + '|';
			 govMetricCalTypeColActual = $(this).val()==""?"none":$(this).val();
			 govMetricCalTypeColActuals += govMetricCalTypeColActual + '|';

		});

		J("#year").val(J("#findYear").val());
		J("#months").val( months );
		J("#govMetricIds").val( govMetricIds );
		J("#govMetricCalTypeColIds").val( govMetricCalTypeColIds );
		J("#govMetricCalTypeColActuals").val( govMetricCalTypeColActuals );
		J("#mode").val("ADD");

		J("#formList").attr("action", "$!{context_path}/gov/measure/govActualMng/govActualMngProcess.vw?type=template").submit();
	}

	/******************************************
	 * jqGrid 팝업 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goGovMetricPop(' + options.rowId + ')>' + cellvalue + '<//a>';
	}


	/******************************************
	 * jqGrid 실적 단어변경
	 ******************************************/
	function linkActualConvert(cellvalue, options, rowObject) {


		var retVal = cellvalue;
		var isInput = rowObject.IS_INPUT_YN;

		if( "ACTUAL" == cellvalue ){
			retVal = "실적";
		}else if( "ACTUAL" != cellvalue && "NONE" == isInput ){
			retVal = '<a href=javascript:goGovMetricCalTypeColPop(' + options.rowId + ')>' + cellvalue + '<//a>';
		}
		return retVal;
	}

	/*****************************************
	 * 지표별  Rowspan 설정
	 ******************************************/
	function attrSettinGovMetric(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.GM_INDEX;
		var rowSpan = rowObject.GM_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		return result;
	}

	/******************************************
	 * 산식항목  input 설정
	 ******************************************/
	function setScoreInput(cellvalue, options, rowObject){
		var retVal = cellvalue;
		var isInput = rowObject.IS_INPUT_YN;

		var inputYear = rowObject.YEAR;
		var inputGovMetricId = rowObject.GOV_METRIC_ID;
		var inputCalTypeColId = rowObject.ACT_CAL_TYPE_COL_ID;
		if( "INPUT" == isInput  ){
			var tmpMonth = options.colModel.name.substring(21,23);
			retVal = "<input type='text' id=' " + tmpMonth  + "|" + inputGovMetricId + "|" + inputCalTypeColId + "' name='calTypeColActuals' class='inputbox w60 textRight' value='" + cellvalue + "' maxlength='15'/>";
		}
		return retVal;
	}



	/******************************************
	 * 엑셀다운로드
