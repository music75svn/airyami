			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'MON'                  ,index:'MON'                  ,width:150   ,align:'center' }, 
                            {name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:150   ,align:'center' }, 
                            {name:'PLAN_NM_1MON'         ,index:'PLAN_NM_1MON'         ,width:150   ,align:'center' }, 
                            {name:'PLAN_CONTENTS_1MON'   ,index:'PLAN_CONTENTS_1MON'   ,width:150   ,align:'center' }, 
                            {name:'ACT_NM'               ,index:'ACT_NM'               ,width:150   ,align:'center' }, 
                            {name:'ACT_CONTENTS'         ,index:'ACT_CONTENTS'         ,width:150   ,align:'center' }, 
                            {name:'ACT_NM_Y'             ,index:'ACT_NM_Y'             ,width:150   ,align:'center' }, 
                            {name:'NEXT_PLAN_NM'         ,index:'NEXT_PLAN_NM'         ,width:150   ,align:'center' }, 
                            {name:'NEXT_PLAN_CONTENTS'   ,index:'NEXT_PLAN_CONTENTS'   ,width:150   ,align:'center' }, 
                            {name:'PLAN_NM_Y'            ,index:'PLAN_NM_Y'            ,width:150   ,align:'center' }, 
                            {name:'SELF_EVAL'            ,index:'SELF_EVAL'            ,width:150   ,align:'center' }, 
                            {name:'FINAL_EVAL'           ,index:'FINAL_EVAL'           ,width:150   ,align:'center' }, 
                            {name:'EVAL_REASON'          ,index:'EVAL_REASON'          ,width:150   ,align:'center' }, 
                            {name:'STATUS_ID'            ,index:'STATUS_ID'            ,width:150   ,align:'center' }, 
                            {name:'CREATE_DT'            ,index:'CREATE_DT'            ,width:150   ,align:'center' }, 
                            {name:'CAUSE_DESC'           ,index:'CAUSE_DESC'           ,width:150   ,align:'center' }, 
                            {name:'CATCH_UP'             ,index:'CATCH_UP'             ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"KPI 실적상세화면"
		});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
				
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
    	 * 돌아가기버튼 클릭 이벤트
    	 ******************************************/
    	J("#btnBack").click(function() {
    		J("#formFind").attr("action", "$!{context_path}/bsc/mon/metricDetail/metricDetailList.vw?type=template").submit();
    	});
	});

	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formFind").attr("action", "$!{context_path}/bsc/mon/metricActivityAct/metricActivityActListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

