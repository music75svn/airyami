	/******************************************
	 * grid column의 합계 계산
	 ******************************************/
	function calculateSumColumn(grid, column_id) {
        var totalAmount = 0;
        var columnIndex = getColumnIndexByName(grid, column_id);
		var rows = grid[0].rows;
		var rowsCount = rows.length;
		var row = "";
		var ob = [];

        for(var i = 0; i < rowsCount; i++) {
            row = rows[i];
            if (row.className.indexOf("jqgrow") != -1) {
                totalAmount += Number(getTextFromCell(row.cells[columnIndex]));
            }
        }

		totalAmount = Math.round(totalAmount*100)/100;

		return totalAmount;
    }

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		var str = cellvalue;

		if(J("#findMainMetricYn").val()!="N"){
    		if(rowObject.MAIN_METRIC_YN == "N") {
    			str = "<img src=\'$!{img_path}/tree.gif\' >" + str
    		}
		}

		return  str;
	}

	/******************************************
	 * jqGrid 가중치
	 ******************************************/
	function linkWeight(cellvalue, options, rowObject) {
		if(options.rowId==""){
			return cellvalue;
		}else{
			var str = '';
			str += '<input type="hidden" name="weightsChk" value="' + rowObject.MAIN_METRIC_YN + '" class="inputbox wp70"/>';
			str += '<input type="text" id="weights" name="weights" value="' + cellvalue + '" class="inputbox wp70" maxlength="5"  onBlur="showTotWeight();"/>';

			return str;
		}
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/system/govMetricWeight/govMetricWeightModify.vw?type=template").submit();
	}

	/******************************************
	 * 가중치 초기화
	 ******************************************/
	function goInit() {
		J.showConfirmBox("가중치를 초기화 하시겠습니까?", "initDo"); //deleteDo() 콜백함수 호출

	}

	/******************************************
	 * 가중치 초기화 실행
	 ******************************************/
	function initDo() {
		J("#formList input[name=weights]").each(function(){
  			$(this).val("0");
		});
		J("#list").jqGrid('footerData', 'set', {WEIGHT:"0"});
	}

	/******************************************
	 * 계산실행
	 ******************************************/
	function showTotWeight() {
		var total_weight=0;
		var temp_weight=0;
		var MAX_SCORE = 100;
		var mainMetricYn = J("#findMainMetricYn").val();

		J("#formList input[name=weights]").each(function(index, item){
			if( MAX_SCORE < $(this).val()){
				$(this).val("");
				$(this).focus();
				J.showMsgBox("가중치가 100을 넘을 수 없습니다.", null, null);
			}

			if(mainMetricYn!="N"){
    			if(J(":input[name=weightsChk]").eq(index).val()!="N"){
        			temp_weight += parseFloat($(this).val());
        			if( MAX_SCORE < temp_weight){
        				$(this).val("");
        				$(this).focus();
        				J.showMsgBox("가중치합이 100을 넘을 수 없습니다.", null, null);
        			}else{
        				total_weight = Math.round(temp_weight*100)/100;
        			}
    			}
			}else{
				temp_weight += parseFloat($(this).val());
    			if( MAX_SCORE < temp_weight){
    				$(this).val("");
    				$(this).focus();
    				J.showMsgBox("가중치합이 100을 넘을 수 없습니다.", null, null);
    			}else{
    				total_weight = Math.round(temp_weight*100)/100;


    			}
			}
		});
		if( MAX_SCORE >= total_weight){
			J("#list").jqGrid('footerData', 'set', {WEIGHT:total_weight});
		}
	}

	/******************************************
	 * 저장
	 ******************************************/
	function goInsert() {
		J.showConfirmBox("저장하시겠습니까?", "insertDo"); //insertDo() 콜백함수 호출
	}

	/******************************************
	 * 저장처리
	 ******************************************/
	function insertDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var govMetricIds = "";
		var weights = "";
		var weight  = "";

		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			govMetricIds += rowdata.GOV_METRIC_ID + '|';
		}

		J("#formList input[name=weights]").each(function(){
			weight = $(this).val()==""?0:$(this).val();
			weights += weight + '|';
		});

		J("#govMetricIds").val(govMetricIds);
		J("#govWeights").val(weights);
		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");

		J("#formList").attr("action", "$!{context_path}/gov/system/govMetricWeight/govMetricWeightProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear option:selected").text());
		J("#mainMetricYnNm").val(J("#findMainMetricYn option:selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/system/govMetricWeight/govMetricWeightListExcel.vw?type=excel").submit();
		return false;
	}

