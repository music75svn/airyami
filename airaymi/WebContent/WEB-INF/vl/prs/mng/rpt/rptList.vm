//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/mng/rpt/rptList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj) {return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도','사원번호', '순번', '이름', '평가군','부서명', '직급', '직위', '직무수행기간', '계약서상태ID','계약서상태', '제출여부','SEQ','최종확인일'],
			colModel     :[
							{name:'YEAR'					,index:'YEAR'					,width:100		,align:'center' ,sortable:false}, 
							{name:'EVAL_MEMB_EMPN'			,index:'EVAL_MEMB_EMPN'			,width:100		,align:'center' ,sortable:false}, 
							{name:'EVAL_MEMB_EMPN_SEQ'		,index:'EVAL_MEMB_EMPN_SEQ'		,width:150		,align:'center' ,sortable:false},
							{name:'KOR_NM'					,index:'KOR_NM'					,width:100		,align:'center' ,sortable:false ,formatter:linkUpdate},
							{name:'EVAL_GRP_ID'				,index:'EVAL_GRP_ID'			,width:100		,align:'center' ,sortable:false},
                            {name:'DEPT_FULL_NM'			,index:'DEPT_FULL_NM'			,width:250		,align:'left'   ,sortable:false}, 
                            {name:'CAST_TC_NM'				,index:'CAST_TC_NM'				,width:80		,align:'center' ,sortable:false}, 
							{name:'POS_TC_NM'				,index:'POS_TC_NM'				,width:150		,align:'left'	,sortable:false},
                            {name:'WORKDATE'				,index:'WORKDATE'				,width:200		,align:'center' ,sortable:false}, 
                            {name:'PLAN_STATUS_ID'			,index:'PLAN_STATUS_ID'			,width:150		,align:'center'	,sortable:false},
                            {name:'PLAN_STATUS_NM'			,index:'PLAN_STATUS_NM'			,width:150		,align:'center'	,sortable:false ,formatter:linkReturnReason}, 
                            {name:'SUBMIT_YN_NM'			,index:'SUBMIT_YN_NM'			,width:150		,align:'center'	,sortable:false}, 
                            {name:'SEQ'						,index:'SEQ'					,width:150		,align:'center'	,sortable:false}, 
                            {name:'APPROVE_DT'				,index:'APPROVE_DT'				,width:150		,align:'center'	,sortable:false} 
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : false,
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
								});
                           },
			caption:"자기성과기술서"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"SEQ").jqGrid('hideCol',"EVAL_GRP_ID").jqGrid('hideCol',"EVAL_MEMB_EMPN_SEQ").jqGrid('hideCol',"PLAN_STATUS_ID").jqGrid('hideCol',"APPROVE_DT").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		// 자기성과기술서 제출기간 보여주기
		if( "T" == "$!{rptSchedule.RPT_YN}" ){
			var startDt = "$!{CS_FORMAT.dateFormat( $!{rptSchedule.MNG_RPT_START_DT} )}";
			var endDt = "$!{CS_FORMAT.dateFormat( $!{rptSchedule.MNG_RPT_END_DT} )}";
			if( startDt.length > 0 && endDt.length > 0 ){
				J("#alertDis").html("※  자기성과기술서 제출기간 : " + startDt + " ~ " + endDt );
			}
		} else {
			J("#alertDis").html("※  자기성과기술서 제출기간이 아닙니다." ).attr("class","txt_red");
		}
		
		/******************************************
         * fancybox
         ******************************************/
        J("#anchor").fancybox();      //상세팝업
        
        /******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
	});
	
	/******************************************
     * jqGrid 반려사유 링크
     ******************************************/
    function linkReturnReason(cellvalue, options, rowObject) {
        var returnValue = cellvalue;
        if(rowObject.PLAN_STATUS_ID == "05")
            returnValue += '&nbsp;<img src="$!{img_path}/common/board/ic_search.gif" class="valign_middle" alt="반려사유선택" style="cursor:pointer;" onClick="goReturnReason(\''+rowObject.YEAR + '\', \''+ rowObject.EVAL_MEMB_EMPN+'\', \''+rowObject.EVAL_MEMB_EMPN_SEQ+'\')" />'
        return returnValue;
    }
    
    /******************************************
     * 반려사유 조회
     ******************************************/
    function goReturnReason(year, evalMembEmpn, evalMembEmpnSeq){
        J("#anchor").attr("href","$!{context_path}/prs/mng/planApprove/popReturnReason.vw?findYear="+year+"&amp;evalMembEmpn="+evalMembEmpn+"&amp;evalMembEmpnSeq="+evalMembEmpnSeq);
        J("#anchor").click();
        return false;
    }
	
	/******************************************
	 * jqGrid 자기성과기술서 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goRpt(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 자기성과기술서 조회
	 ******************************************/
	function goRpt(rowId) {
	
		if('$!{CS_HTML.txt2html($evalClosing.MNG_EVAL_YN)}' == 'Y'){
			J.showMsgBox("평가가 마감되었습니다.", null, null);
			return;
		}
		
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		/*if(ret.PLAN_STATUS_ID != '04'){
			J.showMsgBox("성과게획서가 최종승인이 되어야만 작성하실수 있습니다. ", null, null);
			return;
		}*/
		
		J("#year").val(J("#findYear").val());
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
		J("#seq").val(ret.SEQ);
		J("#evalMembEmpn").val(ret.EVAL_MEMB_EMPN);
		J("#evalMembEmpnSeq").val(ret.EVAL_MEMB_EMPN_SEQ);
		
		J("#formList").attr("action", "$!{context_path}/prs/mng/rpt/rptModify.vw?type=template").submit();
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear").val() + "년");
		J("#formList").attr("action", "$!{context_path}/prs/mng/rpt/evalConAlloListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

