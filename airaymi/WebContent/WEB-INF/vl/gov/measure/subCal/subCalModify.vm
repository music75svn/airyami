<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/gov/measure/subCal/subCalList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");
		
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#insertUserSearch").fancybox();    		//담당자 조회
		J("#insertDeptSearch").fancybox();    		//담당부서 조회
		
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#subCalNm").checkbyte({
			//indicator:J("#kpiPurposeIndicator"),
			limit:50
		});
		J("#subCalNm").trigger("keyup");

	});
	
	/*****************************************************
	 * 담당자 설정
	 *****************************************************/ 
	function setInsertUserInfo(arguments) {
		J("#insertUserId").val(arguments[0]);
		J("#insertUserNm").val(arguments[1]);
		J.fancybox.close();
	}
	
	/*****************************************************
	 * 팝업에서 조직선택 설정
	 *****************************************************/ 
	function setDeptInfoPop(scDeptId, scDeptNm) {
		J("#insertDeptId").val(scDeptId);				// 조직Tree에서 선택한 조직코드를 설정.
		J("#insertDeptNm").val(J(scDeptNm).text());	// 조직Tree에서 선택한 조직명을 설정.
		J.fancybox.close();
	}
	

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		
		if(!J.checkLength("subCalNm", "세부요소명", 1, 50)) {
			return;
		}
		
		if(J("#insertDeptId").val() == "") {
			J.showMsgBox("주관부서를 선택해 주십시요", null, "insertDeptId");
			return;
		}
		
		if(J("#insertUserId").val() == "") {
			J.showMsgBox("담당자를 선택해 주십시요", null, "insertUserId");
			return;
		}
		
		if(J("#unit").val() == "") {
			J.showMsgBox("단위을 선택해 주십시요", null, "unit");
			return;
		}
	
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/gov/measure/subCal/subCalProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
