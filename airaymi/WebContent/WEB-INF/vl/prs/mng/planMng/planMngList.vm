	/******************************************
     * 계획서 상태 validation
     ******************************************/
	function validationChk(gubun){
		var savCk = true; //validation Chk
		if (!$!{CS_LOGIN.chkAuthGrp("01")}) {
	    	#if("$closingPlan.MNG_PLAN_YN" == 'N')
	        		J.showMsgBox("성과계획 제출 일정이 마감되었습니다.", null, null); 
					savCk = false;
	        		return false;
			#else
	    		if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='04'){
	    		  J.showMsgBox("최종승인 되었습니다.", null, null); 
				    savCk = false;
	    			return false;
	    		}else if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='02'){
	                J.showMsgBox("이미 확인요청되었습니다.", null, null); 
					savCk = false;
	    			return false;
	    		}else if("$!{CS_HTML.txt2html($membersTable.PLAN_STATUS_ID)}" =='03'){
	                J.showMsgBox("이미 부서장 확인 되었습니다.", null, null); 
					savCk = false;
	    			return false;
	    		}
				if(savCk){
					if(gubun == "approve"){goAprove();
					}else if(gubun == "delete"){goDelete();
					}else if(gubun == "new"){ goNew();
					}else if(gubun == "modify"){ goToModify();
					}
	    		}
	    	#end
    	}
    	
    	if(savCk){
			if(gubun == "approve"){goAprove();
			}else if(gubun == "delete"){goDelete();
			}else if(gubun == "new"){ goNew();
			}else if(gubun == "modify"){ goToModify();
			}
		}
	}
	
