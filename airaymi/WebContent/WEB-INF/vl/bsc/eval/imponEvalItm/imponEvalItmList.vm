	/******************************************
	 * 평가 진행상태 체크
	 ******************************************/
	function evalable(){
		var status = true;
		var term = true;
		var able = true;
		
		if(J("#findStatus").val() != "01") status = false;
		if(J("#findInTerm").val() != "Y") term = false;
		
		if((!term && !status) || !term){
    		J.showMsgBox("평가 기간이 아니므로 <br /> 수정 할 수 없습니다.", null, null);
			
		}else if(!status){
    		J.showMsgBox("평가가 실시되었으므로 <br /> 수정 할 수 없습니다.", null, null);
			
		}
		
		if(!status || !term){
			able=false;
		}
		
		return able;
	}

	/******************************************
	 * 가중치 소수점 이상 1000미만 입력 체크
	 ******************************************/
	function validate(th){
		if(th.value>=1000){
			J.showMsgBox("1000미만으로 입력해주십시오", null, null); 
			J(th).val('');
			J(th).focus();
		}
	}
	
	/******************************************
	 * 가중치 합계 가져오기
	 ******************************************/
	function computeSum() {
		var sum = 0;
		var map = J("input[name=itemWeights]");
        J.each(map, function(key, value) { 	
		  if(J(value).val()!=""){
		  	sum = eval(sum) + eval(J(value).val());
		  }
        });
		
		sum = Math.round(sum * 1000)/1000;
		var count = J("#list").jqGrid('getGridParam', 'records');
		
		J("#weightSum").text(sum);
		
		if(sum != "100" && count> 0) {
			J("#weightAlert").show();
		} else {
			J("#weightAlert").hide();
		}
	}
	
	/******************************************
	 * 평가항목ID HIDDEN
	 ******************************************/
	function linkUpdate1(cellvalue, options, rowObject) { 
		return cellvalue + '<input type="hidden" name="itemCds" value="'+cellvalue+'" ></input>';
	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate2(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * jqGrid 가중치 수정 링크
	 ******************************************/
	function linkUpdate3(cellvalue, options, rowObject) { 
		return '<input type="text" name="itemWeights" class="text textCenter" style="width:75px" maxlength="6" value="'+cellvalue+'" ></input>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#cycle").val(J("#findCycle").val());
		J("#metricGrpId").val(J("#findMetricGrpId").val());
		J("#itemCd").val(ret.ITEM_CD.substring(0,7));
		J("#formList").attr("action", "$!{context_path}/bsc/eval/imponEvalItm/imponEvalItmModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemCds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					itemCds += rowdata.ITEM_CD + '|';
				}
			});
		}
        
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#cycle").val(J("#findCycle").val());
		J("#metricGrpId").val(J("#findMetricGrpId").val());
		J("#itemCd").val(itemCds);
		J("#formList").attr("action", "$!{context_path}/bsc/eval/imponEvalItm/imponEvalItmProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#cycleNm").val(J("#findCycle > option:selected").text());
		J("#metricGrpNm").val(J("#findMetricGrpId").val());
		J("#useYnNm").val(J("#findUseYn").val());
		J("#formList").attr("action", "$!{context_path}/bsc/eval/imponEvalItm/imponEvalItmExcel.vw?type=excel").submit();
		return false;
	}	
	
//]]>
</script>

