								<td class="searchBox_tit w200">
            						<span><label for="findKorNm">이름 </label></span>
                                    <span class="searchBar">
										<input type="text" title="이름" name="findKorNm" id="findKorNm" value="$!{searchMap.txt2html("findKorNm")}"/>
									</span>
            						</span>
            					</td>
            				</tr>
        				</tbody>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" align="middle" alt="검색" /> 
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>
		
		<form id="formList" name="formList" method="post" action="$!{context_path}/prs/dir/dirEvalMember/dirEvalMemberProcess.vw?type=template">
			<input type="hidden" id="mode"       	name="mode" />
