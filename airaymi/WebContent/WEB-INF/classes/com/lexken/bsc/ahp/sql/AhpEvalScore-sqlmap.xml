<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.ahp.ahpEvalScore">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_AHP_EVAL_SCORE 
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: AHP 평가점수 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_AHP_EVAL_SCORE 
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR
             , A.EVAL_SCORE_ID
             , A.EVAL_SCORE
             , A.CONTENT
             , A.SORT_ORDER
	  	 FROM BSC_AHP_EVAL_SCORE A
		WHERE A.YEAR = #findYear#
		ORDER BY A.SORT_ORDER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가점수 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_AHP_EVAL_SCORE 
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , EVAL_SCORE_ID         
			 , EVAL_SCORE            
			 , CONTENT               
			 , SORT_ORDER            
		  FROM BSC_AHP_EVAL_SCORE  
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND EVAL_SCORE_ID = #evalScoreId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가점수 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_AHP_EVAL_SCORE 
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT F_PGM_SERI('BSC_AHP_EVAL_SCORE',#year#,'','','','') SEQ FROM DUAL
		</selectKey>
		INSERT INTO BSC_AHP_EVAL_SCORE  ( 
			   YEAR
			 , EVAL_SCORE_ID
			 , EVAL_SCORE
			 , CONTENT
			 , SORT_ORDER
			 , CREATE_DT
			 ) VALUES ( 
			   #year#
			 , #SEQ#
			 , #evalScore#
			 , #content#
			 , #sortOrder#
			 , SYSDATE
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가점수 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_EVAL_SCORE 
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_AHP_EVAL_SCORE  
		   SET EVAL_SCORE             = #evalScore# 
			 , CONTENT                = #content# 
			 , SORT_ORDER             = #sortOrder# 
			 , MODIFY_DT              = SYSDATE 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND EVAL_SCORE_ID = #evalScoreId#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: AHP 평가점수 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_EVAL_SCORE 
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BSC_AHP_EVAL_SCORE  
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND EVAL_SCORE_ID = #evalScoreId#
	</update>
	
	
</sqlMap>


