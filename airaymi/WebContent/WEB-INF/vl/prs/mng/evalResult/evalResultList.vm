		J.showConfirmBox(J("#btnMngEvalYn").val()+"하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
    }

    /******************************************
     * 저장
     ******************************************/
    function saveDo() {
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/mng/evalResult/evalResultProcess.vw?type=template").submit();

        return false;
    }
	
	/******************************************
	 * 평가결과 불러오기
	 ******************************************/
	function getEvalResult() {
		J.showConfirmBox("평가결과 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "evalResultDo"); //evalResultDo() 콜백함수 호출
	}
	
	function evalResultDo() {
		J("#mode").val("GET");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/mng/evalResult/evalResultProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#year").val(J("#findYear").val());
		//J("#castTc").val(J("input[name='findCastTc']:checked").val());
		//J("#castTcNm").val($('label[for=' + J("input[name='findCastTc']:checked").attr("id") + ']').text());
