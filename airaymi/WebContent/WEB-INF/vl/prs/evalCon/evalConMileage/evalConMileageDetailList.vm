<script type="text/javascript" language="javascript" >
//<![CDATA[

    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/evalCon/evalConMileage/evalConMileageDetailList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['일련번호','번호' ,'연도','구분','구분코드', '마일리지내역', '마일리지', '잔여마일리지'],
            colModel     :[
                            {name:'MILEAGE_NO'           ,index:'MILEAGE_NO'           ,width:80    ,align:'center' }, 
                            {name:'MILEAGE_NUM'          ,index:'MILEAGE_NUM'          ,width:80    ,align:'center' }, 
                            {name:'YEAR'                 ,index:'YEAR'                 ,width:80    ,align:'center' }, 
                            {name:'GUBUN'                ,index:'GUBUN'                ,width:80    ,align:'center' },
                            {name:'GUBUN_CD'                ,index:'GUBUN_CD'             ,width:80    ,align:'center' }, 
                            {name:'CONTENT'              ,index:'CONTENT'              ,width:300   ,align:'left'   }, 
                            {name:'MILEAGE'              ,index:'MILEAGE'              ,width:100   ,align:'center' }, 
                            {name:'FINAL_MILEAGE'        ,index:'FINAL_MILEAGE'        ,width:100   ,align:'center' }
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : true,
            cellEdit     : true,
            gridview     : true,
            caption:"직원개인기여도평가 마일리지관리"
        }).jqGrid('hideCol',"MILEAGE_NUM").jqGrid('hideCol',"GUBUN_CD").setGridWidth($!{jqGrid_width});
        
        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });
		
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#formFind").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageList.vw?type=template").submit();
		});
        
        /******************************************
         * 신규 등록
         ******************************************/
        J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#deptKorNm").val(J("#findDeptKorNm").val());
			J("#korNm").val(J("#findKorNm").val());
			J("#empn").val(J("#findEmpn").val());
			J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageModify.vw?type=template").submit();
        });
        
        /******************************************
         * 삭제 버튼 클릭 이벤트
         ******************************************/
        J("#btnDelete").click(function() {
            goDelete();
            return false;
        });
        
        /******************************************
         * 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            excelDownload();
            return false;
        });
    });

	
    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
        
        J("#mileageNo").val(ret.MILEAGE_NUM);
        J("#empn").val(J("#findEmpn").val());
		J("#deptKorNm").val(J("#findDeptKorNm").val());
		J("#korNm").val(J("#findKorNm").val());
        J("#year").val(J("#findYear").val());
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageModify.vw?type=template").submit();
    }
    
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
    
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }
    
    /******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
		var mileageNos = "";
		var mileages     = 0;
		var finalMileage = $!{searchMap.txt2html("finalMileage")};
		
		for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);

                    if(rowdata.GUBUN_CD.trim() == "S"){
						mileages += parseFloat(rowdata.MILEAGE*1);
                    }else if(rowdata.GUBUN_CD.trim() == "U"){
                    	mileages += parseFloat(rowdata.MILEAGE*-1)
                    }
                }
            });
        }
        
		if(mileages > finalMileage){
			J.showMsgBox("삭제할 마일리지가 최종 마일리지보다 많습니다.", null, null); 
			return;
		}     
		
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);
					mileageNos += rowdata.MILEAGE_NUM + '|';
                    
                }
            });
        }
        
        J("#mileageNos").val(mileageNos);
        J("#mode").val("DEL");
		 J("#empn").val(J("#findEmpn").val());
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageDetailProcess.vw?type=template").submit();
        return false;
    }
    
    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConMileage/evalConMileageDetailListExcel.vw?type=excel").submit();
        return false;
    }

//]]>
</script>

