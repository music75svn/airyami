    					govMetricIds += rowdata.GOV_METRIC_ID + '|';
    					pointOutIds += rowdata.POINT_OUT_ID + '|';
    				}
    			});
    		}

		}

		J("#govMetricIds").val(govMetricIds);
		J("#pointOutIds").val(pointOutIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/resultActual/resultActualProcess.vw?type=template").submit();
		return false;
	}

