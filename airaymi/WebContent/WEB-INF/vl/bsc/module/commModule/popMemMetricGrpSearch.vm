<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFindPop').serialize();
		
		jQuery("#kpiPoolList").jqGrid({
			url          :"$!{searchMap.txt2html("context")}/bsc/module/commModule/memMetricGrpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : 320,
			colNames     :['$!{searchMap.txt2html("METRIC_GRP_NM")} 코드', '$!{searchMap.txt2html("METRIC_GRP_NM")}', '평가항목'],
			colModel     :[
							{name:'METRIC_GRP_ID'  	,index:'METRIC_GRP_ID' 	,width:100   ,align:'center' ,sortable:false},
							{name:'METRIC_GRP_NM'   ,index:'METRIC_GRP_NM'  ,width:350   ,align:'left' ,sortable:false  ,formatter:linkUpdate },
							{name:'EVAL_GBN_NM'     ,index:'EVAL_GBN_NM'    ,width:100   ,align:'left' ,sortable:false  }
							],
			rowNum       : 100000,
			autowidth    : false,
			viewrecords  : true,
			loadonce     : false,
			cellEdit     : true,
			cmTemplate	 : {sortable:false},
			loadComplete : function() {
    							J("#findMetricGrpNm").select();
                           },
			caption:"$!{searchMap.txt2html("METRIC_GRP_NM")} 조회"
		});
        
    	/******************************************
    	 * 검색 엔터키 이벤트
    	 ******************************************/
		J("#findMetricGrpNm").keyup(function(e)  {
        	if(e.keyCode == 13) {
        		$("#formFindPop").submit();
        	}
        });
		
	});
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:setMetricGrpSet(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * setting
	 ******************************************/
	function setMetricGrpSet(rowId) {
		var ret = J("#kpiPoolList").jqGrid('getRowData',rowId);
		var metricGrpId = ret.METRIC_GRP_ID;
		setKpiPoolSet(metricGrpId);
	}

	$("#formFindPop").submit(function() { 
		J("#kpiPoolList").setGridParam({url:"$!{searchMap.txt2html("context")}/bsc/module/commModule/memMetricGrpList_xml.vw?"+J("#formFindPop").serialize()}); 
		J("#kpiPoolList").trigger("reloadGrid");
		return false;
	});

//]]>
</script>

<form id="formFindPop" name="formFindPop" method="post" action="$!{searchMap.txt2html("context")}/bsc/module/commModule/popMemMetricGrpSearch.vw">
	<input type="hidden" id="findYear" name="findYear" value="$!{searchMap.txt2html("findYear")}" />
	
    <div style="width:800px;height:400px;">
    	<div id="popMetricGrpArea">
    		<h1 class="none">$!{searchMap.txt2html("METRIC_GRP_NM")} 조회</h1>
    		<div style="margin-left:30px;margin-bottom:10px;"><span class="strong">$!{searchMap.txt2html("METRIC_GRP_NM")}</span> : <input type="text" id="findMetricGrpNm" name="findMetricGrpNm" value="$!{searchMap.txt2html("findMetricGrpNm")}" class="w300" /></div>
    		<div id="userData" style="margin-left:15px;height:340px;width:450px;">
    			<!-- 데이터그리드 Start -->
    			<div class="blockGridListTable">
    				<table id="kpiPoolList" summary="$!{searchMap.txt2html("METRIC_GRP_NM")} 조회">
    					<caption class="none">$!{searchMap.txt2html("METRIC_GRP_NM")} 조회</caption>
    					<thead><tr><th></th></tr></thead>
    					<tbody><tr><td></td></tr></tbody>
    				</table>
    				<div id="pager"></div>                    
    			</div>
    			<!--// 데이터그리드 End -->	
    		</div>
    	</div>
    </div>
</form>
