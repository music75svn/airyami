										<option value="$!{CS_HTML.txt2html($detailConceptList.CONCEPT_ID)}" $!{CS_HTML.getSelected($!{CS_HTML.txt2html($detailConceptList.CONCEPT_ID)}, $!{CS_HTML.txt2html($detail.CONCEPT_ID)})}>$!{CS_HTML.txt2html($detailConceptList.CONCEPT_NM)}</option>
