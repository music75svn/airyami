	function chgManagement(){
	
		J.ajax({
        	url      : "$!{context_path}/str/base/strMetric/managementList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findManagementId").empty();
				
				J('<option/>').attr('value','').text("전체").appendTo('#findManagementId');
				
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findManagementId');
				})
        	}
    	});
		
		<!--세부목표도 초기화-->
