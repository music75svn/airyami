			<input type="hidden" id="mode"       	name="mode" />
			<input type="hidden" id="year"       	name="year" />
			<input type="hidden" id="yearNm"       	name="yearNm" />
			<input type="hidden" id="empn"       	name="empn" />
			<input type="hidden" id="korNm"       	name="korNm" />
			<input type="hidden" id="insaYn"       	name="insaYn" />
			
			$!{searchMap.makeHiddenFind()}
			
			<div id="splitterBox">
				<div>
					<!-- 조직트리 Start -->
					<div class="blockGridTreeTable">
						#parse("/WEB-INF/vl/prs/insa/dept/deptTree.vm")
					</div>
						
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable floatRight">
						<table id="list" summary="인사정보 조회결과" padding-left:"5px">
							<caption class="none">인사정보 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					
					<div class="blockButton_all">
						<div class="blockButton " style="float:left; text-align:left; width:500px; padding:5px 0 0 0;">
							#if($!{CS_HTML.txt2html($confirmYn.INSA_INFO_YN)} != "Y")
    						<div class="blockButton" style="float:left; text-align:left; width:130px;">
    							<input id="btnInsaInfo" type="button" align="middle" value="인사정보 가져오기" alt="인사정보 가져오기" />
    						</div>
							#end
    						<div class="blockButton" style="float:left; text-align:left; width:155px;">
    							<input id="btnInsaDown" type="button" align="middle" value="인사정보 엑셀다운로드", alt="인사정보 다운로드" />
    						</div>
    						<div class="blockButton" style="float:left; text-align:left; width:145px;">
    							<input id="btnPcmtDown" type="button" align="middle" value="발령정보 엑셀다운로드" alt="발령정보 다운로드" />
    						</div>
    						#*					
        						<div class="blockButton" style="float:left; text-align:left; width:145px;">
        							<input id="btnPcmtUpload" type="button" align="middle" value="발령정보 엑셀업로드" alt="발령정보 업로드" />
        						</div>
    						*#	
    					</div>
    					<div class="blockButton" id="btnDiv" style="padding:5px 0 0 0;">
    							<ul>
    								#if($!{CS_HTML.txt2html($confirmYn.INSA_INFO_YN)} != "Y")
        								<li><input type="button" id="btnConfirm" value="확정" /></li>
    								#else
    	    							<li><input type="button" id="btnCancle" value="확정취소" /></li>
    								#end
    							</ul>
    					</div>
					</div>
				</div>
			</div>
		</form>
		
	</div>
	<div class="clear"></div>
