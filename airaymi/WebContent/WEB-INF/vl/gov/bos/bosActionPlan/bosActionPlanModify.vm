										<option value="$!{CS_HTML.txt2html($metricList.BOSS_METRIC_ID)}" $!{CS_HTML.getSelected($!{CS_HTML.txt2html($metricList.BOSS_METRIC_ID)}, $!{CS_HTML.txt2html($detail.BOSS_METRIC_ID)})}>$!{CS_HTML.txt2html($metricList.BOSS_METRIC_NM)}</option>
