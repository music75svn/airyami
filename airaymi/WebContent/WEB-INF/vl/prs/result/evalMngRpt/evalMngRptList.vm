	}	
    
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#empn").val(ret.EMPN);
		J("#deptCd").val(ret.DEPT_CD);
		//J("#castTc").val(ret.CAST_TC);
        J("#evalGrpId").val(ret.EVAL_GRP_ID);
		J("#year").val(ret.YEAR);
		J("#mode").val("RPT");
		J("#formList").attr("action", "$!{context_path}/prs/result/evalMngRpt/evalMngRptModify.vw?type=template").submit();
	}
	
