	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		var str = cellvalue;

		return '<a href=javascript:goModify(' + options.rowId + ')>' + str + '<//a>';
	}
	
	function goModify(rowId){
	
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#empNo").val(ret.EMP_NO);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/mem/tot/memTotResult/memTotResultModify.vw?type=template").submit();
	
	}
	
	function saveChkGrade(){
	
		J.showConfirmBox("현재목록의  최종등급코드를 일괄저장 하시겠습니까?", "saveGradeDo"); //saveGradeDo() 콜백함수 호출
	
