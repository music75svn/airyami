<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/cbe/eval/evalWeightMapping/evalWeightMappingList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가차수 코드', '가중치 그룹 코드', '가중치그룹 ', '평가대상조직', '평가대상직급'
						 <!--, '근무기간'-->
						 , '평가대상인원수', '반영','최종반영일자'
						  ],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:150   ,align:'center' }, 
                            {name:'WEIGHT_GRP_ID'        ,index:'WEIGHT_GRP_ID'        ,width:150   ,align:'center' }, 
                            {name:'WEIGHT_GRP_NM'        ,index:'WEIGHT_GRP_NM'        ,width:150   ,align:'left'   ,formatter:linkUpdate}, 
                            {name:'DEPT_NM'              ,index:'DEPT_NM'              ,width:250   ,align:'left'   }, 
                            {name:'JIKGUB_NM'            ,index:'JIKGUB_NM'            ,width:200   ,align:'left'   }, 
                            <!--{name:'WORK_TERM'            ,index:'WORK_TERM'            ,width:100   ,align:'center' },--> 
                            {name:'USER_CNT'             ,index:'USER_CNT'             ,width:100   ,align:'right'  }, 
							{name:'USER_CNT1'            ,index:'USER_CNT1'            ,width:40    ,align:'center' ,formatter:linkAddUser}, 
                            {name:'REFL_DT'              ,index:'REFL_DT'              ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가대상자매핑"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"WEIGHT_GRP_ID").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goExec();
			return false;
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
		});
		
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();
	});
	
	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		
		J.ajax({
        	url      : "$!{context_path}/cbe/eval/evalExceDept/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}
	
	/******************************************
	 * 인사정보 초기화
	 ******************************************/
	function goExec() {
	    if(J("#findEvalDegreeId").val() == null || J("#findEvalDegreeId").val() == ""){
			J.showMsgBox("평가구분을 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("인사정보를 초기화 하시면 <br>기존에 등록한 정보도 모두 초기화 됩니다. <br>인사정보를 초기화 하시겠습니까?", "execDo"); //execDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 일괄적용처리
	 ******************************************/
	function execDo() {
		J("#mode").val("INIT");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalWeightMapping/evalWeightMappingProcess.vw?type=template").submit();
		return false;
	}
	
	function linkAddUser(cellvalue, options, rowObject) { 
		var ret_val = "";
		
		ret_val = "</a></span>" + "<a href=javascript:goAddUser(" + options.rowId + ")>" + "<img name=\'opi\'  src=\'$!{img_path}/common/board/ic_search.gif\' >" + "</a>";
		
		return ret_val;
	}
	
	/******************************************
	 * 가중치그룹 대상인원  팝업
	 ******************************************/
	function goAddUser(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear 			= J("#findYear").val();
		var findEvalDegreeId 	= ret.EVAL_DEGREE_ID;
		var findWeightGrpId 	= ret.WEIGHT_GRP_ID;
		
		var param = "&amp;year=" + findYear + "&amp;evalDegreeId=" + findEvalDegreeId  + "&amp;weightGrpId=" + findWeightGrpId;
		
		var url = "$!{context_path}/cbe/eval/evalWeightMapping/popUserDetail.vw?type=popup" + param;
		openWinByName(url,'popWeightGrp','860','600','yes');
		
		//J("#anchor").attr("href","$!{context_path}/cbe/eval/evalWeightMapping/popUserDetail.vw?year="+findYear+"&amp;evalDegreeId="+findEvalDegreeId+"&amp;weightGrpId="+findWeightGrpId);
		//J("#anchor").click();
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#weightGrpId").val(ret.WEIGHT_GRP_ID);
		J("#scDeptId").val(ret.SC_DEPT_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalWeightMapping/evalWeightMappingModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var weightGrpIds = "";
		var scDeptIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';
					weightGrpIds += rowdata.WEIGHT_GRP_ID + '|';
					scDeptIds += rowdata.SC_DEPT_ID + '|';
				}
			});
		}
        
		J("#evalDegreeIds").val(evalDegreeIds);J("#weightGrpIds").val(weightGrpIds);J("#scDeptIds").val(scDeptIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalWeightMapping/evalWeightMappingProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#evalDegreeNm").val(J("#findEvalDegreeId > option:selected").text());
		J("#evalDegreeId").val(J("#findEvalDegreeId > option:selected").val());
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalWeightMapping/evalWeightMappingListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

