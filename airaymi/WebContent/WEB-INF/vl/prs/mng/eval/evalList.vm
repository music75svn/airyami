	/******************************************
	  * 년을 선택시 평가차수조회 
	 ******************************************/
	function chaEvalDegree(year){
    	J.ajax({
    		url        : "$!{context_path}/prs/mng/eval/evalDegreeList_ajax.vw",
    		type       : "POST",
    		data       : "findYear=" + year,
        	dataType   : "xml",
    		contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success    : function (xml) {
				J("#findEvalDegreeId").empty();
    			if(J(xml).find("dataset").find("data").length > 0) {
    				J(xml).find("dataset").find("data").each(function() {  
                    	var evalDegreeId   = J(this).find("evalDegreeId").text();
                    	var evalDegreeNm   = J(this).find("evalDegreeNm").text();
					J("#findEvalDegreeId").append("<option value='" + evalDegreeId +"' title='" + evalDegreeNm + "'>" + evalDegreeNm  + "</option>");	
				});
    		  }
        	},  
			error : function(xhr, status, error) {
				alert(error);
			}
		});
		
		chaEvalassesor();

	}
	
	/******************************************
	  * 평가차수 변경시 평가자 변경 
	 ******************************************/
	function chaEvalassesor(year, degreeId){
    	J.ajax({
    		url        : "$!{context_path}/prs/mng/eval/assesorList_ajax.vw",
    		type       : "POST",
    		data       : "findYear=" + year + "&findEvalDegreeId=" + degreeId,
        	dataType   : "xml",
    		contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success    : function (xml) {
				J("#findAssessorEmpn").empty();
    			if(J(xml).find("dataset").find("data").length > 0) {
    				J(xml).find("dataset").find("data").each(function() {  
                    	var empn   = J(this).find("value").text();
                    	var korNm   = J(this).find("text").text();
					J("#findAssessorEmpn").append("<option value='" + empn +"' title='" + korNm + "'>" + korNm  + "</option>");	
				});
    		  }
        	},  
			error : function(xhr, status, error) {
				alert(error);
			}
		});

	}
	
	/******************************************
	 * jqGrid 평가 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goEval(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * jqGrid 평가상태
	 ******************************************/
	function evalStatus(cellvalue, options, rowObject) {
		var status = "";
		
		var ret = J("#list").jqGrid('getRowData', options.rowId);
		
		if (rowObject.EVAL_SUBMIT_YN == "Y") {
			status = "평가제출";
		} else {
			status = "평가진행중";
		}
		
		return status;
	}
	
	/******************************************
	 * 간부개인업적평가 평가화면
	 ******************************************/
	function goEval(rowId) {
	
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#year").val(ret.YEAR);
        J("#findYear").val(ret.YEAR);
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
        J("#findEvalGrpId").val(ret.EVAL_GRP_ID);
		J("#evalType").val(ret.EVAL_TYPE);
		J("#assessorEmpn").val(ret.ASSESSOR_EMPN);
        J("#findAssessorEmpn").val(ret.ASSESSOR_EMPN);
        J("#assessorGrpId").val(ret.ASSESSOR_GRP_ID);
        J("#planYn").val(ret.PLAN_YN);
        J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
        
        J("#formList input[name*='findAssessorEmpn']").val(ret.ASSESSOR_EMPN);
        J("#formList input[name*='findEvalGrpId']").val(ret.EVAL_GRP_ID);
        J("#formList input[name*='findAssessorGrpId']").val(ret.ASSESSOR_GRP_ID);
        
		J("#formList").attr("action", "$!{context_path}/prs/mng/eval/evalModify.vw?type=template").submit();
		
	}
	
	/******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#formList").attr("action", "$!{context_path}/prs/mng/eval/evalListExcel.vw?type=excel").submit();
        return false;
    }

	/******************************************
	 * 평가년도 변경시 평가자 다시 가져오기
	 ******************************************/
	function chgYear(){
	
		J.ajax({
        	url      : "$!{context_path}/prs/mng/eval/assesorList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findAssessorEmpn").empty();

				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findAssessorEmpn');
				})
        	}
    	});
	}
