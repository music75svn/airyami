#set($curr_url = $!{context_path} + "/bsc/matrix/matrixEval/matrixEvalResultList.vw")
<html>
<head >
	#parse("/WEB-INF/vl/common/template/head.vm")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/matrix/matrixEval/matrixEvalResultList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{STRATEGY_NM}', 'POOL 구분', '평가대상지표 POOL'
							#foreach($list in $itemIdList)
								, '$!{CS_HTML.replace($!{CS_HTML.txt2html($list.ITEM_NM)},"TOTAL","평점")}<br>($!{CS_HTML.txt2html($list.ITEM_WEIGHT)})'
							#end
						],
			colModel     :[
							{name:'STRATEGY_NM'        	 ,index:'STRATEGY_NM'        	,width:170   ,align:'left' }
                            , {name:'POOL_GUBUN_NM'        ,index:'POOL_GUBUN_NM'         ,width:120   ,align:'center' }
							, {name:'METRIC_GRP_NM'        ,index:'METRIC_GRP_NM'        ,width:250   ,align:'left' }
							#foreach($list in $itemIdList)
								, {name:'$!{CS_HTML.txt2html($list.ITEM_ID)}'          ,index:'$!{CS_HTML.txt2html($list.ITEM_ID)}'        ,width:50   ,align:'right' }
							#end
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			cmTemplate   : {sortable:false},
			caption:"평가실시"
		}).jqGrid('hideCol',"METRIC_GRP_ID").setGridWidth($!{jqGrid_width});

		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true,
          groupHeaders:[
		  	// jqGrid 의 해더 합병
		  	#foreach($list in $itemIdList)
				#if( $list.ITEM_GRP_SEQ == "1" && $list.ITEM_SEQ == "1" )
					{startColumnName: '$list.ITEM_ID', numberOfColumns: '$list.ITEM_GRP_CNT', titleText: '<em>$list.ITEM_GRP_NM</em>'}
				#end

				#if( $list.ITEM_GRP_SEQ != "1" && $list.ITEM_SEQ == "1" && $list.ITEM_GRP_CNT != "1")
					, {startColumnName: '$list.ITEM_ID', numberOfColumns: '$list.ITEM_GRP_CNT', titleText: '<em>$list.ITEM_GRP_NM</em>'}
				#end
			#end

          ]
        });


		/******************************************
		 * 닫기버튼
		 ******************************************/
		J("#btnClose").click(function() {
			self.close();
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

	});

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formFind").attr("action", "$!{context_path}/bsc/matrix/matrixEval/matrixEvalResultListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>
</head>
<body>
<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">평가실시</h1>
		<div class="tableTop">

    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/matrix/matrixEval/matrixEvalResultList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"			name="findHighPgmId"		value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"			name="findSubPgmId"			value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"				name="findPgmId"			value="$!{searchMap.txt2html("findPgmId")}" />
				<input type="hidden" 	id="popupYear"       		name="popupYear" 			value="$!{searchMap.txt2html("popupYear")}"/>
    			<input type="hidden" 	id="popupEvalUserGrpId"    	name="popupEvalUserGrpId" 	value="$!{searchMap.txt2html("popupEvalUserGrpId")}"/>
    			<input type="hidden" 	id="popupEvalUserId"       	name="popupEvalUserId" 		value="$!{searchMap.txt2html("popupEvalUserId")}"/>
				<input type="hidden" 	id="popupYearNm"       		name="popupYearNm" 			value="$!{searchMap.txt2html("popupYearNm")}"/>
    			<input type="hidden" 	id="popupEvalUserGrpNm"    	name="popupEvalUserGrpNm" 	value="$!{searchMap.txt2html("popupEvalUserGrpNm")}"/>
    			<input type="hidden" 	id="popupEvalUserNm"       	name="popupEvalUserNm" 		value="$!{searchMap.txt2html("popupEvalUserNm")}"/>

				$!{searchMap.makeHiddenFind()}
				<div class="clear h20"></div>
				<div class="searchBox">
    				<div><div><div>
    				<table summary="평가실시검색 조건">
						<caption class="none">평가실시 검색 조건</caption>
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span><label for="findYear">평가년도</label></span>
            						<span class="searchBar">$!{searchMap.txt2html("popupYearNm")}

            						</span>
            					</td>


								<td class="searchBox_tit w250">
                					<span><label for="findEvalUserId">평가자</label></span>
									<span class="searchBar"> $!{searchMap.txt2html("popupEvalUserNm")}
									</span>
                                </td>


            					<td class="searchBox_tit w250">
                					<span><label for="findEvalUserGrpId">평가단</label></span>
									<span class="searchBar">$!{searchMap.txt2html("popupEvalUserGrpNm")}

									</span>
                                </td>
            				</tr>
        				</tbody>
    				</table>
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>

		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/matrix/matrixEval/matrixEvalResultList.vw?type=template">

			$!{searchMap.makeHiddenFind()}
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="평가실시 조회결과">
							<caption class="none">평가실시 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>


					<!--// 데이터그리드 End -->
					<div class="blockButton_all">
						<div class="blockButton" style="float:left; text-align:left; width:145px;">
							<input id="btnExcelDown" type="button" align="middle" value="엑셀변환" alt="엑셀다운로드" />
						</div>
						<div class="blockButton">
							<ul>
								<li><input type="button" id="btnClose" value="닫기" /></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</form>

	</div>
	<div class="clear"></div>
</div>
</body>
</html>
