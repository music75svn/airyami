#set($curr_url = $!{context_path} + "/gov/measure/subCalMapping/subCalMappingList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/measure/subCalMapping/subCalMappingList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['GOV_METRIC_ID', '평가지표', '평가방법', '단위', '가중치', '주관부서', '담당자', '평가요소', '세부요소수', 'ACT_CAL_TYPE_COL_ID', 'CAL_CNT', 'CAL_NUM'],
			colModel     :[
							{name:'GOV_METRIC_ID'           ,index:'GOV_METRIC_ID'          ,width:150   ,align:'center' },
							{name:'SEL_GOV_METRIC_NM'       ,index:'SEL_GOV_METRIC_NM'      ,width:300   ,align:'left' ,sortable:true,	cellattr:attrSetting},
                            {name:'EVAL_METHOD_NM'        	,index:'EVAL_METHOD_NM'         ,width:120   ,align:'center' ,sortable:true,	cellattr:attrSetting},
                            {name:'UNIT_NM'  				,index:'UNIT_NM'  				,width:100   ,align:'center' ,sortable:true,	cellattr:attrSetting},
                            {name:'WEIGHT'           		,index:'WEIGHT'           		,width:80    ,align:'center' ,sortable:true,	cellattr:attrSetting},
                            {name:'SC_DEPT_NM'            	,index:'SC_DEPT_NM'            	,width:150   ,align:'center' ,sortable:true,	cellattr:attrSetting},
							{name:'INSERT_USER_NM'          ,index:'INSERT_USER_NM'         ,width:100   ,align:'center' ,sortable:true,	cellattr:attrSetting},
							{name:'ACT_CAL_TYPE_COL_NM'     ,index:'ACT_CAL_TYPE_COL_NM'    ,width:150   ,align:'left' ,sortable:false},
							{name:'ACT_CAL_CNT'             ,index:'ACT_CAL_CNT'            ,width:80    ,align:'center' ,sortable:false,   formatter:linkUpdate},
							{name:'ACT_CAL_TYPE_COL_ID'     ,index:'ACT_CAL_TYPE_COL_ID'    ,width:150   ,align:'center' },
							{name:'CAL_CNT'            		,index:'CAL_CNT'            	,width:150   ,align:'center' },
							{name:'CAL_NUM'            		,index:'CAL_NUM'            	,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"정평계량 세부요소매핑"
		}).jqGrid('hideCol',"GOV_METRIC_ID").jqGrid('hideCol',"ACT_CAL_TYPE_COL_ID").jqGrid('hideCol',"CAL_CNT").jqGrid('hideCol',"CAL_NUM").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/measure/subCalMapping/subCalMappingModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#calFancy").fancybox();
	});

	/*****************************************
	 * 전략과제 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.CAL_NUM;
		var rowSpan = rowObject.CAL_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#calFancy").attr("href","$!{context_path}/gov/measure/subCalMapping/popSubCalMappingModify.vw?year=$!{searchMap.txt2html("findYear")}&amp;govMetricId="+ret.GOV_METRIC_ID+"&amp;actCalTypeColId="+ret.ACT_CAL_TYPE_COL_ID);
    	J("#calFancy").click();

	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 저장처리
	 ******************************************/
	function setCalMapping(govMetricId,actCalTypeColId,subCalIds) {
		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#govMetricId").val(govMetricId);
		J("#actCalTypeColId").val(actCalTypeColId);
		J("#subCalIds").val(subCalIds);
		J("#formList").attr("action", "$!{context_path}/gov/measure/subCalMapping/subCalMappingProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){

		J("#yearNm").val(J("#findYear :selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/measure/subCalMapping/subCalMappingListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

