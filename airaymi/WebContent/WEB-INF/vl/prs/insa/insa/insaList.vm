#set($curr_url = $!{context_path} + "/prs/insa/dept/deptList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/insa/insa/insaList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colNames     :['부서코드', '사번', '이름', '소속부서', '직급' ,'직위', '근무월수','고용형태코드'],
			colModel     :[
							{name:'DEPT_CD'			,index:'DEPT_CD'			,width:150		,align:'center' },
							{name:'EMPN'   			,index:'EMPN'				,width:70		,align:'center' },
							{name:'KOR_NM'   		,index:'KOR_NM'				,width:80   	,align:'center' ,formatter:linkUpdate},
							{name:'DEPT_FULL_NM'	,index:'DEPT_FULL_NM'		,width:150		,align:'left' },
							{name:'CAST_TC'			,index:'CAST_TC'			,width:80		,align:'center' },
							{name:'POS_TC'			,index:'POS_TC'				,width:80		,align:'center' },
							{name:'MON'				,index:'MON'				,width:80		,align:'center' },
							{name:'EMPM_KIND_TC'	,index:'EMPM_KIND_TC'		,width:80		,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			##cmTemplate: {sortable:false},
			caption:"인사조직"
		}).jqGrid('hideCol', "DEPT_CD").jqGrid('hideCol', "EMPM_KIND_TC").setGridWidth($!{jqGrid_r_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			var findYear = J("#findYear").val();
			
			// 연도가 변경되지 않는 경우 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
			// formList가 submit되는 경우(신규, 수정, 삭제) 검색조건의 사용여부를  유지시켜주기 위해 설정.
			J("#formList input[name=findUseYn]").val(J("#findUseYn").val());
			
			J("#findScDeptId").val("");
			J("#findLevelId").val("");
		});
        
		/******************************************
		 * 인사정보가져오기 버튼 클릭 이벤트
		 ******************************************/
		J("#btnInsaInfo").click(function() {
			getInsaInfo();
			return false;
		});
	
	
		/******************************************
         * 인사정보 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnInsaDown").click(function() {
            insaExcelDownload();
            return false;
        });
        
		/******************************************
         * 발령정보 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnPcmtDown").click(function() {
            pcmtExcelDownload();
            return false;
        });
        
		/******************************************
         * 발령정보 엑셀업로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnPcmtUpload").click(function() {
            pcmtExcelUp();
            return false;
        });
        
        /******************************************
         * fancy Box 팝업호출
         ******************************************/
        J("#anchor").fancybox();            //엑셀업로드 팝업
		
		/******************************************
    	 * 확정버튼 이벤트
    	 ******************************************/
    	J("#btnConfirm").click(function(e) {
    		e.preventDefault();
    		getConfirm();
    	});
		
		/******************************************
    	 * 확정취소버튼 이벤트
    	 ******************************************/
    	J("#btnCancle").click(function(e) {
    		e.preventDefault();
    		btnCancle();
    	});
        
    	});
        
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * jqGrid 직위명 링크
	 ******************************************/
	function linkCastTc(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	 /******************************************
     * 인사정보 엑셀다운로드
     ******************************************/
    function insaExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/insa/insa/insaExcel.vw?type=excel").submit();
        return false;
    }
    
	 /******************************************
     * 발령정보 엑셀다운로드
     ******************************************/
    function pcmtExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/insa/insa/pcmtExcel.vw?type=excel").submit();
        return false;
    }
    
    /******************************************
     * 발령정보 엑셀업로드
     ******************************************/
    function pcmtExcelUp(){
        var year = J("#findYear").val();
        var findHighPgmId = J("#findHighPgmId").val();
        var findSubPgmId = J("#findSubPgmId").val();
        var findPgmId = J("#findPgmId").val();
        J("#mode").val("ADD");
        J("#anchor").attr("href","$!{context_path}/prs/insa/insa/popExcelUpload.vw?findYear=" + year  +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
        J("#anchor").click();
    }

	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/insa/insa/insaList_xml.vw?" + J("#formFind").serialize(), datatype:"json"}); 
		J("#list").trigger("reloadGrid");
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#deptCd").val(ret.DEPT_CD);	 // List에서 선택한 조직을 설정.
		J("#empn").val(ret.EMPN);		 // List에서 선택한 사원을 설정.
		J("#korNm").val(ret.KOR_NM);		 // List에서 선택한 사원을 설정.
		J("#mode").val("MOD");
		
		J("#formList").attr("action", "$!{context_path}/prs/insa/insa/insaModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 조직선택 클릭이벤트
	 ******************************************/
	function goAction(deptCd, deptNm) {
		setDeptInfo(deptCd, deptNm);
	}
	
	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/ 
	function setDeptInfo(deptCd, deptNm) {
		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findDeptCd]").val(deptCd);
		J("#formList input[name=findDeptNm]").val(J(deptNm).text());
	
			// formFind의 변수들 설정.
			J("#findDeptCd").val(deptCd);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findDeptNm").val(J(deptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			
			goGridSearch();
			
	}
	
	/******************************************
	 * 인사정보 불러오기
	 ******************************************/
	function getInsaInfo() {
		J.showConfirmBox("인사정보 불러오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "getInsaInfoDo"); //getInsaInfoDo() 콜백함수 호출
	}
	
	function getInsaInfoDo() {
		J("#mode").val("GET");
		J("#formList").attr("action", "$!{context_path}/prs/insa/insa/insaProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 확정 필수입력 체크
	 ******************************************/
	function getConfirm() {
		J.showConfirmBox("확정하시겠습니까?", "Confirm"); //Confirm() 콜백함수 호출
	}
    
	/******************************************
	 * 확정
	 ******************************************/
	function Confirm() {
		J("#mode").val("CONF");
		J("#year").val(J("#findYear").val());
		J("#insaYn").val('Y');
		J("#formList").attr("action", "$!{context_path}/prs/insa/insa/insaProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 확정취소처리
	 ******************************************/
	function btnCancle(){
		J.showConfirmBox("확정을 취소 하시겠습니까?", "CancelDo"); //CancelDo() 콜백함수 호출
	}
	
	/******************************************
	 * 확정취소처리
	 ******************************************/
	function CancelDo() {
		J("#mode").val("CONF");
		J("#year").val(J("#findYear").val());
		J("#insaYn").val('N');
		J("#formList").attr("action","$!{context_path}/prs/insa/insa/insaProcess.vw?type=template").submit();
	}
	
//]]>
</script>

