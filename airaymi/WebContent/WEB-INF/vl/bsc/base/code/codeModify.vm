    					</tr>
						<tr>
    						<th scope="row"><label for="etc1">ETC1</label></th>
    						<td><input type="text" id="etc1" name="etc1" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.ETC1)}' maxlength="20" /></td>
    					</tr>
						<tr>
    						<th scope="row"><label for="etc2">ETC2</label></th>
