#set($curr_url = $!{context_path} + "/gov/system/govMetric/govMetricList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/system/govMetric/govMetricList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가범주', '평가부문', '정평지표POOL코드', '정평지표POOL', '정평지표코드', '평가지표', '지표유형', '평가방법', '지표방향성', '주관부서', '담당자', '연계지표', '연계지표', '대표지표'],
			colModel     :[
							{name:'EVAL_CAT_GRP_NM'      ,index:'EVAL_CAT_GRP_NM'      ,width:100   ,align:'center', sortable:true },
                            {name:'EVAL_CAT_NM'          ,index:'EVAL_CAT_NM'          ,width:100   ,align:'center', sortable:true },
                            {name:'GOV_METRIC_GRP_ID'    ,index:'GOV_METRIC_GRP_ID'    ,width:100   ,align:'center', sortable:true },
                            {name:'GOV_METRIC_GRP_NM'    ,index:'GOV_METRIC_GRP_NM'    ,width:100   ,align:'center', sortable:true },
                            {name:'GOV_METRIC_ID'        ,index:'GOV_METRIC_ID'        ,width:150   ,align:'center', sortable:true },
                            {name:'GOV_METRIC_NM'        ,index:'GOV_METRIC_NM'        ,width:150   ,align:'left', sortable:true   ,formatter:linkUpdate},
                            {name:'GBN_NM'               ,index:'GBN_NM'               ,width:70    ,align:'center', sortable:true },
                            {name:'EVAL_METHOD_NM'       ,index:'EVAL_METHOD_NM'       ,width:120   ,align:'left', sortable:true   },
                            {name:'DIREC_NM'             ,index:'DIREC_NM'             ,width:70    ,align:'center', sortable:true },
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:100   ,align:'center', sortable:true },
                            {name:'INSERT_USER_NM'       ,index:'INSERT_USER_NM'       ,width:80    ,align:'center', sortable:true },
                            {name:'MAPPED_CNT'           ,index:'MAPPED_CNT'           ,width:70    ,align:'center', sortable:true ,formatter:linkKpiList},
                            {name:'MAPPED_CNT_CHECK'     ,index:'MAPPED_CNT_CHECK'     ,width:50    ,align:'center', sortable:true },
							{name:'MAIN_METRIC_YN'       ,index:'MAIN_METRIC_YN'       ,width:150   ,align:'center', sortable:true }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate	 : {sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.MAPPED_CNT_CHECK != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"정평지표관리"
		}).jqGrid('hideCol',"GOV_METRIC_GRP_ID").jqGrid('hideCol',"GOV_METRIC_GRP_NM").jqGrid('hideCol',"GOV_METRIC_ID").jqGrid('hideCol',"MAIN_METRIC_YN").jqGrid('hideCol',"MAPPED_CNT_CHECK").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/system/govMetric/govMetricModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		var str = cellvalue;

		if(rowObject.MAIN_METRIC_YN == "N") {
			str = "<img src=\'$!{img_path}/tree.gif\' align='absmiddle'>" + str
		}

		return '<a href=javascript:goModify(' + options.rowId + ')>' + str + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/system/govMetric/govMetricModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(J("#findUseYn").val() == 'N'){
			J.showMsgBox("이미 삭제된  경영평가지표 입니다.", null, null);
			return;
		}

		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var govMetricIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					govMetricIds += rowdata.GOV_METRIC_ID + '|';
				}
			});
		}

		J("#govMetricIds").val(govMetricIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/system/govMetric/govMetricProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#year").val(J("#findYear").val());
		J("#useYn").val(J("#findUseYn").val());
		J("#useYnNm").val(J("#findUseYn option:selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/system/govMetric/govMetricListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * jqGrid 지표리스트 링크
	 ******************************************/
	function linkKpiList(cellvalue, options, rowObject) {
		return '<a href=javascript:goKpiList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 지표리스트 조회
	 ******************************************/
	function goKpiList(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#pgmId").val('PGM0363');
		J("#formList").attr("action", "$!{context_path}/gov/system/govMetricMapping/govMetricMappingList.vw?type=template").submit();
		return false;
	}
//]]>
</script>

