				<div>$!{CS_HTML.txt2html($list.DEPT_KOR_NM)}</div>
				<ul>
				#foreach($list2 in $deptTree)
    				#if ($list2.DEPT_LEVL == "1")
						#if ($list2.UP_DEPT_CD == $list.DEPT_CD)
