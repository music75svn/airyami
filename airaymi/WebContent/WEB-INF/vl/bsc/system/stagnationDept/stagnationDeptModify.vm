<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/system/stagnationDept/stagnationDeptList.vw?type=template").submit();
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#content").checkbyte({
			indicator:J("#indicator"),
			limit:1000
		});
		J("#content").trigger("keyup");

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});

		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#icSearch").fancybox();
		J("#insertUserSearch").fancybox();

	});

	/*****************************************************
	 * 상위조직 팝업에서 조직선택 설정
	 *****************************************************/
	function setDeptInfoPop(scDeptId, scDeptNm) {
		J("#scDeptId").val(scDeptId);				// 조직Tree에서 선택한 조직코드를 설정.
		J("#scDeptNm").val(J(scDeptNm).text());		// 조직Tree에서 선택한 조직명을 설정.
		J.fancybox.close();
	}

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {

		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/system/stagnationDept/stagnationDeptProcess.vw?type=template").submit();
	}

//]]>
</script>

