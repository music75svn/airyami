        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/mng/planMng/planMngModify.vw?type=template").submit();
	}
	
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
    }
	
	/******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
        var targets = "";
        
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);
                    targets += rowdata.TARGET_ID + '|';
                }
            });
        }
        
        J("#targets").val(targets);
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
		J("#evalMembEmpn").val(J("#findEmpn").val());
        J("#mode").val("DEL");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/mng/planMng/planMngProcess.vw?type=template").submit();
        return false;
    }
	
    /******************************************
     * 확인요청
     ******************************************/
    function goAprove() {
		if(J("#list").jqGrid('getDataIDs') == ""){
            J.showMsgBox("성과목표를 입력하셔야 합니다.", null, null); 
        } else {
