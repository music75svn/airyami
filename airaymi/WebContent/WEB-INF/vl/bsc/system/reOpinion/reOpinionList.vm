#set($curr_url = $!{context_path} + "/bsc/system/reOpinion/reOpinionList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/reOpinion/reOpinionList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['번호', 'TYPE_ID', '요청구분', '제목', '등록자', '등록일자', '답변일자', 'REPLY_STATUS', '처리상태', '공개구분'],
			colModel     :[
							{name:'CB_ID'          		,index:'CB_ID'          		,width:60    ,align:'center' }, 
                            {name:'TYPE_ID'          	,index:'TYPE_ID'          		,width:150   ,align:'center' }, 
                            {name:'TYPE_NM'          	,index:'TYPE_NM'          		,width:100   ,align:'center' }, 
                            {name:'TITLE'              	,index:'TITLE'              	,width:350   ,align:'left' ,formatter:linkUpdate}, 
							{name:'USER_NM'            	,index:'USER_NM'              	,width:80    ,align:'center' }, 
                            {name:'CREATE_DT'           ,index:'CREATE_DT'            	,width:100   ,align:'center' }, 
                            {name:'MODIFY_DT'           ,index:'MODIFY_DT'            	,width:100   ,align:'center' },
							{name:'REPLY_STATUS'        ,index:'REPLY_STATUS'           ,width:150   ,align:'center' },
							{name:'REPLY_STATUS_NM'     ,index:'REPLY_STATUS_NM'        ,width:60    ,align:'center' },
							{name:'PRV_YN'     			,index:'PRV_YN'        			,width:60    ,align:'center' ,formatter:strPrvYn}
							],
			rowNum       : 15,
			autowidth    : false, 
			pager		 : jQuery('#pager'),
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate	 : {sortable:true},
			gridview     : true,
			sortable     : false,
			caption:"이의신청"
		}).jqGrid('hideCol',"TYPE_ID").jqGrid('hideCol',"REPLY_STATUS").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnPopInsert").click(function() {
			J("#mode").val("ADD");
			
			var mode = "ADD";
			var year = J("#findYear").val();
			
			
			var param = "&amp;year=" + year + "&amp;mode=" + mode ;
			var url = "$!{context_path}/bsc/system/reOpinion/popOpinionModify.vw?type=popup" + param;
			openWinByName(url,'popBosMetricDefine','640','420','yes');
		
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#opinionFancy").fancybox();  
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * jqGrid 공개여부 표시
	 ******************************************/
	function strPrvYn(cellvalue, options, rowObject) { 
		var str;
		
		if(cellvalue == "Y"){
			str = "비공개"
		}else if(cellvalue == "N"){
			str = "공개"
		}

		return str;
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#cbId").val(ret.CB_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var cbIds = "";
		var cbCods = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					cbIds += rowdata.CB_ID + '|';cbCods += rowdata.CB_COD + '|';
				}
			});
		}
        
		J("#cbIds").val(cbIds);J("#cbCods").val(cbCods);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionListExcel.vw?type=excel").submit();
		return false;
	}
	
	function parentRefresh(){
		setTimeout(function(){
		
		J("#formList").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionList.vw?type=template").submit();
		
		},500);
	
	}

//]]>
</script>

