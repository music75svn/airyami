#set($curr_url = $!{context_path} + "/gov/bos/actualMon/actualMonList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/bos/actualMon/actualMonList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가범주명', '기관장지표', '내평지표', 'METRIC_ID', 'SC_DEPT_ID', '최종점수', 'BOSS_METRIC_ID', 'GRP_STATUS', 'BOSS_METRIC_STATUS', 'GRP_CNT', 'GRP_NUM', 'METRIC_CNT', 'METRIC_NUM'],
			colModel     :[
							{name:'EVAL_CAT_GRP_NM'     ,index:'EVAL_CAT_GRP_NM'   		,width:150   ,align:'left' ,sortable:false,	cellattr:attrSetting  ,formatter:linkSignalEvalCatGrp},
                            {name:'BOSS_METRIC_NM'      ,index:'BOSS_METRIC_NM'         ,width:150   ,align:'left' ,sortable:false,	cellattr:attrSetting2 ,formatter:linkSignalBossMetric},
                            {name:'METRIC_NM'       	,index:'METRIC_NM'       		,width:250   ,align:'left' ,sortable:false    ,formatter:linkSignalMetric},
							{name:'METRIC_ID'       	,index:'METRIC_ID'       		,width:250   ,align:'left' ,sortable:false },
							{name:'SC_DEPT_ID'       	,index:'SC_DEPT_ID'       		,width:250   ,align:'left' ,sortable:false },
                            {name:'SCORE'               ,index:'SCORE'                	,width:80   ,align:'center' ,sortable:false},
                            {name:'BOSS_METRIC_ID'     	,index:'BOSS_METRIC_ID'     	,width:150   ,align:'center' ,sortable:false},
                            {name:'GRP_STATUS'      	,index:'GRP_STATUS'      		,width:150   ,align:'center' ,sortable:false},
							{name:'BOSS_METRIC_STATUS'  ,index:'BOSS_METRIC_STATUS' 	,width:150   ,align:'center' ,sortable:false},
							{name:'GRP_CNT'      		,index:'GRP_CNT'      			,width:150   ,align:'center' ,sortable:false},
							{name:'GRP_NUM'      		,index:'GRP_NUM'      			,width:150   ,align:'center' ,sortable:false},
							{name:'METRIC_CNT'      	,index:'METRIC_CNT'      		,width:150   ,align:'center' ,sortable:false},
							{name:'METRIC_NUM'      	,index:'METRIC_NUM'      		,width:150   ,align:'center' ,sortable:false}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"기관장평가실적"
		}).jqGrid('hideCol',"BOSS_METRIC_ID").jqGrid('hideCol',"GRP_STATUS").jqGrid('hideCol',"BOSS_METRIC_STATUS").jqGrid('hideCol',"GRP_CNT").jqGrid('hideCol',"GRP_NUM").setGridWidth($!{jqGrid_width})
		  .jqGrid('hideCol',"METRIC_CNT").jqGrid('hideCol',"METRIC_NUM").jqGrid('hideCol',"SC_DEPT_ID").jqGrid('hideCol',"METRIC_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/bos/actualMon/actualMonModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/*****************************************
	 * 전략과제 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.GRP_NUM;
		var rowSpan = rowObject.GRP_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/*****************************************
	 * 전략과제 Rowspan 설정
	 ******************************************/
	function attrSetting2(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.METRIC_NUM;
		var rowSpan = rowObject.METRIC_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/******************************************
	 * 평가범주 신호등 링크
	 ******************************************/
	function linkSignalEvalCatGrp(cellvalue, options, rowObject) {
		var retVal = "";
		if( "" != rowObject.EVAL_CAT_GRP_NM ){
			retVal = "<img name=\'sig\'  src=\'$!{img_path}/common/ball/ball_" + rowObject.GRP_STATUS + ".gif\' > " + cellvalue;
		}else {
			retVal = cellvalue;
		}
		return  retVal;
	}

	/******************************************
	 * 평가범주 신호등 링크
	 ******************************************/
	function linkSignalBossMetric(cellvalue, options, rowObject) {
		var retVal = "";
		if( "" != rowObject.BOSS_METRIC_ID ){
			retVal = "<a href=javascript:goBossMetricPop(" + options.rowId + ")><img name=\'sig\'  src=\'$!{img_path}/common/ball/ball_" + rowObject.BOSS_METRIC_STATUS + ".gif\' > " + cellvalue + '<//a>';
		}else {
			retVal = cellvalue;
		}
		return  retVal;
	}

	/******************************************
	 * 경영평가지표 신호등 링크
	 ******************************************/
	function linkSignalMetric(cellvalue, options, rowObject) {
		return  '<a href=javascript:goMetricPop(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 기관장 지표정의서  팝업
	 ******************************************/
	function goBossMetricPop(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear = J("#findYear").val();
		var findBossMetricId = ret.BOSS_METRIC_ID;

		var param = "&amp;year=" + findYear + "&amp;bossMetricId=" + findBossMetricId ;

		var url = "$!{context_path}/gov/bos/bosMetric/popMetricDetail.vw?type=popup" + param;
		openWinByName(url,'popBosMetricDefine','860','650','yes');
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goMetricPop(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		var metricId = ret.METRIC_ID;
		var scDeptId = ret.SC_DEPT_ID;
		var year = J("#findYear :selected").val();

		var param = "&amp;year=" + year +"&amp;findYear=" + year + "&amp;metricId=" + metricId + "&amp;findScDeptId=" + scDeptId;

		var url = "$!{context_path}/bsc/mon/metricDefine/metricDefineList.vw?type=popup" + param;
		openWinByName(url,'MetricDefinePop','1250','650','yes');
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var bossMetricIds = "";
		var metricIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					bossMetricIds += rowdata.BOSS_METRIC_ID + '|';metricIds += rowdata.METRIC_ID + '|';
				}
			});
		}

		J("#bossMetricIds").val(bossMetricIds);J("#metricIds").val(metricIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/bos/actualMon/actualMonProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/bos/actualMon/actualMonListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

