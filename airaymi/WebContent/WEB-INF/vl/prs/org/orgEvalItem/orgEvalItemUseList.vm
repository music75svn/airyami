<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/org/orgEvalItem/orgEvalItemUseList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['세부평가ID','$!{ORG_EVAL_ITEM_NM}명', '부서코드','$!{DEPT_NM}', '평가타입','평가분야'],
			colModel     :[
                            {name:'ORG_EVAL_ITEM_ID'     ,index:'ORG_EVAL_ITEM_ID'  ,width:200   ,align:'left' }, 
                            {name:'ORG_EVAL_ITEM_NM'     ,index:'ORG_EVAL_ITEM_NM'  ,width:200   ,align:'left' }, 
                            {name:'DEPT_CD'      	     ,index:'DEPT_CD'       	,width:170   ,align:'left' },
                            {name:'DEPT_NM'      	     ,index:'DEPT_NM'       	,width:170   ,align:'left' },
							{name:'EVAL_TYPE'         	 ,index:'EVAL_TYPE'      	,width:100   ,align:'center' },
							{name:'EVAL_TYPE_NM'         ,index:'EVAL_TYPE_NM'      ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			cmTemplate	 : {sortable:false},
			gridview     : true,
/*			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
									var rowdata = J("#list").getRowData(ids[index]);
    								if(rowdata.COUNT != 0) { //비교조건 대상 컬럼
										J(":checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
*/                           
			caption:"데이터리스트"
		}).jqGrid('hideCol',"ORG_EVAL_ITEM_ID").jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"EVAL_TYPE").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});
        
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("input[name=findOrgEvalItemId]").val("");
			J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemList.vw?type=template").submit();
		});
		
		/******************************************
		 * 조직별 선택팝업
		 ******************************************/
		J("#btnSelect").click(function() {
			popSelDept();
			return false;
		});
		
		/******************************************
		 * 세부평가 항목 삭제
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();
	});

	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemUseList.vw?type=template").submit();
	}
	
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var orgEvalItemIds = "";
		var deptCds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					orgEvalItemIds += rowdata.ORG_EVAL_ITEM_ID + '|';
					deptCds += rowdata.DEPT_CD + '|';
				}
			});
		}

		J("#orgEvalItemIds").val(orgEvalItemIds);
		J("#deptCds").val(deptCds);
		J("#mode").val("DELETE");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 조직선택
	 ******************************************/
	function popSelDept() {
		var findYear = J("#findYear").val();
		var findOrgEvalItemId = J("#findOrgEvalItemId").val();
		J("#anchor").attr("href","$!{context_path}/prs/org/orgEvalItem/popEvalItemCopy.vw?findYear="+findYear+"&amp;findOrgEvalItemId="+findOrgEvalItemId);
		J("#anchor").click();
	}
	
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#year").val(J("#findYear").val());
		J("#orgEvalItemId").val(J("#findOrgEvalItemId").val());
		J("#mode").val("DISTRIBUTE");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemProcess.vw?type=template").submit();
	}
 
//]]>
</script>

