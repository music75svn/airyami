                            {name:'YEAR_GOAL'           ,index:'YEAR_GOAL'             ,width:150   ,align:'center' },
                            {name:'WEIGHT'              ,index:'WEIGHT'                ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
				if("$!{searchMap.txt2html("metricId")}" != ""){
					goActualMngAction("$!{searchMap.txt2html("metricId")}", "$!{searchMap.txt2html("metricNm")}", "$!{searchMap.txt2html("evalCycleId")}");
