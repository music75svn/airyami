#set($curr_url = $!{context_path} + "/prs/eval/evalGroup/evalGroupList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/eval/evalItem/evalItemList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가항목 코드', '평가항목 명', '평가방법ID', '평가방법', '설명', 'EVAL_GRP_CNT' ],
			colModel     :[
							{name:'YEAR'			,index:'YEAR'				,width:150		,align:'center'	},
							{name:'EVAL_ITEM_ID'	,index:'EVAL_ITEM_ID'		,width:100		,align:'center' }, 
                            {name:'EVAL_ITEM_NM'	,index:'EVAL_ITEM_NM'		,width:250		,align:'left'		,formatter:linkUpdate	}, 
							{name:'EVAL_METHOD_ID'	,index:'EVAL_METHOD_ID'		,width:50		,align:'center' },
                            {name:'EVAL_METHOD_NM'	,index:'EVAL_METHOD_NM'		,width:150		,align:'left'	}, 
                            {name:'CONTENT'			,index:'CONTENT'			,width:400		,align:'left'	},
							{name:'EVAL_GRP_CNT'	,index:'EVAL_GRP_CNT'		,width:150		,align:'left'	}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.EVAL_GRP_CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"평가항목"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_METHOD_ID").jqGrid('hideCol',"EVAL_GRP_CNT").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});
	
	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(){
		if('$!{CS_HTML.txt2html($evalDegreeId)}' == ''){
			J.showMsgBox("평가일정이 등록되어 있지 않습니다. 평가일정을 먼저 등록해 주십시요.", null, null);
			return;
		}
		
		J("#evalDegreeId").val('$!{CS_HTML.txt2html($evalDegreeId)}');
		
		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalItem/evalItemModify.vw?type=template").submit();	
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
	/*
		if('$!{CS_HTML.txt2html($confirmYn)}' == 'Y'){
			J.showMsgBox("평가가 확정되어 평가군을 수정할수 없습니다.", null, null);
			return;
		}
		
		if('$!{CS_HTML.txt2html($closeYn)}' == 'Y'){
			J.showMsgBox("평가가 마감되어 평가군을 수정할수 없습니다.", null, null);
			return;
		}
	*/
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#evalItemId").val(ret.EVAL_ITEM_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalItem/evalItemModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		/*
		if('$!{CS_HTML.txt2html($confirmYn)}' == 'Y'){
			J.showMsgBox("평가가 확정되어 평가군을 삭제할수 없습니다.", null, null);

		} else if('$!{CS_HTML.txt2html($closeYn)}' == 'Y'){
			J.showMsgBox("평가가 마감되어 평가군을 삭제할수 없습니다.", null, null);
			
		}else*/ if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalItemIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalItemIds += rowdata.EVAL_ITEM_ID + '|';
				}
			});
		}
        
		J("#evalItemIds").val(evalItemIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalItem/evalItemProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#evalDegreeNm").val(J("#findEvalDegreeId > option:selected").text());
		J("#evalDegreeId").val(J("#findEvalDegreeId > option:selected").val());
		J("#useNm").val(J("#findUseYn > option:selected").text());
		J("#useYn").val(J("#findUseYn > option:selected").val());
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalGroup/evalGroupListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

