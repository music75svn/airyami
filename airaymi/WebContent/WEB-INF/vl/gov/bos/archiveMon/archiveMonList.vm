<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/bos/archiveMon/archiveMonList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가범주', '평가지표', '가중치', '기관평가가중치', '주관부서', '담당자', 'GRP_CNT', 'GRP_NUM', 'BOSS_METRIC_ID'],
			colModel     :[
							{name:'EVAL_CAT_GRP_NM'         ,index:'EVAL_CAT_GRP_NM'        ,width:150   ,align:'center' ,sortable:false,	cellattr:attrSetting},
                            {name:'BOSS_METRIC_NM'       	,index:'BOSS_METRIC_NM'       	,width:300   ,align:'left'   ,sortable:false,	formatter:linkUpdate},
                            {name:'BOSS_WEIGHT'      		,index:'BOSS_WEIGHT'      		,width:120   ,align:'center' ,sortable:false},
                            {name:'GOV_WEIGHT'       		,index:'GOV_WEIGHT'       		,width:120   ,align:'center' ,sortable:false},
                            {name:'SC_DEPT_NM'        		,index:'SC_DEPT_NM'        		,width:150   ,align:'center' ,sortable:false},
                            {name:'INSERT_USER_NM'          ,index:'INSERT_USER_NM'         ,width:120   ,align:'center' ,sortable:false},
                            {name:'GRP_CNT'               	,index:'GRP_CNT'               	,width:150   ,align:'center' },
                            {name:'GRP_NUM'             	,index:'GRP_NUM'             	,width:150   ,align:'center' },
                            {name:'BOSS_METRIC_ID'       	,index:'BOSS_METRIC_ID'       	,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption      :"기관장지표총괄표",
			footerrow	 : true,
			userDataOnFooter : true,
			loadComplete : function() {
								var grid = J("#list");
                				grid.jqGrid('footerData', 'set', {EVAL_CAT_GRP_NM:"총계"});
								calculateSumGridColumn(grid,"BOSS_WEIGHT");
								calculateSumGridColumn(grid,"GOV_WEIGHT");
						   }
		}).jqGrid('hideCol',"GRP_CNT").jqGrid('hideCol',"GRP_NUM").jqGrid('hideCol',"BOSS_METRIC_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});


		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/*****************************************
	 * 전략과제 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.GRP_NUM;
		var rowSpan = rowObject.GRP_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goBossMetricPop(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 기관장 지표정의서  팝업
	 ******************************************/
	function goBossMetricPop(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear = J("#findYear").val();
		var findBossMetricId = ret.BOSS_METRIC_ID;

		var param = "&amp;year=" + findYear + "&amp;bossMetricId=" + findBossMetricId ;

		var url = "$!{context_path}/gov/bos/bosMetric/popMetricDetail.vw?type=popup" + param;
		openWinByName(url,'popBosMetricDefine','860','650','yes');
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#bossMetricId").val(ret.BOSS_METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/bos/archiveMon/archiveMonModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var bossMetricIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					bossMetricIds += rowdata.BOSS_METRIC_ID + '|';
				}
			});
		}

		J("#bossMetricIds").val(bossMetricIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/bos/archiveMon/archiveMonProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/bos/archiveMon/archiveMonListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

