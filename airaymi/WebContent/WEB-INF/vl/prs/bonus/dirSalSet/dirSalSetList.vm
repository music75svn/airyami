#set($curr_url = $!{context_path} + "/prs/bonus/dirSalSet/dirSalSetList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/bonus/dirSalSet/dirSalSetList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '사번', '이름', '직급코드', '직급', '직위코드', '직위','입사일', '평가근무시작일','평가근무종료일','퇴직일', '재직구분','근무기간(월)', '지급률(%)', '기본연봉(원)','비고'],
			colModel     :[
							{name:'YEAR'				,index:'YEAR'				,width:80   ,align:'center' },
                            {name:'EMPN'				,index:'EMPN'				,width:80   ,align:'center' },
                            {name:'KOR_NM'				,index:'KOR_NM'				,width:80   ,align:'center' },
                            {name:'CAST_TC'				,index:'CAST_TC'			,width:80   ,align:'center' },
							{name:'CAST_TC_NM'			,index:'CAST_TC_NM'			,width:80   ,align:'center' },
							{name:'POS_TC'				,index:'POS_TC'				,width:80   ,align:'center' },
							{name:'POS_TC_NM'			,index:'POS_TC_NM'			,width:100   ,align:'center'},
                            {name:'ORG_PCMT_DATE'		,index:'ORG_PCMT_DATE'		,width:100   ,align:'center'},
                            {name:'START_PCMT_DATE'		,index:'START_PCMT_DATE'	,width:120   ,align:'center'},
                            {name:'END_PCMT_DATE'		,index:'END_PCMT_DATE'		,width:120   ,align:'center'},
                            {name:'ORG_END_DATE'		,index:'ORG_END_DATE'		,width:100   ,align:'center'},
                            {name:'PCMT_TC_NM'			,index:'PCMT_TC_NM'			,width:80   ,align:'center' },
                            {name:'WORK_MON'			,index:'WORK_MON'			,width:80   ,align:'center' },
                            {name:'RATE'				,index:'RATE'				,width:80   ,align:'center' },
                            {name:'SALARY'				,index:'SALARY'				,width:100   ,align:'right' 	},
                            {name:'CONTENT'				,index:'CONTENT'			,width:150   ,align:'center'}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가군"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"CAST_TC").jqGrid('hideCol',"POS_TC").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
         * 엑셀업로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnDirSalUpload").click(function() {
            J.showConfirmBox("엑셀업로드를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "excelUpload");
            return false;
        });

        /******************************************
         * fancy Box 팝업호출
         ******************************************/
        J("#anchor").fancybox();            //엑셀업로드 팝업

	});

	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(){

		J("#year").val(J("#findYear").val());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/prs/bonus/dirSalSet/dirSalSetModify.vw?type=template").submit();
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/prs/bonus/dirSalSet/dirSalSetListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
     * 임원연봉설정 엑셀업로드
     ******************************************/
    function excelUpload(){

        var year = J("#findYear").val();
        var findHighPgmId = J("#findHighPgmId").val();
        var findSubPgmId = J("#findSubPgmId").val();
        var findPgmId = J("#findPgmId").val();
        J("#anchor").attr("href","$!{context_path}/prs/bonus/dirSalSet/popExcelUpload.vw?findYear=" + year  +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId);
        J("#anchor").click();
    }

//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">임원연봉설정</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")

    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/prs/bonus/dirSalSet/dirSalSetList.vw?type=template">
				<input type="hidden"    id="findHighPgmId"  name="findHighPgmId"    value="$!{searchMap.txt2html("findHighPgmId")}" />
