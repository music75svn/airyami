#set($curr_url = $!{context_path} + "/mem/base/memUser/memModifyEmpList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/base/memUser/memModifyEmpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '사번', '평가대상자', '부서코드', '부서', '직급코드', '직급', '직위코드', '직위', '부서코드', '부서', '직급코드', '직급', '직위코드', '직위'],
			colModel     :[
							{name:'YEAR'                    ,index:'YEAR'                ,width:0     ,align:'center' },
                            {name:'EMP_NO'                  ,index:'EMP_NO'              ,width:0     ,align:'center' },
                            {name:'EMP_NM'                  ,index:'EMP_NM'              ,width:100   ,align:'center' },
							{name:'DEPT_CD'                 ,index:'DEPT_CD'             ,width:0     ,align:'center' },
                            {name:'DEPT_NM'                 ,index:'DEPT_NM'             ,width:150   ,align:'left' },
							{name:'CAST_TC'                 ,index:'CAST_TC'             ,width:0     ,align:'center' },
                            {name:'CAST_NM'                 ,index:'CAST_NM'             ,width:100   ,align:'center' },
							{name:'POS_TC'                  ,index:'POS_TC'              ,width:0     ,align:'center' },
                            {name:'POS_NM'                  ,index:'POS_NM'              ,width:100   ,align:'center' },
							{name:'BSC_DEPT_CD'             ,index:'BSC_DEPT_CD'         ,width:0     ,align:'center' },
                            {name:'BSC_DEPT_NM'             ,index:'BSC_DEPT_NM'         ,width:150   ,align:'left' },
							{name:'BSC_CAST_TC'             ,index:'BSC_CAST_TC'         ,width:0     ,align:'center' },
                            {name:'BSC_CAST_NM'             ,index:'BSC_CAST_NM'         ,width:100   ,align:'center' },
							{name:'BSC_POS_TC'              ,index:'BSC_POS_TC'          ,width:0     ,align:'center' },
                            {name:'BSC_POS_NM'              ,index:'BSC_POS_NM'          ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
				  },
			caption:"평가대상자관리 변경정보조회"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EMP_NO").jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"BSC_DEPT_CD")
		.jqGrid('hideCol',"CAST_TC").jqGrid('hideCol',"POS_TC").jqGrid('hideCol',"BSC_CAST_TC").jqGrid('hideCol',"BSC_POS_TC")
		.setGridWidth($!{jqGrid_width});

		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true,
          groupHeaders:[
			 {startColumnName: 'DEPT_NM',		numberOfColumns: 5, titleText: '<em>인사발령전</em>'}
			,{startColumnName: 'BSC_DEPT_NM',	numberOfColumns: 5, titleText: '<em>인사발령후</em>'}
		  ]
        });

		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#formList").attr("action", "$!{context_path}/mem/base/memUser/memUserList.vw?type=template").submit();
		});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		/******************************************
		 * 적용
		 ******************************************/
		J("#btnApply").click(function() {
			goApply();
			return false;
		});
		
		/******************************************
         * 평가대상자관리 변경정보조회 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            ExcelDownload();
            return false;
        });
	});
	
	/******************************************
     * 평가대상자관리 엑셀다운로드
     ******************************************/
    function ExcelDownload(){
        J("#modifyGubunNm").val(J("#findModifyGubun > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/mem/base/memUser/memModifyMemExcel.vw?type=excel").submit();
        return false;
    }
    
	/******************************************
	 * 적용
	 ******************************************/
	function goApply() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("적용할 데이터를 선택하십시요", null, null);
		} else {
    		J.showConfirmBox("적용하시겠습니까?", "applyDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 적용처리
	 ******************************************/
	function applyDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var empNos = "";
		var bscDeptCds = "";
		var bscCastTcs = "";
		var bscPosTcs = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					empNos += rowdata.EMP_NO + '|';
					bscDeptCds += rowdata.BSC_DEPT_CD + '|';
					bscCastTcs += rowdata.BSC_CAST_TC + '|';
					bscPosTcs += rowdata.BSC_POS_TC + '|';
				}
			});
		}
			
		J("#empNos").val(empNos);
		J("#bscDeptCds").val(bscDeptCds);
		J("#bscCastTcs").val(bscCastTcs);
		J("#bscPosTcs").val(bscPosTcs);
		J("#mode").val("APPLY");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/base/memUser/memModifyEmpProcess.vw?type=template").submit();
		return false;
	}

//]]>
</script>

