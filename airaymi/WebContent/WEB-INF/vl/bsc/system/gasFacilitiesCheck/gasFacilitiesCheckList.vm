#set($curr_url = $!{context_path} + "/bsc/system/gasFacilitiesCheck/gasFacilitiesCheckList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/gasFacilitiesCheck/gasFacilitiesCheckList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['부서명', '검사주기', '항목', '대분류', '중분류', '처리건수'],
			colModel     :[
                            {name:'DEPT_NM'       		,index:'DEPT_NM'     		,width:60   ,align:'center' },
                            {name:'INSP_KIND_TC_NM' 	,index:'INSP_KIND_TC_NM' 	,width:60   ,align:'center' },
                            {name:'ROLE_TC_NM' 			,index:'ROLE_TC_NM' 		,width:60   ,align:'center' },
                            {name:'STIC_LAG_TC_NM' 		,index:'STIC_LAG_TC_NM' 	,width:60   ,align:'center' },
                            {name:'STIC_MID_TC_NM' 		,index:'STIC_MID_TC_NM' 	,width:60   ,align:'center' },
                            {name:'REQ_QTY'  			,index:'REQ_QTY'  			,width:60   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate   : {sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
    								if(J(rowdata.ITEM_CNT).text() != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"시스템항목관리"
		});

		/******************************************
		 * 항목명 포커스
		 ******************************************/
		J("#findItemNm").select();

		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});

	});

	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/bsc/system/gasFacilitiesCheck/gasFacilitiesCheckList.vw?type=template").submit();
	}

//]]>
</script>

