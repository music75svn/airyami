			chgEvalGrp();
		});

	});

	/******************************************
	 * 년도별 평가단 조회
	 ******************************************/
	function chgEvalGrp(){
		J.ajax({
        	url      : "$!{context_path}/bsc/level/evalStatus/userGroupList_ajax.vw",
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalUserGrpId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserGrpId');
				})
			}
    	});
	}

	/******************************************
	 * 평가마감
	 ******************************************/
	function goClose() {
	    if(J("#findEvalUserGrpId").val() == null || J("#findEvalUserGrpId").val() == ""){
			J.showMsgBox("평가마감할 평가단을 선택하십시요", null, null);
		} else {
			var magamChk 	= true;


			if(parseInt(J("#userCnt").val())>0){
				if(J("#userCnt").val() != J("#submitCnt").val()){
					J.showMsgBox("평가군에 평가자가 모두 제출되어야 <br>마감할 수 있습니다.", null, null);
					magamChk 	= false;
					return false;
				}
			}else{
				J.showMsgBox("평가군에 등록된 평가자가 없어 <br>마감할 수 없습니다.", null, null);
				magamChk 	= false;
				return false;
			}

			if(magamChk){
				J.showConfirmBox("선택한 평가군을 마감하시겠습니까?", "execDo"); //execDo() 콜백함수 호출
			}
		}
	}

	/******************************************
	 * 평가마감 실행
	 ******************************************/
	function execDo(){
		J("#year").val(J("#findYear").val());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#closeYn").val("Y");
		J("#mode").val("CLOSE");
		J("#formList").attr("action", "$!{context_path}/bsc/level/evalStatus/evalStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 평가마감취소
	 ******************************************/
	function goCancle(){
		J("#year").val(J("#findYear").val());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#closeYn").val("N");
		J("#mode").val("CLOSE");
		J("#formList").attr("action", "$!{context_path}/bsc/level/evalStatus/evalStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 평가군 마감정보 가져오기
	 ******************************************/
	function getEvalStatusInfo() {
		var findYear 			= J("#findYear").val();
		var findEvalUserGrpId 	= J("#findEvalUserGrpId").val();

		J.ajax({
			url        : "$!{context_path}/bsc/level/evalStatus/evalStatusInfo_ajax.vw",
        	type       : "POST",
			data       : "findYear=" + findYear + "&amp;findEvalUserGrpId=" + findEvalUserGrpId,
        	dataType   : "xml",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success    : function (xml) {
				var evalUserGrpId = "";
				var evalUserGrpNm = "";
				var evalClosingYn = "";

				if(J(xml).find("items").find("item").length > 0) {
					J(xml).find("items").find("item").each(function() {
						evalUserGrpId = J(this).find("evalUserGrpId").text();
						evalUserGrpNm = J(this).find("evalUserGrpNm").text();
						evalClosingYn = J(this).find("evalClosingYn").text();

						J("#evalClosingYn").val(evalClosingYn);
                    });
				}
				//버튼설정
				buttonEnableSet(evalClosingYn);
        	},
			error : function(xhr, status, error) {
				alert(error);
			}
    	});
	}

	/******************************************
	 * 버튼 설정
	 ******************************************/
	function buttonEnableSet(evalClosingYn) {
		if(evalClosingYn=='Y'){
			J("#bClosingY").hide(); //평가마감
			J("#bClosingN").show(); //마감취소
		}else if(evalClosingYn=='N'){
		    J("#bClosingY").show(); //평가마감
			J("#bClosingN").hide(); //마감취소
		}
	}

	/******************************************
	 * 메일발송 팝업
	 ******************************************/
	function mailWrite(){
		var list = "";
		var id = "";
		var ids = "";
		var rowdata = "";
		var toMail = "";
		var toName = "";
		var toNameList = "";

		list = "list";
		id = J("#list").getGridParam('selarrrow');
		ids = J("#list").jqGrid('getDataIDs');

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#"+ list).getRowData(ids[i]);
					if(rowdata.EMAIL != '' && rowdata.EMAIL != null) {
    					toMail += rowdata.EMAIL + "|";

						toName += rowdata.USER_NM + "|";
						toNameList += rowdata.USER_NM + "<" + rowdata.EMAIL + ">;";
    				}
				}
			});
		}

		if(!J.gridSelectChk(list)){
			J.showMsgBox("메일을 전송할 대상자를 선택하십시요", null, null);
		} else {
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
    	}
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#evalUserGrpNm").val(J("#findEvalUserGrpId :selected").text());
		J("#evalSubmitYn").val(J("#findEvalSubmitYn").val());
		J("#evalSubmitYnNm").val(J("#findEvalSubmitYn :selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/level/evalStatus/evalStatusListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

