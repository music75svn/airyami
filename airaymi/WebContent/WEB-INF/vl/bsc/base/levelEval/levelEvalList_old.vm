	 ******************************************/
	function calcul(obj) {
		var sum_score = 0;
		var score1 = "";
		var score2 = "";
		var score3 = "";
		
		var ids = J("#list").jqGrid('getDataIDs');
		
		for (var i = 0; i < ids.length; i++) {
			var cnt = 0;

			if (J("input[name='score1']").eq(i).val() != "") {
				score1 = J("input[name='score1']").eq(i).val();
				cnt++;
			} else {
				score1 = 0;
			}
			
			if (J("input[name='score2']").eq(i).val() != "") {
				score2 = J("input[name='score2']").eq(i).val();
				cnt++;
			} else {
				score2 = 0;
			}
			
			if (J("input[name='score3']").eq(i).val() != "") {
				score3 = J("input[name='score3']").eq(i).val();
				cnt++;
			} else {
				score3 = 0;
			}
			
			if (J("input[name='score4']").eq(i).val() != "") {
				score3 = J("input[name='score4']").eq(i).val();
				cnt++;
			} else {
				score4 = 0;
			}
			
			if (score1 == 0 && score2 == 0 && score3 == 0) {
				J("#list").jqGrid('setCell', ids[i], "TOT_SCORE", null);
			} else if(score1 == "" && score2 == "" && score3 == "") {
				J("#list").jqGrid('setCell', ids[i], "TOT_SCORE", null);
			} else {
				sum_score = parseFloat(score1) + parseFloat(score2) + parseFloat(score3)
				J("#list").jqGrid('setCell', ids[i], "TOT_SCORE", sum_score);
			
			#set ($idx = 0)
