#set($curr_url = $!{context_path} + "/cbe/exc/excludeUser/excludeUserUseList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/cbe/exc/excludeUser/excludeUserUseList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['사번', '이름', '평가차수', '직급', '직위', '부서', '근무기간'],
			colModel     :[
                            {name:'EMPN'          		,index:'EMPN'          		,width:100   ,align:'center' },
							{name:'KOR_NM'           	,index:'KOR_NM'          	,width:100   ,align:'center' },
							{name:'EVAL_DEGREE_ID'      ,index:'EVAL_DEGREE_ID'     ,width:100   ,align:'center' },
							{name:'CAST_TC_NM'          ,index:'CAST_TC_NM'         ,width:100   ,align:'center' },
							{name:'POS_TC_NM'          	,index:'POS_TC_NM'          ,width:120   ,align:'center' },
                            {name:'DEPT_KOR_NM'         ,index:'DEPT_KOR_NM'        ,width:120   ,align:'center' },
                            {name:'TOT_MON'           	,index:'TOT_MON'           	,width:120   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가군"
		}).setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			goInsert();
			return false;
		});


		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#formList").attr("action", "$!{context_path}/cbe/exc/excludeUser/excludeUserList.vw?type=template").submit();
		});

	});

	/******************************************
	 * jqGrid 신규페이지 링크
	 ******************************************/
	function goInsert(rowId){

		J("#year").val(J("#findYear").val());
		J("#codeId").val(J("#codeId").val());
		J("#mode").val("ADD");
		J("#formList").attr("action", "$!{context_path}/cbe/exc/excludeUser/excludeUserUseModify.vw?type=template").submit();
	}


//]]>
</script>

