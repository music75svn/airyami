<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/gov/office/office/officeList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#content").checkbyte({
			indicator:J("#contentIndicator"),
			limit:2000
		});
		J("#content").trigger("keyup");

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("officeNm", "공공기관 기관명", 1, 50)) {
			return;
		}

		if(J("#officeEvalGrpId").val() == "") {
			J.showMsgBox("공공기관 평가군코드를 선택해 주십시요", null, "officeEvalGrpId");
			return;
		}

	
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/gov/office/office/officeProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
<form id="form1" name="form1" method="post" action="$!{context_path}/gov/office/office/officeProcess.vw?type=template">
    <input type="hidden" 	id="mode"		    name="mode"		      value="$!{searchMap.txt2html("mode")}" />
	<input type="hidden"	id="year"           name="year"           value="$!{searchMap.txt2html("year")}" />
	<input type="hidden"	id="officeId"       name="officeId"       value="$!{searchMap.txt2html("officeId")}" />

    $!{searchMap.makeHiddenFind()}
	
    <div id="Table">
    	<div id="Table_blockContainer">
    		<div class="tableTop">
    			#parse("/WEB-INF/vl/common/template/tabs.vm")
    			<div class="clear"></div>
    		</div>
			<div class="tableTop">
                <!-- 검색 테이블 Start -->
                <div class="searchBox">
                <div><div><div>   
                    <table summary="검색조건">        
                        <caption class="none">검색조건</caption>
                        <thead><tr><th></th><th></th></tr></thead>
                        <tbody>
                            <tr>
								<td class="searchBox_tit w250">$!{YEAR} <span class="searchBar">$!{searchMap.txt2html("findYear")}년</span></td>
							</tr>
                        </tbody>
                    </table>
                </div></div></div>
                </div>
                <!--// 검색 테이블 End -->
                <div class="clear"></div>
            </div>
    		<div class="blockDetail">
    			<table summary="공공기관 등록">
					<caption class="none">공공기관 등록</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
						<tr>
							<th scope="row"><label for="officeEvalGrpId">공공기관 코드</label></th>
							<td>
								#if($!{searchMap.txt2html("mode")} == "MOD")
									$!{CS_HTML.txt2html($detail.OFFICE_ID)}
								#else
									※ 저장시 자동으로 부여됩니다.
								#end
							</td>
						</tr>
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="officeNm">공공기관</label></th>
							<td><input type="text" id="officeNm" name="officeNm" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.OFFICE_NM)}' maxlength="50"/></td>
						</tr>
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="officeEvalGrpId">공공기관 평가군코드</label></th>
							<td>
								<select id="officeEvalGrpId" name="officeEvalGrpId" class="select w200">
									#if ( 0 < $officeGrplist.size() )
										#foreach($list in $officeGrplist)
										<option value="$!{CS_HTML.txt2html($list.OFFICE_EVAL_GRP_ID)}" $!{CS_HTML.getSelected($!{CS_HTML.txt2html($list.OFFICE_EVAL_GRP_ID)}, $!{CS_HTML.txt2html($detail.OFFICE_EVAL_GRP_ID)})}>$!{CS_HTML.txt2html($list.OFFICE_EVAL_GRP_NM)}</option>
										#end
									#end
    							</select>
							</td>
						</tr>
						<tr>
							<th scope="row"><label for="content">기타</label></th>
							<td>
								<textarea id="content" name="content" class="tabletext" title="기타" cols="" rows="10">$!{CS_HTML.txt2html($detail.CONTENT)}</textarea>
								<span id="contentIndicator">0</span>/2000byte
							</td>
						</tr>
						<tr>
							<th scope="row"><label for="sortOrder">정렬순서</label></th>
							<td><input type="text" id="sortOrder" name="sortOrder" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.SORT_ORDER)}' maxlength="22"/></td>
						</tr>

    				</tbody>
    			</table>
    		</div>
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnBack"   value="돌아가기" /></li>
    				<li><input type="submit" id="btnInsert" value="저장" /></li>
    			</ul>
    		</div>	
    	</div>
    	<div class="clear"></div>
    </div>
</form>
