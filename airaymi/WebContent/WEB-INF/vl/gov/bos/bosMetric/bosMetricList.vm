#set($curr_url = $!{context_path} + "/gov/bos/bosMetric/bosMetricList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/bos/bosMetric/bosMetricList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가범주', '기관장 지표 코드', '평가지표', '지표유형', '평가방법', '주관부서', '담당자', '연계지표'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'EVAL_CAT_GRP_NM'      ,index:'EVAL_CAT_GRP_NM'      ,width:150   ,align:'center' },
                            {name:'BOSS_METRIC_ID'       ,index:'BOSS_METRIC_ID'       ,width:150   ,align:'center' },
                            {name:'BOSS_METRIC_NM'       ,index:'BOSS_METRIC_NM'       ,width:150   ,align:'center' ,formatter:linkUpdate},
                            {name:'GBN_NM'               ,index:'GBN_NM'               ,width:150   ,align:'center' },
                            {name:'EVAL_METHOD_NM'       ,index:'EVAL_METHOD_NM'       ,width:150   ,align:'center' },
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:150   ,align:'center' },
                            {name:'INSERT_USER_NM'       ,index:'INSERT_USER_NM'       ,width:150   ,align:'center' },
                            {name:'MAPPED_CNT'           ,index:'MAPPED_CNT'           ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   :{sortable:false},
			caption:"기관장지표"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"BOSS_METRIC_ID").jqGrid('hideCol',"MAPPED_CNT").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/bos/bosMetric/bosMetricModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#bossMetricId").val(ret.BOSS_METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/bos/bosMetric/bosMetricModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var bossMetricIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					bossMetricIds += rowdata.BOSS_METRIC_ID + '|';
				}
			});
		}

		J("#bossMetricIds").val(bossMetricIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/bos/bosMetric/bosMetricProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#year").val(J("#findYear").val());
		J("#useYn").val(J("#findUseYn").val());
		J("#useYnNm").val(J("#findUseYn option:selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/bos/bosMetric/bosMetricListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

