			J.showMsgBox("주기를 선택해 주십시요", null, "evalCycle");
			return;
		}
		
		if(J("#poolGubun").val() == "") {
			J.showMsgBox("Pool구분을 선택해 주십시요", null, "poolGubun");
			return;
		}

		if(J("#timeRollup").val() == "") {
			J.showMsgBox("기간합산을 선택해 주십시요", null, "timeRollup");
			return;
		}

		if(J("#typeId").val() == "01"){ //정량지표일 경우
    		if(J("#unit").val() == "") {
    			J.showMsgBox("단위를 선택해 주십시요", null, "unit");
    			return;
    		}
		}

		if(J("#typeId").val() == "01"){ //정량지표일 경우
