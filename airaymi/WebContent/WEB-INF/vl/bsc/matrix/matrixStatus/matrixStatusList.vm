                            {name:'USER_NM'              ,index:'USER_NM'              ,width:150   ,align:'center' },
                            {name:'DEPT_ID'              ,index:'DEPT_ID'              ,width:150   ,align:'center' },
                            {name:'DEPT_NM'              ,index:'DEPT_NM'              ,width:150   ,align:'center' },
                            {name:'JIKGUB_NM'            ,index:'JIKGUB_NM'            ,width:150   ,align:'center' },
                            {name:'POS_NM'               ,index:'POS_NM'               ,width:150   ,align:'center' },
                            {name:'EMAIL'                ,index:'EMAIL'                ,width:150   ,align:'center' },
                            {name:'EVAL_USER_GRP_ID'     ,index:'EVAL_USER_GRP_ID'     ,width:150   ,align:'center' },
                            {name:'EVAL_USER_GRP_NM'     ,index:'EVAL_USER_GRP_NM'     ,width:150   ,align:'center' },
                            {name:'EVAL_SUBMIT_YN'       ,index:'EVAL_SUBMIT_YN'       ,width:150   ,align:'center' },
							{name:'SUBMIT_YN'            ,index:'SUBMIT_YN'            ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
								getEvalUserInfo(); //평가군 마감정보 가져오기
								 },
			gridview     : true,
			caption:"평가진행현황"
		}).jqGrid('hideCol',"USER_ID").jqGrid('hideCol',"DEPT_ID").jqGrid('hideCol',"POS_NM").jqGrid('hideCol',"EMAIL").jqGrid('hideCol',"EVAL_USER_GRP_ID").jqGrid('hideCol',"SUBMIT_YN").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
