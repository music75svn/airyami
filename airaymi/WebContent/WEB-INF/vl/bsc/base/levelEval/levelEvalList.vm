#set($curr_url = $!{context_path} + "/bsc/base/levelEval/levelEvalList.vw")
<script type="text/javascript" language="javascript">
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
	 	var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/base/levelEval/levelEvalList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colNames     :[ '지표코드', '지표명', '지표그룹ID', '평가조직코드', '지표유형', '평가여부',
							#foreach($list in $codelist)
							'$!{CS_HTML.txt2html($list.CODE_NM)}',
							#end
							'총점','가중치'],
			colModel     :[
							{name:'METRIC_ID'			,index:'METRIC_ID'			,width:50    ,align:'left'   },
							{name:'METRIC_NM'           ,index:'METRIC_NM'			,width:200   ,align:'left'   },
							{name:'METRIC_GRP_ID'		,index:'METRIC_GRP_ID'		,width:50    ,align:'center' },
							{name:'SC_DEPT_ID'			,index:'SC_DEPT_ID'			,width:50    ,align:'center' },
							{name:'TYPE_ID'				,index:'TYPE_ID'			,width:40    ,align:'center' },
							{name:'DEGREE_YN'			,index:'DEGREE_YN'			,width:60    ,align:'center' },
							#foreach($list in $codelist)
								#set ($itemId = "EVAL_ITEM_ID_" + $list.CODE_ID)
								#set ($num = $velocityCount)
								{name:'$!{CS_HTML.txt2html($itemId)}', index:'$!{CS_HTML.txt2html($itemId)}', width:50, align:'center', formatter:goScore$num},
							#end
							{name:'TOT_SCORE'			,index:'TOT_SCORE'			,width:60    ,align:'center' },
							{name:'WEIGHT'				,index:'WEIGHT'				,width:60    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			gridview     : true,
			multiselect  : false,
			cellEdit     : true,
			loadComplete : function() {
				J("input:text").numeric({allow:"."});
				J("input:text").css("ime-mode", "disabled"); //한글사용 비활성화
			},
			caption:"조직별난이도평가"
		}).jqGrid('hideCol',"METRIC_ID").jqGrid('hideCol',"METRIC_GRP_ID").jqGrid('hideCol',"SC_DEPT_ID").jqGrid('hideCol',"TYPE_ID").setGridWidth($!{jqGrid_r_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			var findYear = J("#findYear").val();
			var oldYear = J("#oldYear").val();

			if(findYear == oldYear) {
    			goGridSearch();
    			return false;
			}
		});

		/******************************************
         * 저장
         ******************************************/
        J("#btnInsert").click(function(e) {
            e.preventDefault();
        	saveChk();

        });

        /******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
	     * 엑셀업로드 버튼 클릭 이벤트
	     ******************************************/
	    J("#btnExcelUpload").click(function() {
	        J.showConfirmBox("엑셀업로드를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "excelUpload");
	        return false;
	    });

	    /******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();
	});

    /******************************************
     * jqGrid 지표속성 입력
     ******************************************/
    #foreach($list in $codelist)
    	#set($num = $velocityCount)

	    function goScore$num (cellvalue, options, rowObject) {
	    	var str = '';
	    	var ids = "score_" + rowObject.METRIC_ID + "$list.CODE_ID";
			
			#if($CS_LOGIN.chkAuthGrp("01"))
	    		str += '<input type="text" id="' + ids + '" name="' + ids + '" value="' + cellvalue + '" class="inputbox textRight wp50" maxlength="6" />';
	    	#else
	    		str += cellvalue;
	    	#end
	    	
	    	return str;
	    }
    #end

	/******************************************
	 * 조직트리 선택
	 ******************************************/
	function goAction(code, name) {
		var scDeptNm = J(name).text();
		J("#findScDeptId").val(code);
		goGridSearch();
	}

	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/bsc/base/levelEval/levelEvalList_xml.vw?"+J("#formFind").serialize(), datatype:"json"});
		J("#list").trigger("reloadGrid");
	}

	/******************************************
     * 필수입력 체크
     ******************************************/
    function saveChk() {
		var ids	= J("#list").jqGrid('getDataIDs');

		if(ids.length > 0) {
			J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
		}
    }

	/******************************************
     * 저장
     ******************************************/
    function saveDo() {
    	#foreach($list in $codelist)
			#set ($colCnt = $velocityCount)
		#end

    	var ids	= J("#list").jqGrid('getDataIDs');
    	var metricIds = "";
    	var items = "";
    	var scores = "";
    	var selId = "";

    	J("#formList").append('<input type="hidden" id="colCnt" name="colCnt" value="$colCnt">');
    	J("#formList").append('<input type="hidden" id="metricIds" name="metricIds" value="">');
    	J("#formList").append('<input type="hidden" id="scDeptId" name="scDeptId" value="">');

    	for (var i=0; i<ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			metricIds += rowdata.METRIC_ID + '|';
			items = "";
			scores = "";

			J("#formList").append('<input type="hidden" id="item'+i+'" name="item'+i+'" value="">');
			J("#formList").append('<input type="hidden" id="score'+i+'" name="score'+i+'" value="">');

			#foreach($list in $codelist)
				selId = rowdata.METRIC_ID + "$list.CODE_ID";
				items += "$list.CODE_ID" + '|';
				scores += J("#score_" + selId).val() + '|';
			#end

			J("#item"+i).val(items);
			J("#score"+i).val(scores);
		}

        J("#metricIds").val(metricIds);

        J("#mode").val("ADD");
        J("#year").val(J("#findYear").val());
        J("#scDeptId").val(J("#findScDeptId").val());
        J("#formList").attr("action", "$!{context_path}/bsc/base/levelEval/levelEvalProcess.vw?type=template").submit();

        return false;
    }

    /******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#year").val(J("#findYear").val());
		J("#formFind").attr("action", "$!{context_path}/bsc/base/levelEval/levelEvalListExcel.vw?type=excel").submit();
		J("#formFind").attr("action", "$!{context_path}/bsc/base/levelEval/levelEvalList.vw?type=template");
		return false;
	}

	/******************************************
     * 지표별 난이도 설정 엑셀업로드
     ******************************************/
    function excelUpload(){
        var year = J("#findYear").val();
        var findHighPgmId = J("#findHighPgmId").val();
        var findSubPgmId = J("#findSubPgmId").val();
        var findPgmId = J("#findPgmId").val();
        J("#anchor").attr("href","$!{context_path}/bsc/base/levelEval/popExcelUpload.vw?findYear=" + year  +  "&amp;findHighPgmId=" + findHighPgmId + "&amp;findSubPgmId=" + findSubPgmId + "&amp;findPgmId=" + findPgmId + "&amp;year=" + year);
        J("#anchor").click();
    }
//]]>
</script>

