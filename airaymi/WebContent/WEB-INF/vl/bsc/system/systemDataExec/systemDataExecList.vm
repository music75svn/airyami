#set($curr_url = $!{context_path} + "/bsc/system/systemDataExec/systemDataExecList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/systemDataExec/systemDataExecList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가월', '항목코드', '항목코드', '항목코드', '항목명', '최종연계일시', '기준년월', '성공여부', '자동연계여부'
						  ],
			colModel     :[
							{name:'YEAR'         		 ,index:'YEAR'         		   ,width:10    ,align:'center' },
							{name:'MON'         		 ,index:'YEAR'         		   ,width:10    ,align:'center' },
							{name:'ITEM_CDS'             ,index:'ITEM_CDS'             ,width:10    ,align:'center' , formatter:linkItemCd},
                            {name:'ITEM_CD'              ,index:'ITEM_CD'              ,width:70    ,align:'center' },
							{name:'ITEM_CD_PROC'         ,index:'ITEM_CD_PROC'         ,width:10    ,align:'center' },
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:200   ,align:'left'   },
                            {name:'INTERFACE_DT'         ,index:'INTERFACE_DT'         ,width:100   ,align:'center' },
                            {name:'YM'         			 ,index:'YM'         		   ,width:70    ,align:'center' },
                            {name:'RESULT_YN'         	 ,index:'RESULT_YN'            ,width:70    ,align:'center' },
                            {name:'USE_YN'         		 ,index:'USE_YN'         	   ,width:70    ,align:'center' , formatter:goUseYn}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			cmTemplate   : {sortable:true},
			caption:"시스템연계 실행"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"MON").jqGrid('hideCol',"ITEM_CDS").jqGrid('hideCol',"ITEM_CD_PROC").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 연계실행 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExec").click(function() {
			goExec();
			return false;
		});
		
		/******************************************
         * 저장
         ******************************************/
        J("#btnInsert").click(function(e) {
            e.preventDefault();

            saveChk();
        });

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});
	
	/******************************************
     * jqGrid 자동연계여부
     ******************************************/
    function goUseYn(cellvalue, options, rowObject) {
    	
    	var str = "";
     	var ids = "useYn" + options.rowId;
    	
    	if (cellvalue == "Y") {
	    	str += '<input type="radio" id="' + ids + '" name="' + ids + '" value="Y" checked="checked" /> 연계 &nbsp;';
	    	str += '<input type="radio" id="' + ids + '" name="' + ids + '" value="N" /> 미연계 &nbsp;';
    	} else {
    		str += '<input type="radio" id="' + ids + '" name="' + ids + '" value="Y" /> 연계 &nbsp;';
	    	str += '<input type="radio" id="' + ids + '" name="' + ids + '" value="N" checked="checked" /> 미연계 &nbsp;';
    	}
    	
    	return str;
    	
    }

	/******************************************
     * jqGrid 항목번호
     ******************************************/
    function linkItemCd(cellvalue, options, rowObject) {
    	return '<input type="text" name="itemCds" value="' + cellvalue + '" class="wp50" readonly="readonly"/>';
    }      	

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/system/systemDataExec/systemDataExecModify.vw?type=template").submit();
	}

	/******************************************
	 * 연계실행
	 ******************************************/
	function goExec() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("실행할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("실행하시겠습니까?", "execDo"); //execDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 연계실행 처리
	 ******************************************/
	function execDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemCdProc = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					itemCdProc += rowdata.ITEM_CD_PROC + '|';
				}
			});
		}

		J("#itemCdProc").val(itemCdProc);
		J("#mode").val("ADD");
		J("#year").val(J("#findYear").val());
		J("#mon").val(J("#findMon").val());
		J("#formList").attr("action", "$!{context_path}/bsc/system/systemDataExec/systemDataExecProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
     * 필수입력 체크
     ******************************************/
    function saveChk() {
		var ids	= J("#list").jqGrid('getDataIDs');
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
		
    }

    /******************************************
     * 저장
     ******************************************/
    function saveDo() {	
		
        J("#mode").val("MOD");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/bsc/system/systemDataExec/systemDataExecProcess.vw?type=template").submit();
                
        return false;

    }

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#monNm").val(J("#findMon > option:selected").text());
		J("#itemNm").val(J("#findItemNm").val());
		J("#formList").attr("action", "$!{context_path}/bsc/system/systemDataExec/systemDataExecListExcel.vw?type=excel").submit();
		return false;
	}	

//]]>
</script>

