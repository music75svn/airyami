#set($curr_url = $!{context_path} + "/man/man/csf/csfList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/man/man/csf/csfList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '경영목표ID' , '경영목표' , '전략과제ID', '전략과제' , 'CSF코드', 'CSF명', '정렬순서', '개수'],
			colModel     :[
							{name:'YEAR'            ,index:'YEAR'           ,width:150   ,align:'center'	},
                            {name:'MAN_ID'  		,index:'MAN_ID'       	,width:100   ,align:'left'		},
                            {name:'MAN_NM'   		,index:'MAN_NM'       	,width:100   ,align:'left'		},
                            {name:'STRAT_ID' 		,index:'STRAT_ID'    	,width:100   ,align:'left'		},
                            {name:'STRAT_NM'  		,index:'STRAT_NM'		,width:100   ,align:'left'		},
                            {name:'CSF_ID'          ,index:'CSF_ID'         ,width:100   ,align:'center'	},
                            {name:'CSF_NM'          ,index:'CSF_NM'         ,width:200   ,align:'left'   	 ,formatter:linkUpdate},
                            {name:'SORT_ORDER'      ,index:'SORT_ORDER'     ,width:100   ,align:'center' 	},
							{name:'CNT'             ,index:'CNT'            ,width:100   ,align:'center' 	}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			cmTemplate   : {sortable:true},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"CSF관리"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"CNT").jqGrid('hideCol',"STRAT_ID").jqGrid('hideCol',"MAN_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/man/man/csf/csfModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * 년도변경시 경영목표 변경
	 ******************************************/
	function chgTarget(){

		J.ajax({
        	url      : "$!{context_path}/man/man/csf/targetList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findManId").empty();

				J('<option/>').attr('value','').text("선택").appendTo('#findManId');

				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findManId');
				})
        	}
    	});

		<!--세부목표도 초기화-->
		chgStrategy();
	}

	/******************************************
	 * 경영목표 변경시 전략과제 변경
	 ******************************************/
	function chgStrategy(){

		J.ajax({

			url      : "$!{context_path}/man/man/csf/strategyList_ajax.vw",
			cache    : false,
			type     : "POST",
			data	 : J("#formFind").serialize(),
			dataType : "html",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
			success  : function(data){
							var xmlDoc = J.parseXML(data);
							J("#findStratId").empty();

							J('<option/>').attr('value','').text("선택").appendTo('#findStratId');

							J(xmlDoc).find("data").each(function() {
								J('<option/>').attr('value',J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findStratId');
							})
					   }
		});

	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#csfId").val(ret.CSF_ID);
		J("#stratId").val(ret.STRAT_ID);
		J("#manId").val(ret.MAN_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/man/man/csf/csfModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var csfIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					csfIds += rowdata.CSF_ID + '|';
				}
			});
		}

		J("#csfIds").val(csfIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/man/man/csf/csfProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#manNm").val(J("#findManId > option:selected").text());
		J("#stratNm").val(J("#findStratId > option:selected").text());
		J("#csfNm").val(J("#findCsfNm").val());
		J("#useYnNm").val(J("#findUseYn > option:selected").text());
		J("#useYn").val(J("#findUseYn option:selected").val());

		J("#formList").attr("action", "$!{context_path}/man/man/csf/csfListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

