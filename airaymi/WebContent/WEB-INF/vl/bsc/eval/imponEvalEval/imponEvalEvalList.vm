	}

	/******************************************
	 * 평가완료
	 ******************************************/
	function goSubmit() {
		if(evalable()){//평가 진행상태 체크
			if(isSubmitted()){//평가완료 여부 체크
    			if(isAlllEvaled()){//모든 지표 평가완료 여부 체크
    				J.showConfirmBox("평가를 완료 하시겠습니까?", "submitDo"); //submitDo() 콜백함수 호출
    			}
			}
		}
	}
    
    
	/******************************************
	 * 평가완료 처리
	 ******************************************/
	function submitDo() {
		J("#mode").val("SUBMIT");
		J("#year").val(J("#findYear").val());
		J("#cycle").val(J("#findCycle").val());
		J("#evalEmpId").val(J("#findEvalEmpId").val());
		J("#formList").attr("action", "$!{context_path}/bsc/eval/imponEvalEval/imponEvalEvalProcess.vw?type=template").submit();
		return false;
	}	
