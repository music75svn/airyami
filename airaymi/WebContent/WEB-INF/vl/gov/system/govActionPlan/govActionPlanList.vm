	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		var str = cellvalue;

		return '<a href=javascript:goModify(' + options.rowId + ')>' + str + '<//a>';
	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkAdd(cellvalue, options, rowObject) {
		//return '<a href=javascript:goModify(' + options.rowId + ')>' + str + '<//a>';
		
		var str = '';
		str += '<input type="button" id="btnAdd" value="실행계획추가" onclick="javascript:goAdd(' + options.rowId + ')" />';
		
		return str;
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#govMetricNm").val(ret.GOV_METRIC_NM);
		J("#detailEvalId").val(ret.DETAIL_EVAL_ID);
		J("#detailEvalNm").val(ret.DETAIL_EVAL_NM);
		J("#conceptId").val(ret.CONCEPT_ID);
		J("#conceptNm").val(ret.CONCEPT_NM);
		J("#planId").val(ret.PLAN_ID);
		J("#planNm").val(ret.PLAN_NM);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/system/govActionPlan/govActionPlanModify.vw?type=template").submit();
	}
	
	/******************************************
	 * 추가
	 ******************************************/
	function goAdd(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		
		J("#govMetricId").val(ret.GOV_METRIC_ID);
		J("#govMetricNm").val(ret.GOV_METRIC_NM);
		J("#detailEvalId").val(ret.DETAIL_EVAL_ID);
		J("#detailEvalNm").val(ret.DETAIL_EVAL_NM);
		J("#conceptId").val(ret.CONCEPT_ID);
		J("#conceptNm").val(ret.CONCEPT_NM);
		J("#planId").val("");
		J("#planNm").val("");
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/system/govActionPlan/govActionPlanModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(J("#findUseYn").val() == 'N'){
			J.showMsgBox("이미 삭제된  경영평가지표 입니다.", null, null);
			return;
		}

		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var planIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					planIds += rowdata.PLAN_ID + '|';
				}
			});
		}

		J("#planIds").val(planIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/system/govActionPlan/govActionPlanProcess.vw?type=template").submit();
		return false;
	}

	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr1Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.GOV_METRIC_INDEX;
		var rowSpan = rowObject.GOV_METRIC_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr2Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.DETAIL_EVAL_INDEX;
		var rowSpan = rowObject.DETAIL_EVAL_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr3Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.CONCEPT_INDEX;
		var rowSpan = rowObject.CONCEPT_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		return result;
	}


	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#year").val(J("#findYear").val());
		J("#useYn").val(J("#findUseYn").val());
		J("#useYnNm").val(J("#findUseYn option:selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/system/govActionPlan/govActionPlanListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

