<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/gov/system/evalCat/evalCatList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(J("#evalCatGrpId").val() == "") {
			J.showMsgBox("평가범주를 선택해 주십시요", null, "evalCatGrpId");
			return;
		}
		
		if(!J.checkLength("evalCatNm", "평가부문", 1, 50)) {
			return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/gov/system/evalCat/evalCatProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
<form id="form1" name="form1" method="post" action="$!{context_path}/gov/system/evalCat/evalCatProcess.vw?type=template">
    <input type="hidden" 	id="mode"		    name="mode"		      value="$!{searchMap.txt2html("mode")}" />
	<input type="hidden"	id="year"           name="year"           value="$!{searchMap.txt2html("year")}" />
	
    $!{searchMap.makeHiddenFind()}
	
    <div id="Table">
    	<div id="Table_blockContainer">
    		<div class="tableTop">
    			#parse("/WEB-INF/vl/common/template/tabs.vm")
    			<div class="clear"></div>
    		</div>
			<div class="tableTop">
                <!-- 검색 테이블 Start -->
                <div class="searchBox">
                <div><div><div>   
                    <table summary="검색조건">        
                        <caption class="none">검색조건</caption>
                        <thead><tr><th></th><th></th></tr></thead>
                        <tbody>
                            <tr>
								<td class="searchBox_tit w250">$!{YEAR} <span class="searchBar">$!{searchMap.txt2html("findYear")}년</span></td>
							</tr>
                        </tbody>
                    </table>
                </div></div></div>
                </div>
                <!--// 검색 테이블 End -->
                <div class="clear"></div>
            </div>
    		<div class="blockDetail">
    			<table summary="평가부문관리 등록">
					<caption class="none">평가부문관리 등록</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
						<tr>
    						<th scope="row"><label for="evalCatId">평가부문코드</label></th>
    						<td>
								#if($!{searchMap.txt2html("mode")} == "MOD")
									$!{CS_HTML.txt2html($detail.EVAL_CAT_ID)}
									<input type="hidden" id="evalCatId" name="evalCatId" class="inputbox w100" value="$!{CS_HTML.txt2html($detail.EVAL_CAT_ID)}" maxlength="7" readonly="readonly"/>
									<input type="hidden" id="evalCatGrpId" name="evalCatGrpId" value="$!{searchMap.txt2html("evalCatGrpId")}" />
								#else
									<input type="hidden" id="evalCatId" name="evalCatId" class="inputbox w100" maxlength="7" />
                                    ※ 저장시 자동으로 부여됩니다.
								#end
							</td>
    					</tr>
    					#if($!{searchMap.txt2html("mode")} != "MOD")
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="evalCatGrpId">평가범주</label></th>
							<td>
								<select id="evalCatGrpId" name="evalCatGrpId" class="select w210">
    								<option value="">=====선택=====</option>
									#foreach($evalCatGrpList in $evalCatGrpList)
										<option value="$!{CS_HTML.txt2html($evalCatGrpList.EVAL_CAT_GRP_ID)}" $searchMap.getSelected("evalCatGrpId", "$!{CS_HTML.txt2html($evalCatGrpList.EVAL_CAT_GRP_ID)}")>$!{CS_HTML.txt2html($evalCatGrpList.EVAL_CAT_GRP_NM)}</option>
									#end
    							</select> 
							</td>
						</tr>
						#end
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="evalCatNm">평가부문</label></th>
							<td><input type="text" id="evalCatNm" name="evalCatNm" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.EVAL_CAT_NM)}' maxlength="50"/></td>
						</tr>
						<tr>
							<th scope="row"><label for="useYn">사용여부</label></th>
							<td colspan="3">
								<select id="useYn" name="useYn" class="select w160" >
    								$!CS_CODE.getCodeOption("011", $detail.USER_YN, $!{searchMap.txt2html("year")})	
    							</select>
							</td>
						</tr>
						<tr>
							<th scope="row"><label for="sortOrder">정렬순서</label></th>
							<td><input type="text" id="sortOrder" name="sortOrder" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.SORT_ORDER)}' maxlength="10"/></td>
						</tr>
    				</tbody>
    			</table>
    		</div>
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnBack"   value="돌아가기" /></li>
    				<li><input type="submit" id="btnInsert" value="저장" /></li>
    			</ul>
    		</div>	
    	</div>
    	<div class="clear"></div>
    </div>
</form>
