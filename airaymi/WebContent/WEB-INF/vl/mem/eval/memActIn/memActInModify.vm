	/******************************************
	 * jqGrid 자기평가 및 평가요청 목록조회 링크
	 ******************************************/
	function popSelfEval() {
		var param = "&amp;findYear=" + "$!{searchMap.txt2html("year")}"
		           + "&amp;findEmpNo=" + "$!{searchMap.txt2html("empNo")}";

		var url = "$!{context_path}/mem/eval/memActIn/popMemSelfEvalList.vw?type=popup" + param;
		
		openWinByName(url,'popMemSelfEval','800','400','yes');
	}
	
	/******************************************
	 * jqGrid 산식항목 목록조회 링크
	 ******************************************/
	function linkCalItem(cellvalue, options, rowObject) {
		return '<a href=javascript:fnCalItem(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 산식항목 조회 AJAX
	 ******************************************/
	function fnCalItem(rowId) {
		var ret = J("#evalItemlist").jqGrid('getRowData',rowId);
	
		if(ret.TYPE_ID == "01"){
			// 계량유형일 경우 실적 입력가능
			if("$!{searchMap.txt2html("mode")}" != "SEARCH"){
				//J("#btnInsert").show();
			}
			goActualMngAction(ret.METRIC_ID, ret.METRIC_NM_TMP, ret.EVAL_CYCLE_ID);
		}else{
			// 비계량유형일 경우 실적 안보여줌
			if("$!{searchMap.txt2html("mode")}" != "SEARCH"){
				//J("#btnInsert").hide();
			}
			J("#detailActualMngData").empty();
		}
		goActionPlanAction(ret.METRIC_ID, ret.METRIC_NM_TMP, "$!{CS_HTML.txt2html($periodInfo.ACT_IN_TERM)}");
	}
	
	/******************************************
	 * 조회
	 ******************************************/
    function goActualMngAction(metricId, metricNm, evalCycleId) {
		var mode = "$!{searchMap.txt2html("mode")}";
		var year = J("#year").val();
		var findActualType = "$!{searchMap.txt2html("findActualType")}";
		
		J("#metricId").val(metricId);
		J("#metricNm").val(metricNm);
		J("#evalCycleId").val(evalCycleId);

		J.ajax({
        	url      : "$!{context_path}/mem/eval/memActIn/memActualMngDetailList.vw",
        	cache    : false,
        	type     : "POST",
			data     : "mode=" + mode + "&year=" + year + "&amp;evalCycleId=" + evalCycleId + "&amp;findYear=" + year + "&amp;findEvalCycleId=" + evalCycleId + "&amp;metricNm=" + metricNm + "&amp;metricId=" + metricId + "&amp;findActualType=" + findActualType,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
        		J("#detailActualMngData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#detailActualMngData").append(data);
        	}
    	});
	}
	
	/******************************************
	 * 조회
	 ******************************************/
    function goActionPlanAction(metricId, metricNm, actInTerm) {
    	var mode = "$!{searchMap.txt2html("mode")}";
		var year = J("#year").val();
		var findActualType = "$!{searchMap.txt2html("findActualType")}";

		J.ajax({
        	url      : "$!{context_path}/mem/eval/memActIn/memActionPlanList.vw",
        	cache    : false,
        	type     : "POST",
			data     : "mode=" + mode + "&year=" + year + "&amp;actInTerm=" + actInTerm + "&amp;findYear=" + year + "&amp;findActInTerm=" + actInTerm + "&amp;metricNm=" + metricNm + "&amp;metricId=" + metricId + "&amp;findActualType=" + findActualType,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
        		J("#detailActionPlanData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#detailActionPlanData").append(data);
        	}
    	});
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(J("#findMetricId").val() == ""){
			alert("성과지표를 선택 후 저장해 주세요.");
			return;
		}
		
		var fileChk = true;

		//첨부파일 확장자 체크
		J(":file", "#form1").each(function(index, item) {
			var fileFullName = J("input[name=" + item.name + "]").val();
			var src = getFileExtension(fileFullName);
			if(item.name == "fileDesc" && src.toLowerCase() == ""){
			}else{
				if (!((src.toLowerCase() == "xls") || (src.toLowerCase() == "xlsx") || (src.toLowerCase() == "ppt") || (src.toLowerCase() == "pptx")||
					  (src.toLowerCase() == "doc") || (src.toLowerCase() == "docx") || (src.toLowerCase() == "hwp") || (src.toLowerCase() == "pdf") ||
					  (src.toLowerCase() == "zip") || (src.toLowerCase() == "txt")  || (src.toLowerCase() == "gif") || (src.toLowerCase() == "jpg") ||
				      (src.toLowerCase() == "png") || (src.toLowerCase() == "png")
				    )) {
	
					fileChk = false;
	    		}
	    	}
		});

		if(fileChk == false) {
			J.showMsgBox("허용되지 않는 파일형식입니다<br/>허용되는 파일형식 : <br/>xls, xlsx, ppt, pptx, doc, docx, hwp <br/> pdf, zip, txt, gif, jpg, png, jpeg", null, null);
    		return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
        
	/******************************************
	 * 면담요청확인
	 ******************************************/
	function reqMeetChk() {
		J("#mode").val("MEET");
		
		J.showConfirmBox("면담요청 하시겠습니까?", "reqMeetDo"); //reqMeetDo() 콜백함수 호출
	}
	
	/******************************************
	 * 면담취소확인
	 ******************************************/
	function cancelMeetChk() {
		J("#mode").val("CANCEL");
		
		J.showConfirmBox("면담취소 하시겠습니까?", "cancelMeetDo"); //cancelMeetDo() 콜백함수 호출
	}

	/******************************************
	 * 평가요청취소확인
	 ******************************************/
	function evalReqCancelChk() {
		J("#mode").val("CANCEL");
		
		J.showConfirmBox("평가요청취소를 하시겠습니까?", "evalReqCancelDo"); //evalReqCancelDo() 콜백함수 호출
	}
    
	/******************************************
	 * 면담요청
	 ******************************************/
	function reqMeetDo() {
		J("#mode").val("MEET");
		
		J("#form1").attr("action", "$!{context_path}/mem/eval/memActIn/memActInProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 면담취소
	 ******************************************/
	function cancelMeetDo() {
		J("#mode").val("CANCEL");
		
		J("#form1").attr("action", "$!{context_path}/mem/eval/memActIn/memActInProcess.vw?type=template").submit();
	}
    
	/******************************************
	 * 평가요청취소
	 ******************************************/
	function evalReqCancelDo() {
		J("#mode").val("EVAL_CANCEL");
		
		J("#form1").attr("action", "$!{context_path}/mem/eval/memActIn/memActInProcess.vw?type=template").submit();
	}    
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#mode").val("MOD");
		
		J("#form1").attr("action", "$!{context_path}/mem/eval/memActIn/memActInProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
