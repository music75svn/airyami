#set($curr_url = $!{context_path} + "/bsc/system/regularInsp/regularInspList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/regularInsp/regularInspList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['검사년도', '부서코드', '부서명', '업소번호', '시설명', '주소', '검사종류', '검사계획일자', '검사실행일자', '비고'],
			colModel     :[
							{name:'YEAR'           		,index:'YEAR'      	 		,width:50   	,align:'center' }, 
                            {name:'DEPT_CD'       		,index:'DEPT_CD'         	,width:10   	,align:'center' }, 
                            {name:'DEPT_NM'       		,index:'DEPT_NM'         	,width:100   	,align:'center' },
							{name:'CO_NO'       		,index:'CO_NO'        		,width:70    	,align:'center' },
                            {name:'CO_NM'       		,index:'CO_NM'        		,width:200    	,align:'center' }, 
                            {name:'ADDR'       			,index:'ADDR'        	 	,width:250    	,align:'left' 	}, 
                            {name:'INSP_NM'       		,index:'INSP_NM'         	,width:50   	,align:'center' }, 
                            {name:'INSP_PLAN_DATE'      ,index:'INSP_PLAN_DATE'     ,width:80   	,align:'center' },
                            {name:'REAL_INSP_DATE'      ,index:'REAL_INSP_DATE'     ,width:80   	,align:'center' },
                            {name:'RMK'      			,index:'RMK'     			,width:200   	,align:'center' }	
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cmTemplate	 : {sortable:false},
			cellEdit     : true,
			caption:"시스템 연계데이터 조회"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"DEPT_CD").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * fancybox 설정
		 ******************************************/
		J("#anchor").fancybox();    //조직선택 팝업
	});
	

//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">시스템 연계데이터 조회</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")
			
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/system/regularInsp/regularInspList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				
				<div class="searchBox">
    				<div><div><div>
    				<table summary="시스템 연계데이터 조회검색 조건">
