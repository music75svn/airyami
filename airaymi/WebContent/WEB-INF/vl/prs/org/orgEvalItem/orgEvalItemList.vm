#set($curr_url = $!{context_path} + "/prs/org/orgEvalItem/orgEvalItemList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/org/orgEvalItem/orgEvalItemList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{ORG_EVAL_ITEM_NM}코드', '평가분야', '$!{ORG_EVAL_ITEM_NM}명', '세부평가항목명', '배점', '설명', '사용개수', '사용개수'],
			colModel     :[
                            {name:'ORG_EVAL_ITEM_ID'     	,index:'ORG_EVAL_ITEM_ID'     	,width:80    ,align:'center' },
                            {name:'EVAL_TYPE_NM'         	,index:'EVAL_TYPE_NM'         	,width:60    ,align:'center' },
                            {name:'ORG_EVAL_ITEM_NM'     	,index:'ORG_EVAL_ITEM_NM'     	,width:200   ,align:'left'   ,formatter:linkUpdate },
                            {name:'ORG_EVAL_ITEM_NMS'    	,index:'ORG_EVAL_ITEM_NMS'    	,width:200   ,align:'left'  },
                            {name:'ALLOC_SCORE'    			,index:'ALLOC_SCORE'    		,width:50   ,align:'center'  },
							{name:'CONTENT'         	 	,index:'CONTENT'      		   	,width:200   ,align:'left'   },
                            {name:'COUNT'                	,index:'COUNT'                	,width:70    ,align:'center' ,formatter:linkUseList },
							{name:'COUNT_ID'             	,index:'COUNT_ID'             	,width:70    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			##cmTemplate	 : {sortable:false},
			gridview     : true,
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
									var rowdata = J("#list").getRowData(ids[index]);
    								if(rowdata.COUNT_ID != 0) { //비교조건 대상 컬럼
										J(":checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"데이터리스트"
		}).jqGrid('hideCol',"COUNT_ID").jqGrid('hideCol',"ORG_EVAL_ITEM_NMS").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 지표Pool명 포커스
		 ******************************************/
		J("#findOrgEvalItemNm").select();

		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#year").val(J("#findYear").val());
			J("#orgEvalItemId").val("");
			J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		/******************************************
		 * 전년도데이터복사 버튼 클릭 이벤트
		 ******************************************/
		J("#lastYear").click(function() {

			J.showConfirmBox("기존에 사용하던 세부평가항목과 조직별 세부평가항목이 삭제됩니다. 복사하시겠습니까?", "getLastYear"); //getLastYear() 콜백함수 호출

			return false;
		});
	});

	/******************************************
	 * 전년도데이터복사 클릭이벤트
	 ******************************************/
	function getLastYear() {

		J("#mode").val("GET");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * jqGrid 지표pool 사용중인 지표리스트
	 ******************************************/
	function linkUseList(cellvalue, options, rowObject) {
		return '<a href=javascript:goUseList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemList.vw?type=template").submit();
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#orgEvalItemId").val(ret.ORG_EVAL_ITEM_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemModify.vw?type=template").submit();
	}

	/******************************************
	 * 사용중인 지표리스트 이동
	 ******************************************/
	function goUseList(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#orgEvalItemId").val(ret.ORG_EVAL_ITEM_ID);
		J("#orgEvalItemNm").val(ret.ORG_EVAL_ITEM_NMS);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemUseList.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			if(J("#findUseYn").val() == 'N'){
				J.showMsgBox("이미 삭제된  지표 입니다.", null, null);
				return;
			}
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var orgEvalItemId = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					orgEvalItemId += rowdata.ORG_EVAL_ITEM_ID + '|';
				}
			});
		}

		J("#orgEvalItemIds").val(orgEvalItemId);
		J("#year").val(J("#findYear").val());
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#orgEvalItemNm").val(J("#findOrgEvalItemNm").val());
		J("#useYn").val(J("#findUseYn").val());
		J("#useYnNm").val(J("#findUseYn > option:selected").text());
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/prs/org/orgEvalItem/orgEvalItemListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

