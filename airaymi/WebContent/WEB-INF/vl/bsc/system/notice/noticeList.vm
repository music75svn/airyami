#set($curr_url = $!{context_path} + "/bsc/system/notice/noticeList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/notice/noticeList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['번호', '제목', '신규일'
						 #if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60"))
						 , '팝업YN','가로', '세로'
						 #end
						 ],
			colModel     :[
							{name:'ID'                   ,index:'ID'                   ,width:50    ,align:'center' }, 
                            {name:'SUBJECT'              ,index:'SUBJECT'              ,width:250   ,align:'left', formatter:linkUpdate  }, 
                            {name:'CREATE_DT'            ,index:'CREATE_DT'            ,width:100   ,align:'center' },
							#if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60"))
                            {name:'POPUP_GBN'            ,index:'POPUP_GBN'            ,width:100   ,align:'center' },
                            {name:'WIDTH'            	 ,index:'WIDTH'            	   ,width:100   ,align:'center' },
                            {name:'HEIGHT'            	 ,index:'HEIGHT'               ,width:100   ,align:'center' }
							#end
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			cmTemplate	 : {sortable:true},
			multiselect  : true,
			cellEdit     : true,
			caption:"공지사항관리"
		});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/system/notice/noticeModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 미리보기 버튼 클릭 이벤트
		 ******************************************/
		J("#btnPreview").click(function() {
			goPreview();
			return false;
		});
		
	});


	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')> ' + cellvalue + '<//a>';
	}

	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		//J("#codeGrpId").val(ret.CODE_GRP_ID);
		J("#mode").val("MOD");
		J("#id").val(ret.ID);
		J("#formList").attr("action", "$!{context_path}/bsc/system/notice/noticeModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete(isPreview) {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo(isPreview) {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var noticeIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					noticeIds += rowdata.ID + '|';
				}
			});
		}
        
		J("#ids").val(noticeIds);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/bsc/system/notice/noticeProcess.vw?type=template").submit();
		return false;
	}

	
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var noticeIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					noticeIds += rowdata.ID + '|';
				}
			});
		}
        
		J("#ids").val(noticeIds);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/bsc/system/notice/noticeProcess.vw?type=template").submit();
		return false;
	}

	
	/******************************************
	 * 미리보기
	 ******************************************/
	function goPreview() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("미리보기할 데이터를 선택하십시요", null, null); 
		} else {
			preview();
		}
	}	
	
	/******************************************
	 * 미리보기
	 ******************************************/
	function preview() {
		var id  = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var noticeIds = new Array();
		var widths    = new Array();
		var heights   = new Array();
		var popGbn = true;
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					if("N"==rowdata.POPUP_GBN){
    					popGbn=false;
					}else{
						noticeIds[i] = rowdata.ID;
						widths[i] = rowdata.WIDTH;
						heights[i] = rowdata.HEIGHT;
					}
				}
			});
		}
		
		if(!popGbn){
			J.showMsgBox("팝업YN이 N이면 미리보기 되지 않습니다.", null, null); 
		}
		
		
		if(noticeIds!=null && noticeIds.length>0){
			for(var i=0; i<noticeIds.length; i++){
        		if(noticeIds[i]){
    				window.open("", "List"+i, "width="+widths[i]+",height="+heights[i]+",top=50,left=100 scrollbars=yes, resizble=no");
                  	J("#formList").attr("action","$!{context_path}/bsc/system/notice/noticePopup.vw");
                  	J("#formList").attr("target","List"+i);
            		J("#id").val(noticeIds[i]);
            		J("#formList").submit();
				}
			}
		}
		
      	J("#formList").attr("target","_self");
		
	}	
	
//]]>
	
</script>

