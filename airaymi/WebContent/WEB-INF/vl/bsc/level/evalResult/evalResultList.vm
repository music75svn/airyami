#set($curr_url = $!{context_path} + "/bsc/level/evalResult/evalResultList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/level/evalResult/evalResultList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '평가단 코드', '$!{METRIC_NM}코드', '$!{SC_DEPT_NM}', '$!{METRIC_NM}', '가중치'
			
						  	#foreach($list in $itemList)
								, '$!{CS_HTML.txt2html($list.ITEM_NM)}'
							#end

							#foreach($list in $itemGrpList)
								, '$!{CS_HTML.txt2html($list.ITEM_GRP_NM)}', '등급'
							#end
						  
						  , '조정<br/>계수', '담당자'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'EVAL_USER_GRP_ID'     ,index:'EVAL_USER_GRP_ID'     ,width:150   ,align:'center' }, 
                            {name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:150   ,align:'center' ,formatter:linkUpdate}, 
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:150   ,align:'center' },
							{name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:400   ,align:'left'   }, 
                            {name:'WEIGHT'               ,index:'WEIGHT'               ,width:80    ,align:'center' }, 
							
							#foreach($list in $itemList)
								{name:'ITEM_$!{CS_HTML.txt2html($list.ITEM_ID)}' ,index:'ITEM_$!{CS_HTML.txt2html($list.ITEM_ID)}' ,width:150   ,align:'center' },
							#end

							#foreach($list in $itemGrpList)
								{name:'ITEM_GRP_SCORE_$!{CS_HTML.txt2html($list.ITEM_GRP_ID)}' ,index:'ITEM_GRP_SCORE_$!{CS_HTML.txt2html($list.ITEM_GRP_ID)}' ,width:150 ,align:'center' },
								{name:'ITEM_GRP_GRADE_$!{CS_HTML.txt2html($list.ITEM_GRP_ID)}' ,index:'ITEM_GRP_GRADE_$!{CS_HTML.txt2html($list.ITEM_GRP_ID)}' ,width:150 ,align:'center' },
							#end
							
							{name:'ADJUST_RATE'          ,index:'ADJUST_RATE'          ,width:100   ,align:'center' },
							{name:'USER_NM'              ,index:'USER_NM'              ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가결과"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_USER_GRP_ID").jqGrid('hideCol',"METRIC_ID").setGridWidth($!{jqGrid_width});
		
		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true, 
          groupHeaders:[

			#foreach($list in $itemGrpInfoList)
				{startColumnName: 'ITEM_$!{CS_HTML.txt2html($list.ITEM_ID)}', numberOfColumns: $!{CS_HTML.txt2html($list.ITEM_CNT)}, titleText: '<em>$!{CS_HTML.txt2html($list.ITEM_GRP_NM)}</em>'},
			#end

			{startColumnName: 'ITEM_GRP_SCORE_$!{firstItemGrpId}', numberOfColumns: 4, titleText: '<em>종합점수</em>'}
          ]	
        });
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 평가마감 버튼 클릭 이벤트
		 ******************************************/
		J("#btnApply").click(function() {
			goApply();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
    
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#evalUserGrpNm").val(J("#findEvalUserGrpId > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/level/evalResult/evalResultListExcel.vw?type=excel").submit();
		return false;
	}
	
	/******************************************
	 * 조정계수 적용
	 ******************************************/
	function goApply(){
		J("#year").val(J("#findYear").val());
		J("#mode").val("APPLY");
		J("#formList").attr("action", "$!{context_path}/bsc/level/evalResult/evalResultProcess.vw?type=template").submit();
		return false;
	}

//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">평가결과</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")
			
    		<!-- search S -->
