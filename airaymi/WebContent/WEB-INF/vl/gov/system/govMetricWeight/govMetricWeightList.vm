                            {name:'EVAL_CAT_NM'          ,index:'EVAL_CAT_NM'          ,width:150   ,align:'center', sortable:true },
                            {name:'GOV_METRIC_NM'        ,index:'GOV_METRIC_NM'        ,width:250   ,align:'left', sortable:true   ,formatter:linkUpdate},
                            {name:'GBN_NM'               ,index:'GBN_NM'               ,width:100   ,align:'center', sortable:true },
                            {name:'EVAL_METHOD_NM'       ,index:'EVAL_METHOD_NM'       ,width:100   ,align:'center', sortable:true },
                            {name:'WEIGHT'               ,index:'WEIGHT'               ,width:100   ,align:'center', sortable:true ,formatter:linkWeight},
                            {name:'WEIGHT_ID'            ,index:'WEIGHT_ID'            ,width:100   ,align:'center', sortable:true },
							{name:'MAIN_METRIC_YN'       ,index:'MAIN_METRIC_YN'       ,width:150   ,align:'center', sortable:true }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			footerrow	 : true,
			##cmTemplate   :{sortable:false},
			userDataOnFooter : true,
			loadComplete : function() {
					J("input[name=weights]").numeric({allow:"."});        //특정문자 허용(.)
					J("input[name=weights]").css("ime-mode", "disabled"); //한글사용 비활성화
