<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="gov.system.evalCat">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: GOV_EVAL_CAT
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 평가부문관리 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: GOV_EVAL_CAT
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR, 
               A.EVAL_CAT_GRP_ID,                                                                             
              (SELECT EVAL_CAT_GRP_NM FROM GOV_EVAL_CAT_GRP WHERE YEAR = A.YEAR AND EVAL_CAT_GRP_ID = A.EVAL_CAT_GRP_ID) EVAL_CAT_GRP_NM,           
              (SELECT COUNT(1) FROM GOV_METRIC WHERE A.YEAR = YEAR AND A.EVAL_CAT_ID = EVAL_CAT_ID AND DELETE_DT IS NULL) +                                        
              (SELECT COUNT(1) FROM GOV_METRIC_GRP WHERE A.YEAR = YEAR AND A.EVAL_CAT_ID = EVAL_CAT_ID AND DELETE_DT IS NULL) METRIC_CNT,                                        
               A.EVAL_CAT_ID,
               A.EVAL_CAT_NM,
               A.SORT_ORDER                                                                        
          FROM GOV_EVAL_CAT A                                                                                  
         WHERE A.YEAR = #findYear#
         <isNotEmpty prepend="AND" property="findCatGrp">
	    	   A.EVAL_CAT_GRP_ID = #findCatGrp#
	     </isNotEmpty>
	     <isEqual prepend="AND" property="findUseYn" compareValue="Y">
               A.DELETE_DT IS NULL
         </isEqual>
         <isNotEqual prepend="AND" property="findUseYn" compareValue="Y">
               A.DELETE_DT IS NOT NULL
         </isNotEqual>
         ORDER BY A.SORT_ORDER   
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가부문관리 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: GOV_EVAL_CAT
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , EVAL_CAT_GRP_ID       
			 , EVAL_CAT_ID           
			 , EVAL_CAT_NM           
			 , SORT_ORDER            
			 , CASE WHEN DELETE_DT IS NULL THEN 'Y' ELSE 'N' END AS USER_YN
		  FROM GOV_EVAL_CAT 
		 WHERE YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#
		   AND EVAL_CAT_ID = #evalCatId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가부문관리 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: GOV_EVAL_CAT
	==================================================================
	-->
	<select id="getCatList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.EVAL_CAT_ID,
               A.EVAL_CAT_NM,
               A.SORT_ORDER                                                                        
          FROM GOV_EVAL_CAT A                                                                                  
         WHERE A.YEAR = #year#
           AND A.EVAL_CAT_GRP_ID = #evalCatGrpId#
           AND A.DELETE_DT IS NULL
         ORDER BY A.SORT_ORDER   
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가부문관리 등록
	  #	기능	: INSERT
	  #	TABLE	: GOV_EVAL_CAT
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT 'GEC'||LPAD(NVL(MAX(SUBSTR(EVAL_CAT_ID,4,6)),0)+1,4,'0') SEQ FROM GOV_EVAL_CAT
		</selectKey>
		INSERT INTO GOV_EVAL_CAT ( 
			   YEAR
			 , EVAL_CAT_GRP_ID
			 , EVAL_CAT_ID
			 , EVAL_CAT_NM
			 , SORT_ORDER
			 , CREATE_DT
			 , DELETE_DT
			 ) VALUES ( 
			   #year#
			 , #evalCatGrpId#
			 , #SEQ#
			 , #evalCatNm#
			 , #sortOrder#
			 , SYSDATE
			 ,
			 <isEqual property="useYn" compareValue="Y">
		     NULL
		     </isEqual>
		     <isNotEqual property="useYn" compareValue="Y">
		     SYSDATE
		     </isNotEqual>
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 평가부문관리 수정
	  #	기능	: UPDATE
	  #	TABLE	: GOV_EVAL_CAT
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE GOV_EVAL_CAT 
		   SET EVAL_CAT_NM            = #evalCatNm# 
			 , SORT_ORDER             = #sortOrder#
			 ,
			 <isEqual property="useYn" compareValue="Y">
	         DELETE_DT = NULL
	         </isEqual>
	         <isNotEqual property="useYn" compareValue="Y">
	         DELETE_DT = SYSDATE
	         </isNotEqual> 
		 WHERE YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#
		   AND EVAL_CAT_ID = #evalCatId#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 평가부문관리 삭제
	  #	기능	: UPDATE
	  #	TABLE	: GOV_EVAL_CAT
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		UPDATE GOV_EVAL_CAT
		   SET DELETE_DT = SYSDATE
		 WHERE YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#
		   AND EVAL_CAT_ID = #evalCatId#
	</update>
	
	
</sqlMap>


