<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	var grdRowId = 0;
	
	J(document).ready(function(){
		J("select[name=posTc] option:eq(1)").remove();
	
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#content").checkbyte({
			indicator:J("#contentIndicator"),
			limit:500
		});
		J("#content").trigger("keyup");
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/mem/base/memApartEvalGun/memApartEvalGunList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");
		
		/******************************************
		 * 년차 숫자만 입력
		 ******************************************/
		J("input[name=yearTc]").numeric({allow:""});        	//특정문자 허용(.)
		J("input[name=yearTc]").css("ime-mode", "disabled"); 	//한글사용 비활성화
		
		/******************************************
		 * 조직평가비율 숫자만 입력
		 ******************************************/
		J("input[name=orgEvalRate]").numeric({allow:""});        	//특정문자 허용(.)
		J("input[name=orgEvalRate]").css("ime-mode", "disabled"); 	//한글사용 비활성화
		
		/******************************************
		 * 개인평가비율 숫자만 입력
		 ******************************************/
		J("input[name=indEvalRate]").numeric({allow:""});        	//특정문자 허용(.)
		J("input[name=indEvalRate]").css("ime-mode", "disabled"); 	//한글사용 비활성화
		
	});
	
	/******************************************
	 * 적용기준일 클릭시 달력팝업 이벤트
	 ******************************************/
	 function calen() {
	 	J("input[name='applyDt']").each(function(i){
	 		J("input[name='applyDt']").eq(i).datepicker({
		 		dateFormat: 'yy.mm.dd'
		 	})
	 	})
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("evalGunNm", "별도별도평가군명", 1, 200)) {
			return;
		}
		if(!J.checkLength("evalGiveMethodId", "배분표", 1, 7)) {
			return;
		}
		// 조직구분 validation
		var orgGubunIds = "";
		J("input:checkbox[name:orgGubunId]").each(function () {
			if(this.checked){
				orgGubunIds += this.value + '|';
			}
		});
		
		if(orgGubunIds == "") {
			J.showMsgBox("조직구분을 선택해 주십시요", null, null);
			return;
		}
		
		if(J("#castTc").val()=="100"){
			J.showMsgBox("직급을 선택해 주십시요", null, "castTc");
			return;
		}
		if(!J.checkLength("castTc", "직급", 1, 7)) {
			return;
		}
		if(!J.checkLength("orgEvalRate", "조직평가비율", 1, 3)) {
			return;
		}
		if(!J.checkLength("indEvalRate", "개인평가비율", 1, 3)) {
			return;
		}
		if(!J.checkLength("content", "비고", 0, 4000)) {
			return;
		}
		if(!J.checkLength("sortOrder", "정렬순서", 0, 5)) {
			return;
		}
		
		J("#orgGubunIds").val(orgGubunIds);
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/mem/base/memApartEvalGun/memApartEvalGunProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
