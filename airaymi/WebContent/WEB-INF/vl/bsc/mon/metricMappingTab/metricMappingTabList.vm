	function linkStrategySignal(cellvalue, options, rowObject) { 
		var retVal = "";
		if( "" != rowObject.STRAT_SUBJECT_ID ){
			retVal = "<img name=\'sig\'  src=\'$!{img_path}/common/ball/a_ball_" + rowObject.STRAT_SUBJECT_STATUS_ID + ".gif\' > " + cellvalue;
		}else {
			retVal = cellvalue;
		}
		return retVal;
	}
	
