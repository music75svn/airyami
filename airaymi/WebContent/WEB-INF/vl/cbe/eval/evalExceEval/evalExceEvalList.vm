	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkInputBox(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkEvalGbnSelectBox(cellvalue, options, rowObject) { 
		var str = "";
		//alert(cellvalue);
		str = '<select id=\'grades\' name=\'grades\' class=\'select w80\' >'+
			  '<option value=\'\'>미부여</option>'+
			  #foreach($evalGradeList in $evalGradeList)
    			'<option value=\''+'$!{CS_HTML.txt2html($evalGradeList.GRADE_ITEM_ID)}'+'\''+checkSelected('$!{CS_HTML.txt2html($evalGradeList.GRADE_ITEM_ID)}',cellvalue)+'>'+'$!{CS_HTML.txt2html($evalGradeList.GRADE_ITEM_NM)}'+'</option>'+
			  #end
			  '</select>';
	
		return str;
	}
	
	function checkSelected(val1, val2){
		var selected = ""; 
		if(val1 == val2){
			selected = "selected"; 
		}
		return selected;
	}
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkInputBox(cellvalue, options, rowObject) { 
		var retVal = cellvalue;
    	retVal = '<input type="text" id="grades" name="grades" value="'+cellvalue+'" maxlength="3" class="inputbox w60">';			
		return retVal;
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#evalMembUserId").val(ret.EVAL_MEMB_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalExceEval/evalExceEvalModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goSave() {
		
		var ids = J("#list").jqGrid('getDataIDs');
		
		if(ids.length==0){
			J.showMsgBox("저장할 데이터가 없습니다.", null, null); 
			return;
		}else{
			J.showConfirmBox("저장하시겠습니까?", "saveDO"); //deleteDo() 콜백함수 호출
		}
	
	}
    
	/******************************************
	 * 저장처리
	 ******************************************/
	function saveDO() {
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalMembUserIds = "";
		var conbiEvalGrades = "";
		var conbiEvalGradeNms = "";
        var idx = 0;
		
		for (var i = 1; i <= ids.length; i++) {
			rowdata = J("#list").getRowData(i);
			idx = Number(i)-1;
			
			evalMembUserIds += rowdata.EVAL_MEMB_USER_ID + '|';
			var tmpVal = J("select[name=grades]").eq(idx).val();
			var tmpText = J("select[name=grades] option:selected").eq(idx).text();
			if( tmpVal == '' ){
				conbiEvalGrades += 'none' + '|';
				conbiEvalGradeNms += 'none' + '|';
			}else{
				conbiEvalGrades += tmpVal + '|';
				conbiEvalGradeNms += tmpText + '|';
			}
		}
		
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#evalMembUserIds").val(evalMembUserIds);
		J("#conbiEvalGrades").val(conbiEvalGrades);
		J("#conbiEvalGradeNms").val(conbiEvalGradeNms);
		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalExceEval/evalExceEvalProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#degreeNm").val(J("#findEvalDegreeId > option:selected").text());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#formList").attr("action", "$!{context_path}/cbe/eval/evalExceEval/evalExceEvalListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

