<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/matrix/matrixItemPart/matrixItemPartList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");
		
	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("itemNm", "평가항목", 1, 50)) {
			return;
		}
		
		var msg = "저장하시겠습니까?";
		
		if(J("#evalCnt").val()>0){
			msg ="평가한 내역이 있습니다. <br>저장하시면 결과에 영향이 있을 수 있습니다. <br>저장하시겠습니까?"
		}
		J.showConfirmBox(msg, "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/matrix/matrixItemPart/matrixItemPartProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
