<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">
<head >
	#parse("/WEB-INF/vl/common/template/head.vm")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		J("#close").click(function(){
			J("#formList").attr("action", "");
			self.close();//팝업정보쿠키설정
		});
	});

//]]>
</script>
</head>
<body>
<div style="width:450px;">
	<div style="padding:10px 10px">
		<h1 class="none">신호등현황 팝업</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")
			
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/mon/viewSignal/viewSignalList.vw?type=popup">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				
				<div class="searchBox">
    				<div><div><div>
    				<table summary="신호등현황 팝업검색 조건">
						<caption class="none">신호등현황 팝업 검색 조건</caption> 
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w160">
            						<span><label for="findYear">$!{YEAR}</label></span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80" >
            								$!CS_CODE.getCodeOption("017", $!CS_STATIC.nullToDefault($!{searchMap.txt2html("findYear")},$year) )
            							</select>
            						</span>
            					</td>
            				</tr>
        				</tbody>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" align="middle" alt="검색" /> 
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>
		
		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/mon/viewSignal/viewSignalProcess.vw">
			<input type="hidden" id="mode"       name="mode" />
			<input type="hidden" id="year"		 name="year" />
			$!{searchMap.makeHiddenFind()}
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockListTable">
					<table summary="">
					<caption></caption>
    				<thead>
						<tr>
							<th scope="col" >상태</th>
							<th scope="col" >색상</th>
							<th scope="col" >범례</th>
						</tr>
				     </thead>
					<tbody>
						#foreach( $signalStatus in $list )
						<tr>
							<td >$!{CS_HTML.txt2html($signalStatus.CODE_NM)}&nbsp;</td>
							<td >
							#if ( '-99999' == $!{CS_HTML.txt2html($signalStatus.FROM_VALUE)} ) 
								$!{CS_HTML.txt2html($signalStatus.TO_VALUE)} % 미만
							#elseif( '99999' == $!{CS_HTML.txt2html($signalStatus.TO_VALUE)} )
								$!{CS_HTML.txt2html($signalStatus.FROM_VALUE)} % 이상
							#else
								$!{CS_HTML.txt2html($signalStatus.FROM_VALUE)} % ~
							#end
							
							#if ( '-99999' != $!{CS_HTML.txt2html($signalStatus.FROM_VALUE)} && '99999' != $!{CS_HTML.txt2html($signalStatus.TO_VALUE)} ) 
								$!{CS_HTML.txt2html($signalStatus.TO_VALUE)} % 
							#end
							</td>
							<td ><img name='sig'  src='$!{img_path}/common/ball/ball_$!{CS_HTML.txt2html($signalStatus.CODE_ID)}.gif' alt='$!{CS_HTML.txt2html($signalStatus.CODE_NM)}'></td>
						</tr>
						#end
					</tbody>	
					</table>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all">			
						<div class="blockButton_l"></div>
						<div class="blockButton">			
							<ul>
								<li><input type="button" id="close" name="close" value="닫기" /></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
</body>
</html>