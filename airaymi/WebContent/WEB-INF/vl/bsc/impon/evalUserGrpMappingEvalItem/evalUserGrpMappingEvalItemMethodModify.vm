			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:999   ,align:'center' }, 
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:999   ,align:'center' }, 
                            {name:'EVAL_USER_GRP_ID'     ,index:'EVAL_USER_GRP_ID'     ,width:999   ,align:'center' }, 
                            {name:'EVAL_USER_GRP_NM'     ,index:'EVAL_USER_GRP_NM'     ,width:150   ,align:'center' }, 
                            {name:'METRIC_GRP_ID'        ,index:'METRIC_GRP_ID'        ,width:999   ,align:'center' }, 
                            {name:'METRIC_GRP_NM'        ,index:'METRIC_GRP_NM'        ,width:250   ,align:'left'   }, 
                            {name:'SEQ'                  ,index:'SEQ'                  ,width:999   ,align:'center' }, 
                            {name:'ITEM_GBN'             ,index:'ITEM_GBN'             ,width:999   ,align:'center' }, 
                            {name:'EVAL_ITEM_ID'         ,index:'EVAL_ITEM_ID'         ,width:999   ,align:'center' }, 
                            {name:'EVAL_ITEM_NM'         ,index:'EVAL_ITEM_NM'         ,width:150   ,align:'center' }, 
                            {name:'EVAL_METHOD_ID'       ,index:'EVAL_METHOD_ID'       ,width:999   ,align:'center' }, 
                            {name:'EVAL_METHOD_NM'       ,index:'EVAL_METHOD_NM'       ,width:150   ,align:'center' }, 
                            {name:'EVAL_METHOD_GBN_ID'   ,index:'EVAL_METHOD_GBN_ID'   ,width:999   ,align:'center' }, 
                            {name:'OLD_DEGREE_REFL_ID'   ,index:'OLD_DEGREE_REFL_ID'   ,width:999   ,align:'center' }, 
                            {name:'OLD_DEGREE_REFL_NM'   ,index:'OLD_DEGREE_REFL_NM'   ,width:100   ,align:'center' }, 
                            {name:'ROWSPAN_CNT'          ,index:'ROWSPAN_CNT'          ,width:999   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가단별 지표/항목 매핑"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"EVAL_USER_GRP_ID")
