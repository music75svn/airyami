#set($curr_url = $!{context_path} + "/signalStatus/signalStatusList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

    J(document).ready(function(){

        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();

        jQuery("#list").jqGrid({
            url          :"$!{context_path}/bsc/base/signalStatus/signalStatusList_xml.vw" + "?" + str,
			mtype        :"POST",
            datatype     :"xml",
            height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
            colNames     :['신호등코드', '신호등등급', '시작구간대(이상)', ' 종료구간대(미만)' ,'색상'],
            colModel     :[
                             {name:'STATUS_ID'   	,index:'STATUS_ID'   	,width:150   ,align:'center' },
                             {name:'STATUS_NM'   	,index:'STATUS_NM'   	,width:250   ,align:'center'  ,formatter:linkUpdate },
                             {name:'FROM_VALUE'     ,index:'FROM_VALUE'	    ,width:230   ,align:'center' },
                             {name:'TO_VALUE'       ,index:'TO_VALUE'       ,width:200   ,align:'center' },
                             {name:'COLOR'          ,index:'COLOR'          ,width:200   ,align:'center' ,formatter:linkUpdate2 }
                          ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false,
            viewrecords  : true,
            loadonce     : true,
            multiselect  : false,
            cellEdit     : true,
            cmTemplate   : {sortable:true},
            caption:"신호등구간"
        });

        /******************************************
         * 평가년도 포커스
         ******************************************/
        J("#year").focus();

        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

    });

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) {
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }

    /******************************************
     * 신호등 색
     ******************************************/
    function linkUpdate2(cellvalue, options, rowObject) {
		if(cellvalue!=""){

			return "<input type='text' class='inputbox w50' maxlength='20' disabled='disabled' style='background-color:"+cellvalue +"' />";



		}else{

			return '';

		}
    }

    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
        J("#year").val(J("#findYear").val());
		J("#statusId").val(ret.STATUS_ID);
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/bsc/base/signalStatus/signalStatusModify.vw?type=template").submit();
    }

    /******************************************
     * jqGrid 신호등 이미지 formmater
     ******************************************/
    function showSignal(cellvalue, options, rowObject) {
        return '<a href=javascript:goCodeList(' + options.rowId + ')> ' + cellvalue + '<//a>';
    }

//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">&nbsp;</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")

    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/base/signalStatus/signalStatusList.vw?type=template">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />

				<div class="searchBox">
    				<div><div><div>
    				<table summary="검색조건">
						<caption class="none">검색조건</caption>
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
            					<td class="searchBox_tit">
            						<span>$!{YEAR}</span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
