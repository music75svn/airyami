//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/impon/imponComment/imponCommentList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', 'KPI POOL I', '평가대상지표POOL', '평가대상 코드', '평가조직/항목', '정렬순서', '첨부파일', '첨부파일 저장명', '첨부파일 확장자'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'METRIC_GRP_ID'        ,index:'METRIC_GRP_ID'        ,width:150   ,align:'center' }, 
                            {name:'METRIC_GRP_NM'        ,index:'METRIC_GRP_NM'        ,width:250   ,align:'left'   }, 
                            {name:'ITEM_ID'              ,index:'ITEM_ID'              ,width:150   ,align:'center' }, 
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:150   ,align:'center' ,formatter:linkUpdate}, 
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:150   ,align:'center' }, 
                            {name:'ATTACH_FILE_NM'       ,index:'ATTACH_FILE_NM'       ,width:200   ,align:'left'   }, 
                            {name:'ATTACH_FILE_FNM'      ,index:'ATTACH_FILE_FNM'      ,width:150   ,align:'center' }, 
                            {name:'ATTACH_FILE_SUFFIX'   ,index:'ATTACH_FILE_SUFFIX'   ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate	 : {sortable:false},
			caption:"평가의견"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"METRIC_GRP_ID").jqGrid('hideCol',"ITEM_ID").jqGrid('hideCol',"SORT_ORDER").jqGrid('hideCol',"ATTACH_FILE_FNM").jqGrid('hideCol',"ATTACH_FILE_SUFFIX").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/impon/imponComment/imponCommentModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
			chgEvalPool();
		});
	});
	
	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponItem/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}
	
	/******************************************
	 * 년도별 비계량지표 조회
	 ******************************************/
	function chgEvalPool(){
		
		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponItem/getPoolList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findMetricGrpId").empty();
				J('<option/>').attr('value','').text("전체").appendTo('#findMetricGrpId');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findMetricGrpId');
				})
			}
    	});
		
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#itemId").val(ret.ITEM_ID);
		J("#seq").val(ret.SEQ);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponComment/imponCommentModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var metricGrpIds = "";
		var itemIds = "";
		var seqs = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';metricGrpIds += rowdata.METRIC_GRP_ID + '|';itemIds += rowdata.ITEM_ID + '|';seqs += rowdata.SEQ + '|';
				}
			});
		}
        
		J("#evalDegreeIds").val(evalDegreeIds);J("#metricGrpIds").val(metricGrpIds);J("#itemIds").val(itemIds);J("#seqs").val(seqs);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponComment/imponCommentProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponComment/imponCommentListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

