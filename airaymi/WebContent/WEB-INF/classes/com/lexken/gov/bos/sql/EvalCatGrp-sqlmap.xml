<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="gov.bos.evalCatGrp">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BOSS_CAT_GRP
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 기관장평가범주관리 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BOSS_CAT_GRP
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR,
               A.EVAL_CAT_GRP_ID,
               A.EVAL_CAT_GRP_NM,
               A.SORT_ORDER,
              (SELECT COUNT(1)
                 FROM BOSS_METRIC B
                WHERE A.YEAR=B.YEAR
                  AND A.EVAL_CAT_GRP_ID=B.EVAL_CAT_GRP_ID AND B.DELETE_DT IS NULL) CAT_CNT
          FROM BOSS_CAT_GRP A
         WHERE A.YEAR=#findYear#
         ORDER BY A.SORT_ORDER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 기관장평가범주관리 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BOSS_CAT_GRP
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , EVAL_CAT_GRP_ID       
			 , EVAL_CAT_GRP_NM       
			 , SORT_ORDER            
		  FROM BOSS_CAT_GRP 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 기관장평가범주관리 등록
	  #	기능	: INSERT
	  #	TABLE	: BOSS_CAT_GRP
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT 'BCR'||LPAD(NVL(MAX(SUBSTR(EVAL_CAT_GRP_ID,4,5)),0)+1,4,'0') SEQ FROM BOSS_CAT_GRP
		</selectKey>
		INSERT INTO BOSS_CAT_GRP ( 
			   YEAR
			 , EVAL_CAT_GRP_ID
			 , EVAL_CAT_GRP_NM
			 , SORT_ORDER
			 , CREATE_DT
			 ) VALUES ( 
			   #year#
			 , #SEQ#
			 , #evalCatGrpNm#
			 , #sortOrder#
			 , SYSDATE
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 기관장평가범주관리 수정
	  #	기능	: UPDATE
	  #	TABLE	: BOSS_CAT_GRP
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BOSS_CAT_GRP 
		   SET EVAL_CAT_GRP_NM        = #evalCatGrpNm# 
			 , SORT_ORDER             = #sortOrder# 
		 WHERE YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 기관장평가범주관리 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BOSS_CAT_GRP
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BOSS_CAT_GRP 
		 WHERE YEAR = #year#
		   AND EVAL_CAT_GRP_ID = #evalCatGrpId#
	</update>
	
	<!--
	==================================================================   
	  # 설명	: 기관장평가범주관리 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BOSS_CAT_GRP
	==================================================================
	-->	
	<update id="deleteAllData" parameterClass="hashMap">
		DELETE FROM BOSS_CAT_GRP 
		 WHERE YEAR = #year#
	</update>
	
	<!--
	==================================================================   
	  # 설명	: 기관장평가범주관리 복사
	  #	기능	: INSERT
	  #	TABLE	: BOSS_CAT_GRP
	==================================================================
	-->	
	<insert id="insertAllData" parameterClass="hashMap">
		INSERT INTO BOSS_CAT_GRP 
         SELECT YEAR
	           ,'BCR' ||LPAD(TO_NUMBER(REPLACE(NVL(EVAL_CAT_GRP_ID, 0), 'GCR', '')) + 1, 4, '0') EVAL_CAT_GRP_ID
	           ,EVAL_CAT_GRP_NM 
	           ,SORT_ORDER
	           ,SYSDATE
          FROM GOV_EVAL_CAT_GRP
         WHERE YEAR=#year# 
	</insert>	
	
	
</sqlMap>


