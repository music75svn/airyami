							{name:'WEIGHT_GRP_NM'        ,index:'WEIGHT_GRP_NM'        ,width:150   ,align:'left'   ,sortable:false ,formatter:nullName},
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:150   ,align:'center' ,sortable:false}, 
