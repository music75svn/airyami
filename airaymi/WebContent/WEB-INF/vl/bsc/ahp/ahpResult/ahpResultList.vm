#set($curr_url = $!{context_path} + "/bsc/ahp/ahpResult/ahpResultList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/ahp/ahpResult/ahpResultList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가단 코드', '평가단', '평가대상 그룹코드', '평가대상 그룹', '평가대상 수', '총가중치','TOT_CNT','EVAL_CNT', '평가제출/총평가자', '평가상태코드', '평가상태'],
			colModel     :[
                            {name:'EVAL_USER_GRP_ID'     ,index:'EVAL_USER_GRP_ID'     ,width:150   ,align:'center' },
                            {name:'EVAL_USER_GRP_NM'     ,index:'EVAL_USER_GRP_NM'     ,width:150   ,align:'left'   },
							{name:'ITEM_GRP_ID'          ,index:'ITEM_GRP_ID'          ,width:150   ,align:'center' },
                            {name:'ITEM_GRP_NM'          ,index:'ITEM_GRP_NM'          ,width:150   ,align:'left'   ,formatter:linkUpdate},
							{name:'ITEM_CNT'             ,index:'ITEM_CNT'             ,width:60    ,align:'center' },
                            {name:'TOT_WEIGHT'           ,index:'TOT_WEIGHT'           ,width:60    ,align:'center' },
							{name:'TOT_CNT'              ,index:'TOT_CNT'              ,width:50    ,align:'center' },
							{name:'EVAL_CNT'             ,index:'EVAL_CNT'             ,width:50    ,align:'center' },
                            {name:'CNT'                  ,index:'CNT'                  ,width:60    ,align:'center' },
							{name:'EVAL_CLOSING_YN'      ,index:'EVAL_CLOSING_YN'      ,width:60    ,align:'center' },
							{name:'EVAL_CLOSING_YN_NM'   ,index:'EVAL_CLOSING_YN_NM'   ,width:60    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"AHP 평가결과"
        }).jqGrid('hideCol',"EVAL_USER_GRP_ID").jqGrid('hideCol',"ITEM_GRP_ID").jqGrid('hideCol',"EVAL_CLOSING_YN").jqGrid('hideCol',"TOT_CNT").jqGrid('hideCol',"EVAL_CNT").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 마감버튼 클릭 이벤트
		 ******************************************/
		J("#btnCloseY").click(function() {
			goCloseY();
			return false;
		});

		/******************************************
		 * 마감취소 버튼 클릭 이벤트
		 ******************************************/
		J("#btnCloseN").click(function() {
			goCloseN();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#itemGrpId").val(ret.ITEM_GRP_ID);
		J("#evalUserGrpId").val(ret.EVAL_USER_GRP_ID);
		J("#evalUserId").val(ret.EVAL_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpResult/ahpResultModify.vw?type=template").submit();
	}

	/******************************************
	 * 마감
	 ******************************************/
	function goCloseY() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("마감할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("마감하시겠습니까?", "closeDoY"); //closeDoY() 콜백함수 호출
		}
	}

	/******************************************
	 * 마감취소
	 ******************************************/
	function goCloseN() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("마감취소할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("마감취소 하시겠습니까?", "closeDoN"); //closeDoN() 콜백함수 호출
		}
	}

	/******************************************
	 * 마감처리
	 ******************************************/
	function closeDoY() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemGrpIds = "";
		var evalUserGrpIds = "";
		var chk = "N";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					itemGrpIds += rowdata.ITEM_GRP_ID + '|';
					evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';

					if(rowdata.TOT_CNT != rowdata.EVAL_CNT) {
						chk = "Y";
					}
				}
			});
		}

		if(chk == "Y") {
			J.showMsgBox("평가를 제출하지 않은 평가자가 있습니다.", null, null);
		} else {
    		J("#closeYn").val('Y');
    		J("#itemGrpIds").val(itemGrpIds);
    		J("#evalUserGrpIds").val(evalUserGrpIds);
    		J("#mode").val("CLOSE");
    		J("#year").val(J("#findYear").val());
    		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpResult/ahpResultProcess.vw?type=template").submit();
		}

		return false;
	}

	/******************************************
	 * 마감취소 처리
	 ******************************************/
	function closeDoN() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemGrpIds = "";
		var evalUserGrpIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					itemGrpIds += rowdata.ITEM_GRP_ID + '|';
					evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';
				}
			});
		}

		J("#closeYn").val('N');
		J("#itemGrpIds").val(itemGrpIds);
		J("#evalUserGrpIds").val(evalUserGrpIds);
		J("#mode").val("CLOSE");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpResult/ahpResultProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpResult/ahpResultListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

