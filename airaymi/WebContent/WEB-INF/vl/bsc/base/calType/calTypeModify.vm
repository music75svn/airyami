    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
    					<tr>
    						<th scope="row"><label for="calTypeId">산식패턴코드</label></th>
    						<td>
								#if($!{searchMap.txt2html("mode")} == "MOD")
									$!{CS_HTML.txt2html($detail.CAL_TYPE_ID)}
