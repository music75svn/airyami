	   J("#formList").attr("action", "$!{context_path}/prs/mng/evalAssessor/evalAssessorProcess.vw?type=template").submit();
	}
	
	
	/******************************************
	 * 개인별 2차평가자 불러오기
	 ******************************************/
	function getEmpnInfo() {
		J.showConfirmBox(J("#btnEmpnInfo").val()+"시 <br/><font color='red' style='font-weight:bold;'>기존평가 결과 및 평가자 정보</font>가 삭제됩니다.<br/>"+ J("#btnEmpnInfo").val()+"하시겠습니까?", "getEmpnInfoDo"); //getInsaInfoDo() 콜백함수 호출
	}
	
	/******************************************
	 * 개인별 2차평가자 불러오기 처리
	 ******************************************/
	function getEmpnInfoDo() {
	   J("#mode").val("ASSESSOR");
	   J("#evalDegreeId").val("20");
	   J("#formList").attr("action", "$!{context_path}/prs/mng/evalAssessor/evalAssessorProcess.vw?type=template").submit();
	}
	
	
	 /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#castTcNm").val(J("input:radio[name=findCastTc]:checked").val());
		J("#evalGrpNm").val(J("#findEvalGrpId > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/mng/evalAssessor/evalAssessorListExcel.vw?type=excel").submit();
        return false;
    }
	
