<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
		try {
			$("input", ".blockButton" ).button(); //버튼 ui 적용
		} catch(err) { }
	});
	
	/******************************************
	 * 확인버튼 이벤트
	 ******************************************/
	J("#btnConfirmPop").click(function(e) {
		var deptCd = J("#deptCdPop").val();
		var deptNm = J("#deptNmPop").val();
		setDeptInfoPop(deptCd, deptNm);
	});
	
	/******************************************
	 * 취소버튼 이벤트
	 ******************************************/
	J("#btnCanclePop").click(function(e) {
		J.fancybox.close();
	});
	
	/******************************************
	 * 조직선택 클릭 이벤트
	 ******************************************/
	function goClickActionPop(deptCd, deptNm) {
	
		J("#deptCdPop").val(deptCd);
		J("#deptNmPop").val(deptNm);
	}
	
	/******************************************
	 * 조직선택 더블클릭 이벤트
	 ******************************************/
	function goDblClickActionPop(deptCd, deptNm) {
		setDeptInfoPop(deptCd, deptNm);
	}

//]]>
</script>

