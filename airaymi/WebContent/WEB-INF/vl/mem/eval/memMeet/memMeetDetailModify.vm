			e.preventDefault();
			complateChk();
		});
		
		/******************************************
		 * 면담완료취소버튼 이벤트
		 ******************************************/
		J("#btnCancel").click(function(e) {
			e.preventDefault();
			complateCancelChk();
		});
		
		
