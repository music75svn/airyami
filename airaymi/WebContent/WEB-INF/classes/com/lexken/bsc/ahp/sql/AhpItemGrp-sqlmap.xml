<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.ahp.ahpItemGrp">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_AHP_ITEM_GRP 
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: AHP 평가대상그룹 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_AHP_ITEM_GRP 
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR
             , A.ITEM_GRP_ID
             , A.ITEM_GRP_NM
             , A.CONTENT
             , A.SORT_ORDER
             , (SELECT COUNT(1) FROM BSC_AHP_ITEM B WHERE B.YEAR = A.YEAR AND A.ITEM_GRP_ID = B.ITEM_GRP_ID) AS ITEM_CNT
             , (SELECT COUNT(1) FROM BSC_AHP_EVAL_MAPPING B WHERE B.YEAR = A.YEAR AND A.ITEM_GRP_ID = B.ITEM_GRP_ID) AS MAPPING_CNT
         FROM BSC_AHP_ITEM_GRP A
        WHERE A.YEAR = #findYear#
        ORDER BY A.SORT_ORDER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가대상그룹 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_AHP_ITEM_GRP 
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , ITEM_GRP_ID           
			 , ITEM_GRP_NM           
			 , CONTENT               
			 , SORT_ORDER            
		  FROM BSC_AHP_ITEM_GRP  
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND ITEM_GRP_ID = #itemGrpId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가대상그룹 지표 등록 여부 확인
	  #	기능	: SELECT
	  #	TABLE	: BSC_AHP_ITEM_GRP
	==================================================================
	-->	
	<select id="getMetricGrpCount" parameterClass="hashMap" resultClass="java.lang.Integer">
		SELECT COUNT(1) CNT 
		  FROM BSC_AHP_ITEM
		 WHERE YEAR = #findYear# AND ITEM_GRP_ID = #itemGrpId# AND METRIC_GRP_ID = #metricGrpId#
	</select>
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가대상그룹 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_AHP_ITEM_GRP 
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT F_PGM_SERI('BSC_AHP_ITEM_GRP',#year#,'','','','') SEQ FROM DUAL
		</selectKey>
		INSERT INTO BSC_AHP_ITEM_GRP  ( 
			   YEAR
			 , ITEM_GRP_ID
			 , ITEM_GRP_NM
			 , CONTENT
			 , SORT_ORDER
			 , CREATE_DT
			 ) VALUES ( 
			   #year#
			 , #SEQ#
			 , #itemGrpNm#
			 , #content#
			 , #sortOrder#
			 , SYSDATE
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가대상그룹 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_ITEM_GRP 
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_AHP_ITEM_GRP  
		   SET ITEM_GRP_NM            = #itemGrpNm# 
			 , CONTENT                = #content# 
			 , SORT_ORDER             = #sortOrder# 
			 , MODIFY_DT              = SYSDATE 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND ITEM_GRP_ID = #itemGrpId#		
	</update>

	<!--
	==================================================================   
	  # 설명	: AHP 평가대상그룹 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_ITEM_GRP 
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BSC_AHP_ITEM_GRP  
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND ITEM_GRP_ID = #itemGrpId#
	</update>
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가대상그룹 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_AHP_ITEM_GRP 
	==================================================================
	-->
	<select id="getItemList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR
		     , A.ITEM_ID
		     , A.ITEM_NM
		     , A.ITEM_GRP_ID
		     , A.CONTENT
		     , A.METRIC_GRP_ID
		     , CASE WHEN B.METRIC_GRP_ID IS NOT NULL THEN B.METRIC_GRP_NM
		            WHEN C.MAN_KPI_GRP_ID IS NOT NULL THEN C.MAN_KPI_GRP_NM
		            END METRIC_GRP_NM
		     , A.SORT_ORDER 
		FROM BSC_AHP_ITEM A
		         LEFT OUTER JOIN BSC_METRIC_GRP B ON A.YEAR = B.YEAR AND A.METRIC_GRP_ID = B.METRIC_GRP_ID AND B.DELETE_DT IS NULL
		         LEFT OUTER JOIN MAN_METRIC_GRP C ON A.METRIC_GRP_ID = C.MAN_KPI_GRP_ID AND C.DELETE_DT IS NULL
		WHERE A.YEAR = #findYear#
		  AND A.ITEM_GRP_ID = #findItemGrpId#
		ORDER BY A.SORT_ORDER
	</select>	
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가대상 입력
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_ITEM 
	==================================================================
	-->	
	<insert id="insertBatchItemData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT F_PGM_SERI('BSC_AHP_ITEM',#year#,'','','','') SEQ FROM DUAL
		</selectKey>
		INSERT INTO BSC_AHP_ITEM (
		       YEAR
		     , ITEM_ID
		     , ITEM_NM
		     , ITEM_GRP_ID
		     , METRIC_GRP_ID
		     , CONTENT
		     , SORT_ORDER
		     , CREATE_DT
		     ) VALUES (
               #year#        
             , #SEQ# 
             , #itemNm#      
             , #itemGrpId#   
             , #metricGrpId# 
             , #content#     
             , #sortOrder#   
             , SYSDATE
		     )	
	</insert>
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가대상 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_ITEM 
	==================================================================
	-->	
	<update id="updateBatchItemData" parameterClass="hashMap">
		UPDATE BSC_AHP_ITEM
		   SET ITEM_NM       = #itemNm#
		     , METRIC_GRP_ID = #metricGrpId#
		     , CONTENT       = #content#
		     , SORT_ORDER    = #sortOrder#
		WHERE  YEAR          = #year#
		  AND  ITEM_ID       = #itemId#		
	</update>
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가대상 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_ITEM 
	==================================================================
	-->	
	<update id="deleteBatchItemData" parameterClass="hashMap">
		DELETE FROM BSC_AHP_ITEM  
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND ITEM_ID = #itemId#
	</update>

	<!--
	==================================================================   
	  # 설명	: AHP 평가표 삭제
	  #	기능	: DELETE
	  #	TABLE	: BSC_AHP_ITEM_TAB
	==================================================================
	-->	
	<update id="deleteItemTabData" parameterClass="hashMap">
		DELETE FROM BSC_AHP_ITEM_TAB
		 WHERE YEAR = #year#
		   AND ITEM_GRP_ID = #itemGrpId#
	</update>	
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가표 입력
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_ITEM_TAB 
	==================================================================
	<insert id="insertItemTabData" parameterClass="hashMap">
		INSERT INTO BSC_AHP_ITEM_TAB(YEAR, ITEM_ID, PER_ITEM_ID, ITEM_GRP_ID, CREATE_DT)
		SELECT A.YEAR
		     , A.ITEM_ID
		     , B.ITEM_ID AS PRE_ITEM_ID
		     , A.ITEM_GRP_ID
		     , SYSDATE
		FROM  BSC_AHP_ITEM A
		      LEFT OUTER JOIN BSC_AHP_ITEM B ON B.YEAR = #year# AND B.ITEM_GRP_ID = #itemGrpId#
		WHERE A.YEAR = #year#
	      AND A.ITEM_GRP_ID = #itemGrpId#
		  AND A.ITEM_ID != B.ITEM_ID   
	</insert>
	-->	

	<!--
	==================================================================   
	  # 설명	: AHP 평가표 입력 파라미터 맵
	  #	기능	: SETTING
	  #	TABLE	: BSC_AHP_ITEM_TAB
	==================================================================
	-->		
	<parameterMap id="insertItemTabDataParamMap" class="java.util.HashMap">
		<parameter property="year" 		jdbcType="VARCHAR"  javaType="java.lang.String" mode="IN"/>	
		<parameter property="itemGrpId"	jdbcType="VARCHAR"  javaType="java.lang.String" mode="IN"/>
	</parameterMap>			
	
	<!--
	==================================================================   
	  # 설명	: AHP 평가표 입력 프로시져 실행
	  #	기능	: UPDATE
	  #	TABLE	: BSC_AHP_ITEM_TAB 
	==================================================================
	-->		
	<procedure id="execInsertItemTabData" parameterMap="insertItemTabDataParamMap">  
		{CALL SP_AHP_QUESTION_CREATE(?, ?)}
	</procedure>	
	
</sqlMap>


