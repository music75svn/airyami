<script type="text/javascript" language="javascript" >
//<![CDATA[
    
	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/dir/dirFinalEval/dirEvalResultList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_r_width},
			colNames     :['년도', '사번', '이름','직무성과<br>기술서', '평가확정여부', '대상여부', '부서코드', '직급코드', '직급', '직위코드', '직위', '근무기간','내평점수','정평점수', '리더십평가','종합경영효율성','평점','순위','최종등급','퇴직이사유무'],
			colModel     :[
							{name:'YEAR'				,index:'YEAR'				,width:50		,align:'center'},
							{name:'EMPN'				,index:'EMPN'				,width:50		,align:'center'},
							{name:'KOR_NM'				,index:'KOR_NM'				,width:50		,align:'center'},
						    {name:'RPT_SUBMIT_YN'		,index:'RPT_SUBMIT_YN'		,width:50		,align:'center',formatter:linkRptBtn},
							{name:'LEADERSHIP_YN'		,index:'LEADERSHIP_YN'		,width:50		,align:'center'},
							{name:'EVAL_YN'				,index:'EVAL_YN'			,width:70		,align:'center'},
							{name:'DEPT_CD'				,index:'DEPT_CD'			,width:70		,align:'center'},
							{name:'CAST_TC'				,index:'CAST_TC'			,width:70		,align:'center'},
							{name:'CAST_NM'				,index:'CAST_NM'			,width:40		,align:'center'},
							{name:'POS_TC'				,index:'POS_TC'				,width:70		,align:'center'},
							{name:'POS_NM'				,index:'POS_NM'				,width:50		,align:'center'},
							{name:'DUTY_DT'				,index:'DUTY_START_DT'		,width:100		,align:'center'},
							{name:'BSC_SCORE'			,index:'BSC_SCORE'			,width:50		,align:'center'},
							{name:'GOV_SCORE'			,index:'GOV_SCORE'			,width:50		,align:'center'},
							{name:'LEADERSHIP_SCORE'	,index:'LEADERSHIP_SCORE'	,width:50		,align:'center'},
							{name:'EFF_SCORE'			,index:'EFF_SCORE'			,width:60		,align:'center'},
						    {name:'FINAL_SCORE'			,index:'FINAL_SCORE'		,width:40		,align:'center'},
							{name:'FINAL_RANKING'		,index:'FINAL_RANKING'		,width:40		,align:'center'},
							{name:'FINAL_GRADE'			,index:'FINAL_GRADE'		,width:40		,align:'center'},
						    {name:'RETIRE_YN'			,index:'RETIRE_YN'			,width:40		,align:'center'}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : false,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate: {sortable:false},
			loadComplete : function() {

                var id         = J("#list").getGridParam('selarrrow');
                var ids        = J("#list").jqGrid('getDataIDs');
                
                /******************************************
		         * 초기값 설정
		         ******************************************/
		        #if("Y" == "$!{evalYn.DIR_EVAL_YN}")		    //평가확정시에만 평가결과확정할수있음.    	
		        		
						#if("N" == "$!{evalYn.DIR_FINAL_YN}")
							J("#alertDis").html("※  평가 확정 진행 후, 평가 결과를 확인 가능합니다." ).attr("class","txt_red");
							J("#btnfinaleval").val("확정");
							J("#evalYn").val("Y");
					
						#elseif("Y" == "$!{evalYn.DIR_FINAL_YN}")
							J("#btnfinaleval").val("확정취소");
							J("#evalYn").val("N");
						
						#end
				#else
					J("#alertDis").html("※  평가 후 확정을 완료하시면 평가결과 확정이 가능합니다." ).attr("class","txt_red");
				#end 
				
				

			},
			caption:"임원평가"
		}).jqGrid('hideCol', "RPT_SUBMIT_YN").jqGrid('hideCol', "RETIRE_YN").jqGrid('hideCol', "YEAR").jqGrid('hideCol', "LEADERSHIP_YN").jqGrid('hideCol', "EVAL_YN").jqGrid('hideCol', "DEPT_CD").jqGrid('hideCol', "CAST_TC").jqGrid('hideCol', "POS_TC").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
		/******************************************
         * 확정
         ******************************************/        
        J("#btnfinaleval").click(function(e) {
            e.preventDefault();
            J("#mode").val("RST");
            J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
        });
		
	});

	

    /******************************************
     * 저장
     ******************************************/
    function saveDo() {
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/dir/dirFinalEval/dirEvalResultProcess.vw?type=template").submit();

        return false;

    }
    /******************************************
	 * jqGrid 직무성과기술서 버튼 추가
	 ******************************************/
	function linkRptBtn(cellvalue, options, rowObject) {
        var str = '';
		if (rowObject.RPT_SUBMIT_YN == "Y") {
			str += '<input type="button" id="btnShowRpt" value="조회" onclick="javascript:showRpt(\'' + rowObject.YEAR + '\',  \'' + rowObject.EMPN +'\');return false;" />';
		} else {
			str += "미제출";
		}
		return str;
    }
    
	 /******************************************
     * 직무성과기술서
     ******************************************/
	function showRpt(year,  empn) {
		var popWidth = '1300';
		var popHeight = '768';
		var param = "&amp;year=" + year + "&amp;empn=" + empn ;
		var url = "$!{context_path}/prs/dir/dirFinalEval/showRpt.vw?type=popup" + param;
		openWinByName(url,'showRpt',popWidth,popHeight,'yes');
	}
//]]>
</script>

