<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="CodeUtil">

	<!--
	==================================================================   
	  # 설명		: typeAlias 선언
	  #	기능		: SETTING
	  #	TABLE	: 
	==================================================================
	-->	
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	<typeAlias alias="codeUtilVO" 		type="com.lexken.framework.codeUtil.CodeUtilVO" />


	<!--
	==================================================================   
	  # 설명	: 공통코드 목록
	  #	기능	: SELECT
	  #	TABLE	: BSC_CODE_GRP
	==================================================================
	-->	
	<select id="getCodeGrpList" resultClass="codeUtilVO">
        SELECT CODE_GRP_ID    
             , CODE_GRP_NM    
             , CODE_DEF_ID    
             , YEAR_YN    
             , CONTENT    
             , CREATE_DT    
             , DELETE_DT
          FROM BSC_CODE_GRP
         WHERE DELETE_DT IS NULL
         ORDER BY CODE_GRP_ID ASC
	</select>

	<!--
	==================================================================   
	  # 설명	: 코드 목록
	  #	기능	: SELECT
	  #	TABLE	: BSC_CODE
	==================================================================
	-->	
	<select id="getCodeList" parameterClass="java.lang.String" resultClass="codeUtilVO">
		SELECT A.CODE_GRP_ID    
	         , A.CODE_ID    
	         , A.YEAR    
	         , A.CODE_NM    
	         , A.SORT_ORDER    
	         , A.CONTENT    
	         , A.ETC1    
	         , A.ETC2    
	         , B.CODE_GRP_NM
             , B.YEAR_YN
	      FROM BSC_CODE A  
	           LEFT OUTER JOIN BSC_CODE_GRP B ON A.CODE_GRP_ID = B.CODE_GRP_ID
	     WHERE A.DELETE_DT IS NULL
         ORDER BY A.CODE_GRP_ID ASC, A.SORT_ORDER ASC
	</select>	
 
 
	
	
</sqlMap>


