<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/prs/org/orgConnItem/orgConnItemList.vw?type=template").submit();
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#content").checkbyte({
			indicator:J("#indicator"),
			limit:3000
		});
		J("#content").trigger("keyup");

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {

		if(!J.checkLength("orgConnItemNm", "연계항목명", 1, 100)) {
			return;
		}

        if( !LengthCheck( J("#content").val(), "연계설명", 0, 1500 ) ) {
            J("#content").focus();
            return;
        }

		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#deleteDt").attr("disabled", false);
		J("#form1").attr("action", "$!{context_path}/prs/org/orgConnItem/orgConnItemProcess.vw?type=template").submit();
	}

//]]>
</script>

