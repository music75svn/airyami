                            {name:'EVAL_METRIC_SCORE'    ,index:'EVAL_METRIC_SCORE'    ,width:70    ,align:'center' ,sortable:true},
                            {name:'ADJUST_SCORE'         ,index:'ADJUST_SCORE'         ,width:70    ,align:'center' ,sortable:true ,formatter:linkScore},
