#set($curr_url = $!{context_path} + "/mem/base/memEvalGrade/memEvalGradeList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/base/memEvalGrade/memEvalGradeList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가방법 코드', '평가방법', '평가방법 구분 코드', '평가방법 구분', '설명', '평가항목수'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'EVAL_METHOD_ID'       ,index:'EVAL_METHOD_ID'       ,width:150   ,align:'center' },
                            {name:'EVAL_METHOD_NM'       ,index:'EVAL_METHOD_NM'       ,width:150   ,align:'left'   ,formatter:linkUpdate},
                            {name:'EVAL_METHOD_GBN_ID'   ,index:'EVAL_METHOD_GBN_ID'   ,width:150   ,align:'center' },
                            {name:'EVAL_METHOD_GBN_NM'   ,index:'EVAL_METHOD_GBN_NM'   ,width:100   ,align:'center' ,formatter:linkViewDistriTab},
                            {name:'CONTENT'              ,index:'CONTENT'              ,width:250   ,align:'left' 	},
                            {name:'GRADE_ITEM_CNT'       ,index:'GRADE_ITEM_CNT'       ,width:100   ,align:'center' ,formatter:linkPartList}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			cmTemplate	 : {sortable:true},
			caption:"평가등급및환산표"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_METHOD_ID").jqGrid('hideCol',"EVAL_METHOD_GBN_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGrade/memEvalGradeModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalMethodId").val(ret.EVAL_METHOD_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGrade/memEvalGradeModify.vw?type=template").submit();
	}

	/******************************************
	 * jqGrid 세부리스트 링크
	 ******************************************/
	function linkPartList(cellvalue, options, rowObject) {
		return '<a href=javascript:goPartList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 코드리스트 조회
	 ******************************************/
	function goPartList(rowId) {

		var ret = J("#list").jqGrid('getRowData',rowId);
		var evalMethodGbnId = ret.EVAL_METHOD_GBN_ID;
		var year 			= ret.YEAR;
		var evalMethodId 	= ret.EVAL_METHOD_ID;

		J("#evalMethodId").val(evalMethodId);
		J("#year").val(year);

		if(evalMethodGbnId=="01"){
			J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGradeDistri/memEvalGradeDistriList.vw?type=template").submit();
			return false;
		}else if(evalMethodGbnId=="02"){
			J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGradeScore/memEvalGradeScoreList.vw?type=template").submit();
			return false;
		}else if(evalMethodGbnId=="03"){
			J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGradeTab/memEvalGradeTabList.vw?type=template").submit();
			return false;
		}
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkViewDistriTab(cellvalue, options, rowObject) {
		var retVal = "";
		var evalMethodGbnId = rowObject.EVAL_METHOD_GBN_ID;

		if(evalMethodGbnId == "01"){
			retVal = "<div>"+ cellvalue + "<a href=javascript:goPopDistriTab(" + options.rowId + ")>" + "<img name=\'opi\'  src=\'$!{img_path}/common/board/ic_search.gif\' >" + "</a></div>";
		}else {
			retVal = cellvalue;
		}
		return retVal;
	}


	/******************************************
	 * 등급배분표 팝업 클릭 이벤트
	 ******************************************/
	function goPopDistriTab(rowId) {

		var ret = J("#list").jqGrid('getRowData',rowId);

		var year = ret.YEAR;
		var evalMethodId = ret.EVAL_METHOD_ID;
		var popWidth = '880';
		var popHeight = '530';


		var param = "&amp;year=" + year + "&amp;evalMethodId=" + evalMethodId ;

		var url = "$!{context_path}/bsc/common/evalGradeDistri/popDistriTabList.vw?type=popup" + param;
		openWinByName(url,'DistriTabPop',popWidth,popHeight,'yes');

	}


	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		if(J("#findUseYn").val() == 'N'){
			J.showMsgBox("이미 삭제된  평가방법 입니다.", null, null);
			return;
		}

		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalMethodIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalMethodIds += rowdata.EVAL_METHOD_ID + '|';
				}
			});
		}

		J("#evalMethodIds").val(evalMethodIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGrade/memEvalGradeProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#useYn").val(J("#findUseYn").val());
		J("#useYnNm").val(J("#findUseYn > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGrade/memEvalGradeListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

