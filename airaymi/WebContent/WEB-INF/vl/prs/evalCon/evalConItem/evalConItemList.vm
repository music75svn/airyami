        /******************************************
         * 조회
         ******************************************/
        J("#formFind").submit(function(event) {
            //submit 하기전 작업추가
        });
        
        /******************************************
         * 신규 등록
         ******************************************/
        J("#btnInsert").click(function() {
			var weightSum = '$!{weightSum}';
            J("#year").val(J("#findYear").val());
            J("#mode").val("ADD");
			J("#sumAdd").val(weightSum);
			/*
			if(weightSum == "100"){
				J.showMsgBox("가중치 합계 100이 되어 등록하실 수 없습니다.", null, null);
				return false;
			}
			*/
            J("#formList").attr("action", "$!{context_path}/prs/evalCon/evalConItem/evalConItemModify.vw?type=template").submit();
        });
        
        /******************************************
         * 삭제 버튼 클릭 이벤트
         ******************************************/
        J("#btnDelete").click(function() {
            goDelete();
            return false;
        });
		
		/******************************************
		 * 정렬수정
