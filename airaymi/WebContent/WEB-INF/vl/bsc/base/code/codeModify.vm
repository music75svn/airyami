	<input type="hidden"	id="codeGrpId"	name="codeGrpId"	value="$!{searchMap.txt2html("codeGrpId")}" />
	<input type="hidden"	id="codeDefId"	name="codeDefId"	value="$!{CS_HTML.txt2html($codeGrpDatail.CODE_DEF_ID)}" />
	
