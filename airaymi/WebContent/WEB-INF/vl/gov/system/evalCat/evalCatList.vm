#set($curr_url = $!{context_path} + "/gov/system/evalCat/evalCatList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/system/evalCat/evalCatList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가범주코드', '평가범주', '경영지표개수', '평가부문코드', '평가부문', '정렬순서'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:100   ,align:'center', sortable:true },
                            {name:'EVAL_CAT_GRP_ID'      ,index:'EVAL_CAT_GRP_ID'      ,width:100   ,align:'center', sortable:true },
                            {name:'EVAL_CAT_GRP_NM'      ,index:'EVAL_CAT_GRP_NM'      ,width:150   ,align:'center', sortable:true },
                            {name:'METRIC_CNT'           ,index:'METRIC_CNT'           ,width:100   ,align:'center', sortable:true },
                            {name:'EVAL_CAT_ID'          ,index:'EVAL_CAT_ID'          ,width:100   ,align:'center', sortable:true },
                            {name:'EVAL_CAT_NM'          ,index:'EVAL_CAT_NM'          ,width:150   ,align:'center', sortable:true ,formatter:linkUpdate},
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:100   ,align:'center', sortable:true }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   :{sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.METRIC_CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
                           },
			caption:"평가부문관리"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_CAT_GRP_ID").jqGrid('hideCol',"METRIC_CNT").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/system/evalCat/evalCatModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 년도별 평가범주 change 이벤트
		 ******************************************/
		J('#findYear').change(function(){
			chgGovGrp();
		});
	});

	/******************************************
	 * 년도별 평가범주 조회
	 ******************************************/
	function chgGovGrp(){

		J.ajax({
        	url      : "$!{context_path}/gov/system/evalCat/getGovGrpList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findCatGrp").empty();
				J('<option/>').attr('value','').text("전체").appendTo('#findCatGrp');
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findCatGrp');
				})
			}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalCatGrpId").val(ret.EVAL_CAT_GRP_ID);
		J("#evalCatId").val(ret.EVAL_CAT_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/system/evalCat/evalCatModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalCatGrpIds = "";
		var evalCatIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalCatGrpIds += rowdata.EVAL_CAT_GRP_ID + '|';evalCatIds += rowdata.EVAL_CAT_ID + '|';
				}
			});
		}

		J("#evalCatGrpIds").val(evalCatGrpIds);J("#evalCatIds").val(evalCatIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/system/evalCat/evalCatProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#formFind").attr("action", "$!{context_path}/gov/system/evalCat/evalCatListExcel.vw?type=excel").submit();
		J("#formFind").attr("action", "$!{context_path}/gov/system/evalCat/evalCatList.vw?type=template");
		return false;
	}

//]]>
</script>

