                				calculateSumGridColumn(grid, "TOT_CNT");
                				calculateSumGridColumn(grid, "CNT_01");
                				calculateSumGridColumn(grid, "CNT_02");
            }
		}).jqGrid('hideCol',"INSERT_USER_NM1").jqGrid('hideCol',"EMAIL").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 데이터 그리드 출력
