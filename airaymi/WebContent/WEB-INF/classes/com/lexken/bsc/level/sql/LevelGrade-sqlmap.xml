<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.level.levelGrade">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_LEVEL_GRADE
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 난이도평가 평가등급관리 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_GRADE
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT CREATE_DT, GRADE, GRADE_NM, 
		       MODIFY_DT, YEAR, SORT_ORDER
		  FROM BSC_LEVEL_GRADE
		 WHERE YEAR = #findYear#
		 ORDER BY SORT_ORDER ASC
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 난이도평가 평가등급관리 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_GRADE
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , GRADE                 
			 , GRADE_NM              
			 , SORT_ORDER            
		  FROM BSC_LEVEL_GRADE 
		 WHERE 1 = 1 
		   AND YEAR = #findYear#
		   AND GRADE = #grade#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 등급 등록 여부 확인
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_GRADE
	==================================================================
	-->	
	<select id="getGradeCount" parameterClass="hashMap" resultClass="java.lang.Integer">
		SELECT COUNT(1) AS CNT
		  FROM BSC_LEVEL_GRADE 
		 WHERE YEAR = #year#
		   AND GRADE = #grade#
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 난이도평가 평가등급관리 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_LEVEL_GRADE
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		INSERT INTO BSC_LEVEL_GRADE ( 
			   YEAR
			 , GRADE
			 , GRADE_NM
			 , CREATE_DT
			 , SORT_ORDER
			 ) VALUES ( 
			   #year#
			 , #grade#
			 , #gradeNm#
			 , SYSDATE
			 , #sortOrder#
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 난이도평가 평가등급관리 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_LEVEL_GRADE
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_LEVEL_GRADE 
		   SET GRADE_NM               = #gradeNm# 
			 , MODIFY_DT              = SYSDATE 
			 , SORT_ORDER             = #sortOrder# 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND GRADE = #grade#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 난이도평가 평가등급관리 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_LEVEL_GRADE
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BSC_LEVEL_GRADE 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND GRADE = #grade#
	</update>
	
	
</sqlMap>


