	/******************************************
	 * jqGrid 산식항목 목록조회 링크
	 ******************************************/
	function linkCalItem(cellvalue, options, rowObject) {
		return '<a href=javascript:fnCalItem('+options.rowId+')>' + cellvalue + '</a>';
	}
	
	/******************************************
	 * jqGrid 면담유형
	 ******************************************/
	function linkMeetType(cellvalue, options, rowObject) {
		var readOnlyStr = "";
		#if($!{searchMap.txt2html("mode")} == "SEARCH")
			readOnlyStr = "disabled";
		#end
    	var str = "";
		var ids = "meetTypeCd" + rowObject.METRIC_ID;
    	str += '<input type=\"hidden\" id=\"metricIds\" name=\"metricIds\" value=\"'+rowObject.METRIC_ID+'\">';
    	str += '<select id="' + ids + '" name="' + ids + '" class="select w80" '+readOnlyStr+'>';
    		str += '	<option value="">선택</option>';
	#foreach($meetTypeList in $meetTypeList)
    	if (cellvalue == "$!{CS_HTML.txt2html($meetTypeList.CODE_ID)}") {
    		str += '	<option value="$!{CS_HTML.txt2html($meetTypeList.CODE_ID)}" selected>$!{CS_HTML.txt2html($meetTypeList.CODE_NM)}</option>';
    	}else{
    		str += '	<option value="$!{CS_HTML.txt2html($meetTypeList.CODE_ID)}">$!{CS_HTML.txt2html($meetTypeList.CODE_NM)}</option>';
    	}
    	
    #end
        str += '</select>';
    	
    	return str;
	}
	
	/******************************************
	 * jqGrid 추진실적 점검 텍스트
	 ******************************************/
	function linkActCheck(cellvalue, options, rowObject) {
		var str = "";
		var readOnlyStr = "";
		str += "<textarea id=\"actCheck" + rowObject.METRIC_ID + "\" name=\"actCheck" + rowObject.METRIC_ID + "\" readOnly onClick=\"popOpinion("+options.rowId+", 'CHK');\" "+readOnlyStr+" cols=\"18\" rows=\"1\">" + rowObject.ACT_CHECK_CONTENT + "</textarea>";
		return str;
	}
	
	/******************************************
	 * jqGrid 코칭내용 텍스트
	 ******************************************/
	function linkCoaching(cellvalue, options, rowObject) {
		var str = "";
		var readOnlyStr = "";
		str += "<textarea id=\"coaching" + rowObject.METRIC_ID + "\" name=\"coaching" + rowObject.METRIC_ID + "\" readOnly onClick=\"popOpinion("+options.rowId+", 'COA');\" "+readOnlyStr+" cols=\"18\" rows=\"1\">" + rowObject.COACHING_CONTENT + "</textarea>";
		return str;
	}
	
	function popOpinion(rowId, gubun){
		// 선택된 row의 data		
        J("#anchor").attr("href","$!{context_path}/mem/eval/memMeet/popEvalOpinion.vw?rowId="+rowId+"&gubun="+gubun);
        J("#anchor").click();
        return false;
	}
	
	/******************************************
	 * 산식항목 조회 AJAX
	 ******************************************/
	function fnCalItem(rowId) {
		var ret = J("#evalItemlist").jqGrid('getRowData', rowId);
		var param = "&amp;empNo=" + J("#empNo").val()
				   + "&amp;year=" + J("#year").val()
				   + "&amp;findYear=" + J("#year").val()
				   + "&amp;metricId=" + ret.METRIC_ID
				   + "&amp;baseMon=" + ret.BASE_MON
				   + "&amp;typeId=" + ret.TYPE_ID
		           + "&amp;mode=" + "SEARCH";

		var url = "$!{context_path}/mem/eval/memMeet/memEvalActSearchList.vw?type=popup" + param;
		openWinByName(url,'popMemAct','1210','600','yes');
	}
	
	/******************************************
	 * 조회
	 ******************************************/
    function goActualMngAction(metricId, metricNm, evalCycleId) {
		var mode = "$!{searchMap.txt2html("mode")}";
		var year = J("#year").val();
		var findActualType = "$!{searchMap.txt2html("findActualType")}";
		
		J("#metricId").val(metricId);
		J("#metricNm").val(metricNm);
		J("#evalCycleId").val(evalCycleId);

		J.ajax({
        	url      : "$!{context_path}/mem/eval/memActIn/memActualMngDetailList.vw",
        	cache    : false,
        	type     : "POST",
			data     : "mode=SEARCH&year=" + year + "&amp;evalCycleId=" + evalCycleId + "&amp;findYear=" + year + "&amp;findEvalCycleId=" + evalCycleId + "&amp;metricNm=" + metricNm + "&amp;metricId=" + metricId + "&amp;findActualType=" + findActualType,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
        		J("#detailActualMngData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#detailActualMngData").append(data);
        	}
    	});
	}
	
	/******************************************
	 * 조회
	 ******************************************/
    function goActionPlanAction(metricId, metricNm, actInTerm) {
    	var mode = "$!{searchMap.txt2html("mode")}";
		var year = J("#year").val();
		var findActualType = "$!{searchMap.txt2html("findActualType")}";

		J.ajax({
        	url      : "$!{context_path}/mem/eval/memActIn/memActionPlanList.vw",
        	cache    : false,
        	type     : "POST",
			data     : "mode=SEARCH&year=" + year + "&amp;actInTerm=" + actInTerm + "&amp;findYear=" + year + "&amp;findActInTerm=" + actInTerm + "&amp;metricNm=" + metricNm + "&amp;metricId=" + metricId + "&amp;findActualType=" + findActualType,
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
        		J("#detailActionPlanData").empty();  //body부분 div를 empty 시켜줌(empty를 시키지 않을 경우 메모리릭 발생)
        		J("#detailActionPlanData").append(data);
        	}
    	});
	}
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("meetDt", "면담일자", 1, 10)) {
			return;
		}
		if(!J.checkLength("totOpinion", "종합의견", 1, 4000)) {
			return;
		}
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#mode").val("SAVE");
		
		J("#form1").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetDetailModifyProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 면담왕료입력 체크
	 ******************************************/
	function complateChk() {
		
		J.showConfirmBox("면담완료하시겠습니까?", "complateDo"); //complateDo() 콜백함수 호출
	}
	
	/******************************************
	 * 면담왕료취소입력 체크
	 ******************************************/
	function complateCancelChk() {
		
		J.showConfirmBox("면담완료취소하시겠습니까?", "complateCancelDo"); //complateCancelDo() 콜백함수 호출
	}
	/******************************************
	 * 면담왕료
	 ******************************************/
	function complateDo() {
		J("#mode").val("COMPLATE");
		
		J("#form1").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetDetailModifyProcess.vw?type=template").submit();
	}
	/******************************************
	 * 면담왕료취소
	 ******************************************/
	function complateCancelDo() {
		J("#mode").val("CANCEL");
		
		J("#form1").attr("action", "$!{context_path}/mem/eval/memMeet/memMeetDetailModifyProcess.vw?type=template").submit();
	}
//]]>
</script>    
 
