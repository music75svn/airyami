#set($curr_url = $!{context_path} + "/prs/eval/evalConfirm/evalConfirmList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/eval/evalConfirm/evalConfirmList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height}-300,
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가차수 코드', '평가군 코드', '평가군', '평가조직', '사번', '성명', '직위', '평가점수', '등급항목 코드', '등급항목 명', 'GRADE_CNT', 'FINAL_GRADE_ITEM_ID', '평가등급'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:150   ,align:'center' }, 
                            {name:'EVAL_GRP_ID'          ,index:'EVAL_GRP_ID'          ,width:150   ,align:'center' ,formatter:linkUpdate}, 
                            {name:'EVAL_GRP_NM'          ,index:'EVAL_GRP_NM'          ,width:150   ,align:'center' }, 
                            {name:'DEPT_NM'              ,index:'DEPT_NM'              ,width:150   ,align:'center' }, 
                            {name:'EVAL_MEMB_USER_ID'    ,index:'EVAL_MEMB_USER_ID'    ,width:150   ,align:'center' }, 
                            {name:'EVAL_MEMB_USER_NM'    ,index:'EVAL_MEMB_USER_NM'    ,width:150   ,align:'center' }, 
                            {name:'POS_NM'               ,index:'POS_NM'               ,width:150   ,align:'center' }, 
                            {name:'SCORE'                ,index:'SCORE'                ,width:150   ,align:'center' }, 
                            {name:'GRADE_ITEM_ID'        ,index:'GRADE_ITEM_ID'        ,width:150   ,align:'center' }, 
                            {name:'GRADE_ITEM_NM'        ,index:'GRADE_ITEM_NM'        ,width:150   ,align:'center' }, 
                            {name:'GRADE_CNT'            ,index:'GRADE_CNT'            ,width:150   ,align:'center' }, 
                            {name:'FINAL_GRADE_ITEM_ID'  ,index:'FINAL_GRADE_ITEM_ID'  ,width:150   ,align:'center' }, 
                            {name:'FINAL_GRADE_ITEM_NM'  ,index:'FINAL_GRADE_ITEM_NM'  ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"평가결과확인"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"EVAL_GRP_ID").jqGrid('hideCol',"SCORE").jqGrid('hideCol',"GRADE_ITEM_ID").jqGrid('hideCol',"GRADE_ITEM_NM").jqGrid('hideCol',"GRADE_CNT").jqGrid('hideCol',"FINAL_GRADE_ITEM_ID").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/prs/eval/evalConfirm/evalConfirmModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
		});
	});
	
	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		J.ajax({
        	url      : "$!{context_path}/prs/eval/evalGroup/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
		
		<!--평가군 초기화-->
		chgGroup();
	}
	
	/******************************************
	 * 평가군 조회
	 ******************************************/
	function chgGroup(){
		setTimeout(function(){
    		J.ajax({
            	url      : "$!{context_path}/prs/eval/evalConfirm/getGrpList_ajax.vw",﻿
            	cache    : false,
            	type     : "POST",
    			data     : J("#formFind").serialize(),
            	dataType : "html",
            	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            	success  : function (data) {
    				var xmlDoc = J.parseXML(data);
            		J("#findEvalGrpId").empty();
    				J(xmlDoc).find("data").each(function() {
    					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalGrpId');
    				})
    			}
        	});
		},500);	
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
		J("#evalMembUserId").val(ret.EVAL_MEMB_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalConfirm/evalConfirmModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var evalGrpIds = "";
		var evalMembUserIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';evalGrpIds += rowdata.EVAL_GRP_ID + '|';evalMembUserIds += rowdata.EVAL_MEMB_USER_ID + '|';
				}
			});
		}
        
		J("#evalDegreeIds").val(evalDegreeIds);J("#evalGrpIds").val(evalGrpIds);J("#evalMembUserIds").val(evalMembUserIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalConfirm/evalConfirmProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalConfirm/evalConfirmListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

