		 ******************************************/
		J("#btnClose").click(function(e) {
			self.close();
		});
		
		/******************************************
		 * 화면 초기셋팅
		 ******************************************/
		init();
	});
	
	/*****************************************************
	 * 화면초기셋팅
	 *****************************************************/ 
