		}

		return result;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		var str = cellvalue;

		if(rowObject.MAIN_METRIC_YN == "N") {
			str = "<img src=\'$!{img_path}/tree.gif\' >" + str
		}

		return '<a href=javascript:goGovMetricPop(' + options.rowId + ')>' + str + '<//a>';
	}

	/******************************************
	 * 경영평가 지표정의서  팝업
	 ******************************************/
	function goGovMetricPop(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear = J("#findYear").val();
		var findGovMetricId = ret.GOV_METRIC_ID;

		var param = "&amp;year=" + findYear + "&amp;govMetricId=" + findGovMetricId ;

		var url = "$!{context_path}/gov/system/govMetric/popArchiveMonList.vw?type=popup" + param;
		openWinByName(url,'popGovMetricDefine','880','650','yes');
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){

		J("#yearNm").val(J("#findYear :selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/unmeasure/archiveMon/archiveMonListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
