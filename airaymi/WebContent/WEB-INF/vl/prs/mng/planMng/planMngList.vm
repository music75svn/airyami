					savCk = false;
	    		}
				if(savCk){
				goToModify(rowId);
				}else{ return;}
			#end
		}
		goToModify(rowId);
    }
	
	 /******************************************
     * 수정
     ******************************************/
    function goToModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#targetId").val(ret.TARGET_ID);
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
