			url          :"$!{context_path}/cbe/eval/evalRival/popUserDetail_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : 800,
			colNames     :['평가년도', '평가차수 코드'
						 , '성명'
						 , '경쟁 그룹 코드', '경쟁그룹 '
						 , '평가조직'
						 , '1차사업소'
						 , '2차사업소'
						 , '팀'
						 , '직급', '직위', '근무기간'
						 , '평가구분'
						 , '반영제외'
						  ],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'               ,width:999   ,align:'center' }, 
                            {name:'EVAL_DEGREE_ID'      ,index:'EVAL_DEGREE_ID'     ,width:999   ,align:'center' },
							{name:'NAME'        		,index:'NAME'        		,width:100   ,align:'center' },
                            {name:'RIVAL_GRP_ID'        ,index:'RIVAL_GRP_ID'       ,width:999   ,align:'center' }, 
                            {name:'RIVAL_GRP_NM'        ,index:'RIVAL_GRP_NM'       ,width:250   ,align:'left'   }, 
                            {name:'SC_DEPT_NM'          ,index:'SC_DEPT_NM'         ,width:200   ,align:'left'   }, 
                            {name:'ITEM_FRS_DEPT_NM'    ,index:'ITEM_FRS_DEPT_NM'   ,width:200   ,align:'left'   },
							{name:'ITEM_SEC_DEPT_NM'    ,index:'ITEM_SEC_DEPT_NM'   ,width:200   ,align:'left'   },
							{name:'ITEM_TEAM_NM'        ,index:'ITEM_TEAM_NM'       ,width:200   ,align:'left'   },
                            {name:'JIKGUB_NM'           ,index:'JIKGUB_NM'          ,width:100   ,align:'left'   },
							{name:'POS_NM'            	,index:'POS_NM'             ,width:150   ,align:'left'   },
                            {name:'WORK_TERM'           ,index:'WORK_TERM'          ,width:080   ,align:'center' },
							{name:'EVAL_METHOD_GBN_NM'  ,index:'EVAL_METHOD_GBN_NM' ,width:100   ,align:'center' },
							{name:'EVAL_MEMB_USER_ID'   ,index:'EVAL_MEMB_USER_ID'  ,width:080   ,align:'center' , formatter:linkCheckboxUpdate}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption		 :"경쟁 그룹 대상자 반영"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"RIVAL_GRP_ID")
		.setGridWidth(800);
		
		
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form1").submit(function(){
			J("#btnInsert").unbind();
		});
        
		/******************************************
		 * 닫기버튼 이벤트
		 ******************************************/
		J("#btnClose").click(function(e) {
			self.close();
		});
		
	});
	
	
	/******************************************
	 * jqGrid CHECKBOX
	 ******************************************/
	function linkCheckboxUpdate(cellvalue, options, rowObject) {
        return '<input type="checkbox" name="check" value="' + cellvalue + '" />'
	}
	
	
	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		
		var itemCnt = 0;
		var checkCnt = 0;
		
		var reflUserIds = "";
		var nullItems = "";
		var evalTarget = "";
		
		var checkes = J(":input[name=check]");
		J.each(checkes, function (index, value) {
			if(J(value).attr("checked")=="checked"){
				itemCnt++;
				checkCnt++;
			}else {
        		reflUserIds += J(value).val() + '|';
				itemCnt++;
			}
		});
		
		if( checkCnt != itemCnt ){
			J("#reflUserIds").val(reflUserIds);
		}else {
			J.showMsgBox("모든 인원을 반영제외 하셨습니다.", null, null);
			return false;
		}
		J.showConfirmBox("반영하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#mode").val("ADD");
		J("#form1").attr("action", "$!{context_path}/cbe/eval/evalRival/rivalGrpReflProcess.vw?type=popup").submit();
	}
	
//]]>
</script>    
