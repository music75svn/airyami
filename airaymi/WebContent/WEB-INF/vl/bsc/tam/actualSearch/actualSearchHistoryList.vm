<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#form1').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/tam/actualSearch/actualSearchHistoryList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_r_height},
			width        : $!{jqGrid_width},
			colNames     :['변경차수', 'A', 'B', '담당자', '변경날짜'],
			colModel     :[
							{name:'SEQ'               ,index:'SEQ'              ,width:50   ,align:'center' }, 
                            {name:'A'      			  ,index:'A'                ,width:150   ,align:'left'   },
							{name:'B'                 ,index:'B'                ,width:180   ,align:'left'   }, 
                            {name:'INSERT_USERT_NM'   ,index:'INSERT_USERT_NM'  ,width:50    ,align:'center' }, 
                            {name:'CREATE_DT'         ,index:'CREATE_DT'        ,width:100    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : false,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption:"실적조회"
		}).setGridWidth($!{jqGrid_r_width});
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/tam/actualSearch/actualSearchList.vw?type=template").submit();
		});
        
		/******************************************
		 * 평가결과 disabled
		 ******************************************/
		J("input:radio", "#blockDetailTB").attr("disabled", true);
	});

	/******************************************
	 * 조직트리 선택
	 ******************************************/
	function goAction(code, name) {
		var scDeptNm = J(name).text();
		J("#form1 input[name=scDeptId]").val(code);
		J("#form1 input[name=scDeptNm]").val(scDeptNm);
		J("#form1").attr("action", "$!{context_path}/bsc/tam/actualSearch/actualSearchList.vw?type=template").submit();
	}
	
//]]>
</script>    
 
