<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	var grdRowId = 0;
	
	J(document).ready(function(){
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/mem/base/memUser/memUserList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
        /******************************************
         * fancy Box 팝업호출
         ******************************************/
        J("#empNoSearch").fancybox();
        J("#deptSearch").fancybox();
        J("#eval1EmpNoSearch").fancybox();
        J("#eval2EmpNoSearch").fancybox();
	});
	
    /*****************************************************
     * 대상자 설정
     *****************************************************/
    function setEmpNoInfo(arguments) {
        J("#empNo").val(arguments[0]);
        J("#empNm").val(arguments[1]);
        J("#deptCd").val(arguments[2]);
        J("#deptNm").val(arguments[3]);
        J("#posTc").val(arguments[6]);
        J("#castTc").val(arguments[4]);
        J.fancybox.close();
    }
    function setEval1EmpNoInfo(arguments) {
        J("#eval1EmpNo").val(arguments[0]);
        J("#eval1EmpNm").val(arguments[1]);
        J("#eval1DeptCd").val(arguments[2]);
        J("#eval1PosTc").val(arguments[6]);
        J("#eval1CastTc").val(arguments[4]);
        J.fancybox.close();
    }
    function setEval2EmpNoInfo(arguments) {
        J("#eval2EmpNo").val(arguments[0]);
        J("#eval2EmpNm").val(arguments[1]);
        J("#eval2DeptCd").val(arguments[2]);
        J("#eval2PosTc").val(arguments[6]);
        J("#eval2CastTc").val(arguments[4]);
        J.fancybox.close();
    }
	
    /*****************************************************
     * 부서선택 설정
     *****************************************************/ 
    function setDeptInfoPop(deptId, deptNm) {
        deptNm = J(deptNm).text();
        
        J("#deptCd").val(deptId);
        J("#deptNm").val(deptNm);
        J.fancybox.close();
    }

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("empNo", "평가대상자", 1, 6)) {
			return;
		}
		if(!J.checkLength("deptCd", "부서", 1, 4)) {
			return;
		}
		if(!J.checkLength("castTc", "직급", 1, 2)) {
			return;
		}
		if(!J.checkLength("posTc", "직위", 1, 2)) {
			return;
		}
		if(!J.checkLength("evalGrpId", "평가그룹", 1, 7)) {
			return;
		}
		if(!J.checkLength("eval1EmpNo", "1차평가자", 1, 6)) {
			return;
		}
		if(!J.checkLength("eval2EmpNo", "2차평가자", 1, 6)) {
			return;
		}
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/mem/base/memUser/memUserProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
