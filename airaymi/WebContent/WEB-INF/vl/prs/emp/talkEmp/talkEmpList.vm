    var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/emp/talkEmp/talkEmpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['사번','사원번호', '이름', '부서코드','부서명', '직급코드', '직급', '직위코드', '직위','직무수행기간','평가자', '직원평가대상여부'],
			colModel     :[
							{name:'EMPNS'   		,index:'EMPNS'				,width:70		,align:'center' },
							{name:'EMPN'   			,index:'EMPN'				,width:60		,align:'center' },
							{name:'KOR_NM'   		,index:'KOR_NM'				,width:50   	,align:'center' },
							{name:'DEPT_CD'			,index:'DEPT_CD'			,width:150		,align:'center' },
							{name:'DEPT_FULL_NM'	,index:'DEPT_FULL_NM'		,width:100		,align:'left' },
							{name:'CAST_TC'			,index:'CAST_TC'			,width:80		,align:'center' },
							{name:'CAST_TC_NM'		,index:'CAST_TC_NM'			,width:50		,align:'center' },
							{name:'POS_TC'			,index:'POS_TC'				,width:80		,align:'center' },
							{name:'POS_TC_NM'		,index:'POS_TC_NM'			,width:50		,align:'center' },
							{name:'WORK_TREM'		,index:'WORK_TREM'			,width:120		,align:'center' },
							{name:'MANAGER_USER_NM'	,index:'MANAGER_USER_NM'	,width:50		,align:'center' },
							{name:'EVAL_YN'			,index:'EVAL_YN'			,width:80		,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			loadComplete : function() {

                var id         = J("#list").getGridParam('selarrrow');
                var ids        = J("#list").jqGrid('getDataIDs');
                
			},
			caption:"직원개인평가"
		}).jqGrid('hideCol', "DEPT_CD").jqGrid('hideCol', "EMPNS").jqGrid('hideCol', "CAST_TC").jqGrid('hideCol', "POS_TC").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 직원평가가져오기 버튼 클릭 이벤트
		 ******************************************/
		J("#btnInsaInfo").click(function() {
			getInsaInfo();
			return false;
		});
		
		/******************************************
         * 저장
         ******************************************/
        J("#btnSave").click(function(e) {
            e.preventDefault();
            saveChk();
        });
        
        /******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		
		/******************************************
         * 추가
         ******************************************/
        J("#btnInsert").click(function(e) {
			 e.preventDefault();
            goInsert();
        });
		
	});

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
        
        J("#year").val(J("#findYear").val());
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/emp/talkEmp/talkEmpModify.vw?type=template").submit();
    }
    
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
    }
    
    /******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
        
        
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);
                    
                }
            });
        }
        
        
        J("#mode").val("DEL");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/emp/talkEmp/talkEmpProcess.vw?type=template").submit();
        return false;
    }
    
    /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/emp/talkEmp/talkEmpListExcel.vw?type=excel").submit();
        return false;
    }

//]]>
</script>

