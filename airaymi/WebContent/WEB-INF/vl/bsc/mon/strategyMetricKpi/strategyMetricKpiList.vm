<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/mon/strategyMetricKpi/strategyMetricKpiList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height}/2,
			width        : $!{jqGrid_width},
			colNames     :['$!{METRIC_NM} ID', '$!{METRIC_NM}명', '주기', '$!{WEIGHT}', '단위', '목표', '실적', '점수', '상태'],
			colModel     :[
                            {name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:150   ,align:'center' }, 
                            {name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:280   ,align:'justify'	,formatter:linkUpdate }, 
                            {name:'EVAL_CYCLE_NM'        ,index:'EVAL_CYCLE_NM'        ,width:60    ,align:'center' }, 
                            {name:'WEIGHT'               ,index:'WEIGHT'               ,width:60    ,align:'center' }, 
                            {name:'UNIT_NM'              ,index:'UNIT_NM'              ,width:60    ,align:'center' }, 
                            {name:'TARGET'               ,index:'TARGET'               ,width:110   ,align:'right' }, 
                            {name:'ACTUAL'               ,index:'ACTUAL'               ,width:110   ,align:'right' }, 
                            {name:'SCORE'                ,index:'SCORE'                ,width:110   ,align:'right' }, 
                            {name:'STATUS'               ,index:'STATUS'               ,width:60    ,align:'center'		,formatter:linkUpdateSignal }, 
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : false,
			gridview     : true,
			caption:"$!{STRATEGY_NM}$!{METRIC_NM}리스트"
		}).jqGrid('hideCol',"METRIC_ID").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
       	
		/******************************************
		 * 돌아가기버튼 클릭 이벤트
		 ******************************************/
		J("#btnBack").click(function() {
			J("#formFind").attr("action", "$!{context_path}/bsc/mon/strategyMatrix/strategyMatrixList.vw?type=template").submit();
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goMetricDetail(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	
	/******************************************
	 * jqGrid 신호등
	 ******************************************/
	function linkUpdateSignal(cellvalue, options, rowObject) { 
		return "<img name=\'sig\'  src=\'$!{img_path}/common/ball/ball_" + cellvalue + ".gif\' >";
	}
	
	/******************************************
	 * 지표상세현황
	 ******************************************/
	function goMetricDetail(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#metricId").val(ret.METRIC_ID);
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/mon/metricDetail/metricDetailList.vw?type=template").submit();
	}

//]]>
</script>

