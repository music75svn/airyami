#set($curr_url = $!{context_path} + "/prs/org/orgDeptEvalItemAct/orgDeptEvalItemActList.vw")
<script type="text/javascript" language="javascript">
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
	 	var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/org//prs/org/orgDeptEvalItemAct/orgDeptEvalItemActList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height}-23,
			width        : $!{jqGrid_r_width},
			colNames     :[ '$!{ORG_EVAL_ITEM_NM}코드', '평가분야', '$!{ORG_EVAL_ITEM_NM}명', '배점', '산식컬럼', '산식컬럼명', '실적', '평점', '환산점수', '평가년도', '부서코드', 'EVAL_TYPE_CNT', 'EVAL_TYPE_INDEX', 'ORG_EVAL_ITEM_CNT', 'ORG_EVAL_ITEM_INDEX'],
			colModel     :[
							{name:'ORG_EVAL_ITEM_ID'     ,index:'ORG_EVAL_ITEM_ID'     ,width:100   ,align:'center'   ,sortable:false,	formatter:linkOrgEvalItemId},
                            {name:'EVAL_TYPE_NM'         ,index:'EVAL_TYPE_NM'         ,width:100   ,align:'center'   ,sortable:false,	cellattr: attr1Setting},
							{name:'ORG_EVAL_ITEM_NM'     ,index:'ORG_EVAL_ITEM_NM'     ,width:150   ,align:'center'   ,sortable:false,	cellattr: attr2Setting},
							{name:'ALLOC_SCORE'          ,index:'ALLOC_SCORE' 		   ,width:70    ,align:'center'   ,sortable:false,  cellattr: attr2Setting},
							{name:'CAL_TYPE_COL'         ,index:'CAL_TYPE_COL' 		   ,width:70    ,align:'center'   ,sortable:false},
							{name:'CAL_TYPE_COL_NM'      ,index:'CAL_TYPE_COL_NM' 	   ,width:150   ,align:'center'   ,sortable:false},
							{name:'SCORE'         		 ,index:'SCORE'      		   ,width:150   ,align:'center'   ,sortable:false,  formatter:linkScore},
							{name:'VALUE'         		 ,index:'VALUE'      		   ,width:150   ,align:'center'   ,sortable:false,	cellattr: attr2Setting},
							{name:'DEPT_SCORE'     		 ,index:'DEPT_SCORE'           ,width:150   ,align:'center'   ,sortable:false,	cellattr: attr2Setting},
							{name:'YEAR'      			 ,index:'YEAR'     		 	   ,width:10    ,align:'center'	  ,sortable:false},
							{name:'DEPT_CD'      		 ,index:'DEPT_CD'     		   ,width:10    ,align:'center'	  ,sortable:false},
							{name:'EVAL_TYPE_CNT'      	 ,index:'EVAL_TYPE_CNT'        ,width:10    ,align:'center'	  ,sortable:false},
							{name:'EVAL_TYPE_INDEX'      ,index:'EVAL_TYPE_INDEX'      ,width:10    ,align:'center'	  ,sortable:false},
							{name:'ORG_EVAL_ITEM_CNT'    ,index:'ORG_EVAL_ITEM_CNT'    ,width:10    ,align:'center'	  ,sortable:false},
							{name:'ORG_EVAL_ITEM_INDEX'  ,index:'ORG_EVAL_ITEM_INDEX'  ,width:10    ,align:'center'	  ,sortable:false}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : false,
			gridview     : true,
			multiselect  : false,
			cellEdit     : true,
			loadComplete : function() {
							
								//실적산식
								J("input[name=scores]").numeric({allow:"."});        //특정문자 허용(.)
								J("input[name=scores]").css("ime-mode", "disabled"); //한글사용 비활성화	
			},
			caption:"조직별평가실적등록관리"
		}).jqGrid('hideCol',"ORG_EVAL_ITEM_ID").jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_TYPE_CNT").jqGrid('hideCol',"EVAL_TYPE_INDEX").jqGrid('hideCol',"ORG_EVAL_ITEM_CNT").jqGrid('hideCol',"ORG_EVAL_ITEM_INDEX").setGridWidth($!{jqGrid_r_width});
		
		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true, 
          groupHeaders:[
		    {startColumnName: 'CAL_TYPE_COL', numberOfColumns: 2, titleText: '<em>산식항목</em>'}
		  ]	
        });
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			var findYear = J("#findYear").val();
			var oldYear = J("#oldYear").val();
			
			if(findYear == oldYear) { 
    			goGridSearch();
    			return false;
			}
		});
		
		/******************************************
		 * 저장
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			
			J("#mode").val("MOD");
			J("#year").val(J("#findYear").val());
			J("#deptCd").val(J("#findDeptCd").val());
			J("#deptNm").val(J("#findDeptNm").val());
					
			J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
			
		});
		
		/******************************************
		 * 집계
		 ******************************************/
		J("#btnInsertAll").click(function(e) {
			e.preventDefault();
			
			J("#mode").val("MOD2");
			J("#year").val(J("#findYear").val());
			J("#deptCd").val(J("#findDeptCd").val());
			J("#deptNm").val(J("#findDeptNm").val());
					
			J.showConfirmBox("전체 점수집계 하시겠습니까?", "saveDo2"); //saveDo() 콜백함수 호출
			
		});
		
		// 평가 기간 보여주기
		if( "T" == "$!{rptSchedule.RPT_YN}" ){
			var startDt = "$!{CS_FORMAT.dateFormat( $!{rptSchedule.MNG_ORG_START_DT} )}";
			var endDt = "$!{CS_FORMAT.dateFormat( $!{rptSchedule.MNG_ORG_END_DT} )}";
			if( startDt.length > 0 && endDt.length > 0 ){
				J("#alertDis").html("※  간부조직관리역량평가 기간 : " + startDt + " ~ " + endDt );
			}
		} else {
			J("#alertDis").html("※  간부조직관리역량평가 기간이 아닙니다." ).attr("class","txt_red");
			J("#blockButton").hide();
		}
		
	});
	
	/******************************************
     * 저장
     ******************************************/
    function saveDo() {	
    	var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var calTypeCols = "";
		
		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			calTypeCols += rowdata.CAL_TYPE_COL + '|';
		}
		
		J("#calTypeCols").val(calTypeCols);
		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#deptCd").val(J("#findDeptCd").val());
		J("#deptNm").val(J("#findDeptNm").val());
    	J("#formList").attr("action", "$!{context_path}/prs/org/orgDeptEvalItemAct/orgDeptEvalItemActProcess.vw?type=template").submit();
        return false;
    }
    
    /******************************************
     * 집계
     ******************************************/
    function saveDo2() {	
		J("#mode").val("MOD2");
		J("#year").val(J("#findYear").val());
		J("#deptCd").val(J("#findDeptCd").val());
		J("#deptNm").val(J("#findDeptNm").val());
    	J("#formList").attr("action", "$!{context_path}/prs/org/orgDeptEvalItemAct/orgDeptEvalItemActProcess.vw?type=template").submit();
        return false;
    }
	
	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr1Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.EVAL_TYPE_INDEX;
		var rowSpan = rowObject.EVAL_TYPE_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		
		return result;     
	}

	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attr2Setting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.ORG_EVAL_ITEM_INDEX;
		var rowSpan = rowObject.ORG_EVAL_ITEM_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		
		return result;     
	} 	
	
	
    /******************************************
     * jqGrid 세부평가항목
     ******************************************/
    function linkOrgEvalItemId(cellvalue, options, rowObject) {
    	return '<input type="text" name="orgEvalItemIds" value="' + cellvalue + '" class="wp60" readonly="readonly"/>';
    }
	
    /******************************************
     * jqGrid 실적
     ******************************************/
    function linkScore(cellvalue, options, rowObject) {
		return '<input type="text" name="scores" value="' + cellvalue + '" class="wp60"  dir="rtl" style="text-align:right;padding-right:1px"/>';
    }	
	
	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/org//prs/org/orgDeptEvalItemAct/orgDeptEvalItemActList_xml.vw?"+J("#formFind").serialize()}); 
		J("#list").trigger("reloadGrid");
	}
	
	/******************************************
	 * 조직트리 선택
	 ******************************************/
	function goAction(code, name) {
		var deptNm = J(name).text();
		J("#findDeptCd").val(code);
		J("#findDeptNm").val(deptNm);
		goGridSearch();
	}
	
//]]>
</script>

