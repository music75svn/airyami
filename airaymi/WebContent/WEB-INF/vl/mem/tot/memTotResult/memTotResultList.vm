		return false;
	}
    
    /******************************************
     * 년도 변경 이벤트
     ******************************************/
    function changeEvalGun() {

		var findYear = J("#findYear").val();

        J.ajax({
            url        : "$!{context_path}/mem/tot/memTotResult/evalGunList_ajax.vw",
            type       : "POST",
            data       : "findYear="+findYear,
            dataType   : "xml",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            success    : function (xml) {
                J("#findEvalGrpId").empty();
                
                if(J(xml).find("items").find("item").length > 0) {
                    $(xml).find("items").find("item").each(function() {  
                        var evalGunId   = $(this).find("evalGunId").text();
                        var evalGunNm   = $(this).find("evalGunNm").text();
                        
                        J("#findEvalGunId").append("<option value='" + evalGunId +"'>"+evalGunNm+"</option>");
                        
                    });
                }
                J("#findEvalGunId").append("<option value=''>"+'없음'+"</option>");
            },  
            error : function(xhr, status, error) {
                alert(error);
            }
        });
    }
