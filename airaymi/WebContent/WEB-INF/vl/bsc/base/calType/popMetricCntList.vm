<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFindPop').serialize();
		
		jQuery("#itemConMetricList").jqGrid({
			url          :"$!{searchMap.txt2html("context")}/bsc/base/calType/popMetricCntList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : 320,
			colNames     :['$!{searchMap.txt2html("YEAR")}', '$!{searchMap.txt2html("SC_DEPT_NM")}', '$!{searchMap.txt2html("METRIC_NM")}'],
			colModel     :[
							{name:'YEAR'         	,index:'YEAR'        		,width:70    ,align:'center' },
							{name:'SC_DEPT_NM'  	,index:'SC_DEPT_NM'   		,width:200   ,align:'left'   },
							{name:'METRIC_NM'  		,index:'METRIC_NM'   		,width:310   ,align:'left'   }
							],
			rowNum       : 100000,
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			caption		 : "시스템 연계항목 연계된 지표 조회"
		});
        
	});
	
//]]>
</script>

<form id="formFindPop" name="formFindPop" method="post" action="">
	<input type="hidden" name="findYear"      value="$!{searchMap.txt2html("findYear")}" />
	<input type="hidden" name="findCalTypeId" value="$!{searchMap.txt2html("findCalTypeId")}" />
	
    <div style="width:630px;height:400px;">
    	<div id="popMetricGrpArea">
    		<h1 class="none">지표 조회</h1>
    		<div id="userData" style="margin-left:15px;height:340px;width:450px;">
    			<!-- 데이터그리드 Start -->
    			<div class="blockGridListTable">
    				<table id="itemConMetricList" summary="지표 조회">
    					<caption class="none">지표 조회</caption>
    					<thead><tr><th></th></tr></thead>
    					<tbody><tr><td></td></tr></tbody>
    				</table>
    				<div id="pagerPop"></div>                    
    			</div>
    			<!--// 데이터그리드 End -->	
    		</div>
    	</div>
    </div>
</form>
