        return false;
    }


	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/annSal/annSal/annSalList_xml.vw?" + J("#formFind").serialize()});
		J("#list").trigger("reloadGrid");
	}

	/******************************************
	 * 조직선택 클릭이벤트
