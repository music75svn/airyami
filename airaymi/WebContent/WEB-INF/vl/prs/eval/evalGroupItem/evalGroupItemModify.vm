								#end
							</td>
    					</tr>
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="evalGrpNm">평가항목명</label></th>
							<td><input type="text" id="evalItemNm" name="evalItemNm" class="inputbox w400" value='$!{CS_HTML.txt2html($detail.EVAL_ITEM_NM)}' maxlength="50"/></td>
						</tr>
						<tr>
							<th scope="row"><label for="score">배점</label></th>
							<td><input type="text" id="score" name="score" class="inputbox w400" value='$!{CS_HTML.txt2html($detail.SCORE)}' maxlength="3"/>
								#if ($!{CS_HTML.txt2html($evalScore.EVAL_TYPE)} == "01" || $!{CS_HTML.txt2html($evalScore.EVAL_TYPE)} == "02" || $!{CS_HTML.txt2html($evalScore.EVAL_TYPE)} == "03" || $!{CS_HTML.txt2html($evalScore.EVAL_TYPE)} == "04")
								(10점 만점)
								#end
								#if ($!{CS_HTML.txt2html($evalScore.EVAL_TYPE)} == "06" || $!{CS_HTML.txt2html($evalScore.EVAL_TYPE)} == "07" || $!{CS_HTML.txt2html($evalScore.EVAL_TYPE)} == "08")
								(100점 만점)
								#end
							</td>
						</tr>
						<tr>
							<th scope="row"><label for="sortOrder">정렬순서</label></th>
							<td><input type="text" id="sortOrder" name="sortOrder" class="inputbox w400" value='$!{CS_HTML.txt2html($detail.SORT_ORDER)}' maxlength="8"/></td>
						</tr>
						
						<tr>
							<th scope="row"><label for="content">설명</label></th>
							<td>
								<textarea id="content" name="content" class="tabletext" title="설명" cols="" rows="3">$!{CS_HTML.txt2html($detail.CONTENT)}</textarea>
								<span id="contentIndicator">0</span>/500byte
							</td>
						</tr>
    				</tbody>
    			</table>
    		</div>
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnBack"   value="돌아가기" /></li>
    				<li><input type="submit" id="btnInsert" value="저장" /></li>
    			</ul>
    		</div>	
    	</div>
    	<div class="clear"></div>
    </div>
</form>
