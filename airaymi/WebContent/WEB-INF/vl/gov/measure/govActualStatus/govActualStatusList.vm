	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#year").val(J("#findYear").val());
		J("#mon").val(J("#findMon").val());
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#monNm").val(J("#findMon > option:selected").text());
		J("#statusNm").val(J("#findStatus > option:selected").text());

	 	#if($!{searchMap.txt2html("gubun")} == "01")
			J("#formList").attr("action", "$!{context_path}/gov/measure/govActualStatus/govActualStatusListExcel.vw?type=excel").submit();
		#else
			J("#formList").attr("action", "$!{context_path}/gov/measure/govActualStatus/govActualStatusList2Excel.vw?type=excel").submit();
		#end
		return false;
	}

	/******************************************
	 * 메일발송 팝업
	 ******************************************/
	function mailWrite(){
		var list = "";
		var id = "";
		var ids = "";
		var rowdata = "";
		var toMail = "";
		var toName = "";
		var toNameList = "";

		#if($!{searchMap.txt2html("gubun")} == "01")
			list = "list";
			id = J("#list").getGridParam('selarrrow');
			ids = J("#list").jqGrid('getDataIDs');
		#else
			list = "list2";
			id = J("#list2").getGridParam('selarrrow');
			ids = J("#list2").jqGrid('getDataIDs');
		#end

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#"+ list).getRowData(ids[i]);
					if(rowdata.EMAIL != '' && rowdata.EMAIL != null) {
    					toMail += rowdata.EMAIL + "|";

    					#if($!{searchMap.txt2html("gubun")} == "01")
							toName += rowdata.INSERT_USER_NM1 + "|";
    						toNameList += rowdata.INSERT_USER_NM1 + "<" + rowdata.EMAIL + ">;";
    					#else
							toName += rowdata.INSERT_USER_NM1 + "|";
    						toNameList += rowdata.INSERT_USER_NM1 + "<" + rowdata.EMAIL + ">;";
    					#end
					}
				}
			});
		}

		if(!J.gridSelectChk(list)){
			J.showMsgBox("메일을 전송할 대상자를 선택하십시요", null, null);
		} else {
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
    	}
	}

	/******************************************
	 * 실적입력 링크
	 ******************************************/
	function goGovMetricActual(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#year").val(J("#findYear").val());
		J("#findInsertUserId").val(ret.INSERT_USER_ID);

		J("#formFind").attr("action", "$!{context_path}/gov/measure/govActualMng/govActualMngList.vw?type=template").submit();
	}

	/******************************************
	 * 세부요소 입력 링크
	 ******************************************/
	function goGovMetricSubActual(rowId) {
		var ret = J("#list2").jqGrid('getRowData',rowId);
		J("#year").val(J("#findYear").val());
		J("#findInsertUserId").val(ret.INSERT_USER_ID);

		J("#formFind").attr("action", "$!{context_path}/gov/measure/subCalActualMng/subCalActualMngList.vw?type=template").submit();
	}



//]]>
</script>

