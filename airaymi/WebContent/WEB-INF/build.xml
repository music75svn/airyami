<project name="example" default="copy" basedir=".">

  <property name="home.dir" value="/sidev/bsc/BSC_PROJECT"/>
  <property name="build.dest" value="${home.dir}/WEB-INF/classes"/>
  <property name="common.lib" value="${home.dir}/WEB-INF/lib"/>
  <property name="classpath" location=".:/WEB-INF/classes:"/>
  <property name="src.dir" value="src" />

  <target name="compile">
    <javac srcdir="${src.dir}" destdir="${build.dest}" debug="ture" encoding="utf-8" listfiles="true" classpath=".;${classpath}" deprecation="on" fork="yes" memoryInitialSize="20m" memoryMaximumSize="100m">
      <classpath>
        <fileset dir="${common.lib}">
          <include name="**/*.jar"/>
        </fileset>
      </classpath>
    </javac>
  </target>

  <target name="copy" depends="compile">
    <copy todir="${build.dest}" verbose="on">
      <fileset dir="${src.dir}" includes="**/*.properties"/>
    </copy>
  </target>

</project>
