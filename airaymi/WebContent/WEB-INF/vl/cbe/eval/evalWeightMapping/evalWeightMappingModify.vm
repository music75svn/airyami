<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/cbe/eval/evalWeightMapping/evalWeightMappingList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 근무일자 숫자만 입력
		 ******************************************/
		/*
		J("#workTerm").numeric();
		J("#workTerm").css("ime-mode", "disabled");
		*/
		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();
	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		var jikgubIds = "";
		/*
		if(!J.checkLength("workTerm", "근무일수", 1, 5)) {
			return;
		}
		*/
		J("input:checkbox[name:jikgubId]").each(function () {
			if(this.checked){
				jikgubIds += this.value + '|';
			}
		});
		
		if(jikgubIds == "") {
			J.showMsgBox("평가대상직급을 선택해 주십시요", null, null);
			return;
		}
		
		if(J("#scDeptIds").val() == "") {
			J.showMsgBox("평가대상조직을 선택해 주십시요", null, null);
			return;
		}
		
		J("#jikgubIds").val(jikgubIds);
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		
		J("#form1").attr("action", "$!{context_path}/cbe/eval/evalWeightMapping/evalWeightMappingProcess.vw?type=template").submit();
	}
	
	/******************************************
	 * 조직선택
	 ******************************************/
	function popSelScDept() {
		var findYear = J("#year").val();
		var evalDegreeId = J("#evalDegreeId").val();
		var weightGrpId = J("#weightGrpId").val();
		J("#anchor").attr("href","$!{context_path}/cbe/eval/evalWeightMapping/popDeptCopy.vw?findYear="+findYear+"&amp;evalDegreeId="+evalDegreeId+"&amp;weightGrpId="+weightGrpId);
		J("#anchor").click();
	}
	
	/******************************************
	 * 평가대상조직 저장
	 ******************************************/
	function saveDept(){
		
		J.ajax({
        	url      : "$!{context_path}/cbe/eval/evalWeightMapping/saveDept_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#form1").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J("#alertScDeptNm").html(J(this).find("text").text());
				})
			}
    	});
	}

//]]>
</script>    
 
