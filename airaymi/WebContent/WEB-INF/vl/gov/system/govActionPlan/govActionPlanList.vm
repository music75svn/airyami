							{name:'BUTTON_ADD'         	 ,index:'BUTTON_ADD'           ,width:60   ,align:'center', sortable:false  ,formatter:linkAdd},
                            {name:'SC_DEPT_S_NM'         ,index:'SC_DEPT_S_NM'         ,width:100   ,align:'center', sortable:false ,	cellattr: attr1Setting},
