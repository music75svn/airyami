	function popFindMetric() {
		var findScDeptId = J("#findScDeptId").val();
		var findScDeptNm = J("#findScDeptNm").val();
		var findMetricId = J("#findMetricId").val();
		var findMetricNm = J("#findMetricNm").val();
		var url = "$!{context_path}/bsc/module/commModule/popMetricList.vw?findYear=$!{searchMap.txt2html("findYear")}&amp;findMon=$!{searchMap.txt2html("findMon")}&amp;findAnalCycle=$!{searchMap.txt2html("findAnalCycle")}&amp;findScDeptId="+findScDeptId+"&amp;findScDeptNm="+findScDeptNm+"&amp;findMetricId="+findMetricId+"&amp;findMetricNm="+findMetricNm;
		J("#anchor").attr("href",url);
		J("#anchor").click();
	}

	/*****************************************************
	 * 지표선택
	 *****************************************************/ 
	function setMetricId(ret) {
		J("#findScDeptId").val(ret.SC_DEPT_ID);
		J("#findScDeptNm").val(ret.SC_DEPT_NM);
		J("#findStrategyId").val(ret.STRATEGY_ID);
		J("#findStrategyNm").val(ret.STRATEGY_NM);
		J("#findMetricId").val(ret.METRIC_ID);
		J("#findMetricNm").val(J(ret.METRIC_NM).text());
		
        $("#formFind").attr("action", "$!{searchMap.txt2html("context")}/bsc/mon/metricMatrix/metricMatrixList.vw?type=template");
        $("#formFind").submit();
		return false;
	}


	/*****************************************************
	 * 지표선택 이벤트
	 *****************************************************/ 
    function cascadingJS(arg){
		if (arg == null) return;
		
		var arr = arg.split('|');
		if (arr.length < 1) return;
		
		var scDeptId = arr[0];
		var strategyId = arr[1];
		var metricId = arr[2];
		var year = J("#findYear").val();
		var mon = J("#findMon").val();
		var analCycle = J(":input:radio[name=findAnalCycle]:checked").val();
		
		var param = "&amp;year=" + year + "&amp;findMon=" + mon + "&amp;metricId=" + metricId + "&amp;analCycle="+analCycle;
		
		var url = "$!{context_path}/bsc/mon/metricActualDetail/popMetricActualDetailList.vw?type=popup" + param;
		openWinByName(url,'popMetricMapping','1250','650','yes');
    }

//]]>
