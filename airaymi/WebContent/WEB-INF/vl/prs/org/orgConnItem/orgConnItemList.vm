#set($curr_url = $!{context_path} + "/orgConnItem/orgConnItemList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/prs/org/orgConnItem/orgConnItemList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['연계항목코드', '연계항목명', '등록구분', '연계개수', '연계설명'],
			colModel     :[
							{name:'ORG_CONN_ITEM_ID'   ,index:'ORG_CONN_ITEM_ID'   ,width:160   ,align:'center' },
							{name:'ORG_CONN_ITEM_NM'   ,index:'ORG_CONN_ITEM_NM'   ,width:250   ,align:'left'    ,formatter:linkUpdate },
							{name:'TYPE'       		   ,index:'TYPE'               ,width:230   ,align:'center' },
							{name:'CNT'       		   ,index:'CNT'                ,width:230   ,align:'center' },
							{name:'CONTENT'            ,index:'CONTENT'            ,width:227   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			##cmTemplate: {sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
    								if(rowdata.CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"연계항목"
		});

		/******************************************
		 * 연계항목 포커스
		 ******************************************/
		J("findorgConnItemNm").focus();

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/prs/org/orgConnItem/orgConnItemModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * jqGrid 코드리스트 링크
	 ******************************************/
	function linkCodeList(cellvalue, options, rowObject) {
		return '<a href=javascript:goCodeList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#orgConnItemId").val(ret.ORG_CONN_ITEM_ID);
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgConnItem/orgConnItemModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var orgConnItemId = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					orgConnItemId += rowdata.ORG_CONN_ITEM_ID + '|';
				}
			});
		}

		J("#orgConnItemId").val(orgConnItemId);
		J("#mode").val("DEL");
		J("#formList").attr("action", "$!{context_path}/prs/org/orgConnItem/orgConnItemProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/org/orgConnItem/orgConnItemList_xml.vw?"+J("#formFind").serialize()});
		J("#list").trigger("reloadGrid");
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#orgConnItemNm").val(J("#findOrgConnItemNm").val());
		J("#useYnNm").val(J("#findUseYn > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/prs/org/orgConnItem/orgConnItemListExcel.vw?type=excel").submit();
		return false;
	}



//]]>
</script>

<div id="Table">
