#set($curr_url = $!{context_path} + "/bsc/system/user/userList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/system/user/userList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['소속조직', '사번', '성명', '직급', '직책', '시스템권한', '로그인', 'CNT', 'INDEX'],
			colModel     :[
							{name:'DEPT_NM'      ,index:'DEPT_NM'     ,width:150   ,align:'left'   ,sortable:true ,cellattr: attrSetting },
							{name:'USER_ID'      ,index:'USER_ID'     ,width:150   ,align:'center' ,sortable:true ,cellattr: attrSetting }, 
                            {name:'USER_NM'      ,index:'USER_NM'     ,width:150   ,align:'center' ,sortable:true ,cellattr: attrSetting }, 
                            {name:'POS_NM'       ,index:'POS_NM'      ,width:150   ,align:'center' ,sortable:true ,cellattr: attrSetting }, 
                            {name:'JIKGUB_NM'    ,index:'JIKGUB_NM'   ,width:150   ,align:'center' ,sortable:true ,cellattr: attrSetting },
                            {name:'CODE_NM'      ,index:'CODE_NM'     ,width:150   ,align:'center' ,sortable:false }, 
                            {name:'USER_ID2'     ,index:'USER_ID2'    ,width:150   ,align:'center' ,sortable:true ,formatter:linkGoLogin ,cellattr: attrSetting },
							{name:'USER_CNT'     ,index:'USER_CNT'    ,width:150   ,align:'center' ,sortable:true },
							{name:'USER_INDEX'   ,index:'USER_INDEX'  ,width:150   ,align:'center' ,sortable:true }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			caption:"사용자관리"
		}).jqGrid('hideCol',"USER_CNT").jqGrid('hideCol',"USER_INDEX").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 공통코드명 포커스
		 ******************************************/
		J("#findUserNm").focus();
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});
        
		/******************************************
    	 * 조직선택 팝업호출
    	 ******************************************/
    	J("#icSearch").fancybox();	
		
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')> ' + cellvalue + '<//a>';
	}

	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#findUserNm").val( J.trim( J("#findUserNm").val() ) );
		J("#formFind").attr("action", "$!{context_path}/bsc/system/user/userList.vw?type=template").submit();
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/system/user/userModify.vw?type=template").submit();
	}
    
	/******************************************
	 * jqGrid 링크
	 ******************************************/
	function linkGoLogin(cellvalue, options, rowObject) { 
		var ret = '';
		//ret += '<td class="btn_l">&nbsp;</td>';
		//ret += '<td class="btn_c"><a href=javascript:goOtherLogin(' + options.rowId + ')>로그인</a></td>';
		//ret += '<td class="btn_r">&nbsp;</td>';
		ret = '<a href=javascript:goOtherLogin(' + options.rowId + ')>로그인</a>';
		return ret;
	}
	
	/*****************************************
	 * 코드리스트 조회
	 ******************************************/
	function goOtherLogin(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#userId").val(ret.USER_ID);
		J("#loginFlag").val('auto');
		J("#formList").attr("action", "$!{context_path}/secure/loginDo.vw?type=template").submit();
	}

	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.USER_INDEX;
		var rowSpan = rowObject.USER_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		
		return result;     
	} 
	
	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/ 
	function setDeptInfoPop(deptId, deptNm) {
		deptNm = J(deptNm).text();
		deptId = deptId.substring(1);  
		
		J("#findDeptId").val(deptId);
		J("#findDeptNm").val(deptNm);
		J.fancybox.close();
	}
	
	/*****************************************************
	 * 조직선택 취소
	 *****************************************************/ 
	function cancleDept() {
		J("#findDeptId").val("");
		J("#findDeptNm").val("");
		J("#findDeptOpt").val("search");
	}
//]]>
</script>

