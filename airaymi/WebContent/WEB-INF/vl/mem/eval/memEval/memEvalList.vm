#set($curr_url = $!{context_path} + "/mem/eval/memEval/memEvalList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/eval/memEval/memEvalList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '대상자부서코드', '평가대상부서', '평가그룹ID', '평가그룹', '평가자구분코드', '평가자구분', '평가자사번', '평가자', '부서', '직급', '직위', '평가대상인원', '평가상태코드', '평가상태'],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'                  ,width:0     ,align:'center' },
                            {name:'DEPT_CD'             ,index:'DEPT_CD'               ,width:0     ,align:'center' },
                            {name:'DEPT_NM'             ,index:'DEPT_NM'               ,width:200   ,align:'left' },
                            {name:'EVAL_GRP_ID'         ,index:'EVAL_GRP_ID'           ,width:0     ,align:'center' },
                            {name:'EVAL_GRP_NM'         ,index:'EVAL_GRP_NM'           ,width:100   ,align:'center' },
                            {name:'EVAL_GUBUN'          ,index:'EVAL_GUBUN'            ,width:0     ,align:'center' },
                            {name:'EVAL_GUBUN_NM'       ,index:'EVAL_GUBUN_NM'         ,width:100   ,align:'center' },
                            {name:'EVAL_EMP_NO'         ,index:'EVAL_EMP_NO'           ,width:0     ,align:'center' },
                            {name:'EVAL_EMP_NM'         ,index:'EVAL_EMP_NM'           ,width:80    ,align:'center' ,formatter:linkUpdate},
                            {name:'EVAL_DEPT_NM'        ,index:'EVAL_DEPT_NM'          ,width:150   ,align:'left' },
                            {name:'EVAL_CAST_NM'    	,index:'EVAL_CAST_NM'          ,width:60    ,align:'center' },
                            {name:'EVAL_POS_NM'    		,index:'EVAL_POS_NM'           ,width:60    ,align:'center' },
                            {name:'EVAL_TARGET_COUNT'   ,index:'EVAL_TARGET_COUNT'     ,width:80    ,align:'center' },
                            {name:'EVAL_STATE'    		,index:'EVAL_STATE'            ,width:0     ,align:'center' },
                            {name:'EVAL_STATE_NM'       ,index:'EVAL_STATE_NM'         ,width:100   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
				  },
			caption:"업무수행평가"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"EVAL_GRP_ID").jqGrid('hideCol',"EVAL_GUBUN").jqGrid('hideCol',"EVAL_EMP_NO").jqGrid('hideCol',"EVAL_STATE").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		if(rowObject.EVAL_TARGET_COUNT == 1){
			return cellvalue;
		}else{
			return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '</a>';
		}
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#deptCd").val(ret.DEPT_CD);
		J("#deptNm").val(ret.DEPT_NM);
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
		J("#evalGrpNm").val(ret.EVAL_GRP_NM);
		J("#evalGubun").val(ret.EVAL_GUBUN);
		J("#evalEmpNo").val(ret.EVAL_EMP_NO);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/mem/eval/memEval/memEvalModify.vw?type=template").submit();
	}
	
	/******************************************
	 * 부서검색
	 ******************************************/
	function setDeptInfoPop(deptId, deptNm) {
		J("#findDeptCd").val(deptId);
		J("#findDeptNm").val(deptNm);
		J.fancybox.close();
	}

//]]>
</script>

