		.jqGrid('hideCol',"EVAL_ITEM_ID").jqGrid('hideCol',"EVAL_METHOD_ID").jqGrid('hideCol',"EVAL_METHOD_GBN_ID")
		.jqGrid('hideCol',"OLD_DEGREE_REFL_ID").jqGrid('hideCol',"ROWSPAN_CNT")
		.setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#form1").submit(function(event) {
			//submit 하기전 작업추가
		});
	
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/impon/evalUserGrpMappingEvalItem/evalUserGrpMappingEvalItemList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		
		/******************************************
		 * 이전평가반영여부 변경 이벤트
		 ******************************************/
		J('#oldDegreeReflId').change(function(){
			chgOldDegreeReflId();
		});
		
		if( "" != "$!{CS_HTML.txt2html($detail.OLD_DEGREE_REFL_ID)}" ){
			J("#evalMethodId").attr("disabled", true);
		}

	});
	
	
	
	function chgOldDegreeReflId(){
		if( "" == J('#oldDegreeReflId option:selected').val() ){
			J("#evalMethodId").attr("disabled", false);
		}else {
			J("#evalMethodId").attr("disabled", true);
		}
	}

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		
		J("#form1").attr("action", "$!{context_path}/bsc/impon/evalUserGrpMappingEvalItem/evalUserGrpMappingEvalItemProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
