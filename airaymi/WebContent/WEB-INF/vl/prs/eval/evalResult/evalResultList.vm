	function chkSubmitAll(){
		if(J("#closeYn").val()!="Y"){
			J.showMsgBox("평가가 마감되지 않아 확정할 수 없습니다.", null, null);
			return false;
		}else{
			J.showConfirmBox("평가를 확정 하시겠습니까?", "closeDo"); //closeDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 확정처리
	 ******************************************/
	function closeDo() {
		
		J("#mode").val("CONFIRM");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#evalConfirmYn").val('Y');
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalResult/evalResultProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 확정취소처리
	 ******************************************/
	function chkConfirmYn(){
		if('$!{CS_HTML.txt2html($confirmYn)}' == 'Y'){
			J.showConfirmBox("평가확정을 취소 하시겠습니까?", "closeCancelDo"); //closeCancelDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 확정취소처리
	 ******************************************/
	function closeCancelDo() {
		J("#mode").val("CONFIRM");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#evalCloseYn").val('N');
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalResult/evalResultProcess.vw?type=template").submit();
		return false;
	}
	
	function linkFeedBack(cellvalue, options, rowObject) { 
		var ret_val = "";
		
		ret_val = "</a></span>" + "<a href=javascript:goFeedBack(" + options.rowId + ")>" + "<img name=\'opi\'  src=\'$!{img_path}/common/board/ic_search.gif\' >" + "</a>";
		
		return ret_val;
	}
	
	/******************************************
	 * 피드백  팝업
	 ******************************************/
	function goFeedBack(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear 			= J("#findYear").val();
		var findEvalDegreeId 	= ret.EVAL_DEGREE_ID;
		var findEvalGrpId 		= ret.EVAL_GRP_ID;
		var findEvalMembUserId 	= ret.EVAL_MEMB_USER_ID;
		
		var param = "&amp;year=" + findYear + "&amp;evalDegreeId=" + findEvalDegreeId  + "&amp;evalGrpId=" + findEvalGrpId + "&amp;evalMembUserId=" + findEvalMembUserId;
		
		var url = "$!{context_path}/prs/eval/evalResult/popFeedDetail.vw?type=popup" + param;
		openWinByName(url,'popFeedDefine','860','350','yes');
	}
	
	
	/******************************************
	 * jqGrid 최종등급
	 ******************************************/
	function linkFinalGradeId(cellvalue, options, rowObject) {
		var str = J("#jqGridFinalGradeTemplate").clone();
		var retStr = "";
		// IE 8버전에서는 html()을 하면 value=""에 따옴표가 없이 넘어옴. 그래서 따옴표 없이 selected가 붙도록 replace함.
		retStr = str.html().replace(cellvalue, cellvalue+' selected');
		// IE 9버전과 다른 브라우저에서는 html()을 하면 value=""에 따옴표가 그래도 넘어옴. 그래서 앞에서 replace하면 value="OO selected"가 되므로 value="OO" selected가 되도록 replace함.
		retStr = retStr.replace('\"'+cellvalue+' selected\"', '\"'+cellvalue+'\" selected');
		
		return retStr;
	}
	
	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		J.ajax({
        	url      : "$!{context_path}/prs/eval/evalGroup/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
		
		<!--평가군 초기화-->
		chgGroup();
	}
	
	/******************************************
	 * 평가군 조회
	 ******************************************/
	function chgGroup(){
		setTimeout(function(){
    		J.ajax({
            	url      : "$!{context_path}/prs/eval/evalResult/getGrpList_ajax.vw",﻿
            	cache    : false,
            	type     : "POST",
    			data     : J("#formFind").serialize(),
            	dataType : "html",
            	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            	success  : function (data) {
    				var xmlDoc = J.parseXML(data);
            		J("#findEvalGrpId").empty();
    				J(xmlDoc).find("data").each(function() {
    					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalGrpId');
    				})
    			}
        	});
		},500);	
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
		J("#evalMembUserId").val(ret.EVAL_MEMB_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalResult/evalResultModify.vw?type=template").submit();
	}
	
	/******************************************
	 * 최종등급저장
	 ******************************************/
	function saveChk() {
		var ids = J("#list").jqGrid('getDataIDs');
		
		if(ids!=""){
			if(J("#confirmYn").val()=="Y"){
				J.showMsgBox("평가가 확정되어 저장할 수 없습니다.", null, null);
				return false;
			}else{
				J.showConfirmBox("최종등급을 저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
			}
		}
	}
	
	/******************************************
	 * 최종등급저장처리
	 ******************************************/
	function saveDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var gradeItemId = "";
		var gradeCnt	= "";
		var gradeSelectItemIds = "";
		var gradeSelectItemNms = "";
		
		var evalDegreeIds 	= "";
		var evalGrpIds 		= "";
		var evalMembUserIds = "";
		
		
        
		for (var i = 0; i < ids.length; i++) {
			rowdata = J("#list").getRowData(ids[i]);
			gradeItemId = rowdata.GRADE_ITEM_ID;
			gradeCnt    = rowdata.GRADE_CNT;
			
			var gradeSelectCnt	= 0;
			
			for (var j = 0; j < ids.length; j++) {
				if(J("select[name=finalGradeIds]").eq(j).val()==gradeItemId){
					gradeSelectCnt++;
				}
				
			}
			
			if(gradeCnt!=gradeSelectCnt){
				J.showMsgBox("각 등급에 따른 제한 명수를 확인하십시요.", null, null);
				return false;
			}
			
			evalDegreeIds 	+= rowdata.EVAL_DEGREE_ID + '|';
			evalGrpIds 		+= rowdata.EVAL_GRP_ID + '|';
			evalMembUserIds += rowdata.EVAL_MEMB_USER_ID + '|';
			gradeSelectItemIds += J("select[name=finalGradeIds]").eq(i).val()+ '|';
			gradeSelectItemNms += J("select[name=finalGradeIds] > option:selected").eq(i).text()+ '|';
			
		}
        J("#mode").val("FINAL");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeIds").val(evalDegreeIds);
		J("#evalGrpIds").val(evalGrpIds);
		J("#evalMembUserIds").val(evalMembUserIds);
		J("#finalGradeId").val(gradeSelectItemIds);
		J("#finalGradeNm").val(gradeSelectItemNms);
		
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalResult/evalResultProcess.vw?type=template").submit();
		return false;
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
	
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var evalGrpIds = "";
		var evalMembUserIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';evalGrpIds += rowdata.EVAL_GRP_ID + '|';evalMembUserIds += rowdata.EVAL_MEMB_USER_ID + '|';
				}
			});
		}
        
		J("#evalDegreeIds").val(evalDegreeIds);J("#evalGrpIds").val(evalGrpIds);J("#evalMembUserIds").val(evalMembUserIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalResult/evalResultProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#evalDegreeNm").val(J("#findEvalDegreeId > option:selected").text());
		J("#evalGrpNm").val(J("#findEvalGrpId > option:selected").text());
		
		
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalResult/evalResultListExcel.vw?type=excel").submit();
		return false;
	}
	
