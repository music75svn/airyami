#set($curr_url = $!{context_path} + "/prs/mng/talkMng/talkMngList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/mng/talkMng/talkMngList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['면담차수', '면담자 사번', '면담자', '면담일자', '답변자', '답변일자'],
            colModel     :[
                            {name:'TALK_SEQ'            	, index:'TALK_SEQ'           	,width:150   ,align:'center' ,sortable:false}, 
                            {name:'TALK_USER_ID'        	, index:'TALK_USER_ID'       	,width:150   ,align:'center' ,sortable:false}, 
                            {name:'TALK_USER_NM'   			, index:'TALK_USER_NM'   		,width:150   ,align:'center' ,sortable:false},
                            {name:'TALK_DT'             	, index:'TALK_DT'            	,width:150   ,align:'center' ,sortable:false ,formatter:linkUpdate},
                            {name:'ANSWER_USER_NM' 			, index:'ANSWER_USER_NM'   		,width:150   ,align:'center' ,sortable:false}, 
                            {name:'ANSWER_DT'             	, index:'ANSWER_DT'            	,width:150   ,align:'center' ,sortable:false ,formatter:linkUpdate}
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : true,
            cellEdit     : true,
            gridview     : true,
            caption:"중간면담"
        }).jqGrid('hideCol',"TALK_SEQ").jqGrid('hideCol',"TALK_USER_ID").setGridWidth($!{jqGrid_width});
        
        /******************************************
         * 취소버튼 (돌아가기)
         ******************************************/
        J("#btnBack").click(function() {
			J("#formFind").attr("action", "$!{context_path}/prs/mng/talkMng/evalMngList.vw?type=template").submit();
        });
        
        /******************************************
         * 신규 등록
         ******************************************/
        J("#btnInsert").click(function() {
		##if("$closingPlan.MNG_PLAN_YN" == 'N')
    		//J.showMsgBox("성과계획 제출 일정이 마감되었습니다.", null, null); 
    		//return false;
		##else
            J("#year").val(J("#findYear").val());
            J("#mode").val("ADD");
            J("#userId").val(J("#findUserId").val());
			J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
		    J("#evalMembEmpn").val(J("#findEmpn").val());
            J("#formList").attr("action", "$!{context_path}/prs/mng/talkMng/talkMngModify.vw?type=template").submit();
		##end
        });
        
        /******************************************
         * 삭제 버튼 클릭 이벤트
         ******************************************/
        J("#btnDelete").click(function() {
            goDelete();
            return false;
        });
        
    });

    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
		##if("$closingPlan.MNG_PLAN_YN" == 'N')
    		//J.showMsgBox("성과계획 제출 일정이 마감되었습니다.", null, null); 
    		//return false;
		##else
		J("#talkSeq").val(ret.TALK_SEQ);
        J("#year").val(J("#findYear").val());
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
		J("#evalMembEmpn").val(J("#findEmpn").val());
        J("#mode").val("MOD");
        J("#formList").attr("action", "$!{context_path}/prs/mng/talkMng/talkMngModify.vw?type=template").submit();
		###end
    }
    
    /******************************************
     * 삭제
     ******************************************/
    function goDelete() {
	##if("$closingPlan.MNG_PLAN_YN" == 'N')
    		//J.showMsgBox("성과계획 제출 일정이 마감되었습니다.", null, null); 
    		//return false;
	##else
        if(!J.gridSelectChk("list")){
            J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
        } else {
            J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
        }
	##end	
    }
    
    /******************************************
     * 삭제처리
     ******************************************/
    function deleteDo() {
        var id = J("#list").getGridParam('selarrrow');
        var ids = J("#list").jqGrid('getDataIDs');
        var rowdata = "";
        var talkSeqs = "";
        
        for (var i = 0; i < ids.length; i++) {
            J.each(id, function (index, value) {
                if (value == ids[i]) {
                    rowdata = J("#list").getRowData(ids[i]);
                    talkSeqs += rowdata.TALK_SEQ + '|';
                }
            });
        }
        
        J("#talkSeqs").val(talkSeqs);
		J("#evalMembEmpnSeq").val(J("#findEmpnSeq").val());
		J("#evalMembEmpn").val(J("#findEmpn").val());
        J("#mode").val("DEL");
        J("#year").val(J("#findYear").val());
        J("#formList").attr("action", "$!{context_path}/prs/mng/talkMng/talkMngProcess.vw?type=template").submit();
        return false;
    }
    

//]]>
</script>

