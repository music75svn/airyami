<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFindPop').serialize();
		
		jQuery("#itemConMetricList").jqGrid({
			url          :"$!{searchMap.txt2html("context")}/bsc/system/systemItem/popItemCntList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : 320,
			colNames     :['$!{searchMap.txt2html("SC_DEPT_NM")}', '$!{searchMap.txt2html("METRIC_NM")}', '산식항목코드', '산식항목'],
			colModel     :[
							{name:'SC_DEPT_NM'  	,index:'SC_DEPT_NM'   		,width:150   ,align:'left' },
							{name:'METRIC_NM'  		,index:'METRIC_NM'   		,width:150   ,align:'left' },
							{name:'CAL_TYPE_COL'  	,index:'CAL_TYPE_COL'   	,width:150   ,align:'center' },
							{name:'CAL_TYPE_COL_NM' ,index:'CAL_TYPE_COL_NM'  	,width:350   ,align:'left' }
							],
			rowNum       : 100000,
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			caption		 : "시스템 연계항목 연계된 지표 조회"
		});
        
	});
	
//]]>
</script>

<form id="formFindPop" name="formFindPop" method="post" action="">
	<input type="hidden" id="findYear" name="findYear" value="$!{searchMap.txt2html("findYear")}" />
	<input type="hidden" id="findItemCd" name="findItemCd" value="$!{searchMap.txt2html("findItemCd")}" />
	
    <div style="width:850px;height:400px;">
    	<div id="popMetricGrpArea">
    		<h1 class="none">시스템 연계항목 연계된 지표 조회</h1>
    		<div style="margin-left:30px;margin-bottom:10px;">연계항목명 : $!{searchMap.txt2html("findItemNm")}</div>
    		<div id="userData" style="margin-left:15px;height:340px;width:450px;">
    			<!-- 데이터그리드 Start -->
    			<div class="blockGridListTable">
    				<table id="itemConMetricList" summary="시스템 연계항목 연계된 지표 조회">
    					<caption class="none">시스템 연계항목 연계된 지표 조회</caption>
    					<thead><tr><th></th></tr></thead>
    					<tbody><tr><td></td></tr></tbody>
    				</table>
    				<div id="pager"></div>                    
    			</div>
    			<!--// 데이터그리드 End -->	
    		</div>
    	</div>
    </div>
</form>
