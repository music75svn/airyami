			J("#upScDeptNm").val("");
			J("#upScDeptNm").attr("readonly", "readonly");
			J("#icSearchImg").hide();
			J("#icCancelImg").hide();
			J("#upScDeptComment").text("0레벨은 상위조직을 선택할 수 없습니다.");
    	} else {
    		J("#icSearchImg").show();
			J("#icCancelImg").show();
