    var J = jQuery;
    
    J(document).ready(function(){
    
        /******************************************
         * 데이터 그리드 출력
         ******************************************/
        var str = J('#formFind').serialize();
        
        jQuery("#list").jqGrid({
            url          :"$!{context_path}/prs/evalCon/evalConItem/evalConItemList_xml.vw" + "?" + str,
            mtype        :"POST",
            datatype     :"json",
            jsonReader   : {   
                            page   : "page",
                            total  : "total",
                            root   : "rows", 
                            records: function(obj){return obj.length;},
                            repeatitems: false, 
                            id     : "id"
                           },
            height       : $!{jqGrid_height},
            width        : $!{jqGrid_width},
            colNames     :['평가년도', '평가구분', '평가구분ID', '평가항목ID', '평가항목정렬ID','평가항목' , '가중치정렬ID' , '가중치', '정렬순서'],
            colModel     :[
                            {name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'EVAL_GBN_NM'          ,index:'EVAL_GBN_NM'          ,width:120   ,align:'center' }, 
                            {name:'EVAL_GBN'             ,index:'EVAL_GBN'             ,width:150   ,align:'center'  ,formatter:linkEvalGbn}, 
                            {name:'EVAL_ITEM_ID'         ,index:'EVAL_ITEM_ID'         ,width:150   ,align:'center' }, 
                            {name:'EVAL_ITEM_ORDERID'    ,index:'EVAL_ITEM_ORDERID'    ,width:150   ,align:'center'  ,formatter:linkSortId}, 
                            {name:'EVAL_ITEM_NM'         ,index:'EVAL_ITEM_NM'         ,width:300   ,align:'left'    ,formatter:linkUpdate}, 
                            {name:'WEIGHT'               ,index:'WEIGHT'               ,width:150   ,align:'center' }, 
                            {name:'WEIGHT_ORDER'         ,index:'WEIGHT_ORDER'         ,width:120   ,align:'center'  ,formatter:linkWeight}, 
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:120   ,align:'center'  ,formatter:linkSort}
                            ],
            rowNum       : $!{jqGrid_rownum},
            autowidth    : false, 
            viewrecords  : true,
            loadonce     : true,
            multiselect  : true,
            cellEdit     : true,
            gridview     : true,
			//loadComplete : function() {
    		//					var ids = J("#list").jqGrid('getDataIDs');
    		//					J("#list input:checkbox").each(function(index) {
    		//						var rowdata = J("#list").getRowData(ids[index]);
    		//						if(J(rowdata.CNT).text() != 0) { //비교조건 대상 컬럼
    		//							J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    		//						}
    		//					});
            //               },
            caption:"직원개인기여도평가 평가항목"
