#set($curr_url = $!{context_path} + "/bsc/impon/imponItem/imponItemList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/impon/imponItem/imponItemList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가항목구분', '평가차수 코드', 'KPI POOL 코드', '평가대상 코드', '평가항목', '실적보고서담당자'
							#foreach($list in $itemList)
								, '$!{CS_HTML.txt2html($list.SC_DEPT_NM)}'
							#end
							,'계'
						   ],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:50   ,align:'center' ,sortable:false},
                            {name:'ITEM_GBN_NM'          ,index:'ITEM_GBN_NM'          ,width:50   ,align:'center' ,sortable:false},
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:50   ,align:'center' ,sortable:false},
                            {name:'METRIC_GRP_ID'        ,index:'METRIC_GRP_ID'        ,width:50   ,align:'center' ,sortable:false},
							{name:'ITEM_ID'              ,index:'ITEM_ID'              ,width:50   ,align:'center' ,sortable:false},
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:200   ,align:'left'   ,sortable:false ,formatter:linkUpdate},
                            {name:'ACT_RPT_INSERT_USER_NM' ,index:'ACT_RPT_INSERT_USER_NM' ,width:50   ,align:'center' ,sortable:false},
                            #foreach($list in $itemList)
							{name:'DEPT_$!{CS_HTML.txt2html($list.METRIC_ID)}' ,index:'DEPT_$!{CS_HTML.txt2html($list.METRIC_ID)}' ,width:50 ,align:'center' ,sortable:false},
							#end
							{name:'SUM_WEIGHT'           ,index:'SUM_WEIGHT'           ,width:50   ,align:'center' ,sortable:false}
                            ],
			rowNum       : $!{jqGrid_rownum},
			## 가스사고예방활동노력 autowidth 풀고 칸 맞춤
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			footerrow	 : true,
			userDataOnFooter : true,
			loadComplete : function() {
				var grid = J("#list");

				grid.jqGrid('footerData', 'set', {ACT_RPT_INSERT_USER_NM:"계"});
				 #foreach($list in $itemList)
				calculateSumGridColumn(grid, "DEPT_$!{CS_HTML.txt2html($list.METRIC_ID)}");
				#end
				calculateSumGridColumn(grid, "SUM_WEIGHT");
			 },
			caption:"평가항목"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_DEGREE_ID").jqGrid('hideCol',"METRIC_GRP_ID").jqGrid('hideCol',"ITEM_ID").setGridWidth($!{jqGrid_width});

		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true,
          groupHeaders:[
		    {startColumnName: '$!{firstMetricId}', numberOfColumns: 29, titleText: '<em>평가지표별 가중치 배분</em>'}
		  ]
        });

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#evalDegreeId").val(J("#findEvalDegreeId").val());
			J("#metricGrpId").val(J("#findMetricGrpId").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/impon/imponItem/imponItemModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 년도별 평가단 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalGrp();
			chgEvalPool();
		});
	});

	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){

		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponItem/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
	}

	/******************************************
	 * 년도별 비계량지표 조회
	 ******************************************/
	function chgEvalPool(){

		J.ajax({
        	url      : "$!{context_path}/bsc/impon/imponItem/getPoolList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findMetricGrpId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findMetricGrpId');
				})
			}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#metricGrpId").val(ret.METRIC_GRP_ID);
		J("#itemId").val(ret.ITEM_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponItem/imponItemModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var metricGrpIds = "";
		var itemIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';metricGrpIds += rowdata.METRIC_GRP_ID + '|';itemIds += rowdata.ITEM_ID + '|';
				}
			});
		}

		J("#evalDegreeIds").val(evalDegreeIds);J("#metricGrpIds").val(metricGrpIds);J("#itemIds").val(itemIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponItem/imponItemProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/bsc/impon/imponItem/imponItemListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

