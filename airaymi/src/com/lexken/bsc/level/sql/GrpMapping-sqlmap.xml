<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.level.grpMapping">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_LEVEL_EVAL_USER
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 평가단-평가자 매핑 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_EVAL_USER
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR, EVAL_USER_GRP_ID, EVAL_USER_ID, CREATE_DT, MODIFY_DT
          FROM BSC_LEVEL_EVAL_USER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 평가단-평가자 매핑 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_LEVEL_EVAL_USER
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , EVAL_USER_GRP_ID      
			 , EVAL_USER_ID          
		  FROM BSC_LEVEL_EVAL_USER 
		 WHERE 1 = 1 
		   AND YEAR = #year#
		   AND EVAL_USER_GRP_ID = #evalUserGrpId#
		   AND EVAL_USER_ID = #evalUserId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 사용자그룹 매핑 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: 
	==================================================================
	-->
	<select id="getUserList" parameterClass="hashMap" resultClass="hashMap">
        SELECT
               A.EVAL_USER_ID USER_ID
             , B.USER_NM
             , B.DEPT_ID
             , C.DEPT_F_NM DEPT_NM 
             , B.JIKGUB_CD
             , B.JIKGUB_NM
             , B.POS_CD
             , B.POS_NM   
          FROM BSC_LEVEL_EVAL_USER A        
               LEFT OUTER JOIN V_ROLE_USER B ON A.EVAL_USER_ID = B.USER_ID         
               LEFT OUTER JOIN V_DEPTINFO C ON B.DEPT_ID = C.DEPT_ID   
         WHERE A.YEAR =#findYear# 
         AND A.EVAL_USER_GRP_ID = #evalUserGrpId#
         ORDER BY B.USER_NM
   </select>
	
	<!--
	==================================================================   
	  # 설명	: 평가단-평가자 매핑 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_LEVEL_EVAL_USER
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		INSERT INTO BSC_LEVEL_EVAL_USER ( 
			   YEAR
			 , EVAL_USER_GRP_ID
			 , EVAL_USER_ID
			 , CREATE_DT
			 ) VALUES ( 
			   #findYear#
			 , #evalUserGrpId#
			 , #evalUserId#
			 , SYSDATE
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 평가단-평가자 매핑 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_LEVEL_EVAL_USER
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		DELETE FROM BSC_LEVEL_EVAL_USER 
		 WHERE 1 = 1 
		   AND YEAR = #findYear#
		   AND EVAL_USER_GRP_ID = #evalUserGrpId#
	</update>
	
	<!--
	==================================================================   
	  # 설명	: 평가자 권한 삭제
	  #	기능	: DELETE
	  #	TABLE	: BSC_ADMIN
	==================================================================
	-->	
	<update id="deleteAuthData" parameterClass="hashMap">
		DELETE FROM BSC_ADMIN
		WHERE ADMIN_GUBUN = '07'	
	</update>	
	
	<!--
	==================================================================   
	  # 설명	: 평가자 권한 삭제
	  #	기능	: INSERT
	  #	TABLE	: BSC_ADMIN
	==================================================================
	-->	
	<update id="insertAuthData" parameterClass="hashMap">
		INSERT INTO BSC_ADMIN(ADMIN_GUBUN, USER_ID, DEPT_ID)
		SELECT DISTINCT '07' ADMIN_GUBUN, EVAL_USER_ID, B.DEPT_ID
		FROM BSC_LEVEL_EVAL_USER A
		         LEFT OUTER JOIN V_ROLE_USER B ON A.EVAL_USER_ID = B.USER_ID
		WHERE A.YEAR = #findYear#
		   AND A.EVAL_USER_ID IS NOT NULL
	</update>	
	
	
</sqlMap>


