	/******************************************
	 * grid column의 합계 계산
	 ******************************************/
	function calculateSumColumn(grid, column_id) {
        var totalAmount = 0;
        var columnIndex = getColumnIndexByName(grid, column_id);
		var rows = grid[0].rows;
		var rowsCount = rows.length;
		var row = "";
		var ob = [];

        for(var i = 0; i < rowsCount; i++) {
            row = rows[i];
            if (row.className.indexOf("jqgrow") != -1) {
                totalAmount += Number(getTextFromCell(row.cells[columnIndex]));
            }
        }
		totalAmount = Math.round( totalAmount * 1000 ) / 1000;
		return totalAmount;
	}

	/*****************************************
	 * 전략과제 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.GRP_NUM;
		var rowSpan = rowObject.GRP_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function inputBoxNum(cellvalue, options, rowObject) {
		var retVal = cellvalue;
		var bossMetricId = rowObject.BOSS_METRIC_ID;
		if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("10") || $CS_LOGIN.chkAuthGrp("60")){
    		if( null != bossMetricId  ){
    			retVal = '<input type="text" id="bossScore'+options.rowId+'" name="bossScores" value="'+cellvalue+'">';
    		}
		}
		return retVal;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {

		return '<a href=javascript:goBossMetricPop(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goUpdate() {
		J.showConfirmBox("입력된 점수를 저장 하시겠습니까?", "updateDB"); //updateDB() 콜백함수 호출
	}

	/******************************************
	 * 기관장 지표정의서  팝업
	 ******************************************/
	function goBossMetricPop(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		var findYear = J("#findYear").val();
		var findBossMetricId = ret.BOSS_METRIC_ID;

		var param = "&amp;year=" + findYear + "&amp;bossMetricId=" + findBossMetricId ;

		var url = "$!{context_path}/gov/bos/bosMetric/popMetricDetail.vw?type=popup" + param;
		openWinByName(url,'popBosMetricDefine','860','650','yes');
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function updateDB() {
		var bossMetricIds = "";
		var bossEvalScores = "";
		var ids = J("#list").jqGrid('getDataIDs');
		var score = "0";

		J('input[name=bossScores]').each(function(index,item){
			score = J(this).val()==""?"0":J(this).val();

			rowdata = J("#list").getRowData(index+1);
			bossMetricIds += rowdata.BOSS_METRIC_ID + '|';
			bossEvalScores += score + '|';
		});

		J("#bossMetricIds").val(bossMetricIds);
		J("#bossEvalScores").val(bossEvalScores);

		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/bos/resultMon/resultMonProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/bos/resultMon/resultMonListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 입력 값 체크
	 ******************************************/
	function saveChk() {

		var bossMetricIds = "";
		var bossEvalScores = "";
		var ids = J("#list").jqGrid('getDataIDs');
		var score = "0";

		var reVal = true;

		J('input[name=bossScores]').each(function(index,item){
			score = J(this).val()==""?"0":J(this).val();

			var pos = score.indexOf(".");
			var pos2 = score.lastIndexOf(".");
			var jungsu = score.substring(0,pos);// 정수
	        var sosu  = score.substring(pos+1); // 소수

			//입력된 값이 실수(소수)인지 체크합니다.
			if(!isNumPoint(score)){
			J.showMsgBox("[득점]은 숫자와 포인트'.' 만 입력가능 합니다.", null, null);
				reVal = false;
				return false;
			}

			//포인트가 두개 이상인지 체크합니다.
			if(pos != pos2){
				J.showMsgBox("[득점]의 포인트'.'는 하나만 입력가능 합니다.", null, null);
				reVal = false;
				return false;
			}

			//pos가 -1이면 입력된 수는 자연수입니다.
			if(pos == -1){

				if(score.length > 10){
					J.showMsgBox("[득점]의 정수 길이는 10자 까지 가능합니다.", null, null);
						reVal = false;
						return false;
				}
			//pos가 -1이 아니면 .이 하나라도 들어갔으므로 실수(소수)입니다.
			}else{

				if(jungsu.length > 10){
				J.showMsgBox("[득점]의 정수 길이는 10자 까지 가능합니다.", null, null);
					reVal = false;
					return false;
				}

				if(sosu.length > 3){
				J.showMsgBox("[득점]은 소수 길이는 3자 가지 가능합니다.", null, null);
					reVal = false;
					return false;
				}

			}

		});

		return reVal;
	}

	function isNumPoint(input) {
	    var chars = ".0123456789";
	    return containsCharsOnly(input,chars);
	}

