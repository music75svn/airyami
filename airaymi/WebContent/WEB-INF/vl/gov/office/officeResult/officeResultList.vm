#set($curr_url = $!{context_path} + "/gov/office/officeResult/officeResultList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/office/officeResult/officeResultList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['공공기관 평가군', '공공기관'
						 , '최종등급', '평가점수', '순위', '점수', '순위', '점수', '순위'
						 , '첨부파일'
						 , '평가년도', '공공기관 평가군 코드', '공공기관 코드'
						 , 'OG_CNT' , 'OG_ROWNUM'
						   ],
			colModel     :[
							{name:'OFFICE_EVAL_GRP_NM'   ,index:'OFFICE_EVAL_GRP_NM'   ,width:350   ,align:'left'   ,sortable:false ,cellattr:attrSettingOfficeGrp},
							#if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60"))
                            {name:'OFFICE_NM'            ,index:'OFFICE_NM'            ,width:350   ,align:'left'   ,sortable:false ,formatter:linkUpdate},
							#else
							{name:'OFFICE_NM'            ,index:'OFFICE_NM'            ,width:350   ,align:'left'   ,sortable:false },
							#end
                            {name:'FINAL_GRADE'          ,index:'FINAL_GRADE'          ,width:100   ,align:'center' ,sortable:false },
                            {name:'SCORE'                ,index:'SCORE'                ,width:150   ,align:'right'  ,sortable:false },
                            {name:'RANK'                 ,index:'RANK'                 ,width:100   ,align:'center' ,sortable:false },
                            {name:'MEAS_SCORE'           ,index:'MEAS_SCORE'           ,width:150   ,align:'right'  ,sortable:false },
                            {name:'MEAS_RANK'            ,index:'MEAS_RANK'            ,width:100   ,align:'center' ,sortable:false },
                            {name:'UNMEAS_SCORE'         ,index:'UNMEAS_SCORE'         ,width:150   ,align:'right'  ,sortable:false },
                            {name:'UNMEAS_RANK'          ,index:'UNMEAS_RANK'          ,width:100   ,align:'center' ,sortable:false },
                            {name:'FILE_CNT'             ,index:'FILE_CNT'             ,width:100   ,align:'center' ,sortable:false ,formatter:linkViewAttach},
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'left' },
                            {name:'OFFICE_EVAL_GRP_ID'   ,index:'OFFICE_EVAL_GRP_ID'   ,width:150   ,align:'left' },
                            {name:'OFFICE_ID'            ,index:'OFFICE_ID'            ,width:150   ,align:'left' },
							{name:'OG_CNT'   			 ,index:'OG_CNT'   ,width:150   ,align:'left' },
							{name:'OG_ROWNUM'   		 ,index:'OG_ROWNUM'   ,width:150   ,align:'left' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			caption		 :"공공기관결과"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"OFFICE_EVAL_GRP_ID").jqGrid('hideCol',"OFFICE_ID")
		.jqGrid('hideCol',"OG_CNT").jqGrid('hideCol',"OG_ROWNUM")
		.setGridWidth($!{jqGrid_width});

		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true,
          groupHeaders:[
        	{startColumnName: 'MEAS_SCORE', numberOfColumns: 2, titleText: '<em>계량</em>'},
			{startColumnName: 'UNMEAS_SCORE', numberOfColumns: 2, titleText: '<em>비계량</em>'}
          ]
        });

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

	});

	/*****************************************
	 * 공공기관 평가군  Rowspan 설정
	 ******************************************/
	function attrSettingOfficeGrp(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.OG_ROWNUM;
		var rowSpan = rowObject.OG_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		return result;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#officeId").val(ret.OFFICE_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/office/officeResult/officeResultModify.vw?type=template").submit();
	}

	/******************************************
	 * jqGrid 세부항목(첨부파일) 링크
	 ******************************************/
	function linkViewAttach(cellvalue, options, rowObject) {
		return '<a href=javascript:viewAttachList(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	/******************************************
	 * 세부항목(첨부파일) 팝업호출
	 ******************************************/
	function viewAttachList(rowId) {

		var ret = J("#list").jqGrid('getRowData',rowId);
		var year = ret.YEAR;
		var officeId = ret.OFFICE_ID;
		var officeNm = J(ret.OFFICE_NM).text();

		var param = "&amp;year=" + year + "&amp;officeId=" + officeId + "&amp;officeNm=" + officeNm ;
		var url = "$!{context_path}/gov/office/officeResult/popAttachView.vw?type=popup" + param;
		openWinByName(url,'popAttachView','500','500','no');
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear :selected").text());
		J("#officeEvalGrpNm").val(J("#findOfficeEvalGrpId :selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/office/officeResult/officeResultListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 년도 변경시 공공기관 평가군 변경
	 ******************************************/
	function chgOfficeGrp(){
		J.ajax({
			url      : "$!{context_path}/gov/office/office/officeGrpList_ajax.vw",
			cache    : false,
			type     : "POST",
			data	 : J("#formFind").serialize(),
			dataType : "html",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
			success  : function(data){
							var xmlDoc = J.parseXML(data);
							J("#findOfficeEvalGrpId").empty();

							J('<option/>').attr('value','').text("전체").appendTo('#findOfficeEvalGrpId');
							J(xmlDoc).find("data").each(function() {
								J('<option/>').attr('value',J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findOfficeEvalGrpId');
							})
					   }
		});
	}

//]]>
</script>

