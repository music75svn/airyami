    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가차수 코드', '평가조직ID', '평가근거담당자사번', '평가근거담당자', '평가조직', '평가근거', 'FCOUNT', '순번', '첨부파일', '첨부파일 저장명', '첨부파일 확장자', '이메일','EVAL_SUBMIT_YN'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' ,sortable:false},
                            {name:'EVAL_DEGREE_ID'       ,index:'EVAL_DEGREE_ID'       ,width:150   ,align:'center' ,sortable:false},
                            {name:'SC_DEPT_ID'           ,index:'SC_DEPT_ID'           ,width:150   ,align:'center' ,sortable:false},
							{name:'EVAL_BASE_CHARGE_USER_ID' ,index:'EVAL_BASE_CHARGE_USER_ID' ,width:80   ,align:'center' ,sortable:false},
                            {name:'EVAL_BASE_CHARGE_USER_NM' ,index:'EVAL_BASE_CHARGE_USER_NM' ,width:80   ,align:'center' ,sortable:false, cellattr: attr1Setting},
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:170   ,align:'left' ,sortable:false, formatter:linkUpdate, cellattr: attr1Setting},
                            {name:'EVAL_BASE'            ,index:'EVAL_BASE'            ,width:300   ,align:'left' 	,sortable:false , cellattr: attr1Setting},
                            {name:'FCOUNT'               ,index:'FCOUNT'               ,width:150   ,align:'center' ,sortable:false},
                            {name:'SEQ'                  ,index:'SEQ'                  ,width:150   ,align:'center' ,sortable:false},
                            {name:'ATTACH_FILE_NM'       ,index:'ATTACH_FILE_NM'       ,width:250   ,align:'left' 	,sortable:false},
                            {name:'ATTACH_FILE_FNM'      ,index:'ATTACH_FILE_FNM'      ,width:150   ,align:'center' ,sortable:false},
                            {name:'ATTACH_FILE_SUFFIX'   ,index:'ATTACH_FILE_SUFFIX'   ,width:150   ,align:'center' ,sortable:false},
							{name:'EMAIL'                ,index:'EMAIL'                ,width:150   ,align:'center' ,sortable:false},
							{name:'EVAL_SUBMIT_YN'       ,index:'EVAL_SUBMIT_YN'       ,width:150   ,align:'center' ,sortable:false}
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"별도평가근거",
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.BASE_CNT != 0 || rowdata.EVAL_SUBMIT_YN != 'N') { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
								});
