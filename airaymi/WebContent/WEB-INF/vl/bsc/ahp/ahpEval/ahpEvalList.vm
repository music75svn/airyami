#set($curr_url = $!{context_path} + "/bsc/ahp/ahpEval/ahpEvalList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/ahp/ahpEval/ahpEvalList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가대상 그룹 코드', '평가대상 그룹', '평가문항/전체문항', '비고', '평가제출 여부', '평가제출 여부', '마감여부'],
			colModel     :[
                            {name:'ITEM_GRP_ID'          ,index:'ITEM_GRP_ID'          ,width:150   ,align:'center' },
                            {name:'ITEM_GRP_NM'          ,index:'ITEM_GRP_NM'          ,width:150   ,align:'left'   ,formatter:linkUpdate},
							{name:'CNT'                  ,index:'CNT'                  ,width:80    ,align:'center' },
							{name:'CONTENT'              ,index:'CONTENT'              ,width:200   ,align:'left'   },
                            {name:'EVAL_SUBMIT_YN'       ,index:'EVAL_SUBMIT_YN'       ,width:50    ,align:'center' },
							{name:'EVAL_SUBMIT_YN_NM'    ,index:'EVAL_SUBMIT_YN_NM'    ,width:50    ,align:'center' },
							{name:'EVAL_CLOSING_YN'      ,index:'EVAL_CLOSING_YN'      ,width:50    ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate: {sortable:false},
			caption:"AHP 평가실시"
        }).jqGrid('hideCol',"ITEM_GRP_ID").jqGrid('hideCol',"EVAL_SUBMIT_YN").jqGrid('hideCol',"EVAL_CLOSING_YN").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpEval/ahpEvalModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 평가년도  change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgEvalYear();
		});

		/******************************************
		 * 평가자  change 이벤트
		 ******************************************/
		$('#findEvalUserId').change(function(){
			chgEvalUser();
		});
	});

	/******************************************
	 * 평가년도 변경 시 평가자 변경 (AJAX)
	 ******************************************/
	function chgEvalYear(){
		J.ajax({
        	url      : "$!{context_path}/bsc/ahp/ahpEval/ahpEvalUserList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		#if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60"))
				J("#findEvalUserId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserId');
				})
				#end
				chgEvalUser(); //평가자 변경 시 평가단 변경
        	}
    	});
	}

	/******************************************
	 * 평가자 변경 시 평가단 변경 (AJAX)
	 ******************************************/
	function chgEvalUser(){
		J.ajax({
        	url      : "$!{context_path}/bsc/ahp/ahpEval/ahpEvalUserGrpList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalUserGrpId").empty();

				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserGrpId');
				})
        	}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#itemGrpId").val(ret.ITEM_GRP_ID);

		//평가기간 여부
		if("$!{evalTerm.EVAL_TERM_YN}" != "Y"){
			J.showMsgBox("평가기간이 아닙니다.", null, null);
			return;
		}

		//마감여부
		if("Y" == ret.EVAL_CLOSING_YN) {
			J.showMsgBox("평가가 마감되었습니다.", null, null);
			return;
		}

		J("#evalUserGrpId").val(J("#findEvalUserGrpId").val());
		J("#evalUserId").val(J("#findEvalUserId").val());
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpEval/ahpEvalModify.vw?type=template").submit();

	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalUserGrpIds = "";
		var evalUserIds = "";
		var perItemIds = "";
		var itemIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalUserGrpIds += rowdata.EVAL_USER_GRP_ID + '|';evalUserIds += rowdata.EVAL_USER_ID + '|';perItemIds += rowdata.PER_ITEM_ID + '|';itemIds += rowdata.ITEM_ID + '|';
				}
			});
		}

		J("#evalUserGrpIds").val(evalUserGrpIds);J("#evalUserIds").val(evalUserIds);J("#perItemIds").val(perItemIds);J("#itemIds").val(itemIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/ahp/ahpEval/ahpEvalProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		#if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60"))
			J("#evalUserNm").val(J("#findEvalUserId > option:selected").text());
		#else
			J("#evalUserNm").val("$!{CS_LOGIN.getUser_nm()}");
		#end
		J("#evalUserGrpNm").val(J("#findEvalUserGrpId > option:selected").text());
		J("#formFind").attr("action", "$!{context_path}/bsc/ahp/ahpEval/ahpEvalListExcel.vw?type=excel").submit();
	    J("#formFind").attr("action", "$!{context_path}/bsc/ahp/ahpEval/ahpEvalList.vw?type=template");
		return false;
	}

//]]>
</script>

