<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">

#set($curr_url = $!{context_path} + "/bsc/popup/supplyFacilitiesRate/supplyFacilitiesRateList.vw")
<head>
	#parse("/WEB-INF/vl/common/template/head.vm")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/popup/supplyFacilitiesRate/supplyFacilitiesRateList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['년', '월', '부서코드', '부서', '검사구분', '허가구분', '업소번호', '시설명', '주소', '검사예정일', '검사실시일', '비고'],
			colModel     :[
							{name:'YEAR'  		 		 ,index:'YEAR'  		   ,width:50   ,align:'center' },
							{name:'MON'  		 		 ,index:'MON'  			   ,width:50   ,align:'center' },
							{name:'DEPT_CD'  		 	 ,index:'DEPT_CD'  		   ,width:50   ,align:'center' },
							{name:'DEPT_NM'  		 	 ,index:'DEPT_NM'  		   ,width:50   ,align:'center' },
							{name:'INSP_NM'  			 ,index:'INSP_NM'  	 	   ,width:50   ,align:'center' },
							{name:'PERM_TC_NM'  		 ,index:'PERM_TC_NM'  	   ,width:50   ,align:'center' },
							{name:'CO_NO'      		 	 ,index:'CO_NO'		       ,width:60   ,align:'center' },
                            {name:'EQUI_NM'      		 ,index:'EQUI_NM'	       ,width:60   ,align:'center' },
                            {name:'ADDR'      		 	 ,index:'ADDR'	     	   ,width:90   ,align:'left' },
                            {name:'INSP_PLAN_DATE'       ,index:'INSP_PLAN_DATE'   ,width:50   ,align:'center' },
                            {name:'REAL_INSP_DATE'       ,index:'REAL_INSP_DATE'   ,width:50   ,align:'center' },
							{name:'RMK' 			      ,index:'RMK'   ,width:50   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate   : {sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
    								if(J(rowdata.ITEM_CNT).text() != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
    								}
    							});
                           },
			caption:"허가및공급시설검사처리율"
		}).jqGrid('hideCol',"DEPT_CD").jqGrid('hideCol',"DEPT_NM").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 항목명 포커스
		 ******************************************/
		J("#findItemNm").select();

		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcel").click(function() {
			J("#yearNm").val(J("#findYear > option:selected").text());
			J("#monNm").val(J("#findMon > option:selected").text());
			J("#deptNm").val(J("#findDeptId > option:selected").text());
			J("#itemNm").val(J("#findItemCd > option:selected").text());
			J("#formFind").attr("action", "$!{context_path}/bsc/popup/supplyFacilitiesRate/excel.vw?type=excel").submit();
			J("#formFind").attr("action", "$!{context_path}/bsc/popup/supplyFacilitiesRate/supplyFacilitiesRateList.vw?type=popup");
			return false;
		});
	});

//]]>
</script>
</head>
<body>
<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">시스템항목관리</h1>
		<div class="tableTop">
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/popup/supplyFacilitiesRate/supplyFacilitiesRateList.vw?type=popup">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				<input type="hidden"    id="findMetricId"	name="findMetricId"		value="$!{searchMap.txt2html("findMetricId")}" />
				<input type="hidden" 	id="mode"       	name="mode" 	/>
    			<input type="hidden" 	id="year"       	name="year" 	/>
    			<input type="hidden" 	id="itemCds"    	name="itemCds" 	/>
    			<input type="hidden" 	id="itemCd"     	name="itemCd"  	/>
    			<input type="hidden" 	id="itemCnt"    	name="itemCnt" 	/>
    			<input type="hidden" 	id="yearNm"			name="yearNm" 	/>
    			<input type="hidden" 	id="monNm"			name="monNm" 	/>
    			<input type="hidden" 	id="deptNm"			name="deptNm" 	/>
    			<input type="hidden" 	id="itemNm"			name="itemNm" 	/>
				<div class="clear h20"></div>
				<div class="searchBox">
    				<div><div><div>
    				<table summary="허가및공급시설검사처리율 조건">
						<caption class="none">허가및공급시설검사처리율 검색 조건</caption>
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span><label for="findYear">평가년월</label></span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
										<select id="findMon" name="findMon" class="select w70">
            								##<option value="">전체</option>
            								$!CS_CODE.getCodeOption("024", $!{searchMap.txt2html("findMon")})
            							</select>
            						</span>
            					</td>
            					<td class="searchBox_tit w300">
                					<span><label for="findDeptId">부서</label></span>
            						<span class="searchBar">
										<select id="findDeptId" name="findDeptId" class="select w200">
											#foreach($getDeptList in $getDeptList)
                                            	<option value="$!{CS_HTML.txt2html($getDeptList.DEPT_ID)}" $searchMap.getSelected("findDeptId", "$!{CS_HTML.txt2html($getDeptList.DEPT_ID)}")>$!{CS_HTML.txt2html($getDeptList.DEPT_NM)}</option>
                                            #end
										</select>
            						</span>
                                </td>
								<td class="searchBox_tit w270">
                					<span><label for="findItem">항목</label></span>
									<span class="searchBar">
										<select id="findItemCd" name="findItemCd" class="select w200">
											#foreach($item in $itemInfo)
												<option value="$!{CS_HTML.txt2html($item.ITEM_CD)}" $searchMap.getSelected("findItemCd", "$!{CS_HTML.txt2html($item.ITEM_CD)}")>$!{CS_HTML.txt2html($item.CAL_TYPE_COL_NM)}</option>
											#end
            							</select>
									</span>
                                </td>
            				</tr>
        				</tbody>
        				<div class="blockButton " style="position:absolute;right:10px; width:150px;float:right; align:middle;padding: 0 10px 0 0;" >
                    		<input id="btnExcel" type="button" align="middle" value="엑셀다운로드", alt="엑셀다운로드" />
                    	</div>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" alt="검색" style="position:absolute;right:120px;"/>
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>

		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/popup/supplyFacilitiesRate/supplyFacilitiesRateProcess.vw?type=popup">
			$!{searchMap.makeHiddenFind()}

			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="시스템항목관리 조회결과">
							<caption class="none">시스템항목관리 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
				</div>
			</div>
		</form>

	</div>
	<a id="anchor"></a>
	<div class="clear"></div>
</div>
</body>
</html>