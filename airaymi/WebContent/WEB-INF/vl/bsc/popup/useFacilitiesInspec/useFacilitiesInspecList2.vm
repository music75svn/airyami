<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="ko">

#set($main_url = $!{searchMap.txt2html("mainUrl")})
#set($curr_url = $!{context_path} + "/bsc/popup/useFacilitiesInspec/useFacilitiesInspecList2.vw")

<head>
	#parse("/WEB-INF/vl/common/template/head.vm")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/popup/useFacilitiesInspec/useFacilitiesInspecList2_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가월', '점검코드', '점검구분', '추진지사', '추진부서','계획명','적합수','부적합수','기타건수','점검건수'],
			colModel     :[
							{name:'INSP_YY'				,index:'INSP_YY'  		   ,width:40   ,align:'center' },
							{name:'INSP_MON'  		 	,index:'INSP_MON'  		   ,width:40   ,align:'center' },
                            {name:'INSP_KIND_TC'		,index:'INSP_KIND_TC'      ,width:40   ,align:'center' },
                            {name:'INSP_KIND_TC_NM'		,index:'INSP_KIND_TC_NM'   ,width:80   ,align:'center' },
                            {name:'PROC_DEPT_CD'		,index:'PROC_DEPT_CD'      ,width:40   ,align:'center' },
                            {name:'DEPT_NM'				,index:'DEPT_NM'      		,width:40  ,align:'center' },
                            {name:'INSP_NM'       		,index:'INSP_NM'       	   ,width:200  ,align:'left'   },
                            {name:'CON_CNT'       		,index:'CON_CNT'       	   ,width:40   ,align:'center' },
                            {name:'INCON_CNT'       	,index:'INCON_CNT'         ,width:40   ,align:'center' },
                            {name:'ETC_CNT'       		,index:'ETC_CNT'       	   ,width:40   ,align:'center' },
                            {name:'TOTAL_CNT'       	,index:'TOTAL_CNT'         ,width:40   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			cmTemplate   : {sortable:false},
			caption		 : "정기검사 실적"
		}).jqGrid('hideCol',"INSP_KIND_TC").jqGrid('hideCol',"PROC_DEPT_CD").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#btnSearch").click(function() {
			goSearch();
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcel").click(function() {
			J("#yearNm").val(J("#findYear > option:selected").text());
			J("#monNm").val(J("#findMon > option:selected").text());
			J("#deptNm").val(J("#findDeptId > option:selected").text());
			J("#itemNm").val(J("#findItemCd > option:selected").text());
			J("#formFind").attr("action", "$!{context_path}/bsc/popup/useFacilitiesInspec/excel.vw?type=excel").submit();
			J("#formFind").attr("action", "$!{context_path}/bsc/popup/useFacilitiesInspec/useFacilitiesInspecList2.vw?type=popup");
			return false;
		});

	});

	/******************************************
	 * 조회
	 ******************************************/
	function goSearch() {
		J("#formFind").attr("action", "$!{context_path}/bsc/popup/useFacilitiesInspec/useFacilitiesInspecList2.vw?type=template").submit();
	}

//]]>
</script>
</head>
<body>
<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">가스사용시설 정기검사 실적</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")

    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/popup/useFacilitiesInspec/useFacilitiesInspecList2.vw?type=popup">
				<input type="hidden"	id="findHighPgmId"	name="findHighPgmId"	value="$!{searchMap.txt2html("findHighPgmId")}" />
				<input type="hidden" 	id="findSubPgmId"	name="findSubPgmId"		value="$!{searchMap.txt2html("findSubPgmId")}" />
				<input type="hidden"    id="findPgmId"		name="findPgmId"		value="$!{searchMap.txt2html("findPgmId")}" />
				<input type="hidden"    id="findMetricId"	name="findMetricId"		value="$!{searchMap.txt2html("findMetricId")}" />
				##<input type="hidden"    id="findScDeptCd"	name="findScDeptCd"		value="$!{searchMap.txt2html("findScDeptCd")}" />
				<input type="hidden" id="mode"       name="mode" />
				<input type="hidden" id="yearNm"	name="yearNm" />
				<input type="hidden" id="monNm"		name="monNm" />
				<input type="hidden" id="deptNm"	name="deptNm" />
				<input type="hidden" id="itemNm"	name="itemNm" />
				<div class="clear h20"></div>
				<div class="searchBox">
    				<div><div><div>
    				<table summary="가스사용시설 정기검사 실적 조건">
						<caption class="none">가스사용시설 정기검사 실적 검색 조건</caption>
						<thead><tr><th></th></tr></thead>
        				<tbody>
            				<tr>
								<td class="searchBox_tit w250">
            						<span><label for="findYear">평가년월</label></span>
            						<span class="searchBar">
            							<select id="findYear" name="findYear" class="select w80">
            								$!CS_CODE.getCodeOption("017", $!{searchMap.txt2html("findYear")})
            							</select>
            							<select id="findMon" name="findMon" class="select w70">
            								$!CS_CODE.getCodeOption("024", $!{searchMap.txt2html("findMon")})
            							</select>
            						</span>
            					</td>
            					<td class="searchBox_tit w300">
                					<span><label for="findDeptId">부서</label></span>
            						<span class="searchBar">
										<select id="findDeptId" name="findDeptId" class="select w200">
											#foreach($getDeptList in $getDeptList)
                                            	<option value="$!{CS_HTML.txt2html($getDeptList.DEPT_ID)}" $searchMap.getSelected("findDeptId", "$!{CS_HTML.txt2html($getDeptList.DEPT_ID)}")>$!{CS_HTML.txt2html($getDeptList.DEPT_NM)}</option>
                                            #end
										</select>
            						</span>
                                </td>
                                <td class="searchBox_tit w270">
                					<span><label for="findItem">항목</label></span>
									<span class="searchBar">
										<select id="findItemCd" name="findItemCd" class="select w200">
											#foreach($item in $itemInfo)
												<option value="$!{CS_HTML.txt2html($item.ITEM_CD)}" $searchMap.getSelected("findItemCd", "$!{CS_HTML.txt2html($item.ITEM_CD)}")>$!{CS_HTML.txt2html($item.CAL_TYPE_COL_NM)}</option>
											#end
            							</select>
									</span>
                                </td>
            				</tr>
        				</tbody>
        				<div class="blockButton " style="position:absolute;right:10px; width:150px;float:right; align:middle;padding: 0 10px 0 0;" >
                    		<input id="btnExcel" type="button" align="middle" value="엑셀다운로드", alt="엑셀다운로드" />
                    	</div>
    				</table>
                    <input type="image" class="btnSearch" src="$!{img_path}/common/btn_search.gif" alt="검색" style="position:absolute;right:120px;"/> 
                    </div></div></div>
    	        </div>
    		</form>
    		<!-- search E -->
			<div class="clear"></div>
		</div>

		<form id="formList" name="formList" method="post" action="$!{context_path}/bsc/popup/proEdu/proEduProcess.vw?type=template">
			
			
			$!{searchMap.makeHiddenFind()}

			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="가스사용시설 정기검사 실적 조회결과">
							<caption class="none">가스사용시설 정기검사 실적 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
				</div>
			</div>
		</form>

	</div>
	<a id="anchor"></a>
	<div class="clear"></div>
</div>
</body>
</html>
