			<input type="hidden" id="year"		 		name="year" />
			<input type="hidden" id="yearNm"		 	name="yearNm" />
			<input type="hidden" id="evalCatGrpIds" 	name="evalCatGrpIds" />
			<input type="hidden" id="evalCatGrpId"  	name="evalCatGrpId" />
