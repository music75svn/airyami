						</tr>
						<tr>
							<th scope="row"><label for="improvement">개선효과</label></th>
							<td>
								<textarea id="improvement" name="improvement" class="tabletext" title="개선효과" cols="" rows="5">$!{CS_HTML.txt2html($detail.IMPROVEMENT)}</textarea>
