#set($curr_url = $!{context_path} + "/gov/bos/evalCatGrp/evalCatGrpList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/bos/evalCatGrp/evalCatGrpList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가범주코드', '평가범주', '정렬순서', 'CAT_CNT'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' },
                            {name:'EVAL_CAT_GRP_ID'      ,index:'EVAL_CAT_GRP_ID'      ,width:100   ,align:'center' },
                            {name:'EVAL_CAT_GRP_NM'      ,index:'EVAL_CAT_GRP_NM'      ,width:250   ,align:'center' ,formatter:linkUpdate},
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:100   ,align:'center' },
                            {name:'CAT_CNT'              ,index:'CAT_CNT'              ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   :{sortable:false},
			loadComplete : function() {
    							var ids = J("#list").jqGrid('getDataIDs');
    							var evalMapCnt = 0;
								J("#list input:checkbox").each(function(index) {
    								var rowdata = J("#list").getRowData(ids[index]);
									if(rowdata.CAT_CNT != 0) { //비교조건 대상 컬럼
    									J("#list input:checkbox[name=jqg_list_" + (index+1) + "]").hide();
										evalMapCnt++;
    								}
								});
								J("#evalMapCnt").val(evalMapCnt);
						},
			caption:"기관장평가범주관리"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"CAT_CNT").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/gov/bos/evalCatGrp/evalCatGrpModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 경영평가범주복사 버튼 클릭 이벤트
		 ******************************************/
		J("#btnCopy").click(function() {
			goCopy();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalCatGrpId").val(ret.EVAL_CAT_GRP_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/bos/evalCatGrp/evalCatGrpModify.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalCatGrpIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalCatGrpIds += rowdata.EVAL_CAT_GRP_ID + '|';
				}
			});
		}

		J("#evalCatGrpIds").val(evalCatGrpIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/bos/evalCatGrp/evalCatGrpProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 경영평가범주 복사
	 ******************************************/
	function goCopy() {
		if(J("#evalMapCnt").val()>0){
			J.showMsgBox("기관장평가 범주 매핑을 제거 후 <br>복사할 수 있습니다.", null, null);
		}else{
			J.showConfirmBox("기존에 등록된 기관장 평가 범주는 삭제되고<br>경영평가 범주가 복사되어 등록 됩니다.<br>복사 하시겠습니까?", "copyDo"); //copyDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 경영평가범주 복사
	 ******************************************/
	function copyDo() {
		J("#mode").val("COPY");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/bos/evalCatGrp/evalCatGrpProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear option:selected").text());

		J("#formList").attr("action", "$!{context_path}/gov/bos/evalCatGrp/evalCatGrpListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

