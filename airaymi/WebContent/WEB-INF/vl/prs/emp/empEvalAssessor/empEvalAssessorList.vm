	/******************************************
     * 1차평가자팝업 - 부서장 선정
     ******************************************/
    function popKorNm(index) {
        J("#index").val(index);
        var ret = J("#list").jqGrid('getRowData',index);
		var findSearchCodeId = ret.DEPTCD;
		var gubun ="1";
        J("#anchor").attr("href","$!{context_path}/prs/emp/empEvalAssessor/popSearchUser.vw?findYear=$!{searchMap.txt2html("findYear")}&amp;findSearchCodeId=" + findSearchCodeId + "&amp;gubun=" + gubun + "&amp;callBack=setManagerUserInfo");
        J("#anchor").click();
    }
    
	/******************************************
     * 선택 취소
     ******************************************/
    function cancleKorNm(index) {
        J("input[name=firstEmpns]").eq(index-1).val("");
        J("input[name=firstKornms]").eq(index-1).val("");
    }
    
    /*****************************************************
	 * 1차평가자- 부서장 선정
	 *****************************************************/ 
	function setManagerUserInfo(arguments) {
		var index = J("#index").val();
		J("input[name=firstEmpns]").eq(index-1).val(arguments[0]);
		J("input[name=firstKornms]").eq(index-1).val(arguments[1]);
		J.fancybox.close();
	}
	
	/******************************************
     * 2차평가자팝업 - 부서장 선정
     ******************************************/
