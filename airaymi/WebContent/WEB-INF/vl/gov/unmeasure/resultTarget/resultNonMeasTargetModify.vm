<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/gov/unmeasure/resultTarget/resultTargetList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");
		
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#targetOfProperDesc").checkbyte({
			indicator:J("#targetOfProperDescIndicator"),
			limit:3000
		});
		J("#targetOfProperDesc").trigger("keyup");
		
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#resOf1BefDesc").checkbyte({
			indicator:J("#resOf1BefDescIndicator"),
			limit:3000
		});
		J("#resOf1BefDesc").trigger("keyup");
		
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#nonMeasNm").checkbyte({
			limit:100
		});
		J("#nonMeasNm").trigger("keyup");

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
	
		if(!J.checkLength("nonMeasNm", "비계량성과명", 1, 100)) {
			return;
		}
		
		if(!J.checkLength("resOf1BefDesc", "전년도실적", 1, 3000)) {
			return;
		}
		
		if(!J.checkLength("targetOfProperDesc", "당해년도목표", 1, 3000)) {
			return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/gov/unmeasure/resultTarget/resultTargetProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
<form id="form1" name="form1" method="post" action="$!{context_path}/gov/unmeasure/resultTarget/resultTargetProcess.vw?type=template">
    <input type="hidden" 	id="mode"		    name="mode"		      value="$!{searchMap.txt2html("mode")}" />
