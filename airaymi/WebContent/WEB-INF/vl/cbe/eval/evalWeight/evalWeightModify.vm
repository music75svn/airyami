<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/cbe/eval/evalWeight/evalWeightList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		

		/******************************************
		 * 정렬순서 숫자만 입력
		 ******************************************/
		J("#frsDeptWeight").numeric();
		J("#frsDeptWeight").css("ime-mode", "disabled");
		J("#secDeptWeight").numeric();
		J("#secDeptWeight").css("ime-mode", "disabled");
		J("#teamWeight").numeric();
		J("#teamWeight").css("ime-mode", "disabled");
		J("#prsWeight").numeric();
		J("#prsWeight").css("ime-mode", "disabled");
		J("#sortOrder").numeric();
		J("#sortOrder").css("ime-mode", "disabled");

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		if(!J.checkLength("weightGrpNm", "가중치그룹", 1, 100)) {
			return;
		}
		
		var total_weight=0;
		var frsDeptWeight=0;
		var secDeptWeight=0;
		var teamWeight=0;
		var prsWeight=0;
		
		frsDeptWeight = J("#frsDeptWeight").val()==""?0:J("#frsDeptWeight").val();
		secDeptWeight = J("#secDeptWeight").val()==""?0:J("#secDeptWeight").val();
		teamWeight    = J("#teamWeight").val()==""?0:J("#teamWeight").val();
		prsWeight     = J("#prsWeight").val()==""?0:J("#prsWeight").val();
		
		total_weight = parseFloat(frsDeptWeight)+parseFloat(secDeptWeight)+parseFloat(teamWeight)+parseFloat(prsWeight);
		
		if(total_weight!=100){
			J.showMsgBox("가중치합이 100으로 입력하세요.", null, null);
			return false;
		}
		
		if(!J.checkLength("sortOrder", "정렬순서", 1, 5)) {
			return;
		}
		
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/cbe/eval/evalWeight/evalWeightProcess.vw?type=template").submit();
	}

//]]>
</script>    
 
