			J("#findResult").val("");	// 조직Tree에서 선택하면 검색결과 초기화함.

			goGridSearch();

	}

	/******************************************
     * 성과연봉 집계
     ******************************************/
    function annSalSet(){

        var year = J("#findYear").val();
        J("#mode").val("COUNT");
        J("#formList").attr("action", "$!{context_path}/prs/annSal/annSal/annSalProcess.vw?type=template").submit();

        return false;
    }

	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/
	function setDeptInfoPop(deptCd, deptNm) {
		deptNm = J(deptNm).text();
		deptCd = deptCd.substring(1);

		J("#findDeptCd").val(deptCd);
		J("#findDeptNm").val(deptNm);
		J.fancybox.close();
	}

	/*****************************************************
	 * 조직선택 취소
	 *****************************************************/
	function cancleDept() {
		J("#findDeptCd").val("");
		J("#findDeptNm").val("");
		J("#findDeptOpt").val("search");
	}

