#set($curr_url = $!{context_path} + "/mem/base/memEvalGradeTab/memEvalGradeTabList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/base/memEvalGradeTab/memEvalGradeTabList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['평가년도', '평가방법 코드', '등급항목 코드', '등급항목', '정렬순서'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:150   ,align:'center' }, 
                            {name:'EVAL_METHOD_ID'       ,index:'EVAL_METHOD_ID'       ,width:150   ,align:'center' }, 
                            {name:'GRADE_ITEM_ID'        ,index:'GRADE_ITEM_ID'        ,width:150   ,align:'center' }, 
                            {name:'GRADE_ITEM_NM'        ,index:'GRADE_ITEM_NM'        ,width:150   ,align:'center' ,formatter:linkUpdate}, 
                            {name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"등급표"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_METHOD_ID").jqGrid('hideCol',"GRADE_ITEM_ID").setGridWidth($!{jqGrid_width});
		
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGradeTab/memEvalGradeTabModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
		
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#findEvalMethodId").val("");
			J("#formFind").attr("action", "$!{context_path}/bsc/common/evalGrade/evalGradeList.vw?type=template").submit();
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalMethodId").val(ret.EVAL_METHOD_ID);
		J("#gradeItemId").val(ret.GRADE_ITEM_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGradeTab/memEvalGradeTabModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalMethodIds = "";
		var gradeItemIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalMethodIds += rowdata.EVAL_METHOD_ID + '|';gradeItemIds += rowdata.GRADE_ITEM_ID + '|';
				}
			});
		}
        
		J("#evalMethodIds").val(evalMethodIds);J("#gradeItemIds").val(gradeItemIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGradeTab/memEvalGradeTabProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/mem/base/memEvalGradeTab/memEvalGradeTabListExcel.vw?type=excel").submit();
		return false;
	}

//]]>
</script>

