#set($curr_url = $!{context_path} + "/bsc/tam/actualSearch/actualSearchList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/tam/actualSearch/actualSearchList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{METRIC_NM}ID', '$!{STRATEGY_NM}', 'CSF', '$!{METRIC_NM}', '주기', '단위', '담당자', '목표', '실적', '점수', '처리상태', '변경횟수'],
			colModel     :[
							{name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:150  ,align:'center' }, 
                            {name:'STRATEGY_NM'          ,index:'STRATEGY_NM'          ,width:165  ,align:'left'   },
                            {name:'CSF_NM'          	 ,index:'CSF_NM'          	   ,width:165  ,align:'left'   },
							{name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:180  ,align:'left'   }, 
                            {name:'EVAL_CYCLE_NM'        ,index:'EVAL_CYCLE_NM'        ,width:40   ,align:'center' }, 
                            {name:'UNIT_NM'              ,index:'UNIT_NM'              ,width:60   ,align:'center' }, 
                            {name:'INSERT_USER_NM'       ,index:'INSERT_USER_NM'       ,width:70   ,align:'center' }, 
                            {name:'TGT_VALUE'            ,index:'TGT_VALUE'            ,width:90   ,align:'center' }, 
                            {name:'VALUE'                ,index:'VALUE'                ,width:90   ,align:'center'  ,formatter:linkUpdate }, 
                            {name:'SCORE'                ,index:'SCORE'                ,width:90   ,align:'center' }, 
                            {name:'ACT_STATUS_NM'        ,index:'ACT_STATUS_NM'        ,width:80   ,align:'center' },
							{name:'CNT'			         ,index:'CNT'			       ,width:70   ,align:'center' ,formatter:linkHistory }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			##cmTemplate: {sortable:false},
			gridview     : true,
			caption:"실적조회"
		}).jqGrid('hideCol',"METRIC_ID").jqGrid('hideCol',"CNT").setGridWidth($!{jqGrid_r_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			var findYear = J("#findYear").val();
			var oldYear = J("#oldYear").val();
			
			if(findYear == oldYear) { 
    			goGridSearch();
    			return false;
			}
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/tam/actualSearch/actualSearchModify.vw?type=template").submit();
		});
        
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#metricId").val(ret.METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#mon").val(J("#findMon").val());
		J("#scDeptId").val(J("#findScDeptId").val());
		J("#scDeptNm").val(J("#findScDeptNm").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/tam/actualSearch/actualSearchModify.vw?type=template").submit();
	}
	
	/******************************************
	 * jqGrid 히스토리 페이지 링크
	 ******************************************/
	function linkHistory(cellvalue, options, rowObject) { 
		return '<a href=javascript:goHistory(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 실적 히스토리
	 ******************************************/
	function goHistory(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#metricId").val(ret.METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#mon").val(J("#findMon").val());
		J("#scDeptId").val(J("#findScDeptId").val());
		J("#scDeptNm").val(J("#findScDeptNm").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/tam/actualSearch/actualSearchHistoryList.vw?type=template").submit();
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#year").val(J("#findYear").val());
		J("#mon").val(J("#findMon").val());
		
		J("#formList").attr("action", "$!{context_path}/bsc/tam/actualSearch/actualSearchListExcel.vw?type=excel").submit();
		return false;
	}
	
	/******************************************
	 * 조직트리 선택
	 ******************************************/
	function goAction(code, name) {
		var scDeptNm = J(name).text();
		J("#findScDeptId").val(code);
		J("#findScDeptNm").val(scDeptNm);
		goGridSearch();
	}
	
	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/bsc/tam/actualSearch/actualSearchList_xml.vw?"+J("#formFind").serialize(), datatype:"json"}); 
		J("#list").trigger("reloadGrid");
	}

//]]>
</script>

<div id="Table">
	<div id="Table_blockContainer">
		<h1 class="none">실적조회</h1>
		<div class="tableTop">
			#parse("/WEB-INF/vl/common/template/tabs.vm")
			
    		<!-- search S -->
			<form id="formFind" name="formFind" method="post" action="$!{context_path}/bsc/tam/actualSearch/actualSearchList.vw?type=template">
