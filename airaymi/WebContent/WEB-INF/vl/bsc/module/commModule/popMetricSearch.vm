<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
	
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFindPop').serialize();
		
		jQuery("#kpiList").jqGrid({
			url          :"$!{searchMap.txt2html("context")}/bsc/module/commModule/metricList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : 320,
			colNames     :['$!{searchMap.txt2html("METRIC_NM")} 코드', '$!{searchMap.txt2html("SC_DEPT_NM")}', '$!{searchMap.txt2html("METRIC_NM")} 명'],
			colModel     :[
							{name:'METRIC_ID'  	,index:'METRIC_ID' 	,width:100   ,align:'center' ,sortable:false},
							{name:'SC_DEPT_NM'  ,index:'SC_DEPT_NM'	,width:250   ,align:'left'   ,sortable:false},
							{name:'METRIC_NM'   ,index:'METRIC_NM'  ,width:250   ,align:'left'   ,sortable:false 	,formatter:linkUpdate }
							],
			rowNum       : 100000,
			autowidth    : false,
			viewrecords  : true,
			loadonce     : false,
			cmTemplate	 : {sortable:false},
			cellEdit     : true,
			loadComplete : function() {
    							J("#findMetricNm").select();
                           },
			caption:"$!{METRIC_NM} 조회"
		}).jqGrid('hideCol',"METRIC_ID");
        
    	/******************************************
    	 * 검색 엔터키 이벤트
    	 ******************************************/
		J("#findMetricNm").keyup(function(e)  {
        	if(e.keyCode == 13) {
        		$("#formFindPop").submit();
        	}
        });
		
	});
	
	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:setMetricSet(' + options.rowId + ')> ' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * setting
	 ******************************************/
	function setMetricSet(rowId) {
		var ret = J("#kpiList").jqGrid('getRowData',rowId);
		var metricId = ret.METRIC_ID;
		var metricNm = ret.METRIC_NM;
		metricNm = J(metricNm).text();
		
		setKpiSet(metricId, metricNm);
	}

	/******************************************
	 * formFindPop submit
	 ******************************************/
	$("#formFindPop").submit(function() { 
		J("#kpiList").setGridParam({url:"$!{searchMap.txt2html("context")}/bsc/module/commModule/metricList_xml.vw?"+J("#formFindPop").serialize()}); 
		J("#kpiList").trigger("reloadGrid");
		return false;
	});

//]]>
</script>

<form id="formFindPop" name="formFindPop" method="post" action="$!{searchMap.txt2html("context")}/bsc/module/commModule/popMetricSearch.vw?type=template">
	<input type="hidden" id="findYear" name="findYear" value="$!{searchMap.txt2html("findYear")}" />
	<input type="hidden" id="findTypeId" name="findTypeId" value="$!{searchMap.txt2html("findTypeId")}" />
	
    <div style="width:520px;height:400px;">
    	<div id="popMetricArea">
    		<h1 class="none">$!{searchMap.txt2html("METRIC_NM")} 조회</h1>
    		<div style="margin-left:30px;margin-bottom:10px;"><span class="strong">$!{searchMap.txt2html("METRIC_NM")}명</span> : <input type="text" id="findMetricNm" name="findMetricNm" value="$!{searchMap.txt2html("findMetricNm")}" /></div>
    		<div id="userData" style="margin-left:15px;height:340px;width:450px;">
    			<!-- 데이터그리드 Start -->
    			<div class="blockGridListTable">
    				<table id="kpiList" summary="$!{searchMap.txt2html("METRIC_NM")}) 조회">
    					<caption class="none">$!{searchMap.txt2html("METRIC_NM")}) 조회</caption>
    					<thead><tr><th></th></tr></thead>
    					<tbody><tr><td></td></tr></tbody>
    				</table>
    				<div id="pager"></div>                    
    			</div>
    			<!--// 데이터그리드 End -->	
    		</div>
    	</div>
    </div>
</form>
