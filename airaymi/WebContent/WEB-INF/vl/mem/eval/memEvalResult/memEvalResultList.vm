#set($curr_url = $!{context_path} + "/mem/eval/memEvalResult/memEvalResultList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/mem/eval/memEvalResult/memEvalResultList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기준년도', '사원번호', '이름', '그룹ID', '부서명', '직급', '직위', '1차평가자<BR>($!CS_HTML.txt2html($evalRateInfo.EVAL_1_RATE)%)', '2차평가자<BR>($!CS_HTML.txt2html($evalRateInfo.EVAL_2_RATE)%)', '평균(원점수)', '조정점수', '총점'],
			colModel     :[
							{name:'YEAR'                ,index:'YEAR'                  ,width:0     ,align:'center' },
                            {name:'EMP_NO'              ,index:'EMP_NO'                ,width:80    ,align:'center' },
                            {name:'EMP_NM'              ,index:'EMP_NM'                ,width:80    ,align:'center' },
                            {name:'EVAL_GRP_ID'         ,index:'EVAL_GRP_ID'           ,width:0     ,align:'center' },
                            {name:'DEPT_NM'             ,index:'DEPT_NM'               ,width:200   ,align:'left' },
                            {name:'CAST_NM'             ,index:'CAST_NM'               ,width:60    ,align:'center' },
                            {name:'POS_NM'              ,index:'POS_NM'                ,width:80    ,align:'center' },
                            {name:'EVAL_1_SCORE'        ,index:'EVAL_1_SCORE'          ,width:80    ,align:'center' },
                            {name:'EVAL_2_SCORE'    	,index:'EVAL_2_SCORE'          ,width:80    ,align:'center' },
                            {name:'PEER_SCORE'    	    ,index:'PEER_SCORE'            ,width:80    ,align:'center' },
                            {name:'PEER_ADJUST_SCORE'   ,index:'PEER_ADJUST_SCORE'     ,width:80    ,align:'center' ,formatter:linkPopPeer},
                            {name:'TOT_SCORE'           ,index:'TOT_SCORE'             ,width:0     ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   : {sortable:false},
			loadComplete : function() {
					J("select[name=findCastTc] option:eq(1)").remove();
					J("select[name=findPosTc] option:eq(1)").remove();
				  },
			caption:"업무수행평가결과"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"EVAL_GRP_ID").setGridWidth($!{jqGrid_width});

		J("#list").jqGrid('setGroupHeaders', {
          useColSpanStyle: true,
          groupHeaders:[
			 {startColumnName: 'PEER_SCORE',		numberOfColumns: 2, titleText: '<em>동료평가<BR>($!CS_HTML.txt2html($evalRateInfo.PEER_RATE)%)</em>'}
		  ]
        });

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
		
    	/******************************************
    	 * 부서선택 팝업호출
    	 ******************************************/
    	J("#icSearch").fancybox();
    	
		/******************************************
         * 평가대상자관리 엑셀다운로드 버튼 클릭 이벤트
         ******************************************/
        J("#btnExcelDown").click(function() {
            ExcelDownload();
            return false;
        });
        
		/******************************************
		 * 확정버튼 이벤트
		 ******************************************/
		J("#btnConfirm").click(function() {
			comfirmChk(true);
		});
		/******************************************
		 * 확정취소버튼 이벤트
		 ******************************************/
		J("#btnCancel").click(function() {
			cancelChk(true);
		});
		/******************************************
		 * 점수계산버튼 이벤트
		 ******************************************/
		J("#btnCalculate").click(function() {
			calculateChk(true);
		});
		
		/******************************************
		 * 동표평가조정 평균 숫자만 입력
		 ******************************************/
		J("#allAverage").numeric({allow:"."});
		J("#allAverage").css("ime-mode", "disabled");
		
		/******************************************
		 * 동표평가조정 표준편차 숫자만 입력
		 ******************************************/
		J("#allStdDeviation").numeric({allow:"."});
		J("#allStdDeviation").css("ime-mode", "disabled");
		
	});

	/******************************************
     * 확정 필수입력 체크
     ******************************************/
    function comfirmChk() {
		J.showConfirmBox("평가결과를 확정하시겠습니까?", "confirmDo"); //confirmDo() 콜백함수 호출
    }
    
	/******************************************
     * 확정취소 필수입력 체크
     ******************************************/
    function cancelChk() {
		J.showConfirmBox("평가결과를 확정취소하시겠습니까?", "cancelDo"); //cancelDo() 콜백함수 호출
    }
    
	/******************************************
     * 점수계산 필수입력 체크
     ******************************************/
    function calculateChk() {
    	if(!J.checkLength("allAverage", "동료평가조정 평균", 1, 5)) {
			return;
		}
    	if(!J.checkLength("allStdDeviation", "동료평가조정 표준편차", 1, 5)) {
			return;
		}
		J.showConfirmBox("점수계산을 하시겠습니까?", "calculateDo"); //calculateDo() 콜백함수 호출
    }
    
	/******************************************
     * 확정처리
     ******************************************/
    function confirmDo() {
		var ids	= J("#list").jqGrid('getDataIDs');
		
		J("#mode").val("CONFIRM");
        J("#formList").attr("action", "$!{context_path}/mem/eval/memEvalResult/memEvalResultProcess.vw?type=template").submit();
                
        return false;
    }

	/******************************************
	 * 확정취소
	 ******************************************/
	function cancelDo() {
		J("#mode").val("CANCEL");
		J("#formList").attr("action", "$!{context_path}/mem/eval/memEvalResult/memEvalResultProcess.vw?type=template").submit();
	}
	
	/******************************************
     * 점수계산
     ******************************************/
    function calculateDo() {
		var ids	= J("#list").jqGrid('getDataIDs');
		
		J("#mode").val("CALCULATE");
        J("#formList").attr("action", "$!{context_path}/mem/eval/memEvalResult/memEvalResultProcess.vw?type=template").submit();
                
        return false;
    }

	/******************************************
     * 평가대상자관리 엑셀다운로드
     ******************************************/
    function ExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#castTcNm").val(J("#findCastTc > option:selected").text());
        J("#posTcNm").val(J("#findPosTc > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/mem/eval/memEvalResult/memEvalResultExcel.vw?type=excel").submit();
        return false;
    }

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkPopPeer(cellvalue, options, rowObject) {
		return '<a href=javascript:popPeer(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function popPeer(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);

		J("#year").val(J("#findYear").val());
		J("#empNo").val(ret.EMP_NO);
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
		
		var param = "&amp;findYear=" + J("#findYear").val()
		           + "&amp;findEmpNo=" + ret.EMP_NO
		           + "&amp;findEvalGrpId=" + ret.EVAL_GRP_ID;

		var url = "$!{context_path}/mem/eval/memEvalResult/popMemPeerResultList.vw?type=popup" + param;
		
		openWinByName(url,'popMemSelfEval','800','400','yes');
	}
	
	/******************************************
	 * 부서검색
	 ******************************************/
	function setDeptInfoPop(deptId, deptNm) {
		J("#findDeptCd").val(deptId);
		J("#findDeptNm").val(deptNm);
		J.fancybox.close();
	}

//]]>
</script>

