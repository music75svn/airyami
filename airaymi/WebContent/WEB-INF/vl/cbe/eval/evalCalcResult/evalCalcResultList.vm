	function chgYear(){
		J.ajax({
        	url      : "$!{context_path}/cbe/eval/evalExceDept/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});
		chgEvalDegree();
	}
	
	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalDegree(){
		J.ajax({
        	url      : "$!{context_path}/cbe/eval/evalRival/getEvalRival_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findRivalGrpId").empty();
				
				if( 0 < J(xmlDoc).find("data").length ){
    				J('<option/>').attr('value', '' ).text('전체').appendTo('#findRivalGrpId');
    				<!--J('<option/>').attr('value', 'NONE' ).text('미지정').appendTo('#findRivalGrpId');-->
					J(xmlDoc).find("data").each(function() {
    					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findRivalGrpId');
    				})
				}
			}
    	});
	}
	

