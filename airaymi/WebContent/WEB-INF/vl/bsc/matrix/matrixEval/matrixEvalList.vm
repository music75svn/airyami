		J("#formPopup").submit();
		J("#formPopup").attr("target","_self");
	}


	/******************************************
	 * 평가 저장
	 ******************************************/
	function saveDo() {
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/bsc/matrix/matrixEval/matrixEvalProcess.vw?type=template").submit();
	}

	/******************************************
	 * 평가 제출
	 ******************************************/
	function submitDo() {
		J("#mode").val("SUBMIT");
		J("#evalSubmitYn").val("Y");
		J("#formList").attr("action", "$!{searchMap.txt2html("context")}/bsc/matrix/matrixEval/matrixEvalProcess.vw?type=template").submit();
	}


