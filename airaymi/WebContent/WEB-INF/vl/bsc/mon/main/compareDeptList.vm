<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
		
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFindPop').serialize();
		
		jQuery("#mlist").jqGrid({
			url          :"$!{searchMap.txt2html("context")}/bsc/mon/main/compareDeptList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : 370,
			colNames     :['', '성과조직코드', '성과조직'],
			colModel     :[
							{name:'CHECK_YN'  	    ,index:'CHECK_YN'  	  ,width:25		 , formatter:linkUpdate  	,align:'center'},
							{name:'SC_DEPT_ID'  	,index:'SC_DEPT_ID'   ,width:100 	 ,align:'left' },
							{name:'SC_DEPT_NM'  	,index:'SC_DEPT_NM'   ,width:405 	 ,align:'left' , formatter:linkUpdate2 }
							],
			rowNum       : 100000,
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : false,
			cellEdit     : true,
			caption:"비교조직선택"
		}).jqGrid('hideCol',"SC_DEPT_ID");


		try {
			$("input", ".blockButton" ).button(); //버튼 ui 적용
		} catch(err) { }
		
		
	
    	/******************************************
    	 * 저장버튼 이벤트
    	 ******************************************/
    	J("#btnOk").click(function(e) {
    		var rowdata = "";
    		var scDeptIds = "";
    		var idx=0;
    		var ids = J("#mlist").jqGrid('getDataIDs');
    		var checkes = J(":input[name=check]");
    		J.each(checkes, function (index, value) {
    			if(J(value).attr("checked")=="checked"){
    				idx++;
            		rowdata = J("#mlist").getRowData(ids[index]);
            		scDeptIds += rowdata.SC_DEPT_ID + '|';
    			}
    		});
    		
    		if(idx==0){
    			scDeptIds = '$!{CS_LOGIN.getSc_dept_id()}'+ '|';
    		}
			
			
    		if(idx>4){
    			alert("최대 4개까지 저정 할 수 있습니다");
    		}else{
    			//변경이 있을 때만 저장이 되도록 처리
    			if(scDeptIds!=J("#checked").val()){
            		J("#stMode").val("ADD_DEPT");
            		J("#scDeptIds").val(scDeptIds);
            		J("#formFindPop").attr("action", "$!{searchMap.txt2html("contextPath")}/bsc/mon/main/mainProcess.vw?type=template").submit();
    			}else{
					//변경이 없을 때는 화면이 닫혀지도록 처리
					J.fancybox.close();
				}
    		}
			
    		return false;
    	});	
    	
    				
	});
	

	/******************************************
	 * jqGrid CHECKBOX
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		if(rowObject.CHECK_YN=='Y'){
			J("#checked").val(J("#checked").val()+rowObject.SC_DEPT_ID+ '|');
		}
	
		var checked="";
		if(cellvalue=="Y"){
			checked="checked";	
		}
		
        return '<input type="checkbox" name="check" '+ checked +'/>'
	}
	

	/******************************************
	 * jqGrid SC_DEPT_NM
	 ******************************************/
	function linkUpdate2(cellvalue, options, rowObject) { 
	
	
		var level = rowObject.LEVEL_ID;
		var pre="";
		
		for(var i=0; i<rowObject.LEVEL_ID; i++){
			pre=pre+"   "
		}

        return pre + cellvalue
		
		
	}
	

	
	
	
	
//]]>
</script>

<form id="formFindPop" name="formFindPop" method="post">
	<input type="hidden" name="year" value="$!{searchMap.txt2html("year")}" />
	<input type="hidden" id="scDeptIds" name="scDeptIds"  />
	<input type="hidden" name="userId" 	value="$!{CS_LOGIN.getUser_id()}" />
	<input type="hidden" id="stMode" 	name="stMode"  />
	<input type="hidden" id="checked" 	name="checked"  />
	
    <div  style="width:425px;height:460px">
    	<div id="">
    		<div id="userData">
    			<!-- 데이터그리드 Start -->
    			<div class="blockGridListTable">
					<table id="mlist" summary="비교조직선택 조회결과">
    					<caption class="none">비교조직선택 조회</caption>
    					<thead><tr><th></th></tr></thead>
    					<tbody><tr><td></td></tr></tbody>
    				</table>
    				<div id="pager"></div>                    
    			</div>
    			<!--// 데이터그리드 End -->	
    		</div>
    	</div>
    	<div class="blockButton_all">			
        	<div class="blockButton_l"></div>
        	<div class="blockButton">			
        		<ul>
        			<li><input type="button" id="btnOk" value="확인" /></li>
        		</ul>
        	</div>
        </div>
    </div>
</form>
