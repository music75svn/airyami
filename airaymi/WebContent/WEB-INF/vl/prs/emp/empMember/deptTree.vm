    							<div>$!{CS_HTML.txt2html($list2.DEPT_KOR_NM)}</div>
								<ul>
									#foreach($list3 in $deptTree)
                        				#if ($list3.DEPT_LEVL == "2")
                    						#if ($list3.UP_DEPT_CD == $list2.DEPT_CD)
                        						<li id="$!{CS_HTML.txt2html($list3.DEPT_CD)}">
                        							<div>$!{CS_HTML.txt2html($list3.DEPT_KOR_NM)}</div>
                        						</li>
                    						#end
                        				#end
                    				#end
                                </ul>
    						</li>
						#end
    				#end
				#end
                </ul>
			</li>
		#end
	#end
    </ul>
</div>


 