	/******************************************
	 * 년도별 평가구분 조회
	 ******************************************/
	function chgEvalGrp(){
		J.ajax({
        	url      : "$!{context_path}/prs/eval/evalGroup/getDegreeList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findEvalDegreeId").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalDegreeId');
				})
			}
    	});

		<!--평가단 초기화-->
		chgUser('aj');
	}

	/******************************************
	 * 평가단 조회
	 ******************************************/
	function chgUser(gubun){
		setTimeout(function(){
    		J.ajax({
            	url      : "$!{context_path}/prs/eval/evalStatus/getUserList_ajax.vw",﻿
            	cache    : false,
            	type     : "POST",
    			data     : J("#formFind").serialize(),
            	dataType : "html",
            	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            	success  : function (data) {
    				var xmlDoc = J.parseXML(data);
            		J("#findEvalUserId").empty();
    				J('<option/>').attr('value','').text("전체").appendTo('#findEvalUserId');
    				J(xmlDoc).find("data").each(function() {
    					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findEvalUserId');
    				})
    			}
        	});
		},500);
	}

	/******************************************
	 * jqGrid CHECKBOX
	 ******************************************/
	function linkChk(cellvalue, options, rowObject) {
         return '<input type="checkbox" name="checkMail" value="'+ rowObject.USER_NM +'|'+rowObject.EMAIL +'"/>'
	}

	/*****************************************
	 * 평가자 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.USER_IDX;
		var rowSpan = rowObject.USER_CNT;

		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}

		return result;
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#evalDegreeId").val(ret.EVAL_DEGREE_ID);
		J("#evalGrpId").val(ret.EVAL_GRP_ID);
		J("#evalUserId").val(ret.EVAL_USER_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalStatus/evalStatusModify.vw?type=template").submit();
	}

	function chkSubmitAll(){

		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var submitChk = true;

		for (var i = 1; i <= ids.length; i++) {
			rowdata = J("#list").getRowData(i);

			if(rowdata.EVAL_SUBMIT_YN != 'Y'){
				submitChk = false;
			}

		}

		if(!submitChk){

			J.showMsgBox("모든 평가자가 제출완료 해야 평가마감이 가능합니다.", null, null);
			return false;
		}

		J.showConfirmBox("평가를 마감 하시겠습니까?", "closeDo"); //closeDo() 콜백함수 호출

	}

	function chkConfirmYn(){

		if('$!{CS_HTML.txt2html($confirmYn)}' == 'Y'){
			J.showMsgBox("평가가 확정되어 평가마감을 취소할수 없습니다.", null, null);
			return false;
		}

		J.showConfirmBox("평가마감을 취소 하시겠습니까?", "closeCancelDo"); //closeCancelDo() 콜백함수 호출

	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function closeDo() {

		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#evalCloseYn").val('Y');
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalStatus/evalStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function closeCancelDo() {

		J("#mode").val("MOD");
		J("#year").val(J("#findYear").val());
		J("#evalDegreeId").val(J("#findEvalDegreeId").val());
		J("#evalCloseYn").val('N');
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalStatus/evalStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function mailDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var evalDegreeIds = "";
		var evalGrpIds = "";
		var evalUserIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					evalDegreeIds += rowdata.EVAL_DEGREE_ID + '|';evalGrpIds += rowdata.EVAL_GRP_ID + '|';evalUserIds += rowdata.EVAL_USER_ID + '|';
				}
			});
		}

		J("#evalDegreeIds").val(evalDegreeIds);J("#evalGrpIds").val(evalGrpIds);J("#evalUserIds").val(evalUserIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		//J("#formList").attr("action", "$!{context_path}/prs/eval/evalStatus/evalStatusProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#formList").attr("action", "$!{context_path}/prs/eval/evalStatus/evalStatusListExcel.vw?type=excel").submit();
		return false;
	}

	function sendMail(){
		var mailTarget = "";
		var idx = 0;
		var cnt = 0;
		var toMail = "";
		var toName = "";
		var toNameList = "";

		J("input[name='checkMail']:checked").each(function(index, value){
			var result = J(this).val().split("|");
			toMail += result[1] + "$!{EMAIL}|";

			toName += result[0] + "|";
			toNameList += result[0] + "<" + result[1] + '$!{EMAIL}' + ">;";
			idx++;
		});

		if( 0 < idx ){
			openWinByName('','pop','900','430','no');

			J("#toMail").val(toMail);
    		J("#toName").val(toName);
			J("#toNameList").val(toNameList);
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
		}else {
			J.showMsgBox("메일발송 할 평가자를 선택하여 주십시오.", null, null);
			return;
		}
	}

