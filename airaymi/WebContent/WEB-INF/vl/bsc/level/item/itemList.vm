#set($curr_url = $!{context_path} + "/bsc/level/item/itemList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;
	
	J(document).ready(function(){
    
		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();
		
		jQuery("#list").jqGrid({
			url          :"$!{context_path}/bsc/level/item/itemList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {   
    						page   : "page",
    						total  : "total",
    						root   : "rows", 
    						records: function(obj){return obj.length;},
    						repeatitems: false, 
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['$!{YEAR}', '평가항목그룹', '평가항목 ID', '평가항목', '정렬순서', 'CNT', 'INDEX'],
			colModel     :[
							{name:'YEAR'                 ,index:'YEAR'                 ,width:100   ,align:'center' ,sortable:false ,cellattr: attrSetting }, 
                            {name:'ITEM_GRP_NM'          ,index:'ITEM_GRP_NM'          ,width:100   ,align:'center' ,sortable:false ,cellattr: attrSetting },
                            {name:'ITEM_ID'              ,index:'ITEM_ID'              ,width:150   ,align:'center' ,sortable:false }, 
                            {name:'ITEM_NM'              ,index:'ITEM_NM'              ,width:150   ,align:'center' ,sortable:false ,formatter:linkUpdate }, 
							{name:'SORT_ORDER'           ,index:'SORT_ORDER'           ,width:70    ,align:'center' ,sortable:false },
							{name:'GROUP_CNT'            ,index:'GROUP_CNT'            ,width:80    ,align:'center' ,sortable:false },
							{name:'GROUP_INDEX'          ,index:'GROUP_INDEX'          ,width:80    ,align:'center' ,sortable:false }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false, 
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			caption:"평가항목 관리"
		}).jqGrid('hideCol',"YEAR").jqGrid('hideCol',"ITEM_ID").jqGrid('hideCol',"ITEM_GRP_NM").jqGrid('hideCol',"GROUP_CNT").jqGrid('hideCol',"GROUP_INDEX").setGridWidth($!{jqGrid_width});
        
		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});
        
		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			if('$!{evalCloseYn}' == 'Y'){
    			J.showMsgBox("평가마감 취소 평가제출 모두 취소 후 등록할 수 있습니다.", null, null); 
    			return;
    		}
    		
    		if('$!{evalSubmitYn}' == 'Y'){
    			J.showMsgBox("평가제출을 모두 취소 후 수정할 수 있습니다.", null, null); 
    			return;
    		}
			
			J("#year").val(J("#findYear").val());
			J("#mode").val("ADD");
			J("#formList").attr("action", "$!{context_path}/bsc/level/item/itemModify.vw?type=template").submit();
		});
        
		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});
		
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#findItemGrpId").val("");
			J("#formFind").attr("action", "$!{context_path}/bsc/level/itemGrp/itemGrpList.vw?type=template").submit();
		});
		
		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});
	});

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) { 
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}
	
	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		if('$!{evalCloseYn}' == 'Y'){
			J.showMsgBox("평가마감 취소 평가제출 모두 취소 후 등록할 수 있습니다.", null, null); 
			return;
		}
		
		if('$!{evalSubmitYn}' == 'Y'){
			J.showMsgBox("평가제출을 모두 취소 후 수정할 수 있습니다.", null, null); 
			return;
		}
			
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#itemId").val(ret.ITEM_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/bsc/level/item/itemModify.vw?type=template").submit();
	}
    
	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if('$!{evalCloseYn}' == 'Y'){
			J.showMsgBox("평가마감 취소 평가제출 모두 취소 후 삭제할 수 있습니다.", null, null); 
			return;
		}
		
		if('$!{evalSubmitYn}' == 'Y'){
			J.showMsgBox("평가제출을 모두 취소 후 삭제할 수 있습니다.", null, null); 
			return;
		}
			
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null); 
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}
    
	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var itemIds = "";
        
		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					itemIds += rowdata.ITEM_ID + '|';
				}
			});
		}
        
		J("#itemIds").val(itemIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/bsc/level/item/itemProcess.vw?type=template").submit();
		return false;
	}
	
	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		
		J("#formList").attr("action", "$!{context_path}/bsc/level/item/itemListExcel.vw?type=excel").submit();
		return false;
	}
	
	/*****************************************
	 * 데이터 Rowspan 설정
	 ******************************************/
	function attrSetting(rowId, val, rowObject, cm) {
		var result;
		var index = rowObject.GROUP_INDEX;
		var rowSpan = rowObject.GROUP_CNT;
		
		if(index == 1) {
			result = ' rowspan="' + rowSpan + '"';
		} else {
			result = ' style="display:none"';
		}
		
		return result;     
	} 
	

//]]>
</script>

