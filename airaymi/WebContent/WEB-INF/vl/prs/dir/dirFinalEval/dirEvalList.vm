    function saveChk() {
		var ids	= J("#list").jqGrid('getDataIDs');

		for (var i = 0; i < ids.length; i++) {
			var val = J("input[name='effScore']").eq(i).val();

			if (J("#mode").val() == "CON") {
    			if (val == "") {
    				alert("종합경영효율성 점수를 모두 입력해 주십시요.");
    				J("input[name='effScore']").eq(i).focus();
    				return false;
    			}
			}

			if ("" != val && isNaN(val)) {
				alert("점수를 확인해 주십시요.");
				J("input[name='effScore']").eq(i).focus();
				return false;
			}

			if(val > 15 || 0 > val) {
				alert("15 초과, 0 미만 점수는 줄 수 없습니다.");
				J("input[name='effScore']").eq(i).focus();
				return false;
			}
		}

		var msg = "";

		if (J("#mode").val() == "CON") {
			#if("N" == "$!{evalYn.DIR_EVAL_YN}")
				msg = "평가를 확정하시겠습니까?";
			#else
