    /******************************************
     * jqGrid 수정페이지 링크
     ******************************************/
    function linkUpdate(cellvalue, options, rowObject) { 
        return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
    }
    
    /******************************************
     * jqGrid 반려사유 링크
     ******************************************/
    function linkReturnReason(cellvalue, options, rowObject) {
        var returnValue = cellvalue;
        if(rowObject.ACT_STATUS_ID == "05")
            returnValue += '<img src="$!{img_path}/common/board/ic_search.gif" class="valign_middle" alt="반려사유선택" onClick="goReturnReason(\''+rowObject.YEAR+'\',\''+rowObject.MON+'\',\''+rowObject.EVAL_MEMB_EMPN+'\', \''+rowObject.EVAL_MEMB_EMPN_SEQ+'\')" />'
            
        return returnValue;
    }
    
    /******************************************
     * 그리드 ajax 조회 (주관부서 확인)
     ******************************************/
    function goGridSearch() {
        J("#list").setGridParam({url:"$!{context_path}/prs/mng/actualApprove/evalMngList_xml.vw?"+J("#formFind").serialize(), datatype:"json"}); 
        J("#list").trigger("reloadGrid");
    }
    
    /******************************************
     * 조직선택 클릭이벤트 (주관부서 확인)
     ******************************************/
    function goAction(deptCd, deptNm) {
        setDeptInfo(deptCd, deptNm);
    }
    
    /*****************************************************
     * 조직선택 설정 (주관부서 확인)
     *****************************************************/ 
    function setDeptInfo(deptCd, deptNm) {
        // 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
        // formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
        J("#formList input[name=findDeptCd]").val(deptCd);
        J("#formList input[name=findDeptNm]").val(J(deptNm).text());
        //var findCastTc = J("input:radio[name=findCastTc]:checked").val();
        J('input:radio[name=findCastTc]:input[value=""]').attr("checked", true);
            // formFind의 변수들 설정.
            J("#findDeptCd").val(deptCd);           // 조직Tree에서 선택한 조직코드를 설정.
            J("#findDeptNm").val(J(deptNm).text()); // 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
            goGridSearch();
    }
    
    /******************************************
     * 수정
     ******************************************/
    function goModify(rowId) {
        var ret = J("#list").jqGrid('getRowData',rowId);
        J("#evalMembEmpnSeq").val(ret.EVAL_MEMB_EMPN_SEQ);
        J("#evalMembEmpn").val(ret.EVAL_MEMB_EMPN);
        J("#managerUserId").val(ret.MANAGER_USER_ID);
        J("#year").val(ret.YEAR);
        J("#formList input[name*='findYear']").val(ret.YEAR);
        J("#formList input[name*='findMon']").val(ret.MON);
        J("#mode").val("LIST");
        J("#formList").attr("action", "$!{context_path}/prs/mng/actualApprove/actualApproveList.vw?type=template").submit();
    }
    
    /******************************************
     * 상태 및 기간 확인
     ******************************************/
    function isSubmit(rowdata) {
        var isSubmit = true;

        #if("$actInTerm.ACTUAL_YN" == "Y")
            if(rowdata.PLAN_STATUS_ID != "04"){
                J.showMsgBox("[" + rowdata.KOR_NM + "] 성과계획서가 최종확인 되지 않았습니다.<br/>최종확인 후 진행하여 주시기 바랍니다.", null, null);
                isSubmit = false;
            }
            /*
        #else
            J.showMsgBox("실적 제출 일정이 마감되었습니다.", null, null);
            isSubmit = false;
        #end
        */
            
        return isSubmit;
    }
    
    /******************************************
     * 반려사유 조회
     ******************************************/
    function goReturnReason(year, mon, evalMembEmpn, evalMembEmpnSeq){
        J("#anchor").attr("href","$!{context_path}/prs/mng/actualApprove/popReturnReason.vw?findYear="+year+"&amp;findMon="+mon+"&amp;evalMembEmpn="+evalMembEmpn+"&amp;evalMembEmpnSeq="+evalMembEmpnSeq);
        J("#anchor").click();
        return false;
    }
    /******************************************
     * 반려사유 선택
     ******************************************/
    function popReturnReason(){
        var ids = J("#list").jqGrid('getDataIDs');
        var evalMembEmpns = "";
        var evalMembEmpnSeqs = "";
        
        if(!J.gridSelectChk("list")){
            J.showMsgBox("반려 할 데이터를 선택하십시요.", null, null); 
        }else{
            for (var i = 0; i < ids.length; i++) {
                var rowdata = J("#list").jqGrid('getRowData',ids[i]);
                var isChecked = J("#list input:checkbox[name=jqg_list_" + ids[i] + "]").attr("checked");
                
                if(isChecked) {
                    if(!isSubmit(rowdata)) return false;
                                            
                    if("$!{findGubun}" == "01"){
                        if(rowdata.ACT_STATUS_ID != "02"){
                            J.showMsgBox("[" + rowdata.KOR_NM + "] 확인요청 상태가 아닙니다.<br/> 반려 할 수 없습니다.", null, null);
                            return false;
                        }
                    } else if("$!{findGubun}" == "02"){
                        if(rowdata.ACT_STATUS_ID != "03" && rowdata.ACT_STATUS_ID != "04"){
                            J.showMsgBox("[" + rowdata.KOR_NM + "] 주관부서 확인요청 상태가 아닙니다.<br/> 반려 할 수 없습니다.", null, null);
                            return false;
                        }
                    }
                    
                    if(evalMembEmpns == ""){
                        evalMembEmpns += rowdata.EVAL_MEMB_EMPN;
                        evalMembEmpnSeqs += rowdata.EVAL_MEMB_EMPN_SEQ;
                        year = rowdata.YEAR;
                        mon = rowdata.MON;
                    } else {
                        evalMembEmpns += "|" + rowdata.EVAL_MEMB_EMPN;
                        evalMembEmpnSeqs += "|" + rowdata.EVAL_MEMB_EMPN_SEQ;
                    }
                    
                }
            }
            
            J("#year").val(year);
            J("#mon").val(mon);
            J("#evalMembEmpns").val(evalMembEmpns);
            J("#evalMembEmpnSeqs").val(evalMembEmpnSeqs);
            J("#anchor").attr("href","$!{context_path}/prs/mng/actualApprove/popReturnReason.vw?findYear=$!{searchMap.txt2html("findYear")}&amp;evalMembEmpn="+J("#evalMembEmpn").val()+"&amp;evalMembEmpnSeq="+J("#evalMembEmpnSeq").val());
            J("#anchor").click();
        }
        
        return false;
    }
    
    /******************************************
     * 반려사유 처리
     ******************************************/
    function returnDo(){
         J("#mode").val("RETURN");
         J("#formList").attr("action", "$!{searchMap.txt2html("context")}/prs/mng/actualApprove/actualApproveProcess.vw?type=template").submit();
         return false;
    }
    
    /******************************************
     * 확인
     ******************************************/
    function goApprove(actStatusId) {
        var ids = J("#list").jqGrid('getDataIDs');
        var evalMembEmpns = "";
        var evalMembEmpnSeqs = "";
        var year = "";
        var mon = "";
        
        if(!J.gridSelectChk("list")){
            J.showMsgBox("확인할 데이터를 선택하십시요.", null, null); 
        }else{
            for (var i = 0; i < ids.length; i++) {
                var rowdata = J("#list").jqGrid('getRowData',ids[i]);
                var isChecked = J("#list input:checkbox[name=jqg_list_" + ids[i] + "]").attr("checked");
                if(isChecked) {
                    if(!isSubmit(rowdata)) return false;
                                            
                    if(actStatusId == "03"){
                        if(rowdata.ACT_STATUS_ID != "02"){
                            J.showMsgBox("[" + rowdata.KOR_NM + "] 확인요청 상태가 아닙니다.<br/> 확인 할 수 없습니다.", null, null);
                            return false;
                        }
                    } else if(actStatusId == "04"){
                        if(rowdata.ACT_STATUS_ID != "03"){
                            J.showMsgBox("[" + rowdata.KOR_NM + "] 주관부서 확인요청 상태가 아닙니다.<br/> 확인 할 수 없습니다.", null, null);
                            return false;
                        }
                    }
                    
                    if(evalMembEmpns == ""){
                        evalMembEmpns += rowdata.EVAL_MEMB_EMPN;
                        evalMembEmpnSeqs += rowdata.EVAL_MEMB_EMPN_SEQ;
                        year = rowdata.YEAR;
                        mon = rowdata.MON;
                    } else {
                        evalMembEmpns += "|" + rowdata.EVAL_MEMB_EMPN;
                        evalMembEmpnSeqs += "|" + rowdata.EVAL_MEMB_EMPN_SEQ;
                    }
                    
                }
            }
            
            J("#year").val(year);
            J("#mon").val(mon);
            J("#evalMembEmpns").val(evalMembEmpns);
            J("#evalMembEmpnSeqs").val(evalMembEmpnSeqs);
            J("#actStatusId").val(actStatusId);
            J.showConfirmBox("확인 하시겠습니까?", "approveDo"); //approveDo() 콜백함수 호출
        }
        
        return false;
    }
    
    /******************************************
     * 확인
     ******************************************/
    function approveDo() {
        J("#mode").val("APC");
        J("#formList").attr("action", "$!{context_path}/prs/mng/actualApprove/actualApproveProcess.vw?type=template").submit();
        
        return false;
    }
	
	 /******************************************
     * 엑셀다운로드
     ******************************************/
    function excelDownload(){
		var ids = J("#list").jqGrid('getDataIDs');
		if(ids.length ==0){
			J.showMsgBox("엑셀로 변환할 내용이 없습니다.");
			return false;
		}
		J("#yearNm").val(J("#findYear > option:selected").text() +" "+J("#findMon > option:selected").text());
		J("#actStatusNm").val(J("#findActStatusId > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/mng/actualApprove/evalMngListExcel.vw?type=excel").submit();
        return false;
    }

