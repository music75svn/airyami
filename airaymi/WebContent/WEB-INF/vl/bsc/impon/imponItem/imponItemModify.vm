								#end
							</td>
    					</tr>
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="itemNm">평가항목</label></th>
							<td><input type="text" id="itemNm" name="itemNm" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.ITEM_NM)}' maxlength="50"/></td>
						</tr>
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="itemGbnId">평가항목 구분</label></th>
							<td>
								<select id="itemGbnId" name="itemGbnId" class="select w210" >
									$!CS_CODE.getCodeOption("149", $detail.ITEM_GBN_ID, $!{searchMap.txt2html("year")})
								</select>
							</td>
						</tr>
						<tr>
							<th scope="row"><span class="txt_red">(*)</span> <label for="actRptInsertUserId">실적보고서 담당자</label></th>
							<td>
								<input type="hidden" id="actRptInsertUserId" name="actRptInsertUserId" value="$!{CS_HTML.txt2html($detail.ACT_RPT_INSERT_USER_ID)}" />
								<input type="text" id="actRptInsertUserNm" name="actRptInsertUserNm" class="inputbox w200 disable" value='$!{CS_HTML.txt2html($detail.ACT_RPT_INSERT_USER_NM)}' maxlength="20" readonly="readonly"/>
