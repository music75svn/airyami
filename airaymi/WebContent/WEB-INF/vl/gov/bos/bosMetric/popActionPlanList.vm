</script>    
</head>
<body>
<form id="form1" name="form1" method="post" action="$!{context_path}/gov/bos/bosMetric/bosMetricProcess.vw?type=template">
    <input type="hidden" 	id="mode"		    name="mode"		      value="$!{searchMap.txt2html("mode")}" />
	<input type="hidden"	id="year"           name="year"           value="$!{searchMap.txt2html("year")}" />
	<input type="hidden" 	id="index" 	 		name="index" />
	<input type="hidden" 	id="evalMethodId" 	name="evalMethodId" 	value="$!{CS_HTML.txt2html($detail.EVAL_METHOD_ID)}" />
	<input type="hidden" 	id="mainMetricYn" 	name="mainMetricYn" 	value="$!{CS_HTML.txt2html($detail.MAIN_METRIC_YN)}" />
	<input type="hidden" 	id="gbnId" 			name="gbnId" 			value="$!{CS_HTML.txt2html($detail.GBN_ID)}" />
	
    $!{searchMap.makeHiddenFind()}
	
    <div>
    	<div id="Table_blockContainer_w800">
			<div class="clear h10"></div>
			
			<div>
			<table width="100%" border="0" cellspacing="0" cellpadding="0">
    		<tr>
    			<td>
    				<table width="100%" border="0" cellpadding="0" cellspacing="0" class="popup_tit_c">
    				<tr>
    					<td class="popup_tit_l"></td>
    					<td class="popup_tit_r">기관장평가 비계량지표 실행계획 조회</td>
    				</tr>
    				</table>
    			</td>
    		</tr>
    		</table>	
			</div>
			
			<div class="clear h10"></div>
			
    		<div class="blockDetail">
    			<table summary="기관장평가 비계량지표 실행계획  ">
					<caption class="none">기관장평가 비계량지표 실행계획 </caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="35%" />
						<col width="15%" />
						<col width="35%" />
    				</colgroup>
    				<tbody>
						<tr>
							<th scope="row">$!{YEAR}</th>
							<td scope="row">$!{searchMap.txt2html("findYear")} 년</td>
							<th scope="row">평가지표</th>
							<td>$!{CS_HTML.txt2html($detail.BOSS_METRIC_NM)}</td>
						</tr>
						<tr>
							<th scope="row">세부평가내용</th>
							<td colspan="3">
                                <textarea id="detailEvalItem" name="detailEvalItem" class="tabletext" title="세부평가내용" cols="" rows="4" readonly="readonly">$!{CS_HTML.txt2html($itemDetail.DETAIL_EVAL_NM)}</textarea>
							</td>
						</tr>
						<tr>
							<th scope="row">평가착안사항</th>
							<td colspan="3">
                                <textarea id="detailEvalConcept" name="detailEvalConcept" class="tabletext" title="평가착안사항" cols="" rows="4" readonly="readonly">$!{CS_HTML.txt2html($conceptDetail.CONCEPT_NM)}</textarea>
							</td>
						</tr>
					</tbody>
    			</table>
    		</div>
			
			<div id="unmeasureBlankSpace" class="clear h10 "></div>
			
			<div id="actDetailArea" class="blockDetail2 ">
				<table id="actDetailTB" summary="실행계획">
    				<caption class="none">실행계획 </caption>
    				<colgroup>
						<col width="100%" />
					</colgroup>
    				<tbody>
    					<tr>
    						<th scope="row">실행계획</th>
						</tr>
						#foreach ($actionPlan in $actionPlanList)
						<tr>
                            <td style="text-align:left">
                    			<textarea class="tabletext" title="실행계획" cols="" rows="7" readonly="readonly">$!{CS_HTML.txt2html($actionPlan.PLAN_NM)}</textarea>
                    	    </td>
                        </tr>
                        #end
					</tbody>
    			</table>
    		</div>
			
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnClose"   value="닫기" /></li>
    			</ul>
    		</div>	
    	</div>
		<a id="anchor"></a>
    	<div class="clear"></div>
    </div>
</form>

</body>
