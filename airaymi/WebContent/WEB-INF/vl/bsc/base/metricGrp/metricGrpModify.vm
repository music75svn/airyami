        	if(J("input[name=actMon]:checked").length==0){
				J.showMsgBox("측정주기를 선택해 주십시요", null, null);
    			return;
			}
        }

        if( !LengthCheck(J("#kpiPurpose").val(), "지표정의", 0, 3000 ) ) {
            J("#kpiPurpose").focus();
            return;
        }

		if(J("#typeId").val() == "01"){ //정량지표일 경우
			if(!J.checkLength("actCalType", "실적산식", 1, 500)) {
    			return;
    		}

			//실적산식 입력 체크
