			<input type="hidden" id="useYnNm"        name="useYnNm" />
			<input type="hidden" id="yearNm"         name="yearNm" />
			$!{searchMap.makeHiddenFind()}

			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="$!{ORG_EVAL_ITEM_NM}관리 조회결과">
							<caption class="none">$!{ORG_EVAL_ITEM_NM}관리 조회결과</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all">
						<div class="blockButton" style="float:left; text-align:left; width:500px;">
							<input type="button" id="lastYear" value="전년도데이터복사" />
						</div>
						<div class="blockButton">
							<ul>
								<li><input id="btnExcelDown" type="button" align="middle" value="엑셀변환" alt="엑셀다운로드" /></li>
								<li><input type="button" id="btnInsert" value="신규" /></li>
								<li><input type="submit" id="btnDelete" value="삭제" /></li>
							</ul>
