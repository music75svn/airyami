	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear > option:selected").text());
		J("#cycleNm").val(J("#findCycle > option:selected").text());
		J("#endYnNm").val(J("#findEndYn > option:selected").text());
		J("#formFind").attr("action", "$!{context_path}/bsc/eval/imponEvalStatus/imponEvalStatusListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 메일발송 팝업
	 ******************************************/
	function mailWrite(){
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var mailTo = "";
		var names = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					if(rowdata.EMAIL != '' && rowdata.EMAIL != null) {
    					mailTo += rowdata.EMAIL + ";";
    					names += J(rowdata.NAME_HAN).text() + "<" + rowdata.EMAIL + ">;";
					}
				}
			});
		}

		if(!J.gridSelectChk("list")){
			J.showMsgBox("메일을 전송할 대상자를 선택하십시요", null, null);
		} else {
			window.open('', 'pop', 'width=900, height=380, top=50, left=100, scrollbars=yes, resizble=no');

			J("#user").val(names);
    		J("#mail").val(mailTo);
    		J("#mailSendGbn").val("03");	// 비계량미평가자 메일발송문구 공통코드 : 03
    		J("#mailForm").attr("target", "pop");
    		J("#mailForm").attr("action", "$!{context_path}/bsc/module/commModule/popSendMail.vw?type=popup").submit();
    	}
	}

