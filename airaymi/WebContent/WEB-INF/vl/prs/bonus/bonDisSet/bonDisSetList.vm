			$!{searchMap.makeHiddenFind()}
			<div id="splitterBox">
				<div>
					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable">
						<table id="list" summary="파견직 조회결과">
							<caption class="none">파견직설정 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
						</table>
						<div id="pager"></div>
					</div>
					<!--// 데이터그리드 End -->
					<div class="blockButton_all floatLeft">
						<div class="blockButton" style="float:left; text-align:left; width:155px;">
							<input id="btnExcelDown" type="button" align="middle" value="파견직 엑셀다운로드", alt="파견직 엑셀다운로드" />
						</div>
					#if($!{CS_HTML.txt2html($detail.CONFIRM_DT)} == "")	
						<div class="blockButton" style="float:left; text-align:left; width:145px;">
							<input id="btnBonDisSetUpload" type="button" align="middle" value="파견직 엑셀업로드" alt="파견직 업로드" />
						</div>
					#end	
					</div>
					#if($!{CS_HTML.txt2html($detail.CONFIRM_DT)} == "")
					<span id="closeAlert" class="txt_red2">※엑셀업로드시 입사일은 숫자로만 입력하세요.(ex. 20130620)</span>
					#else
					<span id="closeAlert" class="txt_red2">$!{searchMap.txt2html("findYear")}년도 성과급 확정을 $!{CS_HTML.txt2html($detail.CONFIRM_DT)}에 진행하셨습니다.</span>
					#end
				</div>
			</div>
		</form>

	</div>
	<div class="clear"></div>

</div>
