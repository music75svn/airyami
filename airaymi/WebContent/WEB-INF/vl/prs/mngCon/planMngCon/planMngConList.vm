         ******************************************/
        J("#btnInsert").click(function() {
			validationChk("new");
			return false;
        });
        
        /******************************************
         * 확인요청 클릭 이벤트
         ******************************************/
        J("#btnaAprove").click(function() {
			validationChk("approve");
            return false;
