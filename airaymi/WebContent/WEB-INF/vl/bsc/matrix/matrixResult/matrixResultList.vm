                            {name:'POOL_GUBUN_NM'        ,index:'POOL_GUBUN_NM'        ,width:170   ,align:'center' },
                            {name:'METRIC_GRP_NM'        ,index:'METRIC_GRP_NM'        ,width:250   ,align:'left'   },
