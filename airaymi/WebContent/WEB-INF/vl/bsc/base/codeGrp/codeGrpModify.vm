<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){
    
		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/base/codeGrp/codeGrpList.vw?type=template").submit();
		});
        
		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});
        
		/******************************************
		 * 비고 byte 체크
		 ******************************************/
		J("#content").checkbyte({
			indicator:J("#indicator"),
			limit:1000
		});
		J("#content").trigger("keyup");
        
		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});
		
		/******************************************
		 * 연도별 관리여부가 "Y"이면서 하위코드가
		 * 존재할 경우 연도별 관리여부 수정못함
		 ******************************************/
		#if($!{detail.YEAR_YN} == "Y" && $!{detail.SUB_CODE_CNT} != "0")
        	J("#yearYn1").attr("disabled", true);
			J("#yearYn2").attr("disabled", true);
        #end

		/******************************************
		 * 사용중이면서 하위코드 존재시 삭제못함
		 ******************************************/
		#if($!{CS_HTML.txt2html($detail.DELETE_DT)} == "Y" && $!{CS_HTML.txt2html($detail.SUB_CODE_CNT)} != "0")
			J("#deleteDt").attr("disabled", true);
        #end
		
	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
        if(!SelEmptyCheck( J("#codeDefId").val(), "코드부여구분" ) ) {
            J("#codeDefId").focus();
            return;            
        }
    
		if(!J.checkLength("codeGrpNm", "코드그룹", 1, 75)) {
			return;
		}
        
		if (J("input[name='yearYn']:checked").val() == undefined) {
			J.showMsgBox("연도별 관리여부를 선택해 주십시요", null, "yearYn1");
			return;
		}
         
		if((J("#mode").val() == "MOD" ) && (J("#oldYearYn").val() == "N") && (J("input[name='yearYn']:checked").val() == "Y")) {
			J.showMsgBox("연도별 관리시 각 연도별로 코드가 자동생성됩니다", null, null);
			J("#mode").val("MOD2");
		}
        
        if( !LengthCheck( J("#content").val(), "비고", 0, 1000 ) ) {
            J("#content").focus();
            return; 
        }
 
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}
    
	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#yearYn1").attr("disabled", false);
		J("#yearYn2").attr("disabled", false);
		J("#deleteDt").attr("disabled", false);
		J("#form1").attr("action", "$!{context_path}/bsc/base/codeGrp/codeGrpProcess.vw?type=template").submit();
	}

//]]>
</script>

<form id="form1" name="form1" method="post" action="$!{context_path}/bsc/base/codeGrp/codeGrpProcess.vw?type=template">
	<input type="hidden" id="mode"		name="mode"			value="$!{searchMap.txt2html("mode")}" />
	<input type="hidden" id="oldYearYn"	name="oldYearYn"	value="$!{CS_HTML.txt2html($detail.YEAR_YN)}" />
    $!{searchMap.makeHiddenFind()}
	
    <div id="Table">
    	<div id="Table_blockContainer">
    		<div class="tableTop">
    			#parse("/WEB-INF/vl/common/template/tabs.vm")
    			<div class="clear"></div>
    		</div>
			<div class="tableTop">
                <!-- 검색 테이블 Start -->
                <div class="searchBox">
                <div><div><div>   
                    <table summary="검색조건">        
                        <caption class="none">검색조건</caption>
                        <thead><tr><th></th><th></th></tr></thead>
                        <tbody>
                            <tr>
								<td class="searchBox_tit w250">공통코드명 <span class="searchBar">$!{searchMap.txt2html("findCodeGrpNm")}</span></td>
							</tr>
                        </tbody>
                    </table>
                </div></div></div>
                </div>
                <!--// 검색 테이블 End -->
                <div class="clear"></div>
            </div>
    		<div class="blockDetail">
    			<table summary="공통코드 등록">
    				<caption class="none">공통코드 등록</caption>
    				<colgroup>
    					<col width="15%" />
    					<col width="85%" />
    				</colgroup>
    				<tbody>
    					<tr>
    						<th scope="row"><label for="codeGrpId">코드그룹ID</label></th>
    						<td>
								#if($!{searchMap.txt2html("mode")} == "MOD")
									$!{CS_HTML.txt2html($detail.CODE_GRP_ID)}
									<input type="hidden" id="codeGrpId" name="codeGrpId" class="inputbox w100" value="$!{CS_HTML.txt2html($detail.CODE_GRP_ID)}" maxlength="3" readonly="readonly" />
								#else
									<input type="hidden" id="codeGrpId" name="codeGrpId" class="inputbox w100" maxlength="3" />
                                    ※ 저장시 자동으로 부여됩니다.
								#end
							</td>
    					</tr>
    					<tr>
    						<th scope="row"><span class="txt_red">(*)</span> <label for="codeDefId">코드부여구분</label></th>
    						<td>
    							<select id="codeDefId" name="codeDefId" class="select w100" >
    								$!CS_CODE.getCodeOption("014", $detail.CODE_DEF_ID, $!{searchMap.txt2html("year")})
    							</select>
    						</td>
    					</tr>
    					<tr>
    						<th scope="row"><span class="txt_red">(*)</span> <label for="codeGrpNm">코드그룹</label></th>
    						<td><input type="text" id="codeGrpNm" name="codeGrpNm" class="inputbox w200" value='$!{CS_HTML.txt2html($detail.CODE_GRP_NM)}' maxlength="20" /></td>
    					</tr>
    					<tr>
    						<th scope="row"><span class="txt_red">(*)</span> <label for="yearYn1">연도별관리여부 </label></th>
    						<td>
								<input type="radio" id="yearYn1" name="yearYn" value="Y" $!{CS_HTML.getChecked($!{CS_HTML.txt2html($detail.YEAR_YN, 'N')}, 'Y')} /> 예 &nbsp;&nbsp;&nbsp;
    							<input type="radio" id="yearYn2" name="yearYn" value="N" $!{CS_HTML.getChecked($!{CS_HTML.txt2html($detail.YEAR_YN, 'N')}, 'N')} /> 아니오
								
								#if($!{detail.YEAR_YN} == "Y" && $!{detail.SUB_CODE_CNT} != "0")
								(※ 하위 코드가 있는 경우 연도별 관리를 변경할 수 없습니다)
								#end
    						</td>
    					</tr>
    					<tr>
    						<th scope="row"><label for="deleteDt">사용여부</label></th>
    						<td>
    							<select id="deleteDt" name="deleteDt" class="select w100" >
    								$!CS_CODE.getCodeOption("011", $detail.DELETE_DT)
    							</select>
    						</td>
    					</tr>
    					<tr>
    						<th scope="row"><label for="content">비고</label></th>
    						<td>
    							<textarea id="content" name="content" class="tabletext" title="비고" cols="" rows="10">$!{CS_HTML.txt2html($detail.CONTENT)}</textarea>
								<span id="indicator">0</span>/1000byte
    						</td>
    					</tr>
    				</tbody>
    			</table>
    		</div>
    		<div class="blockButton"> 
    			<ul>
    				<li><input type="button" id="btnBack"   value="돌아가기" /></li>
    				<li><input type="submit" id="btnInsert" value="저장" /></li>
    			</ul>
    		</div>	
    	</div>
    	<div class="clear"></div>
    </div>
</form>
