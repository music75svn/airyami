	/******************************************
	 * 경영목표변경시 전략과제 변경
	 ******************************************/
	
	function chgStratSubject(){
	
		J.ajax({
        	url      : "$!{context_path}/man/mon/metricDetail/stratSubjectList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findStratSubjectId").empty();
				
				J('<option/>').attr('value','').text("전체").appendTo('#findStratSubjectId');
				
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findStratSubjectId');
				})
				
				<!--세부목표도 초기화-->
				chgCsf();
        	}
    	});
	}
	
	/******************************************
	 * 전략과제 변경시 CSF 변경
	 ******************************************/
	
	function chgCsf(){
	
		J.ajax({
		
			url      : "$!{context_path}/man/mon/metricDetail/csfList_ajax.vw",
			cache    : false,
			type     : "POST",
			data	 : J("#formFind").serialize(),
			dataType : "html",
			contentType: "application/x-www-form-urlencoded; charset=UTF-8",
			success  : function(data){
							var xmlDoc = J.parseXML(data);
							J("#findCsfId").empty();
							
							J('<option/>').attr('value','').text("전체").appendTo('#findCsfId');
							
							J(xmlDoc).find("data").each(function() {
								J('<option/>').attr('value',J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findCsfId');
							})
					   }
		});
	
	}

