#set($curr_url = $!{context_path} + "/gov/bos/metricMapping/metricMappingList.vw")
<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 데이터 그리드 출력
		 ******************************************/
		var str = J('#formFind').serialize();

		jQuery("#list").jqGrid({
			url          :"$!{context_path}/gov/bos/metricMapping/metricMappingList_xml.vw" + "?" + str,
			mtype        :"POST",
			datatype     :"json",
			jsonReader   : {
    						page   : "page",
    						total  : "total",
    						root   : "rows",
    						records: function(obj){return obj.length;},
    						repeatitems: false,
    						id     : "id"
    				       },
			height       : $!{jqGrid_height},
			width        : $!{jqGrid_width},
			colNames     :['기관장 지표 코드', '내평지표코드', '내부평가지표', '담당부서', '평가유형', '연계유형', '담당자'],
			colModel     :[
							{name:'BOSS_METRIC_ID'       ,index:'BOSS_METRIC_ID'       ,width:150   ,align:'center' },
                            {name:'METRIC_ID'            ,index:'METRIC_ID'            ,width:150   ,align:'center' },
                            {name:'METRIC_NM'            ,index:'METRIC_NM'            ,width:150   ,align:'left'   },
                            {name:'SC_DEPT_NM'           ,index:'SC_DEPT_NM'           ,width:150   ,align:'center' },
                            {name:'TYPE_NM'              ,index:'TYPE_NM'              ,width:150   ,align:'center' },
                            {name:'METRIC_PROPERTY_NM'   ,index:'METRIC_PROPERTY_NM'   ,width:150   ,align:'center' },
                            {name:'INSERT_USER_NM'       ,index:'INSERT_USER_NM'       ,width:150   ,align:'center' }
							],
			rowNum       : $!{jqGrid_rownum},
			autowidth    : false,
			viewrecords  : true,
			loadonce     : true,
			multiselect  : true,
			cellEdit     : true,
			gridview     : true,
			##cmTemplate   :{sortable:false},
			caption:"기관장지표매핑"
		}).jqGrid('hideCol',"BOSS_METRIC_ID").jqGrid('hideCol',"METRIC_ID").setGridWidth($!{jqGrid_width});

		/******************************************
		 * 조회
		 ******************************************/
		J("#formFind").submit(function(event) {
			//submit 하기전 작업추가
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnInsert").click(function() {
			subMetricPop();
			//J("#year").val(J("#findYear").val());
			//J("#mode").val("ADD");
			//J("#formList").attr("action", "$!{context_path}/gov/bos/metricMapping/metricMappingModify.vw?type=template").submit();
		});

		/******************************************
		 * 삭제 버튼 클릭 이벤트
		 ******************************************/
		J("#btnDelete").click(function() {
			goDelete();
			return false;
		});

		/******************************************
		 * 엑셀다운로드 버튼 클릭 이벤트
		 ******************************************/
		J("#btnExcelDown").click(function() {
			excelDownload();
			return false;
		});

		/******************************************
		 * 년도별 경평지표 change 이벤트
		 ******************************************/
		$('#findYear').change(function(){
			chgBossMetric();
		});

		/******************************************
		 * fancy Box 팝업호출
		 ******************************************/
		J("#anchor").fancybox();            //지표검색 팝업
	});

	/******************************************
	 * 년도별 기관장지표 조회
	 ******************************************/
	function chgBossMetric(){

		J.ajax({
        	url      : "$!{context_path}/gov/bos/metricMapping/getBossMetricList_ajax.vw",﻿
        	cache    : false,
        	type     : "POST",
			data     : J("#formFind").serialize(),
        	dataType : "html",
        	contentType: "application/x-www-form-urlencoded; charset=UTF-8",
        	success  : function (data) {
				var xmlDoc = J.parseXML(data);
        		J("#findBossMetric").empty();
				J(xmlDoc).find("data").each(function() {
					J('<option/>').attr('value', J(this).find("value").text()).text(J(this).find("text").text()).appendTo('#findBossMetric');
				})
			}
    	});
	}

	/******************************************
	 * jqGrid 수정페이지 링크
	 ******************************************/
	function linkUpdate(cellvalue, options, rowObject) {
		return '<a href=javascript:goModify(' + options.rowId + ')>' + cellvalue + '<//a>';
	}

	/******************************************
	 * 수정
	 ******************************************/
	function goModify(rowId) {
		var ret = J("#list").jqGrid('getRowData',rowId);
		J("#bossMetricId").val(ret.BOSS_METRIC_ID);
		J("#metricId").val(ret.METRIC_ID);
		J("#year").val(J("#findYear").val());
		J("#mode").val("MOD");
		J("#formList").attr("action", "$!{context_path}/gov/bos/metricMapping/metricMappingModify.vw?type=template").submit();
	}

	/******************************************
	 * 저장
	 ******************************************/
	function goInsert() {
		J.showConfirmBox("저장하시겠습니까?", "insertDo"); //insertDo() 콜백함수 호출
	}

	/******************************************
	 * 저장처리
	 ******************************************/
	function insertDo() {
		J("#year").val(J("#findYear").val());
		J("#bossMetricId").val(J("#findBossMetric").val());
		J("#mode").val("ADD");

		J("#formList").attr("action", "$!{context_path}/gov/bos/metricMapping/metricMappingProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function goDelete() {
		if(!J.gridSelectChk("list")){
			J.showMsgBox("삭제할 데이터를 선택하십시요", null, null);
		} else {
			J.showConfirmBox("삭제하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출
		}
	}

	/******************************************
	 * 삭제처리
	 ******************************************/
	function deleteDo() {
		var id = J("#list").getGridParam('selarrrow');
		var ids = J("#list").jqGrid('getDataIDs');
		var rowdata = "";
		var bossMetricIds = "";
		var metricIds = "";

		for (var i = 0; i < ids.length; i++) {
			J.each(id, function (index, value) {
				if (value == ids[i]) {
					rowdata = J("#list").getRowData(ids[i]);
					bossMetricIds += rowdata.BOSS_METRIC_ID + '|';metricIds += rowdata.METRIC_ID + '|';
				}
			});
		}

		J("#bossMetricIds").val(bossMetricIds);J("#metricIds").val(metricIds);
		J("#mode").val("DEL");
		J("#year").val(J("#findYear").val());
		J("#formList").attr("action", "$!{context_path}/gov/bos/metricMapping/metricMappingProcess.vw?type=template").submit();
		return false;
	}

	/******************************************
	 * 엑셀다운로드
	 ******************************************/
	function excelDownload(){
		J("#yearNm").val(J("#findYear option:selected").text());
		J("#bossMetricNm").val(J("#findBossMetric option:selected").text());

		J("#year").val(J("#findYear").val());
		J("#bossMetricId").val(J("#findBossMetric").val());

		J("#formList").attr("action", "$!{context_path}/gov/bos/metricMapping/metricMappingListExcel.vw?type=excel").submit();
		return false;
	}

	/******************************************
	 * 지표조회
	 ******************************************/
	function subMetricPop() {
		if(J("#findBossMetric").val() == "" || J("#findBossMetric").val() == null) {
			J.showMsgBox("기관장 $!{METRIC_NM}를 선택해 주십시요", null, null);
			return;
		}

		J("#anchor").attr("href","$!{context_path}/gov/bos/metricMapping/metricMappingModify.vw?findYear=$!{searchMap.txt2html("findYear")}");
		J("#anchor").click();
	}

//]]>
</script>

