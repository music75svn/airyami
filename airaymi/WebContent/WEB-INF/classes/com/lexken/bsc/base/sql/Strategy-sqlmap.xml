<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="bsc.base.strategy">

	<!--
	==================================================================   
	  # 설명	: typeAlias 선언
	  #	기능	: SETTING
	  #	TABLE	: BSC_STRATEGY
	==================================================================
	-->
	<typeAlias alias="hashMap" 			type="java.util.HashMap" />
	 

	<!--
	==================================================================   
	  # 설명	: 전략방향 목록 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_STRATEGY
	==================================================================
	-->
	<select id="getList" parameterClass="hashMap" resultClass="hashMap">
		SELECT A.YEAR,
               A.STRATEGY_ID,
               A.STRATEGY_NM,
               A.SORT_ORDER,
               (SELECT COUNT(*) 
                FROM BSC_DEPT_STRATEGY
              WHERE YEAR= #findYear#
                  AND STRATEGY_ID=A.STRATEGY_ID) CNT    
          FROM BSC_STRATEGY A
         WHERE A.YEAR=#findYear#
           <isEqual prepend="AND" property="findUseYn" compareValue="Y">
       	   A.DELETE_DT IS NULL
           </isEqual>
           <isNotEqual prepend="AND" property="findUseYn" compareValue="Y">
           A.DELETE_DT IS NOT NULL
           </isNotEqual>
         ORDER BY A.SORT_ORDER
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 전략방향 상세 보기
	  #	기능	: SELECT
	  #	TABLE	: BSC_STRATEGY
	==================================================================
	-->
	<select id="getDetail" parameterClass="hashMap" resultClass="hashMap">
		SELECT YEAR                  
			 , STRATEGY_ID          
			 , STRATEGY_NM          
			 , SORT_ORDER         
			 , CASE WHEN DELETE_DT IS NULL THEN 'Y' ELSE 'N' END AS USE_YN           
		  FROM BSC_STRATEGY 
		 WHERE YEAR = #year#
		   AND STRATEGY_ID = #strategyId#	      
	</select>
	
	<!--
	==================================================================   
	  # 설명	: 전략방향 등록
	  #	기능	: INSERT
	  #	TABLE	: BSC_STRATEGY
	==================================================================
	-->	
	<insert id="insertData" parameterClass="hashMap">
		<selectKey resultClass="java.lang.String" keyProperty="SEQ" >
			SELECT 'S'||LPAD(NVL(MAX(SUBSTR(STRATEGY_ID,2,6)),0)+1,6,'0') SEQ FROM BSC_STRATEGY WHERE YEAR=#year#
		</selectKey>
		INSERT INTO BSC_STRATEGY ( 
			   YEAR
			 , STRATEGY_ID
			 , STRATEGY_NM
			 , SORT_ORDER
			 , CREATE_DT
			 , DELETE_DT
			 ) VALUES ( 
			   #year#
			 , #SEQ#
			 , #strategyNm#
			 , #sortOrder#
			 , SYSDATE
			 ,
			 <isEqual property="useYn" compareValue="Y">
		     NULL
		     </isEqual>
		     <isNotEqual property="useYn" compareValue="Y">
		     SYSDATE
		     </isNotEqual>
			 )
	</insert>	
	
	<!--
	==================================================================   
	  # 설명	: 전략방향 수정
	  #	기능	: UPDATE
	  #	TABLE	: BSC_STRATEGY
	==================================================================
	-->	
	<update id="updateData" parameterClass="hashMap">
		UPDATE BSC_STRATEGY 
		   SET STRATEGY_NM            = #strategyNm# 
			 , SORT_ORDER             = #sortOrder# 
			 , MODIFY_DT              = SYSDATE 
			 ,
			 <isEqual property="useYn" compareValue="Y">
	         DELETE_DT = NULL
	         </isEqual>
	         <isNotEqual property="useYn" compareValue="Y">
	         DELETE_DT = SYSDATE
	         </isNotEqual>
		 WHERE YEAR = #year#
		   AND STRATEGY_ID = #strategyId#		
	</update>	
	

	<!--
	==================================================================   
	  # 설명	: 전략방향 삭제
	  #	기능	: UPDATE
	  #	TABLE	: BSC_STRATEGY
	==================================================================
	-->	
	<update id="deleteData" parameterClass="hashMap">
		UPDATE BSC_STRATEGY 
		   SET DELETE_DT = SYSDATE 
		 WHERE YEAR = #year#
		   AND STRATEGY_ID = #strategyId#
	</update>
	
	
</sqlMap>


