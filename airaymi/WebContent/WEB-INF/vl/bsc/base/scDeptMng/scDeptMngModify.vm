	/*****************************************************
	 * Left 조직트리에서 조직선택 설정
	 *****************************************************/
	function setDeptInfo(scDeptId, scDeptNm) {
		var childDeptCnt = "";

		// 조직트리에서 조직 선택 시  form1의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// form1이 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#form1 input[name=findScDeptId]").val(scDeptId);
		J("#form1 input[name=findScDeptNm]").val(J(scDeptNm).text());
		J("#form1 input[name=findLevelId]").val(J(scDeptNm).attr("class").split("^")[0]);

		childDeptCnt = J(scDeptNm).attr("class").split("^")[4];	// 선택한 조직의 하위 조직 개수
		if(childDeptCnt > 0) {
			// 하위조직이 있으면 하위조직 list를 조회함.
			// formFind의 변수들 설정.
			J("#findScDeptId").val(scDeptId);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findScDeptNm").val(J(scDeptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			J("#findLevelId").val(J(scDeptNm).attr("class").split("^")[0]);	// 조직Tree에서 선택한 조직 levelId를 설정.(0레벨일경우 리스트 조회 시 선택조직도 리스트에 포함시키기 위함)

			J("#formFind").attr("action", "$!{context_path}/bsc/base/scDeptMng/scDeptMngList.vw?type=template").submit();
		} else {
			// 하위조직이 없으면 수정페이지로 이동함.
			J("#scDeptId").val(scDeptId);				// 조직Tree에서 선택한 조직코드를 설정.
			J("#mode").val("MOD");

			J("#form1").attr("action", "$!{context_path}/bsc/base/scDeptMng/scDeptMngModify.vw?type=template").submit();
		}
	}

