	/******************************************
     * 사원번호
     ******************************************/
    function linkEmpn(cellvalue, options, rowObject) {
    	var reStr = "";
    	reStr += '<input type="hidden" name="empn" value="' + cellvalue + '" class="wp50" maxlength="6" />';
    	return reStr;
    }

	/******************************************
     * 직위
     ******************************************/
    function linkPosTc(cellvalue, options, rowObject) {
    	var reStr = "";
    	reStr += '<input type="hidden" name="posTc" value="' + cellvalue + '" class="wp50" maxlength="5" />';
    	return reStr;
    }
    
	/******************************************
     * 상반기 리더십평가 점수
     ******************************************/
    function fncScore1st(cellvalue, options, rowObject) {
    	var reStr = "";
    	reStr += '<input type="text" name="leadershipScore1st" value="' + cellvalue + '" class="inputbox textRight wp50" maxlength="6" onBlur="scoreAvg();"/>';
    	return reStr;
    }
	
	/******************************************
     * 하반기 리더십평가 점수
     ******************************************/
    function fncScore2nd(cellvalue, options, rowObject) {
    	var reStr = "";
    	reStr += '<input type="text" name="leadershipScore2nd" value="' + cellvalue + '" class="inputbox textRight wp50" maxlength="6" onBlur="scoreAvg();"/>';
