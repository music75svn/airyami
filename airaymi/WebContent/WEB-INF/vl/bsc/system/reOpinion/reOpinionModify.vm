<script type="text/javascript" language="javascript" >
//<![CDATA[

	var J = jQuery;

	J(document).ready(function(){

		/******************************************
		 * 취소버튼 (돌아가기)
		 ******************************************/
		J("#btnBack").click(function() {
			J("#form1").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionList.vw?type=template").submit();
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnInsert").click(function(e) {
			e.preventDefault();
			saveChk();
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnReplyInsert").click(function(e) {
			e.preventDefault();
			saveReplyChk();
		});

		/******************************************
		 * 저장버튼 이벤트
		 ******************************************/
		J("#btnReplyCancel").click(function(e) {
			J("#mon").show();
    		J("#btnReplyDelete").show();
    		J("#btnReplySave").show();

    		J("#save").hide();
    		J("#btnReplyInsert").hide();
    		J("#btnReplyCancel").hide();
		});

		/******************************************
		 * 수정화면 이벤트
		 ******************************************/
		J("#btnReplySave").click(function(e) {

			J("#mon").hide();
    		J("#btnReplyDelete").hide();
    		J("#btnReplySave").hide();

    		J("#save").show();
    		J("#btnReplyInsert").show();
			J("#btnReplyCancel").show();

			J("#replyContents").checkbyte({
    			indicator:J("#replyContentsInd"),
    			limit:3000
    		});
    		J("#replyContentsInd").trigger("keyup");

		});

		/******************************************
		 * 삭제버튼 이벤트
		 ******************************************/
		J("#btnDelete").click(function(e) {
			e.preventDefault();
			deleteChk();
		});

		/******************************************
		 * 삭제버튼 이벤트
		 ******************************************/
		J("#btnReplyDelete").click(function(e) {
			e.preventDefault();
			deleteReplyChk();
		});

		/******************************************
		 * 저장버튼 이중 클릭 방지
		 ******************************************/
		J("form").submit(function(){
			J("#btnInsert").unbind();
		});

		/******************************************
		 * 신규 등록
		 ******************************************/
		J("#btnPopInsert").click(function() {
			J("#mode").val("MOD");

			var mode = "MOD";
			var year = J("#year").val();
			var cbId = J("#cbId").val();

			var param = "&amp;year=" + year + "&amp;mode=" + mode + "&amp;cbId=" + cbId;
			var url = "$!{context_path}/bsc/system/reOpinion/popOpinionModify.vw?type=popup" + param;
			openWinByName(url,'popBosMetricDefine','640','420','yes');

		});

		J("#mon").show();
		J("#btnReplyDelete").show();
		J("#btnReplySave").show();

		J("#save").hide();
		J("#btnReplyInsert").hide();
		J("#btnReplyCancel").hide();

		//로그인 아이디와 글쓴이 아이디가 동일하지 않으면 삭제, 수정 버튼 숨김처리
		var sabun = J("#sabun").val();

		if(sabun != $!{CS_HTML.txt2html($detail.SABUN)} ){
    		J("#btnDelete").hide();
    		J("#btnPopInsert").hide();
		}

		if($CS_LOGIN.chkAuthGrp("01") || $CS_LOGIN.chkAuthGrp("60")){
			J("#mon").show();
    		J("#btnReplyDelete").show();
    		J("#btnReplySave").show();

    		J("#save").hide();
    		J("#btnReplyInsert").hide();
    		J("#btnReplyCancel").hide();
		}else{
			J("#mon").show();
    		J("#btnReplyDelete").hide();
    		J("#btnReplySave").hide();

    		J("#save").hide();
    		J("#btnReplyInsert").hide();
    		J("#btnReplyCancel").hide();
		}

	});

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveChk() {
		J.showConfirmBox("저장하시겠습니까?", "saveDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 필수입력 체크
	 ******************************************/
	function saveReplyChk() {
        if(!J.checkLength("replyContents", "내용", 1, 3000)) {
            return;
        }

        var fileChk = true;

        //첨부파일 확장자 체크
        J(":file", "#form1").each(function(index, item) {
            var fileFullName = J("input[name=" + item.name + "]").val();
            var src = getFileExtension(fileFullName);

            if (!((src.toLowerCase() == "xls") || (src.toLowerCase() == "xlsx") || (src.toLowerCase() == "ppt") || (src.toLowerCase() == "pptx")||
                  (src.toLowerCase() == "doc") || (src.toLowerCase() == "docx") || (src.toLowerCase() == "hwp") || (src.toLowerCase() == "pdf") ||
                  (src.toLowerCase() == "zip") || (src.toLowerCase() == "txt")  || (src.toLowerCase() == "gif") || (src.toLowerCase() == "jpg") ||
                  (src.toLowerCase() == "png") || (src.toLowerCase() == "png")
                )) {

                fileChk = false;
            }
        });

        if(fileChk == false) {
            J.showMsgBox("허용되지 않는 파일형식입니다<br/>허용되는 파일형식 : <br/>xls, xlsx, ppt, pptx, doc, docx, hwp <br/> pdf, zip, txt, gif, jpg, png, jpeg", null, null);
            return;
        }

		J.showConfirmBox("저장하시겠습니까?", "saveReplyDo"); //saveDo() 콜백함수 호출
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveDo() {
		J("#form1").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionProcess.vw?type=template").submit();
	}

	/******************************************
	 * 저장
	 ******************************************/
	function saveReplyDo() {
		J("#mode").val("READD");
		J("#cbGbn").val("02");
		J("#form1").attr("enctype", "multipart/form-data");
		J("#form1").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionProcess.vw?type=template").submit();
	}

	function deleteChk(){

		if(J("#replyId").val() != null && J("#replyId").val() != ''){
			J.showMsgBox("답변이 완료 되어 삭제 하실수 없습니다.", null, null);
			return;
		}

		J.showConfirmBox("삭제 하시겠습니까?", "deleteDo"); //deleteDo() 콜백함수 호출

	}

	function deleteReplyChk(){

		J.showConfirmBox("삭제 하시겠습니까?", "deleteReplyDo"); //deleteDo() 콜백함수 호출

	}

	/******************************************
	 * 삭제
	 ******************************************/
	function deleteDo() {
		J("#mode").val("DEL");
		J("#cbGbn").val("01");
		J("#form1").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionProcess.vw?type=template").submit();
	}

	/******************************************
	 * 삭제
	 ******************************************/
	function deleteReplyDo() {
		J("#mode").val("REDEL");
		J("#cbGbn").val("02");
		J("#form1").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionProcess.vw?type=template").submit();
	}

	function parentRefresh(){
		setTimeout(function(){

		J("#form1").attr("action", "$!{context_path}/bsc/system/reOpinion/reOpinionModify.vw?type=template").submit();

		},500);
	}

	/******************************************
	 * 파일추가
	 ******************************************/
	var fileIndex = 0;

	function fileAttachAdd() {
		J("#fileAttach").append("<li id=\"fileRow" + fileIndex + "\"><input type=\"file\" id=\"file\" name=\"file" + fileIndex + "\" class=\"input\" size=\"60\" /> <input type=\"button\" value=\"삭제\" onclick=\"deleteRow(" + fileIndex + ")\" class=\"input\" size=\"70\"></li>");
		fileIndex++;
	}

	function deleteRow(fileIndex)	{
    	J("#fileRow" + fileIndex).remove();
    }

//]]>
</script>

