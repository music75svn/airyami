			$!{searchMap.makeHiddenFind()}

			<div id="splitterBox">
				<div>
					<!-- 조직트리 Start -->
					<div class="blockGridTreeTable">
						#parse("/WEB-INF/vl/bsc/module/commModule/commonTree.vm")
					</div>

					<!-- 데이터그리드 Start -->
					<div class="blockGridListTable floatRight">
						<table id="list" summary="$!{SC_DEPT_NM}관리 조회결과">
							<caption class="none">$!{SC_DEPT_NM}관리 조회</caption>
							<thead><tr><th></th></tr></thead>
							<tbody><tr><td></td></tr></tbody>
