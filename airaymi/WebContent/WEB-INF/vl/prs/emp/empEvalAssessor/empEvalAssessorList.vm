	 * 조직선택 클릭이벤트
	 ******************************************/
	function goAction(deptCd, deptNm) {
		setDeptInfo(deptCd, deptNm);
	}
	
	/*****************************************************
	 * 조직선택 설정
	 *****************************************************/ 
	function setDeptInfo(deptCd, deptNm) {
		// 조직트리에서 조직 선택 시 Ajax로 데이터그리드만 다시 조회하므로 formList의 searchMap.makeHiddenFind() 가 다시 생성되지 않음.
		// formList가 submit되는 경우(신규, 수정, 삭제) 조직트리에서 선택된 조직의 정보를  유지시켜주기 위해 설정.
		J("#formList input[name=findDeptCd]").val(deptCd);
		J("#formList input[name=findDeptNm]").val(J(deptNm).text());
		J("#formList input[name=findSearchCodeId]").val(J(deptCd));
		
	
			// formFind의 변수들 설정.
			J("#findDeptCd").val(deptCd);			// 조직Tree에서 선택한 조직코드를 설정.
			J("#findDeptNm").val(J(deptNm).text());	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			J("#findSearchCodeId").val(deptCd);	// 조직Tree에서 선택한 조직명을 설정.(신규 등록시 사용함.)
			
			goGridSearch();
			
	}
	
	/******************************************
	 * 그리드 ajax 조회
	 ******************************************/
	function goGridSearch() {
		J("#list").setGridParam({url:"$!{context_path}/prs/emp/empEvalAssessor/empEvalAssessorList_xml.vw?"+J("#formFind").serialize(), datatype:"json"}); 
		J("#list").trigger("reloadGrid");
	}
	
	/******************************************
     * 평가자관리 엑셀다운로드
     ******************************************/
    function ExcelDownload(){
        J("#yearNm").val(J("#findYear > option:selected").text());
        J("#formList").attr("action", "$!{context_path}/prs/emp/empEvalAssessor/empEvalAssessorExcel.vw?type=excel").submit();
        return false;
    }
    
    /******************************************
	 * 평가자관리 평가자 가져오기
	 ******************************************/
	function getAssessor() {
		J.showConfirmBox("평가자 가져오기를 하시면 기존에 입력한 데이터가 삭제됩니다. 진행하시겠습니까?", "getAssessorInfo"); //getAssessorInfo() 콜백함수 호출
	}
	
	function getAssessorInfo() {
		J("#mode").val("GET");
		J("#formList").attr("action", "$!{context_path}/prs/emp/empEvalAssessor/empEvalAssessorProcess.vw?type=template").submit();
	}
	
	/******************************************
     * 필수입력 체크
     ******************************************/
    function saveChk() {
    
    	var ids	= J("#list").jqGrid('getDataIDs');
		
		/*
		for (var i = 0; i < ids.length; i++) {
			if (J("input[name='seconEmpns']").eq(i).val() != "") {
				if((J("input[name='firstKornms']").eq(i).val() == "")) {
